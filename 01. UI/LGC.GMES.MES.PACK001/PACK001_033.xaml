                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn        Header = "모델"          Binding = "{Binding PRJ_NAME}"         HorizontalAlignment="Center" Width="Auto" IsReadOnly="True"/>
