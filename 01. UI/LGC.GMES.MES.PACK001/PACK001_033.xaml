                                    <c1:DataGridTextColumn        Header = "FACTORY"              Binding = "{Binding SHOPNAME}"              HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "AREAID"            Binding = "{Binding AREAID}"                HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "EQSGID"            Binding = "{Binding EQSGID}"                HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "PCSGID"            Binding = "{Binding PCSGID}"                HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "공정군"            Binding = "{Binding PCSGNAME}"              HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "PROCID"            Binding = "{Binding PROCID}"                HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
