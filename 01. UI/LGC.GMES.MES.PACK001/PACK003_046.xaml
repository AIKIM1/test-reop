                    <Border Grid.Row="4" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Background="#FFC2CFF5"/>
                    <TextBlock Grid.Row="4" Grid.Column="0" Text="W/H Setting" VerticalAlignment="Center" Margin="10 0 0 0"/>
                    <Border x:Name="brWhSet" Grid.Row="5" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Margin="0 2 0 0" Background="#FFC2CFF5">
                        <Grid Margin="2" x:Name="grWhSet">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Text="W/H Name" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 2 0"/>
                            <TextBlock Grid.Row="1" Text="Factory Image" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 2 0"/>
                            <TextBlock Grid.Row="2" Text="Factory Opacity" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 2 0"/>
                            <TextBlock Grid.Row="3" Text="Limit Process" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 2 0" Visibility="Collapsed"/>
                            <TextBlock Grid.Row="4" Text="Line Keep Days" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 2 0" Visibility="Collapsed"/>
                            <TextBlock Grid.Row="5" Text="Intransit Rack" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 2 0"/>
                            <TextBlock Grid.Row="6" Text="Use Y/N" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 2 0"/>
                            <TextBlock Grid.Row="7" Text="Start Auto Stock" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 2 0"/>

                            <TextBox x:Name="txtSetWhId"  Grid.Row="0" Grid.Column="1" Visibility="Collapsed"/>
                            <TextBox x:Name="txtSetWhName"  Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" IsReadOnly="True" Style="{StaticResource SearchCondition_TextBoxStyle}"/>
                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBox x:Name="txtSetFileName"  VerticalAlignment="Center" IsReadOnly="True" Style="{StaticResource SearchCondition_TextBoxStyle}" TextWrapping="Wrap"/>
                                <Button x:Name="btnImg"    Content="Image"  MinWidth="50"    Style="{DynamicResource Content_MainButtonSpecialStyle}" Height="22" HorizontalAlignment="Right" Margin="5,0,2,0" Click="btnImg_Click" IsEnabled="False"/>
                            </Grid>
                            <c1:C1ComboBox x:Name="cboSetWhOpacity"   Grid.Row="2" Grid.Column="1" MinWidth="100"  Style="{StaticResource C1ComboBoxStyle}" Width="auto" DisplayMemberPath="RACK_OPACITY"  SelectedValuePath="RACK_OPACITY"    HorizontalAlignment="Left" SelectedValueChanged="cboSetWhOpacity_SelectedValueChanged"/>
                            <c1:C1ComboBox x:Name="cboSetWhProcId"    Grid.Row="3" Grid.Column="1" MinWidth="100"  Style="{StaticResource C1ComboBoxStyle}" Width="auto" DisplayMemberPath="CBO_NAME"      SelectedValuePath="CBO_CODE"    HorizontalAlignment="Left" SelectedValueChanged="cboSetWhProcId_SelectedValueChanged" Visibility="Collapsed"/>
                            <TextBox x:Name="txtSetWHKeepDays"        Grid.Row="4" Grid.Column="1" VerticalAlignment="Center" MinWidth="100" VerticalContentAlignment="Center" Style="{StaticResource SearchCondition_TextBoxStyle}" Margin="3" PreviewKeyDown="txt_PreviewKeyDown" TextChanged="txtSetWHKeepDays_TextChanged" GotFocus="txt_GotFocus" Tag="N" Visibility="Collapsed"/>
                            <c1:C1ComboBox x:Name="cboSetWhMoveRack"  Grid.Row="5" Grid.Column="1" MinWidth="100"  Style="{StaticResource C1ComboBoxStyle}" Width="auto" DisplayMemberPath="RACK_NAME"     SelectedValuePath="RACK_ID"    HorizontalAlignment="Left" SelectedValueChanged="cboSetWhMoveRack_SelectedValueChanged"/>
                            <c1:C1ComboBox x:Name="cboSetWhUse"       Grid.Row="6" Grid.Column="1" MinWidth="100"  Style="{StaticResource C1ComboBoxStyle}" Width="auto" DisplayMemberPath="CBO_NAME"     SelectedValuePath="CBO_CODE"    HorizontalAlignment="Left" SelectedValueChanged="cboSetWhUse_SelectedValueChanged"/>
                            <c1:C1ComboBox x:Name="cboSetWhAutoStock"  Grid.Row="7" Grid.Column="1" MinWidth="100"  Style="{StaticResource C1ComboBoxStyle}" Width="auto" DisplayMemberPath="CBO_NAME"     SelectedValuePath="CBO_CODE"    HorizontalAlignment="Left" SelectedValueChanged="cboSetWhAutoStock_SelectedValueChanged"/>
                            <StackPanel Grid.Row="8" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 2 0 0" >                         
                                <Button x:Name="btnSaveWhSet"    Content="{Binding ConverterParameter=SAVE, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  MinWidth="50"   
                                        Style="{DynamicResource Content_MainButtonSpecialStyle}" Height="22" HorizontalAlignment="Right" Margin="2,0,2,0" Click="btnSaveWhSet_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                    <Border Grid.Row="7" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Background="#FFD0EAF3"/>
                    <TextBlock Grid.Row="7" Grid.Column="0" Text="add out line W/H" VerticalAlignment="Center" Margin="10 0 0 0"/>
                    <Border x:Name="brWhInfo" Grid.Row="8" Grid.Column="0" BorderThickness="1" BorderBrush="Black" Margin="0 2 0 0" Background="#FFD0EAF3">
                        <Grid Margin="2" x:Name="grWhAdd">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="30"/> 
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Text="W/H" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0 0 2 0"/>
                            <c1:C1ComboBox x:Name="cboWhAdd"  Grid.Row="0" Grid.Column="1" MinWidth="200"  Style="{StaticResource C1ComboBoxStyle}"  DisplayMemberPath="CBO_NAME"    SelectedValuePath="CBO_CODE"    HorizontalAlignment="Left"/>
                            <StackPanel Grid.Row="1" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0 2 0 0">
                                <Button x:Name="btnInitWhInfo" Content="{Binding ConverterParameter=REFRESH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  MinWidth="50"    Style="{DynamicResource Content_MainButtonSpecialStyle}" Height="22" HorizontalAlignment="Right" Margin="2,0,2,0" Click="btnInitWhInfo_Click" />
                                <Button x:Name="btnSaveWhInfo" Content="{Binding ConverterParameter=SAVE, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  MinWidth="50"    Style="{DynamicResource Content_MainButtonSpecialStyle}" Height="22" HorizontalAlignment="Right" Margin="2,0,2,0" Click="btnSaveWhInfo_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
                <!--WH/RACK Setting End-->
            </Grid>
            <!-- content end -->
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
