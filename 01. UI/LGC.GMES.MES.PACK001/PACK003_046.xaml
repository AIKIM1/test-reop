<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" x:Class="LGC.GMES.MES.PACK001.PACK003_046"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:Controls="clr-namespace:LGC.GMES.MES.PACK001.Controls"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="1480" Loaded="UserControl_Loaded" Unloaded="UserControl_UnLoaded">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary> 
    </UserControl.Resources>
    
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Out Line Stock Mgmt.">
            <!-- content start -->
            <Grid x:Name="Content">
                <Grid.RowDefinitions> 
                    <RowDefinition Height="40" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="0" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="20*" />
                </Grid.ColumnDefinitions>

                <Border Grid.Row="0" Grid.Column="0"  BorderThickness="1,0,1,1" Style="{StaticResource Condition_BorderStyle}" />
                <Grid Grid.Row="0" Grid.Column="0" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <TextBlock     Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='WH_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <c1:C1ComboBox Grid.Row="0" Grid.Column="2" x:Name="cboWhId" DisplayMemberPath="WH_NAME" SelectedValuePath="WH_ID" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="True"   Tag="OuLine W/H" SelectedValueChanged="cboWhId_SelectedValueChanged" />

                        <StackPanel Grid.Row="0"  Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Left" Visibility="Collapsed" >
                            <TextBlock Text="{Binding ConverterParameter='자동조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Center" />
                        </StackPanel>
                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="4" x:Name="cboAutoSearch" Style="{StaticResource C1ComboBoxStyle}" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboAutoSearch_SelectedValueChanged" Visibility="Collapsed"/>
                        
                        <Border Grid.Row="0" Grid.Column="6">
                            <TextBlock  Text="{Binding ConverterParameter='SCAN', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15,0,9,0"/>
                        </Border> 
                        <StackPanel Grid.Row="0" Grid.Column="7" Orientation="Horizontal">
                            <TextBox x:Name="txtLotId"   Style="{StaticResource TextBoxWaterMarkStyle}"   CharacterCasing="Upper" MinWidth="350"  VerticalAlignment="Center" Tag="BOXID,PALLETID,GROUPID,LOTID,CSTID,MaterialID,DMCID,MultiLine" TextWrapping="Wrap" 
                                     KeyDown="txtLotId_KeyDown" PreviewKeyDown="txtLotId_PreviewKeyDown"/>
                            <Button x:Name="btnBlinkOff"  Content="{Binding ConverterParameter=Off, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  Height="23"  Background="#FFECE6E6"  Margin="0,0,4,0" Click="btnBlinkOff_Click"/>
                        </StackPanel>

                        <TextBlock     Grid.Row="0" Grid.Column="9" x:Name="tbHold" Text="{Binding ConverterParameter='HOLD 여부', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Collapsed"/>
                        <c1:C1ComboBox Grid.Row="0" Grid.Column="10" x:Name="cboHold" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="True" MaxWidth="200" Tag="Inquiry including Hold status" Visibility="Collapsed"/>

                        <Button Grid.Column="12" x:Name="btnExcel"    Content="{Binding ConverterParameter=Excel,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelExportStyle}"  Height="29" Margin="0,0,4,0" Click="btnExcel_Click"/>
                        <Button Grid.Column="13" x:Name="btnUpload"   Content="{Binding ConverterParameter=UPLOAD,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}"        Margin="0,0,4,0" Click="btnUpload_Click" Visibility="Collapsed" />
                        <Button Grid.Column="14" x:Name="btnSet"      Content="{Binding ConverterParameter=SET_MODE, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}"        Margin="0,0,4,0" Click="btnSet_Click"/>
                        <Button Grid.Column="15" x:Name="btnInit"     Content="{Binding ConverterParameter=REFRESH,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}"        Margin="0,0,4,0" Click="btnInit_Click"/>
                        <Button Grid.Column="16" x:Name="btnSearch"   Content="{Binding ConverterParameter=SEARCH,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Click="btnSearch_Click"/>
                    </Grid>
                </Grid>

                <Border Grid.Row="1" Grid.Column="0"  BorderThickness="1,0,1,1" BorderBrush="#FF9F9F9F" Style="{StaticResource BorderSubTitleStyle}" />
                <Grid  x:Name="grbMain" Grid.Row="1" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto" x:Name="grCol1" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" x:Name="grSetLotList" Visibility="Collapsed">
                        <Grid.RowDefinitions> 
                            <RowDefinition Height="40" />
                            <RowDefinition Height="*" /> 
                        </Grid.RowDefinitions>
                        <TextBox x:Name="txtFilter" Grid.Column="1" Style="{StaticResource TextBoxWaterMarkStyle}" KeyDown="txtFilter_KeyDown" HorizontalAlignment="Stretch" Tag="Filter"  />
                        <Border Grid.Row="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <c1:C1DataGrid Grid.Row="1"  
                                       x:Name="grdSetRackList"
                                       HeadersVisibility="Column"
                                       SelectionMode="SingleCell"                                       
                                       VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" ctrlLib:DataGridExtension.IsAlternatingRow="False" CanUserFilter="False" CanUserSort="False" FontSize="14" FontWeight="Bold"
                                       FrozenColumnCount="1"
                                       BeginningEdit="grdSetRackList_BeginningEdit"  MouseDoubleClick="grdSetRackList_MouseDoubleClick">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridCheckBoxColumn Binding="{Binding CHK, Mode=TwoWay}" Width="Auto" HorizontalAlignment="Center" CanUserSort="False">
                                    <c1:DataGridCheckBoxColumn.Header>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <CheckBox x:Name="chkHeaderAllList" Margin="0" Width="19" Checked="chkHeaderAllList_Checked" Unchecked="chkHeaderAllList_Unchecked"/>
                                        </StackPanel>
                                    </c1:DataGridCheckBoxColumn.Header>
                                </c1:DataGridCheckBoxColumn>
                                <c1:DataGridTextColumn Width="Auto"    Header="Rack ID"           Binding="{Binding RACK_ID}"         HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn Width="Auto"    Header="RACK_NAME"         Binding="{Binding RACK_NAME}"       HorizontalAlignment="Left" IsReadOnly="True"/>
                                <c1:DataGridTextColumn Width="Auto"    Header="LINE"              Binding="{Binding LINE_NAME}"       HorizontalAlignment="Left" IsReadOnly="True"/>
                                <c1:DataGridTextColumn Width="Auto"    Header="TYPE"              Binding="{Binding RACK_KDN_NAME}"   HorizontalAlignment="Left" IsReadOnly="True"/>
                                <c1:DataGridTextColumn Width="Auto"    Header="NICK_NAME"         Binding="{Binding RACK_DISP_NAME}"  HorizontalAlignment="Left" IsReadOnly="True"/>
                                <c1:DataGridTextColumn Width="Auto"    Header="X_COOR"            Binding="{Binding X_CODI}"          HorizontalAlignment="Left" IsReadOnly="True"/>
                                <c1:DataGridTextColumn Width="Auto"    Header="Y_COOR"            Binding="{Binding Y_CODI}"          HorizontalAlignment="Left" IsReadOnly="True"/>
                                <c1:DataGridTextColumn Width="Auto"    Header="LOCK"              Binding="{Binding RACK_LOK_FLAG}"   HorizontalAlignment="Left" IsReadOnly="True"/>
                                <c1:DataGridTextColumn Width="Auto"    Header="VISIBLE"           Binding="{Binding RACK_VISBL_FLAG}" HorizontalAlignment="Left" IsReadOnly="True"/>
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>
                    <!-- main end -->
                    <GridSplitter  x:Name="gsplit1" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Visibility="Collapsed" />
                    <Grid Grid.Column="2">
                        <Viewbox Stretch="Fill" >
                            <Border BorderThickness="1" CornerRadius="0" Margin="0" Width="1024" Height="768">
                                <Border.Background>
                                    <ImageBrush x:Name="imgPlan" AlignmentY="Top" Stretch="Fill" />
                                </Border.Background>
                                <ItemsControl x:Name="tStack1" Margin="1" ScrollViewer.VerticalScrollBarVisibility="Disabled" >
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <Canvas x:Name="DesignerCanvas" ClipToBounds="False" SnapsToDevicePixels="True" Margin="1" ScrollViewer.VerticalScrollBarVisibility="Disabled"/>
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemContainerStyle>
                                        <Style TargetType="ContentPresenter">
                                            <Setter Property="Canvas.Left" Value="{Binding Path=X_CODI}" />
                                            <Setter Property="Canvas.Top" Value="{Binding Path=Y_CODI}" />
                                            <Setter Property="Canvas.MinHeight" Value="5" />
                                            <Setter Property="Canvas.MinWidth" Value="5" />
                                        </Style>
                                    </ItemsControl.ItemContainerStyle>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate >
                                            <ctrlLib:MoveThumb  DragDelta="MoveThumb_DragDelta">
                                                <ctrlLib:MoveThumb.Template>
                                                    <ControlTemplate>
                                                        <Border ScrollViewer.VerticalScrollBarVisibility="Disabled" >
                                                            <Border.Style>
                                                                <Style TargetType="{x:Type Border}">
                                                                    <Style.Resources>
                                                                        <Storyboard x:Key="flashAnimation" >
                                                                            <DoubleAnimation Storyboard.TargetProperty="Opacity" From="1" To="0" AutoReverse="True" Duration="0:0:0.5" RepeatBehavior="Forever" />
                                                                        </Storyboard> 
                                                                    </Style.Resources>
                                                                    <Style.Triggers>
                                                                        <DataTrigger Binding="{Binding Path=BLINK_YN}" Value="Y">
                                                                            <Setter Property="BorderBrush" Value="Red" />
                                                                            <Setter Property="BorderThickness" Value="2" />
                                                                            <DataTrigger.EnterActions>
                                                                                <BeginStoryboard Name="flash" Storyboard="{StaticResource flashAnimation}" />
                                                                            </DataTrigger.EnterActions>
                                                                            <DataTrigger.ExitActions>
                                                                                <StopStoryboard BeginStoryboardName="flash"/>
                                                                            </DataTrigger.ExitActions>
                                                                        </DataTrigger>
                                                                        <DataTrigger Binding="{Binding Path=BLINK_YN}" Value="N">
                                                                            <Setter Property="BorderBrush" Value="Transparent" />
                                                                            <Setter Property="BorderThickness" Value="0" />
                                                                        </DataTrigger> 
                                                                    </Style.Triggers>
                                                                </Style>
                                                            </Border.Style>
                                                            <StackPanel Background="Transparent" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                                                <StackPanel.Style>
                                                                    <Style TargetType="{x:Type StackPanel}">
                                                                        <Style.Triggers>
                                                                            <DataTrigger Binding="{Binding Path=CHK}" Value="True">
                                                                                <Setter Property="Visibility" Value="Visible"/> 
                                                                            </DataTrigger>
                                                                            <DataTrigger Binding="{Binding Path=CHK}" Value="False">
                                                                                <Setter Property="Visibility" Value="Collapsed"/>
                                                                            </DataTrigger> 
                                                                        </Style.Triggers>
                                                                    </Style>
                                                                </StackPanel.Style>
                                                                <StackPanel.LayoutTransform>
                                                                    <RotateTransform Angle="{Binding RACK_TURN}" />
                                                                </StackPanel.LayoutTransform>
                                                                <StackPanel.Resources>
                                                                    <Style x:Key="LabelToolTip" TargetType="ToolTip">
                                                                        <Setter Property="OverridesDefaultStyle" Value="true" />
                                                                        <Setter Property="HasDropShadow" Value="True" />
                                                                        <Setter Property="FontFamily" Value="Arial"/>
                                                                        <Setter Property="FontSize" Value="12"/>
                                                                        <Setter Property="Foreground" Value="Black"/>
                                                                        <Setter Property="ToolTipService.ShowDuration" Value="20000"/>
                                                                        <Setter Property="Template">
                                                                            <Setter.Value>
                                                                                <ControlTemplate TargetType="ToolTip">
                                                                                    <Border x:Name="bdrTootip" HorizontalAlignment="Center" VerticalAlignment="Center" Padding="1" Background="#FFEEEEA9" BorderBrush="#FFA5A5AC" BorderThickness="0" RenderTransformOrigin="0.5,0.5" Cursor="Hand">
                                                                                        <!--<Border.Background>
                                                                                            <LinearGradientBrush EndPoint="0,1">
                                                                                                <GradientStop Offset="0" Color="#FFFFFF" />
                                                                                                <GradientStop Offset="1" Color="#FFB4B0B0" />
                                                                                            </LinearGradientBrush>
                                                                                        </Border.Background>-->
                                                                                        <Border.BitmapEffect>
                                                                                            <OuterGlowBitmapEffect GlowColor="Black" Opacity="0.1" />
                                                                                        </Border.BitmapEffect>

                                                                                        <Border.RenderTransform>
                                                                                            <ScaleTransform CenterX="0.5" CenterY="0.5" ScaleX="1" ScaleY="1" />
                                                                                        </Border.RenderTransform>

                                                                                        <Grid x:Name="grdMain">
                                                                                            <Grid.ColumnDefinitions>
                                                                                                <ColumnDefinition Width="*" MinWidth="100" />
                                                                                                <ColumnDefinition Width="*" MinWidth="120"/> 
                                                                                            </Grid.ColumnDefinitions>
                                                                                            <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="23" />
                                                                                                <RowDefinition Height="23" />
                                                                                                <RowDefinition Height="23" />
                                                                                                <RowDefinition Height="23" /> 
                                                                                            </Grid.RowDefinitions>

                                                                                            <Border Grid.Row="0" Grid.Column="0" BorderBrush="#FFA5A5AC" BorderThickness="1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="10" Foreground="#FF6A6A70" Text="{Binding ConverterParameter=RACK_ID,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="0" Grid.Column="1" BorderBrush="#FFA5A5AC" BorderThickness="0,1,1,1" Padding="1">
                                                                                                <Grid> 
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="1" FontSize="10" Text="{Binding [RACK_ID]}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="1" Grid.Column="0" BorderBrush="#FFA5A5AC" BorderThickness="1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="10" Foreground="#FF6A6A70" Text="{Binding ConverterParameter=NICK_NAME,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="1" Grid.Column="1" BorderBrush="#FFA5A5AC" BorderThickness="0,1,1,1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="1" FontSize="10" Text="{Binding [RACK_DISP_NAME]}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="2" Grid.Column="0" BorderBrush="#FFA5A5AC" BorderThickness="1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="10" Foreground="#FF6A6A70" Text="{Binding ConverterParameter=LOT_CNT,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="2" Grid.Column="1" BorderBrush="#FFA5A5AC" BorderThickness="0,1,1,1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="1" FontSize="10" Text="{Binding [LOTCNT]}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="3" Grid.Column="0" BorderBrush="#FFA5A5AC" BorderThickness="1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="10" Foreground="#FF6A6A70" Text="Line" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="3" Grid.Column="1" BorderBrush="#FFA5A5AC" BorderThickness="0,1,1,1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="1" FontSize="10" Text="{Binding [EQSGID]}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <!--<Border Grid.Row="3" Grid.Column="0" BorderBrush="#FFA5A5AC" BorderThickness="1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="10" Foreground="#FF6A6A70" Text="{Binding ConverterParameter=보관기간,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="3" Grid.Column="1" BorderBrush="#FFA5A5AC" BorderThickness="0,1,1,1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="1" FontSize="10" Text="{Binding [STORAGE_DATE]}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="4" Grid.Column="0" BorderBrush="#FFA5A5AC" BorderThickness="1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="0" FontSize="10" Foreground="#FF6A6A70" Text="{Binding ConverterParameter=최초입고일자,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>
                                                                                            <Border Grid.Row="4" Grid.Column="1" BorderBrush="#FFA5A5AC" BorderThickness="0,1,1,1" Padding="1">
                                                                                                <Grid>
                                                                                                    <TextBlock Grid.Row="0" Grid.Column="1" FontSize="10" Text="{Binding [WH_RCV_DTTM]}" VerticalAlignment="Center" TextWrapping="Wrap"/>
                                                                                                </Grid>
                                                                                            </Border>-->
                                                                                        </Grid>
                                                                                    </Border>
                                                                                </ControlTemplate>
                                                                            </Setter.Value>
                                                                        </Setter>
                                                                    </Style>
                                                                </StackPanel.Resources>
                                                                <Label HorizontalContentAlignment="Stretch" VerticalContentAlignment="Center" Height="{Binding Path=RACK_HEIGHT}" Width="{Binding Path=RACK_WIDTH}" MinWidth="5" MinHeight="5"
                                                                               Background="{Binding RACK_BAS_COLR}" Foreground="{Binding RACK_FONT_COLR}" Margin="1"
                                                                               Opacity="{Binding RACK_TSPC}" FontFamily="Arial Narrow"  MouseLeftButtonDown="RACK_MouseLeftButtonDown" Padding="1" ScrollViewer.VerticalScrollBarVisibility="Disabled"> 
                                                                    <Label.ToolTip>
                                                                        <ToolTip Style="{StaticResource LabelToolTip}"/>
                                                                    </Label.ToolTip>
                                                                    <Label.Content>
                                                                        <Viewbox>
                                                                            <TextBlock TextWrapping="WrapWithOverflow" TextAlignment="Center" FontWeight="Bold" Text="{Binding LOTCNT}" />
                                                                        </Viewbox>
                                                                    </Label.Content>
                                                                    <Label.Style>
                                                                        <Style TargetType="{x:Type Label}">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Path=RACK_TYPE}" Value="A">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding Path=RACK_TYPE}" Value="R">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding Path=RACK_TYPE}" Value="N">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                </DataTrigger>
                                                                                <Trigger Property="IsMouseOver" Value="True"> 
                                                                                    <Setter Property="BorderThickness" Value="2"/>
                                                                                    <Setter Property="BorderBrush"     Value="#FFA50EC7"/>
                                                                                </Trigger>
                                                                                <Trigger Property="IsMouseOver" Value="False">
                                                                                    <Setter Property="BorderThickness" Value="1"/>
                                                                                    <Setter Property="BorderBrush"     Value="#FF080707"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Label.Style>
                                                                </Label>
                                                                <Label Content="{Binding RACK_DISP_NAME, Converter={StaticResource TextToLabelConverter}}" Background="{Binding NAME_BAS_COLR}" Foreground="{Binding NAME_FONT_COLR}" FontSize="{Binding NAME_FONT_SIZE}" Opacity="{Binding RACK_TSPC}" FontWeight="Bold" 
                                                                               Width="{Binding NAME_WIDTH}" Height="{Binding NAME_HEIGHT}" MinWidth="5" MinHeight="5" Padding="0"  MouseLeftButtonDown="RACK_MouseLeftButtonDown"
                                                                               VerticalAlignment="Center" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="0" FontFamily="Arial Narrow" BorderBrush="#FF080707" ScrollViewer.VerticalScrollBarVisibility="Disabled">
                                                                    <Label.ToolTip>
                                                                        <ToolTip Style="{StaticResource LabelToolTip}"/>
                                                                    </Label.ToolTip>
                                                                    <Label.Style>
                                                                        <Style TargetType="{x:Type Label}">
                                                                            <Style.Triggers>
                                                                                <DataTrigger Binding="{Binding Path=RACK_TYPE}" Value="A">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding Path=RACK_TYPE}" Value="N">
                                                                                    <Setter Property="Visibility" Value="Visible"/>
                                                                                    <Setter Property="BorderThickness" Value="1"/>
                                                                                </DataTrigger>
                                                                                <DataTrigger Binding="{Binding Path=RACK_TYPE}" Value="R">
                                                                                    <Setter Property="Visibility" Value="Collapsed"/>
                                                                                    <Setter Property="BorderThickness" Value="0"/>
                                                                                </DataTrigger>
                                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                                    <Setter Property="BorderThickness" Value="1"/>
                                                                                    <Setter Property="BorderBrush"     Value="#FFA50EC7"/>
                                                                                </Trigger>
                                                                            </Style.Triggers>
                                                                        </Style>
                                                                    </Label.Style>
                                                                </Label>
                                                            </StackPanel>
                                                        </Border>
                                                    </ControlTemplate>
                                                </ctrlLib:MoveThumb.Template>
                                            </ctrlLib:MoveThumb>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Border>
                        </Viewbox>
                    </Grid>
                </Grid>
                <!-- main end -->
                <GridSplitter Grid.Column="1" Grid.RowSpan="3" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                <!-- detail start -->
                <Grid x:Name="grDetail" Grid.Row="0" Grid.Column="2" Grid.RowSpan="6" Visibility="Visible">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8" />
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="290"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="5.5*" />
                        <RowDefinition Height="40"/>
                    </Grid.RowDefinitions>
                    <!-- grdDetail start -->
                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
