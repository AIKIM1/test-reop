<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" x:Class="LGC.GMES.MES.PACK001.PACK001_024_TEMP"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="1366"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/lgc.gmes.mes.controlslibrary;component/controltemplates/c1datagridstyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="PACK 반품">
            <c1:C1TabControl Grid.Row="0" x:Name="tabMain" SelectionChanged="tabMain_SelectionChanged">
                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='반품'}">
                    <Grid x:Name="grdReturnList">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="6*" />
                        </Grid.ColumnDefinitions>

                        <!-- 전체 Border -->
                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />

                        <!-- 조회영역 -->
                        <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="230" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <Border        Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="11" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                            <TextBlock     Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <c1:C1ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboAreaReturn" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Width="180" />
                            <TextBlock     Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='기간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <StackPanel    Grid.Row="0" Grid.Column="4" Orientation="Horizontal">
                                <ctrlLib:LGCDatePicker x:Name="dtpDateFromReturn" DatepickerType="Date" />
                                <TextBlock             Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0" />
                                <ctrlLib:LGCDatePicker x:Name="dtpDateToReturn" DatepickerType="Date" />
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <CheckBox x:Name="chkDetail" Content="{Binding ConverterParameter='사외반품', Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="25" />
                            </StackPanel>
                            <TextBlock     Grid.Row="0" Grid.Column="7" Text="{Binding ConverterParameter='반품번호', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox       Grid.Row="0" Grid.Column="8" x:Name="txtReturnID" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtReturnID_KeyDown" />
                            <Button        Grid.Row="1" Grid.Column="10" x:Name="btnSearchReturn" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchReturn_Click" />
                        </Grid>

                        <!-- 반품리스트 영역 -->
                        <Grid Grid.Row="3" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                            <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Run Text="{Binding ConverterParameter='반품리스트', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            </TextBlock>
                            <TextBlock     Grid.Row="1" x:Name="txtReturnCount" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                            <c1:C1DataGrid Grid.Row="2" x:Name="dgReturn" IsReadOnly="True" HeadersVisibility="Column" Margin="8,0,8,0" SelectionMode="SingleCell" CanUserSort="False">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn Header="선택" EditOnSelection="True" Name="CHK" Width="40" HorizontalAlignment="Center">
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="CheckBox_Checked" Unchecked="CheckBox_Unchecked" />
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn Header="반품일시"    Binding="{Binding ISS_DTTM}"          HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="반품번호"    Binding="{Binding RCV_ISS_ID}"        HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="PALLETID"    Binding="{Binding PALLETID}"          HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="FROM_AREAID" Binding="{Binding FROM_AREAID}"       HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="FROM창고"    Binding="{Binding FROM_SLOC_ID}"      HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="From 창고명" Binding="{Binding FROM_SLOC_ID_DESC}" HorizontalAlignment="Left"   Width="Auto" />
                                    <c1:DataGridTextColumn Header="FROM_AREAID" Binding="{Binding TO_AREAID}"         HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="FROM창고"    Binding="{Binding TO_SLOC_ID}"        HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="To 창고명"   Binding="{Binding TO_SLOC_ID_DESC}"   HorizontalAlignment="Left"   Width="Auto" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="제품코드"    Binding="{Binding PRODID}"            HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="OCOP_RTN_FLAG"  Binding="{Binding OCOP_RTN_FLAG}"        HorizontalAlignment="Right"  Width="Auto" />
                                    <c1:DataGridTextColumn Header="PALLET수량"  Binding="{Binding PALLET_QTY}"        HorizontalAlignment="Right"  Width="Auto" />
                                    <c1:DataGridTextColumn Header="LOT정보"     Binding="{Binding LOT_INFO}"          HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="반품수량"    Binding="{Binding ISS_QTY}"           HorizontalAlignment="Right"  Width="Auto" Format="#,##0" />
                                    <c1:DataGridTextColumn Header="비고"        Binding="{Binding ISS_NOTE}"          HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="LOT_QTY"     Binding="{Binding LOT_QTY}"           HorizontalAlignment="Right"  Width="Auto" Visibility="Collapsed" />
                                </c1:C1DataGrid.Columns>
                                <c1:C1DataGrid.BottomRows>
                                    <c1:DataGridSummaryRow x:Name="dgsrSummary" RowStyle="{StaticResource SummaryRowStyle}" />
                                </c1:C1DataGrid.BottomRows>
                            </c1:C1DataGrid>
                            <!-- Splitter -->
                            <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <Grid Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                
                                <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Run Text="{Binding ConverterParameter='반품PALLET목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </TextBlock>
                                <TextBlock     Grid.Row="1" x:Name="txtReturnPalletCount" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                <c1:C1DataGrid Grid.Row="2" x:Name="dgReturnPallet" IsReadOnly="True" HeadersVisibility="Column" Margin="8,0,8,0" SelectionMode="SingleCell" CanUserSort="False">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn Header="반품번호" Binding="{Binding RCV_ISS_ID}" HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn Header="PALLETID" Binding="{Binding BOXID}"      HorizontalAlignment="Center" Width="Auto"/>
                                        <c1:DataGridTextColumn Header="반품수량" Binding="{Binding RETURN_QTY}" HorizontalAlignment="Right"  Width="Auto" Format="#,##0" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>

                        <!-- Splitter -->
                        <GridSplitter Grid.Row="3" Grid.Column="1" Grid.RowSpan="4" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <!-- LOT 정보 영역 -->
                        <Grid Grid.Row="3" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="16" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Left" VerticalAlignment="Center">
                                    <Run Text="{Binding ConverterParameter='LOT정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </TextBlock>
                                <TextBlock Grid.Column="2" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right">
                                    <Run Text="{Binding ConverterParameter='Pallet ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </TextBlock>
                                <TextBox   Grid.Column="4" x:Name="txtPalletID" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="120" IsReadOnly="True" />
                                <TextBlock Grid.Column="6" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right">
                                    <Run Text="{Binding ConverterParameter='ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </TextBlock>
                                <TextBox   Grid.Column="8" x:Name="txtLOTID" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="120" KeyDown="txtLOTID_KeyDown" />
                                <Button    Grid.Column="10" x:Name="btnExcelUpload" IsEnabled="True" Content="{Binding ConverterParameter='Excel Upload', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelImportStyle}" Click="btnExcelUpload_Click" Margin="0,0,8,0" />
                            </Grid>

                            <TextBlock     Grid.Row="1" x:Name="txtReturnLOTCount" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                            <c1:C1DataGrid Grid.Row="2" x:Name="dgReturnLOT"
                                           CanUserAddRows="False"
                                           IsReadOnly="True"
                                           Margin="8,0,8,0"
                                           HeadersVisibility="Column" MouseLeftButtonUp="dgReturnLOT_MouseLeftButtonUp"
                                           >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn Header="삭제여부" x:Name="btnDel" Width="60">
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding ConverterParameter='삭제', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Click="btnDel_Click" />
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn Header="반품번호"  Binding="{Binding RCV_ISS_ID}"     HorizontalAlignment="Center" Width="Auto" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                    <c1:DataGridTextColumn Header="Pallet ID" Binding="{Binding BOXID}"          HorizontalAlignment="Center" Width="Auto" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                    <c1:DataGridTextColumn Header="ID"        Binding="{Binding LOTID}"          HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="제품코드"  Binding="{Binding PRODID}"         HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="제품유형"  Binding="{Binding PRDT_CLSS_CODE}" HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="반품사유"  Binding="{Binding RTN_RSN_NOTE}"   HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="NOTE"      Binding="{Binding NOTE}"           HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>

                            <!-- 반품확정 -->
                            <Border Grid.Row="4" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}" Margin="8,0,8,0" />
                            <Grid Grid.Row="4" Margin="8,0,8,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>
                                <Button Grid.Column="2" x:Name="btnConfirm" Content="{Binding ConverterParameter=반품확정, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnConfirm_Click" />
                            </Grid>
                        </Grid>
                    </Grid>
                </c1:C1TabItem>

                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='반품현황'}">
                    <Grid x:Name="grdReturnHist">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>

                        <!-- 전체 Border -->
                        <Border Grid.Row="0" Grid.RowSpan="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />

                        <!-- 조회영역 -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="16" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <Border        Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="11" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />

                            <TextBlock     Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='기간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <StackPanel    Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                                <ctrlLib:LGCDatePicker x:Name="dtpDateFromReturnHist" DatepickerType="Date" />
                                <TextBlock             Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0" />
                                <ctrlLib:LGCDatePicker x:Name="dtpDateToReturnHist" DatepickerType="Date" />
                            </StackPanel>

                            <TextBlock     Grid.Column="3" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <c1:C1ComboBox Grid.Column="4" x:Name="cboAreaReturnHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Width="180" SelectedValueChanged="cboAreaReturnHist_SelectedValueChanged" />

                            <TextBlock     Grid.Column="6" Text="{Binding ConverterParameter='출고처', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <c1:C1ComboBox Grid.Column="7" x:Name="cboShipToLocation" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Width="180" />
                            <Button        Grid.Column="9" x:Name="btnSearchReturnHist" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchReturnHist_Click" />
                        </Grid>

                        <!-- PACK반품리스트 영역 -->
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                            <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Run Text="{Binding ConverterParameter='PACK반품리스트', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            </TextBlock>
                            <TextBlock     Grid.Row="1" x:Name="txtReturnHistCount" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" />
                            <c1:C1DataGrid Grid.Row="2" x:Name="dgReturnHist" IsReadOnly="True" HeadersVisibility="Column" Margin="8,0,8,0" SelectionMode="SingleCell">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn Header="반품일시"   Binding="{Binding ISS_DTTM}"               HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="입고일시"   Binding="{Binding RCV_DTTM}"               HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="반품번호"   Binding="{Binding RCV_ISS_ID}"             HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="반품상태"   Binding="{Binding RCV_ISS_STAT_CODE}"      HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="반품상태"   Binding="{Binding RCV_ISS_STAT_CODE_DESC}" HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="FROM창고"   Binding="{Binding FROM_SLOC_ID}"           HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="FROM창고명" Binding="{Binding FROM_SLOC_ID_DESC}"      HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="TO창고"     Binding="{Binding TO_SLOC_ID}"             HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="TO창고명"   Binding="{Binding TO_SLOC_ID_DESC}"        HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="PALLET수량" Binding="{Binding PALLET_QTY}"             HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="입고수량"   Binding="{Binding RCV_QTY}"                HorizontalAlignment="Center" Width="*" Format="#,##0" />
                                    <c1:DataGridTextColumn Header="반품수량"   Binding="{Binding ISS_QTY}"                HorizontalAlignment="Center" Width="*" Format="#,##0" />
                                    <c1:DataGridTextColumn Header="반품사유"   Binding="{Binding RCV_NOTE}"               HorizontalAlignment="Left"   Width="*" />
                                    <c1:DataGridTextColumn Header="PalletID"   Binding="{Binding BOXID}"                  HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="Lot ID"     Binding="{Binding LOTID}"                  HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="(반)제품"   Binding="{Binding PRODID}"                 HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="OCOP_RTN_FLAG"   Binding="{Binding OCOP_RTN_FLAG}"                 HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="RTN_SALES_ORD_NO"   Binding="{Binding RTN_SALES_ORD_NO}"                 HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="RTN_DLRV_OD_NO"   Binding="{Binding RTN_DLRV_OD_NO}"                 HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="MES_CNFM_FLAG"   Binding="{Binding MES_CNFM_FLAG}"                 HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="QMS_TRNF_FLAG"   Binding="{Binding QMS_TRNF_FLAG}"                 HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="INSP_TYPE_CODE"   Binding="{Binding INSP_TYPE_CODE}"                 HorizontalAlignment="Center" Width="*" />
                                    <c1:DataGridTextColumn Header="INSP_TYPE_CODE"   Binding="{Binding INSP_TYPE_NAME}"                 HorizontalAlignment="Center" Width="*" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </Grid>
                    </Grid>
                </c1:C1TabItem>

                <c1:C1TabItem Header="Porsche J1 B2BI Recall">
                    <Grid x:Name="grdReCall">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="80" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="40" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>

                        <!-- 전체 Border -->
                        <Border Grid.Row="0" Grid.RowSpan="9" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />

                        <!-- 조회 영역 -->
                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <Border    Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox   Grid.Column="1" x:Name="txtSearchLOTID" Style="{StaticResource SearchCondition_TextBoxStyle}" PreviewKeyDown="txtSearchLOTID_PreviewKeyDown" KeyDown="txtSearchLOTID_KeyDown" IsEnabled="True" />
                            <Button    Grid.Column="3" x:Name="btnLOTSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnLOTSearch_Click" />
                        </Grid>

                        <!-- Combo 영역 -->
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="30" />
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <Border    Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                            <TextBlock     Grid.Row="1" Grid.Column="1" Text="Recall Type"     Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />
                            <c1:C1ComboBox Grid.Row="1" Grid.Column="2" x:Name="cboRecallType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                            <TextBlock     Grid.Row="3" Grid.Column="1" Text="Device Name"     Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />
                            <TextBox       Grid.Row="3" Grid.Column="2" x:Name="txtDevice"     Style="{StaticResource SearchCondition_TextBoxStyle}" />
                            <TextBlock     Grid.Row="3" Grid.Column="4" Text="Reason"          Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />
                            <TextBox       Grid.Row="3" Grid.Column="5" x:Name="txtReason"     Style="{StaticResource SearchCondition_TextBoxStyle}" />
                        </Grid>

                        <c1:C1DataGrid Grid.Row="5" x:Name="dgReCall" IsReadOnly="True" HeadersVisibility="Column" Margin="8,0,8,0" CanUserSort="True" CanUserFilter="True" SelectionMode="MultiRange">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn Header="XML_TAG1"   Binding="{Binding TAG1}"            HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                <c1:DataGridTextColumn Header="GB/T ID"    Binding="{Binding GBT_ID}"          HorizontalAlignment="Center" Width="*" />
                                <c1:DataGridTextColumn Header="XML_TAG2"   Binding="{Binding TAG2}"            HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                <c1:DataGridTextColumn Header="DMC"        Binding="{Binding DMC}"             HorizontalAlignment="Center" Width="*" />
                                <c1:DataGridTextColumn Header="XML_TAG3"   Binding="{Binding TAG3}"            HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                <c1:DataGridTextColumn Header="PARTNUMBER" Binding="{Binding PARTNUMBER}"      HorizontalAlignment="Center" Width="*" />
                                <c1:DataGridTextColumn Header="XML_TAG4"   Binding="{Binding TAG4}"            HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                <c1:DataGridTextColumn Header="LOTID"      Binding="{Binding LOTID}"           HorizontalAlignment="Center" Width="*" />
                                <c1:DataGridTextColumn Header="XML_TAG5"   Binding="{Binding TAG5}"            HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                <c1:DataGridTextColumn Header="GEN INDEX"  Binding="{Binding GEN_INDEX}"       HorizontalAlignment="Center" Width="*" />
                                <c1:DataGridTextColumn Header="XML_TAG6"   Binding="{Binding TAG6}"            HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                <c1:DataGridTextColumn Header="CALDATE"    Binding="{Binding PRODUCTION_DATE}" HorizontalAlignment="Center" Width="*" />
                                <c1:DataGridTextColumn Header="XML_TAG7"   Binding="{Binding TAG7}"            HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                                <c1:DataGridTextColumn Header="CELL GB/T"  Binding="{Binding CELL_GBT}"        HorizontalAlignment="Center" Width="*" SelectiveScrollingGrid.SelectiveScrollingOrientation="Both" />
                                <c1:DataGridTextColumn Header="XML_TAG8"   Binding="{Binding TAG8}"            HorizontalAlignment="Center" Width="*" Visibility="Collapsed" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>

                        <RichTextBox Grid.Row="5" x:Name="RtxtContent" Height="Auto" BorderThickness="1" BorderBrush="#FFC3C3C3" Margin="2" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Visibility="Collapsed">
                            <RichTextBox.Resources>
                                <Style TargetType="{x:Type Paragraph}">
                                    <Setter Property="Margin" Value="5" />
                                </Style>
                            </RichTextBox.Resources>
                            <FlowDocument LineHeight="10">
                                <Paragraph FontSize="10pt" LineHeight="10pt" LineStackingStrategy="BlockLineHeight" Tag="TEST">
                                </Paragraph>
                            </FlowDocument>
                        </RichTextBox>

                        <Grid Grid.Row="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Column="0" Grid.ColumnSpan="6"  Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                            <Button Grid.Column="2" x:Name="btnRecall"   Content="{Binding ConverterParameter=Recall,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnRecall_Click" />
                            <Button Grid.Column="4" x:Name="btnDevivery" Content="{Binding ConverterParameter=Delivery, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnDevivery_Click" />
                        </Grid>
                    </Grid>
                </c1:C1TabItem>
            </c1:C1TabControl>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>