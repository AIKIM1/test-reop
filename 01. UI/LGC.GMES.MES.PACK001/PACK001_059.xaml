                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
