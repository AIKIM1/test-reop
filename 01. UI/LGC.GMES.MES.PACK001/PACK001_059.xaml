                                <TextBlock Grid.Row="1" x:Name="tbCellListCount"  Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                                <c1:C1DataGrid Grid.Row="4" Grid.ColumnSpan="2" x:Name="dgCellList" HeadersVisibility="None"  FrozenColumnCount="2" SelectionMode="MultiRange" CanUserRemoveRows="True" CanUserAddRows="True" MouseDoubleClick="dgCellList_MouseDoubleClick"  FrozenTopRowsCount="3" >
