                                        <!--<c1:DataGridTextColumn Header = "[① Wait,① Wait,SUM]"                 Binding = "{Binding PRD_WAIT_TOT_99}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="-1"/>-->

                                        <c1:DataGridTextColumn Header = "[② Proc,② Proc,1W ↓]"               Binding = "{Binding PRD_PROC_DN_4}"            HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="4" Format="#,##0"/>
                                        <c1:DataGridTextColumn Header = "[② Proc,② Proc,1W ↑]"               Binding = "{Binding PRD_PROC_UP_5}"            HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="5" Format="#,##0"/>
                                        <!--<c1:DataGridTextColumn Header = "[② Proc,② Proc,SUM]"                 Binding = "{Binding PRD_PROC_TOT_99}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="-1"/>-->

                                        <c1:DataGridTextColumn Header = "[HOLD,1W ↓,①]"                       Binding = "{Binding PRD_WAIT_HOLD_DN_6}"       HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="6" Format="#,##0"/>
                                        <c1:DataGridTextColumn Header = "[HOLD,1W ↓,②]"                       Binding = "{Binding PRD_PROC_HOLD_DN_8}"       HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="8" Format="#,##0"/>
                                        <!--<c1:DataGridTextColumn Header = "[HOLD,1W ↓,Term]"                     Binding = "{Binding PRD_TERM_HOLD_DN_12}"      HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="-1"/>-->

                                        <c1:DataGridTextColumn Header = "[HOLD,1W ↑,①]"                       Binding = "{Binding PRD_WAIT_HOLD_UP_7}"       HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="7" Format="#,##0"/>
                                        <c1:DataGridTextColumn Header = "[HOLD,1W ↑,②]"                       Binding = "{Binding PRD_PROC_HOLD_UP_9}"       HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="9" Format="#,##0"/>
                                        <c1:DataGridTextColumn Header = "[HOLD,1W ↑,Term]"                     Binding = "{Binding PRD_TERM_HOLD_UP_13}"      HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="13" Format="#,##0" Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <GridSplitter Grid.Row="4" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                           
                            <Border Grid.Row="5" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                            
                            <Grid Grid.Row="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="259*"/>
                                    <ColumnDefinition Width="253*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" BorderThickness="1"  Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Border Grid.Row="1" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>

                                <TextBlock Grid.Row="0" HorizontalAlignment="Left" Style="{StaticResource Content_ModuleTitleStyle}" Margin="15,9,0,8"><Run Text="{Binding ConverterParameter=상세보기, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <Button    Grid.Row="1" Grid.Column="1"  x:Name="btnCellDetailDownLoad"  Content="{Binding ConverterParameter='Export',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,8,0,8" Click="btnCellDetailDownLoad_Click"/>
                                <TextBlock Grid.Row="1" Grid.Column="0" x:Name="tbCellDetlListCount"  Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" />

                                <c1:C1DataGrid x:Name="dgCellDetailList" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3"  HeadersVisibility="None" FrozenColumnCount="2" SelectionMode="MultiRange" CanUserRemoveRows="True" CanUserAddRows="True" FrozenTopRowsCount="1" >
                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow/>
                                    </c1:C1DataGrid.TopRows>

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn Header = "[Pjt Group Name]"   Binding = "{Binding PACK_PRDT_GR_CODE}" HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Pjt Name]"         Binding = "{Binding PRJT_NAME}"         HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Prod. ID]"         Binding = "{Binding PRODID}"            HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[ReleaseID]"        Binding = "{Binding RCV_ISS_ID}"        HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="True"  CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Pallet ID]"        Binding = "{Binding PALLETID}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="True"  CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Release Date]"     Binding = "{Binding RCV_DTTM}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Lot ID]"           Binding = "{Binding LOTID}"             HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="True"  CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Line]"             Binding = "{Binding EQSGNAME}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="True"  CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Process]"          Binding = "{Binding PROCNAME}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="True"  CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Status]"           Binding = "{Binding WIPSNAME}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="True"  CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[GBT ID]"           Binding = "{Binding GBTID}"             HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Cell Line]"        Binding = "{Binding PROD_EQSGNAME}"     HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[From Area]"        Binding = "{Binding FROM_AREANAME}"     HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[To Area]"          Binding = "{Binding TO_AREANAME}"       HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Release User]"     Binding = "{Binding RCV_USER}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Input User]"       Binding = "{Binding RCV_IN_USER}"       HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Last Change User]" Binding = "{Binding LAST_UPD_USER}"     HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                        <c1:DataGridTextColumn Header = "[Last Change Date]" Binding = "{Binding UPDDTTM}"           HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="True" CanUserResize="True"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <!-- ################################################### UnBoxing  ################################################### -->
                    <c1:C1TabItem x:Name="NoBoxing" Header="{Binding ConverterParameter=NOBOXING, Converter={StaticResource GlobalObjectDicConverter}}">
