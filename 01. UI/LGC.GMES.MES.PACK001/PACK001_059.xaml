    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="재공/재고조회">
            <Grid>
                <c1:C1TabControl x:Name="tbcMain">

                    <!-- ################################################### Cell ################################################### -->
                    <c1:C1TabItem x:Name="Cell" Header="{Binding ConverterParameter=Cell, Converter={StaticResource GlobalObjectDicConverter}}">
