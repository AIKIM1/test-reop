                                        <c1:DataGridColumnHeaderRow/>
                                        <c1:DataGridColumnHeaderRow/>
                                        <c1:DataGridColumnHeaderRow/>
                                    </c1:C1DataGrid.TopRows>

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn Header = "[Pjt Group,Pjt Group,Pjt Group]"       Binding = "{Binding PACK_PRDT_GR_CODE}"        HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="True" CanUserSort="False" CanUserResize="True" Tag="-1"/>
                                        <c1:DataGridTextColumn Header = "[Pjt Name,Pjt Name,Pjt Name]"          Binding = "{Binding PRJT_NAME}"                HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="True" CanUserSort="False" CanUserResize="True" Tag="-1"/>
                                        <c1:DataGridTextColumn Header = "[Prod.ID,Prod.ID,Prod.ID]"             Binding = "{Binding PRODID}"                   HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="True" CanUserSort="False" CanUserResize="True" Tag="-1"/>

                                        <c1:DataGridTextColumn Header = "[In-transit,Receiving,To Pack 1W ↓]"  Binding = "{Binding INTS_RCV_CELL2PACK_DN_0}"  HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="0" Format="#,##0"/>
                                        <c1:DataGridTextColumn Header = "[In-transit,Receiving,To Pack 1W ↑]"  Binding = "{Binding INTS_RCV_CELL2PACK_UP_10}" HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="10" Format="#,##0"/>
                                        <c1:DataGridTextColumn Header = "[In-transit,Return,Return Cell 1W ↓]" Binding = "{Binding INTS_RTN_PACK2CELL_DN_1}"  HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="1" Format="#,##0"/>
                                        <c1:DataGridTextColumn Header = "[In-transit,Return,Return Cell 1W ↑]" Binding = "{Binding INTS_RTN_PACK2CELL_UP_11}" HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="11" Format="#,##0"/>
                                        <!--<c1:DataGridTextColumn Header = "[In-transit,SUM,SUM]"                  Binding = "{Binding INTS_TOT_99}"              HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="True" Tag="-1"/>-->

