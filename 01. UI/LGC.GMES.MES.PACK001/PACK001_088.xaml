<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK001_088"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1280" Loaded="C1Window_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <!--<ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/C1DataGridStyle.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="재공 현황 조회(Pack)">
            <Grid>
                <c1:C1TabControl x:Name="tcMain" Grid.Row="0" SelectionChanged="tcMain_SelectionChanged">
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='재공'}" Margin="0" >
                        <Grid Grid.Row="0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>

                            <!-- 조회 조건 -->
                            <Grid x:Name="Search1" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <!--0  공백 -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--1 현황-->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--2 이력-->
                                    <ColumnDefinition Width="8"/>
                                    <!--3  공백 -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--4  재공일자 -->
                                    <ColumnDefinition Width="8"/>
                                    <!--5  날짜 선택 -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--6  공백 -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--7  -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--8  -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--9  동 -->
                                    <ColumnDefinition Width="33*"/>
                                    <!--10  동 선택 -->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--11  라인 -->
                                    <ColumnDefinition Width="33*"/>
                                    <!--12 라인 선택-->
                                    <ColumnDefinition Width="50*"/>
                                    <!--13 공백-->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--14 2nc ocv-->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--15 조회 버튼-->
                                    <ColumnDefinition Width="Auto"/>
                                    <!--16 조회 버튼-->
                                    <ColumnDefinition Width="13"/>
                                    <!--17 조회 버튼-->

                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="17" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <RadioButton x:Name="rdoWIP"      Grid.Column="1" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='재공현황',  Converter={StaticResource GlobalObjectDicConverter}}"  GroupName="WIPSNAP" Margin="2,0" FontWeight="Bold" Checked="rdoWIP_Checked" IsChecked="True" />
                                <RadioButton x:Name="rdoWIP_SNAP" Grid.Column="2" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='재공이력',  Converter={StaticResource GlobalObjectDicConverter}}"  GroupName="WIPSNAP" Margin="2,0" FontWeight="Bold" Checked="rdoWIP_SNAP_Checked" />

                                <StackPanel Grid.Column="4"  Orientation="Horizontal" HorizontalAlignment="Right" >
                                    <TextBlock Text="{Binding ConverterParameter='재공일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>
                                    <ctrlLib:LGCDatePicker x:Name="dtpDate" DatepickerType="Date" IsEnabled="False"/>
                                </StackPanel>

                                <StackPanel Grid.Column="9" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>
                                </StackPanel>
                                <c1:C1ComboBox  Grid.Column="10" x:Name="cboAreaByAreaType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedItemChanged="cboAreaByAreaType_SelectedItemChanged" />

                                <StackPanel Grid.Column="11" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>
                                </StackPanel>
                                <c1:C1ComboBox  Grid.Column="12" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedItemChanged="cboEquipmentSegment_SelectedItemChanged" />

                                <CheckBox Grid.Row="1" Grid.Column="13" x:Name="chk2ndOcv" Margin="20,00,0,0" Width="Auto" Checked="chk2ndOcv_Checked" Unchecked="chk2ndOcv_Checked">2nd OCV</CheckBox>

                                <Button Grid.Row="1" Grid.Column="15" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click"/>
                                <Border Grid.Row="1" Grid.Column="16" Grid.ColumnSpan="15" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            </Grid>

                            <!-- 조회 결과 -->
                            <Grid x:Name="InfoArea" Grid.Row="3">
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="4*"/>
                                    </Grid.ColumnDefinitions>


                                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                                    <!-- 왼쪽  -->
                                    <Grid Grid.Row="0">
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="41"/>
                                                <RowDefinition Height="20"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- 1 Row -->
                                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                            <Run Text="{Binding ConverterParameter='조회 결과', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                            </TextBlock>
                                            <Button  Grid.Row="0" Grid.Column="3" x:Name="btnExcel"      Content="{Binding ConverterParameter=Excel,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" Click="btnExcel_Click"/>

                                            <!-- 2 Row -->
                                            <Border Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="6"  Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock x:Name="tbRetrunListCount" Grid.Column="1" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
                                            </Grid>

                                            <!-- 3 Row -->
                                            <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" >
                                                <c1:C1DataGrid Grid.Row="3" Grid.Column="1" x:Name="dgWipList" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" LoadedCellPresenter="dgWipList_LoadedCellPresenter" Grid.ColumnSpan="2" MouseDoubleClick="dgWipList_MouseDoubleClick">
                                                    <c1:C1DataGrid.Columns>
                                                        <c1:DataGridTextColumn        Header = "Factory"             Binding = "{Binding SHOPID}"                HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "FACTORY"             Binding = "{Binding SHOPNAME}"              HorizontalAlignment="Center" Width="Auto" />

                                                        <c1:DataGridTextColumn        Header = "AREA"              Binding = "{Binding AREAID}"                HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "AREA"              Binding = "{Binding AREANAME}"              HorizontalAlignment="Center" Width="Auto" />

                                                        <c1:DataGridTextColumn        Header = "EQSGID"            Binding = "{Binding EQSGID}"                HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "Line"              Binding = "{Binding EQSGNAME}"              HorizontalAlignment="Center" Width="Auto" />

                                                        <c1:DataGridTextColumn        Header = "ROUTID"            Binding = "{Binding ROUTID}"                HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "Route"             Binding = "{Binding ROUTNAME}"              HorizontalAlignment="Center" Width="Auto" />

                                                        <c1:DataGridTextColumn        Header = "제품구분"           Binding = "{Binding PRDT_CLSS_CODE}"        HorizontalAlignment="Center" Width="Auto" />
                                                        <c1:DataGridTextColumn        Header = "PRDT_CLSS_CODE"     Binding = "{Binding PRDT_CLSS_CODE_S08}"    HorizontalAlignment="Center" Width="Auto" Visibility ="Collapsed" />
                                                        <c1:DataGridTextColumn        Header = "제품ID"             Binding = "{Binding PRODID}"                HorizontalAlignment="Center" Width="Auto" />
                                                        <!--<c1:DataGridTextColumn        Header = "제품설명"          Binding = "{Binding PRODDESC}"     HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />-->

                                                        <c1:DataGridTextColumn        Header = "투입대기"            Binding = "{Binding TOTL_WAIT}"             HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "작업중"              Binding = "{Binding TOTL_PROC}"             HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "수리/재작업"         Binding = "{Binding TOTL_REWORK}"            HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "폐기"                Binding = "{Binding TOTL_SCRAP}"            HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "2nd OCV"             Binding =  "{Binding TOTL_2ND_OCV}"         HorizontalAlignment="Right" Width="Auto" Format="#,##0" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn        Header = "완성"                Binding = "{Binding TOTL_END}"              HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "PACKING"             Binding = "{Binding TOTL_PACKING}"          HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "BIZWF"               Binding = "{Binding TOTL_BIZWF}"            HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "반품 후 대기"         Binding = "{Binding TOTL_RETURN}"           HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "등급품 관리"          Binding = "{Binding TOTL_OFFGRD}"           HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "Total"               Binding = "{Binding TOTL_SUM}"              HorizontalAlignment="Right" Width="Auto" Format="#,##0" />

                                                        <c1:DataGridTextColumn        Header = "물류 입고대기"        Binding = "{Binding TOTL_RCV_SHIPPING}"     HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "MES HOLD"            Binding = "{Binding TOTL_PROD_HOLD}"        HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "QMS HOLD"            Binding = "{Binding TOTL_QLTY_HOLD}"        HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "HOLD(MES&amp;QMS)"   Binding = "{Binding TOTL_PROD_QLTY_HOLD}"   HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "HOLD TOTAL"          Binding = "{Binding TOTL_HOLD_TOTAL}"       HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        
                                                    </c1:C1DataGrid.Columns>
                                                </c1:C1DataGrid>

                                            </Grid>
                                        </Grid>
                                    </Grid>

                                    <!-- 오른쪽 -->
                                    <Grid Grid.Row="1" Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="41"/>
                                            <RowDefinition Height="21"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="50"/>
                                            <RowDefinition Height="8"/>
                                        </Grid.RowDefinitions>

                                        <!-- 1 Row -->
                                        <Border Grid.Row="0" Grid.Column="2" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}" Height="17" Margin="15,12,0,12">
                                            <Run Text="{Binding ConverterParameter='LOT정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                            </TextBlock>
                                            <Button  Grid.Row="0" Grid.Column="3" x:Name="btnExcel1"      Content="{Binding ConverterParameter=Excel,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" Click="btnExcel1_Click"/>
                                        </Grid>

                                        <!-- 2 Row -->
                                        <Border Grid.Row="1" Grid.RowSpan="4" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                        <Grid Grid.Row="1" Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock x:Name="tbPackInfoCount" Grid.Column="1" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
                                        </Grid>

                                        <!-- 3 Row -->
                                        <Grid Grid.Row="2" Grid.RowSpan="2">
                                            <c1:C1DataGrid x:Name="dgPackInfo" IsReadOnly="True" HeadersVisibility="Column" Margin="0,0,16,13" CanUserRemoveRows="True" CanUserAddRows="True" SelectionMode="SingleCell" LoadedCellPresenter="dgPackInfo_LoadedCellPresenter">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn Header = "LOTID"                  Binding = "{Binding LOTID}"        HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "제품코드"               Binding = "{Binding PRODID}"       HorizontalAlignment="Center" Width="Auto"/>                                                                                                        
                                                    <c1:DataGridTextColumn Header = "공정"                   Binding = "{Binding PROCID}"       HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn Header = "공정"                   Binding = "{Binding PROCNAME}"     HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "현재상태"               Binding = "{Binding WIPSTAT}"      HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn Header = "현재상태"               Binding = "{Binding WIPSNAME}"     HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "생성일자"               Binding = "{Binding LOTDTTM_CR}"   HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "경과일"                 Binding = "{Binding LOTDTTM_CR_ELAPSED_DAYS}"      HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "ERP 전송여부"           Binding = "{Binding ERP_FLAG}"     HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "등록자"                 Binding = "{Binding INSUSER}"      HorizontalAlignment="Center" Width="Auto" />
                                                    <c1:DataGridTextColumn Header = "변경일자"               Binding = "{Binding UPDDTTM}"      HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "보관기간"               Binding = "{Binding PACK_STORAGE_PERIOD}" HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "KEYPART  결합 수량"     Binding = "{Binding ASSEMBLED_QTY}"          HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "MBOM대비 결합 수량"     Binding = "{Binding ASSEMBLED_BOM_QTY}"     HorizontalAlignment="Center" Width="Auto"/>
                                                    <c1:DataGridTextColumn Header = "OCOP_RTN_FLAG"         Binding = "{Binding OCOP_RTN_FLAG}"     HorizontalAlignment="Center" Width="Auto"/>
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </Grid>
                                </Grid>

                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='CELL 이동중'}" Margin="0" >
                        <Grid Grid.Row="0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            
                            <!-- 조회 조건 -->
                            <Grid x:Name="Search3" Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="56"/>
                                    <ColumnDefinition Width="191*"/>
                                    <ColumnDefinition Width="151*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="342*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="343*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="16" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <StackPanel Grid.Column="7" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" Margin="10,0,-10,0"/>
                                    <TextBlock Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>
                                </StackPanel>
                                <c1:C1ComboBox  Grid.Column="8" x:Name="cboArea_Areatype" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedItemChanged="cboArea_Areatype_SelectedItemChanged" Grid.ColumnSpan="2" Margin="3,11" />

                                <StackPanel Grid.Column="10" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" Margin="10,0,-10,0"/>
                                    <TextBlock Text="{Binding ConverterParameter='제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>
                                </StackPanel>
                                <c1:C1ComboBox  Grid.Column="11" x:Name="cboProduct" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Margin="3,11" />

                                <Button Grid.Column="14" x:Name="btnSearch_Move" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Move_Click" Margin="0,8"/>
                            </Grid>

                            <!-- 조회 결과 -->
                            <Grid x:Name="InfoArea_H1" Grid.Row="3">
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                    <!-- 왼쪽  -->
                                    <Grid Grid.Row="0">
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="41"/>
                                                <RowDefinition Height="20"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <!-- 1 Row -->
                                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                            <Run Text="{Binding ConverterParameter='조회 결과', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                            </TextBlock>
                                            <Button  Grid.Row="0" Grid.Column="3" x:Name="btnExcel_M1"      Content="{Binding ConverterParameter=Excel,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" Click="btnExcel_M1_Click"/>

                                            <!-- 2 Row -->
                                            <Border Grid.Row="1" Grid.RowSpan="2" Grid.ColumnSpan="6"  Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock x:Name="tbRetrunListCount_H1" Grid.Column="1" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" />
                                            </Grid>

                                            <!-- 3 Row -->
                                            <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" >
                                                <c1:C1DataGrid Grid.Row="3" Grid.Column="1" x:Name="dgWipMoving" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" LoadedCellPresenter="dgWipMoving_LoadedCellPresenter" Grid.ColumnSpan="2" MouseDoubleClick="dgWipMoving_MouseDoubleClick">
                                                    <c1:C1DataGrid.Columns>
                                                        <!--<c1:DataGridTextColumn        Header = "입고출고ID"         Binding = "{Binding RCV_ISS_ID}"           HorizontalAlignment="Center" Width="Auto"   ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                                        <c1:DataGridTextColumn        Header = "PALLETID"           Binding = "{Binding BOXID}"             HorizontalAlignment="Center" Width="Auto"/>-->

                                                        <c1:DataGridTextColumn        Header = "FROM_AREAID"        Binding = "{Binding FROM_AREAID}"          HorizontalAlignment="Center" Width="Auto" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "출고동"             Binding = "{Binding FROM_AREANAME}"        HorizontalAlignment="Center" Width="Auto"  ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>

                                                        <c1:DataGridTextColumn        Header = "TO_AREAID"          Binding = "{Binding TO_AREAID}"            HorizontalAlignment="Center" Width="Auto" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "입고대기동"         Binding = "{Binding TO_AREANAME}"          HorizontalAlignment="Center" Width="Auto"  ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>

                                                        <c1:DataGridTextColumn        Header = "제품ID"        Binding = "{Binding PRODID}"   HorizontalAlignment="Center" Width="Auto" />

                                                        <c1:DataGridTextColumn        Header = "Pallet 수량"     Binding = "{Binding P_CNT}"  HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                        <c1:DataGridTextColumn        Header = "수량"     Binding = "{Binding CNT}"  HorizontalAlignment="Right" Width="Auto" Format="#,##0" />
                                                    </c1:C1DataGrid.Columns>
                                                </c1:C1DataGrid>

                                            </Grid>
                                        </Grid>
