<UserControl x:Class="LGC.GMES.MES.PACK001.PACK001_001"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded" KeyUp="UserControl_KeyUp" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/C1DataGridStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Pack 공정진척">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <!--<Button  Grid.Row="0" Grid.Column="1" x:Name="btnProcessSelect" Content="{Binding ConverterParameter='공정선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnProcessSelect_Click" />-->
                            <!--<Button  Grid.Row="0" Grid.Column="1" x:Name="btnProcessSelect" Content="{Binding ConverterParameter='공정선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl01Style}" Click="btnProcessSelect_Click" />-->
                            <TextBlock x:Name="tbTitle" Grid.Column="1" Text="   " Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Center"/>
                            <Grid Grid.Column="2">
                                <Grid VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="34" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>
                                    <Button  Grid.Row="0" Grid.Column="1" x:Name="btnProcessSelect" Content="{Binding ConverterParameter='공정선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl01Style}" Click="btnProcessSelect_Click" />
                                </Grid>

                            </Grid>
                        </Grid>
                    </Grid>

                    <!--end search Area-->
                    <Grid x:Name="Content" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="350" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="ContentLeft" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--Start 작업정보-->
                            <Grid x:Name="ContentLeftTop" Grid.Row="0" MinHeight="250">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <!-- 1row-->
                                <!--<Border Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>-->
                                <Border Grid.Row="0" Grid.ColumnSpan="3"  BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                                <TextBlock     Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='작업정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                </TextBlock>

                                <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="4" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1"/>

                                <Grid x:Name="gridWorkInfo" Grid.Row="2" Grid.Column="1" >

                                </Grid>
                            </Grid>
                            <!--end 작업정보-->
                            <Grid x:Name="ContentLeftBottom" Grid.Row="2">
                                <!--Start Ketpart-->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>
                                <!--<Border Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>-->
                                <Border Grid.Row="0" Grid.ColumnSpan="3"  BorderThickness="1,1,1,0" Style="{StaticResource BorderSubTitleStyle}"/>
                                
                                <Grid Grid.Row="0" Grid.Column="1" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock     Grid.Row="0"  Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='투입', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                    </TextBlock>
                                    <Grid x:Name="gridPlanQTY" Grid.Column="1" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Grid.Column="0"  Text="{Binding ConverterParameter='양품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Row="0" Grid.Column="2"  x:Name="txtGoodQty"   Text="0" FontSize="16" FontWeight="Bold" Foreground="#c8294b" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='불량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                        <TextBlock Grid.Row="0" Grid.Column="6"  x:Name="txtDefectQty"    Text="0" FontSize="16" FontWeight="Bold" Foreground="#c8294b" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Grid>
                                    
                                    <ToggleButton   Grid.Row="0"  Grid.Column="9"  x:Name="btnExpandFrameLeft" Style="{StaticResource btnLeftTopConerStyleVertical}" IsChecked="False" Checked="btnExpandFrameLeft_Checked" Unchecked="btnExpandFrameLeft_Unchecked"/>
                                </Grid>

                                <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="5" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <!--<Border Grid.Row="2" Grid.Column="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>-->
                                <!--<Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />-->

                                <Grid x:Name="ContentInputKeyPart" Grid.Row="2" Grid.Column="1" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="25*"/>
                                        <ColumnDefinition Width="75*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Condition_Header_BorderStyle}" ></Border>
                                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                        <TextBlock  Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="0,1,1,0">
                                        <TextBox x:Name="txtProdutLotInput"     Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtProdutLotInput_KeyDown" />
                                    </Border>

                                    <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1">
                                        <TextBlock  Text="{Binding ConverterParameter='KEYPART', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="0,1,1,1">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBox Grid.Column="0" x:Name="txtKeyPartInput"     Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtKeyPartInput_KeyDown"/>
                                            <!--<Button    Grid.Column="4" x:Name="btnKeyPartInput"       Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnKeyPartInput_Click"/>-->
                                            <Button  Grid.Column="1"  x:Name="btnKeyPartDelete"      Content="{Binding ConverterParameter=삭제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Height="23" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnKeyPartDelete_Click" Margin="8,0,8,0"/>
                                        </Grid>
                                    </Border>


                                </Grid>

                                <!-- 4row-->
                                <!--<Border Grid.Row="3" Grid.Column="1"  BorderBrush="#ee5283" BorderThickness="0,0,0,2"/>-->

                                <!-- 5row-->
                                <c1:C1DataGrid Grid.Row="4" Grid.Column="1" x:Name="dgKeyPart" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleCell" MouseDoubleClick="dgKeyPart_MouseDoubleClick" MouseRightButtonDown="dgKeyPart_MouseRightButtonDown" LoadedCellPresenter="dgKeyPart_LoadedCellPresenter">
                                    <c1:C1DataGrid.ContextMenu>    
                                        <ContextMenu >
                                            <MenuItem x:Name="menu_KeyPartUpdate" Header="교체" Click="menu_KeyPartUpdate_Click"></MenuItem>
                                        </ContextMenu>
                                    </c1:C1DataGrid.ContextMenu>
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK"  Header="선택" Width="50">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <!--<CheckBox IsChecked="{Binding CHK, Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />-->
                                                    <RadioButton GroupName="dgKeyPartChoiceGroup" IsChecked="{Binding CHK, Mode=TwoWay}" Name="dgKeyPartChoice" HorizontalAlignment="Center" Checked="dgKeyPartChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn        Header = "Lot ID"         Binding = "{Binding LOTID}"                 HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "SEQ"           Binding = "{Binding PRDT_ATTCH_PSTN_NO}"    HorizontalAlignment="Center" Width="50"/>
                                        <c1:DataGridTextColumn        Header = "KEYPARTLOTID"  Binding = "{Binding INPUT_LOTID}"           HorizontalAlignment="Center" Width="*"/>
                                        <c1:DataGridTextColumn        Header = "수량"          Binding = "{Binding INPUT_QTY}"             HorizontalAlignment="Center" Width="30" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "MTRLID"        Binding = "{Binding MTRLID}"                HorizontalAlignment="Center" Width="30" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "INPUT_LOT_TYPE_CODE"        Binding = "{Binding INPUT_LOT_TYPE_CODE}"   HorizontalAlignment="Center" Width="30" Visibility="Collapsed"/>

                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                                <!--End Ketpart-->
                            </Grid>
                        </Grid>



                        <Grid x:Name="ContentRight" Grid.Column="3" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid x:Name="ContentRightTop" Grid.Row="0" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="51"/>
                                    <RowDefinition Height="29"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <!--1Row-->
                                <!--<Border Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>-->
                                <Border Grid.Row="0" Grid.ColumnSpan="3"  BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}"/>

                                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock     Grid.Row="0"   Grid.Column="0"  Style="{StaticResource Content_ModuleTitleStyle}" >
                                        <Run Text="{Binding ConverterParameter='재공정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                    </TextBlock>
                                    <ToggleButton   Grid.Row="0"  Grid.Column="1"  x:Name="btnExpandFrameTop" Style="{StaticResource btnLeftTopConerStyleVertical}" IsChecked="True" Checked="btnExpandFrameTop_Checked" Unchecked="btnExpandFrameTop_Unchecked" Margin="0,5"/>
                                </Grid>


                                <Border Grid.Row="1" Grid.RowSpan="7" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1"/>

                                <!-- 2row-->
                                <!--<Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />-->
                                <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Condition_BorderStyle}"></Border>
                                <Grid x:Name="ContentInputProductLot" Grid.Row="2" Grid.Column="1" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" MinWidth="180"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="13"/>
                                    </Grid.ColumnDefinitions>

                                    <!--<Button    Grid.Row="0" Grid.Column="4" x:Name="btnProdutLototInput"       Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnProdutLototInput_Click"/>-->

                                    <!--<TextBlock Grid.Column="3" Text="{Binding ConverterParameter='(LOT ID 입력 후 엔터로 투입)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource Content_InputForm_TextBlockStyle}" />-->
                                    <TextBlock Grid.Column="3" Text="{Binding ConverterParameter='LABELCODE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>
                                    <c1:C1ComboBox  Grid.Column="4" x:Name="cboLabelCode" Style="{StaticResource C1ComboBoxStyle}" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                    
                                    <Button    Grid.Row="0" Grid.Column="6" x:Name="btnProdutLotLabel"      Content="{Binding ConverterParameter=재발행,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnProdutLotLabelel_Click"/>
                                    <Button    Grid.Row="0" Grid.Column="8" x:Name="btnProdutLotSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnProdutLotSearch_Click" />
                                </Grid>

                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Column="1" x:Name="tbWipListCount" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                                    <TextBlock  Grid.Column="3"  Text="{Binding ConverterParameter='최신', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" Margin="3,3,0,3"/>
                                    <c1:C1ComboBox Grid.Column="4" x:Name="cboListCount" Height="18" MinWidth="50" Width="Auto" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboListCount_SelectedValueChanged"/>
                                    <TextBlock  Grid.Column="5"  Text="{Binding ConverterParameter='건', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"  Margin="0,3,0,3"/>
                                    <TextBlock             Grid.Column="7" Text="{Binding ConverterParameter='작업일',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  HorizontalAlignment="Right" VerticalAlignment="Center" />
                                    <ctrlLib:LGCDatePicker Grid.Column="8" x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />
                                    <ctrlLib:LGCDatePicker Grid.Column="9" x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />
                                </Grid>
                                
                                <!-- 3row-->
                                <!--<Border Grid.Row="3" Grid.Column="1"  BorderBrush="#ee5283" BorderThickness="0,0,0,2"/>-->
                                <c1:C1DataGrid Grid.Row="4" Grid.Column="1" x:Name="dgWipList" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" MouseUp="dgWipList_MouseUp" MouseDoubleClick="dgWipList_MouseDoubleClick" LoadedCellPresenter="dgWipList_LoadedCellPresenter">
                                    <c1:C1DataGrid.Resources>
                                        <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_enter.png" Stretch="Uniform"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </c1:C1DataGrid.Resources>
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn  Header="투입" Width="40">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Click="wipListInputButton_Click" Style="{StaticResource grButtonStyle}" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn        Header = "LOTID"              Binding = "{Binding LOTID}"             HorizontalAlignment="Center" Width="Auto" />
                                        <!--<c1:DataGridTextColumn        Header = "제품명"             Binding = "{Binding PRODNAME}"          HorizontalAlignment="Left"   Width="Auto" />-->
                                        <c1:DataGridTextColumn        Header = "제품설명"           Binding = "{Binding PRODDESC}"          HorizontalAlignment="Left"   Width="Auto" />
                                        <c1:DataGridTextColumn        Header = "생성일시"           Binding = "{Binding LOTDTTM_CR}"        HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn        Header = "투입일시"           Binding = "{Binding WIPDTTM_PROC_IN}"   HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn        Header = "현재공정"           Binding = "{Binding PROCNAME}"          HorizontalAlignment="Left"   Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "상태"               Binding = "{Binding WIPSNAME}"          HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn        Header = "PROC_INPUT_QTY"     Binding = "{Binding PROC_INPUT_QTY}"    HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "INPUT_QTY"          Binding = "{Binding INPUT_QTY}"         HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "결합상태"           Binding = "{Binding MTRLQTY}"           HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>


                            </Grid>
                            <!--<GridSplitter Grid.Row="1" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />-->
                            <Grid x:Name="ContentRightBottom" Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="10"/>
                                </Grid.ColumnDefinitions>

                                <!--1Row-->
                                <!--<Border Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>-->
                                <Border Grid.Row="0" Grid.ColumnSpan="3"  BorderThickness="1,1,1,0" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='공정보고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                    </TextBlock>
                                    <ToggleButton   Grid.Row="0"  Grid.Column="1"  x:Name="btnExpandFrame" Style="{StaticResource btnLeftTopConerStyleVertical}" IsChecked="False" Checked="btnExpandFrame_Checked" Unchecked="btnExpandFrame_Unchecked"/>
                                </Grid>


                                <Border Grid.Row="1" Grid.RowSpan="5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                <!--3Row-->
                                <!--<Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />-->
                                <Grid x:Name="ContentComfirmDisplay" Grid.Row="2" Grid.Column="1" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13.3*"/>
                                        <ColumnDefinition Width="20*"/>
                                        <ColumnDefinition Width="13.3*"/>
                                        <ColumnDefinition Width="20*"/>
                                        <ColumnDefinition Width="13.3*"/>
                                        <ColumnDefinition Width="20*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="6" Style="{StaticResource Condition_Header_BorderStyle}"></Border>

                                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"  BorderThickness="1,1,0,0">
                                        <TextBlock  Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,0">
                                        <TextBox x:Name="txtTargetLot" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                        <TextBlock  Text="{Binding ConverterParameter='제품ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,0">
                                        <TextBox x:Name="txtTargeProduct" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="4" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                        <TextBlock  Text="{Binding ConverterParameter='판정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                    </Border>
                                    <Border Grid.Row="1" Grid.Column="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0">
                                        <c1:C1ComboBox x:Name="cboResult" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"   MinWidth="80" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedIndexChanged="cboResult_SelectedIndexChanged" />
                                    </Border>

                                    <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"  BorderThickness="1,1,0,1">
                                        <TextBlock  Text="{Binding ConverterParameter='공정변경사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,0,1">
                                        <TextBox x:Name="txtConfirmNote"     Style="{StaticResource SearchCondition_TextBoxStyle}"    />
                                    </Border>
                                    <Border Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" MinWidth="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="3"/>
                                            </Grid.ColumnDefinitions>
                                            <Button Grid.Column="1" x:Name="btnNew"      Content="{Binding ConverterParameter=신규,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnNew_Click"/>
                                            <Button Grid.Column="3" x:Name="btnConfirm"      Content="{Binding ConverterParameter=확정,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnConfirm_Click"/>
                                        </Grid>

                                    </Border>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="3"/>
                                    </Grid.RowDefinitions>

                                </Grid>

                                <!--4Row-->
                                <Grid Grid.Row="4" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <!--<Border     Grid.Row="0" Grid.Column="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>-->
                                    <TextBlock  Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_Search_LabelStyle}" HorizontalAlignment="Left">
                                        <Run Text="{Binding ConverterParameter='불량유형CODE선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                    </TextBlock>
                                    <!--<Border     Grid.Row="0" Grid.Column="2" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>-->
                                    <TextBlock     Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_Search_LabelStyle}" HorizontalAlignment="Left">
                                        <Run Text="{Binding ConverterParameter='측정DATA입력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                    </TextBlock>

                                    <GridSplitter Grid.Row="0" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="4" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                    <Grid Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <c1:C1DataGrid Grid.Row="0" Grid.Column="0" x:Name="dgDefect" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" MouseDoubleClick="dgDefect_MouseDoubleClick" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn Name="CHK"  Header="선택" Width="50">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <!--<CheckBox IsChecked="{Binding CHK, Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />-->
                                                            <RadioButton GroupName="dgDefectChoiceGroup" IsChecked="{Binding CHK, Mode=TwoWay}" Name="dgDefectChoice" HorizontalAlignment="Center" Checked="dgDefectChoice_Checked"/>
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn        Header = "코드"     Binding = "{Binding RESNCODE}"     HorizontalAlignment="Center" Width="Auto" />
                                                <c1:DataGridTextColumn        Header = "코드명"   Binding = "{Binding RESNNAME}"     HorizontalAlignment="Left" Width="Auto" />
                                                <c1:DataGridTextColumn        Header = "설명"     Binding = "{Binding RESNDESC}"     HorizontalAlignment="Left" Width="Auto" />

                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>

                                    <Grid Grid.Row="1" Grid.Column="2" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <c1:C1DataGrid Grid.Row="0" Grid.Column="0" x:Name="dgInspection" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange"  LoadedCellPresenter="dgInspection_LoadedCellPresenter"  >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn        Header = "측정명"    Binding = "{Binding CLCTNAME}"    HorizontalAlignment="Left" IsReadOnly="True"  Width="Auto" />
                                                <c1:DataGridTextColumn        Header = "측정ID"    Binding = "{Binding CLCTITEM}"    HorizontalAlignment="Center" IsReadOnly="True"  Width="Auto" />
                                                <c1:DataGridTextColumn        Header = "하한"      Binding = "{Binding LCL}"         HorizontalAlignment="Right" IsReadOnly="True"  Width="Auto" /><!--Format="#,##0.###"/>-->
                                                <c1:DataGridTextColumn        Header = "상한"      Binding = "{Binding UCL}"         HorizontalAlignment="Right" IsReadOnly="True"  Width="Auto" /><!--Format="#,##0.###"/>-->
                                                <!--2018.06.11-->
                                                <c1:DataGridTextColumn     Header = "측정값"    Binding = "{Binding CLCTVAL}"     HorizontalAlignment="Right" IsReadOnly="False" Width="Auto"/>
                                                <!--<c1:DataGridNumericColumn     Header = "측정값"    Binding = "{Binding CLCTVAL}"     HorizontalAlignment="Right" IsReadOnly="False" Width="Auto" ShowButtons="False"/>-->
                                                <c1:DataGridTextColumn        Header = "양불"      Binding = "{Binding PASSYN}"      HorizontalAlignment="Center" IsReadOnly="True"  Width="Auto" Visibility="Collapsed"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>

                                    <Grid Grid.Row="3" Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Row="0" Grid.Column="1"   x:Name="btnInspectionBefore"      Content="{Binding ConverterParameter=이전검사적용,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnInspectionBefore_Click"/>
                                    </Grid>

                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.ColumnSpan="2" Grid.RowSpan="1" />
    </Grid>
</UserControl>
