<c1:C1Window x:Class="LGC.GMES.MES.PACK001.PACK003_038_POPUP_HIS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             xmlns:Controls="clr-namespace:LGC.GMES.MES.PACK001.Controls" 
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='반품사유'}" 
             Tag="ProtoType01Windows01" Height="700" Width="1024" IsResizable="True" Loaded="C1Window_Loaded" Initialized="C1Window_Initialized" >

    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="413*"/> 
        </Grid.ColumnDefinitions>
        <!-- content start -->
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="1" Grid.ColumnSpan="2">
            <Grid x:Name="ctt_tp1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0"/> 
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions> 
                    <ColumnDefinition Width="*"/> 
                </Grid.ColumnDefinitions>
                <!-- top(tp1) start -->
                <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                <Grid x:Name="top" Grid.Row="0" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8"/> 
                        <ColumnDefinition Width="*"/> 
                        <ColumnDefinition Width="8"/>
                    </Grid.ColumnDefinitions>
                </Grid>
                <!-- top(tp1) end -->
                <!-- main(tp1) start -->
                <Border Grid.Row="1" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                <Grid x:Name="main_tp1" Grid.Row="1" >
                    <Grid.RowDefinitions>  
                        <RowDefinition Height="*"/> 
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions> 
                        <ColumnDefinition Width="*"/>  
                    </Grid.ColumnDefinitions>
                    <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
 
                    <!-- grdMain(tp1) start -->
                    <c1:C1DataGrid Grid.Row="0" x:Name="grdMain" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" >
                        <c1:C1DataGrid.Columns>
                            <c1:DataGridTextColumn  Header="요청번호"     		Binding="{Binding REQ_NO}" 					HorizontalAlignment="Left"   Width="Auto" IsReadOnly="True"/>
                            <c1:DataGridTextColumn  Header="반품사유"           Binding="{Binding NOTE}"                    HorizontalAlignment="Left"   Width="Auto" IsReadOnly="True"/>
                            <c1:DataGridTextColumn  Header="수정일시"           Binding="{Binding UPDDTTM}"                 HorizontalAlignment="Center" Width="Auto" IsReadOnly="True"/>
                            <c1:DataGridTextColumn  Header="수정자"             Binding="{Binding UPD_USERNAME}"            HorizontalAlignment="Center" Width="Auto" IsReadOnly="True"/>
                        </c1:C1DataGrid.Columns>

                    </c1:C1DataGrid> 
                    <!-- grdMain(tp1) end -->
                </Grid>
                <!-- main(tp1) end -->
            </Grid>
        </ctrlLib:LGCLayout>
        <!-- content end -->
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" />
    </Grid>
</c1:C1Window>