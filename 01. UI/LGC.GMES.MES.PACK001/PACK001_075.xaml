                            <!--<TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=비용구분, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            <c1:C1ComboBox Grid.Row="5" Grid.Column="1" x:Name="cboReas" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />-->
                            <Border Grid.Row="6" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <TextBlock Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=귀책부서, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            </Border>
                            <Border Grid.Row="6" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
