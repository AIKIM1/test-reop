                                        <c1:DataGridTextColumn Header="불량명"        Binding="{Binding RESNNAME}"       HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn Header="사유"          Binding="{Binding RESNNOTE}"       HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn Header="등급품코드"    Binding="{Binding GRD_PRODID}"     HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn Header="PRODTYPE"      Binding="{Binding PRODTYPE}"       HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
