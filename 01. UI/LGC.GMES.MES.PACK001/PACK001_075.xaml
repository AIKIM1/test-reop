                                        <c1:DataGridTextColumn Header="라인"          Binding="{Binding EQSGID}"         HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn Header="라인"          Binding="{Binding EQSGNAME}"       HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn Header="공정"          Binding="{Binding PROCID}"         HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn Header="Route"         Binding="{Binding RoutID}"         HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn Header="Route"         Binding="{Binding RoutDESC}"       HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn Header="재공상태"      Binding="{Binding WIPSTAT}"        HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn Header="재공상태"      Binding="{Binding WIPSNAME}"       HorizontalAlignment="Center" Width="Auto" />
