                                        <c1:DataGridTextColumn Header="일괄 작업유형" Binding="{Binding LOTID}"          HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn Header="일괄 작업상세" Binding="{Binding LOTID}"          HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
