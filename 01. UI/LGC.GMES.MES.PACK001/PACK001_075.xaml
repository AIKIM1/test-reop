                                <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <c1:C1ComboBox Grid.Row="3" Grid.Column="1" x:Name="cboTempProdID" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <TextBlock Grid.Row="4" Grid.Column="0" x:Name="tbNewProdID" Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=최종 변경 제품ID, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <c1:C1ComboBox Grid.Row="4" Grid.Column="1" x:Name="cboNewProdID" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <Border Grid.Row="5" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <TextBlock Grid.Row="5" Grid.Column="0" Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=변경일, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                <Border Grid.Row="5" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <ctrlLib:LGCDatePicker Grid.Row="5" Grid.Column="1" x:Name="dtpDate" DatepickerType="Date" IsEnabled="False" />
                                <Border Grid.Row="6" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <TextBlock Grid.Row="6" Grid.Column="0" Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=요청자, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                <Border Grid.Row="6" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <Grid Grid.Row="6" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30" />
                                        <ColumnDefinition Width="3" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" x:Name="txtUserName" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtUserName_KeyDown" />
                                    <Button Grid.Column="1" x:Name="btnUser" Content="{Binding ConverterParameter=Title17, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnUser_Click" />
                                </Grid>
                                <Border Grid.Row="7" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <TextBlock Grid.Row="7" Grid.Column="0" Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=승인증빙자료, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                <Border Grid.Row="7" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <Grid Grid.Row="7" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" x:Name="txtFilePath" Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" IsReadOnly="True" AcceptsReturn="True" />
                                    <Button Grid.Column="1" x:Name="btnFile" Content="{Binding ConverterParameter='파일찾기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnFile_Click" />
                                </Grid>
                                <Border Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <CheckBox Grid.Row="8" Grid.Column="1" x:Name="chkErpSendYn" IsChecked="True" Content="{Binding ConverterParameter='ERP 전송여부', Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" FontWeight="Bold" IsEnabled="False" Margin="3" />
                            </Grid>
                        </Grid>
                        <Grid Grid.Column="2" Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34" />
                                <RowDefinition Height="34" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="2*" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="1.5*" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="34" />
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter=일괄처리 대상 LOT, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            </TextBlock>
                            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />
                            <Border Grid.Row="3" Grid.RowSpan="3" Grid.Column="1" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />
                            <Border Grid.Row="9" Grid.RowSpan="1" Grid.Column="1" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />
                            <Grid Grid.Row="1" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="64" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='LOT ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Right" />
                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="0*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Column="0" x:Name="txtLotId" Style="{StaticResource SearchCondition_TextBoxStyle}" CharacterCasing="Upper" KeyDown="txtLotId_KeyDown" PreviewKeyDown="txtLotId_PreviewKeyUp" />
                                    <!--KeyDown="LOTID_KeyDown"-->
                                </Grid>
                                <Button Grid.Column="4" x:Name="selectCancel" Content="{Binding ConverterParameter='선택취소', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="selectCancel_Click" />
