                                <RowDefinition Height="Auto" />
                                <!--<RowDefinition Height="64" />-->
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Grid.RowSpan="15" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />
                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                            <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='일괄 등록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            </TextBlock>
                            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1">
                                <TextBlock Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=AREA, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" VerticalAlignment="Center" />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <TextBox x:Name="txtArea" Style="{StaticResource SearchCondition_TextBoxStyle}" IsEnabled="False" CharacterCasing="Upper" Tag="AREAID" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="0" x:Name="borderA" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <TextBlock x:Name="tbBatType" Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=일괄 작업유형, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <c1:C1ComboBox x:Name="cboBatType" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedIndexChanged="cboBatType_SelectedIndexChanged" SelectedValueChanged="cboBatType_SelectedValueChanged" />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <TextBlock x:Name="tbBatDetail" Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=일괄작업 상세, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <c1:C1ComboBox x:Name="cboBatDetail" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboBatDetail_SelectedValueChanged" />
                            </Border>
                            <Border Grid.Row="4" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,0,0">
