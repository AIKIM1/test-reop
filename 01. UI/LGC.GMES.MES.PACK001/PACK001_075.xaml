                                <TextBlock Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=사유, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            </Border>
                            <Border Grid.Row="7" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <TextBox x:Name="txtReason" Style="{StaticResource TextBoxBaseStyle}" Height="23" IsEnabled="False" />
                            </Border>
                            <Border Grid.Row="8" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <TextBlock Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=투입공정, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Visibility="Collapsed" />
                            </Border>
                            <Border Grid.Row="8" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <c1:C1ComboBox Grid.Row="8" Grid.Column="1" x:Name="cboInputProcId" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Visibility="Collapsed" />
                            </Border>
                            <Border Grid.Row="9" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                <TextBlock Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=조치내역, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                            </Border>
