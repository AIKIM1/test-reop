                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='등급품 재고 변경', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </TextBlock>
                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <TextBlock Grid.Row="1" Grid.Column="0" x:Name="tbCurrProduct" Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=현 제품ID, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
