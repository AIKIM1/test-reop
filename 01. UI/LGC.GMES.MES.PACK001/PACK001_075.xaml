                                <TextBlock Grid.Row="2" Grid.Column="0" Style="{StaticResource SearchCondition_LabelStyle}" Text="{Binding ConverterParameter=등급품 처리유형, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <RadioButton Grid.Row="0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=등급품 전환}" x:Name="rdoNormalGrade" GroupName="GradeProcess" Style="{StaticResource SearchCondition_RadioButtonStyle}" MinHeight="23" Margin="3" Checked="rdoNormalGrade_Checked" />
