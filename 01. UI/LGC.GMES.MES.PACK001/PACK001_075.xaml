                                <c1:C1DataGrid x:Name="dgLotList" HeadersVisibility="Column" IsReadOnly="True" SelectionMode="SingleCell" Grid.ColumnSpan="2" Margin="7,7,1,-7">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Header="선택" EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
