                                        <c1:DataGridTextColumn      Header = "의뢰ID"            Binding = "{Binding INSP_REQ_ID}"        HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn      Header = "LOTID"             Binding = "{Binding LOTID}"              HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn      Header = "의뢰인"            Binding = "{Binding UPDUSER}"            HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn      Header = "의뢰일"            Binding = "{Binding REQ_DTTM}"           HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn      Header = "요청상태 코드"     Binding = "{Binding INSP_PROG_CODE}"     HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "요청상태"          Binding = "{Binding INSP_PROG_NAME}"     HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn      Header = "JUDG_FLAG"         Binding = "{Binding JUDG_FLAG}"          HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "판정결과"          Binding = "{Binding JUDG_FLAG_NAME}"     HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn      Header = "모델"              Binding = "{Binding PRJT_MODEL}"         HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn      Header = "LINE"              Binding = "{Binding EQSGNAME}"           HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn      Header = "NOTE"              Binding = "{Binding NOTE}"               HorizontalAlignment="Center" Width="Auto" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <Grid Grid.Row="6" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.ColumnSpan="10" Style="{StaticResource Condition_Header_BorderStyle}" />
                                <Border Grid.Row="1" Grid.ColumnSpan="10" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                                
                                <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Grid.RowSpan="2">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtWorkerName" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3,6" Grid.RowSpan="2" />
