<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK002_002"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="소포장 재공조회">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding}" TextBlock.FontWeight="Bold" HorizontalAlignment="Right" />
                        </Grid>
                    </DataTemplate>
                </Grid.Resources>                
                <c1:C1TabControl x:Name="tcMain" Grid.Column="1" Grid.Row="1" SelectionChanged="tcMain_SelectionChanged" >
                    <c1:C1TabItem x:Name="tabItem_CurrentMrtl" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='재공현황'}" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"  Style="{StaticResource Condition_BorderStyle}"></Border>

                            <!-- 조회 조건 영역 -->
                            <Grid   Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="9" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="5" />
                                    </Grid.ColumnDefinitions>

                                    <!-- <조회조건> -->
                                    <!--라인(콤보)-->
                                    <TextBlock              Grid.Column="1" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,12,8,12"/>
                                    <c1:C1ComboBox          Grid.Column="2" x:Name="cboEqptLine01" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"  Margin="3,8" SelectedItemChanged="cboEqptLine01_SelectedItemChanged" />
                                    <!--자재 그룹(콤보)-->
                                    <TextBlock              Grid.Column="4" Text="{Binding ConverterParameter='자재그룹', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,12,8,12"/>
                                    <c1:C1ComboBox          Grid.Column="5" x:Name="cboMtrlGroup01" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"  Margin="3,8" SelectedItemChanged="cboMtrlGroup01_SelectedItemChanged"/>
                                    <!--자재 코드(콤보)-->
                                    <TextBlock              Grid.Column="7" Text="{Binding ConverterParameter='자재코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,12,8,12"/>
                                    <c1:C1ComboBox          Grid.Column="8" x:Name="cboMtrlCode01" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"  Margin="3,8"/>
                                    <!--조회 버튼(버튼)-->
                                    <Button                 Grid.Column="9"  x:Name="btnSearch01" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Right"  Margin="0,6" Click="btnSearch01_Click"/>
                                </Grid>
                            </Grid>

                            <!-- 조회 결과 영역 -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="6*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"  Style="{StaticResource Condition_BorderStyle}"></Border>

                                <!--Sub 영역 01-->
                                <Grid  Grid.Column="0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.RowSpan="4" Grid.Row="0"  BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Border Grid.RowSpan="3" Grid.Row="1"  Background="#ffffffff" BorderThickness="2" BorderBrush="#ffbebebe"></Border>

                                    <!-- 왼쪽 타이틀 -->
                                    <Grid   Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock   Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='조회결과', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </Grid>

                                    <!--조회건수-->
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtBkResultCnt01" Grid.Column="1" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                                    </Grid>

                                    <!--자재 그룹 그리드-->
                                    <Grid Grid.Row="2" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Condition_Header_BorderStyle}"/>

                                        <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgCurrentMtrlList" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" Width="Auto" LoadedCellPresenter="dgList_LoadedCellPresenter"  MouseLeftButtonUp="dgCurrentMtrlList_MouseLeftButtonUp"  >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn      Header = "라인코드"        Binding = "{Binding EQSGID}"            HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                                <c1:DataGridTextColumn      Header = "라인명"          Binding = "{Binding EQSGNAME}"          HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn      Header = "자재그룹"        Binding = "{Binding MTRL_GR_CODE}"      HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "자재그룹명"      Binding = "{Binding PORT_MTRL_GR_NAME}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "자재코드"        Binding = "{Binding MTRLCODE}"          HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn      Header = "자재명"          Binding = "{Binding MTRLNAME}"          HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn   Header = "투입대기"    Binding = "{Binding WAIT_CNT}"              HorizontalAlignment="Center" IsReadOnly="True" Width="60*" MinWidth="60" Format="#,##0" Minimum="0"/>
                                                <c1:DataGridNumericColumn   Header = "진행중"      Binding = "{Binding PROC_CNT}"              HorizontalAlignment="Center" IsReadOnly="True" Width="60*" MinWidth="60" Format="#,##0" Minimum="0"/>
                                                <c1:DataGridNumericColumn   Header = "배출"        Binding = "{Binding END_CNT}"               HorizontalAlignment="Center" IsReadOnly="True" Width="60*" MinWidth="60" Format="#,##0" Minimum="0"/>
                                                <c1:DataGridNumericColumn   Header = "Hold"            Binding = "{Binding HOLD_CNT}"          HorizontalAlignment="Center" IsReadOnly="True" Width="60*" MinWidth="60" Format="#,##0" Minimum="0"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>

                                <!--Splitter-->
                                <GridSplitter  Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <!--Sub 영역 02-->
                                <Grid   Grid.Row="0" Grid.Column="2" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.RowSpan="4" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Border Grid.Row="1" Grid.RowSpan="3" Background="#ffffffff" BorderThickness="2" BorderBrush="#ffbebebe"></Border>

                                    <!--Sub 영역 02 Title-->
                                    <Grid   Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock    Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='소포장 정보', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </Grid>

                                    <!--조회건수-->
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtBkCarrierInforCnt01" Grid.Column="1" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                                    </Grid>

                                    <!--전송 정보 Grid -->
                                    <Grid   Grid.Row="2" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Condition_Header_BorderStyle}"/>

                                        <c1:C1DataGrid Grid.Row="1" Grid.Column="1" FrozenBottomRowsCount="1" x:Name="dgCurrentMtrlDetail" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" LoadedCellPresenter="dgList_LoadedCellPresenter" MouseLeftButtonUp="dgCurrentMtrlDetail_MouseLeftButtonUp" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn      Header = "자재그룹"            Binding = "{Binding PORT_MTRLGR_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Header = "자재그룹명"          Binding = "{Binding PORT_MTRL_GR_NAME}"    HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "자재코드"            Binding = "{Binding MTRLID}"               HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn      Header = "자재명"              Binding = "{Binding MTRLNAME}"             HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Header = "현재상태코드"        Binding = "{Binding S_BOX_STAT}"           HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Header = "현재상태명"          Binding = "{Binding S_BOX_STAT_NAME}"      HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridNumericColumn   Header = "입고"                Binding = "{Binding INPUT_QTY}"            HorizontalAlignment="Center" IsReadOnly="True" Width="80*" MinWidth="70" Format="#,##0" Minimum="0">
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridNumericColumn   Header = "잔량"                Binding = "{Binding RMN_QTY}"              HorizontalAlignment="Center" IsReadOnly="True" Width="80*" MinWidth="70" Format="#,##0" Minimum="0">
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridNumericColumn   Header = "사용"                Binding = "{Binding USE_QTY}"              HorizontalAlignment="Center" IsReadOnly="True" Width="80*" MinWidth="70" Format="#,##0" Minimum="0">
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridNumericColumn   Header = "불량"                Binding = "{Binding DFCT_QTY}"             HorizontalAlignment="Center" IsReadOnly="True" Width="80*" MinWidth="70" Format="#,##0" Minimum="0">
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridTextColumn      Header = "소포장ID"            Binding = "{Binding S_BOX_ID}"             HorizontalAlignment="Left"   IsReadOnly="True" Width="300" MinWidth="300" />
                                                <c1:DataGridTextColumn      Header = "입고PortAddress"     Binding = "{Binding CURR_PORT_ID}"         HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridDateTimeColumn  Header = "입고일시"            Binding = "{Binding RCV_DTTM}"             HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridDateTimeColumn  Header = "작업시작일시"        Binding = "{Binding STRT_DTTM}"            HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridDateTimeColumn  Header = "작업종료일시"        Binding = "{Binding END_DTTM}"             HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                            </c1:C1DataGrid.Columns>

                                            <c1:C1DataGrid.BottomRows>
                                                <c1:DataGridSummaryRow x:Name="WIP_summary" />
                                            </c1:C1DataGrid.BottomRows>
                                        </c1:C1DataGrid>

                                    </Grid>
                                </Grid>

                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem x:Name="tabItem_TarmMrtl" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='재공종료'}" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0"  Style="{StaticResource Condition_BorderStyle}"></Border>

                            <!-- 조회 조건 영역 -->
                            <Grid   Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="9" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="10" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="5" />
                                    </Grid.ColumnDefinitions>
                                    <!-- <조회조건> -->
                                    <!--재공종료일(타임픽)-->
                                    <TextBlock              Grid.Column="1" Text="{Binding ConverterParameter='재공종료일시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <ctrlLib:LGCDatePicker  Grid.Column="2" x:Name="dtpTmDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                    <TextBlock              Grid.Column="3" Text=" ~ " HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <ctrlLib:LGCDatePicker  Grid.Column="4" x:Name="dtpTmDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                    <!--현재일자(체크)-->
                                    
                                    <TextBlock              Grid.Column="6" Text="{Binding ConverterParameter='현재일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <CheckBox               Grid.Column="7"  Name="chkCurrentDate" Style="{StaticResource CheckBoxBaseStyle}" Width="18" ToolTip="Only today at check" Checked="chkCurrentDate_Checked" Unchecked="chkCurrentDate_Checked" />
                                    <!--라인(콤보)-->
                                    <TextBlock              Grid.Column="9" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox          Grid.Column="10" x:Name="cboEqptLine02" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"  Margin="3,8" SelectedItemChanged="cboEqptLine02_SelectedItemChanged" />
                                    <!--자재 그룹(콤보)-->
                                    <TextBlock              Grid.Column="12" Text="{Binding ConverterParameter='자재그룹', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,12,8,12"/>
                                    <c1:C1ComboBox          Grid.Column="13" x:Name="cboMtrlGroup02" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"  Margin="3,8" />
                                    <!--조회 버튼-->
                                    <Button                 Grid.Column="15"  x:Name="btnSearch02" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Right"  Margin="0,6" Click="btnSearch02_Click"/>
                                </Grid>
                            </Grid>

                            <!-- 조회 결과 영역 -->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="6*" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"  Style="{StaticResource Condition_BorderStyle}"></Border>

                                <!--Sub 영역 01-->
                                <Grid  Grid.Column="0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.RowSpan="4" Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Border Grid.RowSpan="3" Grid.Row="1"  Background="#ffffffff" BorderThickness="2" BorderBrush="#ffbebebe"></Border>

                                    <!-- 왼쪽 타이틀 -->
                                    <Grid   Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='조회결과', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </Grid>

                                    <!--조회건수-->
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="txtBkResultCnt02" Grid.Column="1" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,271,5" Grid.ColumnSpan="1"/>
                                    </Grid>

                                    <!--자재 그룹 그리드-->
                                    <Grid Grid.Row="2" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Condition_Header_BorderStyle}"/>
                                        <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgTermMtrl" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" Width="Auto" LoadedCellPresenter="dgList_LoadedCellPresenter" MouseLeftButtonUp="dgTermMtrl_MouseLeftButtonUp"  >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn      Header = "라인"                         Binding = "{Binding EQSGID}"         HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Header = "라인명"                       Binding = "{Binding EQSGNAME}"       HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "자재그룹"                     Binding = "{Binding MTRL_GR_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Header = "자재그룹명"                   Binding = "{Binding MTRL_GR_NAME}"   HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "자재코드"                     Binding = "{Binding MTRLCODE}"       HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn      Header = "자재명"                       Binding = "{Binding MTRLNAME}"       HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn   Header = "TERM"                         Binding = "{Binding TERM_CNT}"       HorizontalAlignment="Center" IsReadOnly="True" Width="50*" Format="#,##0" Minimum="0"/>
                                                <c1:DataGridNumericColumn   Header = "Hold"                         Binding = "{Binding HOLD_CNT}"       HorizontalAlignment="Center" IsReadOnly="True" Width="50*" MinWidth="60" Format="#,##0" Minimum="0"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>

                                <!--Splitter-->
