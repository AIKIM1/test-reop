<UserControl x:Class="LGC.GMES.MES.PACK001.PACK001_091"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:Controls="clr-namespace:LGC.GMES.MES.PACK001.Controls" 
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"  Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Trucking / 충방전 공정진척">
            <c1:C1TabControl x:Name="tabControlMain">
                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Trucking 착공'}" >
                    <Grid>
                        <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="tbTitle" Grid.Column="1" Text="   " Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Center"/>
                                <Grid Grid.Column="2">
                                    <Grid VerticalAlignment="Top">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="34" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>
                                        <Button  Grid.Row="0" Grid.Column="1" x:Name="btnProcessSelect" Content="{Binding ConverterParameter='공정선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl01Style}" Click="btnProcessSelect_Click"  Visibility="Collapsed"/>
                                    </Grid>

                                </Grid>
                            </Grid>
                        </Grid>


                        <!-- Main Grid -->
                        <Grid Grid.Column="1" x:Name="mainGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="2.5*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="1*"/>
                                <!--우측에 기능 제외-->
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="0"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Grid -->
                            <Grid Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <!-- 작업 정보 영역 -->
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="8"/>

                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- SubTitle Area -->
                                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                                        <Border BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                                        <TextBlock Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='그룹 상태 정보' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"></Run>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Search Area -->

                                    <Grid x:Name="gridSearchAreaLeft" Grid.Row="2" Grid.Column="0"  Grid.ColumnSpan="3"  >
                                        <Border  Style="{StaticResource Condition_BorderStyle}">
                                            <Grid Grid.Row="2" Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="8"/>
                                                </Grid.RowDefinitions>

                                                <!-- Search Area 1 Line -->

                                                <Grid Grid.Row="1" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="13" />
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="8"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="13" />
                                                    </Grid.ColumnDefinitions>


                                                    <Grid Grid.Column="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="8" />
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="3" />
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="3" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                                        <ctrlLib:LGCDatePicker  Grid.Column="2" x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />
                                                        <TextBlock              Grid.Column="4" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                                        <ctrlLib:LGCDatePicker  Grid.Column="6" x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />
                                                    </Grid>
                                                </Grid>


                                                <!-- Search Area 2 Line -->
                                                <Grid Grid.Row="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="13"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="8"/>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="13"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Column="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="4*"/>
                                                            <ColumnDefinition Width="6*"/>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='포장기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                                        <c1:C1ComboBox   Grid.Column="1" x:Name="cboEqptId" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="EQPT_CBO_NAME" SelectedValuePath="EQPT_CBO_CODE" />
                                                    </Grid>

                                                    <Button Grid.Column="4" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click"/>
                                                </Grid>

                                            </Grid>
                                        </Border>
                                    </Grid>


                                    <Border  Grid.Row="4" Grid.Column="0" Grid.RowSpan="6" Grid.ColumnSpan="3" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>

                                    <Grid Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="150" />
                                                <ColumnDefinition Width="8" />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock    Grid.Column="1"  x:Name="StartWorkInfoCnt" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" />
                                            <TextBlock    Grid.Column="3"  Text="{Binding ConverterParameter='그룹ID검색',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" VerticalAlignment="Center" />
                                            <Grid  Grid.Column="4" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="1*"/>
                                                </Grid.RowDefinitions>
                                                <TextBox   Grid.Row="1"   Text="" x:Name="txtStartList"   Style="{StaticResource TextBoxBaseStyle}" VerticalAlignment="Center" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" TextAlignment="Center" PreviewKeyDown="txtStartList_PreviewKeyDown"/>
                                            </Grid>


                                        </Grid>
                                    </Grid>

                                    <!-- Info Grid Area -->
                                    <Grid x:Name="gridWorkInfo" Grid.Row="6" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3"  >

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="6"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="6"/>
                                        </Grid.ColumnDefinitions>

                                        <c1:C1DataGrid  Grid.Column="1" x:Name="dgGroup" HeadersVisibility="Column" ColumnHeaderHeight="40"  
                                                IsReadOnly="True" CanUserFilter="False" CanUserReorderColumns="False"  SelectionMode="None"  MouseOverBrush="Transparent"  HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto" FontSize="11" ClipboardPasteMode="None"  >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn    Header = "그룹ID"       Binding = "{Binding GR_ID}"           HorizontalAlignment="Center"     Width="Auto"  />
                                                <c1:DataGridTextColumn    Header = "LOAD그룹ID"       Binding = "{Binding LOAD_GR_ID}"      HorizontalAlignment="Center"     Width="Auto"  />
                                                <c1:DataGridTextColumn    Header = "비고"         Binding = "{Binding NOTE}"            HorizontalAlignment="Center"     Width="Auto"  />
                                                <c1:DataGridTextColumn    Header = "인쇄여부"     Binding = "{Binding LABEL_PRT_FLAG}"  HorizontalAlignment="Center"     Width="Auto"  />
                                                <c1:DataGridTextColumn    Header = "포장시간"     Binding = "{Binding GR_SET_DTTM}"     HorizontalAlignment="Center"     Width="Auto"  />
                                                <c1:DataGridTextColumn    Header = "포장해체시간" Binding = "{Binding GR_CNCL_DTTM}"    HorizontalAlignment="Center"     Width="Auto"  />
                                            </c1:C1DataGrid.Columns>

                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>


                            <!--Center Grid-->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- WIP SUBTITLE AREA -->
                                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                                        <TextBlock Style="{StaticResource Content_ModuleTitleStyle}">
                                        <Run Text="{Binding ConverterParameter='재공정보' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"></Run>
                                        </TextBlock>

                                        <ToggleButton   Grid.Row="0"  Grid.Column="1"  x:Name="btnExpandFrameTop" Style="{StaticResource btnLeftTopConerStyleHorizontal}" IsChecked="False" Checked="btnExpandFrameTop_Checked" Unchecked="btnExpandFrameTop_Unchecked" Margin="0,5"/>
                                    </Grid>

                                    <Border  Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource Condition_BorderStyle}"/>

                                    <Grid Grid.Row="1" Grid.Column="1" >

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>

                                        </Grid.ColumnDefinitions>

                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='LOT / GR ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <TextBox   x:Name="LotGrIdText" Grid.Column="1"   Style="{StaticResource TextBoxBaseStyle}" VerticalAlignment="Center" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" TextAlignment="Left"  PreviewKeyUp="TextBox_PreviewKeyUp" KeyDown="LotGrIdText_KeyDown" />

                                        <!--<TextBlock       Grid.Column="4" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />-->
                                        <!--<c1:C1ComboBox   Grid.Column="5" x:Name="cboStartEqptId" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="START_EQPT_CBO_NAME" SelectedValuePath="START_EQPT_CBO_CODE" />-->
                                    </Grid>

                                    <!-- WIP LIST AREA -->
                                    <Grid x:Name="girGrInfo" Grid.Row="5" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3"  >

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="0"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="8"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="187*"/>
                                            <ColumnDefinition Width="345*"/>
                                            <ColumnDefinition Width="89*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,1,1,1" />


                                        <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock x:Name="StartListCount" Grid.Column="1"  Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                                        </Grid>

                                        <c1:C1DataGrid  Grid.Row="4" Grid.Column="1" x:Name="dgTruckingStart" HeadersVisibility="Column" ColumnHeaderHeight="40"  
                                                        IsReadOnly="False" CanUserFilter="False" CanUserReorderColumns="False"  SelectionMode="SingleCell"  MouseOverBrush="Transparent"  HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto"  FontSize="11" ClipboardPasteMode="None" Grid.ColumnSpan="4" PreviewMouseDown="dgTruckingStart_PreviewMouseDown" LoadedCellPresenter="dgTruckingStart_LoadedCellPresenter" Margin="7,7,1,1" Grid.RowSpan="2">
                                            <!--IsReadOnly="False" CanUserFilter="False" CanUserReorderColumns="False"  SelectionMode="None"  MouseOverBrush="Transparent" FrozenTopRowsCount="3" HorizontalScrollBarVisibility="Auto"  VerticalScrollBarVisibility="Auto"  FontSize="11" ClipboardPasteMode="None" Grid.ColumnSpan="3" PreviewMouseDown="dgTruckingStart_PreviewMouseDown" Margin="7,7,1,1" Grid.RowSpan="2">-->
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn Binding="{Binding CHK, Mode=OneWay}" Width="Auto" HorizontalAlignment="Center" CanUserSort="False" IsReadOnly="True" >
                                                    <c1:DataGridCheckBoxColumn.Header>
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                            <CheckBox x:Name="chkAll" Width="20" Checked="chkAll_Checked" Unchecked="chkAll_Unchecked" />
                                                        </StackPanel>
                                                    </c1:DataGridCheckBoxColumn.Header>
                                                </c1:DataGridCheckBoxColumn>
                                                <c1:DataGridTextColumn    Header = "결과"             Binding = "{Binding RESULT}"          HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True"  Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn    Header = "GR_ID"            Binding = "{Binding GR_ID}"           HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "LOTID"            Binding = "{Binding LOTID}"           HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "공정"             Binding = "{Binding PROCNAME}"        HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "공정"             Binding = "{Binding PROCID}"          HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn    Header = "재공상태"         Binding = "{Binding WIPSNAME}"        HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "재공상태"         Binding = "{Binding WIPSTAT}"         HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn    Header = "착공일시"         Binding = "{Binding WIPDTTM_ST}"      HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "완공일시"         Binding = "{Binding WIPDTTM_ED}"      HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "라인"             Binding = "{Binding EQSGNAME}"        HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "라인"             Binding = "{Binding EQSGID}"          HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn    Header = "제품"             Binding = "{Binding PRODID}"          HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "그룹일시"         Binding = "{Binding GR_SET_DTTM}"     HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "NOTE"             Binding = "{Binding NOTE}"            HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "라벨 발행 여부"   Binding = "{Binding LABEL_PRT_FLAG}"  HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn    Header = "착공 가능 여부"   Binding = "{Binding CAN_START_FLAG}"  HorizontalAlignment="Center"     Width="Auto"  IsReadOnly="True" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>

                                <!-- 투입 정보 -->
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Border   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />



                                    <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4">
                                        <TextBlock Style="{StaticResource Content_ModuleTitleStyle}">
                                            <Run Text="{Binding ConverterParameter='공정보고' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"></Run>
                                        </TextBlock>
                                    </Grid>




                                    <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,1,1,1" />

                                        <Button Grid.Row="1"  Grid.Column="3"  x:Name="btnConfirm"      Content="{Binding ConverterParameter=확정,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnConfirm_Click"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </c1:C1TabItem>


                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Trucking 완공'}" >
                    <Grid>

                        <!-- Main Grid -->
                        <Grid Grid.Column="1" x:Name="EndTab">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="2.5*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="1*"/>
                                <!--우측에 기능 제외-->
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="0"/>
                            </Grid.ColumnDefinitions>

                            <!-- Left Grid -->
                            <Grid Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <!-- 작업 정보 영역 -->
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="0"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="8"/>

                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- SubTitle Area -->
                                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                                        <Border BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                                        <TextBlock Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='그룹 상태 정보' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"></Run>
                                        </TextBlock>
                                    </Grid>

                                    <!-- Search Area -->

                                    <Grid x:Name="endTabgridSearchAreaLeft" Grid.Row="2" Grid.Column="0"  Grid.ColumnSpan="3"  >
                                        <Border  Style="{StaticResource Condition_BorderStyle}">
                                            <Grid Grid.Row="2" Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="5"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="8"/>
                                                </Grid.RowDefinitions>

                                                <!-- Search Area 1 Line -->

                                                <Grid Grid.Row="1" >
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="13" />
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="8"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="13" />
                                                    </Grid.ColumnDefinitions>


                                                    <Grid Grid.Column="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="8" />
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="3" />
                                                            <ColumnDefinition Width="Auto" />
                                                            <ColumnDefinition Width="3" />
                                                            <ColumnDefinition Width="Auto" />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                                        <ctrlLib:LGCDatePicker  Grid.Column="2" x:Name="EndDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />
                                                        <TextBlock              Grid.Column="4" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                                        <ctrlLib:LGCDatePicker  Grid.Column="6" x:Name="EndDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />
                                                    </Grid>

                                                </Grid>


                                                <!-- Search Area 2 Line -->
                                                <Grid Grid.Row="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="13"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="8"/>
                                                        <ColumnDefinition Width="1*"/>
                                                        <ColumnDefinition Width="Auto"/>
