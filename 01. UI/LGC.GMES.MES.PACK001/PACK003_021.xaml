<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" x:Class="LGC.GMES.MES.PACK001.PACK003_021"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:Controls="clr-namespace:LGC.GMES.MES.PACK001.Controls"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="1600" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/C1DataGridStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="포장기 설정 및 투입 및 혼입설정">
            <Grid x:Name="grdContent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*" />
                    <RowDefinition Height="12" />
                    <RowDefinition Height="3*" />
                </Grid.RowDefinitions>
                <!-- 위 -->
                <Grid x:Name="grdTop" Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.RowSpan="2" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                    <TextBlock Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource Content_ModuleTitleStyle}">
                        <Run Text="{Binding ConverterParameter='포장기설정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                    </TextBlock>

                    <Border Grid.Row="3" Grid.RowSpan="3" Style="{StaticResource Condition_BorderStyle}" />
                    <Grid Grid.Row="3" Grid.RowSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="140" />
                                <ColumnDefinition Width="280" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
                                <TextBlock Text="{Binding ConverterParameter='포장기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" />
                            </StackPanel>
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboPackEqptID1" DisplayMemberPath="EQPTNAME" SelectedValuePath="EQPTID" MinWidth="250" Height="25" VerticalAlignment="Center" />
                            <Controls:UcPersonInfo Grid.Column="2" x:Name="ucPersonInfo" HorizontalAlignment="Right" VerticalAlignment="Stretch" Height="25" />
                            <Button Grid.Column="4" x:Name="btnSearch1" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Click="btnSearch_Click" />
                        </Grid>
                    </Grid>

                    <Border Grid.Row="5" Grid.RowSpan="2" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                    <Grid Grid.Row="5">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" x:Name="txtPackEquipmentProductBaseSet" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" />
                            <Button Grid.Column="6" x:Name="btnPlus1" Content="{Binding ConverterParameter=Title11, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonAddStyle}" Height="25" Width="25" Cursor="Hand" Click="btnPlus1_Click" />
                            <Button Grid.Column="8" x:Name="btnMinus1" Content="{Binding ConverterParameter=Minus, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonDeleteStyle}" Height="25" Width="25" Cursor="Hand" Click="btnMinus1_Click" />
                            <Button Grid.Column="10" x:Name="btnSave1" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSave_Click" />
                        </Grid>
                    </Grid>

                    <Border Grid.Row="6" BorderThickness="1,1,1,1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                    <c1:C1DataGrid Grid.Row="6"
                                   x:Name="dgGrid1"
                                   HeadersVisibility="Column"
                                   SelectionMode="MultiRow"
                                   CanUserAddRows="True"
                                   CanUserEditRows="True"
                                   CanUserRemoveRows="True"
                                   BeginningNewRow="dgGrid1_BeginningNewRow"
                                   BeginningEdit="dgGrid1_BeginningEdit"
                                   BeganEdit="dgGrid1_BeganEdit"
                                   CommittedEdit="dgGrid1_CommittedEdit"
                                   LoadedCellPresenter="dgGrid1_LoadedCellPresenter"
                                   MouseDoubleClick="dgGrid_MouseDoubleClick">
                        <c1:C1DataGrid.Resources>
                            <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush Stretch="Uniform" />
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </c1:C1DataGrid.Resources>
                        <c1:C1DataGrid.Columns>
                            <c1:DataGridCheckBoxColumn Width="Auto" Header="선택"             Binding="{Binding CHK, Mode=TwoWay}"   HorizontalAlignment="Center" VerticalAlignment="Center" PropertyChanged="dgGrid1CheckBoxColumn_PropertyChanged" CanUserSort="False" />
                            <c1:DataGridTextColumn     Width="0"    Header="사용유무"         Binding="{Binding USE_FLAG}"           HorizontalAlignment="Left"   VerticalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="포장기"           Binding="{Binding PACK_EQPTID}"        HorizontalAlignment="Left"   VerticalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="제품ID"           Binding="{Binding PRODID}"             HorizontalAlignment="Left"   VerticalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="자동반송여부"     Binding="{Binding AUTO_TRF_FLAG}"      HorizontalAlignment="Left"   VerticalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="Auto" Header="사용유무"         Binding="{Binding USE_FLAG_NAME}"      HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="포장기"           Binding="{Binding PACK_EQPTNAME}"      HorizontalAlignment="Left"   VerticalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="제품ID"           Binding="{Binding PRODNAME}"           HorizontalAlignment="Left"   VerticalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="자동반송여부"     Binding="{Binding AUTO_TRF_FLAG_NAME}" HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridNumericColumn  Width="Auto" Header="반송요청도달수량" Binding="{Binding NEXT_REQ_BAS_QTY}"   HorizontalAlignment="Right"  VerticalAlignment="Center" EditOnSelection="True" Format="#,###0" />
                            <c1:DataGridNumericColumn  Width="Auto" Header="대기경과시간"     Binding="{Binding WAIT_ENABLE_TIME}"   HorizontalAlignment="Right"  VerticalAlignment="Center" EditOnSelection="True" Format="#,###0" />
                            <c1:DataGridNumericColumn  Width="Auto" Header="반송LOT수량"      Binding="{Binding TRF_LOT_QTY}"        HorizontalAlignment="Right"  VerticalAlignment="Center" EditOnSelection="True" Format="#,###0" />
                            <c1:DataGridTextColumn     Width="Auto" Header="생성자"           Binding="{Binding INSUSER}"            HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="생성일시"         Binding="{Binding INSDTTM}"            HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="수정자"           Binding="{Binding UPDUSER}"            HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="수정일시"         Binding="{Binding UPDDTTM}"            HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" />
                        </c1:C1DataGrid.Columns>
                    </c1:C1DataGrid>
                </Grid>

                <GridSplitter Grid.Row="1" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                <!-- 아래 -->
                <Grid x:Name="grdBottom1" Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="0" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.RowSpan="2" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                    <TextBlock Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource Content_ModuleTitleStyle}">
                        <Run Text="{Binding ConverterParameter='투입혼입설정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                    </TextBlock>


                    <Border Grid.Row="3" Grid.RowSpan="2" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                    <Grid Grid.Row="3">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="100" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="50" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="25" />
                                <ColumnDefinition Width="15" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" x:Name="txtGridRowCount2" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0" />
                            <TextBlock Grid.Column="3" x:Name="txtRemark" Text="Jeśli nie ma wyboru, jest on traktowany jako ”ALL”, a dla AssyArea, ElecEqpt i AssyEqpt ustawienie miksowania wejściowego jest ustawione na CHK_ALLOW." Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0" />
                            <c1:C1NumericBox Grid.Column="6" x:Name="numericCount2" Minimum="1" Value="1" CornerRadius="0" Width="50" Height="25" />
                            <Button Grid.Column="8" x:Name="btnPlus2" Content="{Binding ConverterParameter=Title11, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonAddStyle}" Height="25" Width="25" Cursor="Hand" Click="btnPlusMinus_Click" />
                            <Button Grid.Column="10" x:Name="btnMinus2" Content="{Binding ConverterParameter=Minus, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonDeleteStyle}" Height="25" Width="25" Cursor="Hand" Click="btnPlusMinus_Click" />
                            <Button Grid.Column="12" x:Name="btnSave2" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSave_Click" />
                        </Grid>
                    </Grid>

                    <Border Grid.Row="4" BorderThickness="1,1,1,1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                    <c1:C1DataGrid Grid.Row="4"
                                   x:Name="dgGrid2"
                                   HeadersVisibility="Column"
                                   SelectionMode="SingleRow"
                                   CanUserAddRows="True"
                                   CanUserEditRows="True"
                                   CanUserRemoveRows="True"
                                   BeginningNewRow="dgGrid2_BeginningNewRow"
                                   BeginningEdit="dgGrid2_BeginningEdit"
                                   BeganEdit="dgGrid2_BeganEdit"
                                   CommittedEdit="dgGrid2_CommittedEdit"
                                   LoadedCellPresenter="dgGrid2_LoadedCellPresenter"
                                   MouseDoubleClick="dgGrid_MouseDoubleClick" LoadedRowPresenter="dgGrid2_LoadedRowPresenter">
                        <c1:C1DataGrid.Resources>
                            <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                <Setter Property="Background">
                                    <Setter.Value>
                                        <ImageBrush Stretch="Uniform" />
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </c1:C1DataGrid.Resources>
                        <c1:C1DataGrid.Columns>
                            <c1:DataGridCheckBoxColumn Binding="{Binding CHK, Mode=TwoWay}" Width="Auto" HorizontalAlignment="Center" CanUserSort="False">
                                <c1:DataGridCheckBoxColumn.Header>
                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                        <CheckBox x:Name="chkAll2" Margin="0" Width="19" Checked="chkAll_Checked" Unchecked="chkAll_Unchecked" />
                                    </StackPanel>
                                </c1:DataGridCheckBoxColumn.Header>
                            </c1:DataGridCheckBoxColumn>
                            <c1:DataGridTextColumn     Width="0"    Header="투입혼입유형"         Binding="{Binding INPUT_MIX_TYPE_CODE}"          HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="사용유무"             Binding="{Binding USE_FLAG}"                     HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="포장기"               Binding="{Binding PACK_EQPTID}"                  HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="제품ID"               Binding="{Binding PRODID}"                       HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="투입혼입설정방법"     Binding="{Binding INPUT_MIX_CHK_MTHD_CODE}"      HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="조립동"               Binding="{Binding PROD_AREAID_LIST}"             HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="전극설비"             Binding="{Binding PROD_ELTR_LINE_LIST}"          HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="조립설비"             Binding="{Binding PROD_ASSY_LINE_LIST}"          HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="PACK_LINE"            Binding="{Binding PROD_PACK_LINE_LIST}"          HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="LOGIS_PACK_TYPE_NAME" Binding="{Binding LOGIS_PACK_TYPE}"              HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn     Width="0"    Header="포장혼입유형"         Binding="{Binding PACK_MIX_TYPE_CODE}"           HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
																							      
                            <c1:DataGridTextColumn     Width="Auto" Header="사용유무"             Binding="{Binding USE_FLAG_NAME}"                HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="포장기"               Binding="{Binding PACK_EQPTNAME}"                HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="제품ID"               Binding="{Binding PRODNAME}"                     HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="투입혼입설정"         Binding="{Binding INPUT_MIX_CHK_MTHD_CODE_NAME}" HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="조립동"               Binding="{Binding PROD_AREAID_LIST_NAME}"        HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="전극설비"             Binding="{Binding PROD_ELTR_LINE_LIST_NAME}"     HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="조립설비"             Binding="{Binding PROD_ASSY_LINE_LIST_NAME}"     HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="PACK_LINE"            Binding="{Binding PROD_PACK_LINE_LIST_NAME}"     HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="LOGIS_PACK_TYPE_NAME" Binding="{Binding LOGIS_PACK_TYPE_NAME}"         HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="BOX_LOT_SET_DATE"     Binding="{Binding BOX_LOT_SET_DATE}"             HorizontalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="포장혼입유형"         Binding="{Binding PACK_MIX_TYPE_CODE_NAME}"      HorizontalAlignment="Left"   IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="생성자"               Binding="{Binding INSUSER}"                      HorizontalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="생성일시"             Binding="{Binding INSDTTM}"                      HorizontalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="수정자"               Binding="{Binding UPDUSER}"                      HorizontalAlignment="Center" IsReadOnly="True" />
                            <c1:DataGridTextColumn     Width="Auto" Header="수정일시"             Binding="{Binding UPDDTTM}"                      HorizontalAlignment="Center" IsReadOnly="True" />
                        </c1:C1DataGrid.Columns>
                    </c1:C1DataGrid>
                </Grid>

                <!-- 오만가지 기준정보 선택 Popup -->
                <Popup x:Name="popupBaseInfo" IsOpen="False" AllowsTransparency="True" PopupAnimation="Slide" Height="700" LostFocus="popupBaseInfo_LostFocus">
                    <Border BorderBrush="#ffbebebe" BorderThickness="3">
                        <Grid x:Name="grdPopup">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <!-- Title -->
                                <RowDefinition Height="60" />
                                <RowDefinition Height="8" />
                                <!-- Grid -->
                                <RowDefinition Height="*" />
                                <RowDefinition Height="8" />
                                <!-- Bottom -->
                                <RowDefinition Height="80" />
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Name="defColumnWhiteSpaceLeft" Width="8" />
                                <ColumnDefinition Name="defColumnGridShop" Width="350" />
                                <ColumnDefinition Name="defColumnWhiteSpace1" Width="8" />
                                <ColumnDefinition Name="defColumnGridArea" Width="350" />
                                <ColumnDefinition Name="defColumnWhiteSpace2" Width="8" />
                                <ColumnDefinition Name="defColumnGridEquipment" Width="350" />
                                <ColumnDefinition Name="defColumnWhiteSpaceRight" Width="8" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="7" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                            <!--Title-->
                            <Grid x:Name="grdTitle" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="2" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <DockPanel Name="pnlTitleBaseInfo" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <TextBlock x:Name="txtPopupTitle" Text="PopupTitle" DockPanel.Dock="Left" Style="{StaticResource Content_ModuleTitleStyle}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                </DockPanel>

                                <Border BorderBrush="#ffaaaaaa" Grid.Column="1" BorderThickness="1" Width="32" Height="32">
                                    <Image x:Name="imgClose" Stretch="Fill" Width="16" Height="16" Source="/LGC.GMES.MES.ControlsLibrary;Component/Images/LGC/title_btn_i_close.png" MouseLeftButtonUp="Image_MouseLeftButtonUp" />
                                </Border>
                                <Border BorderBrush="#ffaaaaaa" Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="1" />
                            </Grid>

                            <!--Bottom-->
                            <Grid x:Name="grdBottom" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="#ffaaaaaa" BorderThickness="1" />
                                <DockPanel Name="pnlRemark" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <TextBlock x:Name="txtPopupRemark" Text="선택 내용이 없으면 전체 선택(으)로 처리됩니다." DockPanel.Dock="Right" Style="{StaticResource Content_ModuleTitleStyle}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,0" />
                                </DockPanel>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnClear" Grid.Column="1" Content="{Binding ConverterParameter='선택초기화', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnClear_Click" />
                                    <Button x:Name="btnSelect" Grid.Column="3" Content="{Binding ConverterParameter='선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSelect_Click" />
                                    <Button x:Name="btnHide" Grid.Column="5" Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnHide_Click" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Popup>

                <!-- BOX LOT SET DATE Popup -->
                <Popup x:Name="popupDate" IsOpen="False" AllowsTransparency="True" PopupAnimation="Slide" Height="220" LostFocus="popupBaseInfo_LostFocus">
                    <Border BorderBrush="#ffbebebe" BorderThickness="3">
                        <Grid x:Name="grdPopupDate">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <!-- Title -->
                                <RowDefinition Height="60" />
                                <RowDefinition Height="8" />
                                <!-- Grid -->
                                <RowDefinition Height="*" />
                                <RowDefinition Height="8" />
                                <!-- Bottom -->
                                <RowDefinition Height="80" />
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="330" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                            <!--Title-->
                            <Grid x:Name="grdTitleDate" Grid.Row="1" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="2" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <DockPanel Name="pnlTitleDate" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <TextBlock x:Name="txtPopupTitleDate" Text="PopupTitle" DockPanel.Dock="Left" Style="{StaticResource Content_ModuleTitleStyle}" VerticalAlignment="Center" HorizontalAlignment="Left" />
                                </DockPanel>

                                <Border BorderBrush="#ffaaaaaa" Grid.Column="1" BorderThickness="1" Width="32" Height="32">
                                    <Image x:Name="imgCloseDate" Stretch="Fill" Width="16" Height="16" Source="/LGC.GMES.MES.ControlsLibrary;Component/Images/LGC/title_btn_i_close.png" MouseLeftButtonUp="Image_MouseLeftButtonUp" />
                                </Border>
                                <Border BorderBrush="#ffaaaaaa" Grid.Row="1" Grid.ColumnSpan="2" BorderThickness="1" />
                            </Grid>
                            <!-- Date -->
                            <ctrlLib:LGCDatePicker Grid.Row="3" Grid.Column="1" x:Name="dtpBoxLotSetDate" DatepickerType="Date" HorizontalAlignment="Center" Width="150" Height="Auto" VerticalAlignment="Center" />

                            <!--Bottom-->
                            <Grid x:Name="grdBottomDate" Grid.Row="5" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.ColumnSpan="1" BorderBrush="#ffaaaaaa" BorderThickness="1" />
                                <DockPanel Name="pnlRemarkDate" Grid.Row="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <TextBlock x:Name="txtPopupRemarkDate" Text="선택 내용이 없으면 전체 선택(으)로 처리됩니다." DockPanel.Dock="Right" Style="{StaticResource Content_ModuleTitleStyle}" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,0,0" />
                                </DockPanel>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnDateClear" Grid.Column="1" Content="{Binding ConverterParameter='선택초기화', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnClearDate_Click" />
                                    <Button x:Name="btnDateSelect" Grid.Column="3" Content="{Binding ConverterParameter='선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSelectDate_Click" />
                                    <Button x:Name="btnDateHide" Grid.Column="5" Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnHide_Click" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Popup>



                <!-- 반송종료 여부 Confirm Popup -->
                <Popup x:Name="popupTransferConfirm" IsOpen="False" AllowsTransparency="True" PopupAnimation="Slide" Height="550" LostFocus="popupBaseInfo_LostFocus">
                    <Border BorderBrush="#ffbebebe" BorderThickness="3">
                        <Grid x:Name="grdPopupTransferCancel">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <!-- Title -->
                                <RowDefinition Height="60" />
                                <RowDefinition Height="8" />
                                <!-- Grid -->
                                <RowDefinition Height="80" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="8" />
                                <!-- Bottom -->
                                <RowDefinition Height="60" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="900" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                            <!--Title-->
                            <Grid x:Name="grdTitleTransferCancel" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="2" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <DockPanel Name="pnlTitleTransferConfirm" Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <TextBlock x:Name="txtTitleTransferCancel" DockPanel.Dock="Left" Style="{StaticResource Content_ModuleTitleStyle}" VerticalAlignment="Center" HorizontalAlignment="Left">
                                        <Run Text="{Binding ConverterParameter='반송종료여부선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                    </TextBlock>
                                </DockPanel>
                                <Border BorderBrush="#ffaaaaaa" Grid.Column="1" BorderThickness="1" Width="32" Height="32">
                                    <Image x:Name="imgCloseTransferCancel" Stretch="Fill" Width="16" Height="16" Source="/LGC.GMES.MES.ControlsLibrary;Component/Images/LGC/title_btn_i_close.png" MouseLeftButtonUp="Image_MouseLeftButtonUp" />
                                </Border>
                                <Border BorderBrush="#ffaaaaaa" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" />
                            </Grid>

                            <!--Comment 1 -->
                            <TextBlock x:Name="txtMessageTransferCancel" Grid.Row="3" Grid.Column="1"
                                       TextWrapping="WrapWithOverflow"
                                       Style="{StaticResource Content_ModuleTitleStyle}"
                                       HorizontalAlignment="Left" VerticalAlignment="Center"
                                       Text="아래와 같이 투입 및 혼입설정 정보가 변경되기 전에 해당 포장기로 반송 또는 반송요청 중인 항목이 존재합니다. 투입 및 혼입설정 정보 저장 및 아래의 반송내역을 종료 또는 취소하시겠습니까?" />
                            <c1:C1DataGrid Grid.Row="4" Grid.Column="1"
                                           x:Name="dgTransferRequestHistory"
                                           HeadersVisibility="Column"
                                           IsReadOnly="True"
                                           Width="Auto"
                                           SelectionMode="SingleRow">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn    Header="포장기"             Binding="{Binding PACK_EQPTNAME}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                    <c1:DataGridTextColumn    Header="PRODID"             Binding="{Binding PRODID}"                 HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                    <c1:DataGridTextColumn    Header="PRJT_NAME"          Binding="{Binding PRJT_NAME}"              HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                    <c1:DataGridTextColumn    Header="반송요청유형"       Binding="{Binding TRF_REQ_GNRT_TYPE_CODE}" HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                    <c1:DataGridTextColumn    Header="진행상태 코드"      Binding="{Binding TRF_REQ_STAT_CODE}"      HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                    <c1:DataGridTextColumn    Header="진행상태명"         Binding="{Binding TRF_REQ_STAT_CODE_NAME}" HorizontalAlignment="Left"   Width="Auto" IsReadOnly="True" />
                                    <c1:DataGridNumericColumn Header="요청수량"           Binding="{Binding TRF_LOT_QTY}"            HorizontalAlignment="Right"  Width="Auto" IsReadOnly="True" Format="#,###0" />
                                    <c1:DataGridNumericColumn Header="이동중 수량"        Binding="{Binding RECEIVING_LOT_QTY}"      HorizontalAlignment="Right"  Width="Auto" IsReadOnly="True" Format="#,###0" />
                                    <c1:DataGridNumericColumn Header="이동완료수량"       Binding="{Binding RECEIVED_LOT_QTY}"       HorizontalAlignment="Right"  Width="Auto" IsReadOnly="True" Format="#,###0" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                            <!--Bottom-->
                            <Grid x:Name="grdBottomTransferCancel" Grid.Row="6" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="10*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.ColumnSpan="2" BorderBrush="#ffaaaaaa" BorderThickness="1" />
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnSaveConfirmWithTransferComplete" Grid.Column="2" Content="{Binding ConverterParameter='반송종료후저장', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSaveConfirmWithTransferComplete_Click" />
                                    <Button x:Name="btnSaveConfirm" Grid.Column="4" Content="{Binding ConverterParameter='저장', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSaveConfirm_Click" />
                                    <Button x:Name="btnHideConfirm" Grid.Column="6" Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnHideConfirm_Click" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </Popup>

            </Grid>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>