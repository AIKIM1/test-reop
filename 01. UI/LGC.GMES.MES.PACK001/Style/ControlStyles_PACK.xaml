    <Style TargetType="{x:Type c1:C1DataGrid}" x:Key="Grid_Row_Ins">   
        <Setter Property="IsReadOnly" Value="False"/>
        <Setter Property="HeadersVisibility" Value="Column" />
        <Setter Property="SelectionMode" Value="SingleCell" />
        <Setter Property="RowHeight" Value="Auto" />
        <Setter Property="CanUserRemoveRows" Value="True" />
        <Setter Property="CanUserAddRows" Value="True" />
        <Setter Property="NewRowVisibility" Value="Bottom" />
        <Setter Property="Width" Value="Auto" />       
    </Style>

    <Style TargetType="{x:Type c1:DataGridColumnHeaderRow}" x:Key="GridColunHeaderRow">
        <Setter Property="Height" Value="50"/>       
    </Style>

    <Style TargetType="{x:Type c1:DataGridColumnHeaderPresenter}" x:Key="Grid_Header_1">
       
