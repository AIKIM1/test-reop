<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK001_014"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml"/>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml"/>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="불량 자재 처리">
            <Grid>
                <c1:C1TabControl x:Name="tcMain"   Grid.Column="1" Grid.Row="1" SelectionChanged="tcMain_SelectionChanged" >
                    <c1:C1TabItem x:Name="tabItem_Input" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='자재불량 입력'}"  >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="1"  Style="{StaticResource Condition_BorderStyle}"></Border>

                            <!-- 조회 조건 영역 -->
                            <Grid   Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="9"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- <조회조건> -->
                                    <!--Work Center(콤보)-->
                                    <!--<TextBlock Grid.Column="2" Text="{Binding ConverterParameter='WORKCENTER', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox  Grid.Column="3" x:Name="cboWordCenter" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch"
                                            DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>-->

                                    <!--Work Order 일자 -->
                                    <TextBlock              Grid.Column="1" Text="{Binding ConverterParameter='계획시작일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,12,7,12"/>
                                    <ctrlLib:LGCDatePicker  Grid.Column="2" x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" SelectedDataTimeChanged="dtpDate_SelectedDataTimeChanged" Margin="3,6"/>
                                    <TextBlock              Grid.Column="3" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="8,12,7,12"/>
                                    <ctrlLib:LGCDatePicker  Grid.Column="5" x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" Margin="3,6"/>

                                    <!--라인(콤보)-->
                                    <TextBlock              Grid.Column="7" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,12,8,12"/>
                                    <c1:C1ComboBox          Grid.Column="8" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" SelectedValueChanged="cboEquipmentSegment_SelectedValueChanged" Margin="3,8"/>


                                    <!-- 모델약어 -->
                                    <TextBlock              Grid.Column="10" Text="{Binding ConverterParameter='모델약어', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" Margin="0,12,7,12"/>
                                    <c1:C1ComboBox          Grid.Column="11" x:Name="cboProductModel" Style="{StaticResource C1ComboBoxStyle}" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboProductModel_SelectedValueChanged" Margin="3,8"/>

                                    <RadioButton            Grid.Column="12" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=당월}"   x:Name="rdoCurMonth"    GroupName="PageFixed" Style="{StaticResource SearchCondition_RadioButtonStyle}"   Height="23" Margin="3" Visibility="Hidden" Checked="CurMonth_Checked"/>
                                    <RadioButton            Grid.Column="13" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=전월}"   x:Name="rdoPreMonth"    GroupName="PageFixed" Style="{StaticResource SearchCondition_RadioButtonStyle}"   Height="23" Margin="3" Visibility="Hidden" Checked="PreMonth_Checked"/>

                                    <!--ERP 미전송대상 제외-->
                                    <CheckBox               Grid.Column="14" x:Name="chkExclFlag" Content="{Binding ConverterParameter='Main 자재',     Converter={StaticResource GlobalObjectDicConverter}}"  Style="{StaticResource SearchCondition_CheckBoxStyle}" MinWidth="100" Margin="10,0,0,0"/>

                                    <!--Work Order(콤보)-->
                                    <!--<TextBlock Grid.Column="9" Text="{Binding ConverterParameter='WORKORDER', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,12,6,12"/>
                                    <c1:C1ComboBox Grid.Column="10" x:Name="cboWorkOrder" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" SelectedValueChanged="cboWorkOrder_SelectedValueChanged" Margin="5,9,1,8"/>-->

                                    <!--textbox(prodid)-->
                                    <!--<TextBox Grid.Column="10" x:Name="txtProd" Text=""    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1"/>-->
                                    <!--<TextBlock              Grid.Column="13" x:Name="tbProd" Text="" Style="{StaticResource Content_InputForm_LabelStyle}"/>-->

                                    <!--조회 버튼-->
                                    <Button                 Grid.Column="16"  x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Right" Click="btnSearch_Click" Margin="0,6"/>
                                </Grid>
                            </Grid>

                            <!-- 조회 결과 영역 -->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="6*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0"  Style="{StaticResource Condition_BorderStyle}"></Border>

                                <!--Sub 영역 01-->
                                <Grid  Grid.Column="0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="36"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Border Grid.Row="1"  Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>

                                    <!-- 왼쪽 타이틀 -->
                                    <Grid   Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='W/O', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}"/>
                                    </Grid>

                                    <!--W/O 그리드-->
                                    <Grid Grid.Row="1" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <c1:C1DataGrid Grid.Column="1" x:Name="dgWordOrderList" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" Width="Auto" MouseLeftButtonUp="dgWordOrderList_MouseLeftButtonUp"  >
                                            <c1:C1DataGrid.Columns>
                                                <!--<c1:DataGridCheckBoxColumn  Header = "선택"        Binding = "{Binding CHK}"        HorizontalAlignment="Center" Width="40"/>-->
                                                <c1:DataGridTextColumn      Header = "W/O"         Binding = "{Binding WOID}"       HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "공정군"      Binding = "{Binding PRD_CLASS}"  HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "모델약어"    Binding = "{Binding MODEL}"      HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "제품ID"      Binding = "{Binding PRODID}"     HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridNumericColumn   Header = "계획수량"    Binding = "{Binding PLANQTY}"    HorizontalAlignment="Right"  Width="Auto" Format="#,##0"/>
                                                <c1:DataGridNumericColumn   Header = "생산수량"    Binding = "{Binding OUTQTY}"     HorizontalAlignment="Right"  Width="Auto" Format="#,##0"/>
                                                <c1:DataGridTextColumn      Header = "계획시작일"  Binding = "{Binding PLANSTDTTM}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "계획종료일"  Binding = "{Binding PLANEDDTTM}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>

                                <!--Splitter-->
                                <GridSplitter  Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                                <!--Sub 영역 02-->
                                <Grid   Grid.Row="0" Grid.Column="2" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="36"/>
                                        <RowDefinition Height="36"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="36"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0"  Grid.RowSpan="2" Style="{StaticResource Condition_BorderStyle}"></Border>
                                    <Border Grid.Row="4"   Style="{StaticResource Condition_BorderStyle}"></Border>

                                    <Border Grid.Row="1" Grid.RowSpan="2" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>

                                    <!--Sub 영역 02 Title-->
                                    <Grid   Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>

                                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='전송정보', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}"/>
                                    </Grid>

                                    <!-- 선택 W/O 정보 표시 -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>

                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="150"/>

                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="200"/>

                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Work Order -->
                                        <TextBlock      Grid.Column="1" Text="{Binding ConverterParameter='WORKORDER', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <TextBox        Grid.Column="2" x:Name="txtWOID" Style="{StaticResource SearchCondition_TextBoxStyle}" Height="20" IsEnabled="False"></TextBox>

                                        <!-- 제품명 -->
                                        <TextBlock      Grid.Column="3" Text="{Binding ConverterParameter='제품설명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <TextBox        Grid.Column="4" x:Name="txtProdID" Style="{StaticResource SearchCondition_TextBoxStyle}" Height="20" IsEnabled="False"></TextBox>

                                        <!--선택취소-->
                                        <Button         Grid.Column="6" x:Name="btnSelectCacel"    Content="{Binding ConverterParameter=선택취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                                        Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Click="btnSelectCacel_Click"/>
                                        <!--취소-->
                                        <Button         Grid.Column="8" x:Name="btncancel"    Content="{Binding ConverterParameter=취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                                        Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Click="btncancel_Click"/>
                                    </Grid>

                                    <!--전송 정보 Grid -->
                                    <Grid   Grid.Row="2" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>


                                        <c1:C1DataGrid Grid.Column="1" x:Name="dgWordOrder" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn  Header = "선택"        Binding = "{Binding CHK}"             HorizontalAlignment="Center" Width="40"/>
                                                <c1:DataGridTextColumn      Header = "W/O"         Binding = "{Binding WOID}"            HorizontalAlignment="Center" IsReadOnly="True"   Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "자재ID"      Binding = "{Binding R_MTRLID}"        HorizontalAlignment="Center" IsReadOnly="True"  Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "자재ID"      Binding = "{Binding MTRLID}"          HorizontalAlignment="Center" IsReadOnly="True"  Width="Auto"  Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Header = "자재명"      Binding = "{Binding MTRLNAME}"        HorizontalAlignment="Left"   IsReadOnly="True"  Width="Auto"/>
                                                <c1:DataGridTextColumn      Header = "자재설명"    Binding = "{Binding MTRLDESC}"        HorizontalAlignment="Left"   IsReadOnly="True"  Width="Auto"/>
                                                <c1:DataGridNumericColumn   Header = "수량"        Binding = "{Binding INPUT_QTY}"       HorizontalAlignment="Center" Width="Auto" Minimum="0"/>
                                                <c1:DataGridComboBoxColumn  Header = "귀책부서"    Binding = "{Binding IMPUTE}"          HorizontalAlignment="Left"   Width="Auto" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                                <c1:DataGridComboBoxColumn  Header = "폐기유형"    Binding = "{Binding RESNCODE}"        HorizontalAlignment="Left"   Width="Auto" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                                <!--<c1:DataGridTextColumn      Header = "폐기사유"    Binding = "{Binding SCRP_RSN_NOTE}"   HorizontalAlignment="Left"   Width="Auto" x:Name="txtImpute" IsReadOnly="False"/>-->
                                                <c1:DataGridTextColumn      Header = "상세내역"    Binding = "{Binding SCRP_RSN_NOTE}"   HorizontalAlignment="Left"   Width="Auto" x:Name="txtImpute" IsReadOnly="False"/>
                                                <!--<c1:DataGridComboBoxColumn  Header = "비용구분"    Binding = "{Binding COST_TYPE_CODE}"  HorizontalAlignment="Left"   Width="Auto" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>-->
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>

                                    </Grid>

                                    <!-- 버튼 -->
                                    <Grid Grid.Row="4">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="11" Style="{StaticResource Condition_Header_BorderStyle}"></Border>
                                        <!-- 전기일 -->
                                        <TextBlock              Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='전기일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <ctrlLib:LGCDatePicker  Grid.Row="1" Grid.Column="2" x:Name="dtpPostDate" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" Margin="3,6"/>

                                        <!--작업자-->
                                        <TextBlock              Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <TextBox                Grid.Row="1" Grid.Column="5" x:Name="txtUser" Style="{StaticResource SearchCondition_TextBoxStyle}" Width="60" HorizontalAlignment="Stretch" IsEnabled="False"></TextBox>
                                        <Button                 Grid.Row="1" Grid.Column="6" x:Name="btnUserSearch" Click="btnUserSearch_Click" Width="20" Height="20" BorderBrush="#FF0C0101" >
                                            <Button.Background>
                                                <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_input_search.png" Stretch="Fill"/>
                                            </Button.Background>
                                        </Button>
                                        <TextBlock              Grid.Row="1" Grid.Column="7" x:Name="tbUserInfo" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <!--전송-->
                                        <Button Grid.Row="1" Grid.Column="9" x:Name="btnTran"    Content="{Binding ConverterParameter=전송,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnTran_Click"/>
                                    </Grid>
                                </Grid>

                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem x:Name="tabItem_Cancle" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='자재불량 취소'}" Margin="0" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="1"  Style="{StaticResource Condition_BorderStyle}"></Border>

                            <!--조회 조건-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>

                                <!--1Row-->
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <!--상태(콤보)-->
                                    <Grid Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <!--<TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='전송상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox  Grid.Column="1" x:Name="cboStatus" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>-->
                                    </Grid>

                                    <!--날짜-->
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <!--전기일-->
                                        <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='전기일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <ctrlLib:LGCDatePicker  Grid.Column="1" x:Name="dtpDateFrom_C" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                        <TextBlock              Grid.Column="2" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                        <ctrlLib:LGCDatePicker  Grid.Column="3" x:Name="dtpDateTo_C" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                    </Grid>
                                    <!--<TextBlock  Grid.Column="5" Text="처리일" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>-->

                                    <!--작업자(TEXTBOX)-->
                                    <!--<Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <TextBox        Grid.Column="1" x:Name="txtUser_C" Style="{StaticResource SearchCondition_TextBoxStyle}"  HorizontalAlignment="Stretch" IsReadOnly="True" MouseDoubleClick="txtUser_MouseDoubleClick"></TextBox>
                                        <Button         Grid.Column="2" x:Name="btnUserSearch_C" Click="btnUserSearch_Click" Width="20" Height="20" BorderBrush="#FF0C0101" >
                                            <Button.Background>
                                                <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_input_search.png" Stretch="Fill"/>
                                            </Button.Background>
                                        </Button>

                                    </Grid>-->

                                    <!--작업자(textbock)-infor-->
                                    <!--<Grid Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        --><!--<c1:C1ComboBox  Grid.Column="0" x:Name="cboUser_C" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>--><!--
                                        <TextBlock              Grid.Row="1" Grid.Column="6" x:Name="tbUserInfo_C" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                                    </Grid>-->

                                    <!--SEARCH-->
                                    <Button Grid.Column="5"  x:Name="btnWoSearch_C"  Content="{Binding ConverterParameter=SEARCH,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Right" Click="btnWoSearch_Click"/>

                                </Grid>


                                <!--2Row-->
                                <Grid Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <!--AREA(동)-->
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <!--AREA(TEXTBLOCK)-->
                                        <TextBlock             Grid.Column="0" Text="{Binding ConverterParameter='AREA', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <!--AREA(COMBO)-->
                                        <c1:C1ComboBox         Grid.Column="1" x:Name="cboArea_C" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                                    </Grid>

                                    <!--라인-->
                                    <Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

