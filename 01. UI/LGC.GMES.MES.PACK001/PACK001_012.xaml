<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK001_012"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정진척(Pack)_일괄 폐기 처리">
            <Grid>
                <Border   Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                <c1:C1TabControl x:Name="tcMain" ItemsChanged="tcMain_ItemsChanged"  Grid.Column="2"  Margin="8" SelectionChanged="tcMain_SelectionChanged">
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='조회결과 처리'}"  >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--결과 content-->
                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="64" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border      Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>

                                <Grid Grid.Row="0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="4" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="30" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>

                                    <!--조회조건-->
                                    <!--ROW1-->
                                    
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='불량일시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <Grid Grid.Column="1" Margin="3,0,3,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <ctrlLib:LGCDatePicker Grid.Column="0" x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" Margin="0" />
                                            <ctrlLib:LGCDatePicker Grid.Column="2" x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" Margin="0"/>
                                        </Grid>
                                    </Grid>
                                    
                                    <!--라인(COMBO)-->
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='Line', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox   Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" />
                                    </Grid>

                                    <!--모델(COMBO)-->
                                    <Grid Grid.Row="0" Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox   Grid.Column="1" x:Name="cboProductModel" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" />
                                    </Grid>

                                    <!--제품분류(COMBO)-->
                                    <Grid Grid.Row="0" Grid.Column="2" Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='제품분류', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox   Grid.Column="1" x:Name="cboPrdtClass" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" />
                                    </Grid>

                                    <!--ROW2-->
                                    <!--제품코드(COMBO)-->
                                    <Grid Grid.Row="2" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='제품코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox   Grid.Column="1" x:Name="cboProduct" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" />
                                    </Grid>

                                    <!--불량발생공정(COMBO)-->
                                    <Grid Grid.Row="2" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='(*)불량발생공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox   Grid.Column="1" x:Name="cboProcessPack" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" />
                                    </Grid>

                                    <!--상태(COMBO)-->
                                    <Grid Grid.Row="2" Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="2*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='상태',Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox   Grid.Column="1" x:Name="cboStatus" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />
                                    </Grid>
                                    <!--<TextBlock       Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Text="{Binding ConverterParameter='불량유형필터', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <c1:C1ComboBox   Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="3" x:Name="cboModel11" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" />-->

                                    <!--조회 버튼-->
                                    <Button     Grid.Row="2" Grid.Column="4" x:Name="btnSearch" Content="{Binding ConverterParameter=Search, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />

                                </Grid>


                                <!--백그라운드용-->
                                <Border     Grid.Row="2" Style="{StaticResource Condition_BorderStyle}"/>

                                <!--조회결과의 콤보영역-->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="0" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="200" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>

                                    <!--일괄작업(COMBO)-->
                                    <TextBlock       Grid.Column="1" Text="{Binding ConverterParameter='일괄작업', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <!--<c1:C1ComboBox   Grid.Column="2" x:Name="cboWork" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />-->
                                    <c1:C1ComboBox   Grid.Column="2" x:Name="cboWork" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedValueChanged="cboWork_SelectedValueChanged" />

                                    <!--투입공정(COMBO)-->
                                    <TextBlock       Grid.Column="3" Text="{Binding ConverterParameter='투입공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Column="4" x:Name="cboReworkReturnProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                                    <TextBox         Grid.Column="4" x:Name="txtReworkReturnProcess"    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" Visibility="Hidden" />

                                    <!--귀책부서(COMBO)-->
                                    <TextBlock       Grid.Column="5" Text="{Binding ConverterParameter='귀책부서', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Column="6" x:Name="cboScrapIMPUTE_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>

                                    <!--사유(TEXTBOX)-->
                                    <TextBlock       Grid.Column="7" Text="{Binding ConverterParameter='사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox         Grid.Column="8" x:Name="txtReason"    Style="{StaticResource Content_InputForm_TextBoxStyle}" HorizontalAlignment="Stretch"  />
                                    <!--<c1:C1ComboBox   Grid.Column="7" x:Name="cboReason" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>-->

                                    <!--비용구분(COMBO)-->
                                    <TextBlock Grid.Column="9"  Text="{Binding ConverterParameter='비용구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                    <c1:C1ComboBox Grid.Column="10" x:Name="cboCostType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboCostType_SelectedValueChanged" />

                                    <!--유형코드(COMBO)-->
                                    <TextBlock Grid.Column="11"  Text="{Binding ConverterParameter='유형코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                    <c1:C1ComboBox Grid.Column="12" x:Name="cboDefectChoice" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboDefectChoice_SelectedValueChanged" />

                                    <!--전체선택(BUTTON)-->
                                    <Button     Grid.Column="14" x:Name="btnAllSelect"    Content="{Binding ConverterParameter=전체선택,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Click="btnAllSelect_Click" />

                                    <!--확정(BUTTON)-->
                                    <Button     Grid.Column="16" x:Name="btnAllEnd"    Content="{Binding ConverterParameter=확정,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnAllEnd_Click" />

                                    <!--EXCEL(BUTTON)-->
                                    <Button     Grid.Column="18" x:Name="btnExcel"    Content="{Binding ConverterParameter=Excel,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" HorizontalAlignment="Right" Click="btnExcel_Click" />
                                </Grid>

                                <!--건수-->
                                <Grid Grid.Row="4" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock x:Name="tbSearch_cnt" Grid.Column="1" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Center" />
                                    <TextBlock  Grid.Column="3"  Text="{Binding ConverterParameter='최신', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" Margin="3,3,0,3"/>
                                    <c1:C1ComboBox Grid.Column="4" x:Name="cboListCount" Height="18" MinWidth="50" Width="Auto" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboListCount_SelectedValueChanged"/>
                                    <TextBlock  Grid.Column="5"  Text="{Binding ConverterParameter='건', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"  Margin="0,3,0,3"/>
                                </Grid>

                                <!--조회결과의 Grid영역-->
                                <c1:C1DataGrid x:Name="dgSearchResult" Grid.Row="5" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" 
                                       MouseDoubleClick="dgSearchResult_MouseDoubleClick" Width="Auto">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridCheckBoxColumn Header = "선택"          Binding = "{Binding CHK}"             HorizontalAlignment="Left"     Width="40"/>
                                        <c1:DataGridTextColumn     Header = "LOTID"         Binding = "{Binding LOTID}"           HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                        <!--<c1:DataGridTextColumn     Header = "제품명"      Binding = "{Binding PRODNAME}"        HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>-->
                                        <c1:DataGridTextColumn     Header = "제품설명"      Binding = "{Binding PRODDESC}"        HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "불량발생공정"  Binding = "{Binding PROCNAME_CAUSE}"  HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "불량 발생일시" Binding = "{Binding ACTDTTM}"         HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "불량명"        Binding = "{Binding FAILNAME}"        HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "생산모델"      Binding = "{Binding MODLNAME}"        HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "라우터"        Binding = "{Binding ROUTNAME}"        HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "Line"          Binding = "{Binding EQSGNAME}"        HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "유형"          Binding = "{Binding PRODCLASS}"       HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "상태"          Binding = "{Binding PCTYNAME}"        HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='LOT SCAN 처리'}"  >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="34" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            
                            <!--LOTID 입력 영역-->
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="18" />
                                        <ColumnDefinition Width="132"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--백그라운드용-->
                                    <Border      Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>

                                    <!--LOTID(TEXTBLOCK)-->
                                    <TextBlock    Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <!--LOTID(TEXTBOX)-->
                                    <TextBox      Grid.Column="1" x:Name="txtLotID"   Style="{StaticResource TextBoxBaseStyle}" KeyDown="txtLotID_KeyDown" BorderBrush="Black" Grid.ColumnSpan="2" VerticalAlignment="Center"/>

                                    <!--LOT 정보-->
                                    <TextBlock    Grid.Column="4" x:Name="tbState" Text="" Foreground="Blue" FontWeight="Bold" VerticalAlignment="Center"/>
                                </Grid>
                                

                            </Grid>
                            
                            <!--입력 콤보/버튼/결과 그리드-->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--결과 content-->
                                <Grid  Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>

                                    <!--백그라운드용-->
                                    <Border     Grid.Row="0" Style="{StaticResource Condition_BorderStyle}"/>

                                    <!--조회결과의 콤보영역-->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="0" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="200" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>

                                        <!--일괄작업(COMBO)-->
                                        <TextBlock       Grid.Column="1" Text="{Binding ConverterParameter='일괄작업', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <c1:C1ComboBox   Grid.Column="2" x:Name="cboWork1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" SelectedValueChanged="cboWork1_SelectedValueChanged" />

                                        <!--투입공정(COMBO)-->
                                        <TextBlock       Grid.Column="3" Text="{Binding ConverterParameter='투입공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox   Grid.Column="4" x:Name="cboReworkReturnProcess1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                                        <TextBox         Grid.Column="4" x:Name="txtReworkReturnProcess1"    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" Visibility="Hidden" />

                                        <!--귀책부서(COMBO)-->
                                        <TextBlock       Grid.Column="5" Text="{Binding ConverterParameter='귀책부서', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox   Grid.Column="6" x:Name="cboScrapIMPUTE_CODE1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>

                                        <!--사유(TEXTBOX)-->
                                        <TextBlock       Grid.Column="7" Text="{Binding ConverterParameter='사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <TextBox         Grid.Column="8" x:Name="txtReason1"    Style="{StaticResource Content_InputForm_TextBoxStyle}" HorizontalAlignment="Stretch"  />
                                        <!--<c1:C1ComboBox   Grid.Column="7" x:Name="cboReason" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>-->

                                        <!--비용구분(COMBO)-->
                                        <TextBlock Grid.Column="9"  Text="{Binding ConverterParameter='비용구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                        <c1:C1ComboBox Grid.Column="10" x:Name="cboCostType1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboCostType1_SelectedValueChanged" />

                                        <!--유형코드(COMBO)-->
                                        <TextBlock Grid.Column="11"  Text="{Binding ConverterParameter='유형코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                        <c1:C1ComboBox Grid.Column="12" x:Name="cboDefectChoice1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboDefectChoice1_SelectedValueChanged" />

                                        <!--Excel(Upload) -->
                                        <!--<Button     Grid.Column="14" x:Name="btnExcelUpload"    Content="{Binding ConverterParameter=Excel Upload,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                        Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" HorizontalAlignment="Right" Click="btnExcelUpload_Click" />-->
                                        
                                        <!--선택취소(BUTTON)-->
                                        <Button     Grid.Column="16" x:Name="btnSelectCancel"    Content="{Binding ConverterParameter=선택취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                        Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Click="btnSelectCancel1_Click" />

