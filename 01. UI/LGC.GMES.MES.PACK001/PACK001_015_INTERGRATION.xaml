<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK001_015_INTERGRATION"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1280">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정진척(Pack 포장)_BMA 포장 관리">
            <Grid x:Name="main_grid">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>

                <Border   Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />


                <!--<Border    Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>-->
                <!--<Border Grid.Row="4" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />-->

                <!--왼쪽영역-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="34" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="8" />
                    </Grid.RowDefinitions>

                    <!--왼쪽 타이틀-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!--백그라운드용-->
                        <Border Grid.Row="0" Grid.ColumnSpan="5"  BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                        <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" Grid.ColumnSpan="2" ><Run Text="{Binding ConverterParameter='작업자입력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>

                        <!--포장 제품 : CLASS(TEXTBLOCK)-->
                        <TextBlock    Grid.Column="3" x:Name="txtBoxInfo" Text="" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>


                    </Grid>

                    <!--백그라운드용-->
                    <Border   Grid.Row="1" Grid.RowSpan="8" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1" />
                    <!--왼쪽 BOX ID-->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="29" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!--백그라운드용-->
                        <Border Grid.Row="0" Grid.RowSpan="5" Grid.Column="1"   Style="{StaticResource Condition_BorderStyle}"/>

                        <!--box id checkbox-->
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--BOXID 생성(CHECKBOX)-->
                            <CheckBox    Grid.Column="1"  x:Name="chkBoxId"   Content="{Binding ConverterParameter=BOXID자동생성,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  HorizontalAlignment="Left" IsChecked="False" Click="chkBoxId_Click"  />

                            <!--작업초기화(BUTTON)-->
                            <Button  Grid.Column="2" x:Name="btnReset"    Content="{Binding ConverterParameter=작업초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnReset_Click" />

                        </Grid>

                        <!--BOX ID TEXT-->
                        <Grid Grid.Row="2"  Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--BOXID(TEXTBLOCK)-->
                            <TextBlock    Grid.Column="1" Text="{Binding ConverterParameter='BOXID',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                            <!--BOXID입력(TEXTBOX)-->
                            <TextBox      Grid.Column="2" x:Name="txtBoxId" Text=""    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" KeyDown="txtBoxId_KeyDown" />

                            <!--포장수량(Numericox)-->
                            <TextBlock       Grid.Column="3" Text="{Binding ConverterParameter='포장수량',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <c1:C1NumericBox Grid.Column="4" Value="5" x:Name="nbBoxingCnt"   Style="{StaticResource C1NumericBoxStyle}" ValueChanged="nbBoxingCnt_ValueChanged" Minimum="1" />
                        </Grid>

                        <!--LOT ID-->
                        <Grid Grid.Row="3"  Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="167*" />
                                <ColumnDefinition Width="24*"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--LOTID(TEXTBLOCK)-->
                            <TextBlock    Grid.Column="1" Text="{Binding ConverterParameter='LOTID',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                            <!--LOTID 입력(TEXTBOX)-->
                            <TextBox      Grid.Column="2" Grid.ColumnSpan="2" x:Name="txtLotId" Text=""    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" KeyDown="txtLotId_KeyDown"/>

                            <!--남은 수량(TextBlock)-->
                            <TextBlock    Grid.Column="4" x:Name="tbCount" Text="5" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" Foreground="Red" FontWeight="Bold" Grid.ColumnSpan="2" />
                        </Grid>
                    </Grid>

                    <!--왼쪽 버튼묶음-->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!--백그라운드용-->
                        <Border  Grid.Column="1" Grid.ColumnSpan="7"  Style="{StaticResource Condition_BorderStyle}"/>

                        <!--포장대기(TextBlock)-->
                        <TextBlock    Grid.Column="1" x:Name="txtcnt" Text="{Binding ConverterParameter=포장대기,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                        <!--UNPACK(BUTTON)-->
                        <Button  Grid.Column="1" x:Name="btnUnPack"    Content="{Binding ConverterParameter=포장해제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Left" Click="btnUnPack_Click" Visibility="Hidden" Margin="8,0,0,0"/>

                        <!--선택취소(BUTTON)-->
                        <Button  Grid.Column="2" x:Name="btnSelectCacel"    Content="{Binding ConverterParameter=선택취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Click="btnSelectCacel_Click" />

                        <!--취소(BUTTON)-->
                        <Button  Grid.Column="4" x:Name="btncancel"    Content="{Binding ConverterParameter=취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Click="btncancel_Click" />

                        <!--포장(BUTTON)-->
                        <Button  Grid.Column="6" x:Name="btnPack"    Content="{Binding ConverterParameter=포장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnPack_Click" />

                    </Grid>

                    <Grid Grid.Row="6" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="tbBoxingWait_cnt" Grid.Column="1"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    </Grid>

                    <!--왼쪽 BOX ID 그리드-->
                    <Grid Grid.Row="7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <c1:C1DataGrid x:Name="dgBoxLot" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" CanUserRemoveRows="True" CanUserAddRows="True" NewRowVisibility="Bottom" 
                                       MouseDoubleClick="dgBoxLot_MouseDoubleClick"  Width="Auto">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridCheckBoxColumn Header = "CHK"          Binding = "{Binding CHK}"        HorizontalAlignment="Center" Width="40"/>
                                <c1:DataGridTextColumn     Header = "BOXID "       Binding = "{Binding BOXID}"      HorizontalAlignment="Center"   IsReadOnly="True"  Width="Auto" />
                                <c1:DataGridTextColumn     Header = "LOTID"        Binding = "{Binding LOTID}"      HorizontalAlignment="Center"   IsReadOnly="True"  Width="Auto" />
                                <!--<c1:DataGridTextColumn     Header = "검사결과"     Binding = "{Binding JUDG_NAME}"  HorizontalAlignment="Center" IsReadOnly="True"  Width="Auto"/>-->
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>
                </Grid>
                
                <!--오른쪽영역-->
                <c1:C1TabControl x:Name="tcMain"   Grid.Column="2" Margin="8" SelectionChanged="tcMain_SelectionChanged">
                    <!--이력조회-->
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='이력조회'}"  >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="0" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="90" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <!--<RowDefinition Height="8" />-->
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--백그라운드용-->
                            <Border Grid.Row="0" Grid.ColumnSpan="3"  BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />

                            <!--오른쪽 타이틀-->
                            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--이력조회(TEXBLOCK)-->
                                <TextBlock  Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='이력조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                            </Grid>

                            <!--백그라운드용-->
                            <Border   Grid.Row="1" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1" />

                            <!--오른쪽 조회영역-->
                            <Grid Grid.Row="2" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="11" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="11" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5"  Grid.ColumnSpan="6" Style="{StaticResource Condition_BorderStyle}"></Border>

                                <!--조회영역 첫번째 row-->
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <!--AREA(TEXTBLOCK)-->
                                    <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='AREA', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <!--AREA(COMBO)-->
                                    <c1:C1ComboBox   Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <!--모델(TEXTBLOCK)-->
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <!--모델(COMBO)-->
                                    <c1:C1ComboBox          Grid.Column="1" x:Name="cboProductModel" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <!--제품(TEXTBLOCK)-->
                                    <TextBlock       Grid.Column="0" Text="{Binding ConverterParameter='제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <!--제품(COMBO)-->
                                    <c1:C1ComboBox   Grid.Column="1" x:Name="cboProduct" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                                </Grid>


                                <!--조회영역 두번째 row-->

                                <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5*" />
                                    </Grid.ColumnDefinitions>
                                    <!--포장일자(TEXTBLOCK)-->
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='포장일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="3" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="3" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ctrlLib:LGCDatePicker  Grid.Column="0" x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                        <TextBlock              Grid.Column="2" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                        <ctrlLib:LGCDatePicker  Grid.Column="4" x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                    </Grid>
                                </Grid>

                                <!--조회 버튼-->
                                <Button    Grid.Row="3"   Grid.Column="4" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                            Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Right" Click="btnSearch_Click"/>
                            </Grid>

                            <Grid Grid.Row="4" Grid.Column="1">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>

                                    <!--조회건수-->
                                    <TextBlock x:Name="tbBoxHistory_cnt" Grid.Column="1"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5"/>

                                    <!--BOXID(TEXTBLOCK)-->
                                    <TextBlock    Grid.Column="3" Text="{Binding ConverterParameter='BOX검색',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                    <!--BOXID입력(TEXTBOX)-->
                                    <TextBox      Grid.Column="4" x:Name="txtSearchBox" Text=""    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" KeyDown="txtSearchBox_KeyDown" />
                                </Grid>
                            </Grid>

                            <Grid Grid.Row="5" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <!--EXCEL(BUTTON)-->
                                    <Button  Grid.Row="0" Grid.Column="1" x:Name="btnExcel"    Content="{Binding ConverterParameter=Export,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                             Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" HorizontalAlignment="Right" Click="btnExcel_Click" />
                                </Grid>

                                <c1:C1DataGrid x:Name="dgBoxhistory" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleCell" 
                                       MouseLeftButtonUp="dgBoxhistory_MouseLeftButtonUp" MouseDoubleClick="dgBoxLot_MouseDoubleClick" Grid.RowSpan="3"  Width="Auto" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Header="재포장" Width="Auto" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding ConverterParameter=적용,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" x:Name="btnAccept" Click="Button_Click" Height="Auto" HorizontalAlignment="Stretch" Width="Auto"></Button>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn     Header = "BOXID"      Binding = "{Binding BOXID}"       HorizontalAlignment="Center"     Width="Auto" />
                                        <!--<c1:DataGridTextColumn     Header = "LOT ID"      Binding = "{Binding LOTID}"    HorizontalAlignment="Left"     Width="Auto"/>-->
                                        <!--<c1:DataGridTextColumn     Header = "포장가능수량 "     Binding = "{Binding BOXMAXCNT}"    HorizontalAlignment="Left"    Width="Auto" />-->
                                        <c1:DataGridTextColumn     Header = "포장수량"   Binding = "{Binding BOXLOTCNT}"   HorizontalAlignment="Center"     Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "포장일시"   Binding = "{Binding PACKDTTM}"    HorizontalAlignment="Center"     Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "검사일시"   Binding = "{Binding PACKDTTM}"    HorizontalAlignment="Center"     Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "작업자"     Binding = "{Binding ACTUSER}"     HorizontalAlignment="Center"     Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "PALLETID"   Binding = "{Binding PALLETID}"    HorizontalAlignment="Center"     Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "PRODID"     Binding = "{Binding PRODID}"      HorizontalAlignment="Left"   Visibility="Collapsed" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "PROCID"     Binding = "{Binding PROCID}"      HorizontalAlignment="Left"   Visibility="Collapsed" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "EQSGID"     Binding = "{Binding EQSGID}"      HorizontalAlignment="Left"   Visibility="Collapsed" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "EQPTID"     Binding = "{Binding EQPTID}"      HorizontalAlignment="Left"   Visibility="Collapsed" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "PRDCLASS"   Binding = "{Binding PRDCLASS}"    HorizontalAlignment="Left"   Visibility="Collapsed" Width="Auto"/>
                                        <c1:DataGridTextColumn     Header = "동"         Binding = "{Binding AREANAME}"    HorizontalAlignment="Left" Width="Auto" />

                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                            </Grid>

                            <!--오른쪽 하단 영역-->
                            <Grid Grid.Row="7" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="250" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--<Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="11" Style="{StaticResource Condition_Header_BorderStyle}" ></Border>-->

                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock   Grid.Column="0" Text="{Binding ConverterParameter='Box ID',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox     Grid.Column="1" x:Name="txtBoxIdR" Text=""    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" IsReadOnly="True"/>
                                </Border>

                                <!--<Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="7" Style="{StaticResource Condition_Header_BorderStyle}"/>


                                <Button Grid.Row="1" Grid.Column="3" x:Name="btnBoxLabel"    Content="{Binding ConverterParameter=BOX LABEL,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                     Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnBoxLabel_Click" />
                                <Button Grid.Row="1" Grid.Column="5" x:Name="btnPacCancel"    Content="{Binding ConverterParameter=포장취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                     Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnPacCancel_Click" />

                                <!--<Border Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                            <TextBlock  Text="{Binding ConverterParameter ='BOXID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15,0,9,0"/>
                        </Border>
                        -->
                                <!--<TextBlock Grid.Column="1" Text="{Binding ConverterParameter='BOXID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>-->
                                <!--
                        <Border Grid.Column="1" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                            <TextBox x:Name="txtLabelBox" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>
                        </Border>
                        <Border Grid.Column="2" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                            <TextBox x:Name="txtLabelBoxSeq" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Visibility="Collapsed"/>
                        </Border>

