                                <c1:DataGridTextColumn  Header = "라벨 발행여부"     Binding = "{Binding PRT_FLAG}"        HorizontalAlignment="Center" Width="Auto" />
                                <c1:DataGridTextColumn  Header = "라벨 발행일시"     Binding = "{Binding PRT_DTTM}"        HorizontalAlignment="Center" Width="Auto" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>

                        <!--4Row-->
                        <!--<Border Grid.Row="8" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />-->
                        <!--<Border Grid.Row="8" Grid.Column="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>-->
                        <Grid x:Name="ContentInputKeyPart" Grid.Row="8" Grid.Column="1" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" MinWidth="150"/>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" MinWidth="150"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="13"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="11" Style="{StaticResource Condition_Header_BorderStyle}" ></Border>

                            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock  Text="{Binding ConverterParameter ='BOXID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15,0,9,0"/>
                            </Border>
                            <!--<TextBlock Grid.Column="1" Text="{Binding ConverterParameter='BOXID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>-->
                            <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox x:Name="txtLabelBox" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox x:Name="txtLabelBoxSeq" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Visibility="Collapsed"/>
                            </Border>

                            <!--<TextBlock Grid.Column="4" Text="{Binding ConverterParameter='품명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>
                            <TextBox   Grid.Column="5"   x:Name="txtLabelProduct"  IsReadOnly="True"   Style="{StaticResource SearchCondition_TextBoxStyle}"   Height="30" />-->

                            <Button  Grid.Row="1" Grid.Column="6" x:Name="btnLabel"      Content="{Binding ConverterParameter=재발행,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnLabel_Click"/>

                        </Grid>
                    </Grid>
                    <!-- End 바코드 발행 정보 -->

                    <!-- Start 포장이력 -->
                    <Grid x:Name="ContentRight_KeyPart" Grid.Column="5">
                        <!--Start Ketpart-->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="8"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                        </Grid.ColumnDefinitions>


                        <Border Grid.Row="0" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <!--<Border Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>-->
                        <Border Grid.Row="1" Grid.ColumnSpan="3" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                        <!--1Row-->
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='포장이력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            <Button    Grid.Row="0" Grid.Column="1" x:Name="btnKeyPartCopy"       Content="{Binding ConverterParameter=이력복사,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnKeyPartCopy_Click" />

                        </Grid>

                        <c1:C1TreeView Grid.Row="2" Grid.Column="1" x:Name="trvKeypartList" >
                            <c1:C1TreeView.ItemTemplate>
                                <c1:C1HierarchicalDataTemplate ItemsSource="{Binding Relations}">
                                    <StackPanel Orientation="Horizontal">
                                        <!--<CheckBox Visibility="{Binding VISIBLE_CHKECK, Converter={StaticResource  GlobalBoolToVisibilityConverter}}" >
                                                <CheckBox.LayoutTransform>
                                                    <ScaleTransform ScaleX="0.8" ScaleY="0.8" />
                                                </CheckBox.LayoutTransform>
                                            </CheckBox>-->
                                        <TextBlock Text="{Binding LOTID}" />
                                    </StackPanel>
                                </c1:C1HierarchicalDataTemplate>
                            </c1:C1TreeView.ItemTemplate>
                        </c1:C1TreeView>
                        <!--End Ketpart-->
                    </Grid>
                    <!-- End 포장이력 -->
                </Grid>
            </Grid>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
