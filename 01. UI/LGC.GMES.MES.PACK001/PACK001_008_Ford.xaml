<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK001_008_Ford"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정진척(Pack)_Pack 포장 박스라벨 발행">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="6" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"  Grid.RowSpan="2" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                <!-- Content(Tab) -->
                <c1:C1TabControl x:Name="tcMain"   Grid.Column="1" Grid.Row="1" >
                    <c1:C1TabItem x:Name="tabItem" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='SELECT PRODUCT'}" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--백그라운드-->
                            <Border  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"  BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                            <!--Box Label Layout-->
                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="200"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock    Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='BOX Label Layout',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                            </Grid>

                            <!--본문 영역-->
                            <Grid Grid.Row="2" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>

                                <!--centent 영역-->
                                <Grid  Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border  Grid.Row="0" Grid.Column="0"  BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    
                                    <!--왼쪽 바코드 영역-->
                                    <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" >
                                        <Grid x:Name="content_left" Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="2*" />
                                                <RowDefinition Height="0.8*" />
                                                <RowDefinition Height="2.2*" />
                                            </Grid.RowDefinitions>

                                            <!--전체 외곽선-->
                                            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
                                            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" />
                                            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" />

                                            <!-- 왼쪽 바코드 영역 - 1번째 row-->
                                            <Grid x:Name="content_left_1row"  Grid.Row="0" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="1*" />
                                                    <RowDefinition Height="1*" />
                                                </Grid.RowDefinitions>
                                                
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>

                                                <!--외곽선-->
                                                <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
                                                <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
                                                <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" />
                                                <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1" />

                                                <!--Supplier ID (V) -->
                                                <Grid x:Name="supplier_id" Grid.Row="0" Grid.Column="0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="8" />
                                                        <RowDefinition Height="24" />
                                                        <RowDefinition Height="3*" />
                                                        <RowDefinition Height="8" />
                                                    </Grid.RowDefinitions>
                                                    
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="140" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="10" />
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Supplier ID (V)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />
                                                    <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtSupplierID" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto" BorderBrush="Black" BorderThickness="1" TextChanged="txtSupplierID_TextChanged"/>
                                                    <c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcSupplierID"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black" CodeType="Code39x" />
                                                </Grid>

                                                <!--   -->
                                                <Grid x:Name="lgc_id" Grid.Row="0" Grid.Column="1">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="8" />
                                                        <RowDefinition Height="24" />
                                                        <RowDefinition Height="3*" />
                                                        <RowDefinition Height="8" />
                                                    </Grid.RowDefinitions>

                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="140" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="10" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtLGCID" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto" BorderBrush="Black" BorderThickness="1" TextChanged="txtLGCID_TextChanged"/>
                                                    <c1:C1BarCode Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" x:Name="bcLGCID" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black" CodeType="Pdf417" />
                                                </Grid>

                                                <!-- Quantity(Q) -->
                                                <Grid x:Name="quantity" Grid.Row="1" Grid.Column="0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="8" />
                                                        <RowDefinition Height="30" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="8" />
                                                    </Grid.RowDefinitions>

                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="140" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="10" />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Quantity(Q)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                    <TextBox      Grid.Row="1" Grid.Column="3" x:Name="txtquantity" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto"  BorderBrush="Black" BorderThickness="1" TextChanged="txtquantity_TextChanged"/>
                                                    <c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcquantity"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black"  CodeType="Code39x"/>
                                                </Grid>

                                                <!--두줄로 다시 나눔(Supplier address / Net.weight (Kg)-->
                                                <Grid x:Name="content_reRowSeperate" Grid.Row="1" Grid.Column="1" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="1*" />
                                                        <RowDefinition Height="1*" />
                                                    </Grid.RowDefinitions>

                                                    <!--외곽선-->
                                                    <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
                                                    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" />

                                                    <!--Container-->
                                                    <Grid x:Name="container" Grid.Row="0" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="0" />
                                                            <RowDefinition Height="15" />
                                                            <RowDefinition Height="*" />
                                                            <RowDefinition Height="4" />
                                                        </Grid.RowDefinitions>
                                                        
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="10" />
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Container',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                        <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtContainer" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto"  BorderBrush="Black" BorderThickness="1" />
                                                    </Grid>

                                                    <!--2col으로 다시 분리 ( Net.weight (Kg) / Gross weight (Kg) / No. of Boxes-->
                                                    <Grid x:Name="netGrossBoxes_seperate" Grid.Row="1" >
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="1*" />
                                                        </Grid.ColumnDefinitions>

                                                        <!--외곽선-->
                                                        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
                                                        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" />

                                                        <!-- Gross weight (Kg) -->
                                                        <Grid x:Name="grossWeight" Grid.Column="0" >
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="0" />
                                                                <RowDefinition Height="15" />
                                                                <RowDefinition Height="3*" />
                                                                <RowDefinition Height="4" />
                                                            </Grid.RowDefinitions>
                                                            
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="10" />
                                                                <ColumnDefinition Width="1*" />
                                                                <ColumnDefinition Width="10" />
                                                            </Grid.ColumnDefinitions>
                                                            
                                                            <TextBlock    Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Text="{Binding ConverterParameter='Gross weight (Kg)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" FontSize="10" />
                                                            <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtGrossWeight" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto"  BorderBrush="Black" BorderThickness="1" />
                                                        </Grid>

                                                        <!-- Date-->
                                                        <Grid x:Name="data" Grid.Column="1" >
                                                            <Grid.RowDefinitions>
                                                                <RowDefinition Height="0" />
                                                                <RowDefinition Height="15" />
                                                                <RowDefinition Height="3*" />
                                                                <RowDefinition Height="4" />
                                                            </Grid.RowDefinitions>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="10" />
                                                                <ColumnDefinition Width="1*" />
                                                                <ColumnDefinition Width="10" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Date',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                            <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtDate" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto" BorderBrush="Black" BorderThickness="1" />
                                                        </Grid>
                                                    </Grid>
                                                </Grid>

                                            </Grid>

                                            <!-- 왼쪽 바코드 영역 - 2번째 row-->
                                            <Grid x:Name="content_left_2row"  Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>

                                                <!--Part Number (P)-->
                                                <Grid x:Name="partNumber" Grid.Column="0">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="8" />
                                                        <RowDefinition Height="30" />
                                                        <RowDefinition Height="3*" />
                                                        <RowDefinition Height="6" />
                                                    </Grid.RowDefinitions>
                                                    
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="140" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="10" />
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Part Number (P)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                    <TextBox      Grid.Row="1" Grid.Column="3" x:Name="txtpartNumber" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" TextChanged="txtpartNumber_TextChanged" />
                                                    <c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcpartNumber"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black" CodeType="Code39x" />
                                                </Grid>
                                            </Grid>

                                            <!-- 왼쪽 바코드 영역 - 3번째 row-->
                                            <Grid x:Name="content_left_3row"  Grid.Row="2" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>

                                                <!--외곽선-->
                                                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
                                                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" />

                                                <!--왼쪽 바코드 영역 - 3번째 row -왼쪽 col-->
                                                <Grid x:Name="content_left_3row_1col" Grid.Column="0" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="1*" />
                                                        <RowDefinition Height="1*" />
                                                        <RowDefinition Height="1*" />
                                                    </Grid.RowDefinitions>

                                                    <!--외곽선-->
                                                    <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
                                                    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" />
                                                    <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" />

                                                    <!-- STRLOC 1-->
                                                    <Grid x:Name="strloc1" Grid.Row="0" Grid.Column="0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="0" />
                                                            <RowDefinition Height="40" />
                                                            <RowDefinition Height="40" />
                                                            <RowDefinition Height="8" />
                                                        </Grid.RowDefinitions>
                                                        
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="130" />
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="10" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock    Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding ConverterParameter='STR LOC 1',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                        <TextBox      Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtStrLoc" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1"/>
                                                    </Grid>

                                                    <!-- prod -->
                                                    <Grid x:Name="prodid" Grid.Row="1" Grid.Column="0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="0" />
                                                            <RowDefinition Height="40" />
                                                            <RowDefinition Height="40" />
                                                            <RowDefinition Height="8" />
                                                        </Grid.RowDefinitions>

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="130" />
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="10" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBox      Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtProdid" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1"/>
                                                        <TextBox      Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtProdname" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1"/>
                                                    </Grid>


                                                    <!--Serial Number (M) -->
                                                    <Grid x:Name="serial" Grid.Row="2" >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="8" />
                                                            <RowDefinition Height="30" />
                                                            <RowDefinition Height="3*" />
                                                            <RowDefinition Height="8" />
                                                        </Grid.RowDefinitions>
                                                        
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="140" />
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="10" />
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Serial No (M)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                        <TextBox      Grid.Row="1" Grid.Column="3" x:Name="txtSerial" IsReadOnly="True" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto" BorderBrush="Black" BorderThickness="1" TextChanged="txtSerial_TextChanged"/>
                                                        <c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcSerial"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black" CodeType="Code39x" />
                                                    </Grid>

                                                </Grid>

                                                <!--왼쪽 바코드 영역 - 3번째 row -오른쪽 col-->
                                                <Grid x:Name="content_left_3row_2col" Grid.Column="1" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="1*" />
                                                        <RowDefinition Height="1*" />
                                                        <RowDefinition Height="1*" />
                                                    </Grid.RowDefinitions>

                                                    <!--외곽선-->
                                                    <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
                                                    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" />
                                                    <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" />
                                                    <Border Grid.Row="3" BorderBrush="Black" BorderThickness="1" />

                                                    <!-- LINE FEED LOC 2-->
                                                    <Grid x:Name="linefeedloc2" Grid.Row="0" Grid.Column="0">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="0" />
                                                            <RowDefinition Height="40" />
                                                            <RowDefinition Height="40" />
                                                            <RowDefinition Height="8" />
                                                        </Grid.RowDefinitions>

                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="130" />
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="10" />
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock    Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding ConverterParameter='LINE FEED LOC 2',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                        <TextBox      Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtLineFeedLoc" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1"/>
                                                    </Grid>

                                                    <!--Dock / Gate -->
                                                    <Grid x:Name="docGate" Grid.Row="1" Grid.Column="1">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="8" />
                                                            <RowDefinition Height="30" />
                                                            <RowDefinition Height="1*" />
                                                            <RowDefinition Height="8" />
                                                        </Grid.RowDefinitions>
                                                        
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="*" />
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Dock / Gate',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                        <TextBox   Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" x:Name="txtDock" Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" Width="Auto" FontSize="30" FontStretch="Normal" FontWeight="Bold" MinWidth="80" TextAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" HorizontalContentAlignment="Center"  HorizontalAlignment="Center" >
                                                            <TextBox.BorderBrush>
                                                                <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>
                                                            </TextBox.BorderBrush>
                                                        </TextBox>
                                                    </Grid>

                                                    <!--Cust -->
                                                    <Grid x:Name="batch" Grid.Row="2" Grid.Column="1">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="8" />
                                                            <RowDefinition Height="23" />
                                                            <RowDefinition Height="8" />
                                                            <RowDefinition Height="23" />
                                                            <RowDefinition Height="*" />
                                                            <RowDefinition Height="4" />
                                                        </Grid.RowDefinitions>
                                                        
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="10" />
                                                            <ColumnDefinition Width="80" />
                                                            <ColumnDefinition Width="1*" />
                                                            <ColumnDefinition Width="10" />
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='TO',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                        <TextBox      Grid.Row="1" Grid.Column="2" x:Name="txtTO" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto" BorderBrush="Black" BorderThickness="1"/>

                                                        <TextBlock    Grid.Row="3" Grid.Column="1" Text="{Binding ConverterParameter='CUST',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                        <TextBox      Grid.Row="3" Grid.Column="2" x:Name="txtCustID" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto" BorderBrush="Black" BorderThickness="1" />
                                                    </Grid>

                                                </Grid>
                                            </Grid>

                                        </Grid>
                                    </Border>


                                    <!--오른쪽 선택영역-->
                                    <Grid x:Name="content_right" Grid.Column="2" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="2*" />
                                        </Grid.RowDefinitions>

                                        <Border     Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                        <!--오른쪽 선택영역 - 첫번째 row-->
                                        <Grid x:Name="content_right_1row" Grid.Row="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="8" />
                                            </Grid.RowDefinitions>
                                            
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="8" />
                                            </Grid.ColumnDefinitions>

                                            <!--Date-->
                                            <TextBlock             Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='Date',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                            <ctrlLib:LGCDatePicker Grid.Row="0" Grid.Column="2"  x:Name="dtpDate"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />

                                            <!--제품 COMBO-->
                                            <TextBlock             Grid.Row="1" Grid.Column="1"  Text="{Binding ConverterParameter='제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                            <c1:C1ComboBox         Grid.Row="1" Grid.Column="2"  x:Name="cboProduct" Grid.ColumnSpan="3" SelectedItemChanged="cboProduct_seletedItemChanged"/>

                                            <!--출하처 COMBO-->
                                            <TextBlock             Grid.Row="2" Grid.Column="1"  Text="{Binding ConverterParameter='출하처', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                            <c1:C1ComboBox         Grid.Row="2" Grid.Column="2"  x:Name="cboProduct_Out" Grid.ColumnSpan="3" SelectedItemChanged="cboProduct_Out_seletedItemChanged" />

                                            <!--생산일자 to-->
                                            <Grid Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="64" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="8" />
                                                </Grid.ColumnDefinitions>

                                                <TextBlock             Grid.Column="0"  Text="{Binding ConverterParameter='생산일자',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                <ctrlLib:LGCDatePicker Grid.Column="1"  x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                                
                                                <TextBlock             Grid.Column="2"  Text=" ~ " Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                <ctrlLib:LGCDatePicker Grid.Column="3"  x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />
                                            </Grid>

                                            <!---LABEL CODE -->
                                            <TextBox      Grid.Row="5" Grid.Column="1" x:Name="txtSeletedLabel" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" />
                                            <c1:C1ComboBox  Grid.Row="5" Grid.Column="1"  x:Name="cboLabel" SelectedItemChanged="cboLabel_seletedItemChanged" Grid.ColumnSpan="2" />

                                            <!--조회버튼-->
                                            <Button Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="2" x:Name="btnSearch" Content="{Binding ConverterParameter=Search, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Right" Click="btnSearch_Click"/>
                                        </Grid>

                                        <Grid Grid.Row="2" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock x:Name="tbPalletHistory_cnt" Grid.Column="1" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                                        </Grid>

                                        <!--오른쪽 선택영역 - 세번째 row : 그리드 영역-->
                                        <Grid x:Name="content_right_3row" Grid.Row="3">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <!--결과 그리드-->
                                            <c1:C1DataGrid x:Name="dgResult" Grid.Row="0" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleCell" MouseLeftButtonUp="dgResult_MouseLeftButtonUp"  Width="Auto" MouseDoubleClick="dgResult_MouseDoubleClick">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn     Header = "LOTID"        Binding = "{Binding LOTID}"       HorizontalAlignment="Center" Width="Auto"   />
                                                    <c1:DataGridTextColumn     Header = "PALLETID"     Binding = "{Binding PALLETID}"    HorizontalAlignment="Center" Width="Auto"   />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>

                                        </Grid>

                                    </Grid>

                                </Grid>

                                <!--하단 정보 영역-->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>

                                    <Border     Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                    <Border     Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                    <!--하단 왼쪽-->
                                    <Grid Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"   />
                                            <ColumnDefinition Width="Auto" />
                                            <!--<ColumnDefinition Width="8"   />-->
                                            <ColumnDefinition Width="Auto"   />
                                            <ColumnDefinition Width="20"   />
                                            <ColumnDefinition Width="Auto"   />
                                            <!--<ColumnDefinition Width="10"   />-->
                                            <ColumnDefinition Width="Auto"   />
                                            <ColumnDefinition Width="*"    />
                                            <ColumnDefinition Width="Auto"   />
                                            <ColumnDefinition Width="Auto"   />
                                            <ColumnDefinition Width="8"   />
                                        </Grid.ColumnDefinitions>

                                        <!--인쇄매수-->
                                        <TextBlock        Grid.Column="1" Margin="0,0,9,0" Text="{Binding ConverterParameter='인쇄매수', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1NumericBox  Grid.Column="2" Value="1" x:Name="nbPrintCnt"   Height="Auto" VerticalAlignment="Center" Minimum="1" />


                                        <!--Dealy-->
                                        <TextBlock        Grid.Column="4" Margin="0,0,9,0" Text="{Binding ConverterParameter='Dealy(sec)', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1NumericBox  Grid.Column="5" Value="2" x:Name="nbDelay"   Height="Auto" VerticalAlignment="Center" Minimum="1" />

                                        <!--출력 count-->
                                        <TextBlock x:Name="tbPrint2_cnt" Grid.Column="7" Text="{Binding ConverterParameter='[인쇄된 수 : 0건]', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" />

                                        <!--출력 버튼-->
                                        <Button           Grid.Column="8" x:Name="btnPrint"    Content="{Binding ConverterParameter=출력,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnPrint_Click" />
                                    </Grid>

                                    <!--하단 오른쪽-->
                                    <Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"   />
                                            <ColumnDefinition Width="Auto" />
                                            <!--<ColumnDefinition Width="10"   />-->
                                            <ColumnDefinition Width="Auto"   />
                                            <ColumnDefinition Width="20"   />
                                            <ColumnDefinition Width="Auto"   />
                                            <!--<ColumnDefinition Width="10"   />-->
                                            <ColumnDefinition Width="1*"   />
                                            <ColumnDefinition Width="0.5*"    />
                                            <ColumnDefinition Width="3*"   />
                                            <ColumnDefinition Width="8"   />
                                        </Grid.ColumnDefinitions>

                                        <!--인쇄매수-->
                                        <TextBlock        Grid.Column="1" Margin="0,0,9,0" Text="{Binding ConverterParameter='인쇄매수', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1NumericBox  Grid.Column="2" Value="1" x:Name="nbPrintCnt_R"   Height="Auto" VerticalAlignment="Center" Minimum="1" />

                                    </Grid>
                                </Grid>

                            </Grid>

                        </Grid>
                    </c1:C1TabItem>                   
                </c1:C1TabControl>

            </Grid>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />


    </Grid>
</UserControl>
