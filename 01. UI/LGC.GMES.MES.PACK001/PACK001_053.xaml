                                    <Run Text="{Binding ConverterParameter='측정DATA', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </TextBlock>
                                <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1" />
