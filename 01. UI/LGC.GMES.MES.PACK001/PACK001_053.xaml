                                    <TextBlock Text="{Binding ConverterParameter='귀책부서', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0" />
                                </Border>
                                <Border Grid.Row="5" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0">
                                    <c1:C1ComboBox Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" x:Name="cboReworkIMPUTE_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                </Border>

                                <Border Grid.Row="6" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                    <TextBlock Text="{Binding ConverterParameter='판정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0" />
                                </Border>
                                <Border Grid.Row="6" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0">
