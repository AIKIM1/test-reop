                                        <c1:DataGridTextColumn Header="양불"   Binding="{Binding PASSYN}"    HorizontalAlignment="Center" IsReadOnly="True"  Width="Auto" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
