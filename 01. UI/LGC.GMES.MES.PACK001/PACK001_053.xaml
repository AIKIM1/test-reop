                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="5*" />
                                </Grid.RowDefinitions>
                                <!--<Border Grid.Row="0" Grid.RowSpan="5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />-->

                                <!--3row-->
                                <!--<Border Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />-->
                                <Border Grid.Row="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                                <!--<Grid x:Name="dgReWorkRecordInfo" Grid.Row="2" Grid.Column="1">
                                
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5*" />
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.RowSpan="5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />
                                -->
                                <!--3row-->

                                <Border Grid.Row="0" Style="{StaticResource Condition_BorderStyle}"></Border>
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="5" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <!--title-->
                                    <TextBlock Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" x:Name="txtCaldate" Text="0000-00-00" Style="{StaticResource Content_InputForm_LabelStyle}" Foreground="#007A3D" HorizontalAlignment="Center" />
                                    <TextBlock Grid.Row="3" Grid.Column="0" x:Name="txtShift" Text="0-0" Style="{StaticResource Content_InputForm_LabelStyle}" Foreground="#007A3D" HorizontalAlignment="Center" />

                                    <!--<TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='계획수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" />-->
