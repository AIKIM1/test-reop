                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                            <!--유형코드 측정Data-->
                            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="0" />
                                    <ColumnDefinition Width="0" />
                                    <ColumnDefinition Width="0" />
                                    <ColumnDefinition Width="0" />
                                </Grid.ColumnDefinitions>

                                <!--<Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />-->

                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}" />
                                <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='유형코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </TextBlock>

                                <Border Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="3" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}" />
