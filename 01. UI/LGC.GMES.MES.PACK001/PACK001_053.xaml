                                    <Button Grid.Column="1" x:Name="btnReworkConfirm" Content="{Binding ConverterParameter=확정, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnReworkConfirm_Click" />
                                </Grid>

                            </Grid>

                        </Grid>
                    </Grid>

