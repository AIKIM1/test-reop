                                </Border>
                                <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox x:Name="txtReworkLotInput" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtReworkLotInput_KeyDown" />
                                </Border>
