                                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="1" x:Name="btnReworkCancel" Content="{Binding ConverterParameter='초기화', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnReworkCancel_Click" />
                                    <Button Grid.Column="3" x:Name="btnReworkInput" Content="{Binding ConverterParameter=투입, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnReworkInput_Click" />

                                </Grid>
                                <!--<Button Grid.Row="2" Grid.Column="3" x:Name="btnReworkInput" Content="{Binding ConverterParameter=투입, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnReworkInput_Click" Height="Auto" />-->
                            </Grid>

                            <!--확정 Grid-->
                            <!--<Border Grid.Row="4" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />-->
                            <Grid Grid.Row="4" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />

                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Condition_Header_BorderStyle}" />
                                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                    <TextBlock Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0">
                                    <TextBox x:Name="txtReworkLotid" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                </Border>

                                <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                    <TextBlock Text="{Binding ConverterParameter='제품설명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0" />
                                </Border>
                                <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0">
                                    <TextBox x:Name="txtReworkProductid" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                </Border>

                                <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                    <TextBlock Text="{Binding ConverterParameter='불량발생공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0" />
                                </Border>
                                <Border Grid.Row="3" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0">
                                    <TextBox x:Name="txtReworkProcCause" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                </Border>

                                <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                    <TextBlock Text="{Binding ConverterParameter='조치내역', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,9,0" />
                                </Border>
                                <Border Grid.Row="4" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0">
                                    <RichTextBox Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="2" x:Name="txtConfirmNote" Height="43" Margin="3">
