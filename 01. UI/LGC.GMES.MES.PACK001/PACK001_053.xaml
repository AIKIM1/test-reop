                                    <c1:DataGridTextColumn Header="불량발생공정" Binding="{Binding PROCNAME_CAUSE}" HorizontalAlignment="Center" Width="Auto" />
                                    <c1:DataGridTextColumn Header="PROCID_CAUSE" Binding="{Binding PROCID_CAUSE}"   HorizontalAlignment="Center" Width="Auto" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="불량발생일시" Binding="{Binding ACTDTTM_CAUSE}"  HorizontalAlignment="Center" Width="Auto" />
