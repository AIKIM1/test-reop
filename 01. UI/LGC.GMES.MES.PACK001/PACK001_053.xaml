                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Header="선택" Width="50">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <!--<CheckBox IsChecked="{Binding CHK, Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />-->
                                                    <RadioButton GroupName="dgDefectChoiceGroup" IsChecked="{Binding CHK, Mode=TwoWay}" Name="dgDefectChoice" HorizontalAlignment="Center" Checked="dgDefectChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn Header="코드" Binding="{Binding RESNCODE}" HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn Header="코드명" Binding="{Binding RESNNAME}" HorizontalAlignment="Center" Width="Auto" />
                                        <c1:DataGridTextColumn Header="설명" Binding="{Binding RESNDESC}" HorizontalAlignment="Center" Width="Auto" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                                <GridSplitter Grid.Row="0" Grid.Column="3" Grid.RowSpan="3" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <Border Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="3" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />
