                                </Border>

                                <Border Grid.Row="7" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1">
                                    <TextBlock Text="{Binding ConverterParameter='투입공정선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="15,0,9,0" />
