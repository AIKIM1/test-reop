<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK003_029"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary" 
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.PACK001;component/Style/ControlStyles_PACK.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Sample 검사">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <Border     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1,1,1,1"/>
                <Grid Grid.Column="1" Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="15" />
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <!-- HEADER -->
                    <Grid x:Name="grdTop" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">
                        <Grid x:Name="grdTopDown">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="0"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock  Grid.Row="0" Grid.Column="1" Width="Auto" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='Sample 검사 결과 조회 및 재판정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                            <Border     Grid.Row="1" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,1,1,1"/>
                            <Grid  Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="34"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>
                                <Border                  Grid.Column="1"  Grid.Row="0" Grid.RowSpan="5" Grid.ColumnSpan="10"  Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,1"/>
                                <TextBlock               Grid.Column="2" Grid.Row ="0" Text="{Binding ConverterParameter='LotID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <TextBox                 Grid.Column="3" Grid.Row ="0" Grid.ColumnSpan="4"  x:Name="txtSearchLotId" Width="Auto" Style="{StaticResource TextBoxBaseStyle}" Margin="2,4,4,2" KeyDown="txtMLotID_KeyDown"/>
                                <CheckBox                Grid.Column="7" Grid.Row ="0" x:Name="ckGroup" Content="{Binding ConverterParameter='Group 기준 조회', Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Height="25" />
                                <TextBlock               Grid.Column="2" Grid.Row ="1" Text="{Binding ConverterParameter='수정일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <ctrlLib:LGCDatePicker   Grid.Column="3" Grid.Row ="1" x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                <TextBlock               Grid.Column="4" Grid.Row ="1" Text=" ~ " HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <ctrlLib:LGCDatePicker   Grid.Column="5" Grid.Row ="1" x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                <TextBlock               Grid.Column="6" Grid.Row ="1" Text="{Binding ConverterParameter='Line', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <c1:C1ComboBox           Grid.Column="7" Grid.Row ="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" VerticalAlignment="Center"  />
                                <TextBlock               Grid.Column="8" Grid.Row ="1" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                                <c1:C1ComboBox           Grid.Column="9" Grid.Row ="1" x:Name="cboProductModel" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" VerticalAlignment="Center" Visibility="Collapsed"/>

                                <TextBlock              Grid.Column="2"  Grid.Row ="2" Text="{Binding ConverterParameter='제품명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                <c1:C1ComboBox          Grid.Column="3"  Grid.Row ="2" x:Name="cboProduct" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" VerticalAlignment="Center"  />
                                <TextBlock              Grid.Column="4"  Grid.Row ="2" Text="{Binding ConverterParameter='홀드사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <c1:C1ComboBox          Grid.Column="5"  Grid.Row ="2" x:Name="cboHoldReason1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" VerticalAlignment="Center" />
                                <TextBlock              Grid.Column="6"  Grid.Row ="2" Text="{Binding ConverterParameter='검사결과', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <c1:C1ComboBox          Grid.Column="7"  Grid.Row ="2" x:Name="cbo_SMPL_INSP_RSLT" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" VerticalAlignment="Center" />
                                <TextBlock              Grid.Column="8"  Grid.Row ="2" Text="{Binding ConverterParameter='그룹 검사결과', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <c1:C1ComboBox          Grid.Column="9"  Grid.Row ="2"  x:Name="cbo_SMPL_GR_INSP_RSLT" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" VerticalAlignment="Center" />

                                <TextBlock               Grid.Column="2" Grid.Row ="3" Text="{Binding ConverterParameter='Sample 대상 여부', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <c1:C1ComboBox           Grid.Column="3" Grid.Row ="3" x:Name="cbo_SMPL_TRGT_FLAG" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" VerticalAlignment="Center" />
                                <TextBlock               Grid.Column="4" Grid.Row ="3" Text="{Binding ConverterParameter='QA 대상 여부', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                <c1:C1ComboBox           Grid.Column="5" Grid.Row ="3" x:Name="cbo_QA_INSP_TRGT_FLAG" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" VerticalAlignment="Center" />
                                <Button                  Grid.Column="10" Grid.Row ="2"  HorizontalAlignment="Center" x:Name="btnSearch" Content="{Binding ConverterParameter=Search, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click"  />
                            </Grid>
                            <Grid Grid.Row="4" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="35" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="1" x:Name="tbCellListCount" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment ="Center" Visibility="Collapsed"/>
                                <Button Grid.Column="2"  x:Name="btnAdd"  Content="{Binding ConverterParameter=Plus, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonAddStyle}"    Height="25" Width="25" Cursor="Hand" Click="btnPlus_Click" Visibility="Collapsed"/>
                                <Button Grid.Column="3"  x:Name="btnMinus" Content="{Binding ConverterParameter=Minus,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonDeleteStyle}" Height="25" Width="25" Cursor="Hand" Click="btnMinus_Click" Visibility="Collapsed"/>
                                <Button Grid.Column="5"  x:Name="btnExcel"    Content="{Binding ConverterParameter=Excel,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" HorizontalAlignment="Left" Cursor="Hand" Click="btnExcel_Click" Visibility="Collapsed" />
                                <Button Grid.Column="3"  HorizontalAlignment="Center" x:Name="btnManualInput" Content="{Binding ConverterParameter=SMPL_MANUAL_INPUT, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnManualInput_Click"  />
                                <Button Grid.Column="5"  HorizontalAlignment="Center" x:Name="btnSample" Content="{Binding ConverterParameter=SMPL_TRGT_FLAG, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSample_Click"  />
                                <Button Grid.Column="5"  HorizontalAlignment="Center" x:Name="btnGroupCancel" Content="{Binding ConverterParameter=BATCH_CANCEL, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnGroupCanCel_Click" Visibility="Collapsed" />
                            </Grid>
                            <Grid x:Name="grdCenter" Grid.Row="5" Grid.Column ="1" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="5"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Column="1"  Grid.Row="0" Grid.RowSpan="5" Grid.ColumnSpan="10"  Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,1"/>
                                <c1:C1DataGrid Grid.Column="1"  
                                               x:Name="dgCellHistory" 
                                               IsReadOnly="False" 
                                               HeadersVisibility="Column" 
                                               SelectionMode="SingleCell" 
                                               RowHeight="Auto" 
                                               CanUserAddRows="True" 
                                               NewRowVisibility="Bottom" 
                                               Width="Auto" 
                                               FrozenColumnCount="3"
                                               BeginningEdit="dgCellHistory_BeginningEdit"
                                               >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK"  Header="선택" Width="50">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" x:Name="dgSampleChoice" HorizontalAlignment="Center" Click="dgSampleChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn     Header = "UPDDTTM"             Binding = "{Binding UPDDTTM             }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "LOTID"               Binding = "{Binding LOTID               }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "HOLD_YN"             Binding = "{Binding HOLD_YN             }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "SMPL_GR_ID"          Binding = "{Binding SMPL_GR_ID          }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <!--<c1:DataGridComboBoxColumn     Header = "SMPL_TRGT_FLAG"      Binding = "{Binding SMPL_TRGT_FLAG      }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />-->
                                        <c1:DataGridComboBoxColumn Header = "SMPL_TRGT_FLAG"      Binding = "{Binding SMPL_TRGT_FLAG}"                  HorizontalAlignment="Left"    EditOnSelection="True" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                        <c1:DataGridTextColumn     Header = "SMPL_INSP_RSLT"      Binding = "{Binding SMPL_INSP_RSLT      }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "SMPL_GR_INSP_RSLT"   Binding = "{Binding SMPL_GR_INSP_RSLT   }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "SMPL_GR_LOT_SEQNO"   Binding = "{Binding SMPL_GR_LOT_SEQNO   }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "QA_INSP_TRGT_FLAG"   Binding = "{Binding QA_INSP_TRGT_FLAG   }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "JIG"                 Binding = "{Binding WELD_EQPT           }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "RACK ID"             Binding = "{Binding STK_LOC             }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "창고재고"            Binding = "{Binding EXIST_STK           }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "LOTTYPE"             Binding = "{Binding LOTTYPE             }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn     Header = "LOTYNAME"            Binding = "{Binding LOTYNAME            }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn     Header = "PRODID"              Binding = "{Binding PRODID              }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header = "PRODNAME"            Binding = "{Binding PRODNAME            }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn     Header = "PRODDESC"            Binding = "{Binding PRODDESC            }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn     Header = "WIPSTAT"             Binding = "{Binding WIPSTAT             }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "PALLETID"            Binding = "{Binding PALLETID            }"            HorizontalAlignment="Left"     Width="Auto" IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header = "WIPSNAME"            Binding = "{Binding WIPSNAME            }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "PROCID"              Binding = "{Binding PROCID              }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "PROCNAME"            Binding = "{Binding PROCNAME            }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "EQSGID"              Binding = "{Binding EQSGID              }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "EQSGNAME"            Binding = "{Binding EQSGNAME            }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "PRODCLASS"           Binding = "{Binding PRODCLASS           }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "HOLD_CODE"           Binding = "{Binding HOLD_CODE           }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "HOLD_DTTM"           Binding = "{Binding HOLD_DTTM           }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "HOLD_USERID"         Binding = "{Binding HOLD_USERID         }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "USERNAME"            Binding = "{Binding USERNAME            }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "UNHOLD_SCHD_DATE"    Binding = "{Binding UNHOLD_SCHD_DATE    }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "UNUSERNAME"          Binding = "{Binding UNUSERNAME          }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "HOLD_NOTE"           Binding = "{Binding HOLD_NOTE           }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "ACTID"               Binding = "{Binding ACTID               }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "RESNCODE"            Binding = "{Binding RESNCODE            }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "HOLDRESN"            Binding = "{Binding HOLDRESN            }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn     Header = "WOID"                Binding = "{Binding WOID                }"            HorizontalAlignment="Center"   Width="Auto" IsReadOnly="True"  />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Border     Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,1,1,1"/>
                    <GridSplitter x:Name="gsp"  Grid.Row="1" Grid.ColumnSpan="4" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" RenderTransformOrigin="0.5,0.5" />
                    <!-- BOTTOM LEFT-->
                    <Grid x:Name="grdLeft" Grid.Column="0" Grid.Row="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="70"/>
                            </Grid.RowDefinitions>
                            <Border     Grid.Row="0" Grid.ColumnSpan="5" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1,1,1,1" />
                            <TextBlock  Grid.Row="0" Grid.Column="1" Width="Auto" Style="{StaticResource Content_ModuleTitleStyle}" Grid.ColumnSpan="2" Margin="15,9,0,8" ><Run Text="{Binding ConverterParameter='Sample판정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                            <Border     Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,1,1,1"/>
                            <Grid Grid.Row="1" Height="Auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="15"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='판정구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                <TextBlock  Grid.Column="2" Text="{Binding ConverterParameter=':', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                <TextBlock  Grid.Column="3" Text="{Binding ConverterParameter='샘플검사', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                <RadioButton  Grid.Column="4"  x:Name ="rbSample" GroupName="dgLotIdGroup" IsChecked="{Binding CHK, Mode=OneWay}" HorizontalAlignment="Center" Checked="dgChoice_Checked" />
                                <TextBlock  Grid.Column="5" Text="{Binding ConverterParameter='재검사', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                <RadioButton  Grid.Column="6"  x:Name ="rbReInsp" GroupName="dgLotIdGroup" IsChecked="{Binding CHK, Mode=OneWay}" HorizontalAlignment="Center" Checked="dgChoice_Checked" />
                            </Grid>
                            <Grid Grid.Row="2" Height="Auto" x:Name ="grSampleJudg" Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="15"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='QA 검사 대상 여부', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                <c1:C1ComboBox Grid.Column="2" x:Name="cboQATarget" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"   MinWidth="80" DisplayMemberPath="KEY" SelectedValuePath="VALUE" />
                                <TextBlock  Grid.Column="3" Text="{Binding ConverterParameter='판정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,9,0"/>
                                <c1:C1ComboBox Grid.Column="4" x:Name="cboResult" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"   MinWidth="80" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedIndexChanged="cboResult_SelectedIndexChanged" />
                            </Grid>
                            <Grid Grid.Row="2"  Height="Auto" x:Name ="grReJudg" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32" />
                                    <RowDefinition Height="32" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="15" />
                                </Grid.ColumnDefinitions>
                                <!--HOLD해제사유(TEXTBLOCK)-->
                                <TextBlock          Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='재작업 판정사유',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>

                                <!--HOLD해제사유(COMBOBOX)-->
                                <c1:C1ComboBox      Grid.Row="0" Grid.Column="1" x:Name="cboUnHoldReason" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="0" />

                                <TextBlock          Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='판정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,9,0"/>

                                <c1:C1ComboBox      Grid.Row="0" Grid.Column="3" x:Name="cboResult1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"   MinWidth="80" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>

                                <!--NOTE(TEXTBLOCK)-->
                                <TextBlock          Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='NOTE',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>

                                <!--NOTE(TEXTBOX)-->
                                <TextBox            Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3"  x:Name="txtNote" Text=""    Style="{StaticResource TextBoxBaseStyle}" />

                                <!--UNHOLD(BUTTON)-->
                                <Button             Grid.Row="1" Grid.Column="4" x:Name="btnUnHold"    Content="{Binding ConverterParameter=재작업 판정,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                            Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnUnHold_Click" />

                            </Grid>

                        </Grid>
                    </Grid>
                    <!-- BOTTOM RIGHT-->
                    <Grid x:Name="grdRight"     Grid.Column="1" Grid.Row="2">
                        <Grid Grid.Row="1" x:Name ="grOKGrid">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="11"/>
                            </Grid.RowDefinitions>
                            <Button     Grid.Row="1" Grid.Column="4" x:Name="btnHold1" Content="{Binding ConverterParameter=샘플판정,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                                         Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" VerticalAlignment ="Bottom"  Cursor="Hand" Click="btnHold_Click" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1" x:Name ="grNGGrid">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="2.5*"/>
                                <RowDefinition Height="8"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="35*"/>
                                <ColumnDefinition Width="9*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>

                            <Border     Grid.Row="0" Grid.ColumnSpan="5" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1,1,1,1"/>
                            <TextBlock  Grid.Row="0" Grid.Column="1" Width="Auto" Style="{StaticResource Content_ModuleTitleStyle}" Grid.ColumnSpan="2" Margin="15,9,0,8" ><Run Text="{Binding ConverterParameter='NG 판정시 검사 필수 항목 (HOLD)', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                            <Border     Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,1,1,1"/>

                            <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0.8*"/>
                                    <RowDefinition Height="0.8*"/>
                                    <RowDefinition Height="0.8*"/>
                                    <RowDefinition Height="4*"/>
                                    <RowDefinition Height="1.6*"/>
                                </Grid.RowDefinitions>

                                <!-- 예상헤제일 -->
                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1"/>
                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='예상해제일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                    <ctrlLib:LGCDatePicker   Grid.Column="1" x:Name="dtpDate" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"  Grid.ColumnSpan="2" Cursor="Hand"/>
                                </Grid>

                                <!-- 전기일 -->
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1"/>
                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='전기일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                    <ctrlLib:LGCDatePicker  Grid.Column="1" x:Name="dtpCalDate" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" Cursor="Hand"/>
                                </Grid>

                                <!-- 담당자 -->
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0"  Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1"/>
                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='담당자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                    <TextBox   Grid.Column="1"  x:Name="txtPerson" Style="{StaticResource TextBoxBaseStyle}" KeyDown="txtPerson_KeyDown" />
                                    <Button  Grid.Column="2" x:Name="btnPerson" Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnPerson_Click"  Cursor="Hand"/>
                                </Grid>

                                <!-- level 별 -->
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="1*" />
                                    </Grid.ColumnDefinitions>

                                    <Border             Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1"/>
                                    <c1:C1ComboBox      Grid.Row="0" Grid.Column="0" x:Name="cboHoldReason" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="0" Visibility="Hidden"/>

                                    <c1:C1DataGrid x:Name="dgHoldGroup1" Grid.Row="0" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="None" CanUserSort="False" CanUserFilter="False" Margin="8,8,4,8">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Header="EMT" EditOnSelection="False" Name="CHK">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="radHoldGroup1" IsChecked="{Binding CHK, Mode=OneWay}" HorizontalAlignment="Center" Checked="RadioButton_Checked"  />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn Header="LEVEL1" Binding="{Binding DFCT_CODE_NAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                                            <c1:DataGridTextColumn Header="DEFC_CODE" Binding="{Binding DFCT_CODE}" HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                    <c1:C1DataGrid x:Name="dgHoldGroup2" Grid.Row="0" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="None" CanUserSort="False" CanUserFilter="False" Margin="4,8,8,8">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Header="EMT" EditOnSelection="False" Name="CHK" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="radHoldGroup2" IsChecked="{Binding CHK, Mode=OneWay}" HorizontalAlignment="Center" Checked="RadioButton_Checked"  />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn Header="LEVEL2" Binding="{Binding DFCT_DETL_NAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                                            <c1:DataGridTextColumn Header="RESNCODE" Binding="{Binding RESNCODE}" HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>

                                <!-- HOLD 비고 -->
                                <Grid Grid.Row="4" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Border             Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1"/>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='샘플판정 비고',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <RichTextBox        Grid.Column="1" x:Name="rtbHoldCompare" BorderThickness="1" BorderBrush="#FFC3C3C3" Margin="3">
                                        <RichTextBox.Resources>
                                            <Style TargetType="{x:Type Paragraph}">
                                                <Setter Property="Margin" Value="5"/>
                                            </Style>
                                        </RichTextBox.Resources>
                                        <FlowDocument LineHeight="10" >
                                            <Paragraph FontSize="10pt" LineHeight="10pt"  LineStackingStrategy="BlockLineHeight" Tag="TEST">
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>

                                    <!--HOLD(BUTTON)-->
                                    <Button             Grid.Column="2" x:Name="btnHold" Content="{Binding ConverterParameter=샘플판정,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Margin="3,3,6,3" 
                                                        Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" VerticalAlignment ="Bottom"  Cursor="Hand" Click="btnHold_Click" />

                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
