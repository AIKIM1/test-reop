<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK002_003"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="소포장,자재 Hold/Realese(Pack)" >
            <Grid x:Name="grdMain">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1.5*"/>
                </Grid.ColumnDefinitions>
                <c1:C1TabControl x:Name="tabControlMain" SelectionChanged="tabControlMain_SelectionChanged" >
                    <c1:C1TabItem x:Name="tabSBoxHold" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='개별 소포장 HOLD'}"  >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="2" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <!--<ColumnDefinition Width="Auto"/>-->
                                <!--<ColumnDefinition Width="1.5*"/>-->
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="1" Grid.Column="0"   Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1"/>
                            <!--좌측 First Tab -->
                            <Grid Grid.Row="1" Grid.Column="0" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="1"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>

                                <Border    Grid.Row="1" Grid.Column="1" Grid.RowSpan="5" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1,1,1,1"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" Width="Auto" Style="{StaticResource Content_ModuleTitleStyle}" Margin="15,9,0,8" ><Run Text="{Binding ConverterParameter='소포장 및 자재 HOLD', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>

                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition Height="35"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>

                                        </Grid.ColumnDefinitions>
                                        <Border  Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="3"  BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1,1,1,1"/>
                                        <Border  Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0" Grid.RowSpan="3"   Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                        <!-- 1 Row -->
                                        <Grid Grid.Row="0" Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="96"/>
                                                <ColumnDefinition Width="106*"/>
                                                <ColumnDefinition Width="191*"/>
                                                <ColumnDefinition Width="3"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1"/>
                                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='자재그룹', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" Margin="8,10,0,9"/>
                                            <c1:C1ComboBox Grid.Column="1" x:Name="cboSearchSboxtype" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Grid.ColumnSpan="2" Margin="3,6" />
                                        </Grid>
                                        <!-- 2 Row -->
                                        <Grid Grid.Row="1" Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="96"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="3"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1"/>
                                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='자재코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                            <c1:C1ComboBox Grid.Column="1" x:Name="cboMtrlid" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                        </Grid>
                                        <!-- 3 Row -->
                                        <Grid Grid.Row="2" Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="96"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="3"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1"/>
                                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                            <TextBox Grid.Column="1" x:Name="txtSboxId" Width="Auto" Style="{StaticResource TextBoxBaseStyle}" KeyDown="txtSboxId_KeyDown" PreviewKeyDown="txtSboxIdKeyDown" />
                                        </Grid>

                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="5" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>


                                        <!--<Button  Grid.Column="2" x:Name="btnExcelDown" Content="{Binding ConverterParameter=Excel Download,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelImportStyle}" HorizontalAlignment="Center" />-->
                                        <!--<Button  Grid.Column="4" x:Name="btnExcelLoad" Content="{Binding ConverterParameter=Excel Upload, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelImportStyle}" HorizontalAlignment="Center" Cursor="Hand" Click="btnExcelLoad_Click"/>-->
                                    </Grid>

                                    <TextBlock x:Name="tbSBoxnput_cnt"  Grid.Row="1" Grid.Column="0"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="5" />
                                        </Grid.ColumnDefinitions>
                                        <!--선택취소(BUTTON)-->
                                        <Button     Grid.Column="1" x:Name="btnSelectCancel"    Content="{Binding ConverterParameter=선택취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                            Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Cursor="Hand" Click="btnSelectCancel_Click"  />

                                        <!--취소(BUTTON)-->
                                        <Button     Grid.Column="3" x:Name="btnCancel"    Content="{Binding ConverterParameter=전체취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                            Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Cursor="Hand" Click="btnCancel_Click" />

                                        <!--HOLD(BUTTON)-->
                                        <Button     Grid.Column="5" x:Name="btnHold"    Content="{Binding ConverterParameter=HOLD,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                            Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Cursor="Hand" Click="btnHold_Click" />
                                    </Grid>

                                    <Border Grid.Row="2" Style="{StaticResource Condition_Header_BorderStyle}"/>

                                    <c1:C1DataGrid Grid.Row="3" x:Name="dgSBoxList" HeadersVisibility="Column" SelectionMode="SingleCell" RowHeight="Auto"  CanUserRemoveRows="True" CanUserAddRows="True" NewRowVisibility="Bottom" Width="Auto" Grid.ColumnSpan="2" Grid.RowSpan="3" LoadedCellPresenter="dgSBoxListLoadedCellPresenter" >
                                        <c1:C1DataGrid.Columns>

                                            <c1:DataGridCheckBoxColumn Binding = "{Binding CHK, Mode=TwoWay}" Width="Auto"  HorizontalAlignment="Center" CanUserSort="False" >
                                                <c1:DataGridCheckBoxColumn.Header>
                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                        <CheckBox x:Name="chkHeaderAllList" Margin="0" Width="19" Checked="chkHeaderAllList_Checked" Unchecked="chkHeaderAllList_Unchecked"></CheckBox>
                                                    </StackPanel>
                                                </c1:DataGridCheckBoxColumn.Header>
                                            </c1:DataGridCheckBoxColumn>
                                            <c1:DataGridCheckBoxColumn Header = "선택"          Binding = "{Binding CHK}"                 HorizontalAlignment="Center"  Width="40" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn     Header = "ID "           Binding = "{Binding S_BOX_ID}"            HorizontalAlignment="Center"  Width="Auto" IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "자재유형 "     Binding = "{Binding HOLD_TRGT_CODE}"      HorizontalAlignment="Center"  Width="Auto" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn     Header = "자재"          Binding = "{Binding MTRLID}"              HorizontalAlignment="Center"  Width="Auto" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn     Header = "자재명"        Binding = "{Binding MTRLNAME}"            HorizontalAlignment="Center"  Width="Auto" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn     Header = "홀드여부"      Binding = "{Binding HOLD_FLAG}"           HorizontalAlignment="Center"  Width="Auto" IsReadOnly="True" Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>

                                <Border Grid.Row="6" Grid.Column="1" Style="{StaticResource Condition_Header_BorderStyle}"/>

                                <Grid Grid.Row="7" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border             Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                                    <TextBlock          Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='HOLD 사유',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                    <Border             Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0"/>
                                    <c1:C1ComboBox      Grid.Row="0" Grid.Column="2" x:Name="cboHoldReason" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedIndex="0" SelectedItemChanged="cboHoldReason_SelectedItemChanged"  />
                                </Grid>


                                <Grid Grid.Row="8" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                   
                                    <Border             Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1"/>
                                    <TextBlock          Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='HOLD 비고',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                    <Border             Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,1"/>
                                    <TextBox Grid.Column="1" x:Name="txtHoldReason" Width="Auto" Style="{StaticResource TextBoxBaseStyle}" IsEnabled="False" />
                                </Grid>

                            </Grid>



                        </Grid>
                    </c1:C1TabItem>
                    <!--좌측 Second Tab -->
                    <c1:C1TabItem x:Name="tabValHold" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='조건 HOLD'}" Margin="0"  >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2" />
                                <RowDefinition Height="1*" />
                                <RowDefinition Height="2" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="1" Grid.Column="0"   Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1,0,1,1"/>
                            <Grid Grid.Row="1" Grid.Column="0" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>

                                <Border  Grid.Row="1" Grid.Column="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1,1,1,1"/>
                                <TextBlock Grid.Column="1" Grid.Row="1" Width="Auto" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='조건 HOLD', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>

                                <!--1 Row -->
                                <Grid Grid.Column="1" Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,0,1,0"/>
                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='발행일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                                    <Border Grid.Column="1" Grid.ColumnSpan="4"  Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="0,0,1,0"/>
                                    <!--DATE(DATEPICKER)-->
                                    <ctrlLib:LGCDatePicker   Grid.Column="1" x:Name="dtpDateFromF" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                    <!--TODATE(TEXTBLOCK)-->
                                    <TextBlock               Grid.Column="2"  Text=" ~ " HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    <!--TODATE(DATEPICKER)-->
                                    <ctrlLib:LGCDatePicker   Grid.Column="3" x:Name="dtpDateToF" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>


                                </Grid>
                                <!--2 Row -->
                                <Grid Grid.Column="1" Grid.Row="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,0"/>
                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='자재코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                                    <Border Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="0,1,1,0"/>
                                    <c1:C1ComboBox Grid.Column="1"  x:Name="cboSearchMtrltype" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedIndex="0" SelectedItemChanged="cboSearchMtrltype_SelectedItemChanged" />
                                </Grid>

                                <!--3 Row -->
                                <Grid Grid.Column="1" Grid.Row="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,0"/>
                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='업체코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                                    <Border Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="0,1,1,0"/>
                                    <c1:C1ComboBox Grid.Column="1" x:Name="cboSearchSup" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedIndex="0" />
                                </Grid>

                                <!--4 Row -->
                                <Grid Grid.Column="1" Grid.Row="5">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,0"/>
                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='HOLD 사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                    
                                    <Border Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="0,1,1,0"/>
                                    <c1:C1ComboBox      Grid.Row="0" Grid.Column="2" x:Name="cboHoldCaseReason" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedIndex="0" SelectedItemChanged="cboHoldCaseReason_SelectedItemChanged" />
                                </Grid>
                                <!--5 Row-->
                                <Grid Grid.Column="1" Grid.Row="6">

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,0"/>
                                    <TextBlock          Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='HOLD 비고',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />

                                    <Border Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="0,1,1,0"/>
                                    <TextBox Grid.Column="1" x:Name="txtHoldCaseReason" Width="Auto" Style="{StaticResource TextBoxBaseStyle}" IsEnabled="False" />
                                </Grid>

                                <Grid Grid.Column="1" Grid.Row="7">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="96"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>
                                    
                                    <Border Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                    <Button     Grid.Column="1" x:Name="btnCaseHold"    Content="{Binding ConverterParameter=HOLD,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                            Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Cursor="Hand" Click="btnCaseHold_Click" />

                                </Grid>
                            </Grid>
                        </Grid>



                    </c1:C1TabItem>
                </c1:C1TabControl>

                <!-- GridSplitter -->
                <GridSplitter Grid.Row="1" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto"/>

                <!-- 우측 -->
                <Grid Grid.Row="1" Grid.Column="2">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="35" />
                        <RowDefinition Height="8" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                    </Grid.ColumnDefinitions>

                    <!--sub title border-->
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                    <TextBlock Grid.Column="1" Width="Auto" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='소박스 Hold/Release 조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>

                    <!--백그라운드용-->
                    <Border Grid.Row="1" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1"/>

                    <!--오른쪽 조회영역-->
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="30" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>

                        <!--백그라운드용-->
                        <Border     Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                        <!--1row-->
                        <Grid Grid.Row="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--Hold Type-->
                            <TextBlock             Grid.Column="1" Text="{Binding ConverterParameter='HOLD 유형', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <c1:C1ComboBox         Grid.Column="3" x:Name="cboHoldType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  SelectedIndex="0" />
                            
                            <!--라인-->
                            <TextBlock             Grid.Column="5" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <c1:C1ComboBox         Grid.Column="7" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedIndex="1" />

                            <!--자재코드(TEXTBLOCK)-->
                            <TextBlock              Grid.Column="9" Text="{Binding ConverterParameter='자재코드',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" />
                            <!--자재코드(COMBOBOX)-->
                            <c1:C1ComboBox          Grid.Column="11" x:Name="cboSBoxType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedIndex="1" VerticalAlignment="Center"/>

                            <!--<TextBlock              Grid.Column="13" Text="{Binding ConverterParameter='입고대기자재만', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <CheckBox               Grid.Column="14"  Name="chkInputWait" Style="{StaticResource CheckBoxBaseStyle}" Width="20" ToolTip="Only today at check" />-->
                        </Grid>

                        <!--2row-->
                        <Grid Grid.Row="3" >
