<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK001_009"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정진척(Pack)_315H CMA포장">
            <Grid>
                <Grid.RowDefinitions>
                    <!--<RowDefinition Height="6" />-->
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border Grid.Row="0"  Grid.RowSpan="2" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                <Grid Grid.Row="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34"/>
                        <RowDefinition Height="8" />
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                    </Grid.ColumnDefinitions>

                    <!--백그라운드-->
                    <Border  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"  BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="8"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock    Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='BOX Label Layout',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>

                        <!--centent 영역-->
                        <Grid  Grid.Row="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border  Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2"  BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--왼쪽 바코드 영역-->
                            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Grid.ColumnSpan="2" >
                                <Grid x:Name="content_left" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2*" />
                                        <RowDefinition Height="0.8*" />
                                        <RowDefinition Height="2.2*" />
                                    </Grid.RowDefinitions>

                                    <!--전체 외곽선-->
                                    <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
                                    <Border BorderBrush="Black" BorderThickness="1" Grid.RowSpan="2" />
                                    <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" />

                                    <!-- 왼쪽 바코드 영역 - 1번째 row-->
                                    <Grid x:Name="content_left_1row"  Grid.Row="0" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <!--외곽선-->
                                        <Border Grid.Row="0" Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
                                        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
                                        <Border Grid.Row="0" Grid.Column="1" BorderBrush="Black" BorderThickness="1" />
                                        <Border Grid.Row="1" Grid.Column="1" BorderBrush="Black" BorderThickness="1" />

                                        <!--Receiver -->
                                        <Grid x:Name="receive" Grid.Row="0" Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8" />
                                                <RowDefinition Height="2*" />
                                                <RowDefinition Height="3*" />
                                                <RowDefinition Height="8" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="10" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Receive',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                            <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtReceive"  TextAlignment="Left" VerticalAlignment="Stretch"  Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto" BorderBrush="Black" BorderThickness="1" Margin="20,0,9,0"/>

                                        </Grid>

                                        <!--Advice Note No (N) -->
                                        <Grid x:Name="advice" Grid.Row="1" Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0" />
                                                <RowDefinition Height="40" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="8" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="130" />
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="10" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Advice Note No (N)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                            <TextBox      Grid.Row="1" Grid.Column="3" x:Name="txtAdvice"  Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" TextChanged="txtAdvice_TextChanged" />
                                            <c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcAdvice"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black" CodeType="Code39x"  />

                                            <!--<Image        Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Stretch="Fill"  Source="D:\#.Secure Work Folder\Images/bar1.png" Margin="20,0,9,0" />-->
                                        </Grid>

                                        <!--Dock / Gate -->
                                        <Grid x:Name="docGate" Grid.Row="0" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8" />
                                                <RowDefinition Height="30" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="8" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="100" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock    Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding ConverterParameter='Dock / Gate',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                            <TextBox      Grid.Row="2" Grid.Column="3" x:Name="txtDock" Style="{StaticResource SearchCondition_TextBoxStyle}" HorizontalAlignment="Center"  Height="Auto" Width="Auto" FontSize="30" FontStretch="Normal" FontWeight="Bold" TextAlignment="Center" VerticalAlignment="Center" MinWidth="100">
                                                <TextBox.BorderBrush>
                                                    <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionTextColorKey}}"/>
                                                </TextBox.BorderBrush>
                                            </TextBox>

                                        </Grid>

                                        <!--두줄로 다시 나눔(Supplier address / Net.weight (Kg)-->
                                        <Grid x:Name="content_reRowSeperate" Grid.Row="1" Grid.Column="1" >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>

                                            <!--외곽선-->
                                            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
                                            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" />

                                            <!--Supplier address-->
                                            <Grid x:Name="supplier" Grid.Row="0" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="0" />
                                                    <RowDefinition Height="24" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="4" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="10" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Supplier address',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtSupplierAddress" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto"  BorderBrush="Black" BorderThickness="1" />

                                            </Grid>

                                            <!--3col으로 다시 분리 ( Net.weight (Kg) / Gross weight (Kg) / No. of Boxes-->
                                            <Grid x:Name="netGrossBoxes_seperate" Grid.Row="1" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>

                                                <!--외곽선-->
                                                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
                                                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" />
                                                <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" />

                                                <!-- Net.weight (Kg) -->
                                                <Grid x:Name="netWeight" Grid.Column="0" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="0" />
                                                        <RowDefinition Height="24" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="4" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="10" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Net.weight (Kg)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" FontSize="10"/>
                                                    <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtNetWeight" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto" BorderBrush="Black" BorderThickness="1" IsReadOnly="True"/>

                                                </Grid>

                                                <!-- Gross weight (Kg) -->
                                                <Grid x:Name="grossWeight" Grid.Column="1" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="0" />
                                                        <RowDefinition Height="24" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="4" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="9" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="9" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Gross weight (Kg)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" FontSize="10" Margin="4"/>
                                                    <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtGrossWeight" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto"  BorderBrush="Black" BorderThickness="1" IsReadOnly="True"/>

                                                </Grid>

                                                <!-- No. of Boxes -->
                                                <Grid x:Name="noOfBoxes" Grid.Column="2" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="0" />
                                                        <RowDefinition Height="24" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="4" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="10" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='No. of Boxes',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" FontSize="10"/>
                                                    <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtBoxes" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto" BorderBrush="Black" BorderThickness="1" IsReadOnly="True"/>

                                                </Grid>

                                            </Grid>
                                        </Grid>

                                    </Grid>

                                    <!-- 왼쪽 바코드 영역 - 2번째 row-->
                                    <Grid x:Name="content_left_2row"  Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <!--Part Number (P)-->
                                        <Grid x:Name="partNumber" Grid.Column="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="4" />
                                                <RowDefinition Height="30" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="8" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="130" />
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="10" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Part Number (P)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                            <TextBox      Grid.Row="1" Grid.Column="3" x:Name="txtpartNumber" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" TextChanged="txtpartNumber_TextChanged" />
                                            <c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcpartNumber"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black" CodeType="Code39x" />

                                            <!--<Image        Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Stretch="Fill" Source="D:\#.Secure Work Folder\Images/bar2.png" Margin="20,0,9,0"  />-->
                                        </Grid>
                                    </Grid>

                                    <!-- 왼쪽 바코드 영역 - 3번째 row-->
                                    <Grid x:Name="content_left_3row"  Grid.Row="2" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>

                                        <!--외곽선-->
                                        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
                                        <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" />

                                        <!--왼쪽 바코드 영역 - 3번째 row -왼쪽 col-->
                                        <Grid x:Name="content_left_3row_1col" Grid.Column="0" >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>

                                            <!--외곽선-->
                                            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
                                            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" />
                                            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" />

                                            <!-- Quantity(Q) -->
                                            <Grid x:Name="quantity" Grid.Row="0" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="8" />
                                                    <RowDefinition Height="24" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="8" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="130" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="10" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Quantity(Q)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                <TextBox      Grid.Row="1" Grid.Column="3" x:Name="txtquantity" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto"  BorderBrush="Black" BorderThickness="1" TextChanged="txtquantity_TextChanged" />
                                                <c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcquantity"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black" CodeType="Code39x"/>

                                                <!--<Image        Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Stretch="Fill" Source="D:\#.Secure Work Folder\Images/bar3.png" Height="Auto" Margin="20,0,9,0"/>-->

                                            </Grid>

                                            <!--Supplier ID (V) -->
                                            <Grid x:Name="supplier_id" Grid.Row="1" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="8" />
                                                    <RowDefinition Height="24" />
                                                    <RowDefinition Height="3*" />
                                                    <RowDefinition Height="8" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="130" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="10" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Supplier ID (V)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                <TextBox      Grid.Row="1" Grid.Column="3" x:Name="txtSupplierID" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto" BorderBrush="Black" BorderThickness="1" IsReadOnly="True" TextChanged="txtSupplierID_TextChanged"/>
                                                <!--<c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcSupplierID"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black"  />-->

                                                <!--<Image        Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Stretch="Fill"  Source="D:\#.Secure Work Folder\Images/bar4.png" Height="Auto" Margin="20,0,9,0"/>-->

                                            </Grid>

                                            <!--Serial Number (S) -->
                                            <Grid x:Name="serial" Grid.Row="2" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="8" />
                                                    <RowDefinition Height="24" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="8" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="130" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="10" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Serial Number (S)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                <TextBox      Grid.Row="1" Grid.Column="3" x:Name="txtSerial" IsReadOnly="True" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto" BorderBrush="Black" BorderThickness="1" TextChanged="txtSerial_TextChanged"/>
                                                <c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcSerial"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black" CodeType="Code39x"  />

                                                <!--<Image        Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Stretch="Fill" Source="D:\#.Secure Work Folder\Images/bar5.png" Margin="20,0,9,0" />-->

                                            </Grid>

                                        </Grid>

                                        <!--왼쪽 바코드 영역 - 3번째 row -오른쪽 col-->
                                        <Grid x:Name="content_left_3row_2col" Grid.Column="1" >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1.2*" />
                                                <RowDefinition Height="1.7*" />
                                                <RowDefinition Height="1.2*" />
                                                <RowDefinition Height="1.4*" />
                                            </Grid.RowDefinitions>

                                            <!--외곽선-->
                                            <Border Grid.Row="0" BorderBrush="Black" BorderThickness="1" />
                                            <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" />
                                            <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" />
                                            <Border Grid.Row="3" BorderBrush="Black" BorderThickness="1" />

                                            <!-- Description -->
                                            <Grid x:Name="discription" Grid.Row="0" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="0" />
                                                    <RowDefinition Height="18" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="4" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="10" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock       Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Description',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" FontSize="12"/>
                                                <!--2018.08.08-->
                                                <!--<c1:C1ComboBox   Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="cboDescription" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Stretch" 
                                                                 DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" Height="Auto" Margin="90,1,8,1" />-->
                                                <TextBox      Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"  x:Name="txtDescription" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto" BorderBrush="Black" BorderThickness="1"  Margin="3,1,3,1"/>
                                            </Grid>

                                            <!--Logistic Reference -->
                                            <Grid x:Name="reference" Grid.Row="1" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="0" />
                                                    <RowDefinition Height="2*" />
                                                    <RowDefinition Height="3*" />
                                                    <RowDefinition Height="3*" />
                                                    <RowDefinition Height="4" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="10" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Logistic Reference',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                                <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtLogistic1" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto" BorderBrush="Black" BorderThickness="1"  Margin="3,1,3,1"/>
                                                <TextBox      Grid.Row="3" Grid.Column="1" x:Name="txtLogistic2" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto" BorderBrush="Black" BorderThickness="1"  Margin="3,1,3,1"/>

                                            </Grid>

                                            <!--3번째 row는 다시 2개 col 분리 -->
                                            <Grid x:Name="dataCharge_seperate" Grid.Row="2" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>

                                                <!--외곽선-->
                                                <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" />
                                                <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" />

                                                <!-- Date-->
                                                <Grid x:Name="data" Grid.Column="0" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="0" />
                                                        <RowDefinition Height="18" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="4" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="10" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Date',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                    <TextBox      Grid.Row="2" Grid.Column="1" x:Name="txtDate" TextAlignment="Left" VerticalAlignment="Stretch" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  Height="Auto" BorderBrush="Black" BorderThickness="1" />

                                                </Grid>

                                                <!-- Eng Charge-->
                                                <Grid x:Name="charge" Grid.Column="1" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="0" />
                                                        <RowDefinition Height="18" />
                                                        <RowDefinition Height="*" />
                                                        <RowDefinition Height="4" />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1*" />
                                                        <ColumnDefinition Width="10" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Eng Charge',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                                                </Grid>

                                            </Grid>

                                            <!--Batch No (H) -->
                                            <Grid x:Name="batch" Grid.Row="3" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="0" />
                                                    <RowDefinition Height="24" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="4" />
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="150" />
                                                    <ColumnDefinition Width="10" />
                                                    <ColumnDefinition Width="1*" />
                                                    <ColumnDefinition Width="10" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock    Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Batch No (H)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                                <TextBox      Grid.Row="1" Grid.Column="3" x:Name="txtBatch" IsReadOnly="True" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" Height="Auto" BorderBrush="Black" BorderThickness="1" TextChanged="txtBatch_TextChanged"/>
                                                <c1:C1BarCode Grid.Row="2" Grid.Column="1" x:Name="bcBatch"  Grid.ColumnSpan="3" HorizontalAlignment="Stretch"  VerticalAlignment="Center" BorderBrush="Black" Foreground="Black" CodeType="Code39x"  />

                                                <!--<Image        Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" Stretch="Fill" Source="D:\#.Secure Work Folder\Images/bar6.png" Margin="10,0,8,0" />-->

                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Border>


                            <!--오른쪽 선택영역-->
                            <Grid x:Name="content_right" Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Border     Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--오른쪽 선택영역 - 첫번째 row-->
                                <Grid x:Name="content_right_1row" Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"  />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8"  />
                                    </Grid.RowDefinitions>

                                    <!--생산제품 BOX ID LOT ID-->
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource Condition_Header_BorderStyle}"/>

                                        <!--출하일-->
                                        <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                            <TextBlock       Text="{Binding ConverterParameter='출하일',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        </Border>

                                        <Grid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="0"   Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,0,0">
                                                <ctrlLib:LGCDatePicker     x:Name="dtpDate" SelectedDataTimeChanged="dtpDate_SelectedDataTimeChanged"   />
                                            </Border>
                                            <Border Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                                <TextBlock Text="{Binding ConverterParameter='X',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                            </Border>
                                            <Border Grid.Column="2"    Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,0,0">
                                                <c1:C1NumericBox         Value="3" x:Name="nbX"  Style="{StaticResource C1NumericBoxStyle}" Width="40"/>
                                            </Border>
                                            <Border  Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                                <TextBlock Text="{Binding ConverterParameter='Y',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                            </Border>
                                            <Border Grid.Column="4"    Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0">
                                                <c1:C1NumericBox         Value="3" x:Name="nbY"  Style="{StaticResource C1NumericBoxStyle}" Width="40"/>
                                            </Border>

                                        </Grid>


                                        <!--생산제품-->
                                        <Border Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                            <TextBlock Text="{Binding ConverterParameter='생산제품',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        </Border>
                                        <Border    Grid.Row="2" Grid.Column="2"  Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,1,0">
                                            <!--<TextBox  x:Name="txtProduct"  Style="{StaticResource TextBoxBaseStyle}"/>-->
                                            <c1:C1ComboBox   x:Name="cboProduct" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboProduct_SelectedValueChanged" />
                                        </Border>

                                        <!--BOX ID-->
                                        <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0">
                                            <TextBlock  Text="{Binding ConverterParameter='BOXID',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        </Border>
                                        <Border    Grid.Row="3" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,0,0">
                                            <Grid       Grid.Row="2" Grid.Column="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <CheckBox     Grid.Column="0" x:Name="chkBoxid"   HorizontalAlignment="Left" Padding="0" Click="chkBoxid_Click" />
                                                <TextBox      Grid.Column="1" x:Name="txtBoxId"   Style="{StaticResource TextBoxBaseStyle}" IsReadOnly="True" TextChanged="txtBoxId_TextChanged" />
                                            </Grid>
                                        </Border>

                                        <Border Grid.Row="3" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,0" Width="Auto">
                                            <Button   x:Name="btnSearch"    Content="{Binding ConverterParameter=조회,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                      Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}"  Click="btnSearch_Click" Margin="3" Width="Auto"/>
                                        </Border>

                                        <!--LOT ID-->
                                        <Border Grid.Row="4"  Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1">
                                            <TextBlock  Text="{Binding ConverterParameter='LOTID',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        </Border>
                                        <Border   Grid.Row="4"  Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderThickness="1,1,0,1">
                                            <TextBox x:Name="txtLotId"   Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" KeyDown="txtLotId_KeyDown"  />
                                        </Border>
                                        <Border   Grid.Row="4"  Grid.Column="3"  Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,1">
                                            <Button   x:Name="btnInput"    Content="{Binding ConverterParameter=입력,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                      Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInput_Click" Margin="3"/>
                                        </Border>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="2" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>

                                    <!--포장 건수-->
                                    <TextBlock x:Name="tbBoxingWait_cnt" Grid.Column="1" Text="[ 0 건 ]" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5"/>

                                    <!--포장대기(TextBlock)-->
                                    <TextBlock    Grid.Column="3" x:Name="txtcnt" Text="{Binding ConverterParameter=포장대기,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" Foreground="Blue" FontWeight="Bold"/>


                                    <!--작업초기화(BUTTON)-->
                                    <Button  Grid.Column="5" x:Name="btnReset"    Content="{Binding ConverterParameter=작업초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnReset_Click" />

                                </Grid>


                                <!--오른쪽 선택영역 - 세번째 row : 그리드 영역-->
                                <Grid x:Name="content_right_3row" Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--결과 그리드-->
                                    <c1:C1DataGrid x:Name="dgResult" Grid.Row="0" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" CanUserRemoveRows="True" CanUserAddRows="True" NewRowVisibility="Bottom" 
                                                   MouseLeftButtonUp="dgResult_MouseLeftButtonUp" Width="Auto" MouseDoubleClick="dgResult_MouseDoubleClick" MouseRightButtonDown="dgResult_MouseRightButtonDown" >
                                        <c1:C1DataGrid.ContextMenu>
                                            <ContextMenu >
                                                <MenuItem x:Name="menu_LotDelete" Header="삭제" Click="menu_LotDelete_Click"></MenuItem>
                                            </ContextMenu>
                                        </c1:C1DataGrid.ContextMenu>
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn     Header = "Lot ID "       Binding = "{Binding LOTID}"       HorizontalAlignment="Center"  Width="Auto"/>
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>

                            </Grid>

                        </Grid>

                        <!--하단 정보 영역-->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2" />
                                <RowDefinition Height="3" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="3" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="13" />
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Condition_Header_BorderStyle}"/>

                            <Border     Grid.Row="1" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="3"  Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            <!--<Border     Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>-->

                            <Button     Grid.Row="2" Grid.Column="1" x:Name="btnOutput"    Content="{Binding ConverterParameter=출력,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnOutput_Click" />

                        </Grid>
                    </Grid>
                </Grid>
            </Grid>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
