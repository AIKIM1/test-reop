<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" x:Class="LGC.GMES.MES.PACK001.PACK001_076"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="PALLET MIX 포장">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.5*" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="3*" />
                </Grid.ColumnDefinitions>
                <Border Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                <!--왼쪽영역-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="34" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="8" />
                    </Grid.RowDefinitions>
                    <!--왼쪽 타이틀-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>
                        <!--백그라운드용-->
                        <Border Grid.Row="0" Grid.ColumnSpan="6" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                        <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" Grid.ColumnSpan="2"><Run Text="{Binding ConverterParameter='PALLET MIX 포장', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                    </Grid>
                    <!--백그라운드용-->
                    <Border Grid.Row="1" Grid.RowSpan="8" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1" />
                    <!--왼쪽 BOX ID-->
                    <Grid Grid.Row="2" x:Name="woHeadGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="0.5*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="4.5*" />
                            <RowDefinition Height="0*" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>
                        <!--백그라운드용-->
                        <Border Grid.Row="0" Grid.RowSpan="7" Grid.Column="1" Style="{StaticResource Condition_BorderStyle}" />
                        <!--BOX ID TEXT-->
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <!--BOXID(TEXTBLOCK)-->
                            <TextBlock Grid.Column="1" Text="{Binding ConverterParameter='PLTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <!--BOXID입력(TEXTBOX)-->
                            <TextBox Grid.Column="2" x:Name="txtPltId" Text="" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" IsEnabled="False" />
                        </Grid>
                        <Grid Grid.Row="2" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <!--포장수량(TEXTBLOCK)-->
                            <TextBlock Grid.Column="1" Text="{Binding ConverterParameter='포장수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" />
                            <!--포장수량(NUMERICBOX)-->
                            <c1:C1NumericBox Grid.Column="2" Value="0" x:Name="nbBoxingCnt" Style="{StaticResource C1NumericBoxStyle}" Height="Auto" VerticalAlignment="Center" Minimum="0" Maximum="9999" ValueChanged="nbBoxingCnt_ValueChanged" />
                        </Grid>
                        <!--LOT ID-->
                        <Grid Grid.Row="3" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <!--LOTID(TEXTBLOCK)-->
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboKind" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" IsEnabled="False" />
                            <!--LOTID 입력(TEXTBOX)-->
                            <TextBox Grid.Column="2" x:Name="txtBoxID" Text="" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" IsEnabled="False" PreviewKeyDown="txtBoxID_PreviewKeyDown" KeyDown="txtBoxID_KeyDown">
                                <TextBox.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem Header="{Binding ConverterParameter='COPY', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Click="MenuItem_Copy_Click" />
                                        <MenuItem Header="{Binding ConverterParameter='CUT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Click="MenuItem_Cut_Click" />
                                    </ContextMenu>
                                </TextBox.ContextMenu>
                            </TextBox>
                            <!--남은 수량(TextBlock)-->
                            <TextBlock Grid.Column="3" x:Name="txtRemainCount" Text="0" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" Foreground="Red" FontWeight="Bold" />
                        </Grid>
                        <!--포장제품-->
                        <Grid Grid.Row="4" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <!--포장제품-->
                            <TextBlock Grid.Column="1" Text="{Binding ConverterParameter='포장제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                       Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" />
                            <!--포장제품(TEXTBOX)-->
                            <TextBox       Grid.Column="2" x:Name="txtBoxingProd" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                            <c1:C1ComboBox Grid.Column="2" x:Name="cboBoxingProd" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" Visibility="Collapsed" />
                            <TextBox       Grid.Column="4" x:Name="txtMainWorkorderID"   Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Margin="6,0,0,6" Visibility="Collapsed" />
                            <TextBox       Grid.Column="4" x:Name="txtClass"      Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Margin="6,0,0,6" Visibility="Collapsed" />
                            <TextBox       Grid.Column="4" x:Name="txtProcessSegmentID"     Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Margin="6,0,0,6" Visibility="Collapsed" />
                            <TextBox       Grid.Column="4" x:Name="txtMainProductID" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Margin="6,0,0,6" Visibility="Collapsed" />
                            <TextBox       Grid.Column="4" x:Name="txtMainProcessID" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Margin="6,0,0,6" Visibility="Collapsed" />
                            <TextBox       Grid.Column="4" x:Name="txtMainEquipmentSegmentID" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Margin="6,0,0,6" Visibility="Collapsed" />
                        </Grid>
                        <!--포장오더-->
                        <Grid Grid.Row="6" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="100" />
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <c1:C1DataGrid x:Name="dgBoxWo" Grid.Column="1" IsReadOnly="True" CanUserSort="False" HeadersVisibility="Column" SelectionMode="SingleCell" CanUserRemoveRows="True" CanUserAddRows="True" NewRowVisibility="Bottom" Width="Auto" VerticalScrollBarVisibility="Auto" ClipboardPasteMode="None">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn Header="변경" Width="Auto">
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Content="{Binding ConverterParameter=변경, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" x:Name="btnChange" Height="Auto" HorizontalAlignment="Stretch" Width="45" Click="BtnChange_Click" />
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn Header="라인"   Binding="{Binding EQSGID}"     HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="라인"   Binding="{Binding EQSGNAME}"   HorizontalAlignment="Center" IsReadOnly="True" Width="2*" />
                                    <c1:DataGridTextColumn Header="W/O"    Binding="{Binding WOID}"       HorizontalAlignment="Center" IsReadOnly="True" Width="2.5*" />
                                    <c1:DataGridTextColumn Header="제품ID" Binding="{Binding PRODID}"     HorizontalAlignment="Center" IsReadOnly="True" Width="2.5*" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="제품ID" Binding="{Binding BOX_PRODID}" HorizontalAlignment="Center" IsReadOnly="True" Width="2.5*" />
                                    <c1:DataGridTextColumn Header="CLASS"  Binding="{Binding CLASS}"      HorizontalAlignment="Center" IsReadOnly="True" Width="2.5*" Visibility="Collapsed" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </Grid>
                        <Grid Grid.Row="5" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="0" />
                                <ColumnDefinition Width="87*" />
                                <ColumnDefinition Width="215*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <!-- 라인 -->
                            <TextBlock Grid.Column="1" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" Visibility="Collapsed" />
                            <!--라인(TEXTBOX)-->
                            <TextBox Grid.Column="2" x:Name="txtEqsgID" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Grid.ColumnSpan="2" Visibility="Collapsed" />
                            <TextBox Grid.Column="3" x:Name="txtProcId" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Grid.ColumnSpan="2" Visibility="Collapsed" />
                            <TextBox Grid.Column="3" x:Name="txtWoId"   Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Grid.ColumnSpan="2" Visibility="Collapsed" />
                        </Grid>
                    </Grid>
                    <!--왼쪽 버튼묶음-->
                    <Grid Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>
                        <!--백그라운드용-->
                        <Border Grid.Column="1" Grid.ColumnSpan="7" Style="{StaticResource Condition_BorderStyle}" />
                        <!--포장대기(TextBlock)-->
                        <TextBlock Grid.Column="1" x:Name="txtPackingStatus" Text="{Binding ConverterParameter=포장대기, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />
                        <!--취소(BUTTON)-->
                        <Button Grid.Column="2" x:Name="btnReset" Content="{Binding ConverterParameter=작업초기화, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Click="BtnReset_Click" />
                        <!--선택취소(BUTTON)-->
                        <Button Grid.Column="4" x:Name="btnSelectCacel" Content="{Binding ConverterParameter=선택취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Click="BtnSelectCacel_Click" />
                        <!--포장(BUTTON)-->
                        <Button Grid.Column="6" x:Name="btnPack" Content="{Binding ConverterParameter=포장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnPack_Click" />
                    </Grid>
                    <!--조회 갯수-->
                    <Grid Grid.Row="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="tbBoxingWait_cnt" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5" />
                    </Grid>
                    <!--왼쪽 BOX ID 그리드-->
                    <Grid Grid.Row="7">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>
                        <c1:C1DataGrid x:Name="dgBoxLot" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" CanUserRemoveRows="True" CanUserAddRows="True" NewRowVisibility="Bottom" Width="Auto" ClipboardPasteMode="None">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridCheckBoxColumn Header="선택"          Binding="{Binding CHK}"           HorizontalAlignment="Center" Width="40" />
                                <c1:DataGridTextColumn     Header="BOXID"         Binding="{Binding BOXID}"         HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                <c1:DataGridTextColumn     Header="MODEL"         Binding="{Binding MODEL}"         HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                <c1:DataGridTextColumn     Header="제품ID"        Binding="{Binding PRODID}"        HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                <c1:DataGridTextColumn     Header="라인"          Binding="{Binding EQSGID}"        HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed" />
                                <c1:DataGridTextColumn     Header="라인"          Binding="{Binding EQSGNAME}"      HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                <c1:DataGridTextColumn     Header="W/O"           Binding="{Binding WOID}"          HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                <c1:DataGridTextColumn     Header="CLASS"         Binding="{Binding CLASS}"         HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed" />
                                <c1:DataGridTextColumn     Header="OCOP_RTN_FLAG" Binding="{Binding OCOP_RTN_FLAG}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>
                </Grid>
                <!--오른쪽영역-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                    </Grid.ColumnDefinitions>
                    <!--백그라운드용-->
                    <Border Grid.Row="0" Grid.ColumnSpan="3" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />
                    <!--오른쪽 타이틀-->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>
                        <!--이력조회(TEXBLOCK)-->
                        <TextBlock Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                            <Run Text="{Binding ConverterParameter='이력조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                        </TextBlock>
                    </Grid>
                    <!--백그라운드용-->
                    <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1" />
                    <!--오른쪽 조회영역-->
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="0" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="0" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="13" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="6" Style="{StaticResource Condition_BorderStyle}" />
                        <!--조회영역 첫번째 row-->
                        <Grid Grid.Row="1" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <!--AREA(TEXTBLOCK)-->
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='AREA', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <!--AREA(COMBO)-->
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <!--모델(TEXTBLOCK)-->
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <!--모델(COMBO)-->
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboProductModel" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <!--제품(TEXTBLOCK)-->
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <!--제품(COMBO)-->
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboProduct" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />
                        </Grid>
                        <!--조회영역 두번째 row-->
                        <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="5*" />
                            </Grid.ColumnDefinitions>
                            <!--포장일자(TEXTBLOCK)-->
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='포장일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="3" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="3" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ctrlLib:LGCDatePicker Grid.Column="0" x:Name="dtpDateFrom" DatepickerType="Date" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />
                                <TextBlock             Grid.Column="2" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" />
                                <ctrlLib:LGCDatePicker Grid.Column="4" x:Name="dtpDateTo" DatepickerType="Date" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" />
                            </Grid>
                        </Grid>
                        <!--조회 버튼-->
                        <Button Grid.Row="3" Grid.Column="4" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Right" VerticalAlignment="Center" Click="BtnSearch_Click" />
                    </Grid>
                    <Grid Grid.Row="4" Grid.Column="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <!--조회건수-->
                            <TextBlock x:Name="tbBoxHistory_cnt" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5" />
                            <!--BOXID(TEXTBLOCK)-->
                            <TextBlock Grid.Column="3" Text="{Binding ConverterParameter='BOX검색', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <!--BOXID입력(TEXTBOX)-->
                            <TextBox Grid.Column="4" x:Name="txtSearchBox" Text="" Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch" BorderBrush="Black" BorderThickness="1" KeyDown="TxtSearchBox_KeyDown" />
                        </Grid>
                    </Grid>
                    <Grid Grid.Row="5" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <!--EXCEL(BUTTON)-->
                            <Button Grid.Row="0" Grid.Column="1" x:Name="btnExcel" Content="{Binding ConverterParameter=Export, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                    Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" HorizontalAlignment="Right" />
                        </Grid>
                        <c1:C1DataGrid x:Name="dgPlthistory" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleCell" Grid.RowSpan="3" Width="Auto" MouseLeftButtonUp="DgPlthistory_MouseLeftButtonUp" MouseDoubleClick="DgPlthistory_MouseDoubleClick" LoadedCellPresenter="DgPlthistory_LoadedCellPresenter">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTemplateColumn Header="재포장" Width="Auto" Visibility="Collapsed">
                                    <c1:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="{Binding ConverterParameter=적용, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" x:Name="btnAccept" Height="Auto" HorizontalAlignment="Stretch" Width="Auto"></Button>
                                        </DataTemplate>
                                    </c1:DataGridTemplateColumn.CellTemplate>
                                </c1:DataGridTemplateColumn>
                                <c1:DataGridTextColumn Header="동"             Binding="{Binding AREANAME}"        HorizontalAlignment="Left" Width="Auto" />
                                <c1:DataGridTextColumn Header="라인"           Binding="{Binding EQSGNAME}"        HorizontalAlignment="Left" Width="Auto" />
                                <c1:DataGridTextColumn Header="CARRIERID"      Binding="{Binding CARRIERID}"       HorizontalAlignment="Left" Width="Auto" Visibility="Collapsed" />
