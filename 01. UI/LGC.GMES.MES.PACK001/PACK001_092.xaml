<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK001_092"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1280">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/C1DataGridStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="출하검사/출고 인터락 LOT 등록/이력">
            <c1:C1TabControl x:Name="tabControlMain">
                <!-- 1 Tab 출고검사/출고 인터락 LOT 등록 -->
                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='출하검사/출고 인터락 LOT 등록'}" >
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*"/>
                            <ColumnDefinition Width="11*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="102"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="0"/>
                        </Grid.RowDefinitions>

                        <!-- SubTitle Area 1Line -->
                        <Border Grid.Row="1" Style="{StaticResource Condition_BorderStyle}" Grid.ColumnSpan="2"/>
                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock            Grid.Column="0" Text="{Binding ConverterParameter='FACTORY', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox        Grid.Column="1" x:Name="cboPlant" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />
                                </Grid>

                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock            Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox        Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />
                                </Grid>

                                <Grid Grid.Column="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock            Grid.Column="0" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox        Grid.Column="1" x:Name="cboEqsg" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />
                                </Grid>

                                <Grid Grid.Column="6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>

                                    <!--<TextBlock Grid.Column="0" Text="LOT생성일자" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>-->
                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='LOT생성일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>

                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="3"    />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="3"    />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <ctrlLib:LGCDatePicker  Grid.Column="0" x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" />
                                        <TextBlock              Grid.Column="2" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                        <ctrlLib:LGCDatePicker  Grid.Column="4" x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Height="Auto" />
                                    </Grid>
                                </Grid>

                                <!-- 줄맞춤용 -->
                                <Button Grid.Column="8" x:Name="noUseBtn" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Visibility="Hidden"/>
                            </Grid>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock            Grid.Column="0" Text="{Binding ConverterParameter='PRJT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox        Grid.Column="1" x:Name="cboPrjt" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />
                                </Grid>

                                <Grid Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock            Grid.Column="0" Text="{Binding ConverterParameter='PRODUCT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox        Grid.Column="1" x:Name="cboProd" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" />
                                </Grid>

                                <Grid Grid.Column="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*" />
                                        <ColumnDefinition Width="6*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock                 Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox x:Name="txtLotId"  Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" PreviewKeyDown="txtLotId_PreviewKeyDown" />
                                </Grid>

                                <Button Grid.Column="8" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand"  Click="btnSearch_Click"/>
                            </Grid>
                        </Grid>

                        <!--메인 그리드-->
                        <Grid Grid.Row="3" x:Name="MainGrid" Grid.ColumnSpan="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="0*"/>
                            </Grid.ColumnDefinitions>

                            <!--1사분면 그리드-->
                            <Grid Grid.Row="0" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />

                                <Grid Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='대상조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                                    <ToggleButton   Grid.Column="1"  x:Name="btnRight" Style="{StaticResource btnLeftTopConerStyleHorizontal}" IsChecked="True" Checked="btnRight_Checked" Unchecked="btnRight_Unchecked" Margin="0,5" Visibility="Collapsed"/>
                                </Grid>

                                <Border Grid.Row="1" Background="#e8ebed" BorderThickness="1,1,1,0" BorderBrush="#8a8a8a"></Border>

                                <c1:C1DataGrid Grid.Row="1" x:Name="dgLotList" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleCell" Width="Auto" Margin="8" MouseLeftButtonUp="dgLotList_MouseLeftButtonUp">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridCheckBoxColumn Binding = "{Binding CHK, Mode=TwoWay}" Width="Auto"  HorizontalAlignment="Center" CanUserSort="False" >
                                            <c1:DataGridCheckBoxColumn.Header>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                    <CheckBox x:Name="chkHeaderAll" Margin="0" Width="45" Checked="chkHeaderAll_Checked" Unchecked="chkHeaderAll_Unchecked"></CheckBox>
                                                </StackPanel>
                                            </c1:DataGridCheckBoxColumn.Header>
                                        </c1:DataGridCheckBoxColumn>
                                        <c1:DataGridTextColumn     Header = "LOTID"         Binding = "{Binding LOTID}"             HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "동"            Binding = "{Binding AREAID}"            HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "AREANAME"      Binding = "{Binding AREANAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "EQSGNAME"      Binding = "{Binding EQSGNAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "EQSGID"        Binding = "{Binding EQSGID}"            HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "PRODID"        Binding = "{Binding PRODID}"            HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "LOTSTAT"       Binding = "{Binding LOTSTAT}"           HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "PROCNAME"      Binding = "{Binding PROCNAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "PROCID"        Binding = "{Binding PROCID}"            HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "WIPSNAME"      Binding = "{Binding WIPSNAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "WIPSTAT"       Binding = "{Binding WIPSTAT}"           HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "EQPTNAME"      Binding = "{Binding EQPTNAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "EQPTID"        Binding = "{Binding EQPTID}"            HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "BOXID"         Binding = "{Binding BOXID}"             HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "WIPHOLD"       Binding = "{Binding WIPHOLD}"           HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "WOID"          Binding = "{Binding WOID}"              HorizontalAlignment="Center"     Width="Auto" />

                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0,1,1,1" BorderBrush="#8a8a8a"></Border>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Button Grid.Column="1" x:Name="btnDown" Width="50" Content="{Binding ConverterParameter=Title1,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonDownStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="3" Click="btnDown_Click"/>
                                <Button Grid.Column="3" x:Name="btnUpLoss"   Width="50" Content="{Binding ConverterParameter=Title2,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonUpStyle}"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3" Click="btnUpLoss_Click" />

                            </Grid>

                            <!--3사분면 그리드-->
                            <Grid Grid.Row="2" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />

                                <Grid Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='출하인터락대상', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                                </Grid>

                                <Border Grid.Row="1" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>

                                <c1:C1DataGrid Grid.Row="1" x:Name="dgBottomList" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleCell" Width="Auto" Margin="8" MouseLeftButtonUp="dgBottomList_MouseLeftButtonUp">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridCheckBoxColumn Binding = "{Binding CHK, Mode=TwoWay}" Width="Auto"  HorizontalAlignment="Center" CanUserSort="False" >
                                            <c1:DataGridCheckBoxColumn.Header>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                    <CheckBox x:Name="chkBottomHeaderAll" Margin="0" Width="45" HorizontalAlignment="Center" Checked="chkBottomHeaderAll_Checked" Unchecked="chkBottomHeaderAll_Unchecked"></CheckBox>
                                                </StackPanel>
                                            </c1:DataGridCheckBoxColumn.Header>
                                        </c1:DataGridCheckBoxColumn>
                                        <c1:DataGridTextColumn     Header = "LOTID"         Binding = "{Binding LOTID}"             HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "동"            Binding = "{Binding AREAID}"            HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "AREANAME"      Binding = "{Binding AREANAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "EQSGNAME"      Binding = "{Binding EQSGNAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "EQSGID"        Binding = "{Binding EQSGID}"            HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "PRODID"        Binding = "{Binding PRODID}"            HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "LOTSTAT"       Binding = "{Binding LOTSTAT}"           HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "PROCNAME"      Binding = "{Binding PROCNAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "PROCID"        Binding = "{Binding PROCID}"            HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "WIPSNAME"      Binding = "{Binding WIPSNAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "WIPSTAT"       Binding = "{Binding WIPSTAT}"           HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "EQPTNAME"      Binding = "{Binding EQPTNAME}"          HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "EQPTID"        Binding = "{Binding EQPTID}"            HorizontalAlignment="Center"     Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "BOXID"         Binding = "{Binding BOXID}"             HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "WIPHOLD"       Binding = "{Binding WIPHOLD}"           HorizontalAlignment="Center"     Width="Auto" />
                                        <c1:DataGridTextColumn     Header = "WOID"          Binding = "{Binding WOID}"              HorizontalAlignment="Center"     Width="Auto" />

                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--좌우 Splitter-->
                            <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--우측 내용은 화살표 필요 없어서 결합을 위한 처리-->
                            <Grid Grid.Row="0" Grid.RowSpan="3" Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="0"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <!--2사분면 배경-->
                                <Border Grid.Row="0"  BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />

                                <!--2사분면 그리드-->
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>

                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" Margin="10,8,0,7"><Run Text="{Binding ConverterParameter='승인자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                        <TextBox   x:Name="txtGrator"        Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" PreviewKeyDown="txtGrator_PreviewKeyDown"/>
                                        <Button    x:Name="btnGrator"        Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" Click="btnGrator_Click"/>
                                    </StackPanel>

                                    <Border Grid.Row="1" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>

                                    <c1:C1DataGrid Grid.Row="1" x:Name="dgGrator" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="8" CanUserRemoveRows="True" CanUserAddRows="True"  >
                                        <c1:C1DataGrid.Resources>
                                            <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_trash.png" Stretch="Uniform"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </c1:C1DataGrid.Resources>
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn      Header = "차수"       Binding = "{Binding APPR_SEQS}"   HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "ID"         Binding = "{Binding USERID}"      HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "이름"       Binding = "{Binding USERNAME}"    HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "부서"       Binding = "{Binding DEPTNAME}"    HorizontalAlignment="Left"   Width="Auto" />
                                            <c1:DataGridTemplateColumn  Header = "제거"       Width="40">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button x:Name="dgGratorRemover" Style="{StaticResource grButtonStyle}" Click="dgGratorRemover_Click"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>



                                <Border Grid.Row="1" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>

                                <!--4사분면 그리드-->
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="32" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" BorderThickness="1,1,1,1" Style="{StaticResource BorderSubTitleStyle}" />

                                    <StackPanel Grid.Row="0" Orientation="Horizontal">
                                        <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" Margin="10,8,0,7"><Run Text="{Binding ConverterParameter='참조자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                        <TextBox   x:Name="txtReferrer"        Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" PreviewKeyDown="txtReferrer_PreviewKeyDown" />
                                        <Button    x:Name="btnReferrer"        Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" Click="btnReferrer_Click"/>
                                    </StackPanel>



                                    <c1:C1DataGrid Grid.Row="1" x:Name="dgReferrer" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="8" CanUserRemoveRows="True" CanUserAddRows="True"  >
                                        <c1:C1DataGrid.Resources>
                                            <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_trash.png" Stretch="Uniform"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </c1:C1DataGrid.Resources>
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn      Header = "차수"       Binding = "{Binding APPR_SEQS}"   HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "ID"         Binding = "{Binding USERID}"      HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "이름"       Binding = "{Binding USERNAME}"    HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "부서"       Binding = "{Binding DEPTNAME}"    HorizontalAlignment="Left"   Width="Auto" />
                                            <c1:DataGridTemplateColumn  Header = "제거"       Width="40">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button x:Name="dgReferrerRemover" Style="{StaticResource grButtonStyle}" Click="dgReferrerRemover_Click" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>
                            </Grid>
                        </Grid>

                        <!--<Border Grid.Row="5" Style="{StaticResource Condition_BorderStyle}"/>-->
                        <Border Grid.Row="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,1" Grid.ColumnSpan="2"/>
                        <Grid Grid.Row="5" Grid.ColumnSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="45" />
                                    <ColumnDefinition Width="6*" />
                                </Grid.ColumnDefinitions>


                                <TextBlock   Grid.Column="0" Text="{Binding ConverterParameter='비고',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>
                                <TextBox     Grid.Column="1" x:Name="txtWipNote" Text=""    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" IsReadOnly="False"/>
                            </Grid>

