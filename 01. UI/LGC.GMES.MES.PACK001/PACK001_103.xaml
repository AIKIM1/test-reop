<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" x:Class="LGC.GMES.MES.PACK001.PACK001_103"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="1366" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.PACK001;component/Style/ControlStyles_PACK.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="LOT 홀딩">
            <Grid x:Name="grdMain">
                <c1:C1TabControl x:Name="tbcLotHoldRelease">
                    <!-- ################################################### LOT 홀드 ################################################### -->
                    <c1:C1TabItem x:Name="Hold" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='LOT 홀드'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="3*" />
                            </Grid.ColumnDefinitions>
                            <!--좌측 -->
                            <Grid Grid.Row="1" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" Grid.Column="1" Grid.RowSpan="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="3*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="5" />
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="5" />
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1,1,1,1" />
                                    <TextBlock Grid.Row="0" Grid.Column="1" Width="Auto" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='Hold 대상 Lot 입력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                                    <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,1,1,1" />
                                    <Grid Grid.Row="2" Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="1">
                                            <!-- LOTID -->
                                            <Grid Grid.Row="0" Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="96" />
                                                    <ColumnDefinition Width="1*" />
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1" />
                                                <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />
                                                <TextBox Grid.Column="1" x:Name="txtHoldLOTID" Width="Auto" Style="{StaticResource TextBoxBaseStyle}" PreviewKeyDown="Hold_PreviewKeyDown" KeyDown="txtHoldLOTID_KeyDown" />
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                    <Grid Grid.Row="4" Grid.Column="1" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="3" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="4" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0" x:Name="txtHoldLOTRowCount" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" VerticalAlignment="Bottom" />
                                            <!--선택취소(BUTTON)-->
                                            <Button Grid.Column="1" x:Name="btnHoldSelectCancel" Content="{Binding ConverterParameter=선택취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                                    Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Cursor="Hand" Click="btnHoldSelectCancel_Click" />
                                            <!--취소(BUTTON)-->
                                            <Button Grid.Column="3" x:Name="btnHoldAllCancel" Content="{Binding ConverterParameter=전체취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                                    Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Right" Cursor="Hand" Click="btnHoldAllCancel_Click" />
                                            <Button Grid.Column="5" x:Name="btnHoldExcelLoad" Content="{Binding ConverterParameter=Excel Upload, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                                    Style="{DynamicResource Content_ModuleButtonExcelImportStyle}" HorizontalAlignment="Center" Cursor="Hand" Click="btnHoldExcelLoad_Click" />
                                        </Grid>
                                        <c1:C1DataGrid Grid.Row="3" x:Name="dgHoldLOT" HeadersVisibility="Column" SelectionMode="SingleCell" RowHeight="Auto" CanUserRemoveRows="True" CanUserAddRows="True" NewRowVisibility="Bottom" Width="Auto" Grid.ColumnSpan="2" LoadedColumnHeaderPresenter="dgHoldLOT_LoadedColumnHeaderPresenter">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택"  >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="chkHold_Click" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn     Header="LotID"         Binding="{Binding LOTID}"         HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn     Header="라인명"        Binding="{Binding EQSGNAME}"      HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn     Header="라인"          Binding="{Binding EQSGID}"        HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn     Header="공정"          Binding="{Binding PROCNAME}"      HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn     Header="공정상태"      Binding="{Binding WIPSNAME}"      HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn     Header="제품ID"        Binding="{Binding PRODID}"        HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn     Header="WOID"          Binding="{Binding WOID}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn     Header="자재설명"      Binding="{Binding PRODNAME}"      HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn     Header="포장정보"      Binding="{Binding BOXID}"         HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn     Header="공정상태코드"  Binding="{Binding WIPSTAT}"       HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn     Header="OCOP_RTN_FLAG" Binding="{Binding OCOP_RTN_FLAG}" HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>


                            </Grid>

                            <!-- GridSplitter -->
                            <GridSplitter Grid.Row="1" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" />

                            <Grid Grid.Row="3" Grid.Column="2" Grid.RowSpan="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="*"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Grid.Column ="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='선택목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                <TextBlock Grid.Column="4" x:Name="txtSelCnt" Text="0" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,0,5,0" />
                                <c1:C1DataGrid x:Name="dgSelectHold" Grid.Row="1" Grid.ColumnSpan="5" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="1" SelectionMode="SingleRow" Margin="8,8,8,8"  >
                                    <c1:C1DataGrid.Columns>

                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택"  Visibility="Collapsed">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "라인"       Binding = "{Binding EQSGNAME}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "LotID"      Binding = "{Binding LOTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "카세트ID"   Binding = "{Binding CSTID}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "제품ID"     Binding = "{Binding PRODID}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "제품명"     Binding = "{Binding PRODNAME}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "모델ID"     Binding = "{Binding MODELID}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header = "수량"       Binding = "{Binding WIPQTY}"            HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "단위"       Binding = "{Binding UNIT_CODE}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "생산일자"   Binding = "{Binding CALDATE}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "PJT"        Binding = "{Binding PRJT_NAME}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "버전"       Binding = "{Binding PROD_VER_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "대LOT"      Binding = "{Binding LOTID_RT}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>

                                    </c1:C1DataGrid.Columns>

                                    <!-- 
                                    <c1:C1DataGrid.BottomRows >
                                        <c1:DataGridSummaryRow x:Name="summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                    -->



                                </c1:C1DataGrid>

                            </Grid>


                            <GridSplitter Grid.Row="1" Grid.Column="3" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Width="Auto" />

                            <!-- 우측 -->
                            <Grid Grid.Row="1" Grid.Column="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="2.5*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1,1,1,1" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Width="Auto" Style="{StaticResource Content_ModuleTitleStyle}">
                                        <Run Text="{Binding ConverterParameter='HOLD사유LEVEL별등록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </TextBlock>
                                <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,1,1,1" />
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.RowDefinitions>

                                        <RowDefinition Height="4*" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="1.6*" />
                                    </Grid.RowDefinitions>

                                    <!-- level 별 -->
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="1*" />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1" />

                                        <c1:C1DataGrid x:Name="dgHoldGroup1" Grid.Row="0" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="None" CanUserSort="False" CanUserFilter="False" Margin="8,8,4,8">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn Header="EMT" EditOnSelection="False" Name="CHK">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="radHoldGroup1" IsChecked="{Binding CHK, Mode=OneWay}" HorizontalAlignment="Center" Checked="RadioButton_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn Header="LEVEL1"    Binding="{Binding DFCT_CODE_NAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                                                <c1:DataGridTextColumn Header="DEFC_CODE" Binding="{Binding DFCT_CODE}"      HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>

                                        <c1:C1DataGrid x:Name="dgHoldGroup2" Grid.Row="0" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="None" CanUserSort="False" CanUserFilter="False" Margin="4,8,8,8">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn Header="EMT" EditOnSelection="False" Name="CHK">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="radHoldGroup2" IsChecked="{Binding CHK, Mode=OneWay}" HorizontalAlignment="Center" Checked="RadioButton_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn Header="LEVEL2"   Binding="{Binding DFCT_DETL_NAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                                                <c1:DataGridTextColumn Header="RESNCODE" Binding="{Binding RESNCODE}"       HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>


                                    <!-- HOLD 비고 -->
                                    <Grid Grid.Row="4" Grid.Column="1">
                                        <Grid.RowDefinitions>

                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="auto" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="130" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="65*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />

                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="7" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1" />
                                        <!-- 예상헤제일 -->
                                        <TextBlock Grid.Row ="0" Grid.Column="1"  Text="{Binding ConverterParameter='예상해제일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />
                                        <ctrlLib:LGCDatePicker Grid.Row ="0" Grid.Column="2" x:Name="dtpDate" DatepickerType="Date" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" Grid.ColumnSpan="2" Cursor="Hand" />
                                        <!-- 전기일 -->
                                        <TextBlock Grid.Row ="1" Grid.Column="1"  Text="{Binding ConverterParameter='전기일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" Visibility="Collapsed" />
                                        <ctrlLib:LGCDatePicker Grid.Row ="1" Grid.Column="2" x:Name="dtpCalDate" DatepickerType="Date" HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" Cursor="Hand" Grid.ColumnSpan="2" IsEnabled="False" Visibility="Collapsed"/>

                                        <TextBlock Grid.Row ="1" Grid.Column="1"  Text="{Binding ConverterParameter='HOLD사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />
                                        <c1:C1ComboBox   Grid.Row="1" Grid.Column="2"  x:Name="cboHoldType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Visibility="Visible" IsEnabled="False"/>


                                        <!-- 담당자 -->
                                        <TextBlock Grid.Row ="2" Grid.Column="1" Text="{Binding ConverterParameter='담당자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" />
                                        <TextBox Grid.Row ="2" Grid.Column="2" x:Name="txtHoldPerson" Style="{StaticResource TextBoxBaseStyle}" KeyDown="txtHoldPerson_KeyDown" />
                                        <Button Grid.Row ="2" Grid.Column="3" x:Name="btnHoldPerson" Content="{Binding ConverterParameter=Title17, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Cursor="Hand" Click="btnHoldPerson_Click" />


                                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding ConverterParameter='HOLD 비고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <RichTextBox Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="3" x:Name="rtbHoldCompare" BorderThickness="1" BorderBrush="#FFC3C3C3" Margin="3">
                                            <RichTextBox.Resources>
                                                <Style TargetType="{x:Type Paragraph}">
                                                    <Setter Property="Margin" Value="5" />
                                                </Style>
                                            </RichTextBox.Resources>
                                            <FlowDocument LineHeight="10">
                                                <Paragraph FontSize="10pt" LineHeight="10pt" LineStackingStrategy="BlockLineHeight" Tag="TEST" />
                                            </FlowDocument>
                                        </RichTextBox>

                                        <CheckBox Grid.Row="4" Grid.Column="4" x:Name="chkUnusualHoldStock"
                                                      Content="{Binding ConverterParameter='특이보류재고여부', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                                      Style="{StaticResource SearchCondition_CheckBoxStyle}"
                                                      IsChecked="False" Margin="3,0,0,0" FontWeight ="SemiBold" Foreground="#FF333333" 
                                                  Visibility="Collapsed"/>

                                        <Button Grid.Row="4" Grid.Column="5" x:Name="btnHold" Content="{Binding ConverterParameter=HOLD, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Margin="3,3,6,3"
                                                    Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" VerticalAlignment ="Bottom" Cursor="Hand" Click="btnHold_Click" />
                                    </Grid>
                                </Grid>
                            </Grid>


                        </Grid>
                    </c1:C1TabItem>

                    <!-- ################################################### LOT 홀드 상태 ################################################### -->
                    <c1:C1TabItem x:Name="LotStatus" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='현재 HOLD상태 조회'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="1" Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>
                                <!--sub title border-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />
                                <TextBlock Grid.Column="1" Width="Auto" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='현재 HOLD 상태 조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                                <!--백그라운드용-->
                                <Border Grid.Row="1" Grid.RowSpan="7" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1,0,1,1" />
                                <!--오른쪽 조회영역-->
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="50" />
                                        <RowDefinition Height="4" />
                                        <RowDefinition Height="50" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <!--백그라운드용-->
                                    <Border Grid.RowSpan="5" Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                    <!--1row-->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>
                                        <!--라인-->
                                        <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='Line', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <c1:C1ComboBox Grid.Column="1" x:Name="cboHoldEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedIndex="1" SelectedValueChanged="cboHoldEquipmentSegment_SelectedValueChanged" />
                                        <!--모델(TEXTBLOCK)-->
                                        <TextBlock Grid.Column="2" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" />
