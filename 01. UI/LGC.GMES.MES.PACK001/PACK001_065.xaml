<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.PACK001.PACK001_065"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1139">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <!--<ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/C1DataGridStyle.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Cell 이동_이동 팔레트 구성">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>

                <!--백그라운드용-->
                <Border   Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                <Border   Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />


                <!--<Border    Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>-->
                <!--<Border Grid.Row="4" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />-->

                <!--왼쪽영역-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="8" />
                    </Grid.RowDefinitions>

                    <!--백그라운드용-->
                    <Border Grid.Row="0"  BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                    <!--왼쪽 타이틀(작업자입력)-->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <TextBlock  Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='작업자입력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>

                        <!--LOT정보(TEXTBLOCK)-->
                        <TextBlock    Grid.Column="3" x:Name="tbLotInform" Text="{Binding ConverterParameter='SCAN ID정보 : ',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                        <!--포장 제품 : CLASS(TEXTBLOCK)-->
                        <TextBlock    Grid.Column="4" x:Name="txtBoxInfo" Text="" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>

                    </Grid>

                    <!--왼쪽 PLLET ID 자동생성 영역-->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!--백그라운드용-->
                        <Border Grid.Row="0" Grid.RowSpan="4" Grid.Column="1"   Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                        <!--Pallete id checkbox-->
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="145" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--PALLETID 자동생성(TEXTBLOCK)-->
                            <CheckBox    Grid.Column="1"  x:Name="chkPalletId"   Content="{Binding ConverterParameter=PALLETID 자동생성,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  HorizontalAlignment="Left" IsChecked="True" IsEnabled="False" />

                            <!--고객사 Palletid(TextBlock)-->
                            <TextBlock    Grid.Column="3" x:Name="tbConfPalletId" Text="GTLID" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" FontWeight="Bold" Visibility="Hidden" />

                            <!--작업초기화(BUTTON)-->
                            <Button  Grid.Column="7" x:Name="btnReset"    Content="{Binding ConverterParameter=작업초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnReset_Click"  />
                        </Grid>

                        <!--PALLET ID TEXT-->
                        <Grid Grid.Row="2"  Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--PALLETID(TEXTBLOCK)-->
                            <TextBlock    Grid.Column="1" Text="{Binding ConverterParameter='PALLETID',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                            <!--PALLETID 입력(TEXTBOX)-->
                            <TextBox      Grid.Column="2" x:Name="txtPalletId" Text=""    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" IsEnabled="False"/>
                        </Grid>
                    </Grid>

                    <!--왼쪽 작업구분 영역-->
                    <Grid Grid.Row="4">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                            <RowDefinition Height="1*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!--백그라운드용-->
                        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"   Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                        <!--작업구분-->
                        <Grid Grid.Row="0"  Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--FROM 창고(TEXTBLOCK)-->
                            <TextBlock       Grid.Column="1" Text="{Binding ConverterParameter='인계동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <!--FROM 창고(COMBO)-->
                            <c1:C1ComboBox   Grid.Column="2" x:Name="cboFromArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Left" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" SelectedValueChanged="cboGubun_SelectedValueChanged" IsEnabled="False"/>

                            <!--작업구분(TEXTBLOCK)-->
                            <TextBlock       Grid.Column="4" Text="{Binding ConverterParameter='작업구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <!--구분(COMBO)-->
                            <c1:C1ComboBox   Grid.Column="5" x:Name="cboGubun" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Left" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" SelectedValueChanged="cboGubun_SelectedValueChanged"/>

                            <!--작업구분 공정 숨김-->
                            <c1:C1ComboBox   Grid.Column="3" x:Name="cboProcFrom" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Left" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1" Visibility="Collapsed"/>
                            <!--LOT 창고 위치 숨김-->
                            <TextBox         Grid.Column="3" x:Name="txtSLocId" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Padding="3 3 8 3" IsEnabled="False" Visibility="Collapsed"/>

                        </Grid>
                        <!--창고 선택-->
                        <Grid Grid.Row="1"  Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--이동 위치(TEXTBLOCK)-->
                            <TextBlock       Grid.Column="1" Text="{Binding ConverterParameter='인수동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <!--이동 위치(COMBO)-->
                            <c1:C1ComboBox   Grid.Column="2" x:Name="cboMoveToArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Left" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>

                            <!--To 창고 위치(TEXTBLOCK)-->
                            <TextBlock       Grid.Column="4" Text="{Binding ConverterParameter='인수창고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <!--To Location(COMBO)-->
                            <c1:C1ComboBox   Grid.Column="5" x:Name="cboLocTo" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" HorizontalAlignment="Left" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>

                        </Grid>
                        <!--BOX ID-->
                        <Grid Grid.Row="2"  Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="54*" />
                                <ColumnDefinition Width="349*"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--BOXID(TEXTBLOCK)-->
                            <TextBlock    Grid.Column="1" x:Name="tbBoxLotID" Text="{Binding ConverterParameter='Lot ID',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" Margin="0,10,7,9"/>

                            <!--BOXID 입력(TEXTBOX)-->
                            <TextBox      Grid.Column="2" x:Name="txtBoxLotID" Text=""    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" KeyDown="txtBoxLotID_KeyDown" PreviewKeyDown="txtBoxLotID_PreviewKeyDown" Grid.ColumnSpan="2" Margin="3,6"/>

                            <!--남은 수량(TextBlock)-->
                            <TextBlock    Grid.Column="4" x:Name="txtCount" Text="0" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" Foreground="Red" FontWeight="Bold" Grid.ColumnSpan="2" Margin="8,10,0,9"  />

                        </Grid>
                    </Grid>

                    <!--포장정보 영역-->
                    <Grid Grid.Row="6">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!--백그라운드용-->
                        <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="1"   Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                        <!--포장제품-->
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--포장제품-->
                            <TextBlock Grid.Column="1"  Text="{Binding ConverterParameter='포장제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  Style="{StaticResource Content_InputForm_LabelStyle}" 
                                       HorizontalAlignment="Right"/>
                            <!--포장제품(TEXTBOX)-->
                            <TextBox   Grid.Column="2" x:Name="txtBoxingProd"     Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Padding="3 3 8 3"/>

                        </Grid>

                        <!--포장오더-->
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <!--포장모델-->
                            <!--포장모델(TEXTBOX)-->

                        </Grid>

                    </Grid>

                    <!--왼쪽 버튼묶음 영역-->
                    <Grid Grid.Row="8">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="1" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!--백그라운드용-->
                        <Border  Grid.Column="1" Grid.ColumnSpan="9"  Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                        <!--선택취소(BUTTON)-->
                        <Button  Grid.Column="4" x:Name="btnSelectCacel"    Content="{Binding ConverterParameter=선택취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Center" Click="btnSelectCacel_Click" />

                        <!--취소(BUTTON)-->
                        <Button  Grid.Column="6" x:Name="btnCancel"    Content="{Binding ConverterParameter=취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" HorizontalAlignment="Center" Click="btncancel_Click" />

                        <!--PACK(BUTTON)-->
                        <Button  Grid.Column="8" x:Name="btnMove"    Content="{Binding ConverterParameter=이동,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Center" Click="btnMove_Click" />

                    </Grid>

                    <!--카운트 영역-->
                    <Grid Grid.Row="10" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="tbBoxingWait_cnt" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5"/>
                    </Grid>
                    <!--조회건수-->

                    <!--왼쪽 BOX ID 그리드 영역-->
                    <Grid x:Name="pltGrid"  Grid.Row="11">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="6" />
                        </Grid.ColumnDefinitions>


                        <c1:C1DataGrid x:Name="dgPalletBox" Grid.Row="0"  Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" CanUserRemoveRows="True" CanUserAddRows="True" NewRowVisibility="Bottom">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridCheckBoxColumn  Binding = "{Binding CHK}"        Width="Auto"  HorizontalAlignment="Center" CanUserSort="False" >
                                    <c1:DataGridCheckBoxColumn.Header>
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                            <CheckBox x:Name="chkHeaderAll" Margin="0" Width="19" Checked="chkHeaderAll_Checked" Unchecked="chkHeaderAll_Unchecked"></CheckBox>
                                        </StackPanel>
                                    </c1:DataGridCheckBoxColumn.Header>
                                </c1:DataGridCheckBoxColumn>
                                <c1:DataGridTextColumn     Header = "PALLETID"   Binding = "{Binding BOXID}"      HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                <c1:DataGridTextColumn     Header = "PRODID"     Binding = "{Binding PRODID}"     HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                <c1:DataGridTextColumn     Header = "PROCID"     Binding = "{Binding PROCID}"     HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                <c1:DataGridTextColumn     Header = "LOTID"      Binding = "{Binding LOTID}"      HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                <c1:DataGridTextColumn     Header = "WIPSTAT"    Binding = "{Binding WIPSTAT}"    HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                <c1:DataGridTextColumn     Header = "SLOC_ID"    Binding = "{Binding SLOC_ID}"    HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                <c1:DataGridTextColumn     Header = "생성일"     Binding = "{Binding LOTDTTM_CR}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                <c1:DataGridTextColumn     Header = "GBTID"      Binding = "{Binding GBTID}"      HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                <c1:DataGridTextColumn     Header = "CUST_LOTID" Binding = "{Binding CUST_LOTID}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                <c1:DataGridTextColumn     Header = "LGC_LOTID"  Binding = "{Binding LGC_LOTID}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn     Header = "PRE_BOXID"  Binding = "{Binding PRE_BOXID}"   HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn     Header = "PRE_RCV_ISS_ID" Binding = "{Binding PRE_RCV_ISS_ID}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn     Header = "ASSY_LOTID" Binding = "{Binding ASSY_LOTID}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn     Header = "INNER_BOXID" Binding = "{Binding INNER_BOXID}" HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>
                </Grid>

                <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                <!--오른쪽영역-->
                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                    </Grid.ColumnDefinitions>

                    <!--백그라운드용-->
                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>


                    <!--백그라운드용-->
                    <Border Grid.Row="2" Grid.Column="1"   Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                    <Border Grid.Row="7" Grid.Column="1"   Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>


                    <!--오른쪽 타이틀-->
                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!--이력조회(TEXBLOCK)-->
                        <TextBlock  Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='이력조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="11" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="13" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="7"  Grid.ColumnSpan="6" Style="{StaticResource Condition_BorderStyle}"></Border>

                        <!--조회영역 첫번째 row-->
                        <Grid Grid.Row="1" Grid.ColumnSpan="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--AREA(TEXTBLOCK)-->
                            <TextBlock       Grid.Column="1" Text="{Binding ConverterParameter='인계동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <!--AREA(COMBO)-->
                            <c1:C1ComboBox   Grid.Column="2" x:Name="cboFilterAreaFrom" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                            <!--AREA(TEXTBLOCK)-->
                            <TextBlock       Grid.Column="4" Text="{Binding ConverterParameter='인수동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <!--AREA(COMBO)-->
                            <c1:C1ComboBox   Grid.Column="5" x:Name="cboFilterAreaTo" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                        </Grid>

                        <!--조회영역 첫번째 row-->
                        <Grid Grid.Row="3" Grid.ColumnSpan="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <!--모델(TEXTBLOCK)-->
                            <TextBlock       Grid.Column="1" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <!--모델(COMBO)-->
                            <c1:C1ComboBox   Grid.Column="2" x:Name="cboProductModel" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                            <!--제품(TEXTBLOCK)-->
                            <TextBlock       Grid.Column="4" Text="{Binding ConverterParameter='제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <!--제품(COMBO)-->
                            <c1:C1ComboBox   Grid.Column="5" x:Name="cboProduct" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="KEY" SelectedValuePath="VALUE" SelectedIndex="1"/>
                        </Grid>
                        <!--조회영역 두번째 row-->
                        <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="90" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <!--포장일자(TEXTBLOCK)-->
                            <TextBlock Grid.Column="1" Text="{Binding ConverterParameter='포장일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="3" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="3" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="3" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="3" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <ctrlLib:LGCDatePicker  Grid.Column="0" x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                <c1:C1ComboBox Grid.Column="2" x:Name="cboTimeFrom" Height="21" MinWidth="40" Width="Auto" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                <TextBlock              Grid.Column="4" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <ctrlLib:LGCDatePicker Grid.Column="6" x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center"/>
                                <c1:C1ComboBox Grid.Column="8" x:Name="cboTimeTo" Height="21" MinWidth="40" Width="Auto" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                            </Grid>
                            <!--조회 버튼-->
                            <Button   Grid.Column="5" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                            Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Right" Click="btnSearch_Click"/>
                        </Grid>

                    </Grid>

                    <Grid Grid.Row="4" Grid.Column="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="150" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--조회건수-->
                            <TextBlock x:Name="tbBoxHistory_cnt" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,0,5"/>

                            <!--BOXID(TEXTBLOCK)-->
                            <TextBlock    Grid.Column="3" Text="{Binding ConverterParameter='PALLET검색',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                            <!--BOXID입력(TEXTBOX)-->
                            <TextBox      Grid.Column="4" x:Name="txtSearchBox" Text=""  Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" KeyDown="txtSearchBox_KeyDown" />
                        </Grid>
                    </Grid>

                    <!--결과 그리드-->
                    <Grid Grid.Row="5" Grid.Column="1" >
                        <c1:C1DataGrid x:Name="dgPallethistory" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" 
                                       MouseLeftButtonUp="dgPallethistory_MouseLeftButtonUp" LoadedCellPresenter="dgPallethistory_LoadedCellPresenter" MouseDoubleClick="dgPalletBox_MouseDoubleClick" Width="Auto" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn     Header = "PALLETID"       Binding = "{Binding BOXID}"                HorizontalAlignment="Left"   Width="Auto" />
                                <c1:DataGridTextColumn     Header = "인계동"         Binding = "{Binding FROM_AREAID}"          HorizontalAlignment="Left"   Width="Auto" />
                                <c1:DataGridTextColumn     Header = "인계위치"       Binding = "{Binding FROM_SLOC_ID}"         HorizontalAlignment="Left"   Width="Auto" />
                                <c1:DataGridTextColumn     Header = "인수동"         Binding = "{Binding TO_AREAID}"            HorizontalAlignment="Left"   Width="Auto" />
                                <c1:DataGridTextColumn     Header = "인수위치"       Binding = "{Binding TO_SLOC_ID}"           HorizontalAlignment="Left"   Width="Auto" />
                                <c1:DataGridTextColumn     Header = "제품코드"       Binding = "{Binding PRODID}"               HorizontalAlignment="Left"   Width="Auto" />
                                <c1:DataGridTextColumn     Header = "수량"           Binding = "{Binding ISS_QTY}"              HorizontalAlignment="Left"   Width="Auto" />
                                <c1:DataGridTextColumn     Header = "상태"           Binding = "{Binding PACK_LOT_TYPE_CODE}"   HorizontalAlignment="Left"   Width="Auto" />
                                <c1:DataGridTextColumn     Header = "포장일자"       Binding = "{Binding ISS_DTTM}"             HorizontalAlignment="Left"   Width="Auto" />
                                <c1:DataGridTextColumn     Header = "이동ID"         Binding = "{Binding RCV_ISS_ID}"           HorizontalAlignment="Left"   Width="Auto" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>

                    </Grid>

                    <!--오른쪽 하단 영역-->
                    <Grid Grid.Row="7" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="180" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="8" Style="{StaticResource Condition_Header_BorderStyle}"/>

                        <!--PALLETID(TEXTBLOCK)-->
                        <TextBlock  Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='PALLETID',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"/>

                        <!--PALLETID(TEXTBOX)-->
                        <TextBox    Grid.Row="1"  Grid.Column="2" x:Name="txtPalleyIdR" Text=""    Style="{StaticResource TextBoxBaseStyle}" HorizontalAlignment="Stretch"  BorderBrush="Black" BorderThickness="1" IsReadOnly="True"/>

                        <!--BOXLABEL(BUTTON)-->
                        <Button     Grid.Row="1"  Grid.Column="4" x:Name="btnPalletLabel"    Content="{Binding ConverterParameter=발행,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                     Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Click="btnPalletLabel_Click" />

                    </Grid>

                </Grid>
            </Grid>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
