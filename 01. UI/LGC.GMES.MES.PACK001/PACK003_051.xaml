<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  
             x:Class="LGC.GMES.MES.PACK001.PACK003_051"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="포트 자재 설정">
            <Grid x:Name="grdLayout">
                <c1:C1TabControl x:Name="tabControlMain">
                    <c1:C1TabItem x:Name="tabOutPortSet" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='목적지 포트 설정'}">
                        <Grid x:Name="grdOutPortSet">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="51"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>

                                        <ColumnDefinition x:Name="col_01" Width="50"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="50"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" x:Name="sp_01" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                                            <TextBlock x:Name="tb_01" Style="{StaticResource SearchCondition_MandatoryMarkStyle}" Visibility="Collapsed" />
                                            <TextBlock x:Name="tb_02" Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" Visibility="Collapsed" />
                                        </StackPanel>
                                        <c1:C1ComboBox  Grid.Row="0" Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath="" SelectedValueChanged="cboEquipmentSegment_SelectedValueChanged" Visibility="Collapsed" />
                                    </Grid>

                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" x:Name="sp_02" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                                            <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock  Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <c1:C1ComboBox  Grid.Row="0" Grid.Column="3" x:Name="cboProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath="" SelectedValueChanged="cboProcess_SelectedValueChanged" />
                                    </Grid>

                                    <Grid Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                                            <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock  Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>

                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipment"      DisplayMemberPath="" SelectedValuePath=""  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEquipment_SelectedValueChanged"/>
                                    </Grid>

                                    <Grid Grid.Row="0" Grid.Column="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                                            <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock  Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='계획일자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>

                                        <ctrlLib:LGCDatePicker Grid.Column="1" x:Name="ldpDatePickerFrom"  DatepickerType="Date" />
                                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock      Grid.Row="0"  Grid.Column="2" Text="{Binding ConverterParameter='~', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <ctrlLib:LGCDatePicker Grid.Column="3" x:Name="ldpDatePickerTo"  DatepickerType="Date" />


                                    </Grid>

                                    <Button x:Name="btnSearch" Grid.Row="0"  Grid.Column="7" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Click="btnSearch_Click"/>

                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.3*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>



                                    <Border Grid.Row="2"  Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                    <Grid Grid.Row="2">

                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="45"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Button  Grid.Column="1" x:Name="btnMapping" Content="{Binding ConverterParameter=신규포트등록,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Height="30" Margin="8,8,0,0" Click="btnMapping_Click"/>
                                            <Button  Grid.Column="3" x:Name="btnUnMapping" Content="{Binding ConverterParameter=포트삭제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Height="30" Margin="8,8,8,0" Click="btnUnMapping_Click"/>
                                            <Button  Grid.Column="5" x:Name="btnDelMapping" Content="{Binding ConverterParameter=매핑해제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Height="30" Margin="8,8,8,0" Click="btnUnMapping_Click" Visibility="Collapsed"/>
                                        </Grid>
                                        <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgEqptPort" 
                                           IsReadOnly="False" 
                                           HeadersVisibility="Column" 
                                           Margin="8,8,8,8"
                                           LoadedCellPresenter="dgEqptPort_LoadedCellPresenter"
                                           BeginningEdit="dgEqptPort_BeginningEdit">

                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgPortChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgPortChoice" HorizontalAlignment="Center" Checked="dgPortChoice_Checked"/>
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn       Header = "설비ID"             Binding = "{Binding EQPTID}"           HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "설비명"             Binding = "{Binding EQPT_NAME}"           HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "포트ID"             Binding = "{Binding PORT_ID}"           HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "포트명"             Binding = "{Binding PORT_NAME}"           HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "자재코드"           Binding = "{Binding MTRLID}"            HorizontalAlignment="Left"   IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "자재"               Binding = "{Binding MTRLNAME}"            HorizontalAlignment="Left"   IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "W/O"                Binding = "{Binding WO_DETL_ID}"          HorizontalAlignment="Left"   IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "사용여부"           Binding = "{Binding USE_FLAG}"          HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "회전여부"           Binding = "{Binding PRDT_SPEC_CHK_FLAG}"     HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "버퍼수"             Binding = "{Binding LOT_PROD_MAX_QTY}"       HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>

                                    <GridSplitter Grid.Row="2" Grid.Column="1"  ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                                    <Grid Grid.Row="2" Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="45"/>
                                        </Grid.RowDefinitions>


                                        <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                                        <Grid Grid.Row="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="45"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>


                                            <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgBatchOrder" IsReadOnly="False" HeadersVisibility="Column" Margin="8,8,8,8">
                                                <c1:C1DataGrid.Columns>

                                                    <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center">
                                                        <c1:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <RadioButton GroupName="dgBatchOrderChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgBatchOrderChoice" HorizontalAlignment="Center" Checked="dgBatchOrderChoice_Checked"/>
                                                            </DataTemplate>
                                                        </c1:DataGridTemplateColumn.CellTemplate>
                                                    </c1:DataGridTemplateColumn>

                                                    <c1:DataGridTextColumn       Header = "Batch Order"       Binding = "{Binding BTCH_ORD_ID}"             HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn       Header = "프로젝트명"       Binding = "{Binding PRJT_NAME}"             HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn       Header = "제품ID"         Binding = "{Binding PRODID}"            HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn       Header = "버전"         Binding = "{Binding PROD_VER_CODE}"            HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn       Header = "계획수량"         Binding = "{Binding PLAN_QTY}"            HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn       Header = "계획일자"         Binding = "{Binding PLAN_DATE}"            HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn       Header = "설비ID"         Binding = "{Binding EQPTID}"            HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn       Header = "설비명"         Binding = "{Binding EQPTNAME}"            HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn       Header = "W/O"         Binding = "{Binding WOID}"            HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn       Header = "WO_DETL_ID"         Binding = "{Binding WO_DETL_ID}"            HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                </c1:C1DataGrid.Columns>

                                            </c1:C1DataGrid>
                                        </Grid>



                                        <Border Grid.Row="2"  Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                        <Grid Grid.Row="2">
                                            <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgMaterial" IsReadOnly="False" HeadersVisibility="Column" Margin="8,8,8,8">
                                                <c1:C1DataGrid.Columns>

                                                    <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center">
                                                        <c1:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <RadioButton GroupName="dgMaterialChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgMaterialChoice" HorizontalAlignment="Center" Checked="dgMaterialChoice_Checked"/>
                                                            </DataTemplate>
                                                        </c1:DataGridTemplateColumn.CellTemplate>
                                                    </c1:DataGridTemplateColumn>

                                                    <c1:DataGridTextColumn       Header = "자재코드"       Binding = "{Binding MTRLID}"             HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn       Header = "자재"       Binding = "{Binding MTRLNAME}"             HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn       Header = "자재명"       Binding = "{Binding MTRLDESC}"             HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn       Header = "자재타입"       Binding = "{Binding MTRLTYPE}"             HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn       Header = "Grade"       Binding = "{Binding GRADE}"             HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn       Header = "자재군"         Binding = "{Binding MTGRID}"            HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn       Header = "자재군"         Binding = "{Binding MTGRNAME}"            HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn       Header = "단위"         Binding = "{Binding UNIT_CODE}"            HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn       Header = "투입수량"     Binding = "{Binding INPUT_QTY}"       HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" Format="#,###0"/>
                                                </c1:C1DataGrid.Columns>

                                            </c1:C1DataGrid>

                                        </Grid>

                                        <GridSplitter Grid.Row="1" Grid.Column="0" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                                        <Border Grid.Row="4"  Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                        <Grid Grid.Row="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Button  Grid.Column="1" x:Name="btnRegister" Content="{Binding ConverterParameter=등록,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Height="30" Click="btnRegister_Click" Margin="8,8,8,8"/>
                                        </Grid>
                                    </Grid>


                                </Grid>


                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem x:Name="tabInPortSet" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입 포트 설정'}">
                        <Grid x:Name="grdInPortSet">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="51"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                    <c1:C1ComboBox  Grid.Row="1" Grid.Column="2" x:Name="cboInPortEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath="" SelectedValueChanged="cboInPortEquipmentSegment_SelectedValueChanged" />

                                    <TextBlock Grid.Row="1" Grid.Column="4"  Text="{Binding ConverterParameter='EQP', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <c1:C1ComboBox  Grid.Row="1" Grid.Column="5" x:Name="cboInPortEquipment"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboInPortEquipment_SelectedValueChanged" />

                                    <Grid Grid.Row="0" Grid.Column="7">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,8,0">
                                            <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock  Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='계획일자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>

                                        <ctrlLib:LGCDatePicker Grid.Column="1" x:Name="ldpInPortDPFrom"  DatepickerType="Date" />
                                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock      Grid.Row="0"  Grid.Column="2" Text="{Binding ConverterParameter='~', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <ctrlLib:LGCDatePicker Grid.Column="3" x:Name="ldpInPortDPTo"  DatepickerType="Date" />
                                    </Grid>

                                    <Button x:Name="btnInPortSearch" Grid.Row="0"  Grid.Column="9" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Click="btnInPortSearch_Click"/>
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1.3*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="2"  Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                    <Grid Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="45"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Button  Grid.Column="1" x:Name="btnInPortMapping" Content="{Binding ConverterParameter=신규포트등록,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Height="30" Margin="8,8,0,0" Click="btnInPortMapping_Click"/>
                                            <Button  Grid.Column="3" x:Name="btnInPortUnMapping" Content="{Binding ConverterParameter=포트삭제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Height="30" Margin="8,8,8,0" Click="btnInPortUnMapping_Click" Visibility="Collapsed"/>
                                            <Button  Grid.Column="5" x:Name="btnInPortDelMapping" Content="{Binding ConverterParameter=매핑해제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" HorizontalAlignment="Right" Height="30" Margin="8,8,8,0" Click="btnInPortUnMapping_Click"/>
                                        </Grid>

                                        <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgEqptInPort" 
                                           IsReadOnly="False" 
                                           HeadersVisibility="Column" 
                                           Margin="8,8,8,8">

                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgInPortChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgPortChoice" HorizontalAlignment="Center" Checked="dgPortChoice_Checked"/>
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn       Header = "설비ID"         Binding = "{Binding EQPTID}"               HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "설비명"         Binding = "{Binding EQPT_NAME}"            HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "포트ID"         Binding = "{Binding PORT_ID}"              HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "포트명"         Binding = "{Binding PORT_NAME}"            HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "자재코드"       Binding = "{Binding MTRLID}"               HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "자재"           Binding = "{Binding MTRLNAME}"             HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "W/O"            Binding = "{Binding WO_DETL_ID}"           HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "사용여부"       Binding = "{Binding USE_FLAG}"             HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "회전여부"       Binding = "{Binding PRDT_SPEC_CHK_FLAG}"   HorizontalAlignment="Left"   IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "버퍼수"         Binding = "{Binding LOT_PROD_MAX_QTY}"     HorizontalAlignment="Left"   IsReadOnly="True" />
                                            </c1:C1DataGrid.Columns>
