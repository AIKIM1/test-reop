<c1:C1Window x:Class="LGC.GMES.MES.CMM001.CMM_WAITING_PANCAKE_SEARCH"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='대기Pancake조회'}" 
             Tag="ProtoType01Windows01" Height="621" Width="981" IsResizable="True" Loaded="CMM_WAITING_PANCAKE_SEARCH_Loaded" >

    <c1:C1Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </c1:C1Window.Resources>
 
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="5*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row ="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*" />
                <ColumnDefinition Width="2.7*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="4*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="1.6*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="1.2*" />
                <ColumnDefinition Width="2*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="1.5*" />
                <ColumnDefinition Width="0.1*" />
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="lblGubun" Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
            <TextBlock  Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='LOT ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
            <CheckBox x:Name="chkWoMaterial" Grid.Row="2" Grid.Column="6"  Content="{Binding ConverterParameter='WO 자재', Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True" />
            <!--<TextBlock  Grid.Row="0" Grid.Column="8" Text="{Binding ConverterParameter='LOT ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>-->
            <Button x:Name="btnSearch" Grid.Row="0" Grid.Column="11" Content="{Binding ConverterParameter=조회, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Margin="0,2,0,2" Cursor="Hand" Click="btnSearch_Click" />            
            
            <c1:C1ComboBox x:Name="cboElectordeType" Grid.Row="0" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Width="150" />
            <c1:C1ComboBox x:Name="cboEquipmentSegmentAssy" Grid.Row="0" Grid.Column="9" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Visibility="Collapsed" />
            <TextBox x:Name="txtLotId" Grid.Row="0" Grid.Column="4" Style="{StaticResource Content_InputForm_TextBoxStyle}" PreviewKeyDown="txtLotId_PreviewKeyDown" CharacterCasing="Upper" />

        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <c1:C1DataGrid Grid.Row="0" 
                           x:Name="gdInputProduct" 
                           IsReadOnly="True" 
                           HeadersVisibility="Column" 
                           SelectionMode="SingleRow" 
                           HorizontalScrollBarVisibility="Hidden" 
                           CanUserFilter="True" 
                           CanUserSort="True" CurrentCellChanged="gdInputProduct_CurrentCellChanged" MouseLeftButtonUp="gdInputProduct_MouseLeftButtonUp" Margin="0,7,0,-7" >
                <c1:C1DataGrid.Resources>
                    <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/btn_i_print.png" Stretch="Uniform"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </c1:C1DataGrid.Resources>
                <c1:C1DataGrid.Columns>
                    <c1:DataGridTemplateColumn x:Name="rdoChk" Width="35">
                        <c1:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <RadioButton IsChecked="{Binding CHK, Mode=OneWay}" Name="chk" HorizontalAlignment="Center" Checked="rdoChk_Checked" />
                            </DataTemplate>
                        </c1:DataGridTemplateColumn.CellTemplate>
                    </c1:DataGridTemplateColumn>
                    <c1:DataGridTextColumn Header="ROW_SEQ" Binding="{Binding ROW_SEQ}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                    <c1:DataGridTextColumn Header="LOT ID" Binding="{Binding LOTID}" HorizontalAlignment="Center" IsReadOnly="True" Width="1.5*" />
                    <c1:DataGridTextColumn Header="PJT" Binding="{Binding PRJT_NAME}" HorizontalAlignment="Center" IsReadOnly="True" Width="0.8*" />
                    <c1:DataGridTextColumn Header="제품 ID" Binding="{Binding PRODID}" HorizontalAlignment="Center" IsReadOnly="True" Width="1.5*"  />
                    <c1:DataGridTextColumn Header="제품명" Binding="{Binding PRODNAME}"   HorizontalAlignment="Center" IsReadOnly="True" Width="3*" />
                    <c1:DataGridTextColumn Header="수량" Binding="{Binding WIPQTY}" HorizontalAlignment="Right" IsReadOnly="True" Format="#,##0" Width="1*" />
                    <c1:DataGridTextColumn Header="단위" Binding="{Binding UNIT}" HorizontalAlignment="Center" IsReadOnly="True" Width="1*" />
                    <c1:DataGridTemplateColumn    Header="재발행" Name="PRINT">
                        <c1:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button x:Name="btnPrint" Style="{StaticResource grButtonStyle}" Click="btnPrint_Click" />
                            </DataTemplate>
                        </c1:DataGridTemplateColumn.CellTemplate>
                    </c1:DataGridTemplateColumn>
                    <c1:DataGridTextColumn Header="HOLD여부" Binding="{Binding WIPHOLD}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                    <c1:DataGridTextColumn Header="V/D" Binding="{Binding LOTDTTM_CR}" HorizontalAlignment="Center" IsReadOnly="True" Width="2.2*" Visibility="Collapsed" />
                    <c1:DataGridTextColumn Header="전극코드" Binding="{Binding ELECTRODECODE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                    <c1:DataGridTextColumn Header="전극명" Binding="{Binding ELECTRODETYPE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                    <c1:DataGridTextColumn Header="와인더이력카드번호" Binding="{Binding WINDING_RUNCARD_ID}" HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed" />
                    <c1:DataGridTextColumn Header = "WIPSEQ" Binding = "{Binding WIPSEQ}" HorizontalAlignment="Center" Visibility="Collapsed" />
                </c1:C1DataGrid.Columns>
            </c1:C1DataGrid>
        </Grid>

        <Grid Grid.Row ="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSelect" Grid.Column="1" Content="{Binding ConverterParameter=선택, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSelect_Click"/>
            <Button x:Name="btnClose" Grid.Column="3" Content="{Binding ConverterParameter=닫기, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnClose_Click" />
        </Grid>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="0" Grid.RowSpan="3" Panel.ZIndex="999"/>
        
    </Grid>

</c1:C1Window>
