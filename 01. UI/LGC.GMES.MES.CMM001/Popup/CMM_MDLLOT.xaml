<c1:C1Window x:Class="LGC.GMES.MES.CMM001.Popup.CMM_MDLLOT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='모델별 LOT ID 조회'}" 
             Tag="모델별 LOT ID 조회" Height="500" Width="760" IsResizable="True" Loaded="C1Window_Loaded"             
             >
    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!--조회 영역-->
        <Border Grid.Row="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
        <Grid   Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="13"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="13"/>
            </Grid.ColumnDefinitions>          
            
            <Grid Grid.Row="0" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=동, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
            </Grid>

            <Grid Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=조회조건, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtSearchText" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtSearchText_KeyDown" />
            </Grid>

            <Grid Grid.Row="1" Grid.Column="4">
                <Button x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
            </Grid>
        </Grid>
        <!--조회 영역-->

        <c1:C1DataGrid x:Name="dgResult" Grid.Row="2" IsReadOnly="True" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="SingleCell" LoadedCellPresenter="dgResult_LoadedCellPresenter" MouseDoubleClick="dgResult_MouseDoubleClick">
            <c1:C1DataGrid.Columns>
                <!--<c1:DataGridCheckBoxColumn       Width="40"              Binding="{Binding CHK}"                CanUserFilter="False"  CanUserSort="False"  HorizontalAlignment="Center" />-->
                <c1:DataGridTextColumn           Header="제품ID"       Binding="{Binding PRODID}"             HorizontalAlignment="Center"  />
                <c1:DataGridTextColumn           Header="모델"        Binding="{Binding PRJT_NAME}"          HorizontalAlignment="Center"   />
                <c1:DataGridTextColumn           Header="모델LOT"        Binding="{Binding MDLLOT_ID}"          HorizontalAlignment="Center"    />
                <c1:DataGridTextColumn           Header="동"             Binding="{Binding AREAID}"             HorizontalAlignment="Center"   />
            </c1:C1DataGrid.Columns>
        </c1:C1DataGrid>
        
        <!--button area-->
        <Grid Grid.Row ="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!--<Button x:Name="btnSave"    Grid.Column="1" Content="{Binding ConverterParameter='선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}"  />-->
            <Button x:Name="btnClose" Grid.Column="3" Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}"  />
        </Grid>
    </Grid>
</c1:C1Window>
