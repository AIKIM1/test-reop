<c1:C1Window x:Class="LGC.GMES.MES.CMM001.CMM_WASHING_CELL_MATCH"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"         
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Cell ID Matching 검사'}" 
             Tag="ProtoType01Windows01" Height="220" Width="360" IsResizable="True" Initialized="C1Window_Initialized" Loaded="C1Window_Loaded"   >

    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>

    <Grid HorizontalAlignment="Left" Width="300">
        <Grid.RowDefinitions>
            <RowDefinition Height="34" />
            <RowDefinition Height="34" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title -->
        <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="55"/>
                <ColumnDefinition Width="30"/>
                <ColumnDefinition Width="Auto" MinWidth="200"/>

            </Grid.ColumnDefinitions>

            <TextBlock      Grid.Column="1" Text="{Binding ConverterParameter='CELL ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
            <TextBox        Grid.Column="3" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" x:Name="txtCellID" CharacterCasing="Upper" />
        </Grid>
        <Border Grid.Row="1" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
        <Grid Grid.Row ="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="Auto" MinWidth="200"/>
            </Grid.ColumnDefinitions>
            <TextBlock      Grid.Column="1" Text="{Binding ConverterParameter='CELL 바코드', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
            <TextBox        Grid.Column="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtBarcode" CharacterCasing="Upper" KeyDown="txtBarcode_KeyDown" MouseRightButtonUp="txtBarcode_MouseRightButtonUp" MouseRightButtonDown="txtBarcode_MouseRightButtonDown"  />
        </Grid>

        <!--Contents area-->

        <!--button area-->
        <Grid Grid.Row ="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnConfirm"    Grid.Column="1" Content="{Binding ConverterParameter='확인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnConfirm_Click"/>
            <Button x:Name="btnClose" Grid.Column="3" Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnClose_Clicked" />
        </Grid>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" />
    </Grid>
</c1:C1Window>
