                    <Border Grid.Row="1" Grid.RowSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                    <Grid Grid.Row ="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="1" Grid.Column="1" >
                            <c1:C1DataGrid Grid.Row="2" x:Name="dgLotList" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow" >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" >
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <RadioButton GroupName="dgLotListChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgLotListChoice" HorizontalAlignment="Center" Checked="dgLotListChoice_Checked" />
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn      Header = "투입LOT"       Binding = "{Binding PR_LOTID}"            IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "LOTID"         Binding = "{Binding LOTID}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "Foil LOT"      Binding = "{Binding FOIL_LOTID}"          IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "압연차수"      Binding = "{Binding ROLLPRESS_COUNT}"     IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "WIPSEQ"        Binding = "{Binding WIPSEQ}"              IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "제품"          Binding = "{Binding PRODID}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "제품명"        Binding = "{Binding PRODNAME}"            IsReadOnly="True" HorizontalAlignment="Left" />
                                    <c1:DataGridTextColumn      Header = "모델"          Binding = "{Binding MODLID}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "PJT"           Binding = "{Binding PRJT_NAME}"           IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "LOT 유형"      Binding = "{Binding LOTYNAME}"            IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "시장유형"      Binding = "{Binding MKT_TYPE_CODE}"       IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "단위"          Binding = "{Binding UNIT_CODE}"           IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "REWINDER"      Binding = "{Binding EQPT_END_PSTN_ID}"    IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn   Header = "설비양품량"    Binding = "{Binding EQPT_END_QTY}"        IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##">
                                    </c1:DataGridNumericColumn>
                                    <c1:DataGridNumericColumn   Header = "설비양품량"    Binding = "{Binding EQPT_END_QTY_EA}"      IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##">
                                    </c1:DataGridNumericColumn>
                                    <c1:DataGridNumericColumn   Header = "코팅IN"           Binding = "{Binding SRS1_QTY}"                  IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" Visibility="Collapsed" />
                                    <c1:DataGridNumericColumn   Header = "코팅OUT"          Binding = "{Binding SRS2_QTY}"                  IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "작업일"           Binding = "{Binding CALDATE}"                   IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "시작시간"         Binding = "{Binding STARTDTTM}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "실적확정일시"     Binding = "{Binding ENDDTTM}"                   IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "장비완료일시"     Binding = "{Binding EQPT_END_DTTM}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "가동시간(분)"     Binding = "{Binding RUN_MINUTE}"                IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "작업조"           Binding = "{Binding SHFT_NAME}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "작업자"           Binding = "{Binding WRK_USER_NAME}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "경로유형"         Binding = "{Binding FLOW_NAME}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "코팅버전"         Binding = "{Binding PROD_VER_CODE}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "W/O"              Binding = "{Binding WOID}"                      IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "W/O상세"          Binding = "{Binding WO_DETL_ID}"                IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "설비"             Binding = "{Binding EQPTNAME}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "NOTE"             Binding = "{Binding WIP_NOTE}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "작업타입"         Binding = "{Binding WIP_WRK_TYPE_CODE_DESC}"    HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </Grid>
                    </Grid>

                    <!-- 상세 정보 -->
                    <Grid Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0"  Grid.RowSpan="4" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <Border Grid.Row="0" Grid.Column="0"  Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                        <TextBlock Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='UI투입목록', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource Content_Search_LabelStyle}" Margin="15,0,0,0" />
                        <c1:C1DataGrid Grid.Row="2" Grid.Column="0" x:Name="dgInputHistUI" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow" Margin="8,0" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn        Header = "투입위치"     Binding = "{Binding EQPT_MOUNT_PSTN_ID}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn        Header = "투입위치"     Binding = "{Binding EQPT_MOUNT_PSTN_NAME}"  HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn        Header = "투입일시"     Binding = "{Binding INPUT_DTTM}"            HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn        Header = "LOT ID"       Binding = "{Binding INPUT_LOTID}"           HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn        Header = "제품코드"     Binding = "{Binding MTRLID}"                HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridNumericColumn     Header = "투입수량"     Binding = "{Binding INPUT_QTY}"             HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" ShowButtons="False" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>

                        <Border     Grid.Row="0" Grid.Column="2"  Grid.RowSpan="4" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <Border     Grid.Row="0" Grid.Column="2"  Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                        <TextBlock  Grid.Row="0" Grid.Column="2"  Text="{Binding ConverterParameter='설비투입목록', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource Content_Search_LabelStyle}" Margin="15,0,0,0" />
                        <c1:C1DataGrid Grid.Row="2" Grid.Column="2" x:Name="dgInputHistEQ" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow" Margin="8,0" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn        Header = "투입위치"     Binding = "{Binding EQPT_MOUNT_PSTN_ID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn        Header = "투입위치"     Binding = "{Binding EQPT_MOUNT_PSTN_NAME}"    HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn        Header = "투입일시"     Binding = "{Binding INPUT_DTTM}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn        Header = "LOT ID"       Binding = "{Binding INPUT_LOTID}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn        Header = "제품코드"     Binding = "{Binding MTRLID}"                  HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn        Header = "대LOT"        Binding = "{Binding PROD_LOTID}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                <!--<c1:DataGridTextColumn        Header = "CUT"          Binding = "{Binding CUT_NO}"   HorizontalAlignment="Center" IsReadOnly="True" />-->
                                <c1:DataGridNumericColumn     Header = "예상M수량"    Binding = "{Binding INPUT_QTY}"               HorizontalAlignment="Right"  IsReadOnly="True"  Format="#,###" ShowButtons="False" />
                                <c1:DataGridNumericColumn     Header = "총M수량"      Binding = "{Binding INPUT_TOTL_QTY}"          HorizontalAlignment="Right"  IsReadOnly="True"  Format="#,###" ShowButtons="False" />
                                <c1:DataGridNumericColumn     Header = "생산량"       Binding = "{Binding OUTPUT_QTY}"              HorizontalAlignment="Right"  IsReadOnly="True"  Format="#,###" ShowButtons="False" />
                                <!--<c1:DataGridNumericColumn     Header = "설비생산량" Binding = "{Binding EQPT_OUTPUT_QTY}"           HorizontalAlignment="Right" Format="#,###" ShowButtons="False" IsReadOnly="True"/>-->
                                <!--<c1:DataGridNumericColumn     Header = "투입대기건수" Binding = "{Binding NEXT_BATCH_CNT}"           HorizontalAlignment="Right" Format="#,###" ShowButtons="False" IsReadOnly="True"/>-->
                                <c1:DataGridTextColumn        Header = "활동명"       Binding = "{Binding OCCR_EVENT_NAME}"         HorizontalAlignment="Center" IsReadOnly="True" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>
                </Grid>
            </c1:C1TabItem>
            <c1:C1TabItem Name="tabSlurryTankMoveInfo" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='이송탱크Slurry정보'}" >
                <Grid Margin="4,4" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="34" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <!--content area-->
                    <Border Grid.Row="0" Grid.Column="0"  Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto" MinWidth="80"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='투입위치', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEqptPstnID"    DisplayMemberPath="" SelectedValuePath=""  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  />
                        <Button         Grid.Row="0"  Grid.Column="9" x:Name="btnSearch"        Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" HorizontalAlignment="Right" Margin="0,2" />
                    </Grid>

                    <Grid Grid.Row ="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.RowSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <!--LOT INFO-->
                        <Grid Grid.Row ="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <Grid x:Name="LotList" Grid.Row="4" Grid.Column="1" >
                                <c1:C1DataGrid Grid.Row="2" x:Name="dgLotInfo" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgLotInfoChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgLotInfoChoice" HorizontalAlignment="Center" Checked="dgLotInfoChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn        Header = "투입위치"   Binding = "{Binding EQPT_MOUNT_PSTN_ID}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "투입위치"   Binding = "{Binding EQPT_MOUNT_PSTN_NAME}"  HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn        Header = "투입여부"   Binding = "{Binding INPUT_FLAG_NAME}"       HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn        Header = "LOT ID"     Binding = "{Binding INPUT_LOTID}"           HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn        Header = "제품코드"   Binding = "{Binding MTRLID}"                HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn        Header=  "모델"       Binding = "{Binding MODLID}"                HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn        Header=  "PJT"        Binding = "{Binding PRJT_NAME}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridNumericColumn     Header = "재공량"     Binding = "{Binding WIPQTY}"                HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" ShowButtons="False" />
                                        <c1:DataGridNumericColumn     Header = "예상M수량"  Binding = "{Binding CONV_INPUT_QTY}"        HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" ShowButtons="False" />
                                        <c1:DataGridNumericColumn     Header = "총M수량"    Binding = "{Binding INPUT_TOTL_QTY}"        HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" ShowButtons="False" />
                                        <c1:DataGridTextColumn        Header = "극성"       Binding = "{Binding PRDT_CLSS_CODE}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn        Header = "비고"       Binding = "{Binding REMARK}"                HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn        Header = "종료시간"   Binding = "{Binding WIPDTTM_ED}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn        Header = "투입위치"   Binding = "{Binding EQPT_MOUNT_PSTN_ID}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row ="2" Grid.RowSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="5"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" Grid.RowSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <!--LOT INFO-->
                        <Grid Grid.Row ="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <c1:C1TabControl  Grid.Row="0" Grid.Column="1">
                                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='상세정보'}" >
                                    <Grid Grid.Row="0" Grid.Column="1" Margin="4,4" >
                                        <c1:C1DataGrid Grid.Row="2" x:Name="dgLotInfoDetl" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn        Header = "투입위치"      Binding = "{Binding EQPT_MOUNT_PSTN_ID}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "투입위치"      Binding = "{Binding EQPT_MOUNT_PSTN_NAME}"   HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn        Header = "투입일시"      Binding = "{Binding INPUT_DTTM}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn        Header = "LOT ID"        Binding = "{Binding INPUT_LOTID}"            HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn        Header = "제품코드"      Binding = "{Binding MTRLID}"                 HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn        Header = "대LOT"         Binding = "{Binding PROD_LOTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "CUT"           Binding = "{Binding CUT_NO}"                 HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridNumericColumn     Header = "예상M수량"     Binding = "{Binding INPUT_QTY}"              HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" ShowButtons="False" />
                                                <c1:DataGridNumericColumn     Header = "총M수량"       Binding = "{Binding INPUT_TOTL_QTY}"         HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" ShowButtons="False" />
                                                <c1:DataGridNumericColumn     Header = "생산량"        Binding = "{Binding OUTPUT_QTY}"             HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" ShowButtons="False" />
                                                <c1:DataGridNumericColumn     Header = "설비생산량"    Binding = "{Binding EQPT_OUTPUT_QTY}"        HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" ShowButtons="False" />
                                                <c1:DataGridNumericColumn     Header = "투입대기건수"  Binding = "{Binding NEXT_BATCH_CNT}"         HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" ShowButtons="False" />
                                                <c1:DataGridTextColumn        Header = "활동명"        Binding = "{Binding OCCR_EVENT_NAME}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </c1:C1TabItem>
                                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='기간별정보'}" >
                                    <Grid Grid.Row="0" Grid.Column="1" Margin="4,4" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35" />
                                            <RowDefinition Height="4" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto" MinWidth="80"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto" MinWidth="80"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
