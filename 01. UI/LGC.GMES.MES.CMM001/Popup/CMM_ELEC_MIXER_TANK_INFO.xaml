<c1:C1Window x:Class="LGC.GMES.MES.CMM001.Popup.CMM_ELEC_MIXER_TANK_INFO"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='이송탱크Slurry정보'}" 
             Tag="ProtoType01Windows01" Height="800" Width="1000" IsResizable="False" Loaded="C1Window_Loaded" >

    <c1:C1Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </c1:C1Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="44" />
        </Grid.RowDefinitions>

        <c1:C1TabControl  Grid.Row="0" >
            <c1:C1TabItem Name="tabSlurryInputComp" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입Slurry비교'}" >
                <Grid Grid.Row="0" Grid.Column="1" Margin="4,4" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Grid.Column="0"  Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="8"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <ctrlLib:LGCDatePicker Grid.Row="0" Grid.Column="1" x:Name="dtpDateFrom_Hst" DatepickerType="Date" />
                        <ctrlLib:LGCDatePicker Grid.Row="0" Grid.Column="3" x:Name="dtpDateTo_Hst" DatepickerType="Date" />
                        <Button x:Name="btnSearch_Hst"      Grid.Row="0" Grid.Column="5"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Hst_Click" HorizontalAlignment="Right" Margin="0,2" />

