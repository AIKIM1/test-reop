<c1:C1Window x:Class="LGC.GMES.MES.CMM001.CMM_THERMAL_PRINT_FOLD"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Tag="ProtoType01Windows01" Height="Auto" Width="Auto" IsResizable="True" Loaded="C1Window_Loaded"  >

    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>

    <Grid>
        <Grid Grid.Row="0" Grid.Column="0" x:Name="grFoldPrint" HorizontalAlignment="Left" Background="Black" Margin="0,0" VerticalAlignment="Top">
            <Grid Margin="1,1,1,1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="45"/>
                    <ColumnDefinition Width="65"/>
                    <ColumnDefinition Width="46"/>
                    <ColumnDefinition Width="84"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="45"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.Column="0" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>

                <Border Grid.Row="3" Grid.Column="0" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="4" Grid.Column="0" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="5" Grid.Column="0" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="6" Grid.Column="0" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="4" Grid.Column="1" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>

                <Border Grid.Row="4" Grid.Column="2" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>
                <Border Grid.Row="4" Grid.Column="3" Background="White" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0.5,0.5,0.5,0.5"/>


                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold"/>
                <TextBlock Grid.Row="3" Grid.Column="0" Text="Folding&#x0a;Lot" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold"/>
                <TextBlock Grid.Row="4" Grid.Column="0" Text="{Binding ConverterParameter='수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold"/>
                <TextBlock Grid.Row="4" Grid.Column="2" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold"/>
                <TextBlock Grid.Row="5" Grid.Column="0" Text="{Binding ConverterParameter='발행시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold"/>
                <TextBlock Grid.Row="6" Grid.Column="0" Text="{Binding ConverterParameter='설비번호', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold"/>

                <TextBlock Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" x:Name="LOTID_FOLD" Text="LOT ID" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Grid.Column="0" Grid.RowSpan="2"    x:Name="TITLEX_FOLD" Text="TITLEX" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="9" FontWeight="Bold"/>
                <TextBlock Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" x:Name="BARCODE_FOLD" Text="LOTIDBARCODE" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Bar-Code 39" FontSize="24"/>
                <TextBlock Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" x:Name="MAGID_FOLD" Text="MAGID" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" FontWeight="Bold"/>
                <TextBlock Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" x:Name="LARGELOT_FOLD" Text="LARGELOT" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" />
                <TextBlock Grid.Row="4" Grid.Column="1"                     x:Name="QTY_FOLD" Text="QTY" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" />
                <TextBlock Grid.Row="4" Grid.Column="3"                     x:Name="MODEL_FOLD" Text="MODEL" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="12" />
                <TextBlock Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" x:Name="REGDATE_FOLD" Text="REGDATE" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Gulim"/>
                <TextBlock Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" x:Name="EQPTNO_FOLD" Text="EQPTNO" VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Gulim"/>
            </Grid>
        </Grid>        
    </Grid>
</c1:C1Window>
