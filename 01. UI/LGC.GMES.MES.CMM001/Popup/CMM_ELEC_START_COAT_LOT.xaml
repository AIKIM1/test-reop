<c1:C1Window x:Class="LGC.GMES.MES.CMM001.CMM_ELEC_START_COAT_LOT"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='코터 임의 Cut 생성'}" 
             Tag="ProtoType01Windows01" Height="260" Width="400" IsResizable="False" Loaded="C1Window_Loaded" >

    <c1:C1Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </c1:C1Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
            <RowDefinition Height="44" />
        </Grid.RowDefinitions>
        <!--content area-->
        <Grid Grid.Row ="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="5"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <!--LOT INFO-->
            <Grid Grid.Row ="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="100"/>
                    <RowDefinition Height="5"/>
                </Grid.RowDefinitions>

                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}"  />
                <TextBox  Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" x:Name="txtEqptName" CharacterCasing="Upper" IsReadOnly="True"  />
                <TextBlock  Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='대Lot', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <TextBox    Grid.Row="2" Grid.Column="2" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" x:Name="txtLargeLot" CharacterCasing="Upper" IsReadOnly="True" />
                <TextBlock  Grid.Row="2" Grid.Column="4" Text="{Binding ConverterParameter='Cut', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <c1:C1ComboBox   Grid.Row="2" Grid.Column="6"  x:Name="cboCutNo" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  >
                    <c1:C1ComboBoxItem Content="1"/>
                    <c1:C1ComboBoxItem Content="2"/>
                    <c1:C1ComboBoxItem Content="3"/>
                    <c1:C1ComboBoxItem Content="4"/>
                    <c1:C1ComboBoxItem Content="5"/>
                    <c1:C1ComboBoxItem Content="6"/>
                    <c1:C1ComboBoxItem Content="7"/>
                    <c1:C1ComboBoxItem Content="8"/>
                    <c1:C1ComboBoxItem Content="9"/>
                </c1:C1ComboBox>
                <TextBlock  Grid.Row="4" Grid.Column="0" x:Name="lblSideType" Text="{Binding ConverterParameter='H/S Side', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}"   Visibility="Collapsed" />
                <c1:C1ComboBox Grid.Row="4" Grid.Column="2"  Grid.ColumnSpan="5" x:Name="cboSideType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  Visibility="Collapsed" >
                    <c1:C1ComboBox.Items>
                        <c1:C1ComboBoxItem Content="L"/>
                        <c1:C1ComboBoxItem Content="R"/>
                    </c1:C1ComboBox.Items>
                </c1:C1ComboBox>
            </Grid>
        </Grid>

        <Grid Grid.Row ="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSave"    Grid.Column="1" Content="{Binding ConverterParameter='시작', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Visibility="Collapsed" Click="btnSave_Click"   />
            <Button x:Name="btnClose" Grid.Column="3" Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnClose_Click"  />
        </Grid>


        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</c1:C1Window>
