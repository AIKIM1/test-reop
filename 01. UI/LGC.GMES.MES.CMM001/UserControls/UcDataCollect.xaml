<UserControl x:Class="LGC.GMES.MES.CMM001.UserControls.UcDataCollect"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LGC.GMES.MES.CMM001.UserControls"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:glob="clr-namespace:System.Globalization;assembly=mscorlib"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="512">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot">
            <Grid Grid.Row="3" Grid.Column="3">
                <Border Grid.Row="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                <Grid>
                    <Grid.Resources>
                        <DataTemplate x:Key="ResultTemplate">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>

                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right" />
                            </Grid>
                        </DataTemplate>
                    </Grid.Resources>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="6"/>
                        <RowDefinition Height="34"/>
                        <RowDefinition Height="6"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="6"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="6"/>
                    </Grid.ColumnDefinitions>
                    <c1:C1TabControl Name="tcDataCollect" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="3">
                        <c1:C1TabItem Name="tiWipReason" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량/LOSS/물품청구'}" x:FieldModifier="public">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1" x:Name="grdWipReasonHeader">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="5,2,2,2">
                                        <CheckBox x:Name="chkSum" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=소형전극}" Visibility="Collapsed" />
                                        <c1:C1ComboBox x:Name="cboLaneNum" Grid.Row="0" Grid.Column="0" MaxDropDownItems="5" Width="100" Margin="10,0,0,0" IsEditable="False" Visibility="Collapsed">
                                            <c1:C1ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel Orientation="Horizontal">
                                                        <CheckBox IsChecked="{Binding IsChecked}" Content="{Binding Content}" Width="20" VerticalAlignment="Center" />
                                                        <TextBlock Text="{Binding Content}"  Margin="10,0,0,0" VerticalAlignment="Center" />
                                                    </StackPanel>
                                                </DataTemplate>
                                            </c1:C1ComboBox.ItemTemplate>
                                        </c1:C1ComboBox>
                                    </StackPanel>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Name="lblTop" Text="{Binding ConverterParameter='TOP', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" x:FieldModifier="public"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Name="lblBack" Text="{Binding ConverterParameter='BACK', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" x:FieldModifier="public"/>
                                    </StackPanel>
                                    <Border Grid.Column="2" Grid.ColumnSpan="2">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="Auto">
                                            <TextBlock Name="txtLVFilter" Text="{Binding ConverterParameter='LV.Filter', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" x:FieldModifier="public" Visibility="Collapsed"/>
                                            <CheckBox x:Name="chkDefectFilter" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}}" Visibility="Collapsed"/>
                                            <Border Width="5"/>
                                            <Button x:Name="btnProcResn" Content="{Binding ConverterParameter=생산 중 불량, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="Auto" Visibility="Collapsed" />
                                            <Border Width="5"/>
                                            <Button x:Name="btnRollMapUpdate" Content="{Binding ConverterParameter=롤맵수정, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Visibility="Collapsed" />
                                            <Border Width="5"/>
                                            <Button x:Name="btnPublicWipSave" Content="{Binding ConverterParameter=전체저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="100" />
                                            <Border Width="5"/>
                                            <Button x:Name="btnSaveWipReason" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="100" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <Grid Name="grdWipReason" Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <c1:C1DataGrid x:Name="dgWipReason" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" CanUserSort="False" CanUserFilter="False" ClipboardPasteMode="None" Margin="0,0,0,0">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn Header="ACTID" Binding="{Binding ACTID}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="ACTNAME" Binding="{Binding ACTNAME}" IsReadOnly="True" HorizontalAlignment="Center">
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateCount />
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridTextColumn>
                                                <c1:DataGridTextColumn Header="불량코드" Binding="{Binding RESNCODE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량요인" Binding="{Binding RESNNAME}" IsReadOnly="True" HorizontalAlignment="Left" />
                                                <c1:DataGridTextColumn Header="LOSS자동처리" Binding="{Binding PRCS_ITEM_CODE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량처리여부" Binding="{Binding RSLT_EXCL_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="수량합계" Binding="{Binding RESNTOTQTY}" IsReadOnly="True" HorizontalAlignment="Right" Visibility="Collapsed" >
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" />
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridTextColumn Header="부품" Binding="{Binding PARTNAME}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="TAG" Binding="{Binding TAG_CONV_RATE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="횟수상세코드" Binding="{Binding LINK_DETL_RSN_CODE_TYPE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="횟수입력여부" Binding="{Binding WRK_COUNT_MNGT_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="횟수" Binding="{Binding COUNTQTY}" HorizontalAlignment="Right" Minimum="0" Maximum="99" Tag="N" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="태그수" Binding="{Binding DFCT_TAG_QTY}" Format="F0" Minimum="0" Tag="N" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="M수량" Binding="{Binding CONVRESNQTY}" Format="F2" Minimum="0" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="수량" Binding="{Binding RESNQTY}" Format="F2" Minimum="0" ShowButtons="False" HandleUpDownKeys="False" />
                                                <c1:DataGridTextColumn Header="COSTCENTERID" Binding="{Binding COSTCENTERID}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="COSTCENTER" Binding="{Binding COSTCENTER}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="TAG_ALL_APPLY_FLAG" Binding="{Binding TAG_ALL_APPLY_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="수량입력여부" Binding="{Binding DFCT_QTY_CHG_BLOCK_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="자동실적수량" Binding="{Binding FRST_AUTO_RSLT_RESNQTY}" Format="F2" Minimum="0" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="단선여부" Binding="{Binding WEB_BREAK_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="TOPLOSS기본불량여부" Binding="{Binding TOP_LOSS_BAS_DFCT_APPLY_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량코드LV1" Binding="{Binding DFCT_CODE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량수량변경여부" Binding="{Binding DFCT_QTY_UI_CHG_BLOCK_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="허용비율(%)" Binding="{Binding PERMIT_RATE}" IsReadOnly="True" HorizontalAlignment="Right" Visibility="Collapsed" />
                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.BottomRows>
                                                <c1:DataGridSummaryRow x:Name="defectSummary" RowStyle="{StaticResource SummaryRowStyle}"  />
                                                <c1:DataGridSummaryRow x:Name="defectSummary2" RowStyle="{StaticResource SummaryRowStyle}"  />
                                            </c1:C1DataGrid.BottomRows>
                                            <!--AREA_RESN_CLSS_NAME1,2,3 컬럼 삭제 -->
                                        </c1:C1DataGrid>
                                        <!-- 코터 -->
                                        <c1:C1DataGrid x:Name="dgWipReason2" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" CanUserSort="False" CanUserFilter="False" ClipboardPasteMode="None" Margin="5,0,0,0">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn Header="ACTID" Binding="{Binding ACTID}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="ACTNAME" Binding="{Binding ACTNAME}" IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="불량코드" Binding="{Binding RESNCODE}" IsReadOnly="True" HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="불량요인" Binding="{Binding RESNNAME}" IsReadOnly="True" HorizontalAlignment="Left" />
                                                <c1:DataGridTextColumn Header="LOSS자동처리" Binding="{Binding PRCS_ITEM_CODE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량처리여부" Binding="{Binding RSLT_EXCL_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="수량합계" Binding="{Binding RESNTOTQTY}" IsReadOnly="True" HorizontalAlignment="Right" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="부품" Binding="{Binding PARTNAME}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="TAG" Binding="{Binding TAG_CONV_RATE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="횟수상세코드" Binding="{Binding LINK_DETL_RSN_CODE_TYPE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="횟수입력여부" Binding="{Binding WRK_COUNT_MNGT_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="횟수" Binding="{Binding COUNTQTY}" HorizontalAlignment="Right" Width="80" Minimum="0" Maximum="99" Tag="N" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="태그수" Binding="{Binding DFCT_TAG_QTY}" Format="F0" Minimum="0" Tag="N" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="M수량" Binding="{Binding CONVRESNQTY}" Format="F2" Minimum="0" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="수량" Binding="{Binding RESNQTY}" Format="F2" Minimum="0" ShowButtons="False" HandleUpDownKeys="False" />
                                                <c1:DataGridTextColumn Header="COSTCENTERID" Binding="{Binding COSTCENTERID}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="COSTCENTER" Binding="{Binding COSTCENTER}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="TAG_ALL_APPLY_FLAG" Binding="{Binding TAG_ALL_APPLY_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="AREA_RESN_CLSS_NAME1" Binding="{Binding AREA_RESN_CLSS_NAME1}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="AREA_RESN_CLSS_NAME2" Binding="{Binding AREA_RESN_CLSS_NAME2}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="AREA_RESN_CLSS_NAME3" Binding="{Binding AREA_RESN_CLSS_NAME3}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridCheckBoxColumn Header="전체등록" Name="RESN_TOT_CHK" Binding="{Binding RESN_TOT_CHK}" HorizontalAlignment="Center" EditOnSelection="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="수량입력여부" Binding="{Binding DFCT_QTY_CHG_BLOCK_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="자동실적수량" Binding="{Binding FRST_AUTO_RSLT_RESNQTY}" Format="F2" Minimum="0" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="단선여부" Binding="{Binding WEB_BREAK_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="TOPLOSS기본불량여부" Binding="{Binding TOP_LOSS_BAS_DFCT_APPLY_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량코드LV1" Binding="{Binding DFCT_CODE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량수량변경여부" Binding="{Binding DFCT_QTY_UI_CHG_BLOCK_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="허용비율(%)" Binding="{Binding PERMIT_RATE}" IsReadOnly="True" HorizontalAlignment="Right"  Visibility="Collapsed" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                    <Grid x:Name="grdDefectLVFilter" Grid.Row="1" Visibility="Collapsed">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <c1:C1DataGrid Grid.Column="1" x:Name="dgLevel1" IsReadOnly="True" HeadersVisibility="None" SelectionMode="SingleCell"  HorizontalScrollBarVisibility="Hidden" CanUserSort="False" CanUserFilter="True">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn  Name="CHK"        Binding = "{Binding CHK}"              HorizontalAlignment="Center"     IsReadOnly="False"  Width="Auto"/>
                                                <c1:DataGridTextColumn        Header = "Level1_Content"          Binding = "{Binding LV_NAME}"     HorizontalAlignment="Center" Width="*" IsReadOnly="True" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>

                                        <c1:C1DataGrid Grid.Column="3" x:Name="dgLevel2" IsReadOnly="True" HeadersVisibility="None" SelectionMode="SingleCell" HorizontalScrollBarVisibility="Hidden" CanUserSort="False" CanUserFilter="True">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn  Name="CHK"             Binding = "{Binding CHK}"            HorizontalAlignment="Center"     IsReadOnly="False" Width="Auto"/>
                                                <c1:DataGridTextColumn        Header = "Level2_Content"          Binding = "{Binding LV_NAME}"     HorizontalAlignment="Center" Width="*" IsReadOnly="True"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>

                                        <c1:C1DataGrid Grid.Column="5" x:Name="dgLevel3" IsReadOnly="True" HeadersVisibility="None" SelectionMode="SingleCell" HorizontalScrollBarVisibility="Hidden" CanUserSort="False" CanUserFilter="True">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn  Name="CHK"          Binding = "{Binding CHK}"              HorizontalAlignment="Center"     IsReadOnly="False" Width="Auto"/>
                                                <c1:DataGridTextColumn        Header = "Level3_Content"          Binding = "{Binding LV_NAME}"     HorizontalAlignment="Center" Width="*" IsReadOnly="True"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </c1:C1TabItem>
                        <c1:C1TabItem Name="tiDefect" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량'}" x:FieldModifier="public" Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="10" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Name="lblDefectTop" Text="{Binding ConverterParameter='Top', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" x:FieldModifier="public"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Name="lblDefectBack" Text="{Binding ConverterParameter='Back', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" x:FieldModifier="public"/>
                                    </StackPanel>
                                    <Border Grid.Column="3">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="Auto">
                                            <Button x:Name="btnSaveDefect" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="100" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Grid Name="grdDefectGrid">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <c1:C1DataGrid x:Name="dgDefect" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" CanUserSort="False" CanUserFilter="False" x:FieldModifier="public">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn Header="ACTID" Binding="{Binding ACTID}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량코드" Binding="{Binding RESNCODE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량요인" Binding="{Binding RESNNAME}" IsReadOnly="True" HorizontalAlignment="Left" />
                                                <c1:DataGridTextColumn Header="부품" Binding="{Binding PARTNAME}" IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="COST CENTER" Binding="{Binding COSTCENTERID}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="COST CENTER" Binding="{Binding COSTCENTER}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="TAG" Binding="{Binding TAG_CONV_RATE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="수량" Binding="{Binding RESNQTY}" Format="F2" Width="100" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                        <c1:C1DataGrid x:Name="dgDefect2" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" CanUserSort="False" CanUserFilter="False" Margin="5,0,0,0" x:FieldModifier="public">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn Header="ACTID" Binding="{Binding ACTID}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량코드" Binding="{Binding RESNCODE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="불량요인" Binding="{Binding RESNNAME}" IsReadOnly="True" HorizontalAlignment="Left" />
                                                <c1:DataGridTextColumn Header="부품" Binding="{Binding PARTNAME}" IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="COST CENTER" Binding="{Binding COSTCENTERID}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="COST CENTER" Binding="{Binding COSTCENTER}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="TAG" Binding="{Binding TAG_CONV_RATE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn Header="수량" Binding="{Binding RESNQTY}" Format="F2" Width="100" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </c1:C1TabItem>
                        <c1:C1TabItem Name="tiEqptDefect" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='설비불량정보'}" Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
