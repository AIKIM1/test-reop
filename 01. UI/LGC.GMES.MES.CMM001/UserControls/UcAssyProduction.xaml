<UserControl x:Class="LGC.GMES.MES.CMM001.UserControls.UcAssyProduction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LGC.GMES.MES.CMM001.UserControls"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="512">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" FontWeight="Bold" FontSize="13" ></TextBlock>
                </Grid>
            </DataTemplate>
        </Grid.Resources>

        <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"/>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="34"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
            <Grid   Grid.Row="0" >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="8"/>
                </Grid.ColumnDefinitions>
                <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='생산', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                <Grid Grid.Column="3" x:Name="grdLegend">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <!--<Border    Grid.Row="1" Grid.Column="0" Background="#F8DAC0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='미확정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />

                    <Border    Grid.Row="1" Grid.Column="4" Background="#E6F5FB" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='조립출고확정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />

                    <Border    Grid.Row="1" Grid.Column="8" Background="#E8F7C8" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                    <TextBlock Grid.Row="1" Grid.Column="10" Text="{Binding ConverterParameter='활성화입고', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />-->
                </Grid>

            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="8"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="8"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                </Grid.ColumnDefinitions>

                <c1:C1TabControl  Grid.Row="1" Grid.Column="1" >
                    <c1:C1TabItem x:Name="tabDefectDetail"  >
                        <c1:C1TabItem.HeaderTemplate>
                            <DataTemplate>
                                <TextBlock x:Name="tbDefectDetail" Text="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='생산실적'}" FontWeight="Bold" FontSize="12" TextTrimming="CharacterEllipsis" MouseLeftButtonDown="TbDefectDetail_OnMouseLeftButtonDown"/>
                            </DataTemplate>
                        </c1:C1TabItem.HeaderTemplate>                        
                        <Grid Name="ResultMain">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="39"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="8"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <Grid x:Name="grdAddDefect" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />                                    
                                    <ColumnDefinition Width="4" />
                                </Grid.ColumnDefinitions>

                                <!--<Button  Grid.Column="10" x:Name="btnInBoxInputCancel" Content="{Binding ConverterParameter='투입취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInBoxInputCancel_Click" />-->

                                <TextBlock x:Name="tbAddDefect"  Grid.Column="1" Text="{Binding ConverterParameter='추가불량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="0,6" />
                                <!--<c1:C1NumericBox Grid.Column="3" x:Name="txtAddDefectQty" Style="{StaticResource C1NumericBoxStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" IsReadOnly="True" ShowButtons="False" MinWidth="80" Format="#,##0" Margin="0,6" />-->
                                <TextBox x:Name="txtAddDefectQty" Grid.Column="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" MinWidth="60" TextAlignment="Right" IsReadOnly="True" />
                                <Border x:Name="bdAddDefect" Grid.Column="5" Style="{StaticResource Content_Separator_BorderStyle}" />
                                <Button  Grid.Column="7" x:Name="btnAddDefect" Content="{Binding ConverterParameter='추가불량반영',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnAddDefect_Click" Margin="0,6" />
                                <Button  Grid.Column="9" x:Name="btnSaveWipHistory" Content="{Binding ConverterParameter='실적임시저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,6" />
                            </Grid>
                            
                            <Grid x:Name="LotList" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">
                                <c1:C1DataGrid x:Name="dgDefectDetail" HeadersVisibility="None" SelectionMode="SingleRow" FrozenTopRowsCount="2" LoadedCellPresenter="dgDefectDetail_LoadedCellPresenter" UnloadedCellPresenter="dgDefectDetail_UnloadedCellPresenter" CommittedEdit="dgDefectDetail_CommittedEdit" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridNumericColumn     Header = "[투입수량, 투입수량]"          Binding = "{Binding INPUTQTY}"      HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn     Header = "[생산 수량, 생산 수량]"        Binding = "{Binding OUTPUTQTY}"     HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn     Header = "[설비투입수량, 설비투입수량]"  Binding = "{Binding EQPTQTY}"     HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn     Header = "[양품수량, 양품수량]"          Binding = "{Binding GOODQTY}"       HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" ShowButtons="False" Minimum="0" />
                                        <c1:DataGridNumericColumn     Header = "[불량수량, 불량]"              Binding = "{Binding DTL_DEFECT}"    HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn     Header = "[불량수량, LOSS]"              Binding = "{Binding DTL_LOSS}"      HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn     Header = "[불량수량, 물품청구]"          Binding = "{Binding DTL_CHARGEPRD}" HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn     Header = "[불량수량, 합계]"              Binding = "{Binding DEFECTQTY}"     HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" Visibility="Collapsed" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn     Header = "[차이수량, 재투입(+)]"         Binding = "{Binding ALPHAQTY_P}"     HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn     Header = "[차이수량, 미기입불량(-)]"     Binding = "{Binding ALPHAQTY_M}"     HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn     Header = "[BOX수량, BOX수량]"            Binding = "{Binding BOXQTY}"        HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <c1:DataGridColumnHeaderRow />
                                    </c1:C1DataGrid.TopRows>
                                </c1:C1DataGrid>
                            </Grid>
                            <!--4row-->
                            <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#ee5283" BorderThickness="0,2,0,0" VerticalAlignment="Bottom" />
                            <!--5row-->
                            <Grid x:Name="LotInfo" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" ScrollViewer.VerticalScrollBarVisibility="Disabled" ShowGridLines="False" >
                                <Grid.Resources>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Margin" Value="2,2,2,2"/>
                                    </Style>
                                </Grid.Resources>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="3"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <!--title-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="4" Background="#FAFAFA" BorderThickness="1" BorderBrush="#B3B3B3"></Border>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource Content_InputForm_LabelBorderStyle}" ></Border>

                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='Lot ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock  Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='제품 ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock  Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='W/O', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <!--<TextBlock  Grid.Row="2" Grid.Column="2" Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>-->
                                <TextBlock  Grid.Row="2" Grid.Column="2" Text="{Binding ConverterParameter='버전', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock  Grid.Row="3" Grid.Column="0" Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock  Grid.Row="3" Grid.Column="2" Text="{Binding ConverterParameter='장비완료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock  x:Name="tbErpSendYn" Grid.Row="4" Grid.Column="0" Text="{Binding ConverterParameter='ERP전송여부', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock  Grid.Row="4" Grid.Column="2" Text="{Binding ConverterParameter='가동시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <TextBlock  Grid.Row="6" Grid.Column="0" Text="{Binding ConverterParameter='특이사항',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,8,0" />

                                <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtLotId"   CharacterCasing="Upper" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtProdId"  Margin="3,3,8,3"      Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                                <!--2row-->
                                <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtStartTime" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                                <!--3row-->
                                <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtWorkOrder" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                <TextBox Grid.Row="2" Grid.Column="3" x:Name="txtProdVerCode" Margin="3,3,50,3" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                <Button  Grid.Row="2" Grid.Column="3" x:Name="btnVersion" Margin="3,3,20,3"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="right" />

                                <!--4row-->
                                <!--<ctrlLib:LGCDatePicker Grid.Row="2" Grid.Column="3" Margin="3,3,8,3" DatepickerType="Date" x:Name="dtpCaldate" IsEnabled="False"/>--> 
                                <TextBox Grid.Row="3" Grid.Column="3" x:Name="txtEndTime"  Margin="3,3,8,3"      Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                <!--<TextBox Grid.Row="4" Grid.Column="3" x:Name="txt"  Margin="3,3,8,3"      Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />-->

                                <TextBox Grid.Row="4" Grid.Column="1" x:Name="txtErpSendYn" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                
                                <Grid Grid.Row="4" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0" x:Name="txtWorkMinute"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                    <TextBlock Grid.Column="1"  Text="{Binding ConverterParameter='분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                </Grid>

                                <RichTextBox x:Name="txtRemark" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" HorizontalContentAlignment="Center" Margin="0,3,8,3" >
                                    <RichTextBox.Resources>
                                        <Style TargetType="{x:Type Paragraph}">
                                            <Setter Property="Margin" Value="5"/>
                                        </Style>
                                    </RichTextBox.Resources>
                                    <FlowDocument LineHeight="3" >
                                        <Paragraph ></Paragraph>
                                    </FlowDocument>
                                </RichTextBox>

                                <!-- Row, Column Define-->

                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                    
                    <c1:C1TabItem x:Name="tabDefect" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량/LOSS/물품청구'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="39"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="143*"/>
                                <ColumnDefinition Width="68*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Row="1" Grid.Column="3" x:Name="btnDefectRefresh" Content="{Binding ConverterParameter=Refresh, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />
                            <Button Grid.Row="1" Grid.Column="4" x:Name="btnDefectSave" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDefectSave_Click" Margin="0,6" />

                            <c1:C1DataGrid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" x:Name="dgDefect" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" FrozenBottomRowsCount="1" CommittedEdit="dgDefect_CommittedEdit" BeginningEdit="dgDefect_BeginningEdit" LoadedCellPresenter="dgDefect_LoadedCellPresenter" >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn        Header = "활동ID"         Binding = "{Binding ACTID}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn        Header = "활동명"         Binding = "{Binding ACTNAME}"            ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL" HorizontalAlignment="Center" IsReadOnly="True" />
                                    <c1:DataGridTextColumn        Header = "불량코드"       Binding = "{Binding RESNCODE}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "GRCODENAME"     Binding = "{Binding CLSS_NAME1}"          ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL" HorizontalAlignment="Center" IsReadOnly="True" Width="0.7*"/>
                                    <c1:DataGridTextColumn        Header = "활동사유명"     Binding = "{Binding RESNNAME}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "불량명"         Binding = "{Binding DFCT_CODE_DETL_NAME}" HorizontalAlignment="Left" IsReadOnly="True"/>
                                    <c1:DataGridTextColumn        Header = "불량코드명"     Binding = "{Binding DFCT_CODE_NAME}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "불량상세명"     Binding = "{Binding DFCT_DETL_NAME}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "부품"           Binding = "{Binding DFCT_PART_NAME}"     HorizontalAlignment="Left" IsReadOnly="True"/>
                                    <c1:DataGridTextColumn        Header = "불량코드"       Binding = "{Binding DFCT_CODE}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "실적반영여부"   Binding = "{Binding RSLT_EXCL_FLAG}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "처리항목코드"   Binding = "{Binding PRCS_ITEM_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "불량상세코드"   Binding = "{Binding DFCT_DETL_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "불량부품코드"   Binding = "{Binding DFCT_PART_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "코스트센터코드" Binding = "{Binding COST_CNTR_ID}"       HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridNumericColumn     Header = "장비불량수량"   Binding = "{Binding EQP_DFCT_QTY}"       HorizontalAlignment="Right"  IsReadOnly="True" Format="#,##0">
                                        <c1:DataGridAggregate.AggregateFunctions>
                                            <c1:DataGridAggregatesCollection>
                                                <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                            </c1:DataGridAggregatesCollection>
                                        </c1:DataGridAggregate.AggregateFunctions>
                                    </c1:DataGridNumericColumn>    
                                    <c1:DataGridNumericColumn     Header = "수량"           Binding = "{Binding RESNQTY}"            HorizontalAlignment="Right"  Format="#,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                        <c1:DataGridAggregate.AggregateFunctions>
                                            <c1:DataGridAggregatesCollection>
                                                <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                            </c1:DataGridAggregatesCollection>
                                        </c1:DataGridAggregate.AggregateFunctions>
                                    </c1:DataGridNumericColumn>    
                                    <c1:DataGridTextColumn        Header = "코스트센터"     Binding = "{Binding COST_CNTR_NAME}"     HorizontalAlignment="Left" IsReadOnly="True"/>
                                    <c1:DataGridTextColumn       Header = "PERMIT_RATE" Binding = "{Binding PERMIT_RATE}"       HorizontalAlignment="Left" IsReadOnly="True"  Visibility="Collapsed" />
                                </c1:C1DataGrid.Columns>
                                <c1:C1DataGrid.BottomRows>
                                    <c1:DataGridSummaryRow RowStyle="{StaticResource SummaryRowStyle}"/>
                                </c1:C1DataGrid.BottomRows>
                            </c1:C1DataGrid>

                        </Grid>
                    </c1:C1TabItem>
                    
                    <c1:C1TabItem x:Name="tabProdCellWinding" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='생산반제품'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="39"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="35"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>                                
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="0" >
