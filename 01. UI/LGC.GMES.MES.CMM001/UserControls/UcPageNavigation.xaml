<UserControl x:Class="LGC.GMES.MES.CMM001.Controls.UcPageNavigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             d:DesignWidth="1000" d:DesignHeight="25" 
             MinWidth="100" MinHeight="10" Width="Auto" Height="Auto"
             Margin="10,5,10,5" Focusable="True" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>            
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="5*"/>
        </Grid.ColumnDefinitions>

        <Button    x:Name="btnPageDown"    Grid.Row="0" Grid.Column="1"  Content="◀◀" Style="{StaticResource Content_MainButtonSpecialStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  Click="PageNavigator_Click"/>
        <Button    x:Name="btnPagePreview" Grid.Row="0" Grid.Column="3"  Content="◀"   Style="{StaticResource Content_MainButtonSpecialStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  Click="PageNavigator_Click"/>

        <TextBlock x:Name="lblPage00"   Grid.Row="0" Grid.Column="5"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage01"   Grid.Row="0" Grid.Column="6"  Text="1"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage01_B" Grid.Row="0" Grid.Column="7"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage02"   Grid.Row="0" Grid.Column="8"  Text="2"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage02_B" Grid.Row="0" Grid.Column="9"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage03"   Grid.Row="0" Grid.Column="10"  Text="3"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage03_B" Grid.Row="0" Grid.Column="11"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage04"   Grid.Row="0" Grid.Column="12" Text="4"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage04_B" Grid.Row="0" Grid.Column="13"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage05"   Grid.Row="0" Grid.Column="14" Text="5"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage05_B" Grid.Row="0" Grid.Column="15"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage06"   Grid.Row="0" Grid.Column="16" Text="6"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage06_B" Grid.Row="0" Grid.Column="17"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage07"   Grid.Row="0" Grid.Column="18" Text="7"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage07_B" Grid.Row="0" Grid.Column="19"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage08"   Grid.Row="0" Grid.Column="20" Text="8"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage08_B" Grid.Row="0" Grid.Column="21"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage09"   Grid.Row="0" Grid.Column="22" Text="9"  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage09_B" Grid.Row="0" Grid.Column="23"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <TextBlock x:Name="lblPage10"   Grid.Row="0" Grid.Column="24" Text="10" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  MouseUp="Page_Click"/>
        <TextBlock x:Name="lblPage10_B" Grid.Row="0" Grid.Column="25"  Text=""  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center"/>

        <Button    x:Name="btnPageNext" Grid.Row="0" Grid.Column="27"  Content="▶"   Style="{StaticResource Content_MainButtonSpecialStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  Click="PageNavigator_Click"/>
        <Button    x:Name="btnPageUp"   Grid.Row="0" Grid.Column="29"  Content="▶▶" Style="{StaticResource Content_MainButtonSpecialStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Cursor="Hand"  Click="PageNavigator_Click"/>
    </Grid>

</UserControl>
