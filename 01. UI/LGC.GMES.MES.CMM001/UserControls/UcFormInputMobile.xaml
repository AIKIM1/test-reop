                            <c1:C1DataGrid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="12" x:Name="dgCurrIn" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow" CurrentCellChanged="dgCurrIn_CurrentCellChanged"  >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridCheckBoxColumn                 Name="CHK" Binding = "{Binding CHK}" Width="Auto"       HorizontalAlignment="Center"  CanUserFilter="False" CanUserSort="False" CanUserResize="False" IsReadOnly="True"/>
