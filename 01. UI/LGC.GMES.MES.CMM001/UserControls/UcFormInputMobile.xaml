                            <c1:C1DataGrid  Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="22"  x:Name="dgWaitPancake" IsReadOnly="True" HeadersVisibility="Column"  SelectionMode="MultiRange" FrozenBottomRowsCount="1" CurrentCellChanged="dgWaitPancake_CurrentCellChanged" LoadedCellPresenter="dgWaitPancake_LoadedCellPresenter" UnloadedCellPresenter="dgWaitPancake_UnloadedCellPresenter" >
