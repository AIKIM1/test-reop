                                    <c1:DataGridTextColumn        Header = "PRODUCT_LEVEL2_CODE"        Binding = "{Binding PRODUCT_LEVEL2_CODE}"             HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True"/>
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </Grid>

                    </c1:C1TabItem>
