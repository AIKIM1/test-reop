<UserControl x:Class="LGC.GMES.MES.CMM001.Controls.UcProgress"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             d:DesignWidth="50" d:DesignHeight="20" 
             MinWidth="10" MinHeight="10" Width="Auto" Height="Auto"
             Margin="10,5,10,5" Focusable="True" 
             MouseUp="UserControl_MouseUp" 
             LostFocus="UserControl_LostFocus">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBox x:Name="lblMsgTop" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Text=" " Background="Transparent" BorderThickness="0"
                 HorizontalAlignment="Center" VerticalAlignment="Center"  Visibility="Collapsed"/>        
        <TextBox x:Name="lblMsgBottom" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Text=" " Background="Transparent" BorderThickness="0"
                 HorizontalAlignment="Center" VerticalAlignment="Center"  Visibility="Collapsed"/>
        <TextBox x:Name="lblMsgLeft" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3"  Text=" " Background="Transparent" BorderThickness="0"
                 HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Visible"  />
        <TextBox x:Name="lblMsgRight" Grid.Row="0" Grid.Column="3" Grid.RowSpan="3" Text=" " Background="Transparent" BorderThickness="0"
                 HorizontalAlignment="Center" VerticalAlignment="Center"  Visibility="Collapsed"/>
        <TextBox x:Name="lblMsgCenter" Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" Text=" " Background="Transparent" BorderThickness="0"
                 HorizontalAlignment="Center" VerticalAlignment="Center"  Visibility="Collapsed"/>
    </Grid>

</UserControl>
