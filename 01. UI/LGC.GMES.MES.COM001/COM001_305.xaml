<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" 
             x:Class="LGC.GMES.MES.COM001.COM001_305"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정별 생산실적 수정 (조립)" Grid.ColumnSpan="2">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                        </Grid>
                    </DataTemplate>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                <!--백그라운드용-->
                <Border     Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                <!-- 조회영역 -->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="8" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="8" />
                    </Grid.ColumnDefinitions>

                    <!--조회조건-->
                    <!--ROW1-->
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock                       Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox x:Name="cboArea"  Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock                                   Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox  x:Name="cboEquipmentSegment" Grid.Row="0" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock                          Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox x:Name="cboProcess"  Grid.Row="0" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock                             Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox   x:Name="cboEquipment" Grid.Row="0" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <!--ROW2-->
                    <Grid Grid.Row="3" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock                       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='공급LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <TextBox    x:Name="txtPRLOTID"  Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotId_KeyDown" />
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock                     Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <TextBox    x:Name="txtLotId"  Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}"  CharacterCasing="Upper" KeyDown="txtLotId_KeyDown" />
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="16*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='작업일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
                            <ctrlLib:LGCDatePicker DatepickerType="Date" x:Name="dtpDateFrom" SelectedDataTimeChanged="dtpDate_SelectedDataTimeChanged" />
                            <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0" />
                            <ctrlLib:LGCDatePicker DatepickerType="Date" x:Name="dtpDateTo" SelectedDataTimeChanged="dtpDate_SelectedDataTimeChanged" />
                        </StackPanel>
                    </Grid>

                    <!--조회 버튼-->
                    <Grid Grid.Row="3" Grid.Column="6">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button     Grid.Row="2" Grid.Column="4" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>
                </Grid>
                <!-- 조회영역 End -->

                <!-- LOT 리스트 -->
                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--백그라운드용-->
                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='LOT리스트', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                    <c1:C1DataGrid x:Name="dgLotList" 
                                   Grid.Row="1" 
                                   Grid.ColumnSpan="3" 
                                   IsReadOnly="False"
                                   HeadersVisibility="None"
                                   FrozenTopRowsCount="2"
                                   FrozenColumnCount="3" 
                                   SelectionMode="SingleRow" 
                                   LoadedCellPresenter="dgLotList_LoadedCellPresenter">
                        <c1:C1DataGrid.Columns>
                            <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHK" Width="60" >
                                <c1:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <RadioButton GroupName="dgProductLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgProductLotChoice" HorizontalAlignment="Center" Checked="dgProductLotChoice_Checked" />
                                    </DataTemplate>
                                </c1:DataGridTemplateColumn.CellTemplate>
                            </c1:DataGridTemplateColumn>
                            <c1:DataGridTextColumn      Header = "투입LOT"                   Binding = "{Binding PR_LOTID}"                   IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "COATING LINE"              Binding = "{Binding COATING_LINE}"               IsReadOnly="True" HorizontalAlignment="Left" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "LOTID"                     Binding = "{Binding LOTID}"                      IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "WIPSEQ"                    Binding = "{Binding WIPSEQ}"                     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "제품"                      Binding = "{Binding PRODID}"                     IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "제품명"                    Binding = "{Binding PRODNAME}"                   IsReadOnly="True" HorizontalAlignment="Left" />
                            <c1:DataGridTextColumn      Header = "모델"                      Binding = "{Binding MODLID}"                     IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "PJT"                       Binding = "{Binding PRJT_NAME}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "LOT 유형"                  Binding = "{Binding LOTYNAME}"                    IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "단위"                      Binding = "{Binding UNIT_CODE}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "구분"                      Binding = "{Binding WRK_TYPE}"                   IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "REWINDER"                  Binding = "{Binding EQPT_END_PSTN_ID}"           IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridNumericColumn   Header = "[투입,투입량]"             Binding = "{Binding PRE_PROC_INPUT_QTY}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridNumericColumn   Header = "[투입,WIP_QTY_DIFF]"       Binding = "{Binding PRE_PROC_LOSS_QTY}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridNumericColumn   Header = "[투입,고정LOSS]"           Binding = "{Binding FIX_LOSS_QTY}"               IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridNumericColumn   Header = "[투입,자공정LOSS]"         Binding = "{Binding CURR_PROC_LOSS_QTY}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridNumericColumn   Header = "[투입,JAMMING]"            Binding = "{Binding JAMMING_COUNT}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0" />
                            <c1:DataGridNumericColumn   Header = "[투입,파단총횟수]"         Binding = "{Binding OCCR_COUNT}"                 IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0" />
                            <c1:DataGridTextColumn      Header = "[완성,생산량]"             Binding = "{Binding INPUT_QTY}"                  IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridTextColumn      Header = "[완성,양품량]"             Binding = "{Binding WIPQTY_ED}"                  IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridTextColumn      Header = "[완성,불량량]"             Binding = "{Binding CNFM_DFCT_QTY}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridTextColumn      Header = "[완성,LOSS량]"             Binding = "{Binding CNFM_LOSS_QTY}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridTextColumn      Header = "[완성,물품청구]"           Binding = "{Binding CNFM_PRDT_REQ_QTY}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridTextColumn      Header = "[투입 TAB COUNT,투입 TAB COUNT]"  Binding = "{Binding INPUT_TAB_COUNT}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"  Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "[배출 Tab Count,배출 Tab Count]"  Binding = "{Binding END_TAB_COUNT}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"  Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "[고정LOSS,고정LOSS]"       Binding = "{Binding FIX_LOSS_QTY_VD}"            IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"  Visibility="Collapsed"/>

                            <c1:DataGridNumericColumn   Header = "[파단횟수,타발 전]"        Binding = "{Binding PRE_PUNCH_CUTOFF_COUNT}"     IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0" />
                            <c1:DataGridNumericColumn   Header = "[파단횟수,타발 후]"        Binding = "{Binding AFTER_PUNCH_CUTOFF_COUNT}"   IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0" />
                            <c1:DataGridNumericColumn   Header = "REWINDER_TAB_COUNT"        Binding = "{Binding REWINDER_TAB_COUNT}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridNumericColumn   Header = "VISION_COUNT_QTY"          Binding = "{Binding VISION_COUNT_QTY}"           IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridTextColumn      Header = "[완성,구간잔량(검사전)]"   Binding = "{Binding PRE_SECTION_QTY}"            IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "[완성,구간잔량(검사후)]"   Binding = "{Binding AFTER_SECTION_QTY}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed"/>
                            <c1:DataGridNumericColumn   Header = "재투입"                    Binding = "{Binding RE_INPUT_QTY}"               IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0"/>
                            <c1:DataGridTextColumn      Header = "작업조"                    Binding = "{Binding SHFT_NAME}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "작업조"                    Binding = "{Binding SHIFT}"                      IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "작업자"                    Binding = "{Binding WRK_USER_NAME}"              IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "작업일"                    Binding = "{Binding CALDATE}"                    IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "시작시간"                  Binding = "{Binding STARTDTTM}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "종료시간"                  Binding = "{Binding ENDDTTM}"                    IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "잔량처리"                  Binding = "{Binding EQPT_UNMNT_TYPE_CODE}"       IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "WIPSTAT"                   Binding = "{Binding WIPSTAT}"                    IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "상태"                      Binding = "{Binding WIPSNAME}"                   IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "작업방식"                  Binding = "{Binding RWK_TYPE_NAME}"              IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "작업타입"                  Binding = "{Binding IRREGL_PROD_LOT_TYPE_CODE}"  IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "작업타입"                  Binding = "{Binding IRREGL_PROD_LOT_TYPE_NAME}"  IsReadOnly="True" HorizontalAlignment="Center"/>
                            <c1:DataGridTextColumn      Header = "COATING LINE"              Binding = "{Binding COATING_LINE_NOTCHING}"      IsReadOnly="True" HorizontalAlignment="Left" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "W/O"                       Binding = "{Binding WOID}"                       IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "W/O상세"                   Binding = "{Binding WO_DETL_ID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "AREAID"                    Binding = "{Binding AREAID}"                     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "PROCID"                    Binding = "{Binding PROCID}"                     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "공정"                      Binding = "{Binding PROCNAME}"                   IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "EQSGID"                    Binding = "{Binding EQSGID}"                     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "라인"                      Binding = "{Binding EQSGNAME}"                   IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "EQPTID"                    Binding = "{Binding EQPTID}"                     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "설비"                      Binding = "{Binding EQPTNAME}"                   IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "NOTE"                      Binding = "{Binding WIP_NOTE}"                   IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "마감"                      Binding = "{Binding ERP_CLOSE}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "HOLD여부"                  Binding = "{Binding WIPHOLD}"                    IsReadOnly="True" HorizontalAlignment="Center" />
                        </c1:C1DataGrid.Columns>
                        <c1:C1DataGrid.TopRows>
                            <c1:DataGridColumnHeaderRow />
                            <c1:DataGridColumnHeaderRow />
                        </c1:C1DataGrid.TopRows>
                    </c1:C1DataGrid>
                </Grid>
                <!-- LOT 리스트 End -->

                <!-- 실적확인 -->
                <Grid Grid.Row="4" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--백그라운드용-->
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/> 
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto" MinWidth="7"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto" MinWidth="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" BorderThickness="1" Grid.ColumnSpan="7" Style="{StaticResource BorderSubTitleStyle}"/>
                            <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" Height="18" Margin="15,8,0,8"><Run Text="{Binding ConverterParameter='실적확인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                            <!--2023.10.27   Muhammad Fajar : Add editable remarks column for dgSublot-->
                            <Button          x:Name="btnAddLotRemark"             Grid.Column="5"  Content="{Binding ConverterParameter='ADD_REMARK',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Margin="0,6,8,6" Height="Auto" Click="btnAddLotRemark_Click" />
                            <!---->
                            <Button          x:Name="btnSave"           Grid.Column="6"  Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,6,8,6" Click="btnSave_Click" Height="Auto"/>
                        </Grid>
                        <Grid x:Name="gdLotInfo" Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <!--<ColumnDefinition Width="17*"/>-->
                            </Grid.ColumnDefinitions>

                            <!--title-->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="5" Background="#FAFAFA" BorderThickness="1" BorderBrush="#B3B3B3"></Border>
                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#c8294b" ></Border>

                            <TextBlock                                Grid.Row="1"  Grid.Column="0" Text="{Binding ConverterParameter='LOTID',              Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" />
                            <TextBlock                                Grid.Row="1"  Grid.Column="3" Text="{Binding ConverterParameter='작업지시',           Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" x:Name="tbWorkOrder" />
                            <TextBlock                                Grid.Row="2"  Grid.Column="0" Text="{Binding ConverterParameter='작업일자',           Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" />
                            <TextBlock                                Grid.Row="2"  Grid.Column="3" Text="{Binding ConverterParameter='작업조',             Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" />
                            <TextBlock                                Grid.Row="3"  Grid.Column="0" Text="{Binding ConverterParameter='시작시간',           Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" />
                            <TextBlock                                Grid.Row="3"  Grid.Column="3" Text="{Binding ConverterParameter='작업자',             Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" />
                            <TextBlock                                Grid.Row="4"  Grid.Column="0" Text="{Binding ConverterParameter='종료시간',           Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" />
                            <TextBlock                                Grid.Row="4"  Grid.Column="3" Text="{Binding ConverterParameter='LOT상태',            Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" />
                            <TextBlock x:Name="tbInputQty"            Grid.Row="5"  Grid.Column="0" Text="{Binding ConverterParameter='생산',               Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" />
