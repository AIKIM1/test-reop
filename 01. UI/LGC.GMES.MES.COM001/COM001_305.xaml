                                        <c1:DataGridTextColumn        Header = "투입시간"     Binding = "{Binding INPUT_DTTM}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn        Header = "투입상태"     Binding = "{Binding INPUT_LOT_STAT_CODE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "투입일련번호"     Binding = "{Binding INPUT_SEQNO}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </c1:C1DataGrid>

                            </Grid>
                        </c1:C1TabItem>

                        <c1:C1TabItem x:Name="cTabEqptCond" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='설비작업조건'}" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnEqptCondSave" Grid.Row="1" Grid.Column="13" Content="{Binding ConverterParameter='저장', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnEqptCondSave_Click"/>

                                <c1:C1DataGrid Grid.Row="3" 
                                               Grid.Column="0" 
                                               Grid.ColumnSpan="99" 
                                               x:Name="dgEqptCond" 
                                               IsReadOnly="False" 
                                               HeadersVisibility="Column"
                                               SelectionMode="SingleCell" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn        Header = "설비UNIT코드"    Binding = "{Binding UNIT_EQPTID}"        HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "설비UNIT"        Binding = "{Binding UNIT_EQPTNAME}"      ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "설비조건항목"    Binding = "{Binding CLCTITEM}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "설비조건항목"    Binding = "{Binding CLCTNAME}"           HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn        Header = "단위"            Binding = "{Binding CLCTUNIT}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn        Header = "SPEC(상한)"      Binding = "{Binding CLCTITEM_USL_VALUE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "SPEC(하한)"      Binding = "{Binding CLCTITEM_LSL_VALUE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "설정값"          Binding = "{Binding INPUT_VALUE}"        HorizontalAlignment="Center" EditOnSelection="True" />
                                        <c1:DataGridTextColumn        Header = "DATA_TYPE"       Binding = "{Binding DATA_TYPE}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                            </Grid>
                        </c1:C1TabItem>

                        <c1:C1TabItem x:Name="cTabEqptCut" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='설비구간파단'}" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <c1:C1DataGrid Grid.Row="1" 
                                               x:Name="dgEqptCut" 
                                               IsReadOnly="True" 
                                               HeadersVisibility="Column" 
                                               SelectionMode="SingleCell" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn        Header = "NO."            Binding = "{Binding ROWNUM}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "구간"           Binding = "{Binding SECTION_ID}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "구간"           Binding = "{Binding SECTION_NAME}"        HorizontalAlignment="Left" />
                                        <c1:DataGridTextColumn        Header = "SECTION_TYPE"   Binding = "{Binding SECTION_TYPE_CODE}"   HorizontalAlignment="Left" />
                                        <c1:DataGridTextColumn        Header = "LOSS명"         Binding = "{Binding RESNNAME}"            HorizontalAlignment="Left" />
                                        <c1:DataGridNumericColumn     Header = "발생횟수"       Binding = "{Binding OCCR_COUNT}"          HorizontalAlignment="Right"  Format="#,##0" />
                                        <c1:DataGridNumericColumn     Header = "발생수량"       Binding = "{Binding RESNQTY}"             HorizontalAlignment="Right"  Format="#,##0" />
                                        <c1:DataGridTextColumn        Header = "최종저장일시"   Binding = "{Binding UPDDTTM}"             HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </c1:C1TabItem>

                        <c1:C1TabItem x:Name="cTabInputLoss" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='INPUT_LOSS_MGT'}" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="3" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <Button     Grid.Row="1" Grid.Column="4" x:Name="btnSaveInputLoss"       Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSaveInputLoss_Click"/>

                                <c1:C1DataGrid Grid.Row="3" 
                                               Grid.Column="0" 
                                               Grid.ColumnSpan="6" 
                                               x:Name="dgInputLoss" 
                                               HeadersVisibility="None" 
                                               FrozenTopRowsCount="1" 
                                               SelectionMode="SingleCell" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn        Header = "NO."          Binding = "{Binding ROWNUM}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "구간"         Binding = "{Binding SECTION_ID}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "구간"         Binding = "{Binding SECTION_NAME}" HorizontalAlignment="Left"   IsReadOnly="True"/>
                                        <c1:DataGridTextColumn        Header = "SECTION_TYPE" Binding = "{Binding SECTION_TYPE_CODE}" HorizontalAlignment="Left"   IsReadOnly="True"/>
                                        <c1:DataGridTextColumn        Header = "SECTION_LEN"  Binding = "{Binding SECTION_LEN}"  HorizontalAlignment="Right" IsReadOnly="True" Format="#,##0" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "SECTION_EA"   Binding = "{Binding SECTION_EA}"   HorizontalAlignment="Right" IsReadOnly="True" Format="#,##0" />
                                        <c1:DataGridTemplateColumn    Header = "COUNT" MaxWidth="50" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Grid.Column="2"  x:Name="btnPlus" Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonAddStyle}" VerticalAlignment="Top" Click="btnPlus_Click"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTemplateColumn    Header = "COUNT" MaxWidth="50" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Grid.Column="2"  x:Name="btnMinus" Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonDeleteStyle}" VerticalAlignment="Top" Click="btnMinus_Click"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridNumericColumn     Header = "TIMES"   Binding = "{Binding OCCR_COUNT}"       HorizontalAlignment="Right"  IsReadOnly="True" Format="#,##0">
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                        <c1:DataGridNumericColumn     Header = "발생수량"   Binding = "{Binding CUT_EA}"       HorizontalAlignment="Right"  IsReadOnly="True" Format="#,##0">
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                    </c1:C1DataGrid.TopRows>
                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow x:Name="summary_Cut" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </c1:C1DataGrid>
                            </Grid>
                        </c1:C1TabItem>

                    </c1:C1TabControl>
                    <!-- Tab End -->
                </Grid>

            </Grid>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999"/>
    </Grid>
