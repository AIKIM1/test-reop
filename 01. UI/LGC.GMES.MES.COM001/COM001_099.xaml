<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_099"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="제품변경">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <c1:C1TabControl x:Name="tbcWip">
                    <!-- ################################################### 제품변경 ################################################### -->
                    <c1:C1TabItem x:Name="Create" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='제품변경'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="51"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="51" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회조건-->
                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <!--대상목록-->
                            <Border Grid.Row="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--사유-->
                            <Border Grid.Row="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="5" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--버튼-->
                            <Border Grid.Row="7" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>

                            <!--<Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <TextBlock                       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtLotIDCr"  Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotID_KeyDown" />
                                <Button     x:Name="btnSearchCr" Grid.Row="0" Grid.Column="3" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />

                            </Grid>-->

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock                       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox    x:Name="txtLotID"    Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}"  CharacterCasing="Upper" KeyDown="txtLotID_KeyDown" PreviewKeyDown="txtLotID_PreviewKeyDown" />
                                    <TextBlock                       Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='대차 ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox    x:Name="txtCtnrID"   Grid.Row="0" Grid.Column="3" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtCtnrID_KeyDown" />

                                </Grid>

                                <Button     x:Name="btnCancelOffGrade1" Grid.Row="1" Grid.Column="4" Content="{Binding ConverterParameter=등외품 처리 취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnCancelOffGrade1_Click" />

                                <Button     x:Name="btnSearchCr" Grid.Row="1" Grid.Column="6" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />

                            </Grid>

                            <!--대상목록-->
                            <Grid Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="311*"/>
                                    <ColumnDefinition Width="714*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}" Grid.ColumnSpan="2" Margin="15,8.6,0,8.6"><Run Text="{Binding ConverterParameter='대상목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgListCreate" Grid.Row="1" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="MultiRange" Grid.ColumnSpan="2">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택" Visibility="Collapsed" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgLotChoice" HorizontalAlignment="Center" Checked="dgLotChoice_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="삭제">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  x:Name="btnDelete" Width="Auto" Content="{Binding ConverterParameter=삭제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDelete_Click" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTextColumn      Header="LOTID"      Binding="{Binding LOTID}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="WIPSEQ"     Binding="{Binding WIPSEQ}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header="라인ID"     Binding="{Binding EQSGID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="라인"       Binding="{Binding EQSGNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="공정ID"     Binding="{Binding PROCID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="공정"       Binding="{Binding PROCNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="상태"       Binding="{Binding WIPSTAT}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="상태명"     Binding="{Binding WIPSNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="제품ID"     Binding="{Binding PRODID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="제품명"     Binding="{Binding PRODNAME}"    HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="모델"       Binding="{Binding MODLID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header="수량"       Binding="{Binding WIPQTY}"      HorizontalAlignment="Right"  Format="#,##0.##" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False" Minimum="0" />
                                        <c1:DataGridNumericColumn   Header="WIPQTY2"    Binding="{Binding WIPQTY2}"     HorizontalAlignment="Right"  Format="#,##0.##" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header="LANE_QTY"   Binding="{Binding LANE_QTY}"    HorizontalAlignment="Right"  Format="#,##0.##" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header="단위"       Binding="{Binding UNIT_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--사유-->
                            <Grid Grid.Row="5" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="34" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='변경일', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_ModuleTitleStyle}" />
                                    <ctrlLib:LGCDatePicker  Grid.Row="0" Grid.Column="1"    Grid.ColumnSpan="2"    x:Name="dtpDate"  DatepickerType="Date" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock                        Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Style="{StaticResource Content_ModuleTitleStyle}" Margin="15,4,0,0"><Run Text="{Binding ConverterParameter='변경제품ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    <TextBox   x:Name="txtNewProduct" Grid.Row="1" Grid.Column="1"     Grid.ColumnSpan="2"      Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" />

                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock                        Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right" Style="{StaticResource Content_ModuleTitleStyle}" Margin="15,4,0,0"><Run Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <Grid Grid.Row="4" Grid.Column="7" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="5"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="txtUserNameCr"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtUserName_KeyDown"/>
                                        <Button  Grid.Column="1" x:Name="btnUserCr"    Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnUser_Click"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox x:Name="chkErpSendYn"  Grid.Row="0" Grid.Column="1" IsChecked="True" Content="{Binding ConverterParameter='ERP 전송여부',     Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" FontWeight="Bold" Margin="-30,0,0,0" />
                                </Grid>


                                <Grid Grid.Row="2" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="16*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock                        Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    <TextBox   x:Name="txtWipNoteCr"  Grid.Row="0" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="4"          Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto"  AcceptsReturn="True" VerticalContentAlignment="Top"/>
                                </Grid>

                                <Grid Grid.Row="5" Grid.Column="0"  Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="16*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock                        Grid.Row="5" Grid.Column="0"  HorizontalAlignment="Right" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='승인증빙자료', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox   x:Name="txtFilePath"  Grid.Column="0"        Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" IsReadOnly="True" AcceptsReturn="True" />
                                        <Button x:Name="btnFile" Grid.Column="1"     Content="{Binding ConverterParameter='파일찾기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Margin="0,0,0,4" Click="btnFile_Click" />
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox x:Name="chkOffGrade1"  Grid.Row="0" Grid.Column="1" IsChecked="false" Content="{Binding ConverterParameter='등외품 처리',     Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" FontWeight="Bold" Margin="-30,0,0,0"  />
                                </Grid>
                            </Grid>


                            <!--사유영역-->
                            <Grid Grid.Row="7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnSave"  Grid.Column="1" Content="{Binding ConverterParameter='저장', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSave_Click"/>
                                <Button x:Name="btnClear" Grid.Column="3" Content="{Binding ConverterParameter='Clear', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnClear_Click" />

                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <!-- ################################################### 제품일괄 변경 ################################################### -->
                    <c1:C1TabItem x:Name="CreateExcel" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='제품일괄변경'}" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="51"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="51" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회조건-->
                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <!--대상목록-->
                            <Border Grid.Row="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--사유-->
                            <Border Grid.Row="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="5" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--버튼-->
                            <Border Grid.Row="7" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>

                                <Button  x:Name="btnDownLoadExcel"  Grid.Column="4"    Content="{Binding ConverterParameter=다운로드,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonExcelExportStyle}"  Cursor="Hand" Click="btnDownLoadExcel_Click" Height="Auto" Margin="0,11.5,0,10.5"/>
                                <Button x:Name="btnOpenExcel" Grid.Column="6"  Content="{Binding ConverterParameter=업로드, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleButtonExcelImportStyle}" Cursor="Hand" Click="btnOpenExcel_Click" Height="Auto" Margin="0,11.5,0,10.5"/>
                                <Button x:Name="btnCancelOffGrade2" Grid.Column="8" Content="{Binding ConverterParameter=등외품 처리 취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnCancelOffGrade2_Click" />
                                <Button x:Name="btnValidationExcel" Grid.Column="10" Content="{Binding ConverterParameter=확인, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnValidationExcel_Click" />
                            </Grid>

                            <!--대상목록-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgListCreateExcel" Grid.Row="1" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="MultiRange" LoadedCellPresenter="dgListCreateExcel_LoadedCellPresenter">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHKExcel" Width="40" Header = "선택" Visibility="Collapsed" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgLotChoiceExcel" HorizontalAlignment="Center" Checked="dgLotChoiceExcel_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTemplateColumn Name="DeleteExcel" Width="Auto" Header="삭제">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  x:Name="btnDeleteExcel" Width="Auto" Content="{Binding ConverterParameter=삭제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDeleteExcel_Click" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTextColumn      Header="LOTID"      Binding="{Binding LOTID}"       HorizontalAlignment="Center"  />
                                        <c1:DataGridTextColumn      Header="제품ID"     Binding="{Binding PRODID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="제품명"     Binding="{Binding PRODNAME}"    HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="모델"       Binding="{Binding MODLID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="단위"       Binding="{Binding UNIT_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" />

                                        <c1:DataGridTextColumn      Header="변경제품ID"     Binding="{Binding CHGPRODID}"      HorizontalAlignment="Center"  />
                                        <c1:DataGridTextColumn      Header="변경제품명"     Binding="{Binding CHGPRODNAME}"    HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="변경모델"       Binding="{Binding CHGMODLID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="변경단위"       Binding="{Binding CHGUNIT_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" />

                                        <c1:DataGridTextColumn      Header="오류코드"       Binding="{Binding ERROR_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="오류내용"       Binding="{Binding ERROR_MSG}"   HorizontalAlignment="Left" IsReadOnly="True" />

                                        <c1:DataGridTextColumn      Header="WIPSEQ"     Binding="{Binding WIPSEQ}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header="라인ID"     Binding="{Binding EQSGID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="라인"       Binding="{Binding EQSGNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="공정ID"     Binding="{Binding PROCID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="공정"       Binding="{Binding PROCNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="상태"       Binding="{Binding WIPSTAT}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="상태명"     Binding="{Binding WIPSNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header="수량"       Binding="{Binding WIPQTY}"      HorizontalAlignment="Right"  Format="#,##0.##" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header="WIPQTY2"    Binding="{Binding WIPQTY2}"     HorizontalAlignment="Right"  Format="#,##0.##" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header="LANE_QTY"   Binding="{Binding LANE_QTY}"    HorizontalAlignment="Right"  Format="#,##0.##" IsReadOnly="True" Visibility="Collapsed"/>

                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--사유-->
                            <Grid Grid.Row="5" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="34" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
