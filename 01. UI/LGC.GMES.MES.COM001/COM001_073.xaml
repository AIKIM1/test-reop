<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_073"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Initialized="UserControl_Initialized"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="입출고관리_공정 창고 모니터링">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="42"/>
                </Grid.RowDefinitions>

                <Grid x:Name="ItemArea" Grid.Row="0" >
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="36" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.4*" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="7.6*" />
                        </Grid.ColumnDefinitions>
                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                        </Grid>

                        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                        <Grid Grid.Row="0" Grid.Column="2">

                            <StackPanel x:Name="pnlRadioButton"  Orientation="Horizontal">

                                <Grid Grid.Row="0" Grid.Column="0" x:Name="Area">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="36" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="1" x:Name="AreaE6" Visibility="Visible">

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="36" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>


                                    <RadioButton Grid.Row="0"  Grid.Column="1" Margin="10,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=팬케이크(양극)}"   
                                             GroupName="RadioButton_E6" Name="rdoPanC" Style="{StaticResource SearchCondition_RadioButtonStyle}" Checked="RadioButton_Checked"/>

                                    <RadioButton Grid.Row="0"  Grid.Column="2" Margin="10,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=팬케이크(음극)}"   
                                             GroupName="RadioButton_E6" Name="rdoPanA" Style="{StaticResource SearchCondition_RadioButtonStyle}" Checked="RadioButton_Checked"/>
                                    <!--  Checked="RadioButton_Checked"는 코드에서 데이터 편집 위함. -->
                                </Grid>

                            </StackPanel>

                        </Grid>
                    </Grid>
                </Grid>

                <Grid x:Name="DetailArea" Grid.Row="2">
                    <Grid Grid.Row="0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.4*" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="7.6*" />
                        </Grid.ColumnDefinitions>

                        <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32" />
                                <RowDefinition Height="150" />
                                <RowDefinition Height="32" />
                                <RowDefinition Height="123"/>
                                <RowDefinition Height="32" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="45" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}">
                                        <Run Text="{Binding ConverterParameter='창고재고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                    </TextBlock>
                                </Border>
                            </Grid>

                            <Grid Grid.Row="1">
                                <c1:C1DataGrid x:Name="dgStore" Grid.Row="0" Grid.Column="0" IsReadOnly="True" HeadersVisibility="None" FrozenTopRowsCount="1" FrozenColumnCount="2" AlternatingRowBackground="White"  LoadedCellPresenter="dgStore_LoadedCellPresenter"  CanUserFilter="False" CanUserSort="False" SelectionMode="SingleCell" >

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn        Header = "[구분, 구분]"   Width="*"  Binding = "{Binding GUBUN1}"  HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn        Header = "[구분, 구분]"   Width="*"   Binding = "{Binding GUBUN2}"  HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "[양극, 양극]"  Width="*"  Binding = "{Binding CC}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "[음극, 음극]"  Width="*"  Binding = "{Binding AC}"      HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>

                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <c1:DataGridSummaryRow/>
                                    </c1:C1DataGrid.TopRows>

                                    <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                        <c1:C1GroupingWithSummariesBehavior/>
                                    </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                </c1:C1DataGrid>


                            </Grid>
                            
                            <Grid Grid.Row="2">
                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}">
                                            <Run Text="{Binding ConverterParameter='공정재고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                    </TextBlock>
                                </Border>
                            </Grid>

                            <Grid Grid.Row="3">
                                <c1:C1DataGrid x:Name="dgProcess" Grid.Row="0" Grid.Column="0" IsReadOnly="True" HeadersVisibility="None" FrozenTopRowsCount="1" FrozenColumnCount="2" AlternatingRowBackground="White"  LoadedCellPresenter="dgProcess_LoadedCellPresenter" CanUserFilter="False" CanUserSort="False" SelectionMode="SingleCell"  >
                                        <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn        Header = "[구분, 구분]"  Width="*"    Binding = "{Binding GUBUN1}"  HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn        Header = "[구분, 구분]"  Width="*"    Binding = "{Binding GUBUN2}"  HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "[양극, 양극]" Width="*"   Binding = "{Binding CC}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "[음극, 음극]" Width="*"   Binding = "{Binding AC}"      HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>

                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <c1:DataGridSummaryRow/>
                                    </c1:C1DataGrid.TopRows>
                                    <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                        <c1:C1GroupingWithSummariesBehavior/>
                                    </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>

                                </c1:C1DataGrid>

                            </Grid>

                            <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            <Grid Grid.Row="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                </Grid.ColumnDefinitions>


                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}">
                                            <Run Text="{Binding ConverterParameter='유효기간 임박재고(1개월이내)', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                </TextBlock>

                                <CheckBox x:Name="chkHold" Grid.Row="0"  Grid.Column="1" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=HOLD제외}" IsChecked="False" HorizontalAlignment="Right" Tag="HOLD" Visibility="Collapsed"/>


                            </Grid>

                            <Grid Grid.Row="5">
                                <c1:C1DataGrid x:Name="dgMonth" Grid.Row="0" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleCell">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "NO"         Binding = "{Binding NO}"             Width="40" HorizontalAlignment="Right" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "LOTID"      Binding = "{Binding LOTID}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "구분"       Binding = "{Binding PROCNAME}"       HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "유효기간"   Binding = "{Binding VLD_DATE}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "모델명"     Binding = "{Binding MODEL}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "RACKID"     Binding = "{Binding RACK_ID}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "버젼"       Binding = "{Binding VERSION}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <Border Grid.Row="6" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            <Grid Grid.Row="6">
                                
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <TextBox Grid.Row="0"  Grid.Column="1" x:Name="txtOutLotid" Style="{StaticResource SearchCondition_TextBoxStyle}"  MinWidth="100" Visibility="Hidden"/>

                                <Button     Grid.Row="0" Grid.Column="2" x:Name="btnOut" Content="{Binding ConverterParameter=불출출고,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="btnOut_Click" Visibility="Hidden"/>
                                
                                <Button     Grid.Row="0" Grid.Column="4" x:Name="btnNotInput" Content="{Binding ConverterParameter=미입고LOT,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="btnNotInput_Click" Visibility="Hidden"/>

                                <Button     Grid.Row="0" Grid.Column="6" x:Name="btnReInput" Content="{Binding ConverterParameter=조립재입고LOT,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="btnReInput_Click" Visibility="Hidden"/>                         
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="0"  Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1" Background="White">
                                    <Border BorderBrush="Black" BorderThickness="1">
                                        <Grid x:Name="dgList" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,0,0,0" Initialized="dgList_Initialized"/>
                                    </Border>
                                </ScrollViewer>
                            </Grid>

                        </Grid>

                    </Grid>
                </Grid>


                <Border Grid.Row="5" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                <Grid x:Name="SampleArea" Grid.Row="5" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="15" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="130" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="1*" />

                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="150" />
                        <ColumnDefinition Width="Auto" />
                        <!--<ColumnDefinition Width="80" />
                        <ColumnDefinition Width="Auto" />-->
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="10" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0"  Grid.Column="1"  Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" Visibility="Hidden"/>

                    <TextBox Grid.Row="0"  Grid.Column="2" x:Name="txtModel" Style="{StaticResource SearchCondition_TextBoxStyle}" Margin="8,3"  MinWidth="100" GotFocus="txtModel_GotFocus" Visibility="Hidden"/>

                    <TextBlock Grid.Row="0"  Grid.Column="3"  Text="{Binding ConverterParameter='LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" Visibility="Hidden"/>

                    <TextBox Grid.Row="0"  Grid.Column="4" x:Name="txtLotid"  CharacterCasing="Upper" Style="{StaticResource SearchCondition_TextBoxStyle}" Margin="8,3"  MinWidth="100" GotFocus="txtLotid_GotFocus" Visibility="Hidden"/>

                    <Button Grid.Row="0" Grid.Column="5" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" Visibility="Collapsed"/>

                    <Button     Grid.Row="0" Grid.Column="7" x:Name="btnLotSearch" Content="{Binding ConverterParameter=특이LOT조회,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="btnLotSearch_Click" Visibility="Hidden"/>


                    <TextBox   Grid.Row="0"  Grid.Column="9" x:Name="txt1" Background="WhiteSmoke" Style="{StaticResource TextBoxBaseStyle}" IsReadOnly="True" TextAlignment="Center" />
                    <TextBlock Grid.Row="0"  Grid.Column="10" Text="" />

                    <TextBox   Grid.Row="0"  Grid.Column="11" x:Name="txt2" Background="LightGreen" Style="{StaticResource TextBoxBaseStyle}" IsReadOnly="True" TextAlignment="Center"/>
                    <TextBlock Grid.Row="0"  Grid.Column="12" Text="" />

                    <TextBox   Grid.Row="0"  Grid.Column="13" x:Name="txt3" Background="LightSkyBlue" Style="{StaticResource TextBoxBaseStyle}" IsReadOnly="True" TextAlignment="Center"/>
                    <TextBlock Grid.Row="0"  Grid.Column="14" Text="" />

                    <TextBox   Grid.Row="0"  Grid.Column="15" x:Name="txt4" Background="Yellow" Style="{StaticResource TextBoxBaseStyle}" IsReadOnly="True" TextAlignment="Center"/>
                    <TextBlock Grid.Row="0"  Grid.Column="16" Text="" />

                    <Button     Grid.Row="0" Grid.Column="18" x:Name="btnRefresh"   Content="{Binding ConverterParameter=새로고침,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnRefresh_Click"/>

                </Grid>


            </Grid>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
