                        <c1:C1DataGrid x:Name="dgLotList"
                                       Grid.Row="2"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="7"
                                       IsReadOnly="True"
                                       HeadersVisibility="Column"
                                       SelectionMode="MultiRow"
                                       CanUserSort="False" 
                                       CanUserFilter="False"
                                       Margin="8" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="40" HorizontalAlignment="Center" >
                                    <c1:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </c1:DataGridTemplateColumn.CellTemplate>
                                </c1:DataGridTemplateColumn>
                                <c1:DataGridTextColumn   Header = "LOTID"                 Binding = "{Binding LOTID}"              HorizontalAlignment="Center" CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" />
                                <c1:DataGridTextColumn   Header = "TAB_VALUE"             Binding = "{Binding TAB_VALUE}"          HorizontalAlignment="Right"  CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" />
                                <c1:DataGridTextColumn   Header = "BOTTOM_VALUE"          Binding = "{Binding BOTTOM_VALUE}"       HorizontalAlignment="Right"  CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" />
                                <c1:DataGridTextColumn   Header = "PRODID"                Binding = "{Binding PRODID}"             HorizontalAlignment="Center" CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" />
                                <c1:DataGridTextColumn   Header = "LOT상태"               Binding = "{Binding WIPSTAT}"            HorizontalAlignment="Center" CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" Visibility="Collapsed" />
                             
                                <c1:DataGridTemplateColumn Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" Name="DEL">
                                    <c1:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="btnDelRow_C" Width="Auto" Click="btnDelRow_C_Click">
                                                <Image Source="/LGC.GMES.MES.COM001;component/Images/ico-delete.png" Width="16" Height="16" />
                                            </Button>
                                        </DataTemplate>
                                    </c1:DataGridTemplateColumn.CellTemplate>
                                </c1:DataGridTemplateColumn>
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                        <!--음극LOTLIST-->
                        <Border Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}" />
                        <TextBlock      Grid.Row="4" Grid.Column="1" Text="{Binding ConverterParameter='음극 LOTLIST', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource Content_Search_LabelStyle}" />
                        <Button Grid.Row="4" Grid.Column="3" x:Name="btnADDLot_A" Content="{Binding ConverterParameter=추가, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnADDLot_A_Click"/>
                        <Button Grid.Row="4" Grid.Column="5" x:Name="btnDeleteLot_A" Content="{Binding ConverterParameter=해제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnDeleteLot_A_Click"/>
                        <Button Grid.Row="4" Grid.Column="5" x:Name="btnClear_A" Content="{Binding ConverterParameter=초기화, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnClear_A_Click" Visibility="Collapsed"/>
                        <Border Grid.Row="5" Grid.RowSpan="99" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1,0,1,1" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />
                        <c1:C1DataGrid x:Name="dgLotList_A"
                                       Grid.Row="6"
                                       Grid.Column="0"
                                       Grid.ColumnSpan="7"
                                       IsReadOnly="True"
                                       HeadersVisibility="Column"
                                       SelectionMode="MultiRow"
                                       CanUserSort="False" 
                                       CanUserFilter="False"
                                       Margin="8" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="40" HorizontalAlignment="Center" >
                                    <c1:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                        </DataTemplate>
                                    </c1:DataGridTemplateColumn.CellTemplate>
                                </c1:DataGridTemplateColumn>
                                <c1:DataGridTextColumn   Header = "LOTID"                 Binding = "{Binding LOTID}"             HorizontalAlignment="Center" CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" />
                                <c1:DataGridTextColumn   Header = "TAB_VALUE"             Binding = "{Binding TAB_VALUE}"         HorizontalAlignment="Right"  CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" />
                                <c1:DataGridTextColumn   Header = "BOTTOM_VALUE"          Binding = "{Binding BOTTOM_VALUE}"      HorizontalAlignment="Right"  CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" />
                                <c1:DataGridTextColumn   Header = "PRODID"                Binding = "{Binding PRODID}"            HorizontalAlignment="Center" CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" />
                                <c1:DataGridTextColumn   Header = "LOT상태"               Binding = "{Binding WIPSTAT}"           HorizontalAlignment="Center" CanUserFilter="False" CanUserGroup="False" IsReadOnly="True" Visibility="Collapsed" />
                              
                                <c1:DataGridTemplateColumn Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" Name="DEL">
                                    <c1:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button x:Name="btnDelRow_A" Width="Auto" Click="btnDelRow_A_Click">
                                                <Image Source="/LGC.GMES.MES.COM001;component/Images/ico-delete.png" Width="16" Height="16" />
                                            </Button>
                                        </DataTemplate>
                                    </c1:DataGridTemplateColumn.CellTemplate>
                                </c1:DataGridTemplateColumn>

                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>

                    </Grid>

                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
