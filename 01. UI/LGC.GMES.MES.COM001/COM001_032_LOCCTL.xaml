<UserControl x:Class="LGC.GMES.MES.COM001.COM001_032_LOCCTL"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             MouseLeftButtonDown="LocCtl_MouseLeftButtonDown" MouseLeftButtonUp="LocCtl_MouseLeftButtonUp" MouseMove="LocCtl_MouseMove"
             d:DesignHeight="60" d:DesignWidth="100" >

    <Grid x:Name="grid1" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,5,0,0">
        <Grid.Background>
            <ImageBrush/>
        </Grid.Background>
        <!--       <Image x:Name="ImgCart" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top" Width="20" Margin="39,0,0,0" />
        -->
        <Label x:Name="lblZoneID" Content="Zone ID" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0" Background="{x:Null}" Height="Auto" FontSize="13" Visibility="Hidden" Width="Auto" Foreground="#FF9C0A5A"/>
        <Label x:Name="lblZoneNM" Content="Zone Name" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5,5,0,0" Background="{x:Null}" Height="Auto" FontSize="13" Width="Auto" Foreground="#FF9C0A5A" />
        <Label x:Name="lblCartCnt" Content="Cart Count" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="21,24,0,0" Background="{x:Null}" Height="Auto" FontSize="11" Cursor="Hand" Foreground="#FF9C0A5A" MouseDown="lblCartCnt_MouseDown"/>

    </Grid>


</UserControl>
