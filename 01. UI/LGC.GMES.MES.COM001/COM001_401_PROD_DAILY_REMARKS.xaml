<c1:C1Window x:Class="LGC.GMES.MES.COM001.COM001_401_PROD_DAILY_REMARKS"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='생산 일별 노트'}" 
             Tag="ProtoType01Windows01" Height="670" Width="495" IsResizable="True" Initialized="C1Window_Initialized" Loaded="C1Window_Loaded"   >

    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8" />         <!-- 0 -->
                <RowDefinition Height="Auto" />      <!-- 1 -->
                <RowDefinition Height="2" />         <!-- 2 -->
                <RowDefinition Height="Auto" />      <!-- 3 -->
                <RowDefinition Height="2" />         <!-- 4 -->
                <RowDefinition Height="Auto" />      <!-- 5 -->
                <RowDefinition Height="2" />         <!-- 6 -->
                <RowDefinition Height="Auto" />      <!-- 7 -->
                <RowDefinition Height="2" />         <!-- 8 -->
                <RowDefinition Height="Auto" />      <!-- 9 -->
                <RowDefinition Height="2" />         <!-- 10 -->
                <RowDefinition Height="Auto" />      <!-- 11 -->
                <RowDefinition Height="2" />         <!-- 12 -->
                <RowDefinition Height="Auto" />      <!-- 13-->
                <RowDefinition Height="2" />         <!-- 14 -->
                <RowDefinition Height="Auto" />      <!-- 15 -->
                <RowDefinition Height="2" />         <!-- 16 -->
                <RowDefinition Height="Auto" />      <!-- 17 -->
                <RowDefinition Height="Auto" />      <!-- 18 -->
                <RowDefinition Height="2" />         <!-- 19 -->
                <RowDefinition Height="Auto" />      <!-- 20 -->
                <RowDefinition Height="Auto" />      <!-- 21 -->
                <RowDefinition Height="2" />         <!-- 22 -->
                <RowDefinition Height="Auto" />      <!-- 23 -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2" />         <!-- 22 -->
                <RowDefinition Height="Auto" />
                <RowDefinition Height="2" />
                <RowDefinition Height="8" />         <!-- 26 -->
            </Grid.RowDefinitions>

            <TextBlock       Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <c1:C1ComboBox   Grid.Row="1" Grid.Column="3" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="150" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  />

            <TextBlock       Grid.Row="3" Grid.Column="1" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <c1:C1ComboBox   Grid.Row="3" Grid.Column="3" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="200" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>

            <TextBlock       Grid.Row="5" Grid.Column="1" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <c1:C1ComboBox   Grid.Row="5" Grid.Column="3" x:Name="cboProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="200" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
            
            <TextBlock       Grid.Row="7" Grid.Column="1" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <c1:C1ComboBox   Grid.Row="7" Grid.Column="3" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="200" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Grid.ColumnSpan="3" />

            <TextBlock Grid.Row="9" Grid.Column="1" Text="{Binding ConverterParameter='발생일시', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <ctrlLib:LGCDatePicker Grid.Row="9"   Grid.Column="3" x:Name="dpAct"  DatepickerType="Date"   />
            <c1:C1TimeEditor       Grid.Row="9"   Grid.Column="5" x:Name="teAct" Style="{StaticResource C1TimeEditorStyle}"  CustomFormat="HH:mm:ss"  />

            <TextBlock       Grid.Row="11" Grid.Column="1" Text="{Binding ConverterParameter='현재생산모델', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <c1:C1ComboBox   Grid.Row="11" Grid.Column="3" x:Name="cboProdid" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="200" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>

            <TextBlock       Grid.Row="13" Grid.Column="1" Text="{Binding ConverterParameter='모델변경여부', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <c1:C1ComboBox   Grid.Row="13" Grid.Column="3" x:Name="cboMdlChgFlag" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="200" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>

            <TextBlock       Grid.Row="15" Grid.Column="1" Text="{Binding ConverterParameter='변경모델', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <c1:C1ComboBox   Grid.Row="15" Grid.Column="3" x:Name="cboPreProdid" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="200" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>

            <TextBlock  Grid.Row="17" Grid.Column="1" Text="{Binding ConverterParameter='설비특이사항', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <TextBox    Grid.Row="17" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtEqptRemarks" AcceptsReturn="True" TextWrapping="Wrap" Height="70" MinWidth="200" MaxLength="1500"/>

            <TextBlock  Grid.Row="20" Grid.Column="1" Text="{Binding ConverterParameter='생산주의사항', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <TextBox    Grid.Row="20" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtProdCatn" AcceptsReturn="True" TextWrapping="Wrap" Height="70" MinWidth="200" MaxLength="1500"/>

            <TextBlock  Grid.Row="23" Grid.Column="1" Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <TextBox    Grid.Row="23" Grid.Column="3" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtRemarks" AcceptsReturn="True" TextWrapping="Wrap" Height="70" MinWidth="200" MaxLength="1500"/>

            <TextBlock       Grid.Row="26" Grid.Column="1" Text="{Binding ConverterParameter='USE_FLAG', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
            <c1:C1ComboBox   Grid.Row="26" Grid.Column="3" x:Name="cboUseFlag" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="200" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
        </Grid>


        <!--button area-->
        <Grid Grid.Row ="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSave"    Grid.Column="1" Content="{Binding ConverterParameter='저장', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSave_Clicked" />
            <Button x:Name="btnClose" Grid.Column="3" Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnClose_Clicked" />
        </Grid>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="0" Grid.RowSpan="3" Panel.ZIndex="999" />
    </Grid>
</c1:C1Window>
