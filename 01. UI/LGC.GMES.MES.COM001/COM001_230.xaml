<UserControl x:Class="LGC.GMES.MES.COM001.COM001_230"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:CMM001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ItemTemplate">
                <WrapPanel>
                    <Image Width="138" Height="138" Stretch="Fill" Source="{Binding}" Margin="3,3,3,3" />
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!--<ColumnDefinition Width="*"/>-->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>

        </Grid.Resources>

        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="투입실적 조회" Grid.ColumnSpan="2">
            <Grid>
                <c1:C1TabControl>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입실적 조회'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition/>
                                <RowDefinition Height="8" />
                                <RowDefinition />
                            </Grid.RowDefinitions>


                            <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--조회영역-->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />

                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <!--10-->
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>

                                    <!--<ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>-->

                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock                            Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='동',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='LINE',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='공정',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='설비',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="1" Grid.Column="8" Text="{Binding ConverterParameter='생산구분',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <!--<TextBlock  x:Name="cboTopBackTiltle" Grid.Row="0" Grid.Column="8" Text="{Binding ConverterParameter='Top/Back',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />-->
                                <TextBlock                            Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='작업일',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <!--<TextBlock                            Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='투입LOT',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>-->
                                <!--<TextBlock                            Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='경로유형',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>-->
                                <!--<TextBlock x:Name="cboElecTypeTiltle" Grid.Row="1" Grid.Column="8" Text="{Binding ConverterParameter='극성',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>-->
                                <!--<TextBlock                            Grid.Row="1" Grid.Column="10" Text="{Binding ConverterParameter='시장유형',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>-->


                                <TextBlock                            Grid.Row="2" Grid.Column="0"  Text="{Binding ConverterParameter='LOTID',          Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="2"  Text="{Binding ConverterParameter='모델',           Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="4"  Text="{Binding ConverterParameter='제품ID',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="6"  Text="{Binding ConverterParameter='프로젝트명',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="8"  Text="{Binding ConverterParameter='차이값(절대값)', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="10" Text="{Binding ConverterParameter='Carrier ID',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <c1:C1ComboBox x:Name="cboArea"                Grid.Row="1" Grid.Column="1"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox x:Name="cboEquipmentSegment"    Grid.Row="1" Grid.Column="3"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MaxWidth="110"/>
                                <c1:C1ComboBox x:Name="cboProcess"             Grid.Row="1" Grid.Column="5"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox x:Name="cboEquipment"           Grid.Row="1" Grid.Column="7"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox x:Name="cboProductDiv"          Grid.Row="1" Grid.Column="9"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath="" />
                                <!--<c1:C1ComboBox x:Name="cboTopBack"             Grid.Row="0" Grid.Column="9"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>-->
                                <ctrlLib:LGCDatePicker x:Name="dtpDateFrom"    Grid.Row="0" Grid.Column="1"  DatepickerType="Date"  MaxWidth="110" />
                                <TextBlock                                     Grid.Row="0" Grid.Column="2" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment='Center' />
                                <ctrlLib:LGCDatePicker x:Name="dtpDateTo"      Grid.Row="0" Grid.Column="3"  DatepickerType="Date"  MaxWidth="110" />

                                <!--<TextBox       x:Name="txtPRLOTID"             Grid.Row="1" Grid.Column="5"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotId_KeyDown" />-->
                                <!--<c1:C1ComboBox x:Name="cboFlowType"            Grid.Row="1" Grid.Column="7"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>-->
                                <!--<c1:C1ComboBox x:Name="cboElecType"            Grid.Row="1" Grid.Column="9"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />-->
                                <!--<c1:C1ComboBox x:Name="cboMKTtype"             Grid.Row="1" Grid.Column="11" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>-->



                                <TextBox       x:Name="txtLotId"               Grid.Row="2" Grid.Column="1"  Style="{StaticResource SearchCondition_TextBoxStyle}" CharacterCasing="Upper"  KeyDown="txtLotId_KeyDown" />
                                <CMM001:AutoCompleteTextBox x:Name="txtModlId" Grid.Row="2" Grid.Column="3"  Threshold="2" DelayTime="100" Height="30" MaxWidth="115" GotFocus="txtModlId_GotFocus"/>
                                <TextBox       x:Name="txtProdId"              Grid.Row="2" Grid.Column="5"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" />
                                <TextBox       x:Name="txtPrjtName"            Grid.Row="2" Grid.Column="7"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" KeyDown="txtPrjtName_KeyDown" />
                                <c1:C1NumericBox x:Name="txtDIFF"              Grid.Row="2" Grid.Column="9"  MinWidth="80" Visibility="{Binding TEXTVISIBLE}" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" CornerRadius="0" AllowNull="True" HandleUpDownKeys="False" Format="#,##0" KeyDown="txtDIFF_KeyDown"/>
                                <TextBox       x:Name="txtCstId"               Grid.Row="2" Grid.Column="11" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="120" MaxWidth="120" KeyDown="txtCstId_KeyDown" />

                                <!--<CheckBox      x:Name="chkProc"                Grid.Row="2" Grid.Column="8"  Grid.ColumnSpan="2"   Content="{Binding ConverterParameter='진행중인Lot 포함', Converter={StaticResource GlobalObjectDicConverter}}"  
                                      Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False" HorizontalAlignment="Right" />
                    <CheckBox      x:Name="chkPtnLen"              Grid.Row="2" Grid.Column="10" Content="{Binding ConverterParameter='M수량환산', Converter={StaticResource GlobalObjectDicConverter}}"  
                                      Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False" HorizontalAlignment="Center" Checked="chkPtnLen_Checked" Unchecked="chkPtnLen_Unchecked" Margin="10,0,0,0"/>
                    <CheckBox      x:Name="chkModel"               Grid.Row="2" Grid.Column="11"   Content="{Binding ConverterParameter='모델합산', Converter={StaticResource GlobalObjectDicConverter}}"  
                                      Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False" HorizontalAlignment="Left" Checked="chkModel_Checked" Unchecked="chkModel_Unchecked" Margin="10,0,0,0" />-->


                                <!--조회 버튼-->
                                <Button     Grid.Row="0" Grid.Column="13"      Grid.RowSpan="2" Grid.ColumnSpan="3" x:Name="btnSearchHold" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" 
                                Cursor="Hand" Click="btnSearch_Click" HorizontalAlignment="Right"/>

                            </Grid>

                            <Grid Grid.Row="2" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='LOT리스트', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgLotList" Grid.Row="1" Grid.ColumnSpan="3" IsReadOnly="False" HeadersVisibility="Column" FrozenColumnCount="3" SelectionMode="MultiRange" Margin="8,8,8,8">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHK" Width="60" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgProductLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgProductLotChoice" HorizontalAlignment="Center" Checked="dgProductLotChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "LOTID"                   Binding = "{Binding LOTID}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "LOT 유형"                Binding = "{Binding LOTYNAME}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "제품"                    Binding = "{Binding PRODID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "제품명"                  Binding = "{Binding PRODNAME}"               IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn      Header = "모델"                    Binding = "{Binding MODLID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "PJT"                     Binding = "{Binding PRJT_NAME}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "설비명"                  Binding = "{Binding EQPTNAME}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "작업일"                  Binding = "{Binding CALDATE}"                IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "시장유형"                Binding = "{Binding MKT_TYPE_CODE}"          IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "단위"                    Binding = "{Binding UNIT_CODE}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "자재ID"                  Binding = "{Binding MTRLID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "투입량"                  Binding = "{Binding MTRL_INPUT_QTY}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                                        <c1:DataGridTextColumn      Header = "BOM 생산량"              Binding = "{Binding BOM_INPUT_QTY}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                                        <c1:DataGridTextColumn      Header = "BOM 양품량"              Binding = "{Binding BOM_OUT_QTY}"            IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "생산량"                  Binding = "{Binding INPUT_QTY}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "COL_01"                  Binding = "{Binding COL_01}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "양품량"                  Binding = "{Binding WIPQTY2_ED}"             IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "COL_02"                  Binding = "{Binding COL_02}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "불량량"                  Binding = "{Binding CNFM_DFCT_QTY2}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "COL_03"                  Binding = "{Binding COL_03}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "LOSS량"                  Binding = "{Binding CNFM_LOSS_QTY2}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "COL_04"                  Binding = "{Binding COL_04}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "물품청구"                Binding = "{Binding CNFM_PRDT_REQ_QTY2}"     IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "투입 LOSS"               Binding = "{Binding DIFF}"                   IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                                        <c1:DataGridTextColumn      Header = "COL_05"                  Binding = "{Binding COL_05}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "Yield(%)"                Binding = "{Binding YRATE}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                                        <c1:DataGridTextColumn      Header = "W/O"                     Binding = "{Binding WOID}"                   IsReadOnly="True" HorizontalAlignment="Center" />
                                        <!--<c1:DataGridTextColumn      Header = "WO 계획수량"             Binding = "{Binding PLANQTY}"                IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>-->
                                        
                                        <c1:DataGridTextColumn      Header = "COL_06"                  Binding = "{Binding COL_06}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />

                                        <c1:DataGridTextColumn      Header = "COL_07"                  Binding = "{Binding COL_07}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "비율(%)"                 Binding = "{Binding RATE}"                   IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "COL_08"                  Binding = "{Binding COL_08}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "BOM 자재투입량"          Binding = "{Binding WO_MTRL_INPUT_QTY}"      IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "COL_09"                  Binding = "{Binding COL_09}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "BOM 단위량"              Binding = "{Binding BOM_UNIT_QTY}"           IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" Visibility="Collapsed"/>

                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <Grid Grid.Row="4" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                                <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                                <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" BorderThickness="1" Grid.ColumnSpan="2" Style="{StaticResource BorderSubTitleStyle}" Background="White"/>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='투입이력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Grid>

                                    <c1:C1DataGrid  Grid.Row="2" x:Name="dgInputHistory" IsReadOnly="True" HeadersVisibility="Column"  SelectionMode="SingleCell" LoadedCellPresenter="dgInputHistory_LoadedCellPresenter">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn        Header = "MTGRID"       Binding = "{Binding MOUNT_MTRL_TYPE_CODE}"   HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "구분"         Binding = "{Binding MOUNT_MTRL_TYPE_NAME}" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"  HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "위치"         Binding = "{Binding EQPT_MOUNT_PSTN_ID}"   HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "위치"         Binding = "{Binding EQPT_MOUNT_PSTN_NAME}" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"  HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "자재ID"       Binding = "{Binding MTRLID}"   HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "자재명"       Binding = "{Binding MTRLNAME}" HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "Tray ID"      Binding = "{Binding CSTID}"    HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "투입LOT"      Binding = "{Binding INPUT_LOTID}"   HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "SCANID"       Binding = "{Binding SCAN_LOTID}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "상태"         Binding = "{Binding WIPSTAT}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "재공상태"     Binding = "{Binding WIPSNAME}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridNumericColumn     Header = "사용량"       Binding = "{Binding INPUT_QTY}"   HorizontalAlignment="Right" Format="#,##0.##" />
                                            <c1:DataGridTextColumn        Header = "단위"         Binding = "{Binding MTRLUNIT}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "투입시간"     Binding = "{Binding INPUT_DTTM}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                            <!--중복 투입자재에 대하여 색표현용 구분 컬럼-->
                                            <c1:DataGridTextColumn        Header = "투입자재 중복 구분"     Binding = "{Binding INPUT_DUPLI_MTL}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>

                                    <!--백그라운드용-->

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" BorderThickness="1" Grid.ColumnSpan="99" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='완성LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Grid>

                                    <c1:C1DataGrid Grid.Row="2" Grid.Column="0" x:Name="dgSubLot" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleCell" LoadedCellPresenter="dgSubLot_LoadedCellPresenter" MouseDoubleClick="dgSubLot_MouseDoubleClick">
                                        <c1:C1DataGrid.Resources>
                                            <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                                <Setter Property="Background">
