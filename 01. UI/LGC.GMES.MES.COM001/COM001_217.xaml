<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_217"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="파우치 활성화 불량창고 관리">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,0,0"  />
                        </Grid>
                    </DataTemplate>
                  
                </Grid.Resources>
                <c1:C1TabControl  Grid.Row="0" >
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량창고 입/출고'}">
                        <Grid Grid.Row="0">

                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="98"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="60"/>

                            </Grid.RowDefinitions>


                            <Grid x:Name="InfoArea" Grid.Row="1">

                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13" />
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="13" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="14"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="10"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="14"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboProcid" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                        <c1:C1ComboBox  Grid.Row="0" Grid.Column="1" x:Name="cboArea"    Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Visibility="Collapsed"/>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEqsgid" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='불량창고', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboWhid" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='불량재공구분', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboWIP_QLTY_TYPE_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    </Grid>
                                    <Grid Grid.Row="3" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='PJT명', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right"  Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <TextBox       Grid.Row="0"  Grid.Column="1" x:Name="txtPJT" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" />
                                    </Grid>
                                    <Grid Grid.Row="3" Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='제품ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right"  Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <TextBox       Grid.Row="0"  Grid.Column="1" x:Name="txtProdID" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100"/>
                                    </Grid>
                                    <Grid Grid.Row="3" Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock     Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='조립LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right"  Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <TextBox       Grid.Row="0"  Grid.Column="1" x:Name="txtLotID_RT" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" />
                                    </Grid>
                                    <Grid Grid.Row="3" Grid.Column="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='불량그룹', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboDefect_Group" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    </Grid>
                                    <Grid Grid.Row="3" Grid.Column="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock     Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='불량그룹LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right"  Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <TextBox       Grid.Row="0"  Grid.Column="1" x:Name="txtDefectGroup_Lot" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100"/>
                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="6" HorizontalAlignment="Right" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Row="0" Grid.Column="1"  x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Height="Auto" Margin="0,0,0,1" Click="btnSearch_Click"/>
                                    </Grid>
                                </Grid>
                            </Grid>
                            <Grid x:Name="OutGridArea" Grid.Row="3" >
                                <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='불량창고 불량LOT 목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                            </Grid>

                            <Grid x:Name="OutArea" Grid.Row="4">
                                <Border        Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <!--MouseLeftButtonUp="dgListInput_MouseLeftButtonUp"-->
                                <c1:C1DataGrid x:Name="dgDefectList"  HeadersVisibility="Column" CanUserRemoveRows="True" CanUserAddRows="True" SelectionMode="SingleRow" Margin="10,6,6,10" FrozenBottomRowsCount="1">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridCheckBoxColumn  Header = "선택"               Binding = "{Binding CHK}"                 HorizontalAlignment="Center" Width="40" />
                                        <c1:DataGridTextColumn      Header = "불량그룹LOT"        Binding = "{Binding LOTID}"               HorizontalAlignment="Center" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn      Header = "불량재공구분"       Binding = "{Binding WIP_PRCS_TYPE_NAME}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "PJT"                Binding = "{Binding PJT}"                 HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품"               Binding = "{Binding PRODID}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "시장유형"           Binding = "{Binding MKT_TYPE_NAME}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "LotType"            Binding = "{Binding LOTYNAME}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "조립LOT"            Binding = "{Binding LOTID_RT}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "불량그룹명"         Binding = "{Binding DFCT_RSN_GR_NAME}"    HorizontalAlignment="Center" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn      Header = "등급"               Binding = "{Binding CAPA_GRD_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <!--<c1:DataGridNumericColumn   Header = "수량"               Binding = "{Binding WIPQTY}"              HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" />-->
                                        <c1:DataGridNumericColumn                Header = "수량"     Binding = "{Binding WIPQTY}"             HorizontalAlignment="Right"  Format="###,###,##0" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False" Minimum="0" >
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                        
                                        <c1:DataGridTextColumn      Header = "최근입고일자"       Binding = "{Binding INPUTDATE}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "최근출고일자"       Binding = "{Binding OUTPUTDATE}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "시장유형코드"       Binding = "{Binding MKT_TYPE_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "LOTTYPECODE"        Binding = "{Binding LOTTYPE}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "불량그룹코드"       Binding = "{Binding DFCT_RSN_GR_ID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header = "불량창고현재수량"   Binding = "{Binding WH_DFEC_QTY}"         HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "ROUTID"             Binding = "{Binding ROUTID}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "PROCID"             Binding = "{Binding PROCID}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "PROCNAME"           Binding = "{Binding PROCNAME}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "불량창고불량LOT"    Binding = "{Binding WH_DFEC_LOT}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "불량그룹코드약어"   Binding = "{Binding RESNGR_ABBR_CODE}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WIP_PRCS_TYPE_CODE" Binding = "{Binding WIP_PRCS_TYPE_CODE}"  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "EQSGID"             Binding = "{Binding EQSGID}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WH_ID"              Binding = "{Binding WH_ID}"               HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WH_NAME"            Binding = "{Binding WH_NAME}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WIPSEQ"             Binding = "{Binding WIPSEQ}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <!--출고팝업에서 사용하기위한 컬럼-->
                                        <c1:DataGridNumericColumn   Header = "OUTPUT_AFTER_QTY"        Binding = "{Binding OUTPUT_AFTER_QTY}"              HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridNumericColumn   Header = "OUTPUTQTY"               Binding = "{Binding OUTPUTQTY}"              HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow x:Name="LIST_summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </c1:C1DataGrid>
                            </Grid>
                            <Grid x:Name="NoteArea" Grid.Row="6" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="65"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="AUTO"/>
                                        <ColumnDefinition Width="AUTO"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="13" />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="14"/>
                                        <RowDefinition Height="40"/>
                                        <RowDefinition Height="14"/>
                                    </Grid.RowDefinitions>
                                    <Border     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                    <Grid Grid.Row="1" Grid.Column="1"   >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                          
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="1" x:Name="btnPrint"   Content="{Binding ConverterParameter=창고불량LOT발행,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnPrint_Click"  />
                                   </Grid>
                                    <Grid Grid.Row="1" Grid.Column="2"   >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>

                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="1" x:Name="btnLoss"   Content="{Binding ConverterParameter=LOSS처리,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnLoss_Click"  />

                                    </Grid>
                                    <Grid Grid.Row="1" Grid.Column="3"   >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>

                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="1" x:Name="btnCellInbput"   Content="{Binding ConverterParameter=Cell등록,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnCellInbput_Click"  />

                                    </Grid>

                                    <Grid Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="2" HorizontalAlignment ="Right" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Column="5" x:Name="btnInput"   Content="{Binding ConverterParameter=입고,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnInput_Click"  />
                                        <Button Grid.Column="7" x:Name="btnOutput"   Content="{Binding ConverterParameter=출고,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnOutput_Click" />
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>


                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='입/출고이력'}" >
                        <Grid x:Name="TitleArea" Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="98"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition/>

                            </Grid.RowDefinitions>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="AUTO"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="14"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="14"/>
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboProcidHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='PJT명', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right"  Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox       Grid.Row="0"  Grid.Column="1" x:Name="txtPJTHist" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" />
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='제품ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right"  Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox       Grid.Row="0"  Grid.Column="1" x:Name="txtProdIDHist" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock     Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='조립LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right"  Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox       Grid.Row="0"  Grid.Column="1" x:Name="txtLotID_RTHist" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" />
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='구분', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboDefectAct_Hist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='기간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="AUTO"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <ctrlLib:LGCDatePicker  Grid.Column="0" x:Name="dtpDateFrom" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" Margin="0" TabIndex="1" />
                                        <TextBlock              Grid.Column="1" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center" Margin="6,0"/>
                                        <ctrlLib:LGCDatePicker  Grid.Column="2" x:Name="dtpDateTo" DatepickerType="Date"  HorizontalAlignment="Stretch" Height="Auto" VerticalAlignment="Center" Margin="0" TabIndex="2"/>
                                    </Grid>

                                </Grid>

                                <Grid Grid.Row="3" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='불량그룹', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
