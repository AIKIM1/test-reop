<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_009"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정별 생산실적 수정" Grid.ColumnSpan="2">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                        </Grid>
                    </DataTemplate>
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="84"/>
                    <RowDefinition Height="8" />
                    <RowDefinition/>
                    <RowDefinition Height="8" />
                    <RowDefinition />
                </Grid.RowDefinitions>

                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                </Grid.ColumnDefinitions>-->

                <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                <!--조회영역-->
                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>

                    <!--백그라운드용-->
                    <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                    <!--조회조건-->
                    <!--ROW1-->
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox    Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <!--ROW2-->

                    <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="16*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='작업일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Collapsed"/>
                        <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
                            <ctrlLib:LGCDatePicker DatepickerType="Date" x:Name="dtpDateFrom" SelectedDataTimeChanged="dtpDate_SelectedDataTimeChanged" Visibility="Collapsed"/>
                            <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0" Visibility ="Collapsed"/>
                            <ctrlLib:LGCDatePicker DatepickerType="Date" x:Name="dtpDateTo" SelectedDataTimeChanged="dtpDate_SelectedDataTimeChanged" Visibility="Collapsed"/>
                        </StackPanel>
                    </Grid>

                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <TextBox    Grid.Row="0" Grid.Column="1"  x:Name="txtLotId" CharacterCasing="Upper" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotId_KeyDown" />
                    </Grid>
                    <Grid Grid.Row="2" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock                              Grid.Column="0" Text="{Binding ConverterParameter='생산구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox  x:Name="cboProductDiv"  Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>
                    
                    <!--조회 버튼-->
                    <Grid Grid.Row="2" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button     Grid.Row="2" Grid.Column="4" x:Name="btnSearchHold" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>
                </Grid>

                <!--LOT 리스트-->
                <Grid Grid.Row="2" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34"/>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!--백그라운드용-->
                    <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                    <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='LOT리스트', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                    <c1:C1DataGrid x:Name="dgLotList" Grid.Row="1" Grid.ColumnSpan="3" IsReadOnly="False" HeadersVisibility="Column" FrozenColumnCount="3" SelectionMode="MultiRange" Margin="8,8,8,8">
                        <c1:C1DataGrid.Columns>
                            <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHK" Width="60" >
                                <c1:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <RadioButton GroupName="dgProductLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgProductLotChoice" HorizontalAlignment="Center" Checked="dgProductLotChoice_Checked" />
                                    </DataTemplate>
                                </c1:DataGridTemplateColumn.CellTemplate>
                            </c1:DataGridTemplateColumn>
                            <c1:DataGridTextColumn      Header = "코터 생산호기"           Binding = "{Binding EQPTID_COATER}"          IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "투입LOT"                 Binding = "{Binding PR_LOTID}"               IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "LOTID"                   Binding = "{Binding LOTID}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "대차LOTID"               Binding = "{Binding WINDING_RUNCARD_ID}"     IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "Assembly LOT"            Binding = "{Binding LOTID_AS}"               IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "WIPSEQ"                  Binding = "{Binding WIPSEQ}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "제품"                    Binding = "{Binding PRODID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "제품명"                  Binding = "{Binding PRODNAME}"               IsReadOnly="True" HorizontalAlignment="Left" />
                            <c1:DataGridTextColumn      Header = "모델"                    Binding = "{Binding MODLID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "PJT"                     Binding = "{Binding PRJT_NAME}"              IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "생산구분"                Binding = "{Binding PRJT_NAME}"              IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "단위"                    Binding = "{Binding UNIT_CODE}"              IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "REWINDER"                Binding = "{Binding EQPT_END_PSTN_ID}"       IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "설비양품량"              Binding = "{Binding EQPT_END_QTY}"           IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "설비양품량"              Binding = "{Binding EQPT_END_QTY_ORG}"       IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "TAG수"                   Binding = "{Binding TAG_QTY}"                IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "차이량"                  Binding = "{Binding DIFF_QTY}"               IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "투입량"                  Binding = "{Binding INPUT_QTY}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "재투입"                  Binding = "{Binding INPUT_DIFF_QTY_WS}"      IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "양품량"                  Binding = "{Binding WIPQTY_ED}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "불량량"                  Binding = "{Binding CNFM_DFCT_QTY}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "LOSS량"                  Binding = "{Binding CNFM_LOSS_QTY}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "물품청구"                Binding = "{Binding CNFM_PRDT_REQ_QTY}"      IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "길이초과(Roll)"          Binding = "{Binding LENGTH_EXCEED}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "양품량2"                 Binding = "{Binding WIPQTY2_ED}"             IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "불량량2"                 Binding = "{Binding CNFM_DFCT_QTY2}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "LOSS량2"                 Binding = "{Binding CNFM_LOSS_QTY2}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "물품청구2"               Binding = "{Binding CNFM_PRDT_REQ_QTY2}"     IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "길이초과(Lane)"          Binding = "{Binding LENGTH_EXCEED2}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "차이수량"                Binding = "{Binding INPUT_DIFF_QTY}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "WASHING 양품량"          Binding = "{Binding WIPQTY_END_WS}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "WASHING 불량양"          Binding = "{Binding DFCT_QTY_WS}"            IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "WASHING LOSS량"          Binding = "{Binding LOSS_QTY_WS}"            IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "WASHING 물품청구"        Binding = "{Binding REQ_QTY_WS}"             IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "BOX투입량"               Binding = "{Binding BOXQTY_IN}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                            <c1:DataGridTextColumn      Header = "BOX재공량"               Binding = "{Binding BOXQTY}"                 IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>

                            <c1:DataGridTextColumn      Header = "작업조"                  Binding = "{Binding SHFT_NAME}"              IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "작업조"                  Binding = "{Binding SHIFT}"                  IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "작업자"                  Binding = "{Binding WRK_USER_NAME}"          IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "작업일"                  Binding = "{Binding CALDATE}"                IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "시작시간"                Binding = "{Binding STARTDTTM}"              IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "종료시간"                Binding = "{Binding ENDDTTM}"                IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "코팅버전"                Binding = "{Binding PROD_VER_CODE}"          IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "상태"                    Binding = "{Binding WIPSNAME}"               IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "W/O"                     Binding = "{Binding WOID}"                   IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "W/O상세"                 Binding = "{Binding WO_DETL_ID}"             IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "공정"                    Binding = "{Binding PROCNAME}"               IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "라인"                    Binding = "{Binding EQSGNAME}"               IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "설비"                    Binding = "{Binding EQPTNAME}"               IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "AREA"                    Binding = "{Binding AREAID}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "PROC"                    Binding = "{Binding PROCID}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "EQSG"                    Binding = "{Binding EQSGID}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "EQPT"                    Binding = "{Binding EQPTID}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "LANE_QTY"                Binding = "{Binding LANE_QTY}"               IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "LANE_PTN_QTY"            Binding = "{Binding LANE_PTN_QTY}"           IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "WIPSTAT"                 Binding = "{Binding WIPSTAT}"                IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "NOTE"                    Binding = "{Binding WIP_NOTE}"               IsReadOnly="True" HorizontalAlignment="Left" />
                            <c1:DataGridTextColumn      Header = "WIP_TYPE_CODE"           Binding = "{Binding WIP_TYPE_CODE}"          IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "COATING_GUBUN"           Binding = "{Binding COATING_GUBUN}"          IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "COATING_SIDE_TYPE_CODE"  Binding = "{Binding COATING_SIDE_TYPE_CODE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "마감"                    Binding = "{Binding ERP_CLOSE}"              IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "HOLD여부"                Binding = "{Binding WIPHOLD}"                IsReadOnly="True" HorizontalAlignment="Center" />
                            <c1:DataGridTextColumn      Header = "ABNORMAL 여부"           Binding = "{Binding ABNORM_FLAG}"            IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "작업타입"             Binding = "{Binding WIP_WRK_TYPE_CODE}"     HorizontalAlignment="Center" Visibility="Collapsed"/>
                            <c1:DataGridTextColumn      Header = "작업타입"             Binding = "{Binding WIP_WRK_TYPE_CODE_DESC}"     HorizontalAlignment="Center"/>
                        </c1:C1DataGrid.Columns>
                    </c1:C1DataGrid>
                </Grid>


                <!--변경내용-->

                <Grid Grid.Row="4" Grid.Column="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--백그라운드용-->

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>                                
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" BorderThickness="1" Grid.ColumnSpan="99" Style="{StaticResource BorderSubTitleStyle}"/>
                            <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='실적확인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                            <TextBlock       x:Name="tbAssyResultQty"   Grid.Column="2" Text="{Binding ConverterParameter='추가불량',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="0,7,7,7"/>
                            <c1:C1NumericBox x:Name="txtAssyResultQty"  Grid.Column="4" MinWidth="120" Visibility="{Binding TEXTVISIBLE}" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" CornerRadius="0" AllowNull="True" HandleUpDownKeys="False" Format="#,##0.##" IsEnabled="False"/>
                            <Button          x:Name="btnRollMap"        Grid.Column="6"       Content="{Binding ConverterParameter=ROLLMAP,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,0,8,0" Visibility="Collapsed" Click="btnRollMap_Click"/>
                            <Button          x:Name="btnRollMapUpdate"  Grid.Column="8"       Content="{Binding ConverterParameter=롤맵수정,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,0,8,0" Visibility="Collapsed" Click="btnRollMapUpdate_Click"/>
                            <Button          x:Name="btnSave"           Grid.Column="10"      Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,0,8,0" Click="btnSave_Click"/>
                        </Grid>
                        <Grid x:Name="LotInfo" Grid.Row="5" Margin="8,0,8,8">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*"/>
                                <!--<RowDefinition Height="1*"/>-->
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <!--title-->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Background="#FAFAFA" BorderThickness="1" BorderBrush="#B3B3B3"></Border>
                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#c8294b" ></Border>

                            <TextBlock                          Grid.Row="1"  Grid.Column="0" Text="{Binding ConverterParameter='LOTID',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                            <TextBlock                          Grid.Row="1"  Grid.Column="2" Text="{Binding ConverterParameter='작업지시',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
