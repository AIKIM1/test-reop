<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" x:Class="LGC.GMES.MES.COM001.COM001_377"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ContextMenu x:Key="_gridMenu">
                <MenuItem x:Name="LossDetail"/>
            </ContextMenu>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.CMM001;component/PopupFindControlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="11*" />
            <RowDefinition Height="757*" />
        </Grid.RowDefinitions>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="설비 LOSS 수정" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition />
                </Grid.RowDefinitions>
                <c1:C1TabControl>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='설비 LOSS 수정'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--백그라운드용-->
                            <Border     Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" Margin="0,3,0,0"/>

                            <!--조회영역-->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="11" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="11" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <!--조회조건-->
                                <!--ROW1-->
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <!--ROW2-->
                                <Grid Grid.Row="3" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='날짜', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <ctrlLib:LGCDatePicker  Grid.Column="1" x:Name="ldpDatePicker"  DatepickerType="Date"/>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox          Grid.Column="1" x:Name="cboShift" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="0.5*" />
                                        <ColumnDefinition Width="1.5*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='메인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseCheckBox               Grid.Column="1" x:Name="chkMain"   IsChecked="True" Click="chkMain_Click"/>
                                    <uc:UcBaseComboBox          Grid.Column="2" x:Name="cboColor" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="4" x:Name="Machine" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='Machine', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboEquipment_Machine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <!--조회 버튼-->
                                <uc:UcBaseButton     Grid.Row="3" Grid.Column="6" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                            </Grid>

                            <Grid Grid.Row="2" Grid.Column="1" x:Name="grUp">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="300"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <!--색지도-->
                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1"/>
                                <Grid Grid.Row="0" Grid.Column="1">
                                    <ScrollViewer x:Name="svMap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1" Background="White">
                                        <Border Style="{StaticResource Content_InputForm_LabelBorderStyle}" Background="Transparent" Margin="8">
                                            <Grid x:Name="_grid" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,0,0,0">
                                            </Grid>
                                        </Border>
                                    </ScrollViewer>
                                </Grid>

                                <GridSplitter Grid.Row="1" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <!-- 승인자 -->
                                <Grid Grid.Row="2" Grid.Column="1">
                                    <!--백그라운드용-->
                                    <Border     Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="2" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="1*" />
                                            <ColumnDefinition Width="0.3*" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="2*" />
                                            </Grid.ColumnDefinitions>
                                            <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='승인자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                            <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboApprUser" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                        </Grid>
                                        <Grid Grid.Row="1" Grid.Column="5" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                                            <uc:UcBaseButton     x:Name="btnSubmit"  Content="{Binding ConverterParameter=승인요청,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSubmit_Click"/>
                                        </Grid>
                                    </Grid>
                                </Grid>

                                <!--리스트-->
                                <Grid Grid.Row="4" Grid.Column="1">
                                    <!--백그라운드용-->
                                    <Border     Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                    <uc:UcBaseDataGrid x:Name="dgDetail" Grid.Row="0" IsReadOnly="False" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleCell" BeganEdit="dgDetail_BeganEdit" LoadedCellPresenter="dgDetail_LoadedCellPresenter" LoadedColumnHeaderPresenter="dgDetail_LoadedColumnHeaderPresenter" MouseDoubleClick ="dgDetail_MouseDoubleClick" Margin="8">
                                        <c1:C1DataGrid.Resources>
                                            <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                                <Setter Property="Background">
                                                    <Setter.Value>
                                                        <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_input_search.png" Stretch="Uniform"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Style>
                                        </c1:C1DataGrid.Resources>
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Name="CHK" Width="35">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn   x:Name="CHECK_DELETE"         Header = "삭제"         Binding = "{Binding CHECK_DELETE}"        HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "설비명"       Binding = "{Binding EQPTNAME}"            IsReadOnly="True"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "LOTID"        Binding = "{Binding LOTID}"               IsReadOnly="True"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "프로젝트명"   Binding = "{Binding PRJT_NAME}"           IsReadOnly="True"    HorizontalAlignment="Center"/>
                                            <c1:DataGridTextColumn      Header = "LOTYNAME"  x:Name="lotTname" Binding = "{Binding LOTYNAME}"           IsReadOnly="True"    HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridDateTimeColumn  Header = "시작일"       Binding = "{Binding STRT_DTTM}"           IsReadOnly="True"    HorizontalAlignment="Center"  DateFormat="Custom" CustomDateFormat="yyyy-MM-dd" />
                                            <c1:DataGridTextColumn      Header = "시작시간"     Binding = "{Binding START_TIME}"          IsReadOnly="True"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "종료시간"     Binding = "{Binding END_TIME}"            IsReadOnly="True"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "경과"         Binding = "{Binding SECONDS}"             IsReadOnly="True"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "LOSS분류"     Binding = "{Binding LOSS_NAME}"           IsReadOnly="True"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "부동내용"     Binding = "{Binding LOSS_DETL_NAME}"      IsReadOnly="True"    HorizontalAlignment="Center" />
                                            <!--<c1:DataGridTextColumn      Header = "비고"         Binding = "{Binding LOSS_NOTE}"           IsReadOnly="True"    HorizontalAlignment="Left" Visibility="Collapsed" />
                                            <c1:DataGridTemplateColumn Name="txtNote"  Header = "비고" IsReadOnly="True" Visibility="Collapsed">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBlock Text="{Binding LOSS_NOTE}" TextWrapping ="WrapWithOverflow" Width="Auto" MinWidth="100" MaxWidth="400"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>-->
                                            <c1:DataGridTextColumn      Header = "TROUBLEID"    Binding = "{Binding TRBL_CODE}"        IsReadOnly="True"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "TROUBLE명"    Binding = "{Binding TRBL_NAME}"        IsReadOnly="True"    HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn      x:Name="HIDDEN_START"   Header = "시작"         Binding = "{Binding HIDDEN_START}"        HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      x:Name="HIDDEN_END"     Header = "종료"         Binding = "{Binding HIDDEN_END}"          HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "EQPTID"       Binding = "{Binding EQPTID}"            HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "PRE_LOSS_SEQNO"       Binding = "{Binding PRE_LOSS_SEQNO}"            HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "TROUBLE_CAUSE_EQPTID"     Binding = "{Binding TROUBLE_CAUSE_EQPTID}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "TROUBLE_CAUSE_EQPTNAME"       Binding = "{Binding TROUBLE_CAUSE_EQPTNAME}"            HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "TROUBLE_CAUSE_ALARMCODE"     Binding = "{Binding TROUBLE_CAUSE_ALARMCODE}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "TROUBLE_CAUSE_ALARMNAME"       Binding = "{Binding TROUBLE_CAUSE_ALARMNAME}"           HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "ORIGIN_SECONDS"     Binding = "{Binding ORIGIN_SECONDS}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "EQPT_LOSS_MAND_REG_BAS_OVER_TIME"       Binding = "{Binding EQPT_LOSS_MAND_REG_BAS_OVER_TIME}"            HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "APPR_STAT"        Binding = "{Binding APPR_STAT}"                    HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "결재상태"         Binding = "{Binding APPR_STAT_NAME}"               HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridComboBoxColumn  Header = "Loss Lv1 코드"    Binding = "{Binding UPPER_LOSS_CODE}"              HorizontalAlignment="Left" IsReadOnly="False" EditOnSelection="True" CellContentStyle="{StaticResource Grid_CellContentStyle}" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Name="UPPER_LOSS_CODE" />
                                            <c1:DataGridComboBoxColumn  Header = "변경 Loss 분류"   Binding = "{Binding APPR_REQ_LOSS_CODE}"           HorizontalAlignment="Left" IsReadOnly="False" EditOnSelection="True" CellContentStyle="{StaticResource Grid_CellContentStyle}" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Name="APPR_REQ_LOSS_CODE"/>
                                            <c1:DataGridComboBoxColumn  Header = "변경 부동내용"    Binding = "{Binding APPR_REQ_LOSS_DETL_CODE}"      HorizontalAlignment="Left" IsReadOnly="False" EditOnSelection="True" CellContentStyle="{StaticResource Grid_CellContentStyle}" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Name="APPR_REQ_LOSS_DETL_CODE"/>
                                            <c1:DataGridTextColumn      Header = "Comment"          Binding = "{Binding APPR_REQ_LOSS_CNTT}"           HorizontalAlignment="Left" IsReadOnly="False" />
                                            <c1:DataGridTextColumn      Header = "LOSS_CODE"        Binding = "{Binding LOSS_CODE}"                    HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "LOSS_DETL_CODE"   Binding = "{Binding LOSS_DETL_CODE}"               HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "EIOSTAT"          Binding = "{Binding EIOSTAT}"                      HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>
                                    </uc:UcBaseDataGrid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='설비 LOSS 수정 이력'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <!--백그라운드용-->
                            <Border     Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" Margin="0,3,0,0"/>

                            <!--조회영역-->
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="11" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="11" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="11" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <!--조회조건-->
                                <!--ROW1-->
                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboAreaHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox      Visibility="Collapsed"  Grid.Column="1" x:Name="cboEquipmentSegmentHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                    <ctrlLib:MultiSelectionBox  Grid.Column="1" x:Name="cboEquipmentSegmentHist1"         DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" isAllUsed="True" SelectionChanged="cboEquipmentSegmentHist1_SelectionChanged"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox       Grid.Column="1" x:Name="cboProcessHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                    <!--<ctrlLib:MultiSelectionBox  Grid.Column="1" x:Name="cboProcessHist1"          DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" isAllUsed="True" SelectionChanged="cboProcessHist1_SelectionChanged" />-->
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <!--<uc:UcBaseComboBox      Grid.Column="1" x:Name="cboEquipmentHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>-->
                                    <ctrlLib:MultiSelectionBox  Grid.Column="1" x:Name="cboEquipmentHist"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" isAllUsed="True"/>
                                </Grid>
                                <!--ROW2-->
                                <Grid Grid.Row="3" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='날짜', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3">
                                        <ctrlLib:LGCDatePicker Grid.Column="1" x:Name="ldpDateFrom" DatepickerType="Date" />
                                        <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <ctrlLib:LGCDatePicker Grid.Column="1" x:Name="ldpDateTo" DatepickerType="Date" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox          Grid.Column="1" x:Name="cboShiftHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="0.5*" />
                                        <ColumnDefinition Width="1.5*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='메인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseCheckBox               Grid.Column="1" x:Name="chkMainHist"   IsChecked="True" Click="chkMainHist_Click"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="4" x:Name="MachineHist" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='Machine', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboEquipment_MachineHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <!--조회 버튼-->
                                <uc:UcBaseButton     Grid.Row="3" Grid.Column="6" x:Name="btnSearchHist" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchHist_Click" />
                                <!--요청취소버튼-->
                                <uc:UcBaseButton     Grid.Row="3" Grid.Column="8"  x:Name="btnCancel" Content="{Binding ConverterParameter=요청취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnCancel_Click"  />
                            </Grid>
                            <!--리스트-->
                            <Grid Grid.Row="4" Grid.Column="1">
                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                <uc:UcBaseDataGrid x:Name="dgDetailHist" Grid.Row="0" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" LoadedCellPresenter="dgDetailHist_LoadedCellPresenter" Margin="8"  ClipboardPasteMode="None">
                                    <c1:C1DataGrid.Resources>
                                        <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_input_search.png" Stretch="Uniform"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </c1:C1DataGrid.Resources>
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="Auto" Header="선택" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" IsEnabled="{Binding CheckBoxIsEnabled, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "설비명"           Binding = "{Binding EQPTNAME}"            HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "LOTID"            Binding = "{Binding LOTID}"               HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "프로젝트명"       Binding = "{Binding PRJT_NAME}"           HorizontalAlignment="Center"/>
                                        <c1:DataGridDateTimeColumn  Header = "시작일"           Binding = "{Binding STRT_DTTM}"           HorizontalAlignment="Center"  DateFormat="Custom" CustomDateFormat="yyyy-MM-dd" />
                                        <c1:DataGridTextColumn      Header = "시작시간"         Binding = "{Binding START_TIME}"          HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "종료시간"         Binding = "{Binding END_TIME}"            HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "경과"             Binding = "{Binding SECONDS}"             HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "LOSS분류"         Binding = "{Binding LOSS_NAME}"           HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "부동내용"         Binding = "{Binding LOSS_DETL_NAME}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "TROUBLEID"        Binding = "{Binding TRBL_CODE}"           HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "TROUBLE명"        Binding = "{Binding TRBL_NAME}"           HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "EQPTID"           Binding = "{Binding EQPTID}"              HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "요청자"           Binding = "{Binding APPR_REQ_USERNAME}"         HorizontalAlignment="Center" />
                                        <c1:DataGridDateTimeColumn  Header = "요청일시"         Binding = "{Binding APPR_REQ_DTTM}"             HorizontalAlignment="Center"  DateFormat="Custom" CustomDateFormat="yyyy-MM-dd HH:mm:ss"/>
                                        <c1:DataGridTextColumn      Header = "승인자"           Binding = "{Binding APPR_USERNAME}"             HorizontalAlignment="Center" />
                                        <c1:DataGridDateTimeColumn  Header = "승인일시"         Binding = "{Binding APPR_DTTM}"                 HorizontalAlignment="Center"  DateFormat="Custom" CustomDateFormat="yyyy-MM-dd HH:mm:ss"/>
                                        <c1:DataGridTextColumn      Header = "결재상태"         Binding = "{Binding APPR_STAT_NAME}"            HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "Loss Lv1 코드"    Binding = "{Binding UPPER_LOSS_NAME}"           HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "변경 Loss 분류"   Binding = "{Binding APPR_REQ_LOSS_NAME}"        HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "변경 부동내용"    Binding = "{Binding APPR_REQ_LOSS_DETL_NAME}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "Comment"          Binding = "{Binding APPR_REQ_LOSS_CNTT}"        HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>
                                </uc:UcBaseDataGrid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                </c1:C1TabControl>
            </Grid>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.ColumnSpan="1" Grid.RowSpan="2" />
    </Grid>
</UserControl>