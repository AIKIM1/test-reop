                                    <c1:DataGridNumericColumn		Header = "불량"               Binding = "{Binding DFCTQTY}"    HorizontalAlignment="Right" Format="#,##0"/>
                                    <c1:DataGridNumericColumn		Header = "설비불량"           Binding = "{Binding EQPT_DFCT_QTY}"    HorizontalAlignment="Right" Format="#,##0"/>
