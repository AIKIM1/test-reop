<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_381"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:CMM001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1920" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ItemTemplate">
                <WrapPanel>
                    <Image Width="138" Height="138" Stretch="Fill" Source="{Binding}" Margin="3,3,3,3" />
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!--<ColumnDefinition Width="*"/>-->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>
        </Grid.Resources>

        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정별 생산실적 조회" Grid.ColumnSpan="2">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="51"/>
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--조회영역-->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />

                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="*"/>
                        <!--10-->
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>

                    <!--조회조건-->
                    <TextBlock                                       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='AREA',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <uc:UcBaseComboBox x:Name="cboArea"                  Grid.Row="0" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    <TextBlock                                       Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='BLDG_CODE',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <uc:UcBaseComboBox x:Name="cboBldg"                  Grid.Row="0" Grid.Column="3" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboBldg_SelectedValueChanged" />
                    <TextBlock                                       Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='WH_ID',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <uc:UcBaseComboBox x:Name="cboSection"               Grid.Row="0" Grid.Column="5" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboSection_SelectedValueChanged" />
                    <TextBlock                                       Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='Location',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <ctrlLib:MultiSelectionBox x:Name="cboLocation"  Grid.Row="0" Grid.Column="7" isAllUsed="True" />
                    <TextBlock                                       Grid.Row="0" Grid.Column="8" Text="{Binding ConverterParameter='PJT',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <TextBox       x:Name="txtProjectName"           Grid.Row="0" Grid.Column="9" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtProjectName_KeyDown" />
                    <uc:UcBaseButton        x:Name="btnLocationSetting"       Grid.Row="0" Grid.Column="11" Content="{Binding ConverterParameter='LOCATION SETTING',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Margin="0,6,8,5" Click="btnLocationSetting_Click" FontWeight="Bold" />
                    <uc:UcBaseButton        x:Name="btnChangeLocation"        Grid.Row="0" Grid.Column="12" Content="{Binding ConverterParameter='CHANGE LOCATION',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Margin="0,6,8,5" Click="btnChangeLocation_Click" />
                    <uc:UcBaseButton        x:Name="btnReleaseLocation"       Grid.Row="0" Grid.Column="13" Content="{Binding ConverterParameter='RELEASE LOCATION',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Margin="0,6,8,5" FontWeight="Bold" Click="btnReleaseLocation_Click" />
                    <uc:UcBaseButton        x:Name="btnSearch"                Grid.Row="0" Grid.Column="14" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" 
                                Cursor="Hand" Click="btnSearch_Click" HorizontalAlignment="Right"/>
                </Grid>

                <Grid Grid.Row="2">
                    <c1:C1TabControl x:Name="tbcList" Grid.Column="0" Margin="3" SelectionChanged="tbcList_SelectionChanged" >
                        <c1:C1TabItem x:Name="Location" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Location'}" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!--Location 리스트-->
                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="155*" />
                                        <ColumnDefinition Width="487*"/>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="963*" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>

                                    <!--백그라운드용-->

                                    <Border Grid.Row="0" Grid.ColumnSpan="6" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" Margin="0,0,-0.001,0"/>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" Margin="15,9,7.666,8" Grid.ColumnSpan="3"><Run Text="{Binding ConverterParameter='Pallet List by Location', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    <uc:UcBaseCheckBox  Grid.Row="0" Grid.Column="3" x:Name="chkAllLocation"     Content="{Binding ConverterParameter='전체선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" IsChecked="False" Click="chkAllLocation_Click" Margin="10.334,8,0,8" FontWeight="Bold" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Padding="0,0,10,0"/>
                                    <Border Grid.Row="1" Grid.Column="0" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe" Grid.ColumnSpan="3" Margin="0,0,7.666,0.333"></Border>
                                    <uc:UcBaseDataGrid x:Name="dgPalletListByLocation" 
                                                   Grid.Row="1" 
                                                   Grid.Column="0" 
                                                   Grid.ColumnSpan="3" 
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column" 
                                                   SelectionMode="SingleCell"
                                                   MouseDoubleClick="dgPalletListByLocation_DoubleClick"
                                                   LoadedCellPresenter="dgPalletListByLocation_LoadedCellPresenter"
                                                   Margin="0,0,7.666,0.333" 
                                                   UnloadedCellPresenter="dgPalletListByLocation_UnloadedCellPresenter_1">
                                        <c1:C1DataGrid.Resources>
                                        </c1:C1DataGrid.Resources>
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn      Header = "WH_ID"                 Binding = "{Binding WH_NAME}"               IsReadOnly="True" HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                            <c1:DataGridTextColumn      Header = "Location"              Binding = "{Binding RACK_NAME}"             IsReadOnly="True" HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                            <c1:DataGridTextColumn      Header = "LType"                 Binding = "{Binding LOCATION_STAT}"         IsReadOnly="True" HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                            <c1:DataGridTextColumn      Header = "MODEL_MIX_FLAG"        Binding = "{Binding MIX_ENABLE}"            IsReadOnly="True" HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                            <c1:DataGridTextColumn      Header = "Capa"                  Binding = "{Binding CAPA}"                  IsReadOnly="True" HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                            <c1:DataGridTextColumn      Header = "ROW_NUM"               Binding = "{Binding ROW_NUM}"               IsReadOnly="True" HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed" />                                            
                                            <c1:DataGridNumericColumn   Header = "PLT QTY"               Binding = "{Binding CST_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Format="#,##0" Width="Auto">
                                            </c1:DataGridNumericColumn>                                            
                                            <c1:DataGridTextColumn      Header = "PJT"                   Binding = "{Binding PRJT_NAME}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn   Header = "OK"               Binding = "{Binding OK_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  Format="#,##0" Width="Auto">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>
                                            <c1:DataGridNumericColumn   Header = "미검사"               Binding = "{Binding NO_INSP_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  Format="#,##0" Width="Auto">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>
                                            <c1:DataGridNumericColumn   Header = "Hold"               Binding = "{Binding HOLD_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  Format="#,##0" Width="Auto">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>
                                            <c1:DataGridNumericColumn   Header = "장기재고"               Binding = "{Binding LONG_TERM_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  Format="#,##0" Width="Auto">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>
                                            <c1:DataGridTextColumn      Header = "BLDG"                  Binding = "{Binding BLDG}"                  IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "WH_ID"                 Binding = "{Binding WH_ID}"                 IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "RACK_ID"               Binding = "{Binding RACK_ID}"               IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "WH_PHYS_PSTN_CODE"     Binding = "{Binding WH_PHYS_PSTN_CODE}"     IsReadOnly="True" Visibility="Collapsed" />


                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow x:Name="summary1" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </uc:UcBaseDataGrid>

                                    <GridSplitter Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                    <!--상세내용-->
                                    <Border Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe" Margin="0.334,0,-0.001,0.333"></Border>
                                    <uc:UcBaseDataGrid x:Name="dgPalletListByLocationDetail" 
                                                   Grid.Row="1" Grid.Column="3" 
                                                   Grid.ColumnSpan="3" 
                                                   HeadersVisibility="None"
                                                   FrozenTopRowsCount="2"
                                                   IsReadOnly="False" 
                                                   SelectionMode="MultiRange" Margin="0.334,0,-0.001,0.333">
                                        <c1:C1DataGrid.Columns>

                                            <c1:DataGridTemplateColumn Name="CHK" Width="40" Header="선택" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center"  />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            
                                            <c1:DataGridTextColumn      Header = "Pallet ID"                  Binding = "{Binding BOXID}"                     IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "PALLET BCD"                 Binding = "{Binding CSTID}"                     IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "QTY"                        Binding = "{Binding TOTAL_QTY}"                 IsReadOnly="True" HorizontalAlignment="Right"  Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "PJT"                        Binding = "{Binding PRJT_NAME}"                 IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "PALLET상태"                 Binding = "{Binding SHIPPING_RESN}"             IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "LOCATION_ID"                Binding = "{Binding RACK_NAME}"                 IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "WH_ID"                      Binding = "{Binding WH_NAME}"                   IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "창고입고일시"               Binding = "{Binding WH_RCV_DTTM}"               IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "LINE"                       Binding = "{Binding EQSGNAME}"                  IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "작업일시"                   Binding = "{Binding ISS_SCHD_DATE}"             IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "생산일자"                   Binding = "{Binding CALDATE}"                   IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "유효기간"                   Binding = "{Binding VLD_DATE}"                  IsReadOnly="True" HorizontalAlignment="Center" Width="Auto" />
                                            <c1:DataGridTextColumn      Header = "[HOLD,MES]"                 Binding = "{Binding MES_HOLD_YN}"               IsReadOnly="True" HorizontalAlignment="Center" MaxWidth="40" />
                                            <c1:DataGridTextColumn      Header = "[HOLD,QMS]"                 Binding = "{Binding QMS_HOLD_YN}"               IsReadOnly="True" HorizontalAlignment="Center" MaxWidth="40" />
                                            <c1:DataGridTextColumn      Header = "[HOLD,CELL]"                Binding = "{Binding SUBLOT_HOLD_YN}"            IsReadOnly="True" HorizontalAlignment="Center" MaxWidth="40" />
                                            <c1:DataGridTextColumn      Header = "[HOLD,PALLET]"              Binding = "{Binding PACK_HOLD_YN}"              IsReadOnly="True" HorizontalAlignment="Center" MaxWidth="40" />
                                            <c1:DataGridTextColumn      Header = "[QA검사,P]"                 Binding = "{Binding PROD_INSP_RESULT}"          IsReadOnly="True" HorizontalAlignment="Center" MaxWidth="40" />
                                            <c1:DataGridTextColumn      Header = "[QA검사,M]"                 Binding = "{Binding MEASR_INSP_RESULT}"         IsReadOnly="True" HorizontalAlignment="Center" MaxWidth="40" />
                                            <c1:DataGridTextColumn      Header = "[QA검사,L]"                 Binding = "{Binding LOW_VOLT_INSP_RESULT}"      IsReadOnly="True" HorizontalAlignment="Center" MaxWidth="40" />
                                            <c1:DataGridTextColumn      Header = "[QA검사,O]"                 Binding = "{Binding OQC_INSP_YN}"               IsReadOnly="True" HorizontalAlignment="Center" MaxWidth="40" />
                                            <c1:DataGridTextColumn      Header = "장기재고"                   Binding = "{Binding OLD_YN}"                    IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "OCOP_RTN_CELL_ICL_FLAG"     Binding = "{Binding OCOP_RTN_CELL_ICL_FLAG}"    IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "PALLET상태"                 Binding = "{Binding CSTSTAT}"                   Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "RACK_ID"                    Binding = "{Binding RACK_ID}"                   Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "WH_ID"                      Binding = "{Binding WH_ID}"                     Visibility="Collapsed" />

                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.TopRows>
                                            <c1:DataGridColumnHeaderRow />
                                            <c1:DataGridColumnHeaderRow />
                                        </c1:C1DataGrid.TopRows>
                                    </uc:UcBaseDataGrid>

                                </Grid>
                            </Grid>

                        </c1:C1TabItem>

                        <c1:C1TabItem x:Name="Model" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Model'}" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!--Location 리스트-->
                                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="40*" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="60*" />
                                        <ColumnDefinition Width="150" />
                                        <ColumnDefinition Width="150" />
                                    </Grid.ColumnDefinitions>

                                    <!--백그라운드용-->
                                    <Border Grid.Row="0" BorderThickness="1" Grid.ColumnSpan="99" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" Margin="15,9,0,8"><Run Text="{Binding ConverterParameter='창고 적재 현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    <uc:UcBaseCheckBox  Grid.Row="0" Grid.Column="2" x:Name="chkAllModel"     Content="{Binding ConverterParameter='전체선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" IsChecked="False" Click="chkAllModel_Click" Margin="10,0,0,0" FontWeight="Bold" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Padding="0,0,10,0"/>

                                    <Border Grid.Row="1" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                    <uc:UcBaseDataGrid x:Name="dgPalletListByModel" 
                                                   Grid.Row="1" 
                                                   Grid.Column="0" 
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column" 
                                                   MouseDoubleClick="dgPalletListByModel_DoubleClick" 
                                                   SelectionMode="SingleRange"
                                                   LoadedCellPresenter="dgPalletListByModel_LoadedCellPresenter"
                                                   >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn      Header = "모델 LOT"         Binding = "{Binding MDLLOT_ID}"         IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "PJT"              Binding = "{Binding PRJT_NAME}"         IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn   Header = "PLT QTY"               Binding = "{Binding CST_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  Format="#,##0" Width="Auto">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>                                            
                                            <c1:DataGridNumericColumn   Header = "OK"               Binding = "{Binding OK_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  Format="#,##0" Width="Auto">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>
                                            <c1:DataGridNumericColumn   Header = "미검사"               Binding = "{Binding NO_INSP_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  Format="#,##0" Width="Auto">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>                                            
                                            <c1:DataGridNumericColumn   Header = "Hold"               Binding = "{Binding HOLD_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  Format="#,##0" Width="Auto">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>                                            
                                            <c1:DataGridNumericColumn   Header = "장기재고"               Binding = "{Binding LONG_TERM_QTY}"               IsReadOnly="True" HorizontalAlignment="Right"  Format="#,##0" Width="Auto">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>                                            
                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.BottomRows >
                                            <c1:DataGridSummaryRow x:Name="summary2" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </uc:UcBaseDataGrid>

                                    <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="99" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                    <Border Grid.Row="1" Grid.Column="2" BorderThickness="1" Grid.ColumnSpan="99" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

