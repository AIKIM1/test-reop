<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_343"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1324">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ResultTitle">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='합계', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Left" Padding="5,0,5,0"  />
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>
        </Grid.Resources>
        
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Lot Hold">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <c1:C1TabControl>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='HOLD 등록'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="250"/>
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1" Grid.ColumnSpan="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="15" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="15" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="15" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="15" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="15" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='생산일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <StackPanel Orientation="Horizontal"  Grid.Row="0" Grid.Column="1" >
                                    <ctrlLib:LGCDatePicker  x:Name="ldpCaldateFrom"  DatepickerType="Date"/>
                                    <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                                    <ctrlLib:LGCDatePicker  x:Name="ldpCaldateTo"  DatepickerType="Date"/>
                                </StackPanel>
                                
                                <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" Margin="0,0,-10,0"/>
                                    <TextBlock  Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </StackPanel>
                                <c1:C1ComboBox x:Name="cboAreaHold" Grid.Row="0" Grid.Column="4" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                
                                <StackPanel Grid.Row="0" Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" Margin="0,0,-10,0"/>
                                    <TextBlock Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </StackPanel>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="7" x:Name="cboEquipmentSegmentHold" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                
                                <TextBlock  Grid.Row="0" Grid.Column="9" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="10" x:Name="cboProcessHold"          Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                
                                <TextBlock  x:Name="txtElecType" Grid.Row="0" Grid.Column="12" Text="{Binding ConverterParameter='극성', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Collapsed"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="13" x:Name="cboElecType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Visibility="Collapsed" />
                                
                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    Grid.Row="1" Grid.Column="1" x:Name="txtLotHold"              Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotHold_KeyDown" PreviewKeyDown="txtLotHold_PreviewKeyDown"/>
                                
                                <TextBlock  Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='CarrierID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    Grid.Row="1" Grid.Column="4" x:Name="txtCSTID"                Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtCSTID_KeyDown"  PreviewKeyDown="txtCSTID_PreviewKeyDown"/>
                                
                                <TextBlock  Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='모델',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox         Grid.Row="1" Grid.Column="7" x:Name="txtModlId"               Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" />
                                
                                <TextBlock  Grid.Row="1" Grid.Column="9" Text="{Binding ConverterParameter='프로젝트명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox         Grid.Row="1" Grid.Column="10" x:Name="txtPrjtName"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" />

                                <!--조회 버튼-->
                                <Button     Grid.Row="0" Grid.Column="17" Grid.RowSpan="2" x:Name="btnSearchHold" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchHold_Click" />

                            </Grid>

                            <!--대상목록-->
                            <Grid Grid.Row="3" Grid.ColumnSpan="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="30" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgListHold" Grid.Row="1" 
                                               HeadersVisibility="Column" 
                                               FrozenColumnCount="2" 
                                               SelectionMode="SingleRow" 
                                               Margin="8,8,8,8" 
                                               LoadedColumnHeaderPresenter="dgListHold_LoadedColumnHeaderPresenter"
                                               MouseDoubleClick="dgListHold_MouseDoubleClick">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택" HorizontalAlignment="Center" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "라인"        Binding = "{Binding EQSGNAME}"          HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "LOTID"       Binding = "{Binding LOTID}"             HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "PJT"         Binding = "{Binding PRJT_NAME}"         HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "버전"        Binding = "{Binding PROD_VER_CODE}"     HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "CarrierID"   Binding = "{Binding CSTID}"             HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품ID"      Binding = "{Binding PRODID}"            HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품명"      Binding = "{Binding PRODNAME}"          HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "모델ID"      Binding = "{Binding MODELID}"           HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "수량"        Binding = "{Binding WIPQTY}"            HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "단위"        Binding = "{Binding UNIT_CODE}"         HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "생산일자"    Binding = "{Binding CALDATE}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "대LOT"       Binding = "{Binding LOTID_RT}"          HorizontalAlignment="Left" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                                
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Button Grid.Row="1" x:Name="btnRight" Style="{DynamicResource Content_SubTaskButtonNext02Style}" HorizontalAlignment="Right" Height="50" Margin="3,0,3,0" Click="btnRight_Click"/>
                                    <Button Grid.Row="3" x:Name="btnLeft"  Style="{DynamicResource Content_SubTaskButtonPrev02Style}" HorizontalAlignment="Right" Height="50" Margin="3,0,3,0" Click="btnLeft_Click" />
                                    
                                    
                                </Grid>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="2" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                
                                <TextBlock Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='선택목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgSelectHold" 
                                               Grid.Row="1" Grid.Column="3" 
                                               IsReadOnly="True" 
                                               HeadersVisibility="Column" 
                                               FrozenColumnCount="2" 
                                               SelectionMode="SingleRow" 
                                               Margin="8,8,8,8"
                                               LoadedColumnHeaderPresenter="dgSelectHold_LoadedColumnHeaderPresenter"
                                               MouseDoubleClick="dgSelectHold_MouseDoubleClick">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택"  >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "라인"       Binding = "{Binding EQSGNAME}"          HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "LOTID"      Binding = "{Binding LOTID}"             HorizontalAlignment="Left" IsReadOnly="True" >
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTitle}"></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridTextColumn>
                                        <c1:DataGridTextColumn      Header = "CarrierID"  Binding = "{Binding CSTID}"             HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "PJT"        Binding = "{Binding PRJT_NAME}"         HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품ID"     Binding = "{Binding PRODID}"            HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품명"     Binding = "{Binding PRODNAME}"          HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "모델ID"     Binding = "{Binding MODELID}"           HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridNumericColumn   Header = "수량"       Binding = "{Binding WIPQTY}"            HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" >
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}"></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                        <c1:DataGridTextColumn      Header = "단위"       Binding = "{Binding UNIT_CODE}"         HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "생산일자"   Binding = "{Binding CALDATE}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "버전"       Binding = "{Binding PROD_VER_CODE}"     HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "대LOT"      Binding = "{Binding LOTID_RT}"          HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow x:Name="summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </c1:C1DataGrid>
                            </Grid>

                            <Grid x:Name="HoldSelection" Grid.Row="5" Grid.Column="0"  >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <CheckBox x:Name="chkHoldLevel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=HOLD사유LEVEL별등록}" FontWeight="Bold" FontSize="14" Margin="8,6,8,8" Checked="chkHoldLevel_Checked" Unchecked="chkHoldLevel_Checked" />
                                
                                <c1:C1DataGrid x:Name="dgHoldGroup1" Grid.Row="1" Grid.Column="0" 
                                               IsReadOnly="False" HeadersVisibility="Column" SelectionMode="None" CanUserSort="False" CanUserFilter="False" Margin="8,8,8,8"
                                               MouseDoubleClick="dgHoldGroup1_MouseDoubleClick">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Header="EMT" EditOnSelection="False" Name="CHK">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="radHoldGroup1" IsChecked="{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" Checked="RadioButton_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn Header="LEVEL1" Binding="{Binding DFCT_CODE_NAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn Header="DEFC_CODE" Binding="{Binding DFCT_CODE}" HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                                <c1:C1DataGrid x:Name="dgHoldGroup2" Grid.Row="1" Grid.Column="1" 
                                               IsReadOnly="False" HeadersVisibility="Column" SelectionMode="None" CanUserSort="False" CanUserFilter="False" Margin="8,8,8,8"
                                               MouseDoubleClick="dgHoldGroup2_MouseDoubleClick">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Header="EMT" EditOnSelection="False" Name="CHK" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="radHoldGroup2" IsChecked="{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" Checked="RadioButton_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn Header="LEVEL2" Binding="{Binding DFCT_DETL_NAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn Header="RESNCODE" Binding="{Binding RESNCODE}" HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--백그라운드용-->
                            <Border Grid.Row="5" Grid.Column="2" Grid.ColumnSpan="2" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            
                            <Grid x:Name="HoldDetail" Grid.Row="5" Grid.Column="2" Margin="10" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Button x:Name="btnHold" Grid.Row="0" Grid.Column="5" Content="{Binding ConverterParameter=LOT_HOLD,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" HorizontalAlignment="Right" Margin="0,0,8,0" Click="btnHold_Click"/>

                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" Margin="0,0,-15,0"/>
                                    <TextBlock x:Name="lblHoldType"  Text="{Binding ConverterParameter='HOLD사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right" />
                                </StackPanel>
                                
                                <c1:C1ComboBox Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" x:Name="cboHoldType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <CheckBox  Grid.Row="0" Grid.Column="3" x:Name="chkPrint"   Content="{Binding ConverterParameter='라벨발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" IsChecked="False" Visibility="Collapsed" />

                                <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" Margin="0,0,-15,0"/>
                                    <TextBlock Text="{Binding ConverterParameter='예상해제일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right" />
                                </StackPanel>
                                
                                <ctrlLib:LGCDatePicker Grid.Row="1" Grid.Column="1" DatepickerType="Date" x:Name="dtExpected" SelectedDataTimeChanged="dtExpected_SelectedDataTimeChanged" />

                                <TextBlock Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='전기일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right" Visibility="Collapsed" />
                                <ctrlLib:LGCDatePicker Grid.Row="1" Grid.Column="4" DatepickerType="Date" x:Name="dtCalDate" SelectedDataTimeChanged="dtCalDate_SelectedDataTimeChanged" Visibility="Collapsed" />

                                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" Margin="0,0,-15,0"/>
                                    <TextBlock x:Name="lblPerson" Text="{Binding ConverterParameter='ACTION_PERSON', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right" />
                                </StackPanel>                                
                                <TextBox   Grid.Row="2" Grid.Column="1"  x:Name="txtPerson"        Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" KeyDown="txtPerson_KeyDown" GotFocus="txtPerson_GotFocus" />
                                <TextBox   Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="2"  x:Name="txtPersonId"      Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" IsReadOnly="True"/>
                                <TextBox   Grid.Row="2" Grid.Column="4"  x:Name="txtPersonDept"      Style="{StaticResource SearchCondition_TextBoxStyle}" Width="200" IsReadOnly="True"/>

                                <c1:C1DataGrid x:Name="dgPersonSelect" Grid.Row="2" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="99" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="4" Panel.ZIndex="9999" Width="Auto" 
                                               Visibility="Collapsed"
                                               MouseDoubleClick="dgPersonSelect_MouseDoubleClick">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHOICE" Width="60" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgNoticeChoiceGroup" IsChecked="{Binding CHK, Mode=TwoWay}" Name="dgNoticeChoice" HorizontalAlignment="Center" Checked="dgPersonSelect_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "ID"         Binding = "{Binding USERID}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "이름"       Binding = "{Binding USERNAME}"    HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "부서"       Binding = "{Binding DEPTNAME}"        HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                                <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,0,0"/>
                                <TextBox   Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="12"  x:Name="txtHold"         Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" Margin="8,8,8,8" AcceptsReturn="True" MaxLength="500" />
                            </Grid>
                            
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='HOLD이력'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="90"/>
                                <RowDefinition Height="8" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>


                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="45" />
                                    <RowDefinition Height="45" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="14" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <!--ROW1-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboAreaHistory" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="3" x:Name="cboEquipmentSegmentHistory" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="5" x:Name="cboProcessHistory" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <TextBlock  Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='기간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <StackPanel Orientation="Horizontal"  Grid.Row="0" Grid.Column="7" Grid.ColumnSpan="3">
                                    <ctrlLib:LGCDatePicker  x:Name="ldpDateFromHist"  DatepickerType="Date"/>
                                    <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                                    <ctrlLib:LGCDatePicker  x:Name="ldpDateToHist"  DatepickerType="Date"/>
                                </StackPanel>
                                <TextBlock                              Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtLotHistory"      Grid.Row="1" Grid.Column="1"         Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotHistory_KeyDown" />
                                <TextBlock                              Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='CarrierID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtCSTHistory"      Grid.Row="1" Grid.Column="3" MinWidth="120" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotHistory_KeyDown" />
                                <TextBlock                              Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='제품ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtProdID"          Grid.Row="1" Grid.Column="5" MinWidth="120" Style="{StaticResource SearchCondition_TextBoxStyle}" />

                                <!--조회 버튼-->
                                <Button     Grid.Row="0" Grid.Column="12" Grid.RowSpan="2" x:Name="btnSearchHistory" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchHistory_Click" />

                            </Grid>

                            <!--이력목록-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='이력목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgListHistory" Grid.Row="1" IsReadOnly="False" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="MultiRange" Margin="8,8,8,8">
                                    <c1:C1DataGrid.Resources>
                                        <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                            <Setter Property="Background">
                                                <Setter.Value>
                                                    <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/btn_i_print.png" Stretch="Uniform"/>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </c1:C1DataGrid.Resources>
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "라인"           Binding = "{Binding EQSGNAME}"          HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "LOTID"          Binding = "{Binding LOTID}"             HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "CarrierID"      Binding = "{Binding CSTID}"             HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "대LOTID"        Binding = "{Binding LOTID_RT}"          HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품ID"         Binding = "{Binding PRODID}"            HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품명"         Binding = "{Binding PRODNAME}"          HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "모델ID"         Binding = "{Binding MODELID}"           HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "수량"           Binding = "{Binding WIPQTY}"            HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "단위"           Binding = "{Binding UNIT_CODE}"         HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "HOLD사유"       Binding = "{Binding HOLDCODENAME}"      HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "등록자"         Binding = "{Binding HOLDUSERNAME}"      HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "등록시간"       Binding = "{Binding HOLD_DTTM}"         HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "담당자"         Binding = "{Binding ACTIONUSERNAME}"    HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "RELEASE예정일"  Binding = "{Binding UNHOLD_SCHD_DATE}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "승인상태"       Binding = "{Binding LAST_STAT}"         HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "승인자"         Binding = "{Binding RELEASEUSERNAME}"   HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "승인시간"       Binding = "{Binding UNHOLD_DTTM}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "HOLD구분"       Binding = "{Binding HOLD_CODE}"         HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "HOLD사용자"     Binding = "{Binding HOLD_USERID}"       HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "RELEASE구분"    Binding = "{Binding UNHOLD_CODE}"       HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "RELEASE사용자"  Binding = "{Binding UNHOLD_USERID}"     HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTemplateColumn  Header="출력" Width="40">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Click="print_Button_Click" Style="{StaticResource grButtonStyle}" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "HOLD비고"  Binding = "{Binding HOLD_NOTE}"        HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "RELEASE비고"  Binding = "{Binding UNHOLD_NOTE}"        HorizontalAlignment="Left" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                </c1:C1TabControl>

            </Grid>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
        
    </Grid>
</UserControl>
