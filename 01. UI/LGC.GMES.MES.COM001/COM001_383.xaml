<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_383"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1920" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ItemTemplate">
                <WrapPanel>
                    <Image Width="138" Height="138" Stretch="Fill" Source="{Binding}" Margin="3,3,3,3" />
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!--<ColumnDefinition Width="*"/>-->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>

        </Grid.Resources>

        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Cell Pallet Request Status" Grid.ColumnSpan="99">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--조회영역-->
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="120" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="120" />

                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="Auto"/>
                        <!--10-->
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>

                        <!--<ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>-->

                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8" />
                    </Grid.ColumnDefinitions>

                </Grid>

                <Grid Grid.Row="2" Grid.RowSpan="99" Grid.ColumnSpan="99">

                    <Border Grid.Row="2" Grid.Column="0"  Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                    <c1:C1TabControl x:Name="tbcList" Grid.Column="0" Margin="3"  >
                        <c1:C1TabItem x:Name="Lot"   Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='포장출고'}" Margin="0" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="6*"/>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="4*"/>
                                </Grid.RowDefinitions>

                                <GridSplitter Grid.Row="1" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.ColumnSpan="2" />

                                <!--LOT 리스트-->
                                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="51"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" Grid.ColumnSpan="999" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" />

                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" Margin="10,0,0,0"><Run Text="{Binding ConverterParameter='요청목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="2">
                                        <!-- Request Info Grid -->
                                        <Grid Grid.Column="1" x:Name="grdRequestMode">
                                            <Rectangle x:Name="recRequestInfoMode" Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Height="29" ></Rectangle>
                                            <Border Grid.Row="1" BorderThickness="0" BorderBrush="White">
                                                <TextBlock x:Name="txtRequestMode" Margin="5" Text="{Binding ConverterParameter='REQUEST_MESSAGE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" />
                                            </Border>
                                        </Grid>
                                    </Grid>
                                    <!--refresh 주기-->
                                    <TextBlock          Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='갱신주기(MIN)',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"  Visibility="Collapsed" />
                                    <c1:C1NumericBox    Grid.Row="0" Grid.Column="3" x:Name="numRefresh" Style="{StaticResource C1NumericBoxStyle}" Minimum="1" Value="5" Width="60" HorizontalAlignment="Left" Visibility="Collapsed" />
                                    <TextBlock          Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='분',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0"  Visibility="Collapsed"/>

                                    <uc:UcBaseButton    Grid.Row="0" Grid.Column="6"   x:Name="btnDeleteRequest"    Content="{Binding ConverterParameter=REQUEST_DEL,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" HorizontalContentAlignment="Center" Width="Auto" HorizontalAlignment="Right" Click="btnDeleteRequest_Click" />
                                    <uc:UcBaseButton    Grid.Row="0" Grid.Column="8"   x:Name="btnAccept"    Content="{Binding ConverterParameter=ACCEPT,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" HorizontalContentAlignment="Center" Width="Auto" Click="btnAccept_Click" />
                                    <uc:UcBaseButton    Grid.Row="0" Grid.Column="10"   x:Name="btnShippingOrder"    Content="{Binding ConverterParameter=출고요청,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" HorizontalContentAlignment="Center" Width="Auto" Click="btnShippingOrder_Click"/>
                                    <uc:UcBaseButton    Grid.Row="0" Grid.Column="12"  x:Name="btnSearchHold"       Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}"  Cursor="Hand" Click="btnSearch_Click" />

                                    <Border  Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="99"  Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>

                                    <uc:UcBaseDataGrid x:Name="dgOrderList" Grid.Row="2" Grid.ColumnSpan="999" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" LoadedCellPresenter="dgOrderList_LoadedCellPresenter" >
                                        <c1:C1DataGrid.Columns>

                                            <c1:DataGridTemplateColumn Header="선택" EditOnSelection="False" Name="CHK" Width="60" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="rbOrdereListGroup" Name="rbOrderListChoice"  IsChecked="{Binding CHK, Mode=OneWay}" HorizontalAlignment="Center" Cursor="Hand" Checked="rbOrderListChoice_Checked" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn      Header = "공급유형"                    Binding = "{Binding AUTO_LOGIS_FLAG}"                    CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "공급유형"                    Binding = "{Binding AUTO_FLAG}"                          CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "REQ_TYPE"                   Binding = "{Binding REQ_TYPE}"                            CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "CELL_SPLY_TYPE_CODE"        Binding = "{Binding CELL_SPLY_TYPE_CODE}"                 CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "DESTINATION"                Binding = "{Binding CELL_SPLY_TYPE_NAME}"                 CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "PJT"                        Binding = "{Binding PRJT_NAME}"                           CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "모델 LOT"                   Binding = "{Binding MDLLOT_ID}"                           CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "REQ_NO"                     Binding = "{Binding CELL_SPLY_REQ_ID}"                    CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center"/>
                                            <c1:DataGridTextColumn      Header = "요청상태"                   Binding = "{Binding CELL_SPLY_STAT_CODE}"                  CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "요청수량(PLT)"              Binding = "{Binding REQ_QTY}"                             CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "REQ_DATE"                   Binding = "{Binding REQ_DTTM}"                            CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "상태변경일시"               Binding = "{Binding CELL_SPLY_STAT_CHG_DTTM}"             CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "REQ_USERNAME"               Binding = "{Binding REQ_USERNAME}"                        CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "요청비고"                   Binding = "{Binding NOTE}"                                CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Left" MinWidth="700"/>
                                            <c1:DataGridTextColumn      Header = "PROD_ID"                    Binding = "{Binding PROD_ID}"                             CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "REQ_NO"                     Binding = "{Binding CELL_SPLY_RSPN_ID}"                    CanUserSort="False"   Width="Auto"  IsReadOnly="True" HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>
                                    </uc:UcBaseDataGrid>
                                </Grid>

                                <!--하단내용-->
                                <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <GridSplitter Grid.Column="1" Grid.ColumnSpan="999" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />


                                    <Grid Name="gridOrderRequestPalletList"  Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="350"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border    Grid.Column="0" Grid.ColumnSpan="99" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                                            <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='AVAILABLE LOCATION', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                            <uc:UcBaseButton    Grid.Column="2" x:Name="btnLocation"   Content="{Binding ConverterParameter=SEARCH,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnLocation_Click" Margin="5" Cursor="Hand" Visibility="Visible"/>                                            
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Border Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                                            <uc:UcBaseDataGrid Name="dgOrderRequestPalletList" 
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           SelectionMode="MultiRange" 
                                                           ColumnHeaderHeight="38" 
                                                           CanUserSort="False"  
                                                           CanUserFilter="False" 
                                                           LoadedCellPresenter="dgRequestPalletList_LoadedCellPresenter" 
                                                           MouseDoubleClick="dgRequestPalletList_MouseDoubleClick" >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn      Header = "Location"                        Binding = "{Binding RACK_NAME}"                     Width="Auto"   HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn      Header = "출하가능수량"                     Binding = "{Binding SHIP_ABLE}"                     Width="Auto"   HorizontalAlignment="Right"  IsReadOnly="True" />
                                                    <c1:DataGridTextColumn      Header = "PJT"                             Binding = "{Binding PRJT_NAME}"                     Width="Auto"   HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn      Header = "ADAP"                            Binding = "{Binding AVG_DAYS_ELAPSED}"              Width="Auto"   HorizontalAlignment="Right"  IsReadOnly="True" />
                                                    <c1:DataGridTextColumn      Header = "QEW-7"                           Binding = "{Binding QTY_EXPIRRING_WITHIN_7DAYS}"    Width="Auto"   HorizontalAlignment="Right"  IsReadOnly="True" />
                                                    <c1:DataGridTextColumn      Header = "Last Outbound DTTM"              Binding = "{Binding LAST_OUTBOUND_DTTM}"            Width="Auto"   HorizontalAlignment="Left"   IsReadOnly="True" />
                                                    <c1:DataGridTextColumn      Header = "AREAID"                          Binding = "{Binding AREAID}"                        IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn      Header = "WH_PHYS_PSTN_CODE"               Binding = "{Binding WH_PHYS_PSTN_CODE}"             IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn      Header = "EQSGID"                          Binding = "{Binding EQSGID}"                        IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn      Header = "WH_ID"                           Binding = "{Binding WH_ID}"                         IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn      Header = "RACK_ID"                         Binding = "{Binding RACK_ID}"                       IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn      Header = "PRODID"                          Binding = "{Binding PRODID}"                        IsReadOnly="True" Visibility="Collapsed" />
                                                </c1:C1DataGrid.Columns>

                                            </uc:UcBaseDataGrid>

                                        </Grid>

                                    </Grid>

                                    <Grid Name="gridRequestPalletList"  Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="350"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border    Grid.Column="0" Grid.ColumnSpan="99" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                                            <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='REQUEST PALLET LIST', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Border Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                                            <uc:UcBaseDataGrid Name="dgRequestPalletList" 
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           SelectionMode="MultiRange" 
                                                           CanUserSort="False" 
                                                           CanUserFilter="False" 
                                                          >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn        Header = "Pallet ID"          Binding = "{Binding BOXID}"              Width="Auto"  HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn        Header = "Pallet BCD"         Binding = "{Binding PLLT_BCD_ID}"        Width="Auto"  HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn        Header = "WH_ID"              Binding = "{Binding WH_NAME}"            Width="Auto"  HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn        Header = "LOCATION"           Binding = "{Binding RACK_NAME}"          Width="Auto"  HorizontalAlignment="Center" IsReadOnly="True" />
                                                </c1:C1DataGrid.Columns>

                                            </uc:UcBaseDataGrid>
                                        </Grid>
                                    </Grid>

                                    <GridSplitter Grid.Row="1" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="40"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="200"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>
                                            <Border    Grid.Column="0" Grid.ColumnSpan="99" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                                            <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='SCAN_RSLT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                            <Grid Grid.Column="2">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right"><Run Text="{Binding ConverterParameter='PALLET ID/BCD', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                                <TextBox   x:Name="txtPalletCSTID"    Grid.Column="1"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtPalletCSTID_KeyDown" />
                                            </Grid>
                                            <Grid Grid.Column="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="120"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right"><Run Text="{Binding ConverterParameter='SCAN_RSLT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                                <TextBox   Grid.Column="1" x:Name="txtScanReqQty" IsEnabled="False" Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                            </Grid>
                                            <uc:UcBaseButton    Grid.Column="4" x:Name="btnShippment"        Content="{Binding ConverterParameter=출하,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnShippment_Click" Margin="10,0" />
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Border  Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                                            <uc:UcBaseDataGrid Name="dgScanPalletList" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn        Header = "Pallet ID"      Binding = "{Binding BOXID}"            HorizontalAlignment="Center" IsReadOnly="True"    Width="Auto"  />
                                                    <c1:DataGridTextColumn        Header = "Pallet BCD"     Binding = "{Binding PLLT_BCD_ID}"      HorizontalAlignment="Center" IsReadOnly="True"    Width="Auto"  />
                                                    <c1:DataGridTextColumn        Header = "PALLET상태"     Binding = "{Binding STATUS}"           HorizontalAlignment="Center" IsReadOnly="True"    Width="Auto"  />
                                                    <c1:DataGridTextColumn        Header = "QTY"            Binding = "{Binding QTY}"              HorizontalAlignment="Right"  IsReadOnly="True"    Width="Auto"  Format="###,##0" />
                                                    <c1:DataGridTextColumn        Header = "PJT"            Binding = "{Binding PRJT_NAME}"        HorizontalAlignment="Left"   IsReadOnly="True"    Width="Auto"  />
                                                    <c1:DataGridTextColumn        Header = "Line"           Binding = "{Binding EQSGNAME}"         HorizontalAlignment="Left"   IsReadOnly="True"    Width="Auto"  />

                                                    <c1:DataGridTemplateColumn    ctrlLib:DataGridMergeExtension.MergeMode="HORIZONTAL" >
                                                        <c1:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Button Content="{Binding ConverterParameter=Delete, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" x:Name="btnRowDelete"  Height="Auto" HorizontalAlignment="Stretch" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}"  Click="btnRowDelete_Click" ></Button>
                                                            </DataTemplate>
                                                        </c1:DataGridTemplateColumn.CellTemplate>
                                                    </c1:DataGridTemplateColumn>

                                                    <c1:DataGridTextColumn        Binding = "{Binding  INSTRANSIT_SLOC_ID}"    IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn        Binding = "{Binding  WH_ID}"                 IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn        Binding = "{Binding  RACK_ID}"               IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn        Binding = "{Binding  LOTTYPE}"               IsReadOnly="True" Visibility="Collapsed" /> 

                                                </c1:C1DataGrid.Columns>
                                            </uc:UcBaseDataGrid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>

                        </c1:C1TabItem>

                        <c1:C1TabItem x:Name="Model" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='포장출고이력'}" >
                            <Grid>

                                <!--모델 리스트-->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="50" />
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="5*"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="5*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="110" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="110" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Border    Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="99" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                                <TextBlock                                     Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='기간',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
