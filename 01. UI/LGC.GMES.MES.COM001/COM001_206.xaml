                                        <c1:DataGridTextColumn      Header = "WIPSEQ"                  Binding = "{Binding WIPSEQ}"               IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--선택목록-->
