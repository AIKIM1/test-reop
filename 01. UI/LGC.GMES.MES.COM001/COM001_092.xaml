                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn Header = "PJT" Binding = "{Binding PJT_NAME}" Width="Auto" HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn Header = "LOTID" Binding = "{Binding LOTID}" Width="Auto" HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridNumericColumn Header = "수량" Binding = "{Binding WIPQTY}" Width="Auto" Format="F2" ShowButtons="False" HandleUpDownKeys="False"  IsReadOnly="True" />
                                            <c1:DataGridTextColumn Header = "LANE수" Binding = "{Binding LANE_QTY}" Width="Auto" HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn Header = "RACKID" Binding = "{Binding RACKID}" Width="Auto" HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn Header = "유효일자" Binding = "{Binding DIFFDATE}" Width="Auto" HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTemplateColumn Name="ABNORM_FLAG" Header="특이사항보고" Width="Auto" HorizontalAlignment="Center" EditOnSelection="True" Visibility="Collapsed" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding ABNORM_FLAG, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="chkAbnorm_Checked" Unchecked="chkAbnorm_Unchecked" Click="chkAbnorm_Click" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn Header = "SKIDID" Binding = "{Binding SKIDID}" Width="Auto" HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn Header = "선입선출제외" Binding = "{Binding HOT_FLAG}" Width="Auto" HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn Header = "표시" Binding = "{Binding BACKCOLOR}" Width="Auto" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!--start Panel4-->
                    <Grid x:Name="dgPanel4" Grid.Row="3" Grid.Column="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
