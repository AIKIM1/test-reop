                            <c1:DataGridTextColumn Header = "NTC설비ID" Binding = "{Binding EQPTIDS}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn Header = "NTC설비명" Binding = "{Binding EQPTNAMES}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                        </c1:C1DataGrid.Columns>
                    </c1:C1DataGrid>
                </Grid>
                
                <Grid x:Name="ContentGrid" Grid.Row="2" Grid.Column="2">
