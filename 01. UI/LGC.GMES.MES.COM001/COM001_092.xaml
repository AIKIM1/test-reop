<UserControl x:Class="LGC.GMES.MES.COM001.COM001_092"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Initialized="UserControl_Initialized" Loaded="UserControl_Loaded"  Unloaded="UserControl_Unloaded" KeyDown="UserControl_KeyDown" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="#FFDDDDDD" x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="선입선출 현황판">
            <Grid x:Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--#region Panel Contents Area -->
                <Grid x:Name="SearchGrid" Grid.Row="2" Grid.Column="0" Background="White" Margin="0,0,0,8">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="0"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="25"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="20"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="5"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Button Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="btnFullScreen" Content="{Binding ConverterParameter=전체 화면, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnFullScreen_Click" />
                    <Button Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" x:Name="btnSpecialLot" Content="{Binding ConverterParameter=특이사항 대기품, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnAbnormal_Click" Visibility="Collapsed" />
                    <Button Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" x:Name="btnRefresh" Content="{Binding ConverterParameter=수동 REFRESH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnRefresh_Click" />
                    <Grid Background="White" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='갱신주기(SEC)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                        <c1:C1NumericBox Grid.Column="2" x:Name="txtCycle" ShowButtons="True" Minimum="20" Maximum="600" Value="20"  Format="F0" Margin="0,1" />
                        <Button Grid.Column="4" x:Name="btnCycle" Content="{Binding ConverterParameter=설정, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnCycle_Click"  />
                    </Grid>
                    <CheckBox Grid.Row="9" Grid.Column="1" Grid.ColumnSpan="2" x:Name="chkRack" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=미 입고 RACK ID 포함 }"  IsChecked="True" FlowDirection="RightToLeft" Checked="chkRack_Checked" Unchecked="chkRack_Checked"  />
                    <CheckBox Grid.Row="11" Grid.Column="1" Grid.ColumnSpan="2" x:Name="chkOrder" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=선입선출제외 하단정렬 }" FlowDirection="RightToLeft" Checked="chkOrder_Checked" Unchecked="chkOrder_Checked" />
                    <CheckBox Grid.Row="12" Grid.Column="1" Grid.ColumnSpan="2" x:Name="chkLayout" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=레이아웃 변경 }" FlowDirection="RightToLeft" Checked="chkLayout_Checked" Unchecked="chkLayout_UnChecked" />

                    <TextBlock Grid.Row="13" Grid.Column="1" VerticalAlignment="Top" Text="{Binding ConverterParameter='공정선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
