                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="1*" />
                        <!--레이아웃 변경 체크 부분-->
                        <ColumnDefinition Width="0" />
                        <ColumnDefinition Width="0" />
                        <!--====================== -->
                    </Grid.ColumnDefinitions>
                    
                    <!-- Inner Spliter -->
                    <GridSplitter Grid.Row="1" Grid.Column="1" ResizeDirection="Columns"  ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                    <GridSplitter Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                    <GridSplitter Grid.Row="3" Grid.Column="1" ResizeDirection="Columns"  ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                    
