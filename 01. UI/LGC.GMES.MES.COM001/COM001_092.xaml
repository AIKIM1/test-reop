                        <c1:C1DataGrid.Columns>
                            <c1:DataGridTemplateColumn Name="CHK" Width="Auto" HorizontalAlignment="Center" EditOnSelection="True" >
                                <c1:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="chkProcess_Checked" Unchecked="chkProcess_UnChecked"/>
                                    </DataTemplate>
                                </c1:DataGridTemplateColumn.CellTemplate>
                            </c1:DataGridTemplateColumn>
                            <!--<c1:DataGridCheckBoxColumn Binding="{Binding CHK}" HorizontalAlignment="Center" EditOnSelection="True" />-->
                            <c1:DataGridTextColumn Header = "공정" Binding = "{Binding CMCODE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn Header = "공정명" Binding = "{Binding CMCDNAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                            <c1:DataGridTextColumn Header = "공정약어" Binding = "{Binding ATTRIBUTE1}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn Header = "공정코드" Binding = "{Binding ATTRIBUTE2}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                        </c1:C1DataGrid.Columns>
                    </c1:C1DataGrid>

                    <c1:C1ComboBox Grid.Row="15" Grid.Column="1" Grid.ColumnSpan="2" x:Name="cboNotchingLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Visibility="Collapsed" SelectedValueChanged="cboNotchingLine_SelectedValueChanged"  />

                    <TextBlock Grid.Row="17" Grid.Column="1" VerticalAlignment="Top" Text="{Binding ConverterParameter='라인선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <c1:C1DataGrid Grid.Row="17" Grid.Column="2" x:Name="dgProcessDetail" IsReadOnly="True" HeadersVisibility="None" SelectionMode="None" CanUserAddRows="True" CanUserRemoveRows="True" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" GridLinesVisibility="None" Background="Transparent" >
                        <c1:C1DataGrid.Columns>
                            <c1:DataGridTemplateColumn Name="CHK" Width="Auto" HorizontalAlignment="Center" EditOnSelection="True" >
                                <c1:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="chkProcessDetail_Checked" Unchecked="chkProcessDetail_UnChecked" />
                                    </DataTemplate>
                                </c1:DataGridTemplateColumn.CellTemplate>
                            </c1:DataGridTemplateColumn>
                            <c1:DataGridTextColumn Header = "설비ID" Binding = "{Binding EQPTID}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                            <c1:DataGridTextColumn Header = "설비명" Binding = "{Binding EQPTNAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                            <c1:DataGridTextColumn Header = "설비약어" Binding = "{Binding EQGRID}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
