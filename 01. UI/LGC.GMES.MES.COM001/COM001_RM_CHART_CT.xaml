<c1:C1Window xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  
             x:Class="LGC.GMES.MES.COM001.COM001_RM_CHART_CT"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             xmlns:c1c="clr-namespace:C1.WPF.C1Chart;assembly=C1.WPF.C1Chart.4"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='RollMap 2.0'}" 
             mc:Ignorable="d"
             Width="1024" 
             Height="768"
             IsResizable="False"
             x:Name="windowRollMap"
             Loaded="UserControl_Loaded" 
             Closed="UserControl_Closed" Closing="windowRollMap_Closing" 
             >

    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>

    <Grid>
        <Grid x:Name="grdMain">
            <Grid.Resources>
                <DataTemplate x:Key="chartLabel">
                    <Grid >
                        <Label Background="{Binding DataObject.COLORMAP}" Height="20" MinWidth="22"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Cursor="Hand"  Margin="21,0,0,0" BorderThickness="0.5" >
                            <TextBlock Text="{Binding DataObject.ROLLMAP_CLCT_TYPE}" FontSize="11" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" ToolTipService.ShowDuration="60000">
                                <TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </Label>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartTag">
                    <Grid>
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="{Binding DataObject.COLORMAP}" CornerRadius="3" Style="{StaticResource BorderSubTitleStyle}" Background="{Binding DataObject.COLORMAP}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <TextBlock Text="{Binding DataObject.TAGNAME}" Tag="{Binding DataObject.TAG}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Height="12" Width="12" FontFamily="맑은 고딕" FontSize="10" Foreground="Black" FontWeight="Bold" Cursor="Hand" ToolTipService.ShowDuration="60000" >
                                <TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartSectionTag">
                    <Grid >
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="{Binding DataObject.COLORMAP}" CornerRadius="3" Style="{StaticResource BorderSubTitleStyle}" Background="{Binding DataObject.COLORMAP}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <TextBlock x:Name="tbTagSection" Text="{Binding DataObject.TAGNAME}" Tag="{Binding DataObject.TAG}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Height="12" Width="12" FontFamily="맑은 고딕" FontSize="10" Foreground="Black" FontWeight="Bold" Cursor="Hand"  ToolTipService.ShowDuration="60000" Margin="0,-1,0,0" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" PreviewMouseLeftButtonDown="tbTagSection_PreviewMouseLeftButtonDown">
                                <TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>
                                <TextBlock.ContextMenu>
                                    <ContextMenu>
                                        <MenuItem x:Name="tagMerge" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='병합'}"  Click="tagMerge_Click" IsEnabled="{Binding DataObject.IsEnabled}" />
                                    </ContextMenu>
                                </TextBlock.ContextMenu>
                            </TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartSpotTag">
                    <Grid >
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="{Binding DataObject.COLORMAP}" CornerRadius="3" Style="{StaticResource BorderSubTitleStyle}" Background="{Binding DataObject.COLORMAP}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <TextBlock Text="{Binding DataObject.TAGNAME}" Tag="{Binding DataObject.TAG}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Height="12" Width="12" FontFamily="맑은 고딕" FontSize="10" Foreground="Black" FontWeight="Bold" Cursor="Hand"  ToolTipService.ShowDuration="60000" Margin="0,-1,0,0" >
                                <TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartLane">
                    <Grid>
                        <TextBlock Text="{Binding DataObject.LANEINFO}" FontSize="12" Foreground="Black" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Background="Transparent">
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartMaterial">
                    <Grid>
                        <TextBlock Text="{Binding DataObject.INPUT_LOTID}" FontSize="10" Foreground="Black" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-5" Background="Transparent">
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartSample">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding DataObject.STRT_PSTN}" Grid.Column="0"  FontSize="11" Foreground="Blue" FontWeight="Bold" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0" Background="Transparent" Cursor="Hand" />
                        <Grid Grid.Column="1" Cursor="Hand" ToolTipService.ShowDuration="60000">
                            <Path  Data="M11,21H7V19H11V21M15.5,19H17V21H13V19H13.2L11.8,12.9L9.3,13.5C9.2,14 9,14.4 8.8,14.8C7.9,16.3 6,16.7 4.5,15.8C3,14.9 2.6,13 3.5,11.5C4.4,10 6.3,9.6 7.8,10.5C8.2,10.7 8.5,11.1 8.7,11.4L11.2,10.8L10.6,8.3C10.2,8.2 9.8,8 9.4,7.8C8,6.9 7.5,5 8.4,3.5C9.3,2 11.2,1.6 12.7,2.5C14.2,3.4 14.6,5.3 13.7,6.8C13.5,7.2 13.1,7.5 12.8,7.7L15.5,19M7,11.8C6.3,11.3 5.3,11.6 4.8,12.3C4.3,13 4.6,14 5.3,14.4C6,14.9 7,14.7 7.5,13.9C7.9,13.2 7.7,12.2 7,11.8M12.4,6C12.9,5.3 12.6,4.3 11.9,3.8C11.2,3.3 10.2,3.6 9.7,4.3C9.3,5 9.5,6 10.3,6.5C11,6.9 12,6.7 12.4,6M12.8,11.3C12.6,11.2 12.4,11.2 12.3,11.4C12.2,11.6 12.2,11.8 12.4,11.9C12.6,12 12.8,12 12.9,11.8C13.1,11.6 13,11.4 12.8,11.3M21,8.5L14.5,10L15,12.2L22.5,10.4L23,9.7L21,8.5M23,19H19V21H23V19M5,19H1V21H5V19Z" Stretch="Uniform" Fill="Black" />
                            <Grid.ToolTip>
                                <Grid>
                                    <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                </Grid>
                            </Grid.ToolTip>
                        </Grid>
                        <TextBlock Text="{Binding DataObject.END_PSTN}" Grid.Column="2"  FontSize="11" Foreground="Blue" FontWeight="Bold" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0" Background="Transparent" Cursor="Hand" ToolTipService.ShowDuration="60000">
                            <TextBlock.ToolTip>
                                <Grid>
                                    <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                </Grid>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartCircle">
                    <Grid>
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="5" BorderBrush="{Binding DataObject.COLORMAP}" CornerRadius="20" Style="{StaticResource BorderSubTitleStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0" >
                            <TextBlock Text="{Binding DataObject.CIRCLENAME}" TextWrapping="Wrap" TextAlignment="Center" Height="36" Width="36" FontFamily="맑은 고딕" FontSize="14" Foreground="Black" FontWeight="Bold" Cursor="Hand" Padding="0,8,0,0" >
                            </TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="arrowRight">
                    <Grid>
                        <Path Data="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z" Stretch="Fill" Fill="Black"  Stroke="Black"  StrokeThickness="1" />
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartLength">
                    <Grid Cursor="Hand" ToolTipService.ShowDuration="60000">
                        <TextBlock Text="{Binding DataObject.RAW_END_PSTN}" FontSize="{Binding DataObject.FONTSIZE}" Foreground="Blue" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Background="Transparent" >
                        </TextBlock>
                        <Grid.ToolTip>
                            <Grid >
                                <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                            </Grid>
                        </Grid.ToolTip>
                    </Grid>
                </DataTemplate>

            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="3" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="3" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="1" x:Name="grdHeader">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="3"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}"></Border>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4" />
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0" Grid.Column="1" Margin="5,0,0,0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <TextBox   Grid.Column="1" x:Name="txtLot" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" CharacterCasing="Upper" IsReadOnly="False" KeyDown="txtLot_KeyDown"  />

                        <TextBlock Grid.Column="3" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <TextBox   Grid.Column="4" x:Name="txtEquipmentName" Style="{StaticResource SearchCondition_TextBoxStyle}" CharacterCasing="Upper" IsReadOnly="True" MinWidth="100" />
                    </Grid>

                    <Grid x:Name="gdMeasurementradio" Grid.Row="0" Grid.Column="3" Margin="5,0,0,0" Visibility="Collapsed">
                        <GroupBox x:Name="gbxMeasrPointradio" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='계측기'}"  Width="Auto" HorizontalContentAlignment="Center" >
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="2"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="1" Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <RadioButton Name="rdoWebgaugeWet" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='로딩량(Wet)', Converter={StaticResource GlobalObjectDicConverter}}" GroupName="rdoMeasurement" Margin="5,0,5,3" IsChecked="True"/>
                                    <RadioButton Name="rdoWebgaugeDry" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='로딩량(Dry)', Converter={StaticResource GlobalObjectDicConverter}}" GroupName="rdoMeasurement" Margin="5,0,5,3" />
                                    <!--<RadioButton Name="rdoWebgaugeTotalDry" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='로딩량(절대)', Converter={StaticResource GlobalObjectDicConverter}}" GroupName="rdoMeasurement" Margin="5,0,5,3" Visibility="Collapsed"/>-->
                                </StackPanel>
                                <StackPanel Grid.Column="3" Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <RadioButton Name="rdoThickness" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='두꼐', Converter={StaticResource GlobalObjectDicConverter}}" GroupName="rdoMeasurement" Margin="5,0,5,3" />
                                    <RadioButton Name="rdoWebgaugeTotalDry" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='로딩량(절대)', Converter={StaticResource GlobalObjectDicConverter}}" GroupName="rdoMeasurement" Margin="5,0,5,3" Visibility="Collapsed"/>
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid x:Name="gdMeasurementcombo" Grid.Row="0" Grid.Column="5" Margin="5,0,0,0" Visibility="Visible">
                        <GroupBox x:Name="gbxMeasrPointcombo" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='계측기'}"  Width="Auto" HorizontalContentAlignment="Center" Visibility="Visible">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="2" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='TOP', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <c1:C1ComboBox  Grid.Column="1"  x:Name="cboMeasurementTop" DisplayMemberPath="CMCDNAME" SelectedValuePath="CMCODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="100" />
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='BACK', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <c1:C1ComboBox  Grid.Column="1"  x:Name="cboMeasurementBack" DisplayMemberPath="CMCDNAME" SelectedValuePath="CMCODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  MinWidth="100"/>
                                </Grid>
                                <!--<Grid x:Name="gdTotalCheck" Grid.Row="1" Grid.Column="3" Grid.RowSpan="3">
                                    <CheckBox Name="chkTotal" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding ConverterParameter='TOTAL', Converter={StaticResource GlobalObjectDicConverter}}"  Margin="5,0,5,3" Click="chkTotal_Click" IsChecked="False" />
                                </Grid>-->
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid x:Name="gdMapExpress" Grid.Row="0" Grid.Column="7" Margin="5,0,0,0">
                        <GroupBox x:Name="gbxMapExpress" Grid.Row="0" Grid.Column="5" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='맵표현 설정'}"  Width="Auto" HorizontalContentAlignment="Center">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="2" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='요약', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <c1:C1ComboBox  Grid.Column="1"  x:Name="cboRollMapExpressSummary" DisplayMemberPath="COM_CODE" SelectedValuePath="COM_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboRollMapExpressSummary_SelectedValueChanged" />
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='LANE 선택', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <ctrlLib:MultiSelectionBox Grid.Column="1" x:Name="msbRollMapLane" DisplayMemberPath="COM_CODE_DESC" SelectedValuePath="COM_CODE" Margin="0,-4,0,0" />
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid x:Name="gdColorMap" Grid.Row="0" Grid.Column="9" Margin="5,0,0,0">
                        <GroupBox x:Name="gbxColorMap" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='색지도 표현'}" Width="Auto" HorizontalContentAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="1" Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='Grade 블록', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoGradeBlock" GroupName="rdoColorMap" Margin="5,0,5,3" IsChecked="True"/>
                                    <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='평균값 상세', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoAverageDetail" GroupName="rdoColorMap" Margin="5,0,5,3" />
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid x:Name="gdCoordinate" Grid.Row="0" Grid.Column="11" Margin="5,0,0,0">
                        <GroupBox x:Name="gbxCoordinate" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='롤맵보정'}" Width="Auto" HorizontalContentAlignment="Center">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="1" Orientation="Vertical"  HorizontalAlignment="Center" VerticalAlignment="Center">
                                    <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='롤맵보정이후', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoRelativeCoordinates" GroupName="rdoCoordinate" Margin="5,0,5,3" Click="rdoRelativeCoordinates_Click" IsChecked="True"/>
                                    <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='롤맵보정이전', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoAbsolutecoordinates" GroupName="rdoCoordinate" Margin="5,0,5,3" Click="rdoAbsolutecoordinates_Click" />
                                </StackPanel>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid x:Name="gdLegend" Grid.Row="0" Grid.Column="13" Margin="5,0,0,0">
                        <GroupBox x:Name="gbxLegend" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='범례'}" HorizontalContentAlignment="Center">
                            <Grid x:Name="grdLegend" HorizontalAlignment="Left"  VerticalAlignment="Center">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="2" />
                                </Grid.RowDefinitions>
                                <Grid x:Name="grdLegendTop" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Row="1">
                                </Grid>
                                <Grid x:Name="grdLegendBack" HorizontalAlignment="Left"  VerticalAlignment="Center" Grid.Row="3" Visibility="Collapsed">
                                </Grid>
                            </Grid>
                        </GroupBox>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="17" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnRollMapOutsideScrap" Grid.Column="0" Content="{Binding ConverterParameter=최외각 폐기, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand"
                                Click="btnRollMapOutsideScrap_Click" />
                        <Button x:Name="btnRollMapPositionEdit" Grid.Column="2" Content="{Binding ConverterParameter=구간불량 등록, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand"
                                Click="btnRollMapPositionEdit_Click" />
                        <Button x:Name="btnDefect" Grid.Column="4" Content="{Binding ConverterParameter=불량, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}"  Cursor="Hand" IsEnabled="True"
                                Click="btnDefect_Click" />
                        <Button x:Name="btnSearch" Grid.Column="6" Content="{Binding ConverterParameter=조회, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand"
                                Click="btnSearch_Click" />
                    </Grid>
                </Grid>
            </Grid>

            <!-- MAP -->
            <Grid Grid.Row="3" x:Name="grdRollMap">
                <Grid.RowDefinitions>
                    <RowDefinition Height="0.8*" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="2.5*" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="4.*" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="3.*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid Grid.Row="0" x:Name="grd">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <c1c:C1Chart x:Name="chart" Grid.Row="0" Grid.Column="2" ChartType="XYPlot" Margin="0" Padding="10,0,10,0" >
                            <c1c:C1Chart.Data >
                                <c1c:ChartData>
                                    <c1c:XYDataSeries x:Name="xyDataSeries"/>
