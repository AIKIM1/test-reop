            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <c1:C1TabControl SelectionChanged="C1TabControl_SelectionChanged">
                        <!-- 등록 Tool 목록 -->
                        <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='등록 Tool 목록'}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Search Area -->
                                <Grid x:Name="SearchAreaTool" Grid.Row="1" >
