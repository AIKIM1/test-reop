                                    <TextBox       Grid.Row="1"  Grid.Column="2"  x:Name="txtToolAreaID"            Style="{StaticResource SearchCondition_TextBoxStyle}" IsReadOnly="True"/>
                                    <c1:C1ComboBox Grid.Row="1"  Grid.Column="4"  x:Name="cboToolEquipmentSegment"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
