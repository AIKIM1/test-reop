<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_219"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid  x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="파우치 활성화 불량 대차 폐기">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                        </Grid>
                    </DataTemplate>
                  
                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <c1:C1TabControl>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량대차 폐기'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="2.*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>
                            <GridSplitter Grid.Row="4" Grid.ColumnSpan="4" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="15" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                               

                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='PJT명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='대차ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock  Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='조립LOTID',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>


                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboAreaScrap"                Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="3" x:Name="cboProcessScrap"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="5" x:Name="cboEquipmentSegmentScrap"          Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                             

                                <TextBox         Grid.Row="1" Grid.Column="1" x:Name="txtPrjtNameScrap"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"/>
                                <TextBox         Grid.Row="1" Grid.Column="3" x:Name="txtProdidScrap"               Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <TextBox         Grid.Row="1" Grid.Column="5" x:Name="txtCtnrIDScrap"               Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" KeyDown="txtCtnrIDScrap_KeyDown"/>
                                <TextBox         Grid.Row="1" Grid.Column="7" x:Name="txtLotRTDScrap"               Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"/>
                                

                                <!--조회 버튼-->
                                <Button     Grid.Row="0" Grid.Column="11"  Grid.RowSpan="2" x:Name="btnReSet" Content="{Binding ConverterParameter=초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnReSet_Click" Height="29"/>
                                <Button     Grid.Row="0" Grid.Column="13" Grid.RowSpan="2" x:Name="btnSearchScrap" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchScrap_Click" />

                            </Grid>

                            <!--대상목록-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='조회목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                     <c1:C1DataGrid x:Name="dgListInput" Grid.Row="1" IsReadOnly="False" HeadersVisibility="Column"     CanUserRemoveRows="True" CanUserAddRows="True" SelectionMode="SingleRow" Margin="10,6,6,10" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgCtnrChk" IsChecked="{Binding CHK, Mode=OneWay}" x:Name="dgScrapCtnrChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgCtnrChk_Checked"/>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "대차ID"             Binding = "{Binding CTNR_ID}"                    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "PJT"                Binding = "{Binding PRJT_NAME}"                  HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "제품"               Binding = "{Binding PRODID}"                     HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "시장유형"           Binding = "{Binding MKT_TYPE_NAME}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "작업유형"           Binding = "{Binding FORM_WRK_TYPE_NAME}"         HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "대차상태"           Binding = "{Binding CTNR_STAT_NAME}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridNumericColumn   Header = "Cell수량"           Binding = "{Binding WIPQTY}"                     HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "MKT_TYPE_CODE"      Binding = "{Binding MKT_TYPE_CODE}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "FORM_WRK_TYPE_CODE" Binding = "{Binding FORM_WRK_TYPE_CODE}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "CTNR_STAT_CODE"     Binding = "{Binding CTNR_STAT_CODE}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WIPSTAT"            Binding = "{Binding WIPSTAT}"                    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WIPSNAME"           Binding = "{Binding WIPSNAME}"                   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridNumericColumn   Header = "SCAN_QTY"           Binding = "{Binding SCAN_QTY}"                   HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header = "NON_SCAN_QTY"       Binding = "{Binding NON_SCAN_QTY}"               HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "CELL_ID_MNGT_FLAG"  Binding = "{Binding CELL_ID_MNGT_FLAG}"          HorizontalAlignment="Center" IsReadOnly="True"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "PROCID"             Binding = "{Binding PROCID}"                     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "EQSGID"             Binding = "{Binding EQSGID}"                     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                      
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--선택목록-->
                            <Grid Grid.Row="5" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgSelectInput" Grid.Row="1"  IsReadOnly="False" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="10,10,6,6">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "대차ID"             Binding = "{Binding CTNR_ID}"                    HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "PJT"                Binding = "{Binding PRJT_NAME}"                  HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "제품"               Binding = "{Binding PRODID}"                     HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "시장유형"           Binding = "{Binding MKT_TYPE_NAME}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "작업유형"           Binding = "{Binding FORM_WRK_TYPE_NAME}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "대차상태"           Binding = "{Binding CTNR_STAT_NAME}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "INBOX상태"          Binding = "{Binding WIPSNAME}"                   HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridNumericColumn   Header = "Cell수량"           Binding = "{Binding WIPQTY}"                     HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "Scan Cell수량"      Binding = "{Binding SCAN_QTY}"                   HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True"/>
                                        <c1:DataGridNumericColumn   Header = "미Scan Cell수량"    Binding = "{Binding NON_SCAN_QTY}"               HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "MKT_TYPE_CODE"      Binding = "{Binding MKT_TYPE_CODE}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "FORM_WRK_TYPE_CODE" Binding = "{Binding FORM_WRK_TYPE_CODE}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "CTNR_STAT_CODE"     Binding = "{Binding CTNR_STAT_CODE}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "WIPSTAT"            Binding = "{Binding WIPSTAT}"                    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "CELL_ID_MNGT_FLAG"  Binding = "{Binding CELL_ID_MNGT_FLAG}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "PROCID"             Binding = "{Binding PROCID}"                     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "EQSGID"             Binding = "{Binding EQSGID}"                     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--사유영역-->
                            <Grid x:Name="TextArea" Grid.Row="7">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="34"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='폐기사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboActivitiReason"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <TextBlock x:Name="txtEqptType" Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='설비구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1ComboBox   Grid.Row="1" Grid.Column="1" x:Name="cboEqptType"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <TextBlock Grid.Column="2" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='의뢰자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox         Grid.Row="0" Grid.Column="3" x:Name="txtUserNameCr"  MinWidth="140" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtUserName_KeyDown"/>
                                <Button  Grid.Column="4" Width="30" x:Name="btnUserCr"    Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnUser_Click" HorizontalAlignment="Left"/>
                                <TextBlock Grid.Column="7" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='비고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <StackPanel Orientation="Horizontal"  Grid.Row="0" Grid.Column="8" Grid.ColumnSpan="5" Grid.RowSpan="2">
                                    <TextBox         Grid.Row="0" Grid.Column="8" x:Name="txtReson" Height="AUTO"  TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="700"/>
                                </StackPanel>
                                <Button   Grid.Row="0"  Grid.Column="12" x:Name="btnScrapCell"    Content="{Binding ConverterParameter=폐기대상Cell등록,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,0,8,0"  Click="btnScrapCell_Click"/>
                                <Button   Grid.Row="1"  Grid.Column="12" x:Name="btnScrap"  Width="80"  Content="{Binding ConverterParameter=폐기,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,0,8,0" Click="btnScrap_Click"/>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='폐기 이력/취소'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="78"/>
                                <RowDefinition Height="1.*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>


                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="35" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="15" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <!--ROW1-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='기간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <StackPanel Orientation="Horizontal"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3">
                                    <ctrlLib:LGCDatePicker  x:Name="ldpDateFromHist"  DatepickerType="Date" MinWidth="120"/>
                                    <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                                    <ctrlLib:LGCDatePicker  x:Name="ldpDateToHist"  DatepickerType="Date" MinWidth="120"/>
                                </StackPanel>
                                <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="5" x:Name="cboAreaHistory"                Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <TextBlock  Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="7" x:Name="cboProcessHistory" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <TextBlock  Grid.Row="0" Grid.Column="8" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="9" x:Name="cboEquipmentSegmentHistory" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                              
                                <TextBlock                         Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='PJT명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtPjtHistory" Grid.Row="1" Grid.Column="1"  MinWidth="120" Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                                <TextBlock                         Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='제품ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtProdID"     Grid.Row="1" Grid.Column="3" MinWidth="120" Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <TextBlock                         Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='조립LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtLotHistory" Grid.Row="1" Grid.Column="5"         Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <TextBlock  Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='폐기상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   Grid.Row="1" Grid.Column="7" x:Name="cboScrapStat" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <TextBlock  Grid.Row="1" Grid.Column="8" Text="{Binding ConverterParameter='Cell ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtCellID" Grid.Row="1" Grid.Column="9" MinWidth="120"  CharacterCasing="Upper" Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <TextBlock                         Grid.Row="1" Grid.Column="10" Text="{Binding ConverterParameter='대차ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtCtnrIDHistory" Grid.Row="1" Grid.Column="11"     MinWidth="120" KeyDown="txtCtnrIDHistory_KeyDown"    Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <!--조회 버튼-->
                                <Button Grid.Row="0" Grid.Column="13"  x:Name="btnSearchHistory" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchHistory_Click" />
                                
                            </Grid>

                            <!--이력목록-->
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="189*"/>
                                    <ColumnDefinition Width="835*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" Grid.ColumnSpan="2"/>
