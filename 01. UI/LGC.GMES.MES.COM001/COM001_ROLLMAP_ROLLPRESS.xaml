<c1:C1Window xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  
             x:Class="LGC.GMES.MES.COM001.COM001_ROLLMAP_ROLLPRESS"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             xmlns:c1c="clr-namespace:C1.WPF.C1Chart;assembly=C1.WPF.C1Chart.4"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='ROLLMAP'}" 
             mc:Ignorable="d"
             Width="1024" Height="768"
             x:Name="ROLLMAP"
             Loaded="UserControl_Loaded" >

    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>

    <Grid>
        <Grid x:Name="grdMain">
            <Grid.Resources>
                <DataTemplate x:Key="chartLabel">
                    <Grid>
                        <Label Background="{Binding DataObject.COLORMAP}" Height="20" Width="22" Cursor="Hand"  Margin="21,0,0,0" BorderThickness="0.5" >
                            <TextBlock Text="{Binding DataObject.ROLLMAP_CLCT_TYPE}" FontSize="11" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" ToolTipService.ShowDuration="60000">
                                <TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </Label>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartTag">
                    <Grid>
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="{Binding DataObject.COLORMAP}" CornerRadius="3" Style="{StaticResource BorderSubTitleStyle}" Background="{Binding DataObject.COLORMAP}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <TextBlock Text="{Binding DataObject.TAGNAME}" Tag="{Binding DataObject.TAG}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Height="12" Width="12" FontFamily="맑은 고딕" FontSize="10" Foreground="Black" FontWeight="Bold" Cursor="Hand" ToolTipService.ShowDuration="60000" ><!--MouseDown="TextBlock_MouseDown"-->
                                <TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartLane">
                    <Grid>
                        <TextBlock Text="{Binding DataObject.LANEINFO}" FontSize="12" Foreground="Black" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Background="Transparent">
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartMaterial">
                    <Grid>
                        <TextBlock Text="{Binding DataObject.INPUT_LOTID}" FontSize="10" Foreground="Black" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Background="Transparent">
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartSample">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding DataObject.STRT_PSTN}" Grid.Column="0"  FontSize="11" Foreground="Blue" FontWeight="Bold" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0" Background="Transparent" Cursor="Hand"/>
                        <Grid Grid.Column="1" Cursor="Hand" ToolTipService.ShowDuration="60000">
                            <Path  Data="M11,21H7V19H11V21M15.5,19H17V21H13V19H13.2L11.8,12.9L9.3,13.5C9.2,14 9,14.4 8.8,14.8C7.9,16.3 6,16.7 4.5,15.8C3,14.9 2.6,13 3.5,11.5C4.4,10 6.3,9.6 7.8,10.5C8.2,10.7 8.5,11.1 8.7,11.4L11.2,10.8L10.6,8.3C10.2,8.2 9.8,8 9.4,7.8C8,6.9 7.5,5 8.4,3.5C9.3,2 11.2,1.6 12.7,2.5C14.2,3.4 14.6,5.3 13.7,6.8C13.5,7.2 13.1,7.5 12.8,7.7L15.5,19M7,11.8C6.3,11.3 5.3,11.6 4.8,12.3C4.3,13 4.6,14 5.3,14.4C6,14.9 7,14.7 7.5,13.9C7.9,13.2 7.7,12.2 7,11.8M12.4,6C12.9,5.3 12.6,4.3 11.9,3.8C11.2,3.3 10.2,3.6 9.7,4.3C9.3,5 9.5,6 10.3,6.5C11,6.9 12,6.7 12.4,6M12.8,11.3C12.6,11.2 12.4,11.2 12.3,11.4C12.2,11.6 12.2,11.8 12.4,11.9C12.6,12 12.8,12 12.9,11.8C13.1,11.6 13,11.4 12.8,11.3M21,8.5L14.5,10L15,12.2L22.5,10.4L23,9.7L21,8.5M23,19H19V21H23V19M5,19H1V21H5V19Z" Stretch="Uniform" Fill="Black" />
                            <Grid.ToolTip>
                                <Grid>
                                    <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                </Grid>
                            </Grid.ToolTip>
                        </Grid>
                        <TextBlock Text="{Binding DataObject.END_PSTN}" Grid.Column="2"  FontSize="11" Foreground="Blue" FontWeight="Bold" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0" Background="Transparent" Cursor="Hand" ToolTipService.ShowDuration="60000">
                            <TextBlock.ToolTip>
                                <Grid>
                                    <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                </Grid>
                            </TextBlock.ToolTip>
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartCircle">
                    <Grid>
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="5" BorderBrush="{Binding DataObject.COLORMAP}" CornerRadius="20" Style="{StaticResource BorderSubTitleStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" >
                            <TextBlock Text="{Binding DataObject.CIRCLENAME}" TextWrapping="Wrap" TextAlignment="Center" Height="36" Width="36" FontFamily="맑은 고딕" FontSize="14" Foreground="Black" FontWeight="Bold" Cursor="Hand" Padding="0,8,0,0" >
                                <!--<TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>-->
                            </TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="arrowRight">
                    <Grid>
                        <Path Data="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z" Stretch="Fill" Fill="Black"  Stroke="Black"  StrokeThickness="1" />
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartLength">
                    <Grid Cursor="Hand" ToolTipService.ShowDuration="60000">
                        <TextBlock Text="{Binding DataObject.RAW_END_PSTN}" FontSize="11" Foreground="Blue" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Background="Transparent">
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartMerge">
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="18"></RowDefinition>
                            <RowDefinition Height="16"></RowDefinition>    
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="1" Cursor="Hand" ToolTipService.ShowDuration="60000">
                            <Path  Data="M5,10H3V4H11V6H5V10M19,18H13V20H21V14H19V18M5,18V14H3V20H11V18H5M21,4H13V6H19V10H21V4M8,13V15L11,12L8,9V11H3V13H8M16,11V9L13,12L16,15V13H21V11H16Z" Stretch="Uniform" Fill="Black" />
                            <Grid.ToolTip>
                                <Grid>
                                    <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                </Grid>
                            </Grid.ToolTip>
                        </Grid>
                        <TextBlock Text="{Binding DataObject.ADJ_LOTID}" Grid.Row="0" Visibility="{Binding DataObject.ADJ_VISIVILITY}" FontSize="11" Foreground="LimeGreen"  FontWeight="Bold" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0" Background="Transparent" Cursor="Hand" ToolTipService.ShowDuration="60000">
                            <TextBlock.ToolTip>
                                <Grid>
                                    <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                </Grid>
                            </TextBlock.ToolTip>                            
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartPetScrap">
                    <Grid Cursor="Hand" ToolTipService.ShowDuration="60000" MouseLeftButtonDown="Grid_MouseLeftButtonDown" Tag="{Binding DataObject.TAG}" Margin="0">
                        <Polygon Points="0,10 10,10 5,22" Fill="{Binding DataObject.COLORMAP}" Stroke="{Binding DataObject.COLORMAP}" HorizontalAlignment="Center" />
                        <Grid.ToolTip>
                            <Grid>
                                <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                            </Grid>
                        </Grid.ToolTip>
                    </Grid>
                </DataTemplate>                

            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="3" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="3" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="1" x:Name="grdHeader">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="3"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}"></Border>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox   Grid.Column="1" x:Name="txtLot" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" CharacterCasing="Upper" IsReadOnly="False"/>
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox   Grid.Column="1" x:Name="txtEquipmentName" Style="{StaticResource SearchCondition_TextBoxStyle}" CharacterCasing="Upper" IsReadOnly="True"/>
                        </Grid>
                    </Grid>
                    <GroupBox x:Name="gbxMeasrPoint" Grid.Row="0" Grid.Column="3"
                              Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='C/T 계측기'}" 
                              Width="Auto"
                              HorizontalContentAlignment="Center"
                              Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='웹게이지', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoWB" GroupName="rdoMEASR" Margin="5,0,5,3" IsChecked="True" Click="rdoWB_Click" />
                                <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='두께',     Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoTHICK" GroupName="rdoMEASR" Margin="5,0,5,3" Click="rdoTHICK_Click"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <!-- 좌표선택-->
                    <GroupBox x:Name="gbxCoordinate" Grid.Row="0" Grid.Column="4"
                              Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='롤맵보정'}" 
                              Width="Auto"
                              HorizontalContentAlignment="Center"
                              Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='롤맵보정이후', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoP" GroupName="rdoCoordinate" Margin="5,0,5,3" IsChecked="True" Click="rdoP_Click" />
                                <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='롤맵보정이전', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoA" GroupName="rdoCoordinate" Margin="5,0,5,3" Click="rdoA_Click"/>
                            </StackPanel>
                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="gbxColorMap" Grid.Row="0" Grid.Column="5"
                              Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='범례'}" 
                              Width="Auto"
                              HorizontalContentAlignment="Center"
                              Visibility="Visible">
                        <Grid x:Name="grdLegend" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
                    </GroupBox>
                    <!-- SIDE 조회-->
                    <GroupBox x:Name="gbxSIDE" Grid.Row="0" Grid.Column="6"
                              Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Color Map'}" 
                              Width="Auto"
                              HorizontalContentAlignment="Center"
                              Visibility="Collapsed">
                        <!--<Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <CheckBox x:Name="chkTop" Grid.Column="0" 
                              Content="{Binding ConverterParameter='Top', Converter={StaticResource GlobalObjectDicConverter}}"  
                              Style="{StaticResource SearchCondition_CheckBoxStyle}" 
                              MinWidth="100" 
                              IsChecked="True"
                              Cursor="Hand"/>
                            <CheckBox x:Name="chkBack" Grid.Column="2" 
                              Content="{Binding ConverterParameter='Back', Converter={StaticResource GlobalObjectDicConverter}}"  
                              Style="{StaticResource SearchCondition_CheckBoxStyle}" 
                              MinWidth="100" 
                              IsChecked="True"
                              Cursor="Hand"/>
                        </Grid>-->
                    </GroupBox>
                    <!--#region 측정위치-->
                    <GroupBox x:Name="gbxMeasure" Grid.Row="0" Grid.Column="5"
                              Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='측정위치'}" 
                              Width="Auto"
                              HorizontalContentAlignment="Center"
                              Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <c1:C1ComboBox Grid.Column="0" x:Name="cboMeasurePoint"     Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                        </Grid>
                    </GroupBox>
                    <!--#endregion-->
                    <Grid Grid.Row="0" Grid.Column="9" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <!--<ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>-->
                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                        <!--<Button x:Name="btnSlurryInputSummary" Grid.Column="0" Content="{Binding ConverterParameter=슬러리 투입량 집계, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource Content_MainButtonSpecialStyle}" 
                                Cursor="Hand"
                                Click="btnSlurryInputSummary_Click" />
                        <Button x:Name="btnFoil2DBarCodeInput" Grid.Column="2" Content="{Binding ConverterParameter=Foil 2D 바코드 투입 잔량관리, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource Content_MainButtonSpecialStyle}" 
                                Cursor="Hand"
                                Click="btnFoil2DBarCodeInput_Click" />
                        <Button x:Name="btnInputQty" Grid.Column="4" Content="{Binding ConverterParameter=투입량 집계, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource Content_MainButtonSpecialStyle}" 
                                Cursor="Hand"
                                Click="btnInputQty_Click"
                                Visibility="Collapsed" />
                        <Button x:Name="btnProdQty" Grid.Column="4" Content="{Binding ConverterParameter=생산량 집계, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource Content_MainButtonSpecialStyle}" 
                                Cursor="Hand"
                                Click="btnProdQty_Click" />-->
                        <Button x:Name="btnRollMapOutsideScrap" Grid.Column="4" Content="{Binding ConverterParameter=최외각 폐기, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource Content_MainButtonSpecialStyle}" 
                                Cursor="Hand"
                                Click="btnRollMapOutsideScrap_Click" />                        
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="10" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnDefect" Grid.Column="0" Content="{Binding ConverterParameter=불량, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource Content_MainButtonSpecialStyle}" 
                                Cursor="Hand"
                                IsEnabled="False"
                                Click="btnDefect_Click" />                        
                        <Button x:Name="btnSearch" Grid.Column="2" Content="{Binding ConverterParameter=조회, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource SearchButtonStyle}" 
                                Cursor="Hand"
                                Click="btnSearch_Click" />
                    </Grid>
                </Grid>
            </Grid>

            <!-- MAP -->
            <Grid Grid.Row="3" x:Name="grdRollMap">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.*" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="4.0*" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="4.0*" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="2.0*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" x:Name="grd">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <c1c:C1Chart x:Name="chart" Grid.Row="0" Grid.Column="2" ChartType="XYPlot" Margin="0,0,0,0" Style="{StaticResource C1ChartNormalStyle}" >
                        <c1c:C1Chart.Data >
                            <c1c:ChartData>
                                <c1c:XYDataSeries x:Name="xyDataSeries"/>
                            </c1c:ChartData>
                        </c1c:C1Chart.Data>
                    </c1c:C1Chart>

                </Grid>

                <Border Grid.Row="2" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}" Visibility="Collapsed"/>
                <Grid Grid.Row="2" x:Name="grdCoater">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1.0*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="1.0*" />
                        <RowDefinition Height="75" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" Grid.RowSpan="3" BorderBrush="#ffbebebe" CornerRadius="5" Style="{StaticResource BorderSubTitleStyle}" Margin="0,0,5,0" Background="LightGray"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                        <TextBlock Text="C/T" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Stretch" Style="{StaticResource Content_InputForm_LabelStyle}" />
                    </Border>
                    <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="#ffbebebe" CornerRadius="5" Style="{StaticResource BorderSubTitleStyle}" Margin="0,0,5,0" Background="LightGray"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                        <TextBlock x:Name="txtCoaterPosition1" Text="T" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Stretch" Style="{StaticResource Content_InputForm_LabelStyle}" />
                    </Border>
                    <Border Grid.Row="2" Grid.Column="1" BorderThickness="1" BorderBrush="#ffbebebe" CornerRadius="5" Style="{StaticResource BorderSubTitleStyle}" Margin="0,0,5,0" Background="LightGray"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                        <TextBlock x:Name="txtCoaterPosition2" Text="B" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Stretch" Style="{StaticResource Content_InputForm_LabelStyle}" />
                    </Border>

                    <!--<c1c:C1Chart x:Name="chartCoaterTop" Grid.Row="0" Grid.Column="2" ChartType="XYPlot" Margin="0,0,0,0" Style="{StaticResource C1ChartNormalStyle}" >
                        <c1c:C1Chart.Data >
                            <c1c:ChartData>
                                <c1c:XYDataSeries x:Name="xyDataSeriesCoaterTop"/>
                            </c1c:ChartData>
                        </c1c:C1Chart.Data>
                    </c1c:C1Chart>

                    <c1c:C1Chart x:Name="chartCoaterBack" Grid.Row="2" Grid.Column="2" ChartType="XYPlot" Margin="0,0,0,0" Style="{StaticResource C1ChartNormalStyle}" >
                        <c1c:C1Chart.Data>
                            <c1c:ChartData>
                                <c1c:XYDataSeries x:Name="xyDataSeriesCoaterBack" />
                            </c1c:ChartData>
                        </c1c:C1Chart.Data>
                    </c1c:C1Chart>-->
                    <c1c:C1Chart x:Name="chartCoater" Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" ChartType="XYPlot" Margin="0,0,0,0" Style="{StaticResource C1ChartNormalStyle}" >
                        <c1c:C1Chart.Data >
                            <c1c:ChartData>
                                <c1c:XYDataSeries x:Name="xyDataSeriesCoater"/>
                            </c1c:ChartData>
                        </c1c:C1Chart.Data>
                    </c1c:C1Chart>

                    <ScrollViewer 
                          CanContentScroll="True"  
                          HorizontalScrollBarVisibility="Auto"  
                          VerticalScrollBarVisibility="Auto"  
                          BorderBrush="Black" 
                          BorderThickness="0" 
                          Background="White" 
                          Grid.Row="0" Grid.Column="3">
                        <Grid x:Name="grdCoaterDefectTopLegend" 
                      HorizontalAlignment="Left" 
                      VerticalAlignment="Top" 
                      Height="Auto" 
                      Width="Auto" 
                      Margin="0,0,0,0" >
                        </Grid>
                    </ScrollViewer>

                    <ScrollViewer 
                        CanContentScroll="True"  
                        HorizontalScrollBarVisibility="Auto"  
                        VerticalScrollBarVisibility="Auto"  
                        BorderBrush="Black" 
                        BorderThickness="0" 
                        Background="White" 
                        Grid.Row="2" Grid.Column="3">
                        <Grid x:Name="grdCoaterDefectBackLegend" 
                              HorizontalAlignment="Left" 
                              VerticalAlignment="Top" 
                              Height="Auto" 
                              Width="Auto" 
                              Margin="0,0,0,0" >
                        </Grid>
                    </ScrollViewer>

                    <Grid Grid.Row="0" Grid.Column="4" Grid.RowSpan="3">
                        <Grid.RowDefinitions>
