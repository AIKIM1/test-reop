<UserControl x:Class="LGC.GMES.MES.COM001.COM001_119"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LGC.GMES.MES.COM001"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ItemTemplate">
                <WrapPanel>
                    <Image Width="138" Height="138" Stretch="Fill" Source="{Binding}" Margin="3,3,3,3" />
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>

        </Grid.Resources>

        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="투입 이력 조회" Grid.ColumnSpan="2">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <c1:C1TabControl x:Name="tbcInputHistory">

                    <c1:C1TabItem x:Name="History" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입 이력'}" Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회조건-->
                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <!--대상선택-->
                            <Border Grid.Row="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock                            Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='LINE',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='공정',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='설비',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <TextBlock                            Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='작업일',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <TextBlock                            Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='W/O',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="2" Text="{Binding ConverterParameter='모델',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="4" Text="{Binding ConverterParameter='제품 ID',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="6" Text="{Binding ConverterParameter='PJT',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <c1:C1ComboBox x:Name="cboArea"                Grid.Row="0" Grid.Column="1"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox x:Name="cboEquipmentSegment"    Grid.Row="0" Grid.Column="3"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox x:Name="cboProcess"             Grid.Row="0" Grid.Column="5"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox x:Name="cboEquipment"           Grid.Row="0" Grid.Column="7"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>

                                <ctrlLib:LGCDatePicker x:Name="dtpDateFrom"    Grid.Row="1" Grid.Column="1"  DatepickerType="Date"   />
                                <TextBlock                                     Grid.Row="1" Grid.Column="2" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment='Center' />
                                <ctrlLib:LGCDatePicker x:Name="dtpDateTo"      Grid.Row="1" Grid.Column="3"  DatepickerType="Date"   />

                                <TextBox       x:Name="txtWO"                  Grid.Row="2" Grid.Column="1"  Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <TextBox       x:Name="txtModel"               Grid.Row="2" Grid.Column="3"  Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <TextBox       x:Name="txtProdID"              Grid.Row="2" Grid.Column="5"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" />
                                <TextBox       x:Name="txtPjt"                 Grid.Row="2" Grid.Column="7"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" />

                                <!--조회 버튼-->
                                <Button     Grid.Row="0" Grid.Column="13" Grid.RowSpan="2" x:Name="btnSearchHist" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchHist_Click" />

                            </Grid>

                            <!--대상선택-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="1" Text="{Binding ConverterParameter='이력목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleTitleStyle}"/>

                                <c1:C1DataGrid x:Name="dgInputHist" Grid.Row="3" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" FrozenColumnCount="2" FrozenBottomRowsCount="1">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn     Header="작업일"         Binding="{Binding CALDATE}"           HorizontalAlignment="Center"  IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="Lot ID"         Binding="{Binding LOTID}"             HorizontalAlignment="Left"    IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="제품"           Binding="{Binding PRODID}"            HorizontalAlignment="Left"    IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="모델"           Binding="{Binding MODLID}"            HorizontalAlignment="Left"    IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="W/O"            Binding="{Binding WOID}"              HorizontalAlignment="Left"    IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="PJT"            Binding="{Binding PRJT_NAME}"         HorizontalAlignment="Left"    IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="생산 Lot ID"    Binding="{Binding PROD_LOTID}"        HorizontalAlignment="Left"    IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="단위"           Binding="{Binding UNIT_CODE}"         HorizontalAlignment="Center"  IsReadOnly="True" />
                                        <c1:DataGridNumericColumn  Header="투입 수량"      Binding="{Binding INPUT_QTY}"         HorizontalAlignment="Right"   IsReadOnly="True"  Format="###,###,##0.###">
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                        <c1:DataGridTextColumn     Header="투입시간"       Binding="{Binding WIPDTTM_ST}"         HorizontalAlignment="Center"  IsReadOnly="True" Format="yyyy-MM-dd HH:mm:ss"/>
                                        <c1:DataGridTextColumn     Header="전송 상태"      Binding="{Binding ERP_TRNF_FLAG}"     HorizontalAlignment="Center"  IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="ERP 일련번호"   Binding="{Binding ERP_TRNF_SEQNO}"    HorizontalAlignment="Left"    IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="전송일시"       Binding="{Binding TRNF_DTTM}"         HorizontalAlignment="Center"  IsReadOnly="True" Format="yyyy-MM-dd"/>
                                        <c1:DataGridTextColumn     Header="취소여부"       Binding="{Binding CNCL_FLAG}"         HorizontalAlignment="Left"    IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="ERP 처리결과"   Binding="{Binding ERP_ERR_TYPE_NAME}" HorizontalAlignment="Left"    IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1DataGrid.BottomRows >
                                        <c1:DataGridSummaryRow x:Name="summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </c1:C1DataGrid>
                            </Grid>

                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem x:Name="ControlAdjust" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입 조정'}">
                        <Grid>

                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnAdd"  Grid.Column="0"  Content="{Binding ConverterParameter=Title11,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonAddStyle}"    Height="29" Width="30" Cursor="Hand" Click="btnAdd_Click"/>
                                    <Button x:Name="btnDel"  Grid.Column="2"  Content="{Binding ConverterParameter=Title12,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonDeleteStyle}" Height="29" Width="30" Cursor="Hand" Click="btnDel_Click"/>
                                </Grid>

                                <Button     Grid.Row="1" Grid.Column="3" x:Name="btnCheck"       Content="{Binding ConverterParameter=Check, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnCheck_Click" />
                                <Button     Grid.Row="1" Grid.Column="5" x:Name="btnFormat"      Content="{Binding ConverterParameter=업로드 양식, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnFormat_Click" />
                                <Button     Grid.Row="1" Grid.Column="7" x:Name="btnExcelUpload" Content="{Binding ConverterParameter=Excel Upload, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleButtonExcelImportStyle}" Cursor="Hand" Click="ExcelUpload_Click" />
                                <Button     Grid.Row="1" Grid.Column="9" x:Name="btnSend"        Content="{Binding ConverterParameter=전송, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSend_Click" />
                            </Grid>
                            <!--리스트-->
                            <Grid Grid.Row="2" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <c1:C1DataGrid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="4" x:Name="dgInput" HeadersVisibility="Column" SelectionMode="SingleCell" CommittedEdit="dgInput_CommittedEdit" LoadedCellPresenter="dgInput_LoadedCellPresenter">

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridComboBoxColumn Header="FACTORY"         Binding="{Binding SHOPID}"         HorizontalAlignment="Left"   SelectedValuePath="CBO_CODE" DisplayMemberPath="CBO_NAME" />
                                        <c1:DataGridTextColumn     Header="전기일"         Binding="{Binding CALDATE}"        HorizontalAlignment="Center" Format="yyyy-MM-dd"/>
                                        <c1:DataGridComboBoxColumn Header="투입구분"       Binding="{Binding INPUT_TYPE}"     HorizontalAlignment="Center" SelectedValuePath="CMCODE"   DisplayMemberPath="CMCDNAME" />
                                        <c1:DataGridTextColumn     Header="LOTID"          Binding="{Binding LOTID}"          HorizontalAlignment="Center"   />
                                        <c1:DataGridTextColumn     Header="투입 자재"      Binding="{Binding MTRLID}"         HorizontalAlignment="Left"   />
                                        <c1:DataGridTextColumn     Header="단위"           Binding="{Binding MTRL_UNIT_CODE}" HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTemplateColumn Header="W/O 선택"       Name="INPUT_WOID"                  Width="Auto">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button x:Name="btnSelectWoId" Content="{Binding ConverterParameter='...',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SubTaskSpecialButtonStyle}" Click="btnSelectWoId_Click" Padding="9,0" Height="20" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn     Header="W/O"            Binding="{Binding WOID}"           HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="제품"           Binding="{Binding PRODID}"         HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn     Header="투입 저장위치"  Binding="{Binding ISS_SLOC_ID}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn  Header="수량"           Binding="{Binding ENTRY_QTY}"      HorizontalAlignment="Right"  Format="###,###,##0.###" />
                                        <c1:DataGridTextColumn     Header="제품 단위"      Binding="{Binding PROD_UNIT_CODE}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn     Header="제품 저장위치"  Binding="{Binding SLOC_ID}"        HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn     Header="갱신번호"       Binding="{Binding RSV_ITEM_NO}"    HorizontalAlignment="Left"   Visibility="Collapsed" />
                                        <c1:DataGridTextColumn     Header="라우트번호"     Binding="{Binding ROUT_NO}"        HorizontalAlignment="Left"   Visibility="Collapsed" />
                                        <c1:DataGridTextColumn     Header="사용여부"       Binding="{Binding USEFLAG}"        HorizontalAlignment="Left"   Visibility="Collapsed" />
                                        <c1:DataGridTextColumn     Header="chk"            Binding="{Binding CHK}"            HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn     Header="확인"            Binding="{Binding ERR_REASON}"            HorizontalAlignment="Left" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <Grid Grid.Row="3" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                            </Grid>

                            <Grid Grid.Row ="4">
                                <Grid.RowDefinitions >
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--사유 / 요청자-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                <TextBlock  Grid.Row="1" Grid.Column="0"  Text="{Binding ConverterParameter='비고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    Grid.Row="1" Grid.Column="1" x:Name="txtNote" Style="{StaticResource SearchCondition_TextBoxStyle}" Height="40"  AcceptsReturn="True" Grid.ColumnSpan="8" />
                                <TextBlock  Grid.Row="1" Grid.Column="9" Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <Grid  Grid.Row="1" Grid.Column="10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBox Grid.Row="0" Grid.Column="0" x:Name="txtReqUser"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtReqUser_KeyDown"/>
                                    <Button  Grid.Row="0" Grid.Column="1" x:Name="btnReqUser"    Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnReqUser_Click" HorizontalAlignment="Left"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem x:Name="AdjustHistory" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입 조정 이력'}" Margin="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="45"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회조건-->
                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>

                            <!--대상선택-->
                            <Border Grid.Row="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Border Grid.Row="5" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="0.5*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <TextBlock                                       Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='등록일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <ctrlLib:LGCDatePicker x:Name="dtpDateFromHist"  Grid.Row="0" Grid.Column="2"  DatepickerType="Date"  />
                                <TextBlock                                       Grid.Row="0" Grid.Column="3" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment='Center' />
                                <ctrlLib:LGCDatePicker x:Name="dtpDateToHist"    Grid.Row="0" Grid.Column="4"  DatepickerType="Date"  />

                                <TextBlock                                       Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='FACTORY', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                <c1:C1ComboBox          x:Name="cboShop"         Grid.Row="0" Grid.Column="7" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                <TextBlock                                       Grid.Row="0" Grid.Column="9" Text="{Binding ConverterParameter='W/O', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox               x:Name="txtWoId"          Grid.Row="0" Grid.Column="10" Style="{StaticResource SearchCondition_TextBoxStyle}" />

                                <TextBlock                                       Grid.Row="0" Grid.Column="12" Text="{Binding ConverterParameter='투입자재', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox               x:Name="txtMtrlID"        Grid.Row="0" Grid.Column="13" Style="{StaticResource SearchCondition_TextBoxStyle}" />

                                <Button                x:Name="btnSearchAdjust"  Grid.Row="0" Grid.Column="15"  Content="{Binding ConverterParameter=조회, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchAdjust_Click" />

                            </Grid>

                            <!--대상선택-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="1" Text="{Binding ConverterParameter='투입 조정 이력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleTitleStyle}"/>

                                <c1:C1DataGrid x:Name="dgAdjustHist" Grid.Row="3" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" LoadedColumnHeaderPresenter="dgAdjustHist_LoadedColumnHeaderPresenter">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" HorizontalAlignment="Center">
