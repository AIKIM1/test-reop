                                            <TextBlock Grid.Row="1" Grid.Column="14" Text="{Binding ConverterParameter='양/음극', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,0,5,0"  />
