                                                    <!--<TextBox Grid.Row="4" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="2" x:Name="txtComment"        Style="{StaticResource SearchCondition_TextBoxStyle}"/>-->
                                                </Grid>
                                            </Grid>

                                        </Grid>


                                    </Grid>
                                </Grid>
                            </Grid>

