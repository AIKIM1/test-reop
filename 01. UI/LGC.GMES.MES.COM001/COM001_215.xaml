<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_215"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="활성화 INBOX 재구성">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <!-- Inbox 병합 -->
                <c1:C1TabControl>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='INBOX병합'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="8"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <!--백그라운드용-->
                            <Border       Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                            <GridSplitter Grid.Row="0" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="99" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <Grid Grid.Row="0" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>

                                <!-- 1.적재대차선택 -->
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="6" Grid.ColumnSpan="6" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="6"  BorderThickness="1,0,1,1" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                    <TextBlock                            Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='적재대차선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="14"/>
                                    <RadioButton   x:Name="rdoCart"       Grid.Row="1" Grid.Column="3" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='기존대차적재',   Converter={StaticResource GlobalObjectDicConverter}}"  GroupName="Cart" IsChecked="True" Checked="rdoCart_Checked" />
                                    <RadioButton   x:Name="rdoNewCart"    Grid.Row="1" Grid.Column="5" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='신규대차',       Converter={StaticResource GlobalObjectDicConverter}}"  GroupName="Cart" Margin="4" Checked="rdoNewCart_Checked" />
                                    <TextBlock                            Grid.Row="4" Grid.Column="1" Text="{Binding ConverterParameter='대차ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox       x:Name="txtCart"       Grid.Row="4" Grid.Column="3" MinWidth="160" Style="{StaticResource Content_InputForm_TextBoxStyle}" KeyDown="txtCart_KeyDown" GotFocus="txtCart_GotFocus" />

                                </Grid>

                                <!-- 2.조립LOT선택 -->
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="6" Grid.ColumnSpan="6" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="6"  BorderThickness="1,0,1,1" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                    <TextBlock                               Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='조립LOT선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="14"/>
                                    <RadioButton   x:Name="rdoAssyLot"       Grid.Row="1" Grid.Column="3" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='INBOX조립LOT사용',    Converter={StaticResource GlobalObjectDicConverter}}"  GroupName="ASSYLOT" IsChecked="True" Checked="rdoAssyLot_Checked"  />
                                    <RadioButton   x:Name="rdoMixAssyLot"    Grid.Row="1" Grid.Column="5" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='MIX조립LOT생성',      Converter={StaticResource GlobalObjectDicConverter}}"  GroupName="ASSYLOT" Margin="4" Checked="rdoMixAssyLot_Checked" />
                                    <TextBlock                               Grid.Row="4" Grid.Column="1" Text="{Binding ConverterParameter='MIX조립LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"    Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox       x:Name="txtAssyLot"       Grid.Row="4" Grid.Column="3" MinWidth="160" Style="{StaticResource Content_InputForm_TextBoxStyle}" KeyDown="txtAssyLot_KeyDown" GotFocus="txtAssyLot_GotFocus" />

                                </Grid>

                                <!-- 3.병합대상INBOX입력 -->
                                <Grid Grid.Row="5" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="7" Grid.ColumnSpan="7" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="7"  BorderThickness="1,0,1,1" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                    <TextBlock                               Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='병합대상INBOX입력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="14"/>
                                    <TextBlock                               Grid.Row="4" Grid.Column="1" Text="{Binding ConverterParameter='InBox ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"    Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox       x:Name="txtInbox"         Grid.Row="4" Grid.Column="2" MinWidth="160" Style="{StaticResource Content_InputForm_TextBoxStyle}" KeyDown="txtInbox_KeyDown" GotFocus="txtInbox_GotFocus" />
                                    <TextBlock                               Grid.Row="4" Grid.Column="4" Text="{Binding ConverterParameter='InBox 유형', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox x:Name="cboInboxType"     Grid.Row="4" Grid.Column="5" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                    <Button        x:Name="btnInboxDelete"   Grid.Row="4" Grid.Column="7" Content="{Binding ConverterParameter=삭제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Margin="0,0,8,0" Click="btnInboxDelete_Click" />

                                    <c1:C1DataGrid Grid.Row="5" 
                                                   Grid.Column="1" 
                                                   Grid.ColumnSpan="7" 
                                                   x:Name="dgInbox" 
                                                   IsReadOnly="False" 
                                                   Margin="8"
                                                   HeadersVisibility="Column"
                                                   SelectionMode="SingleCell" 
                                                   FrozenColumnCount="1"
                                                   FrozenBottomRowsCount="1">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                <c1:DataGridCheckBoxColumn.Header>
                                                    <StackPanel Width="30" Margin="-5" Orientation="Horizontal" >
                                                        <TextBlock x:Name="tbCheckHeaderAll1" Padding="0" MouseLeftButtonDown="tbCheckHeaderAll1_MouseLeftButtonDown" Text="" Width="40"/>
                                                    </StackPanel>
                                                </c1:DataGridCheckBoxColumn.Header>
                                            </c1:DataGridCheckBoxColumn>

                                            <c1:DataGridTextColumn        Header = "대차 ID"             Binding = "{Binding CTNR_ID}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "조립LOT"             Binding = "{Binding LOTID_RT}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "등급"                Binding = "{Binding CAPA_GRD_CODE}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "InBox ID"            Binding = "{Binding LOTID}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "WIPSEQ"              Binding = "{Binding WIPSEQ}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridNumericColumn     Header = "Cell 수량"           Binding = "{Binding CELL_QTY}"           HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" EditOnSelection="True" Minimum="0" ShowButtons="False" >
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>
                                            <c1:DataGridTextColumn        Header = "InBox 유형"          Binding = "{Binding INBOX_TYPE_CODE}"    HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "InBox 유형"          Binding = "{Binding INBOX_TYPE_NAME}"    HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridNumericColumn     Header = "INBOX_LOAD_QTY"      Binding = "{Binding INBOX_LOAD_QTY}"     HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>

                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow x:Name="summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </c1:C1DataGrid>

                                </Grid>

                            </Grid>

                            <Grid Grid.Row="0" Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="2.1*"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="1.7*" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="6.2*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>

                                <!-- 4.병합정보확인 -->
                                <!-- 대차정보 -->
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="7" Grid.ColumnSpan="6" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                    <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="6"  BorderThickness="1,0,1,1" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                    <TextBlock                            Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='병합정보확인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="14"/>
                                    <TextBlock                            Grid.Row="4" Grid.Column="1" Text="{Binding ConverterParameter='대차정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                                    <c1:C1DataGrid Grid.Row="5" 
                                                   Grid.Column="1" 
                                                   Grid.ColumnSpan="6" 
                                                   x:Name="dgCart" 
                                                   Margin="8"
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column"
                                                   SelectionMode="SingleCell">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn        Header = "대차 ID"           Binding = "{Binding CTNR_ID}"            HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "프로젝트명"        Binding = "{Binding PRJT_NAME}"          HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "제품ID"            Binding = "{Binding PRODID}"             HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "모델"              Binding = "{Binding MODLID}"             HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "시장유형"          Binding = "{Binding MKT_TYPE_CODE}"      HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "시장유형"          Binding = "{Binding MKT_TYPE_NAME}"      HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "공정ID"            Binding = "{Binding PROCID}"             HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "공정명"            Binding = "{Binding PROCNAME}"           HorizontalAlignment="Center" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>

                                <!-- 조립LOT정보 -->
                                <Grid Grid.Row="3">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="7" Grid.ColumnSpan="6" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                    <TextBlock                            Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='조립LOT정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>

                                    <c1:C1DataGrid Grid.Row="2" 
                                                   Grid.Column="1" 
                                                   Grid.ColumnSpan="6" 
                                                   x:Name="dgAssyLot" 
                                                   Margin="8"
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column"
                                                   SelectionMode="SingleCell">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn        Header = "조립LOT"             Binding = "{Binding LOTID_RT}"           HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "LOT 유형"            Binding = "{Binding LOTTYPE}"            HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "LOT 유형"            Binding = "{Binding LOTYNAME}"           HorizontalAlignment="Center" />
                                            <c1:DataGridComboBoxColumn    Header = "등급"                Binding = "{Binding CAPA_GRD_CODE}"      HorizontalAlignment="Center" MinWidth="60" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" EditOnSelection="True" />
                                            <c1:DataGridTextColumn        Header = "InBox 유형"          Binding = "{Binding INBOX_TYPE_CODE}"    HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "InBox 유형"          Binding = "{Binding INBOX_TYPE_NAME}"    HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn     Header = "InBox 수량"          Binding = "{Binding INBOX_QTY}"          HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn     Header = "Cell 수량"           Binding = "{Binding CELL_QTY}"           HorizontalAlignment="Right" Format="#,###" EditOnSelection="True" Minimum="0" ShowButtons="False" />
                                            <c1:DataGridNumericColumn     Header = "INBOX_LOAD_QTY"      Binding = "{Binding INBOX_LOAD_QTY}"     HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>

                                <Grid Grid.Row="5">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="7" Grid.ColumnSpan="6" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                    <TextBlock                            Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='생성INBOX정보',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                    <Button        x:Name="btnPrintCart"  Grid.Row="1" Grid.Column="4" Content="{Binding ConverterParameter=대차Sheet발행, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnPrintCart_Click" />
                                    <Button        x:Name="btnPrintTag"   Grid.Row="1" Grid.Column="6" Content="{Binding ConverterParameter=태그발행,      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Margin="0,0,8,0" Click="btnPrintTag_Click" />

                                    <c1:C1DataGrid Grid.Row="2" 
                                                   Grid.Column="1" 
                                                   Grid.ColumnSpan="6" 
                                                   x:Name="dgInboxCreate" 
                                                   Margin="8"
                                                   IsReadOnly="False" 
                                                   HeadersVisibility="Column"
                                                   SelectionMode="SingleCell" 
                                                   FrozenColumnCount="1"
                                                   FrozenBottomRowsCount="1" 
                                                   LoadedCellPresenter="dgInboxCreate_LoadedCellPresenter" 
                                                   UnloadedCellPresenter="ddgInboxCreate_UnloadedCellPresenter">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                <c1:DataGridCheckBoxColumn.Header>
                                                    <StackPanel Width="30" Margin="-5" Orientation="Horizontal" >
                                                        <TextBlock x:Name="tbCheckHeaderAll2" Padding="0" MouseLeftButtonDown="tbCheckHeaderAll2_MouseLeftButtonDown" Text="" Width="40"/>
                                                    </StackPanel>
                                                </c1:DataGridCheckBoxColumn.Header>
                                            </c1:DataGridCheckBoxColumn>
                                            <c1:DataGridTextColumn        Header = "No"                  Binding = "{Binding SEQ}"                HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "InBox ID"            Binding = "{Binding LOTID}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "WIPSEQ"              Binding = "{Binding WIPSEQ}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "등급"                Binding = "{Binding CAPA_GRD_CODE}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridNumericColumn     Header = "Cell 수량"           Binding = "{Binding CELL_QTY}"           HorizontalAlignment="Right"  IsReadOnly="True" Format="#,###" EditOnSelection="True" Minimum="0" ShowButtons="False" >
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>
                                            <c1:DataGridTextColumn        Header = "발행"                Binding = "{Binding PRINT_YN}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "생성일시"            Binding = "{Binding WIPDTTM_ST}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "CALDATE"             Binding = "{Binding CALDATE}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "SHFT_NAME"           Binding = "{Binding SHFT_NAME}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "INSPECTORID"         Binding = "{Binding INSPECTORID}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow x:Name="summaryCreate" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>

                                    </c1:C1DataGrid>

                                </Grid>

                            </Grid>

                            <!-- 병합버튼 -->
                            <Grid Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="99">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <Button        x:Name="btnMerge"  Grid.Column="2" Content="{Binding ConverterParameter=병합완료, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnMerge_Click" />
                                <Button        x:Name="btnClear"  Grid.Column="4" Content="{Binding ConverterParameter=초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Margin="0,0,8,0" Click="btnClear_Click" />

                            </Grid>

