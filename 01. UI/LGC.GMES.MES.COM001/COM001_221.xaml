<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_221"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="984" d:DesignWidth="1280"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="활성화 Formation 불량 등록">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                        </Grid>
                    </DataTemplate>

                </Grid.Resources>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>

                <!--<Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>-->

                <!-- Search -->
                <Grid x:Name="SearchArea" Grid.Row="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4" />
                        <RowDefinition Height="40" />
                        <RowDefinition Height="4" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition Width="auto"/>
                        <!--11-->
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="auto" />
                        <ColumnDefinition Width="8"/>
                    </Grid.ColumnDefinitions>

                    <!--백그라운드용-->
                    <Border Grid.Row="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                    <!--조회 버튼-->
                    <!--조회조건 ROW1-->
                    <TextBlock                                    Grid.Row="1" Grid.Column="0"  Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <c1:C1ComboBox  x:Name="cboArea"              Grid.Row="1" Grid.Column="1"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  IsEnabled="False"/>
                    <TextBlock                                    Grid.Row="1" Grid.Column="2"  Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <c1:C1ComboBox  x:Name="cboProcess"           Grid.Row="1" Grid.Column="3"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboProcess_SelectedItemChanged"/>
                    <TextBlock                                    Grid.Row="1" Grid.Column="4"  Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                    <c1:C1ComboBox  x:Name="cboEqsgid"            Grid.Row="1" Grid.Column="5"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                    <TextBlock                                    Grid.Row="1" Grid.Column="6"  Text="{Binding ConverterParameter='PJT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <TextBox        x:Name="txtPrjtName"          Grid.Row="1" Grid.Column="7"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"/>
                    <TextBlock                                    Grid.Row="1" Grid.Column="8"  Text="{Binding ConverterParameter='제품ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <TextBox        x:Name="txtProdId"            Grid.Row="1" Grid.Column="9"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"/>
                    <TextBlock                                    Grid.Row="1" Grid.Column="10"  Text="{Binding ConverterParameter='대차ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <TextBox         x:Name="txtCtnrId"           Grid.Row="1" Grid.Column="11"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"/>
                    <Button     Grid.Row="1" Grid.Column="18" x:Name="btnSearch"  Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                </Grid>

                <!-- Grid 대차, 대차상세 -->
                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                    </Grid.ColumnDefinitions>

                    <c1:C1TabControl x:Name="ctbDefectScrap" Grid.Row="0" Grid.Column="1">
                        <c1:C1TabItem Name="tiDefectScrap" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량폐기등록'}" x:FieldModifier="public">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="5*"/>
                                </Grid.ColumnDefinitions>
                            
                                <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <!-- 불량대차 -->
                                <Grid Grid.Column="0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="5*" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="5*" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="40" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>
                        
                                    <!--백그라운드용-->
                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                    <TextBlock                          Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='불량대차목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    <Button     x:Name="btnDefectSheet" Grid.Row="0" Grid.Column="3" Content="{Binding ConverterParameter=대차Sheet발행,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}"  Click="btnDefectSheet_Click"/>

                                    <c1:C1DataGrid Grid.Row="1" 
                                                   Grid.ColumnSpan="99" 
                                                   x:Name="dgDefectCtnr" 
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column" 
                                                   FrozenColumnCount="4" 
                                                   FrozenBottomRowsCount="1" 
                                                   SelectionMode="SingleRow"
                                                   Margin="8,0,8,0">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="dgDefectCtnr" IsChecked="{Binding CHK, Mode=OneWay}" x:Name="dgDefectCtnrChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgDefectCtnrChoice_Checked"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn      Header = "대차ID"                Binding = "{Binding CTNR_ID}"                HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn      Header = "PJT"                   Binding = "{Binding PRJT_NAME}"              HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "제품ID"                Binding = "{Binding PRODID}"                 HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "시장유형"              Binding = "{Binding MKT_TYPE_NAME}"          HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "시장유형코드"          Binding = "{Binding MKT_TYPE_CODE}"          HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridNumericColumn   Header = "불량등록수량"          Binding = "{Binding WIPQTY}"                 HorizontalAlignment="Right"  Format="###,###,##0" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>

                                            <!--<c1:DataGridNumericColumn   Header = "Scan Cell수량"         Binding = "{Binding SCAN_QTY}"               HorizontalAlignment="Right"  Format="###,###,##0" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>-->

                                            <c1:DataGridTextColumn      Header = "생성일시"              Binding = "{Binding INSDTTM}"                HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "변경일시"              Binding = "{Binding UPDDTTM}"                HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "PROCID"                Binding = "{Binding PROCID}"                 HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "PROCNAME"              Binding = "{Binding PROCNAME}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "EQSGID"                Binding = "{Binding EQSGID}"                 HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "작업유형코드"          Binding = "{Binding FORM_WRK_TYPE_CODE}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "작업유형명"            Binding = "{Binding FORM_WRK_TYPE_NAME}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "대차상태코드"          Binding = "{Binding CTNR_STAT_CODE}"         HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "대차상태코드명"        Binding = "{Binding CTNR_STAT_NAME}"         HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "INBOX상태"             Binding = "{Binding WIPSTAT}"                HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "INBOX상태명"           Binding = "{Binding WIPSNAME}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "NON_SCAN_QTY"          Binding = "{Binding NON_SCAN_QTY}"           HorizontalAlignment="Right" Format="###,###,##0"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "CELL_ID_MNGT_FLAG"     Binding = "{Binding CELL_ID_MNGT_FLAG}"      HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "WIP_QLTY_TYPE_CODE"    Binding = "{Binding WIP_QLTY_TYPE_CODE}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "WIP_QLTY_TYPE_NAME"    Binding = "{Binding WIP_QLTY_TYPE_NAME}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "LOTID_RT"              Binding = "{Binding LOTID_RT}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow  RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </c1:C1DataGrid>

                                    <TextBlock Grid.Row="3" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='불량대차상세', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <c1:C1DataGrid Grid.Row="4"  
                                                   Grid.ColumnSpan="99" 
                                                   x:Name="dgDefectLot" 
                                                   IsReadOnly="False" 
                                                   HeadersVisibility="Column" 
                                                   FrozenBottomRowsCount="1" 
                                                   SelectionMode="MultiRange" 
                                                   CanUserEditRows="True" 
                                                   Margin="8,0,8,0">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridCheckBoxColumn    Header = "선택"                    Binding = "{Binding CHK}"                  HorizontalAlignment="Center" Width="40" IsReadOnly="False" />
                                            <c1:DataGridTextColumn        Header = "작업일자"                Binding = "{Binding CALDATE}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "불량LOT"                 Binding = "{Binding INBOX_ID_DEF}"         HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "조립LOT"                 Binding = "{Binding LOTID_RT}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "불량사유코드"            Binding = "{Binding DFCT_RSN_GR_ID}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "불량사유그룹"            Binding = "{Binding DFCT_RSN_GR_NAME}"     HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridNumericColumn     Header = "수량"                    Binding = "{Binding WIPQTY}"               HorizontalAlignment="Right"  IsReadOnly="True" Format="###,###,##0" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>
                                            <c1:DataGridNumericColumn     Header = "PROCESS_QTY"             Binding = "{Binding PROCESS_QTY}"          HorizontalAlignment="Right"  IsReadOnly="True" Format="###,###,##0" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "작업자"                  Binding = "{Binding UPDUSEID}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "작업자"                  Binding = "{Binding UPDUSENAME}"           HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "등록일시"                Binding = "{Binding WIPSDTTM}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "등급"                    Binding = "{Binding CAPA_GRD_CODE}"        HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "WIPSEQ"                  Binding = "{Binding WIPSEQ}"               HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow  RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </c1:C1DataGrid>

                                    <Grid Grid.Row="6" Grid.ColumnSpan="99">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>

                                        <Button   x:Name="btnDefectCtnlInput"    Grid.Column="1"   Content="{Binding ConverterParameter=불량대차등록,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDefectCtnlInput_Click"/>
                                        <Button   x:Name="btnDefectInput"        Grid.Column="3"   Content="{Binding ConverterParameter=불량추가,      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDefectInput_Click"/>
                                        <Button   x:Name="btnDefectDelete"       Grid.Column="5"   Content="{Binding ConverterParameter=불량삭제,      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDefectDelete_Click"/>
                                        <Button   x:Name="btnDefectLoss"         Grid.Column="7"   Content="{Binding ConverterParameter=불량LOSS처리,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDefectLoss_Click"/>
                                        <Button   x:Name="btnDefectGood"         Grid.Column="11"  Content="{Binding ConverterParameter=양품화등록,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDefectGood_Click"/>
                                        <Button   x:Name="btnScrapCtnlInput"     Grid.Column="13"  Content="{Binding ConverterParameter=폐기대차등록,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnScrapCtnlInput_Click"/>
                                    </Grid>

                                </Grid>

                                <!-- 폐기대차 -->
                                <Grid Grid.Column="2" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="5*" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="5*" />
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="40" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>

                                    <!--백그라운드용-->
                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                    <TextBlock                         Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='폐기대상대차목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    <Button     x:Name="btnScrapSheet" Grid.Row="0" Grid.Column="3" Content="{Binding ConverterParameter=대차Sheet발행,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}"  Click="btnScrapSheet_Click"/>

                                    <c1:C1DataGrid Grid.Row="1" 
                                                   Grid.ColumnSpan="99" 
                                                   x:Name="dgScrapCtnr" 
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column" 
                                                   FrozenColumnCount="4" 
                                                   FrozenBottomRowsCount="1" 
                                                   SelectionMode="SingleRow"
                                                   Margin="8,0,8,0">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="dgScrapCtnr" IsChecked="{Binding CHK, Mode=OneWay}" x:Name="dgScrapCtnrChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgScrapCtnrChoice_Checked"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn      Header = "대차ID"                Binding = "{Binding CTNR_ID}"                HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn      Header = "PJT"                   Binding = "{Binding PRJT_NAME}"              HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "제품ID"                Binding = "{Binding PRODID}"                 HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "시장유형"              Binding = "{Binding MKT_TYPE_NAME}"          HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "시장유형코드"          Binding = "{Binding MKT_TYPE_CODE}"          HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridNumericColumn   Header = "불량등록수량"          Binding = "{Binding WIPQTY}"                 HorizontalAlignment="Right"  Format="###,###,##0" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>

                                            <c1:DataGridNumericColumn   Header = "Scan Cell수량"         Binding = "{Binding SCAN_QTY}"               HorizontalAlignment="Right"  Format="###,###,##0" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False">
                                                <c1:DataGridAggregate.AggregateFunctions>
                                                    <c1:DataGridAggregatesCollection>
                                                        <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                    </c1:DataGridAggregatesCollection>
                                                </c1:DataGridAggregate.AggregateFunctions>
                                            </c1:DataGridNumericColumn>

                                            <c1:DataGridTextColumn      Header = "생성일시"              Binding = "{Binding INSDTTM}"                HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "변경일시"              Binding = "{Binding UPDDTTM}"                HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "PROCID"                Binding = "{Binding PROCID}"                 HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "PROCNAME"              Binding = "{Binding PROCNAME}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "EQSGID"                Binding = "{Binding EQSGID}"                 HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "작업유형코드"          Binding = "{Binding FORM_WRK_TYPE_CODE}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "작업유형명"            Binding = "{Binding FORM_WRK_TYPE_NAME}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "대차상태코드"          Binding = "{Binding CTNR_STAT_CODE}"         HorizontalAlignment="Center" Visibility="Collapsed" />
