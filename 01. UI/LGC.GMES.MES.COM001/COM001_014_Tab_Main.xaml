<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_014_Tab_Main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             xmlns:cmm001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ContextMenu x:Key="_gridMenu">
                <MenuItem x:Name="LossDetail"/>
                <MenuItem x:Name="LossSplit"/>
            </ContextMenu>

            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.CMM001;component/PopupFindControlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>


    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="설비 LOSS 등록">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*"/>
                    <!--<RowDefinition Height="300"/>
                    <RowDefinition Height="8" />
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8" />
                    <RowDefinition/>-->
                </Grid.RowDefinitions>

                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                </Grid.ColumnDefinitions>-->

                <!--백그라운드용-->
                <Border     Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" Margin="0,3,0,0"/>

                <!--조회영역-->
                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="11" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="11" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <!--by 2023 03 16 오화백-->
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>

                    <!--조회조건-->
                    <!--ROW1-->
                    <Grid Grid.Row="1" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>
                    <Grid Grid.Row="1" Grid.Column="6">
                        <!--2023 02 20 오화백-->
                        <uc:UcBaseButton  x:Name="btnEqpRemark" Content="{Binding ConverterParameter='인수인계', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnEqpRemark_Click" VerticalAlignment="Bottom" />
                    </Grid>

                    <!--ROW2-->
                    <Grid Grid.Row="3" Grid.Column="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='날짜', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <ctrlLib:LGCDatePicker  Grid.Column="1" x:Name="ldpDatePicker"  DatepickerType="Date"/>
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseComboBox          Grid.Column="1" x:Name="cboShift" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="2" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='부동내역 역순정렬', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseCheckBox               Grid.Column="1" x:Name="chkLossSort" Checked="chkLossSort_Checked" Unchecked="chkLossSort_Unchecked"/>

                        <TextBlock              Grid.Column="3" Text="{Binding ConverterParameter='부동내역 전체조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseCheckBox               Grid.Column="4" x:Name="chkSearchAll" />

                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="1.5*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='메인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseCheckBox               Grid.Column="1" x:Name="chkMain"   IsChecked="True" Click="chkMain_Click"/>
                        <!-- 클릭이벤트 2023 03 16 오화백-->

                        <uc:UcBaseComboBox          Grid.Column="2" x:Name="cboColor" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>
                    <!--Machine 설비 2023 03 16 오화백-->
                    <Grid Grid.Row="1" Grid.Column="4" x:Name="Machine" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='Machine', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseComboBox      Grid.Column="1" x:Name="cboEquipment_Machine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>
                    <!--Machine Multi 2025 07 10 오화백-->
                    <Grid Grid.Row="1" Grid.Column="4" x:Name="MachineMulti" Visibility="Collapsed">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='Machine', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <ctrlLib:MultiSelectionBox  Grid.Column="1" x:Name="cboEquipment_Machine_Multi"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" isAllUsed="True"/>
                    </Grid>
                    <!-- TEST/개발 -->
                    <Grid Grid.Row="3" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <!--<TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='TEST_DEV', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseCheckBox               Grid.Column="1" x:Name="chkTestDev" Click="chkTestDev_Click" />-->
                        <!--Machine Multi 2025 07 10 오화백-->
                        <Grid Grid.Column="2" Grid.ColumnSpan="2" x:Name="grMulti" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='MACHINE_MULTI', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <CheckBox               Grid.Column="1" x:Name="chkMachMulti" Checked="chkMachMulti_Checked" Unchecked="chkMachMulti_Unchecked" />
                        </Grid>
                    </Grid>
                    <!--조회 버튼-->
                    <!--Grid.Column="5"==> 6으로 변경 -->
                    <uc:UcBaseButton     Grid.Row="3" Grid.Column="6" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                </Grid>

                <Grid Grid.Row="2" Grid.Column="1" x:Name="grUp">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="300"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!--색지도-->
                    <!--백그라운드용-->
                    <Border     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_InputForm_GroupBorderStyle}" BorderThickness="1"/>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <ScrollViewer x:Name="svMap" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1" Background="White">
                            <Border Style="{StaticResource Content_InputForm_LabelBorderStyle}" Background="Transparent" Margin="8">
                                <Grid x:Name="_grid" HorizontalAlignment="Left" Height="Auto" VerticalAlignment="Top" Width="Auto" Margin="0,0,0,0">

                                </Grid>
                            </Border>

                        </ScrollViewer>

                    </Grid>

                    <GridSplitter Grid.Row="1" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <!--데이타 등록-->
                    <Grid Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="127*" />
                            <ColumnDefinition Width="126*" />
                            <ColumnDefinition Width="126*" />
                            <ColumnDefinition Width="125*" />
                            <ColumnDefinition Width="127*" />
                            <ColumnDefinition Width="126*" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="126*"/>
                            <ColumnDefinition Width="125*"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>


                        <!--백그라운드용-->
                        <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                        <!--<ToggleButton   Grid.Row="1"  Grid.Column="11"  x:Name="btnExpandFrameLeft" Style="{StaticResource btnLeftTopConerStyleVertical}" IsChecked="False" Checked="btnExpandFrameLeft_Checked" Unchecked="btnExpandFrameLeft_Unchecked" HorizontalAlignment="Right"/>-->
                        <Border         Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="1" Grid.Column="1" x:Name="tbEqptName" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,0"/>
                        <TextBox        Grid.Row="1" Grid.Column="2"  x:Name="txtEqptName"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>

                        <Border         Grid.Row="1" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="1" Grid.Column="4" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,0"/>
                        <TextBox        Grid.Row="1" Grid.Column="4"  x:Name="txtStart"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>

                        <Border         Grid.Row="1" Grid.Column="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="1" Grid.Column="5" Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,1,0"/>
                        <TextBox        Grid.Row="1" Grid.Column="6" Grid.ColumnSpan="2"  x:Name="txtEnd"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>

                        <Border         Grid.Row="1" Grid.Column="8" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="1" Grid.Column="8" Text="{Binding ConverterParameter='동/공정별 Loss', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="1" Grid.Column="9" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}"  BorderThickness="1,1,1,0"/>
                        <uc:UcBaseComboBox  Grid.Row="1" Grid.Column="9" x:Name="cboLossEqsgProc" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboLossEqsgProc_SelectedItemChanged"/>
                        <!--<StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="9" HorizontalAlignment="Left">
                        <uc:UcBaseCheckBox x:Name="chkW" Content="W" Margin="5,0,0,0"/>
                        <uc:UcBaseCheckBox x:Name="chkT" Content="T" Margin="5,0,0,0"/>
                        <uc:UcBaseCheckBox x:Name="chkU" Content="U" Margin="5,0,0,0"/>
                        </StackPanel>-->

                        <ToggleButton   Grid.Row="1"  Grid.Column="11"  x:Name="btnExpandFrameLeft" Style="{StaticResource btnLeftTopConerStyleVertical}" IsChecked="False" Checked="btnExpandFrameLeft_Checked" Unchecked="btnExpandFrameLeft_Unchecked" HorizontalAlignment="Right" Margin="8,0,0,0"/>
                        <TextBox        Grid.Row="1" Grid.Column="7" x:Name="txtStartHidn" Visibility="Hidden"/>
                        <TextBox        Grid.Row="1" Grid.Column="7" x:Name="txtEndHidn" Visibility="Hidden"/>

                        <Border         Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="2" Grid.Column="1" x:Name="tbOccrEqpt" Text="{Binding ConverterParameter='원인설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="2" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,0"/>
                        <uc:UcBaseComboBox  Grid.Row="2" Grid.Column="2" x:Name="cboOccurEqpt" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" IsDropDownOpenChanged="cboOccurEqpt_dropDownChanged"/>

                        <Border         Grid.Row="2" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="2" Grid.Column="3" Text="{Binding ConverterParameter='LOSS분류', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="2" Grid.Column="4" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,0"/>
                        <uc:UcBaseComboBox  Grid.Row="2" Grid.Column="4" x:Name="cboLoss" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboLoss_SelectedItemChanged"/>

                        <Border         Grid.Row="2" Grid.Column="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="2" Grid.Column="5" Text="{Binding ConverterParameter='부동내용', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="2" Grid.Column="6" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,1,0"/>
                        <cmm001:PopupFindControl Grid.Row="2" Grid.Column="6" Margin="8,0,0,0" x:Name="popLossDetl" SelectedValuePath="CBO_CODE" DisplayMemberPath="CBO_NAME"  PopupDisplayMode="TextOnly" MinWidth="80" Width="Auto" ValueChanged="popLossDetl_ValueChanged"/>

                        <uc:UcBaseButton        Grid.Row="2" Grid.Column="7"  x:Name="btnSearchLossDetlCode"        Style="{DynamicResource Content_SearchButtonStyle}" Click="btnSearchLossDetlCode_Click" Margin="1,3,6,3" Height="Auto" />

                        <Border         Grid.Row="2" Grid.Column="8" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="2" Grid.Column="8" Text="{Binding ConverterParameter='최근등록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="2" Grid.Column="9" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,1,0"/>
                        <uc:UcBaseComboBox  Grid.Row="2" Grid.Column="9" Grid.ColumnSpan="3" x:Name="cboLastLoss" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboLastLoss_SelectedItemChanged" />

                        <Border         Grid.Row="3" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="3" Grid.Column="1" Text="{Binding ConverterParameter='현상', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="3" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,0"/>
                        <uc:UcBaseComboBox  Grid.Row="3" Grid.Column="2" x:Name="cboFailure" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboFailure_SelectedItemChanged"/>

                        <Border         x:Name="bg_txtUser" Grid.Row="3" Grid.Column="8" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      x:Name="txtUser" Grid.Row="3" Grid.Column="8" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Grid Grid.Row="3" Grid.Column="3" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3.5*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>

                            <TextBox     Grid.Column="0" x:Name="txtFCRCode"        Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLossCode_KeyDown"/>
                            <uc:UcBaseButton Grid.Column="1"  x:Name="btnSearchLossCode"        Style="{DynamicResource Content_SearchButtonStyle}" Click="btnSearchLossCode_Click"/>
                        </Grid>

                        <Border         Grid.Row="3" Grid.Column="9" x:Name="bg_txtPerson" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,1,0"/>
                        <TextBox        Grid.Row="3" Grid.Column="9" x:Name="txtPerson" Style="{StaticResource TextBoxBaseStyle}" KeyDown="txtPerson_KeyDown" Margin="3,3,3,0" VerticalAlignment="Top" KeyUp="txtPerson_KeyUp"/>

                        <Border         Grid.Row="3" Grid.Column="11" x:Name="bg_btnPerson"  Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,1,0"/>
                        <uc:UcBaseButton  Grid.Row="3" Grid.Column="11" x:Name="btnPerson" Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnPerson_Click"  Cursor="Hand" Margin="0,3,5,0" VerticalAlignment="Top"/>

                        <Border         Grid.Row="3" Grid.Column="4" Grid.RowSpan="2"  Grid.ColumnSpan="4" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,0"/>
                        <RichTextBox     Grid.Row="3" Grid.Column="4" Grid.RowSpan="2" Grid.ColumnSpan="4" x:Name="rtbLossNote" Margin="0"  MaxHeight="50" MinHeight="50" >
                            <RichTextBox.Resources>
                                <Style TargetType="{x:Type Paragraph}">
                                    <Setter Property="Margin" Value="0"/>
                                </Style>
                            </RichTextBox.Resources>
                        </RichTextBox>
                        <!--<TextBox        Grid.Row="3" Grid.Column="4" Grid.RowSpan="2" Grid.ColumnSpan="8" x:Name="txtLossNote"        Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto"/>-->


                        <uc:UcBaseButton         Grid.Row="4" Grid.Column="3" x:Name="btnRegiFcr" Content="{Binding ConverterParameter='FCR그룹등록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnRegiFcr_Click"/>
                        <Border         Grid.Row="4" Grid.Column="1"   Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <TextBlock      Grid.Row="4" Grid.Column="1"   Text="{Binding ConverterParameter='원인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="4" Grid.Column="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,0"/>
                        <uc:UcBaseComboBox  Grid.Row="4" Grid.Column="2"   x:Name="cboCause" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboCause_SelectedItemChanged"/>

                        <uc:UcBaseButton         Grid.Row="4" Grid.Column="9" Grid.ColumnSpan="3" x:Name="btnEMSWOReq" Content="{Binding ConverterParameter='EMSWO발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" HorizontalAlignment="Right" Click="btnEMSWOReq_Click"/>

                        <Border         Grid.Row="5" Grid.Column="1"   Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,1"/>
                        <TextBlock      Grid.Row="5" Grid.Column="1"   Text="{Binding ConverterParameter='조치', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="5" Grid.Column="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,1"/>
                        <uc:UcBaseComboBox  Grid.Row="5" Grid.Column="2"   x:Name="cboResolution" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboResolution_SelectedItemChanged"/>

                        <Border         Grid.Row="5" Grid.Column="3"   Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,1,1"/>
                        <TextBlock      Grid.Row="5" Grid.Column="3"   Text="{Binding ConverterParameter='입력필요', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="5" Grid.Column="4"   Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,0,1"/>
                        <TextBox        Grid.Row="5" Grid.Column="4"   x:Name="txtRequire" Text="" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>

                        <Border         Grid.Row="5" Grid.Column="5"   Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,1"/>
                        <TextBlock      Grid.Row="5" Grid.Column="5"   Text="{Binding ConverterParameter='입력완료', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                        <Border         Grid.Row="5" Grid.Column="6"   Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderThickness="1,1,1,1"/>
                        <TextBox        Grid.Row="5" Grid.Column="6"   x:Name="txtWriteEnd" Text="" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>

                        <Border         Grid.Row="5" Grid.Column="7" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderThickness="1,1,0,0"/>
                        <Grid Grid.Row="5" Grid.Column="7" Grid.ColumnSpan="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock      Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='개별등록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="9" HorizontalAlignment="Left">
                                <uc:UcBaseCheckBox x:Name="chkW" Content="W" Margin="5,0,0,0"/>
                                <uc:UcBaseCheckBox x:Name="chkT" Content="T" Margin="5,0,0,0"/>
                                <uc:UcBaseCheckBox x:Name="chkU" Content="U" Margin="5,0,0,0"/>
                            </StackPanel>

                        </Grid>

                        <StackPanel Orientation="Horizontal"  Grid.Row="5" Grid.Column="9" Grid.ColumnSpan="3" HorizontalAlignment="Right">
                            <uc:UcBaseButton     x:Name="btnReset" Content="{Binding ConverterParameter=초기화, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnReset_Click" Margin="30,0,4,0"/>
                            <uc:UcBaseButton     x:Name="btnSave"  Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSave_Click" Margin="0,3,4,0" VerticalAlignment="Top"/>
                            <uc:UcBaseButton     x:Name="btnTotalSave"  Content="{Binding ConverterParameter=일괄저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnTotalSave_Click"/>
                        </StackPanel>

                    </Grid>

                    <!--리스트-->
                    <Grid Grid.Row="4" Grid.Column="1">
                        <!--백그라운드용-->
                        <Border     Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                        <uc:UcBaseDataGrid x:Name="dgDetail" Grid.Row="0" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" MouseDoubleClick="dgDetail_MouseDoubleClick" LoadedCellPresenter="dgDetail_LoadedCellPresenter" LoadedColumnHeaderPresenter="dgDetail_LoadedColumnHeaderPresenter" Margin="8"  ClipboardPasteMode="None">
                            <c1:C1DataGrid.Resources>
                                <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_input_search.png" Stretch="Uniform"/>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </c1:C1DataGrid.Resources>
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTemplateColumn Name="CHK" Width="35">
                                    <c1:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="CheckBoxChanged" Unchecked="CheckBoxChanged"/><!--Machine Multi 2025 07 10 오화백-->
                                        </DataTemplate>
                                    </c1:DataGridTemplateColumn.CellTemplate>
                                </c1:DataGridTemplateColumn>

                                <c1:DataGridTextColumn   x:Name="CHECK_DELETE"         Header = "삭제"         Binding = "{Binding CHECK_DELETE}"        HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "설비명"       Binding = "{Binding EQPTNAME}"            HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "LOTID"        Binding = "{Binding LOTID}"               HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "프로젝트명"   Binding = "{Binding PRJT_NAME}"           HorizontalAlignment="Center"/>
                                <c1:DataGridTextColumn      Header = "LOTYNAME"  x:Name="lotTname" Binding = "{Binding LOTYNAME}"           HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridDateTimeColumn  Header = "시작일"       Binding = "{Binding STRT_DTTM}"           HorizontalAlignment="Center"  IsReadOnly="True" DateFormat="Custom" CustomDateFormat="yyyy-MM-dd" />
                                <c1:DataGridTextColumn      Header = "시작시간"     Binding = "{Binding START_TIME}"          HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "종료시간"     Binding = "{Binding END_TIME}"            HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "경과"         Binding = "{Binding SECONDS}"             HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "LOSS분류"     Binding = "{Binding LOSS_NAME}"           HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "부동내용"     Binding = "{Binding LOSS_DETL_NAME}"      HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "TRBL_KWD"     Binding = "{Binding TRBL_KWD}"      HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn      Header = "현상"         Binding = "{Binding SYMP_CODENAME}"       HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "원인"         Binding = "{Binding CAUSE_CODENAME}"      HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "조치"         Binding = "{Binding REPARI_CODENAME}"     HorizontalAlignment="Center" />
                                <c1:DataGridTemplateColumn Name="txtNote"  Header = "비고" >
                                    <c1:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding LOSS_NOTE}" TextWrapping ="WrapWithOverflow" Width="Auto" MinWidth="100" MaxWidth="400"/>
                                        </DataTemplate>
                                    </c1:DataGridTemplateColumn.CellTemplate>
                                </c1:DataGridTemplateColumn>
                                <c1:DataGridTextColumn      Header = "TROUBLEID"    Binding = "{Binding TRBL_CODE}"        HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "TROUBLE명"    Binding = "{Binding TRBL_NAME}"        HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "원인설비"     Binding = "{Binding CAUSE_EQPTNAME}"   HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "작업자"       Binding = "{Binding WRK_USERNAME}"     HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn   x:Name="SPLIT"                Header = "분할"         Binding = "{Binding SPLIT}"               HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn   x:Name="COND_ADJ_TIME_FLAG"   Header = "분할구분"     Binding = "{Binding COND_ADJ_TIME_FLAG}"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn   x:Name="HIDDEN_START"         Header = "시작"         Binding = "{Binding HIDDEN_START}"        HorizontalAlignment="Center" Visibility="Collapsed" />
                                <c1:DataGridTextColumn   x:Name="HIDDEN_END"           Header = "종료"         Binding = "{Binding HIDDEN_END}"          HorizontalAlignment="Center" Visibility="Collapsed" />
                                <c1:DataGridTemplateColumn    Header = "변경이력"     Name="HISTORY"    Width="55" >
                                    <c1:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Click="btnChgHistory_Click" Style="{StaticResource grButtonStyle}" />
                                        </DataTemplate>
                                    </c1:DataGridTemplateColumn.CellTemplate>
                                </c1:DataGridTemplateColumn>
                                <c1:DataGridTextColumn      Header = "EQPTID"       Binding = "{Binding EQPTID}"            HorizontalAlignment="Center" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "TROUBLE_CAUSE_EQPTID"     Binding = "{Binding TROUBLE_CAUSE_EQPTID}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn      Header = "TROUBLE_CAUSE_EQPTNAME"       Binding = "{Binding TROUBLE_CAUSE_EQPTNAME}"            HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn      Header = "TROUBLE_CAUSE_ALARMCODE"     Binding = "{Binding TROUBLE_CAUSE_ALARMCODE}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn      Header = "TROUBLE_CAUSE_ALARMNAME"       Binding = "{Binding TROUBLE_CAUSE_ALARMNAME}"           HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn      Header = "TROUBLE_CAUSE_EQPT_STAT"     Binding = "{Binding TROUBLE_CAUSE_EQPT_STAT}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn      Header = "ORIGIN_SECONDS"     Binding = "{Binding ORIGIN_SECONDS}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn      Header = "EQPT_LOSS_MAND_REG_BAS_OVER_TIME"       Binding = "{Binding EQPT_LOSS_MAND_REG_BAS_OVER_TIME}"            HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn      Header = "TRANSACTION_SERIAL_NO"       Binding = "{Binding TRANSACTION_SERIAL_NO}"            HorizontalAlignment="Center" Visibility="Collapsed"/>
                            </c1:C1DataGrid.Columns>
                        </uc:UcBaseDataGrid>
                    </Grid>
                </Grid>


            </Grid>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
