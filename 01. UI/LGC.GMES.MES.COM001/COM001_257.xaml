<UserControl x:Class="LGC.GMES.MES.COM001.COM001_257"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:CMM001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ItemTemplate">
                <WrapPanel>
                    <Image Width="138" Height="138" Stretch="Fill" Source="{Binding}" Margin="3,3,3,3" />
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!--<ColumnDefinition Width="*"/>-->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>

        </Grid.Resources>

        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="투입 실적 조회(전극)" Grid.ColumnSpan="2">
            <Grid>
                <c1:C1TabControl>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입 실적 조회'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="0" />
                            </Grid.RowDefinitions>


                            <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--조회영역-->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="120" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="120" />

                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="120"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <!--10-->
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>

                                    <!--<ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>-->

                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock                            Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='동',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='LINE',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='공정',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='설비',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='생산구분',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='작업일',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='LOTID',          Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="2" Text="{Binding ConverterParameter='모델',           Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="4" Text="{Binding ConverterParameter='제품ID',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="6" Text="{Binding ConverterParameter='프로젝트명',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock                            Grid.Row="2" Grid.Column="8" Text="{Binding ConverterParameter='차이값(절대값)', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Collapsed"/>

                                <c1:C1ComboBox x:Name="cboArea"                Grid.Row="1" Grid.Column="1"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox x:Name="cboEquipmentSegment"    Grid.Row="1" Grid.Column="3"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox x:Name="cboProcess"             Grid.Row="1" Grid.Column="5"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox x:Name="cboEquipment"           Grid.Row="1" Grid.Column="7"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <ctrlLib:LGCDatePicker x:Name="dtpDateFrom"    Grid.Row="0" Grid.Column="1"  DatepickerType="Date"   />
                                <TextBlock   x:Name="dtpGubun" Grid.Row="0" Grid.Column="2" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment='Center' />
                                <ctrlLib:LGCDatePicker x:Name="dtpDateTo"      Grid.Row="0" Grid.Column="3"  DatepickerType="Date"   />

                                <StackPanel Orientation="Horizontal"  Grid.Row="0" Grid.Column="5" Grid.ColumnSpan="2" x:Name="DateGubun">
                                    <RadioButton Grid.Row="0"  Grid.Column="0" Margin="10,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=일}"   
                                             GroupName="RadioButton_Type" Name="rboDay" Style="{StaticResource SearchCondition_RadioButtonStyle}" IsChecked="True" Click="rdoButton_Click"   />

                                    <RadioButton Grid.Row="0"  Grid.Column="1" Margin="10,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=월}"   
                                             GroupName="RadioButton_Type" Name="rboMonth" Style="{StaticResource SearchCondition_RadioButtonStyle}" Click="rdoButton_Click" />
                                </StackPanel>
                                <c1:C1ComboBox  Grid.Row="0" Grid.Column="7" x:Name="cboProductDiv" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath="" />
                                <TextBox       x:Name="txtLotId"               Grid.Row="2" Grid.Column="1"  Style="{StaticResource SearchCondition_TextBoxStyle}" CharacterCasing="Upper" KeyDown="txtLotId_KeyDown" />
                                <CMM001:AutoCompleteTextBox x:Name="txtModlId" Grid.Row="2" Grid.Column="3"  Threshold="2" DelayTime="100" Height="30" MaxWidth="120" GotFocus="txtModlId_GotFocus"/>
                                <TextBox       x:Name="txtProdId"              Grid.Row="2" Grid.Column="5"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" />
                                <TextBox       x:Name="txtPrjtName"            Grid.Row="2" Grid.Column="7"  Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" KeyDown="txtPrjtName_KeyDown" />
                                <!--<c1:C1NumericBox x:Name="txtDIFF"              Grid.Row="2" Grid.Column="9"  MinWidth="80" Visibility="{Binding TEXTVISIBLE}" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" CornerRadius="0" AllowNull="True" HandleUpDownKeys="False" Format="#,##0" KeyDown="txtDIFF_KeyDown"/>-->

                                <!--조회 버튼-->
                                <Button     Grid.Row="0" Grid.Column="13"      Grid.RowSpan="2" Grid.ColumnSpan="3" x:Name="btnSearchHold" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" 
                                Cursor="Hand" Click="btnSearch_Click" HorizontalAlignment="Right"/>

                            </Grid>

                            <Grid Grid.Row="2" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" Grid.ColumnSpan="3" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Grid.ColumnSpan="3" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='LOT리스트', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgLotList" Grid.Row="1" Grid.ColumnSpan="3" IsReadOnly="False" HeadersVisibility="Column" FrozenColumnCount="3" SelectionMode="MultiRange" Margin="8,8,8,8">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHK" Width="60" Visibility="Collapsed" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgProductLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgProductLotChoice" HorizontalAlignment="Center" Checked="dgProductLotChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "LOTID"                   Binding = "{Binding LOTID}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "LOT 유형"                Binding = "{Binding LOTYNAME}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "제품"                    Binding = "{Binding PRODID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "제품명"                  Binding = "{Binding PRODNAME}"               IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn      Header = "모델"                    Binding = "{Binding MODLID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "PJT"                     Binding = "{Binding PRJT_NAME}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "설비명"                  Binding = "{Binding EQPTNAME}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "작업일"                  Binding = "{Binding CALDATE}"                IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "시장유형"                Binding = "{Binding MKT_TYPE_CODE}"          IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "단위"                    Binding = "{Binding UNIT_CODE}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "투입량"                  Binding = "{Binding MTRL_INPUT_QTY}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                                        <c1:DataGridTextColumn      Header = "투입량(양면)"            Binding = "{Binding INPUT_QTY_TOP_BACK}"     IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "투입량(단면)"            Binding = "{Binding INPUT_QTY_TOP}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "환산량"                  Binding = "{Binding CONVER_RATE}"          IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.###"/>
                                        <c1:DataGridTextColumn      Header = "생산량"                  Binding = "{Binding INPUT_QTY}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "COL_01"                  Binding = "{Binding COL_01}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "양품량"                  Binding = "{Binding WIPQTY_ED}"             IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "COL_02"                  Binding = "{Binding COL_02}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "불량량"                  Binding = "{Binding CNFM_DFCT_QTY}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "COL_03"                  Binding = "{Binding COL_03}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "LOSS량"                  Binding = "{Binding CNFM_LOSS_QTY}"         IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "COL_04"                  Binding = "{Binding COL_04}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "물품청구"                Binding = "{Binding CNFM_PRDT_REQ_QTY}"     IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##" />
                                        <c1:DataGridTextColumn      Header = "COL_05"                 Binding = "{Binding COL_05}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "투입 LOSS"               Binding = "{Binding NON_LOSS_QTY}"             IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                                        <c1:DataGridTextColumn      Header = "COL_06"                 Binding = "{Binding COL_06}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "길이초과"                Binding = "{Binding LENGTH_EXCEED}"             IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>
                                        <c1:DataGridTextColumn      Header = "COL_07"                Binding = "{Binding COL_07}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <!-- 김현성 선임 요청에 의해 전공정에 대한 수율(YRATE) 값 삭제처리 -->
                                        <!--<c1:DataGridTextColumn      Header = "수율(%)"                 Binding = "{Binding YRATE}"              IsReadOnly="True" HorizontalAlignment="Right" Format="###,###,##0.##"/>-->
                                        <c1:DataGridTextColumn      Header = "W/O"                     Binding = "{Binding WOID}"                   IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "자재ID"                  Binding = "{Binding MTRLID}"                 IsReadOnly="True" HorizontalAlignment="Center"  />
                                        <c1:DataGridTextColumn      Header = "COL_08"                  Binding = "{Binding COL_08}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />

                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <Grid Grid.Row="4" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                                <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                                <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <Grid Grid.Row="0" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" BorderThickness="1" Grid.ColumnSpan="2" Style="{StaticResource BorderSubTitleStyle}" Background="White"/>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='투입이력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Grid>

                                    <c1:C1DataGrid  Grid.Row="2" x:Name="dgInputHistory1" IsReadOnly="True" HeadersVisibility="Column"  SelectionMode="SingleCell">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn        Header = "LOTID"       Binding = "{Binding LOTID}"   HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "제품"          Binding = "{Binding PRODID}"  HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "PJT"           Binding = "{Binding PRJT_NAME}"  HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "투입량"       Binding = "{Binding INPUT_QTY}"   HorizontalAlignment="Right" Format="#,##0.##"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "양품량"       Binding = "{Binding WIPQTY_ED}" HorizontalAlignment="Right" Format="#,##0.##"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "환산량(KG)"       Binding = "{Binding CONVER_RATE}" HorizontalAlignment="Right" Format="#,##0.##"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "환산량(M)"        Binding = "{Binding CONVER_RATE}" HorizontalAlignment="Right" Format="#,##0.##"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "시작시간"     Binding = "{Binding WIPDTTM_ST}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "종료시간"     Binding = "{Binding WIPDTTM_ED}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>

                                    <!--백그라운드용-->

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" BorderThickness="1" Grid.ColumnSpan="99" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='완성LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Grid>

                                    <c1:C1DataGrid  Grid.Row="2" x:Name="dgInputHistory2" IsReadOnly="True" HeadersVisibility="Column"  SelectionMode="SingleCell">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn        Header = "LOTID"       Binding = "{Binding LOTID}"   HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "제품"          Binding = "{Binding PRODID}"  HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "PJT"           Binding = "{Binding PRJT_NAME}"  HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "투입량"       Binding = "{Binding INPUT_QTY}"   HorizontalAlignment="Right" Format="#,##0.##"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "양품량"       Binding = "{Binding WIPQTY_ED}" HorizontalAlignment="Right" Format="#,##0.##"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "환산량(KG)"       Binding = "{Binding CONVER_RATE}" HorizontalAlignment="Right" Format="#,##0.##"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "환산량(M)"        Binding = "{Binding CONVER_RATE}" HorizontalAlignment="Right" Format="#,##0.##"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn        Header = "시작시간"     Binding = "{Binding WIPDTTM_ST}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn        Header = "종료시간"     Binding = "{Binding WIPDTTM_ED}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>

                                <!--<Border Grid.Row="0" Grid.Column="2"  Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>-->
                            </Grid>

                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='부분 폐기 요청이력'}" Visibility="Hidden">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="45" />
                                    <RowDefinition Height="45"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <!--ROW1-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboAreaHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    Grid.Row="0" Grid.Column="3"  x:Name="txtLotIDHist"        Style="{StaticResource SearchCondition_TextBoxStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='SKIDID(CSTID)', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    Grid.Row="0" Grid.Column="5"  x:Name="txtCSTIDHist"        Style="{StaticResource SearchCondition_TextBoxStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    Grid.Row="0" Grid.Column="7"  x:Name="txtReqUserHist"        Style="{StaticResource SearchCondition_TextBoxStyle}"/>

