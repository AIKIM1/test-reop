                                                <c1:DataGridTextColumn Header="LOSSRATE_BY_부동내용" Binding="{Binding LOSSRATE_BY_LOSS_DETL_CODE}" HorizontalAlignment="Center" Visibility="Visible" />
                                                <c1:DataGridTextColumn Header="TROUBLE명"            Binding="{Binding TRBL_NAME}"                  HorizontalAlignment="Center" Visibility="Visible" />
                                                <c1:DataGridTextColumn Header="비고"                 Binding="{Binding LOSS_NOTE}"                  HorizontalAlignment="Center" Visibility="Visible" />
                                                <c1:DataGridTextColumn Header="현상"                 Binding="{Binding SYMP_NAME}"                  HorizontalAlignment="Center" Visibility="Visible" />
                                                <c1:DataGridTextColumn Header="원인"                 Binding="{Binding CAUSE_NAME}"                 HorizontalAlignment="Center" Visibility="Visible" />
                                                <c1:DataGridTextColumn Header="조치"                 Binding="{Binding REPAIR_NAME}"                HorizontalAlignment="Center" Visibility="Visible" />
