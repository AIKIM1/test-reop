                                                <c1:DataGridTextColumn Header="LOTID"                Binding="{Binding LOTID}"                      HorizontalAlignment="Center" Visibility="Visible" />
                                                <c1:DataGridTextColumn Header="작업일자"             Binding="{Binding WRK_DATE1}"                  HorizontalAlignment="Center" Visibility="Visible" />
                                                <c1:DataGridTextColumn Header="시작시간"             Binding="{Binding START_TIME}"                 HorizontalAlignment="Center" Visibility="Visible" />
                                                <c1:DataGridTextColumn Header="종료시간"             Binding="{Binding END_TIME}"                   HorizontalAlignment="Center" Visibility="Visible" />
