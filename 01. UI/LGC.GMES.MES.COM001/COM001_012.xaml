                                    <uc:UcBaseButton  Grid.Row="0" Grid.Column="1"  x:Name="btnTestLossHist" Content="{Binding ConverterParameter='LOSS_HIST_IN_TESTLOSS', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnTestLossHist_Click" VerticalAlignment="Bottom" />
