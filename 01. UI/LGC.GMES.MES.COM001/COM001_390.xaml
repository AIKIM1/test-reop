<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_390"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="조립원자재 재고현황" Grid.RowSpan="2" Grid.ColumnSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <c1:C1TabControl x:Name="tabInventoryMain" >
                    <c1:C1TabItem x:Name="tabInventory" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='재고현황'}" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="6" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5" />                                
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>                                    
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>                                    
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>                                    
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>                                    
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0"   Grid.RowSpan="2" Grid.ColumnSpan="16" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock         Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox     Grid.Column="1" x:Name="cboProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboProcess_SelectedItemChanged"/>
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock                  Grid.Column="0" Text="{Binding ConverterParameter='라인',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <!--<uc:UcBaseComboBox     Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboEquipmentSegment_SelectedItemChanged" />-->
                                    <ctrlLib:MultiSelectionBox  Grid.Column="1" x:Name="cboEquipmentSegment" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectionChanged="cboEquipmentSegment_SelectionChanged" />
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock         Grid.Column="0" Text="{Binding ConverterParameter='설비',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox     Grid.Column="1" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>                                
                                <Grid Grid.Row="0" Grid.Column="7">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock                  Grid.Column="0" Text="{Binding ConverterParameter='자재분류', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <!--<uc:UcBaseComboBox     Grid.Column="1" x:Name="cboMtrlClass" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />-->
                                    <ctrlLib:MultiSelectionBox  Grid.Column="1" x:Name="cboMtrlClass" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="9">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="6*"/>
                                        <ColumnDefinition Width="4*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock         Grid.Column="0" Text="{Binding ConverterParameter='자동공급여부', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox     Grid.Column="1" x:Name="cboAutoSupply" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>
                                <!--조회 버튼-->
                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="11" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}"  Cursor="Hand" Margin="4,0,0,0" Click="btnSearch_Click" />
                            </Grid>

                            <!--재고현황-->
                            <Grid Grid.Row="3">
                                <Grid x:Name="ExcArea" Grid.Column="0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <!--백그라운드용-->
                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='재고현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                        <uc:UcBaseButton    Grid.Column="3" x:Name="btnMaterialRequest"   Content="{Binding ConverterParameter=수동자재요청,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnMaterialRequest_Click"  Cursor="Hand" Height="29" Margin="4,0,0,0"/>
                                    </Grid>

                                    <uc:UcBaseDataGrid x:Name="dgList" Grid.Row="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange"  Margin="8" LoadedCellPresenter="dgList_LoadedCellPresenter" MouseDoubleClick="dgList_MouseDoubleClick" >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn      Header = "자재 PORT"      Binding = "{Binding MTRL_PORT_ID}"     HorizontalAlignment="Center"   IsReadOnly="True" />
                                            <c1:DataGridTextColumn      Header = "공정"           Binding = "{Binding PROCID}"           HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "공정"           Binding = "{Binding PROCNAME}"         HorizontalAlignment="Center"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Header = "라인"           Binding = "{Binding EQSGID}"           HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "라인"           Binding = "{Binding EQSGNAME}"         HorizontalAlignment="Center"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Header = "설비"           Binding = "{Binding EQPTID}"           HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "설비"           Binding = "{Binding EQPTNAME}"         HorizontalAlignment="Center"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Header = "자재분류"        Binding = "{Binding MTRL_CLSS_CODE}"   HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "자재분류"        Binding = "{Binding MTRL_CLSS_NAME}"   HorizontalAlignment="Center"   IsReadOnly="True"/>                                            
                                            <c1:DataGridTextColumn      Header = "자재코드"        Binding = "{Binding MTRLID}"           HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridNumericColumn   Header = "보관수량"        Binding = "{Binding KEP_STCK_QTY}"     HorizontalAlignment="Center"   Format="#,##0" IsReadOnly="True"/>
                                            <c1:DataGridNumericColumn   Header = "주의수량"        Binding = "{Binding CATN_STCK_QTY}"    HorizontalAlignment="Center"   Format="#,##0" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridNumericColumn   Header = "위험수량"        Binding = "{Binding DNGR_STCK_QTY}"    HorizontalAlignment="Center"   Format="#,##0" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridNumericColumn   Header = "ON-HAND"        Binding = "{Binding ON_HAND}"          HorizontalAlignment="Right"   Format="#,##0" IsReadOnly="True"/>
                                            <c1:DataGridNumericColumn   Header = "DELIVERING"     Binding = "{Binding DELIVERING}"       HorizontalAlignment="Right"   Format="#,##0" IsReadOnly="True"/>
                                            <c1:DataGridNumericColumn   Header = "REQUEST"        Binding = "{Binding REQUEST}"          HorizontalAlignment="Right"    Format="#,##0" IsReadOnly="True" />
                                            <c1:DataGridTemplateColumn  Header="자동공급여부" Width="Auto" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding AUTO_SPLY_FLAG, Mode=TwoWay}" HorizontalAlignment="Center" Click="CheckBox_Click" Cursor="Hand"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                        </c1:C1DataGrid.Columns>
                                    </uc:UcBaseDataGrid>
                                </Grid>
                            </Grid>
                            <GridSplitter Grid.Row="4" Grid.ColumnSpan="2" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                            <Grid Grid.Row="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <!--재고현황-->
                                <Grid Grid.Column="0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <!--백그라운드용-->
                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Border Grid.Row="2" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <!-- Title -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='자재소진처리', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Grid>

                                    <!-- 소진처리 Kanban -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>                                            
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="1" Text="{Binding ConverterParameter='KANBAN_ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                            <TextBox   Grid.Column="3" x:Name="txtKanbanID" Style="{StaticResource SearchCondition_TextBoxStyle}" Width="Auto" MinWidth="200" CharacterCasing="Upper" KeyDown="txtKanbanID_KeyDown" />
                                        </Grid>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                                            <uc:UcBaseButton     x:Name="btnConsume"    Content="{Binding ConverterParameter=소진완료, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="Auto" Height="25" Margin="4,0,0,0" Click="btnConsume_Click"/>
                                            <uc:UcBaseButton     x:Name="btnRowDelete"  Content="{Binding ConverterParameter=행삭제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"        Cursor="Hand" Width="Auto" Height="25" Margin="4,0,0,0" Click="btnRowDelete_Click"/>
                                            <uc:UcBaseButton     x:Name="btnRowClear"   Content="{Binding ConverterParameter=초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"        Cursor="Hand" Width="Auto" Height="25" Margin="4,0,0,0" Click="btnRowClear_Click"/>
                                        </StackPanel>
                                    </Grid>
                                    <!-- 자재소진 -->
                                    <Grid Grid.Row="2">
                                        <uc:UcBaseDataGrid x:Name="dgConsume" Grid.Row="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange"  Margin="8" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn                         Binding = "{Binding CHK, Mode=TwoWay}"  IsReadOnly="False" HorizontalAlignment="Center" Name="CHK"  Width="40" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                <c1:DataGridTextColumn      Header = "KANBAN_ID"   Binding = "{Binding KANBAN_ID}"          HorizontalAlignment="Center"  Width="Auto" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "자재 PORT"    Binding = "{Binding CNFM_MTRL_PORT_ID}"  HorizontalAlignment="Center" Width="Auto"  IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "자재분류"     Binding = "{Binding MTRL_CLSS_CODE}"     HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "자재분류"     Binding = "{Binding MTRL_CLSS_NAME}"     HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "자재코드"     Binding = "{Binding MTRLID}"             HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridNumericColumn   Header = "수량"         Binding = "{Binding ISS_QTY}"            HorizontalAlignment="Right"  Width="Auto" IsReadOnly="True" Format="#,##0" />
                                                <c1:DataGridTextColumn      Header = "요청번호"     Binding = "{Binding REQ_NO}"             HorizontalAlignment="Center" Width="Auto" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "상태"         Binding = "{Binding REQ_STAT_CODE}"     HorizontalAlignment="Center" Width="Auto"  IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "설비"         Binding = "{Binding EQPTID}"            HorizontalAlignment="Center" Width="Auto"  IsReadOnly="True" Visibility="Collapsed"/>
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                    </Grid>
                                </Grid>
                                <GridSplitter Grid.Column="1" Grid.RowSpan="99" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                                <!--자재반품요청-->
                                <Grid Grid.Column="2" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="3*" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <!--백그라운드용-->
                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Border Grid.Row="2" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='자재반품요청', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Grid>

                                    <!-- Kanban -->
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="1" Text="{Binding ConverterParameter='KANBAN_ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                            <TextBox   Grid.Column="3" x:Name="txtReturnKanbanID" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="250" CharacterCasing="Upper" KeyDown="txtReturnKanbanID_KeyDown" />                                            
                                        </Grid>                                        
                                        <StackPanel Grid.Column="2"  Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,0,5,0">
                                            <uc:UcBaseButton     x:Name="btnReturn"           Content="{Binding ConverterParameter=반품요청, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="Auto" Height="25" Margin="4,0,0,0" Click="btnReturn_Click"/>
                                            <uc:UcBaseButton     x:Name="btnReturnRowDelete"  Content="{Binding ConverterParameter=행삭제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"        Cursor="Hand" Width="Auto" Height="25" Margin="4,0,0,0" Click="btnReturnRowDelete_Click"/>
                                            <uc:UcBaseButton     x:Name="btnReturnRowClear"   Content="{Binding ConverterParameter=초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"        Cursor="Hand" Width="Auto" Height="25" Margin="4,0,0,0" Click="btnReturnRowClear_Click"/>
                                        </StackPanel>
                                    </Grid>
                                    
                                    <Grid Grid.Row="2">
                                        <uc:UcBaseDataGrid x:Name="dgReturn" Grid.Row="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange"  Margin="8" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn                         Binding = "{Binding CHK, Mode=TwoWay}"  IsReadOnly="False" HorizontalAlignment="Center" Name="CHK"  Width="40" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                <c1:DataGridTextColumn      Header = "KANBAN_ID"   Binding = "{Binding KANBAN_ID}"          HorizontalAlignment="Center" Width="Auto" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "자재 PORT"    Binding = "{Binding CNFM_MTRL_PORT_ID}"      HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "자재분류"      Binding = "{Binding MTRL_CLSS_CODE}"    HorizontalAlignment="Center"  Width="Auto" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Header = "자재분류"      Binding = "{Binding MTRL_CLSS_NAME}"    HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "자재코드"      Binding = "{Binding MTRLID}"             HorizontalAlignment="Center" Width="Auto" IsReadOnly="True" />
                                                <c1:DataGridNumericColumn   Header = "수량"         Binding = "{Binding ISS_QTY}"            HorizontalAlignment="Right"  Width="Auto" Format="#,##0" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "요청번호"      Binding = "{Binding REQ_NO}"            HorizontalAlignment="Center"  Width="Auto" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "상태"          Binding = "{Binding REQ_STAT_CODE}"     HorizontalAlignment="Center" Width="Auto"  IsReadOnly="True"/>
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                    </Grid>
                                    <Grid Grid.Row="3" Margin="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="4*"/>
                                                <ColumnDefinition Width="6*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="34"/>
                                                <RowDefinition Height="34"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock         Grid.Column="0" Text="{Binding ConverterParameter='사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                            <uc:UcBaseComboBox     Grid.Column="1" x:Name="cboReason" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                        </Grid>
                                        <Grid Grid.Column="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="8*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <TextBlock      Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='NOTE',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                            <Grid Grid.Column="1" Grid.Row="0" Grid.RowSpan="2">
                                                <TextBox          x:Name="txtNote"       Style="{StaticResource Content_InputForm_TextBoxStyle}" Height="Auto" CharacterCasing="Upper" />
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>                            
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem x:Name="tabInventoryHistory" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='자재 입고/소진 이력'}" Loaded="tabInventoryHistory_Loaded">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
