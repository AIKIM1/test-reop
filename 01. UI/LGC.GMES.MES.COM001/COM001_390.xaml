                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='조회기간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <StackPanel Orientation="Horizontal"  Grid.Row="0" Grid.Column="1">
                                        <ctrlLib:LGCDatePicker  x:Name="dtpDateFrom"  DatepickerType="Date"/>
                                        <ctrlLib:LGCDatePicker  x:Name="dtpDateTo"  DatepickerType="Date"/>
                                    </StackPanel>

                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox          Grid.Column="1" x:Name="cboHisProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboHisProcess_SelectedItemChanged"/>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock                  Grid.Column="0" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <!--<uc:UcBaseComboBox          Grid.Column="1" x:Name="cboHisEquipmentSegment"     Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboHisEquipmentSegment_SelectedItemChanged" />-->
                                    <ctrlLib:MultiSelectionBox  Grid.Column="1" x:Name="cboHisEquipmentSegment" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectionChanged="cboHisEquipmentSegment_SelectionChanged" Loaded="cboHisEquipmentSegment_Loaded" />
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="7">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox          Grid.Column="1"  x:Name="cboHisEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="9">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock                  Grid.Column="0" Text="{Binding ConverterParameter='자재군', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <!--<uc:UcBaseComboBox          Grid.Column="1"  x:Name="cboHisMtrlClass" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />-->
                                    <ctrlLib:MultiSelectionBox  Grid.Column="1" x:Name="cboHisMtrlClass" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='요청상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox          Grid.Column="1"  x:Name="cboReqStatus" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>
                                
                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='자재코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox                Grid.Column="1"  x:Name="txtHisMaterial" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" CharacterCasing="Upper" />
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='KANBAN_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox                Grid.Column="1"  x:Name="txtHisKanbanID" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" CharacterCasing="Upper" />                                    
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="9">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <uc:UcBaseButton                 Grid.Column="1" x:Name="btnSearchResult" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Margin="4,0,0,0" Click="btnSearchResult_Click"/>
                                </Grid>
                            </Grid>

                            <!--리스트-->
                            <Grid Grid.Row="3">
                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"  Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3"  BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <Grid x:Name="Inventory_Result" Grid.Column="1" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    
                                    <!--백그라운드용-->
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                       
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='재고이력', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Grid>

                                    <uc:UcBaseDataGrid x:Name="dgListInventoryHistory" 
                                                   Grid.Row="1" 
                                                   IsReadOnly="False" 
                                                   HeadersVisibility="Column" 
                                                   SelectionMode="MultiRange" 
                                                   Margin="8"
                                                   >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn     Header = "공정"            Binding = "{Binding PROCID}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn     Header = "공정"            Binding = "{Binding PROCNAME}"          HorizontalAlignment="Center"   IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "설비"            Binding = "{Binding EQPTID}"            HorizontalAlignment="Center"   IsReadOnly="True"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn     Header = "설비"            Binding = "{Binding EQPTNAME}"          HorizontalAlignment="Center"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn     Header = "자재군"          Binding = "{Binding MTRL_CLSS_CODE}"    HorizontalAlignment="Center"   IsReadOnly="True"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn     Header = "자재군"          Binding = "{Binding MTRL_CLSS_NAME}"    HorizontalAlignment="Center"   IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "자재 PORT"       Binding = "{Binding MTRL_PORT_ID}"      HorizontalAlignment="Center"   IsReadOnly="True"  />                                            
                                            <c1:DataGridTextColumn     Header = "자재코드"        Binding = "{Binding MTRLID}"             HorizontalAlignment="Center"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn     Header = "요청번호"        Binding = "{Binding REQ_NO}"             HorizontalAlignment="Center"   IsReadOnly="True"  />
                                            <c1:DataGridTextColumn     Header = "자동공급여부"    Binding = "{Binding AUTO_SPLY_FLAG}"     HorizontalAlignment="Center"   IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "KANBAN_ID"      Binding = "{Binding KANBAN_ID}"          HorizontalAlignment="Center"   IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "BOXID"          Binding = "{Binding REPACK_BOX_ID}"      HorizontalAlignment="Center"   IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "요청상태"        Binding = "{Binding REQ_STAT_CODE}"      HorizontalAlignment="Center"   IsReadOnly="True" />
                                            <c1:DataGridNumericColumn  Header = "자재수량"        Binding = "{Binding ISS_QTY}"            HorizontalAlignment="Right"    IsReadOnly="True" Format="###,###,##0.##" />
                                            <c1:DataGridNumericColumn  Header = "소진수량"        Binding = "{Binding CONSUME_QTY}"        HorizontalAlignment="Right"    IsReadOnly="True" Format="###,###,##0.##" />
                                            <c1:DataGridNumericColumn  Header = "반품수량"        Binding = "{Binding RETURN_QTY}"         HorizontalAlignment="Right"    IsReadOnly="True" Format="###,###,##0.##" />
                                            <c1:DataGridTextColumn     Header = "요청작업자"     Binding = "{Binding REQ_WRKR_NAME}"           HorizontalAlignment="Center"  IsReadOnly="True" />                                            
                                            <c1:DataGridTextColumn     Header = "요청시간"        Binding = "{Binding REQ_DTTM}"           HorizontalAlignment="Center"  IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "적재작업자"     Binding = "{Binding ISS_RACK_LOAD_WRKR_NAME}"           HorizontalAlignment="Center"  IsReadOnly="True" />                                            
                                            <c1:DataGridTextColumn     Header = "입고일시"        Binding = "{Binding ISS_RACK_LOAD_DTTM}" HorizontalAlignment="Center"  IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "소진작업자"     Binding = "{Binding USE_PRCS_WRKR_NAME}"           HorizontalAlignment="Center"  IsReadOnly="True" />                                            
                                            <c1:DataGridTextColumn     Header = "소진 처리 일시"  Binding = "{Binding USE_PRCS_WRK_DTTM}"   HorizontalAlignment="Center"  IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "취소작업자"      Binding = "{Binding REQ_CNCL_WRKR_NAME}"   HorizontalAlignment="Center"  IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "취소처리일시"    Binding = "{Binding REQ_CNCL_WRK_DTTM}"   HorizontalAlignment="Center"  IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "반품일시"        Binding = "{Binding RTN_PRCS_DTTM}"       HorizontalAlignment="Center"  IsReadOnly="True" />
                                            <c1:DataGridTextColumn     Header = "반품 취소 일시"  Binding = "{Binding RTN_CNCL_DTTM}"        HorizontalAlignment="Center"  IsReadOnly="True" />
                                        </c1:C1DataGrid.Columns>
                                    </uc:UcBaseDataGrid>
                                </Grid>
                            </Grid>
                        </Grid>

                    </c1:C1TabItem>
                </c1:C1TabControl>
            </Grid>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.ColumnSpan="2" Grid.RowSpan="2" />
