<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_345"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Initialized="UserControl_Initialized">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <!--<ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Verification">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <c1:C1TabControl x:Name='Verif_Tab'>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Verification'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="140"/>
                                <RowDefinition Height="3" />
                                <RowDefinition Height="100" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1" Grid.ColumnSpan="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="14" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='LINE',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='공정',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='설비',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="8" Text="{Binding ConverterParameter='HOLD',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='LOTID',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='프로젝트명',Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='PRODID',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='VER',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>



                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboAreaVerification"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboAreaVerification_SelectedValueChanged"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="3" x:Name="cboEquipmentSegmentVerification" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="5" x:Name="cboProcessVerification"          Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboProcessVerification_SelectedValueChanged"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="7" x:Name="cboEquipmentVerification"        Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="9" x:Name="cboHoldVerification"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />

                                <TextBox         Grid.Row="1" Grid.Column="1" x:Name="txtLotVerification"              Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotVerification_KeyDown" PreviewKeyDown="txtLotVerification_PreviewKeyDown"/>
                                <TextBox         Grid.Row="1" Grid.Column="3" x:Name="txtPrjtNameVerification"         Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <TextBox         Grid.Row="1" Grid.Column="5" x:Name="txtProdIDVerification"           Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" />
                                <TextBox         Grid.Row="1" Grid.Column="7" x:Name="txtVersion"                      Style="{StaticResource SearchCondition_TextBoxStyle}" />


                                <!--조회 버튼-->
                                <Button     Grid.Row="0" Grid.Column="12" Grid.RowSpan="2" x:Name="btnSearchVerification" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchVerification_Click" />

                            </Grid>

                            <!--대상목록-->
                            <Grid Grid.Row="3" Grid.ColumnSpan="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgList" Grid.Row="1" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="MultiRange" Margin="8,8,8,8" LoadedColumnHeaderPresenter="dgList_LoadedColumnHeaderPresenter">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택"  >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="chk_Click" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "LOTID"          Binding = "{Binding LOTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "CarrierID"      Binding = "{Binding CSTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "공정"           Binding = "{Binding PROCNAME}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "공정ID"         Binding = "{Binding PROCID}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "설비"           Binding = "{Binding EQPTNAME}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "EQPTID"         Binding = "{Binding EQPTID}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "극성"           Binding = "{Binding ELTR_TYPE_NAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "극성ID"         Binding = "{Binding ELTR_TYPE_CODE}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "PJT"            Binding = "{Binding PRJT_NAME}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "PRODID"         Binding = "{Binding PRODID}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "LOTTYPE"        Binding = "{Binding LOTYNAME}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "LOTTYPE"        Binding = "{Binding LOTTYPE}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "버전"           Binding = "{Binding PROD_VER_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "수량"           Binding = "{Binding WIPQTY}"            HorizontalAlignment="Right"  IsReadOnly="True" Format="###,###,##0.##"/>
                                        <c1:DataGridTextColumn      Header = "HOLD"           Binding = "{Binding WIPHOLD}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "QMS판정결과"    Binding = "{Binding JUDG_NAME}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "V-SEQ"          Binding = "{Binding VERIF_SEQS}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "Inspector"      Binding = "{Binding INSP_USERNAME}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "Inspector"      Binding = "{Binding INSP_USERID}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "Verification"   Binding = "{Binding VERIF_CODE}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "Reason"         Binding = "{Binding RSN_CODE}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "Reason"         Binding = "{Binding RSN_NAME}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "Reason 비고"    Binding = "{Binding RSN_NOTE}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "R/W Order"      Binding = "{Binding REWND_WRK_ORD}"     HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "R/W 횟수"       Binding = "{Binding REWND_QTY}"         HorizontalAlignment="Right"  IsReadOnly="True" Format="###,###,##0"/>
                                        <c1:DataGridTextColumn      Header = "R/W Eqpt"       Binding = "{Binding REWND_EQPTID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "R/W Dttm"       Binding = "{Binding REWND_WRK_DTTM}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "HOLD사유"       Binding = "{Binding HOLD_NOTE}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "WIPNOTE(ST)"    Binding = "{Binding ST_WIP_NOTE}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "WIPNOTE(RP)"    Binding = "{Binding RP_WIP_NOTE}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "WIPNOTE(CT)"    Binding = "{Binding CT_WIP_NOTE}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "창고"           Binding = "{Binding WH_NAME}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "R/W 비고"       Binding = "{Binding REWND_NOTE}"        HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--INPUT VERIFICATION-->
                            <Grid x:Name="grdInVerif" Grid.Row="5" Grid.ColumnSpan="3" IsEnabled="False" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="70"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>

                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="50"/>
                                    <ColumnDefinition Width="82"/>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>
                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="4" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                <TextBlock Grid.Row="0"  Grid.ColumnSpan="6" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='INPUT VERIFICATION', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <Button    Grid.Column="15" x:Name="btnClearVerification"        Content="{Binding ConverterParameter=CLEAR,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnClearVerification_Click" />
                                <Button    Grid.Column="17" x:Name="btnSaveVerification"         Content="{Binding ConverterParameter=SAVE,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSaveVerification_Click" />

                                <TextBlock       Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='Verification', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1ComboBox   Grid.Row="1" Grid.Column="1" x:Name="cboVerification" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedIndexChanged="cboVerification_SelectedIndexChanged"/>
                                <TextBlock       Grid.Row="1" Grid.Column="3" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='Reason', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1ComboBox   Grid.Row="1" Grid.Column="4" x:Name="cboVerificationReson" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <!--<c1:C1NumericBox Grid.Row="1" Grid.Column="7" x:Name="numNGTag" Style="{StaticResource C1NumericBoxStyle}" HorizontalAlignment="Stretch"  CornerRadius="0" AllowNull="True" ShowButtons="False"   />-->
                                <TextBlock       Grid.Row="1" Grid.Column="9" Text="{Binding ConverterParameter='Inspector',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                <Grid Grid.Row="1" Grid.Column="10" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0" x:Name="txtUserName"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtUserName_KeyDown"/>
                                    <Button  Grid.Column="1" x:Name="btnReqUser"    Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnReqUser_Click"/>
                                </Grid>
                                <TextBlock      Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='Reason 비고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox        Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" x:Name="txtReasonNote"        Style="{StaticResource Content_InputForm_TextBoxStyle}" TextAlignment="Left" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Height="Auto" AcceptsReturn="True" />

                                <TextBlock      Grid.Row="2" Grid.Column="6" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='R/W Order', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox        Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="4" x:Name="txtRewndOrd"        Style="{StaticResource Content_InputForm_TextBoxStyle}" TextAlignment="Left" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" Height="Auto" AcceptsReturn="True" />

                            </Grid>

                            <!--사유영역-->
                            <Grid x:Name="InputHoldArea" Grid.Row="7" Grid.ColumnSpan="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="0*"/>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='HOLD사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1ComboBox  Grid.Column="1" x:Name="cboHoldType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <TextBlock Grid.Column="2" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='예상해제일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <ctrlLib:LGCDatePicker Grid.Column="3" DatepickerType="Date" x:Name="dtExpected" SelectedDataTimeChanged="dtExpected_SelectedDataTimeChanged" />
                                <TextBlock Grid.Column="4" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='전기일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <ctrlLib:LGCDatePicker Grid.Column="5" DatepickerType="Date" x:Name="dtCalDate" SelectedDataTimeChanged="dtCalDate_SelectedDataTimeChanged" />
                                <TextBlock Grid.Column="6" Style="{StaticResource Content_ModuleTitleStyle}" Visibility="Collapsed"><Run Text="{Binding ConverterParameter='담당자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox   Grid.Column="7"  x:Name="txtPerson"        Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" KeyDown="txtPerson_KeyDown" GotFocus="txtPerson_GotFocus" Visibility="Collapsed" />
                                <TextBox   Grid.Column="8"  x:Name="txtPersonId"      Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" IsReadOnly="True" Visibility="Collapsed"/>
                                <TextBox   Grid.Column="9"  x:Name="txtPersonDept"      Style="{StaticResource SearchCondition_TextBoxStyle}" Width="200" IsReadOnly="True" HorizontalAlignment="Left" Visibility="Collapsed"/>
                                <c1:C1DataGrid x:Name="dgPersonSelect" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="4" Grid.Column="6" Grid.ColumnSpan="2" Grid.RowSpan="2" Panel.ZIndex="9999" Visibility="Collapsed">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHOICE" Width="60" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgNoticeChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgNoticeChoice" HorizontalAlignment="Center" Checked="dgPersonSelect_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "ID"         Binding = "{Binding USERID}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "이름"       Binding = "{Binding USERNAME}"    HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "부서"       Binding = "{Binding DEPTNAME}"        HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                                <CheckBox  Grid.Column="10" x:Name="chkCopy"   Content="{Binding ConverterParameter='Reason 비고 복사', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" IsChecked="False" Visibility="Collapsed"/>
                                <TextBox   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="12"  x:Name="txtHold"         Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" Margin="8,8,8,8" AcceptsReturn="True" />
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='HISTORY'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>


                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="AUTO" />
                                    <RowDefinition Height="AUTO" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="37.8" />
                                    <ColumnDefinition Width="67.8"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="15" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />

                                <!--조회조건-->
                                <!--ROW1-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboAreaHistory" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="3" x:Name="cboEquipmentSegmentHistory" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="5" x:Name="cboProcessHistory" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <TextBlock  Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="7" x:Name="cboEquipmentHistory" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <!--ROW2-->
                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBox    Grid.Row="1" Grid.Column="1" x:Name="txtLotHistory"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotHistory_KeyDown" />
                                <TextBlock  Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='PJT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBox    Grid.Row="1" Grid.Column="3" x:Name="txtPjtHistory"  Style="{StaticResource SearchCondition_TextBoxStyle}" />
