                                <TextBlock  Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='VER',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Collapsed"/>
                                <TextBox    Grid.Row="1" Grid.Column="7" x:Name="txtVersionHistory"                      Style="{StaticResource SearchCondition_TextBoxStyle}" Visibility="Collapsed"/>
                                <TextBlock  Grid.Row="1" Grid.Column="8" Text="{Binding ConverterParameter='기간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="5,5.2,7,5.6"/>
