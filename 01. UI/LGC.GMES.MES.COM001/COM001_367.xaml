<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.COM001.COM001_367"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Lot예약 홀딩/해제">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <!--예약홀드-->
                <c1:C1TabControl>
                    <c1:C1TabItem x:Name="TabHold" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='예약홀드'}" GotFocus="TabHold_GotFocus">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="5" />
                                <RowDefinition />
                                <RowDefinition Height="5" />
                                <RowDefinition />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="100" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1" Grid.ColumnSpan="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="10" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="14" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock       Grid.Row="1" Grid.Column="0"  Text="{Binding ConverterParameter='생산일',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock       Grid.Row="1" Grid.Column="4"  Text="{Binding ConverterParameter='동',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock       Grid.Row="1" Grid.Column="6"  Text="{Binding ConverterParameter='LINE',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock       Grid.Row="1" Grid.Column="8"  Text="{Binding ConverterParameter='공정',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock       Grid.Row="2" Grid.Column="0"  Text="{Binding ConverterParameter='LOTID',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock       Grid.Row="2" Grid.Column="2"  Text="{Binding ConverterParameter='모델',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock       Grid.Row="2" Grid.Column="4"  Text="{Binding ConverterParameter='PJT',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock       Grid.Row="2" Grid.Column="6"  Text="{Binding ConverterParameter='CarrierID',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock       Grid.Row="2" Grid.Column="8"  Text="{Binding ConverterParameter='극성',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                <ctrlLib:LGCDatePicker  Grid.Row="1" Grid.Column="1"  x:Name="dtpCaldateFrom"   DatepickerType="Date" />
                                <TextBlock              Grid.Row="1" Grid.Column="2"  Text="~"                  Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment='Center' />
                                <ctrlLib:LGCDatePicker  Grid.Row="1" Grid.Column="3"  x:Name="dtpCaldateTo"     DatepickerType="Date" />
                                
                                <c1:C1ComboBox   Grid.Row="1" Grid.Column="5"  x:Name="cboAreaHold"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <c1:C1ComboBox   Grid.Row="1" Grid.Column="7"  x:Name="cboEquipmentSegmentHold" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <c1:C1ComboBox   Grid.Row="1" Grid.Column="9"  x:Name="cboProcessHold"          Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <c1:C1ComboBox   Grid.Row="2" Grid.Column="9" x:Name="cboElecType"              Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                <TextBox         Grid.Row="2" Grid.Column="1"  x:Name="txtLotHold"              Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" KeyDown="txtLotHold_KeyDown" PreviewKeyDown="txtLotHold_PreviewKeyDown"/>
                                <TextBox         Grid.Row="2" Grid.Column="3"  x:Name="txtModlId"               Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" />
                                <TextBox         Grid.Row="2" Grid.Column="5"  x:Name="txtPrjtName"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" />
                                <TextBox         Grid.Row="2" Grid.Column="7"  x:Name="txtCARRIERID"            Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" KeyDown="txtCARRIERID_KeyDown" />
                                
                                <Button          Grid.Row="1" Grid.Column="12" x:Name="btnSearchHold" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchHold_Click" />

                            </Grid>

                            <!--대상목록-->
                            <Grid Grid.Row="3" Grid.ColumnSpan="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgListHold" Grid.Row="1" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="MultiRange" Margin="8,8,8,8" LoadedColumnHeaderPresenter="dgListHold_LoadedColumnHeaderPresenter">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택"  >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="chkHold_Click" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "라인"       Binding = "{Binding EQSGNAME}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "LOTID"      Binding = "{Binding LOTID}"                  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "카세트ID"   Binding = "{Binding CSTID}"                  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "제품ID"     Binding = "{Binding PRODID}"                 HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품명"     Binding = "{Binding PRODNAME}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "모델ID"     Binding = "{Binding MODELID}"                HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "수량"       Binding = "{Binding WIPQTY}"                 HorizontalAlignment="Right"  IsReadOnly="True" Format="###,###,##0.##"  />
                                        <c1:DataGridTextColumn      Header = "단위"       Binding = "{Binding UNIT_CODE}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "생산일자"   Binding = "{Binding CALDATE}"                HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "PJT"        Binding = "{Binding PRJT_NAME}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "버전"       Binding = "{Binding PROD_VER_CODE}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "대LOT"      Binding = "{Binding LOTID_RT}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                        
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--선택목록-->
                            <Grid Grid.Row="5" Grid.Column="3" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='선택목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgSelectHold" Grid.Row="1" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="8,8,8,8">
                                    <c1:C1DataGrid.Columns>

                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택"  >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "라인"       Binding = "{Binding EQSGNAME}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "LOTID"      Binding = "{Binding LOTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "카세트ID"   Binding = "{Binding CSTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품ID"     Binding = "{Binding PRODID}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "제품명"     Binding = "{Binding PRODNAME}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "모델ID"     Binding = "{Binding MODELID}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "수량"       Binding = "{Binding WIPQTY}"            HorizontalAlignment="Right"  IsReadOnly="True" Format="###,###,##0.##"  />
                                        <c1:DataGridTextColumn      Header = "단위"       Binding = "{Binding UNIT_CODE}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "생산일자"   Binding = "{Binding CALDATE}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "PJT"        Binding = "{Binding PRJT_NAME}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "버전"       Binding = "{Binding PROD_VER_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "대LOT"      Binding = "{Binding LOTID_RT}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--사유영역-->
                            <Grid x:Name="TextArea" Grid.Row="7" Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="100"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border         Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <CheckBox       Grid.Column="1"   x:Name="chkProcRoll"      Content="{Binding ConverterParameter='롤프레스',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" IsChecked="True"/>
                                <CheckBox       Grid.Column="3"   x:Name="chkProcSlitter"   Content="{Binding ConverterParameter='슬리터',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" IsChecked="True"/>
                                <TextBlock      Grid.Column="5"   Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='HOLD사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1ComboBox  Grid.Column="6"   x:Name="cboHoldType"      Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <TextBlock      Grid.Column="7"   Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='담당자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox        Grid.Column="8"   x:Name="txtPerson"        Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" KeyDown="txtPerson_KeyDown" GotFocus="txtPerson_GotFocus" />
                                <TextBox        Grid.Column="9"   x:Name="txtPersonId"      Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" IsReadOnly="True"/>
                                <TextBox        Grid.Column="10"  x:Name="txtPersonDept"    Style="{StaticResource SearchCondition_TextBoxStyle}" Width="200" IsReadOnly="True"/>
                                
                                <c1:C1DataGrid x:Name="dgPersonSelect" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="4" Grid.Column="6" Grid.ColumnSpan="2" Grid.RowSpan="2" Panel.ZIndex="9999" Visibility="Collapsed">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHOICE" Width="60" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgNoticeChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgNoticeChoice" HorizontalAlignment="Center" Checked="dgPersonSelect_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "ID"         Binding = "{Binding USERID}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "이름"       Binding = "{Binding USERNAME}"    HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "부서"       Binding = "{Binding DEPTNAME}"    HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                                <Button    Grid.Column="13" x:Name="btnHold"        Content="{Binding ConverterParameter=HOLD,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,0,8,0" Click="btnHold_Click"/>
                                <TextBox   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="12"  x:Name="txtHold"   Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" Margin="8,8,8,8" AcceptsReturn="True"/>
                            </Grid>

                            <!-- HOLD LEVEL -->
                            <Grid x:Name="HoldSelection" Grid.Row="5" Grid.Column="0" Grid.RowSpan="3"  >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <CheckBox Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" x:Name="chkHoldLevel" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=HOLD사유LEVEL별등록}" FontWeight="Bold" FontSize="14" Margin="8,6,8,8" Checked="chkHoldLevel_Checked" Unchecked="chkHoldLevel_Checked" />

                                <c1:C1DataGrid x:Name="dgHoldGroup1" Grid.Row="1" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="None" CanUserSort="False" CanUserFilter="False" Margin="8,8,8,8">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Header="EMT" EditOnSelection="False" Name="CHK">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="radHoldGroup1" IsChecked="{Binding CHK, Mode=OneWay}" HorizontalAlignment="Center" Checked="RadioButton_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn Header="LEVEL1"    Binding="{Binding DFCT_CODE_NAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn Header="DEFC_CODE" Binding="{Binding DFCT_CODE}"      HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                                <c1:C1DataGrid x:Name="dgHoldGroup2" Grid.Row="1" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="None" CanUserSort="False" CanUserFilter="False" Margin="8,8,8,8">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Header="EMT" EditOnSelection="False" Name="CHK" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="radHoldGroup2" IsChecked="{Binding CHK, Mode=OneWay}" HorizontalAlignment="Center" Checked="RadioButton_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn Header="LEVEL2"   Binding="{Binding DFCT_DETL_NAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                                        <c1:DataGridTextColumn Header="RESNCODE" Binding="{Binding RESNCODE}"       HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                            <GridSplitter x:Name="spltGrid" Grid.Row="5" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        </Grid>
                    </c1:C1TabItem>
                    <!--예약홀드해제-->
                    <c1:C1TabItem x:Name="TabRelease" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='예약홀드해제'}" GotFocus="TabRelease_GotFocus" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="5" />
                                <RowDefinition />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="10" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="10" />
                                </Grid.ColumnDefinitions>

                                <Border         Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="16" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock      Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='동',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock      Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='LINE',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock      Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='보류유형',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock      Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='기간',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock      Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='LOTID',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock      Grid.Row="2" Grid.Column="2" Text="{Binding ConverterParameter='CarrierID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock      Grid.Row="2" Grid.Column="4" Text="{Binding ConverterParameter='제품ID',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                
                                <c1:C1ComboBox  Grid.Row="1" Grid.Column="1" x:Name="cboAreaRelease"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <c1:C1ComboBox  Grid.Row="1" Grid.Column="3" x:Name="cboEquipmentSegmentRelease" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                <c1:C1ComboBox  Grid.Row="1" Grid.Column="5" x:Name="cboHoldTypeCode"            Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                <TextBox        Grid.Row="2" Grid.Column="1" x:Name="txtLotRelease"              Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" KeyDown="txtLotRelease_KeyDown" />
                                <TextBox        Grid.Row="2" Grid.Column="3" x:Name="txtCarrieridRels"           Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" KeyDown="txtCarrieridRels_KeyDown" />
                                <TextBox        Grid.Row="2" Grid.Column="5" x:Name="txtProdIDRelease"           Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" />
                                
