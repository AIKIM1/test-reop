<UserControl xmlns:UserControls="clr-namespace:LGC.GMES.MES.CMM001.UserControls;assembly=LGC.GMES.MES.CMM001"
             x:Class="LGC.GMES.MES.FORM001.FORM001_029"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded" 
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Name="grdMain" Unloaded="grdMain_Unloaded" >
        <ctrlLib:LGCLayout x:Name="LayoutRoot" >
            <ctrlLib:LGCLayout.Content>
                <Grid x:Name="MainContents">
                    <Grid.Resources>
                        <DataTemplate x:Key="ResultTemplate">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                            </Grid>
                        </DataTemplate>

                        <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/btn_i_print.png" Stretch="Uniform"/>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </Grid.Resources>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="51" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--#region Button Area -->
                    <Grid x:Name="grdCommand" Grid.Row="0" Grid.Column="0" Margin="0,-47,0,0" VerticalAlignment="Top">
                        <UserControls:UcPolymerFormCommand DataContext="{Binding CommandViewModel}" />
                    </Grid>
                    <!--#endregion-->
                    <!--#region Search Area -->
                    <Grid x:Name="grdSearch" Grid.Row="0" Grid.Column="0">
                        <UserControls:UcPolymerFormSearch />
                    </Grid>
                    <!--#endregion-->
                    <!--#region Contents Area -->
                    <Grid x:Name="Content" Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="1"  Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>

                        <Grid x:Name="grdProductCart" Grid.Row="1" Grid.Column="0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="8"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <Border    Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='작업대차', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Margin="7" HorizontalAlignment="Stretch" Style="{StaticResource Content_Search_LabelStyle}" />

                            <c1:C1DataGrid Grid.Row="2"
                                           Grid.Column="1" 
                                           Grid.ColumnSpan='2'
                                           x:Name="dgProductCart" 
                                           IsReadOnly="True" 
                                           HeadersVisibility="Column" 
                                           FrozenColumnCount="1"
                                           SelectionMode="SingleRow" >
                                
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <RadioButton GroupName="dgProductCartChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" x:Name="dgProductLotChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgProductCartChoice_Checked"/>
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn        Header = "대차ID"                         Binding = "{Binding CTNR_ID}"              HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "프로젝트명"                     Binding = "{Binding PRJT_NAME}"            HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품ID"                         Binding = "{Binding PRODID}"               HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "시장유형"                       Binding = "{Binding MKT_TYPE_CODE}"        HorizontalAlignment="Center" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn        Header = "시장유형"                       Binding = "{Binding MKT_TYPE_NAME}"        HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "상태"                           Binding = "{Binding CART_STAT}"            HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn     Header = "투입조립LOT수"                  Binding = "{Binding PRODLOT_CNT}"          HorizontalAlignment="Right" Format="#,##0" />
                                    <c1:DataGridNumericColumn     Header = "완료조립LOT수"                  Binding = "{Binding END_CNT}"              HorizontalAlignment="Right" Format="#,##0" />
                                    <c1:DataGridTextColumn        Header = "작업시작일시"                   Binding = "{Binding WIPDTTM_ST}"           HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "작업종료일시"                   Binding = "{Binding WIPDTTM_ED}"           HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn     Header = "Inbox수"                        Binding = "{Binding INBOX_QTY}"            HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed"/>
                                    <c1:DataGridNumericColumn     Header = "Cell 수량"                      Binding = "{Binding CELL_QTY}"             HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed"/>
                                </c1:C1DataGrid.Columns>

                            </c1:C1DataGrid>
                        </Grid>

                        <Grid x:Name="grdProductLot" Grid.Row="1" Grid.Column="2" >
                            <UserControls:UcPolymerFormProdLot />
                        </Grid>

                        <GridSplitter Grid.Row="0" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <GridSplitter Grid.Row="2" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <GridSplitter Grid.Row="2" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <!--end Product Lot-->
                        <!--start detail-->

                        <Border Grid.Row="3"  Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                        <Grid x:Name="grdOutPallet" Grid.Row="3" Grid.Column="0">
                            <!--<UserControls:UcFormInput />-->

                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <c1:C1TabControl Name="TcOutPallet" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="2" >
                                <!-- 완성Inbox -->
                                <c1:C1TabItem x:Name="TabOutPallet" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='완성InBox'}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="6"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="6"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='INBOX', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                                        <TextBox    Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtInBoxId" CharacterCasing="Upper" Width="120" KeyDown="txtInBoxId_KeyDown" GotFocus="txtInBoxId_GotFocus" />

                                        <Button Grid.Row="1" Grid.Column="6"  x:Name="btnCartRePrint"        Content="{Binding ConverterParameter=대차재발행,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnCartRePrint_Click" />
                                        <Button Grid.Row="1" Grid.Column="8"  x:Name="btnInBoxSave"          Content="{Binding ConverterParameter=저장,          Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"        Click="btnInBoxSave_Click" />
                                        <Button Grid.Row="1" Grid.Column="10" x:Name="btnInBoxDelete"        Content="{Binding ConverterParameter=삭제,          Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"        Click="btnInBoxDelete_Click" />
                                        <Button Grid.Row="1" Grid.Column="12" x:Name="btnInBoxDeleteCancel"  Content="{Binding ConverterParameter=삭제취소,      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"        Click="btnInBoxDeleteCancel_Click" />
                                        <Button Grid.Row="1" Grid.Column="14" x:Name="btnTagPrint"           Content="{Binding ConverterParameter=태그발행,      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnTagPrint_Click" />

                                        <c1:C1DataGrid Grid.Row="3" 
                                           Grid.Column="0" 
                                           Grid.ColumnSpan="99" 
                                           x:Name="dgProductionInbox" 
                                           IsReadOnly="False" 
                                           HeadersVisibility="Column"
                                           SelectionMode="SingleCell" 
                                           FrozenColumnCount="1"
                                           FrozenBottomRowsCount="1" 
                                           LoadedCellPresenter="dgProductionInbox_LoadedCellPresenter" 
                                           UnloadedCellPresenter="dgProductionInbox_UnloadedCellPresenter" 
                                           CurrentCellChanged="dgProductionInbox_CurrentCellChanged" 
                                           BeginningEdit="dgProductionInbox_BeginningEdit" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                    <c1:DataGridCheckBoxColumn.Header>
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                            <CheckBox x:Name="chkAllInbox" Margin="0" Width="19" Checked="chkAllInbox_Checked" Unchecked="chkAllInbox_Unchecked"></CheckBox>
                                                        </StackPanel>
                                                    </c1:DataGridCheckBoxColumn.Header>
                                                </c1:DataGridCheckBoxColumn>

                                                <c1:DataGridTextColumn        Header = "No"                  Binding = "{Binding SEQ}"                HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "대차LOTID"           Binding = "{Binding INBOX_ID}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "조립LOT"             Binding = "{Binding ASSY_LOT}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "조립LOT"             Binding = "{Binding LOTID_RT}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "InBox ID"            Binding = "{Binding INBOX_ID}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "WIPSEQ"              Binding = "{Binding WIPSEQ}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "QLTY_TYPE_CODE"      Binding = "{Binding QLTY_TYPE_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "QLTY_TYPE_NAME"      Binding = "{Binding QLTY_TYPE_NAME}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn     Header = "전공정수량"          Binding = "{Binding BEFORE_QTY}"         HorizontalAlignment="Right"  IsReadOnly="True" Format="#,##0" EditOnSelection="True" Minimum="0" ShowButtons="False" >
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridNumericColumn     Header = "현공정수량"          Binding = "{Binding CELL_QTY}"           HorizontalAlignment="Right"  Format="#,##0" EditOnSelection="True" Minimum="0" ShowButtons="False" >
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridTextColumn        Header = "등급"                Binding = "{Binding CAPA_GRD_CODE}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "검사자"              Binding = "{Binding VISL_INSP_USERID}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "검사자"              Binding = "{Binding VISL_INSP_USERNAME}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "생성일시"            Binding = "{Binding LOTDTTM_CR}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "완료일시"            Binding = "{Binding WIPDTTM_ED}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "삭제여부"            Binding = "{Binding DELETE_YN}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "CALDATE"             Binding = "{Binding CALDATE}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "SHFT_NAME"           Binding = "{Binding SHFT_NAME}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "ORG_CAPA_GRD_CODE"   Binding = "{Binding ORG_CAPA_GRD_CODE}"  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "ORG_CELL_QTY"        Binding = "{Binding ORG_CELL_QTY}"       HorizontalAlignment="Right"  Format="#,##0" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "INSPECTORID"         Binding = "{Binding INSPECTORID}"        HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>

                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.BottomRows>
                                                <c1:DataGridSummaryRow x:Name="summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                            </c1:C1DataGrid.BottomRows>
                                        </c1:C1DataGrid>

                                    </Grid>
                                </c1:C1TabItem>

                                <!-- 등급별수량 -->
                                <c1:C1TabItem Name="TabGrade" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='등급별수량'}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="6" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!--<Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>-->

                                        <c1:C1DataGrid Grid.Row="1" 
                                               Grid.Column="0" 
                                               Grid.ColumnSpan="99" 
                                               x:Name="dgProductionGrade" 
                                               IsReadOnly="True" 
                                               HeadersVisibility="Column"
                                               SelectionMode="SingleCell" 
                                               FrozenColumnCount="1"
                                               FrozenBottomRowsCount="1" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn        Header = "조립LOT"         Binding = "{Binding ASSY_LOT}"          HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "등급"            Binding = "{Binding CAPA_GRD_CODE}"     ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL" HorizontalAlignment="Center" />
                                                <c1:DataGridNumericColumn     Header = "Inbox수"         Binding = "{Binding INBOX_QTY}"         HorizontalAlignment="Right"  Format="#,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridNumericColumn     Header = "Cell 수"         Binding = "{Binding CELL_QTY}"          HorizontalAlignment="Right"  Format="#,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.BottomRows>
                                                <c1:DataGridSummaryRow RowStyle="{StaticResource SummaryRowStyle}"/>
                                            </c1:C1DataGrid.BottomRows>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </c1:C1TabItem>
                            </c1:C1TabControl>

                        </Grid>
                        <!--end detail-->
                        <!--start tab-->
                        <Border Grid.Row="3" Grid.Column="2"  Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                        <Grid x:Name="grdDefect" Grid.Row="3" Grid.Column="2">
                            <!--<UserControls:UcFormProductionPalette/>-->

                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <c1:C1TabControl Name="TcDefect" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="2" >
                                <c1:C1TabItem x:Name="TabDefect" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량'}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="6"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="6"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Button                    x:Name="btnDefectInput"       Grid.Row="1" Grid.Column="0" Content="{Binding ConverterParameter=불량입력, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource ButtonBaseStyle}" Background="Black" Foreground="White" Height="25" Click="btnDefectInput_Click"/>
                                        <Button                    x:Name="btnDefectPrintSelect" Grid.Row="1" Grid.Column="2" Content="{Binding ConverterParameter=발행선택, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource ButtonBaseStyle}" Background="Red"   Foreground="White" Height="25" Click="btnDefectPrintSelect_Click"/>
                                        <TextBlock                                               Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='등급',          Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <ctrlLib:MultiSelectionBox x:Name="cboGradeSelect"       Grid.Row="1" Grid.Column="5" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" isAllUsed="False" VerticalAlignment="Bottom" SelectionChanged="cboGradeSelect_SelectionChanged"/>
                                        <Button                    x:Name="btnDefectPrint"       Grid.Row="1" Grid.Column="7" Content="{Binding ConverterParameter=발행,     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDefectPrint_Click"/>
                                        <Button                    x:Name="btnDefectSave"        Grid.Row="1" Grid.Column="9" Content="{Binding ConverterParameter=저장,     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnDefectSave_Click"/>

                                        <c1:C1DataGrid Grid.Row="3"
                                                       Grid.Column="0" 
                                                       Grid.ColumnSpan="99" 
                                                       x:Name="dgDefect" 
                                                       IsReadOnly="False" 
                                                       HeadersVisibility="Column" 
                                                       SelectionMode="MultiRange" 
                                                       FrozenBottomRowsCount="1" 
                                                       LoadedCellPresenter="dgDefect_LoadedCellPresenter" 
                                                       UnloadedCellPresenter="dgDefect_UnloadedCellPresenter" 
                                                       BeginningEdit="dgDefect_BeginningEdit"
                                                       PreviewMouseLeftButtonDown="dgDefect_PreviewMouseLeftButtonDown" 
                                                       CommittedEdit="dgDefect_CommittedEdit" >

                                            <c1:C1DataGrid.Resources>
                                                <DataTemplate x:Key="ResultTemplate">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,6,0" />
                                                    </Grid>
                                                </DataTemplate>
                                            </c1:C1DataGrid.Resources>
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn        Header = "활동ID"                   Binding = "{Binding ACTID}"                    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "구분"                     Binding = "{Binding ACTNAME}"                  HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                                <c1:DataGridTextColumn        Header = "불량그룹ID"               Binding = "{Binding RESNGRID}"                 HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "불량그룹명"               Binding = "{Binding RESNGRNAME}"               HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                                <c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                    <c1:DataGridCheckBoxColumn.Header>
