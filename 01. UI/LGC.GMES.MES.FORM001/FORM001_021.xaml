<UserControl xmlns:UserControls="clr-namespace:LGC.GMES.MES.CMM001.UserControls;assembly=LGC.GMES.MES.CMM001"
             x:Class="LGC.GMES.MES.FORM001.FORM001_021"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded" 
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Name="grdMain" Unloaded="grdMain_Unloaded" >
        <ctrlLib:LGCLayout x:Name="LayoutRoot" >
            <ctrlLib:LGCLayout.Content>
                <Grid x:Name="MainContents">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <!--#region Button Area -->
                    <Grid x:Name="grdCommand" Grid.Row="0" Grid.Column="0" Margin="0,-47,0,0" VerticalAlignment="Top">
                        <UserControls:UcPolymerFormCommand DataContext="{Binding CommandViewModel}" />
                    </Grid>
                    <!--#endregion-->
                    <!--#region Search Area -->
                    <Grid x:Name="grdSearch" Grid.Row="0" Grid.Column="0">
                        <UserControls:UcPolymerFormSearch />
                    </Grid>
                    <!--#endregion-->
                    <!--#region Contents Area -->
                    <Grid x:Name="Content" Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="grdProductLot" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3">
                            <UserControls:UcPolymerFormProdLot />
                        </Grid>

                        <GridSplitter Grid.Row="2" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <GridSplitter Grid.Row="2" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <!--end Product Lot-->
                        <!--start detail-->
                        <Border Grid.Row="3" Grid.Column="0"  Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                        <Grid x:Name="grdInput" Grid.Row="3" Grid.Column="0">
                            <!--<UserControls:UcFormInput />-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>
                            <c1:C1TabControl Name="TcDefectDetail" Grid.Row="1" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="2" >
                                <c1:C1TabItem x:Name="TabDefectDetail"  >
                                    <c1:C1TabItem.HeaderTemplate>
                                        <DataTemplate>
                                            <TextBlock x:Name="tbDefectDetail" Text="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='실적상세'}" FontWeight="Bold" FontSize="12" TextTrimming="CharacterEllipsis" MouseLeftButtonDown="TbDefectDetail_OnMouseLeftButtonDown"/>
                                        </DataTemplate>
                                    </c1:C1TabItem.HeaderTemplate>
                                    <Grid Name="ResultMain">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="37"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="8"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid x:Name="grdAddDefect" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="4" />
                                            </Grid.ColumnDefinitions>

                                            <Button  Grid.Column="9" x:Name="btnSaveWipHistory" Content="{Binding ConverterParameter='실적임시저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,6" Click="btnSaveWipHistory_Click" />
                                        </Grid>

                                        <Grid x:Name="LotList" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="4">
                                            <c1:C1DataGrid x:Name="dgDefectDetail" HeadersVisibility="None" SelectionMode="SingleRow" FrozenTopRowsCount="2" LoadedCellPresenter="dgDefectDetail_LoadedCellPresenter" UnloadedCellPresenter="dgDefectDetail_UnloadedCellPresenter" CommittedEdit="dgDefectDetail_CommittedEdit" >
                                                <c1:C1DataGrid.Columns>
                                                    <!--<c1:DataGridNumericColumn     Header = "[설비투입수량, 설비투입수량]"  Binding = "{Binding EQPTQTY}"       HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                                    <c1:DataGridNumericColumn     Header = "[설비양품수량, 설비양품수량]"  Binding = "{Binding EQPTGOODQTY}"   HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />-->
                                                    <c1:DataGridNumericColumn     Header = "[생산수량, 생산수량]"          Binding = "{Binding OUTQTY}"        HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                                    <c1:DataGridNumericColumn     Header = "[양품수량, 양품수량]"          Binding = "{Binding GOODQTY}"       HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" ShowButtons="False" Minimum="0" />
                                                    <c1:DataGridNumericColumn     Header = "[불량수량, 불량]"              Binding = "{Binding DTL_DEFECT}"    HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                                    <c1:DataGridNumericColumn     Header = "[불량수량, LOSS]"              Binding = "{Binding DTL_LOSS}"      HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True"/>
                                                    <c1:DataGridNumericColumn     Header = "[불량수량, 물품청구]"          Binding = "{Binding DTL_CHARGEPRD}" HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" IsReadOnly="True" />
                                                    <c1:DataGridNumericColumn     Header = "[불량수량, 합계]"              Binding = "{Binding DEFECTQTY}"     HorizontalAlignment="Right" Format="#,##0" CanUserFilter="False" CanUserSort="False" CanUserGroup="False" Visibility="Collapsed" IsReadOnly="True" />
                                                </c1:C1DataGrid.Columns>
                                                <c1:C1DataGrid.TopRows>
                                                    <c1:DataGridColumnHeaderRow />
                                                    <c1:DataGridColumnHeaderRow />
                                                </c1:C1DataGrid.TopRows>
                                            </c1:C1DataGrid>
                                        </Grid>
                                        <!--4row-->
                                        <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#ee5283" BorderThickness="0,2,0,0" VerticalAlignment="Bottom" />
                                        <!--5row-->
                                        <Grid x:Name="LotInfo" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="4" ScrollViewer.VerticalScrollBarVisibility="Disabled" ShowGridLines="False" >
                                            <Grid.Resources>
                                                <Style TargetType="TextBox">
                                                    <Setter Property="Margin" Value="2,2,2,2"/>
                                                </Style>
                                            </Grid.Resources>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="2"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="3"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="2*"/>
                                            </Grid.ColumnDefinitions>

                                            <!--title-->
                                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="4" Background="#FAFAFA" BorderThickness="1" BorderBrush="#B3B3B3"></Border>
                                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource Content_InputForm_LabelBorderStyle}" ></Border>

                                            <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='Lot ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock  Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='제품 ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock  Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='W/O', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock  Grid.Row="2" Grid.Column="2" Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock  Grid.Row="3" Grid.Column="0" Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <!--<TextBlock  Grid.Row="3" Grid.Column="2" Text="{Binding ConverterParameter='장비완료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>-->
                                            <!--<TextBlock  x:Name="tbErpSendYn" Grid.Row="4" Grid.Column="0" Text="{Binding ConverterParameter='ERP전송여부', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>-->
                                            <TextBlock  Grid.Row="3" Grid.Column="2" Text="{Binding ConverterParameter='가동시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                            <TextBlock  Grid.Row="6" Grid.Column="0" Text="{Binding ConverterParameter='특이사항',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,5,8,0" />

                                            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtLotId"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                            <TextBox Grid.Row="1" Grid.Column="3" x:Name="txtProdId"  Margin="3,3,8,3"      Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                                            <!--2row-->
                                            <TextBox Grid.Row="3" Grid.Column="1" x:Name="txtStartTime" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                                            <!--3row-->
                                            <TextBox Grid.Row="2" Grid.Column="1" x:Name="txtWorkOrder" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                                            <!--4row-->
                                            <ctrlLib:LGCDatePicker Grid.Row="2" Grid.Column="3" Margin="3,3,8,3" DatepickerType="Date" x:Name="dtpCaldate" IsEnabled="False" SelectedDataTimeChanged="dtpDateFrom_SelectedDataTimeChanged" />
                                            <!--<TextBox Grid.Row="3" Grid.Column="3" x:Name="txtEndTime"  Margin="3,3,8,3"      Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />-->
                                            <!--<TextBox Grid.Row="4" Grid.Column="3" x:Name="txt"  Margin="3,3,8,3"      Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />-->
                                            <!--<TextBox Grid.Row="4" Grid.Column="1" x:Name="txtErpSendYn" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />-->

                                            <Grid Grid.Row="3" Grid.Column="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="8"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBox Grid.Column="0" x:Name="txtWorkMinute"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                                <TextBlock Grid.Column="1"  Text="{Binding ConverterParameter='분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                            </Grid>

                                            <RichTextBox x:Name="txtRemark" Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" HorizontalContentAlignment="Center" Margin="0,3,8,3" >
                                                <RichTextBox.Resources>
                                                    <Style TargetType="{x:Type Paragraph}">
                                                        <Setter Property="Margin" Value="5"/>
                                                    </Style>
                                                </RichTextBox.Resources>
                                                <FlowDocument LineHeight="3" >
                                                    <Paragraph ></Paragraph>
                                                </FlowDocument>
                                            </RichTextBox>

                                            <!-- Row, Column Define-->

                                        </Grid>
                                    </Grid>
                                </c1:C1TabItem>

                                <c1:C1TabItem x:Name="TabInputPallet" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입InBox'}" >
                                    <Grid x:Name="grdMaterialInput">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="6"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="6"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <RadioButton Grid.Row="1" Grid.Column="1" x:Name="rdoPallet" GroupName="rdoInputType" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='대차', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" IsChecked="True" Checked="rdoPallet_Checked" />
                                        <RadioButton Grid.Row="1" Grid.Column="3" x:Name="rdoInBox"  GroupName="rdoInputType" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='Inbox', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Checked="rdoInBox_Checked"  />

                                        <!--<TextBlock  Grid.Row="1" Grid.Column="5" Text="{Binding ConverterParameter='투입LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />-->
                                        <TextBox    Grid.Row="1" Grid.Column="7" Margin="4,3,0,3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtInputLotId" CharacterCasing="Upper" Width="120" KeyDown="txtInputLotId_KeyDown" GotFocus="txtInputLotId_GotFocus" />
                                        <Border     Grid.Row="1" Grid.Column="9" Style="{StaticResource Content_Separator_BorderStyle}" />
                                        <Button     Grid.Row="1" Grid.Column="11" x:Name="btnInputPallet"             Content="{Binding ConverterParameter='투입',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInputPallet_Click" />
                                        <Button     Grid.Row="1" Grid.Column="13" x:Name="btnInputPalletCancel"       Content="{Binding ConverterParameter='투입취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnInputPalletCancel_Click" />
                                        <Button     Grid.Row="1" Grid.Column="15" x:Name="btnInputPalletRemain"       Content="{Binding ConverterParameter='잔량대기',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnInputPalletRemain_Click" />

                                        <c1:C1DataGrid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="16" x:Name="dgInputPallet" FrozenBottomRowsCount="1" HeadersVisibility="Column" SelectionMode="SingleRow" CommittedEdit="dgInputPallet_CommittedEdit"   >
                                            <c1:C1DataGrid.Resources>
                                                <DataTemplate x:Key="ResultTemplate">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,0,0" FontWeight="Bold" FontSize="13"  />
                                                    </Grid>
                                                </DataTemplate>
                                            </c1:C1DataGrid.Resources>
                                            <c1:C1DataGrid.Columns>

                                                <!--<c1:DataGridCheckBoxColumn Width="Auto" Name = "CHK"          Binding = "{Binding CHK}"                HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />-->

                                                <c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                    <c1:DataGridCheckBoxColumn.Header>
                                                        <StackPanel Width="30" Margin="-5" Orientation="Horizontal" >
                                                            <TextBlock x:Name="tbCheckHeaderAll" Padding="0" MouseLeftButtonDown="tbCheckHeaderAll_MouseLeftButtonDown" Text="" Width="40"/>
                                                        </StackPanel>
                                                    </c1:DataGridCheckBoxColumn.Header>
                                                </c1:DataGridCheckBoxColumn>

                                                <c1:DataGridTextColumn        Header = "No"                    Binding = "{Binding SEQ}"                   HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "대차 ID"               Binding = "{Binding CTNR_ID}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "조립 Lot ID"           Binding = "{Binding ASSY_LOTID}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "조립 Lot ID"           Binding = "{Binding LOTID_RT}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "InBox ID"              Binding = "{Binding CELLID}"                HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "WIP_QLTY_TYPE_CODE"    Binding = "{Binding WIP_QLTY_TYPE_CODE}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "구분"                  Binding = "{Binding WIP_QLTY_TYPE_NAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "INBOX_TYPE_CODE"       Binding = "{Binding INBOX_TYPE_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "InBox 유형"            Binding = "{Binding INBOX_TYPE_NAME}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "불량그룹명"            Binding = "{Binding DFCT_RSN_GR_ID}"        HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "불량그룹명"            Binding = "{Binding RESNGRNAME}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "등급"                  Binding = "{Binding CAPA_GRD_CODE}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "등급"                  Binding = "{Binding CAPA_GRD_NAME}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn     Header = "Cell 수량"             Binding = "{Binding INPUT_QTY}"             HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True">
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridTextColumn        Header = "시장유형"              Binding = "{Binding MKT_TYPE_CODE}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "시장유형"              Binding = "{Binding MKT_TYPE_NAME}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "투입일시"              Binding = "{Binding INPUT_DTTM}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "WIPSEQ"                Binding = "{Binding WIPSEQ}"                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "INPUT_SEQNO"           Binding = "{Binding INPUT_SEQNO}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "PRJT_NAME"             Binding = "{Binding PRJT_NAME}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "PRODID"                Binding = "{Binding PRODID}"                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn     Header = "변경투입수"            Binding = "{Binding CHANGE_QTY}"            HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn     Header = "잔량"                  Binding = "{Binding REMAIN_QTY}"            HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn     Header = "InBox 수량"            Binding = "{Binding INBOX_QTY}"             HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn     Header = "INBOX_LOAD_QTY"        Binding = "{Binding INBOX_LOAD_QTY}"        HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "공정"                  Binding = "{Binding CURR_PROCID}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "공정"                  Binding = "{Binding PROCNAME}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.BottomRows>
                                                <c1:DataGridSummaryRow x:Name="summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                            </c1:C1DataGrid.BottomRows>
                                        </c1:C1DataGrid>
                                    </Grid>

                                </c1:C1TabItem>

                                <c1:C1TabItem x:Name="TabInTray" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입Tray(참고용)'}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="6"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="6"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="323*"/>
                                            <ColumnDefinition Width="96*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
