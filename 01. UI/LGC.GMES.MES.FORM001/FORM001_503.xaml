<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" 
             x:Class="LGC.GMES.MES.FORM001.FORM001_503"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid  x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="폐기 관리">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                        </Grid>
                    </DataTemplate>

                    <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/btn_i_print.png" Stretch="Uniform"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <c1:C1TabControl x:Name="tabScrap">

                    <!--폐기 등록(Lot단위)-->
                    <c1:C1TabItem x:Name="ctbScrapLot" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='폐기등록LOT'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <GridSplitter Grid.Row="4" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock                                  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='불량LOT',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox         x:Name="txtDefectLot"      Grid.Row="1" Grid.Column="1" MinWidth="200" MaxWidth="200" Style="{StaticResource SearchCondition_TextBoxStyle}" GotFocus="text_GotFocus" PreviewKeyDown="txtDefectLot_PreviewKeyDown" KeyDown="txtDefectLot_KeyDown"/>
                                <!--조회 버튼-->
                                <Button          x:Name="btnClearLot"       Grid.Row="1" Grid.Column="3" Content="{Binding ConverterParameter=초기화, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnClearLot_Click" />
                                <Button          x:Name="btnSearchLot"      Grid.Row="1" Grid.Column="5" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchLot_Click" />
                                <Button          x:Name="btnScrapLot"       Grid.Row="1" Grid.Column="7" Content="{Binding ConverterParameter=폐기,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnScrapLot_Click" />

                            </Grid>

                            <!--조회목록LOT-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='조회목록LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgDefectLot" 
                                               Grid.Row="1" 
                                               HeadersVisibility="Column" 
                                               FrozenColumnCount="2" 
                                               SelectionMode="SingleCell"
                                               FrozenBottomRowsCount="1">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Binding = "{Binding LOTID2}"         HorizontalAlignment="Center" IsReadOnly="True"  Width="0" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgDefectLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" x:Name="dgDefectLotChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgDefectLotChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "불량LOT"        Binding = "{Binding LOTID}"          HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn      Header = "동"             Binding = "{Binding AREAID}"         HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "동"             Binding = "{Binding AREANAME}"       HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn      Header = "라인"           Binding = "{Binding EQSGID}"         HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "라인"           Binding = "{Binding EQSGNAME}"       HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn      Header = "공정"           Binding = "{Binding PROCID}"         HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "공정"           Binding = "{Binding PROCNAME}"       HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn      Header = "제품"           Binding = "{Binding PRODID}"         HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn      Header = "PJT"            Binding = "{Binding PRJT_NAME}"      HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn      Header = "불량Group"      Binding = "{Binding DFCT_RSN_GR_ID}" HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "불량Group"      Binding = "{Binding RESNGRNAME}"     HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn      Header = "불량"           Binding = "{Binding RESNCODE}"       HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "불량명"         Binding = "{Binding RESNNAME}"       HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridNumericColumn   Header = "재공수량"       Binding = "{Binding WIPQTY}"         HorizontalAlignment="Right"  IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                        <c1:DataGridTextColumn      Header = "NO_MERGE1"      Binding = "{Binding NO_MERGE1}"      HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed" />
                                        <c1:DataGridNumericColumn   Header = "추가수량"       Binding = "{Binding INPUTQTY}"       HorizontalAlignment="Right"  IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                        <c1:DataGridTextColumn      Header = "생성일시"       Binding = "{Binding LOTDTTM_CR}"     HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn      Header = "조립 Lot"       Binding = "{Binding LOTID_RT}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "CELL수"         Binding = "{Binding CELLQTY}"        HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>

                                </c1:C1DataGrid>
                            </Grid>

                            <!--조회목록Cell-->
                            <Grid Grid.Row="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='조회목록CELL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgDefectDetail" 
                                               Grid.Row="1" 
                                               HeadersVisibility="Column" 
                                               IsReadOnly="True" 
                                               SelectionMode="SingleCell">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "Cell ID"        Binding = "{Binding SUBLOTID}"           HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "등급"           Binding = "{Binding CAPA_GRD_CODE}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "조립LOT"        Binding = "{Binding LOTID_RT}"           HorizontalAlignment="Left"   />
                                        <c1:DataGridTextColumn      Header = "작업자"         Binding = "{Binding WRK_USERNAME}"       HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "발생일자"       Binding = "{Binding WIPSDTTM}"           HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>

                                </c1:C1DataGrid>
                            </Grid>

                            <!--폐기사유-->
                            <Grid Grid.Row="7">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <TextBlock                                          Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='폐기사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox  x:Name="cboResnCodeLot"             Grid.Row="0" Grid.Column="1"   Style="{StaticResource C1ComboBoxStyle}" MinWidth="140" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <TextBlock                                          Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='의뢰자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal">
                                    <TextBox x:Name="txtUserNameLot" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="120" KeyDown="txtUserNameLot_KeyDown"/>
                                    <Button  x:Name="btnUserLot"     Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnUserLot_Click"/>
                                </StackPanel>
                                <TextBlock                                          Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='비고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox     x:Name="txtResnNoteLot"                Grid.Row="0" Grid.Column="7" Style="{StaticResource Content_InputForm_TextBoxStyle}" Height="Auto" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" Margin="0,6,0,6"/>
                            </Grid>

                        </Grid>
                    </c1:C1TabItem>

                    <!--폐기 등록(Cell단위)-->
                    <c1:C1TabItem x:Name="ctbScrapSubLot" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='폐기등록CELL'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock                                  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='Cell ID',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox         x:Name="txtDefectSubLot"   Grid.Row="1" Grid.Column="1" MinWidth="200" MaxWidth="200" Style="{StaticResource SearchCondition_TextBoxStyle}" GotFocus="text_GotFocus" PreviewKeyDown="txtDefectSubLot_PreviewKeyDown" KeyDown="txtDefectSubLot_KeyDown"/>
                                <!--조회 버튼-->
                                <!--<Button          x:Name="btnSearchCell"     Grid.Row="1" Grid.Column="3" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchCell_Click" />-->
                                <Button          x:Name="btnOpenExcel"      Grid.Row="1" Grid.Column="3" Content="{Binding ConverterParameter=업로드, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleButtonExcelImportStyle}" Cursor="Hand" Click="btnOpenExcel_Click" Height="Auto" />
                                <Button          x:Name="btnDeleteSubLot"   Grid.Row="1" Grid.Column="5" Content="{Binding ConverterParameter=삭제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnDeleteSubLot_Click" />
                                <Button          x:Name="btnSaveSubLot"     Grid.Row="1" Grid.Column="7" Content="{Binding ConverterParameter=폐기,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnSaveSubLot_Click" />

                            </Grid>

                            <!--조회목록LOT-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='조회목록CELL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBlock                                   Grid.Row="0" Grid.Column="2"  Text="{Binding ConverterParameter='스캔수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1NumericBox    x:Name="txtScanQty"      Grid.Row="0" Grid.Column="3" MinWidth="100" Visibility="{Binding TEXTVISIBLE}" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" CornerRadius="0" HandleUpDownKeys="False" Format="#,##0" IsEnabled="False" IsReadOnly="True" FontSize="15" />

                                <c1:C1DataGrid x:Name="dgDefectSubLot" 
                                               Grid.Row="1" 
                                               Grid.ColumnSpan="99"
                                               HeadersVisibility="Column" 
                                               SelectionMode="SingleRow">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                            <c1:DataGridCheckBoxColumn.Header>
                                                <StackPanel Width="30" Margin="-5" Orientation="Horizontal" >
                                                    <TextBlock x:Name="tbCheckHeaderAllDefect" Padding="0" MouseLeftButtonDown="tbCheckHeaderAllDefect_MouseLeftButtonDown" Text="" Width="40"/>
                                                </StackPanel>
                                            </c1:DataGridCheckBoxColumn.Header>
                                        </c1:DataGridCheckBoxColumn>
                                        <c1:DataGridTextColumn      Header = "Cell ID"        Binding = "{Binding SUBLOTID}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "불량LOT"        Binding = "{Binding LOTID}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "조립 Lot"       Binding = "{Binding LOTID_RT}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "동"             Binding = "{Binding AREAID}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "동"             Binding = "{Binding AREANAME}"       HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "라인"           Binding = "{Binding EQSGID}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "라인"           Binding = "{Binding EQSGNAME}"       HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "제품"           Binding = "{Binding PRODID}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "PJT"            Binding = "{Binding PRJT_NAME}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "불량명"         Binding = "{Binding RESNCODE}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "불량명"         Binding = "{Binding RESNNAME}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "오류내용"       Binding = "{Binding MSGNAME}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>

                                </c1:C1DataGrid>
                            </Grid>

                            <!--폐기사유-->
                            <Grid Grid.Row="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="60" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <TextBlock                                          Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='폐기사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox  x:Name="cboResnCodeSubLot"          Grid.Row="0" Grid.Column="1"   Style="{StaticResource C1ComboBoxStyle}" MinWidth="140" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <TextBlock                                          Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='의뢰자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal">
