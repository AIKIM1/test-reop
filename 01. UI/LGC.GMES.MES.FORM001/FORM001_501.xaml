<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" 
             xmlns:UserControls="clr-namespace:LGC.GMES.MES.CMM001.UserControls;assembly=LGC.GMES.MES.CMM001"
             x:Class="LGC.GMES.MES.FORM001.FORM001_501"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid  x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="외관 불량 Lot 관리">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                        </Grid>
                    </DataTemplate>

                    <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/btn_i_print.png" Stretch="Uniform"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <c1:C1TabControl x:Name="tabDefect" SelectionChanged="tabDefect_SelectionChanged">
                    <!--외관 불량 Lot 생성-->
                    <c1:C1TabItem x:Name="ctbCreate" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='외관불량LOT생성'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock                                       Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='라인',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   x:Name="cboEquipmentSegmentCre" Grid.Row="1" Grid.Column="1"   Style="{StaticResource C1ComboBoxStyle}" MinWidth="140" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <TextBlock                                       Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='공정',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   x:Name="cboProcessCre"          Grid.Row="1" Grid.Column="4" Style="{StaticResource C1ComboBoxStyle}" MinWidth="200" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <TextBlock                                       Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='설비',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox   x:Name="cboEquipmentCre"        Grid.Row="1" Grid.Column="7" Style="{StaticResource C1ComboBoxStyle}" MinWidth="200" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>

                            </Grid>

                            <!--조회목록LOT-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <!-- 10 -->
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <!--<ColumnDefinition Width="8" />-->
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                <TextBlock                                       Grid.Row="1" Grid.Column="0"  Text="{Binding ConverterParameter='일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <ctrlLib:LGCDatePicker   x:Name="dtpDateCre"     Grid.Row="1" Grid.Column="1"  DatepickerType="Date" MinWidth="120" MaxWidth="120"/>
                                <TextBlock                                       Grid.Row="1" Grid.Column="3"  Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox           x:Name="cboShiftCre"    Grid.Row="1" Grid.Column="4"  Style="{StaticResource C1ComboBoxStyle}" MinWidth="140" AutoComplete="False" />
                                <TextBlock                                       Grid.Row="1" Grid.Column="6"  Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox                 x:Name="txtWorkUserCre" Grid.Row="1" Grid.Column="7"  MinWidth="140" MaxWidth="140" Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <TextBlock                                       Grid.Row="1" Grid.Column="9"  Text="{Binding ConverterParameter='불량코드', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox           x:Name="cboResnCodeCre" Grid.Row="1" Grid.Column="10" Style="{StaticResource C1ComboBoxStyle}" MinWidth="200" AutoComplete="False" FontSize="16" FontWeight="Bold" Foreground="Red"/>
                                <TextBlock                                       Grid.Row="1" Grid.Column="12" Text="{Binding ConverterParameter='불량코드Cell',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox                 x:Name="txtCellID"      Grid.Row="1" Grid.Column="13" MinWidth="200" MaxWidth="200" Style="{StaticResource SearchCondition_TextBoxStyle}" GotFocus="text_GotFocus" PreviewKeyDown="txtCellID_PreviewKeyDown" KeyDown="txtCellID_KeyDown"/>
                                <TextBlock                                       Grid.Row="1" Grid.Column="15" Text="{Binding ConverterParameter='스캔수량',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1NumericBox         x:Name="txtScanQtyCre"  Grid.Row="1" Grid.Column="16" MinWidth="100" MaxWidth="100" Visibility="{Binding TEXTVISIBLE}" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" CornerRadius="0" HandleUpDownKeys="False" Format="#,##0" FontSize="16" FontWeight="Bold" Foreground="Red" Background="#FFEBEBEB" IsReadOnly="True" />

                                <Button                  x:Name="btnDelete"      Grid.Row="1" Grid.Column="18" Content="{Binding ConverterParameter=삭제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnDelete_Click" />
                                <Button                  x:Name="btnSave"        Grid.Row="1" Grid.Column="20" Content="{Binding ConverterParameter=저장,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnSave_Click" />
                                <Button                  x:Name="btnPrint"       Grid.Row="1" Grid.Column="22" Content="{Binding ConverterParameter=Sheet발행, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnPrint_Click" Visibility="Collapsed"/>

                                <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="99">
                                    <c1:C1DataGrid Grid.Row="3" 
                                                   Grid.Column="1"
                                                   x:Name="dgCreate" 
                                                   HeadersVisibility="Column" 
                                                   SelectionMode="SingleCell" 
                                                   CanUserFilter="False" 
                                                   CanUserSort="False">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                <c1:DataGridCheckBoxColumn.Header>
                                                    <StackPanel Width="30" Margin="-5" Orientation="Horizontal" >
                                                        <TextBlock x:Name="tbCheckHeaderAll" Padding="0" MouseLeftButtonDown="tbCheckHeaderAll_MouseLeftButtonDown" Text="" Width="40"/>
                                                    </StackPanel>
                                                </c1:DataGridCheckBoxColumn.Header>
                                            </c1:DataGridCheckBoxColumn>

                                            <c1:DataGridTextColumn      Header = "불량"           Binding = "{Binding RESNCODE}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "불량명"         Binding = "{Binding RESNNAME}"    HorizontalAlignment="Left"   IsReadOnly="True" />
                                            <c1:DataGridTextColumn      Header = "Cell ID"        Binding = "{Binding SUBLOTID}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn      Header = "제품"           Binding = "{Binding PRODID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn      Header = "PJT"            Binding = "{Binding PRJT_NAME}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn      Header = "조립 Lot"       Binding = "{Binding LOTID_RT}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn      Header = "시장유형코드"   Binding = "{Binding MKT_TYPE_CODE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "시장유형"       Binding = "{Binding MKT_TYPE_NAME}" HorizontalAlignment="Center" IsReadOnly="True" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>
                            </Grid>

                        </Grid>
                    </c1:C1TabItem>

                    <!--외관 불량 Lot 정보-->
                    <c1:C1TabItem x:Name="ctbDefectLot" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='외관불량LOT정보'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <GridSplitter Grid.Row="4" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <!--<ColumnDefinition Width="8" />-->
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock       Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='기간',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='동',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='라인',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='공정',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <TextBlock       Grid.Row="3" Grid.Column="2" Text="{Binding ConverterParameter='불량LOT',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="3" Grid.Column="4" Text="{Binding ConverterParameter='불량명',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="3" Grid.Column="6" Text="{Binding ConverterParameter='Cell ID',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="1">
                                    <ctrlLib:LGCDatePicker DatepickerType="Month" x:Name="dtpDateFromLot" />
                                    <!--<TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0" />
                                    <ctrlLib:LGCDatePicker DatepickerType="Date" x:Name="dtpDateToLot"   />-->
                                </StackPanel>
                                <c1:C1ComboBox   x:Name="cboAreaLot"             Grid.Row="1" Grid.Column="3"   Style="{StaticResource C1ComboBoxStyle}" MinWidth="140" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <c1:C1ComboBox   x:Name="cboEquipmentSegmentLot" Grid.Row="1" Grid.Column="5"   Style="{StaticResource C1ComboBoxStyle}" MinWidth="140" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <c1:C1ComboBox   x:Name="cboProcessLot"          Grid.Row="1" Grid.Column="7"   Style="{StaticResource C1ComboBoxStyle}" MinWidth="140" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <TextBox         x:Name="txtDefectLot"           Grid.Row="3" Grid.Column="3"   Style="{StaticResource SearchCondition_TextBoxStyle}" MaxWidth="140" KeyDown="txtLot_KeyDown"/>
                                <TextBox         x:Name="txtResnNameLot"         Grid.Row="3" Grid.Column="5"   Style="{StaticResource SearchCondition_TextBoxStyle}" MaxWidth="140" KeyDown="txtLot_KeyDown"/>
                                <TextBox         x:Name="txtCellIDLot"           Grid.Row="3" Grid.Column="7"   Style="{StaticResource SearchCondition_TextBoxStyle}" MaxWidth="140" KeyDown="txtLot_KeyDown"/>

                                <!--조회 버튼-->
                                <Button          x:Name="btnSearchLot"           Grid.Row="3" Grid.Column="11" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchLot_Click" />
                                <Button          x:Name="btnPrintLot"            Grid.Row="3" Grid.Column="15" Content="{Binding ConverterParameter=Sheet발행, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnPrintLot_Click" Visibility="Collapsed"/>

                            </Grid>

                            <!--조회목록LOT-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='조회목록LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgDefectLot" 
                                               Grid.Row="1" 
                                               HeadersVisibility="Column" 
                                               FrozenColumnCount="2" 
                                               SelectionMode="SingleCell" 
                                               FrozenBottomRowsCount="1">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Binding = "{Binding LOTID2}"         HorizontalAlignment="Center" IsReadOnly="True"  Width="0" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgDefectLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" x:Name="dgDefectLotChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgDefectLotChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "불량LOT"        Binding = "{Binding LOTID}"          HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTextColumn      Header = "동"             Binding = "{Binding AREAID}"         HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "동"             Binding = "{Binding AREANAME}"       HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTextColumn      Header = "라인"           Binding = "{Binding EQSGID}"         HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "라인"           Binding = "{Binding EQSGNAME}"       HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTextColumn      Header = "공정"           Binding = "{Binding PROCID}"         HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "공정"           Binding = "{Binding PROCNAME}"       HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTextColumn      Header = "불량"           Binding = "{Binding RESNCODE}"       HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "불량명"         Binding = "{Binding RESNNAME}"       HorizontalAlignment="Left"   IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTextColumn      Header = "제품"           Binding = "{Binding PRODID}"         HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTextColumn      Header = "PJT"            Binding = "{Binding PRJT_NAME}"      HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridNumericColumn   Header = "재공수량"       Binding = "{Binding WIPQTY}"         HorizontalAlignment="Right"  IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                        <c1:DataGridTextColumn      Header = "NO_MERGE1"      Binding = "{Binding NO_MERGE1}"      HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed" />
                                        <c1:DataGridNumericColumn   Header = "스캔수량"       Binding = "{Binding SCANQTY}"        HorizontalAlignment="Right"  IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                        <c1:DataGridTextColumn      Header = "NO_MERGE2"      Binding = "{Binding NO_MERGE2}"      HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed" />
                                        <c1:DataGridNumericColumn   Header = "추가수량"       Binding = "{Binding INPUTQTY}"       HorizontalAlignment="Right"  IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                            <c1:DataGridAggregate.AggregateFunctions>
                                                <c1:DataGridAggregatesCollection>
                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                </c1:DataGridAggregatesCollection>
                                            </c1:DataGridAggregate.AggregateFunctions>
                                        </c1:DataGridNumericColumn>
                                        <c1:DataGridTextColumn      Header = "작업자"         Binding = "{Binding WRK_USERNAME}"   HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTextColumn      Header = "발생일시"       Binding = "{Binding LOTDTTM_CR}"     HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                        <c1:DataGridTextColumn      Header = "조립 Lot"       Binding = "{Binding LOTID_RT}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "스캔수량"       Binding = "{Binding SCANQTY_ASSY}"   HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False">
                                            <c1:DataGridAggregate.AggregateFunctions>
