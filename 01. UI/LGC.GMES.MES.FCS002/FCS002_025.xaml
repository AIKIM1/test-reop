<UserControl xmlns:ss="hhemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.FCS002.FCS002_025"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Tray위치이력 관리" Grid.ColumnSpan="2">
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!--조회영역-->
                    <Grid x:Name="SearchArea" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="11" />
                        </Grid.RowDefinitions>
                        <Border     Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                        <Border     Grid.Row="0" Grid.RowSpan="3" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>

                        <Grid Grid.Row="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="13"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock              Grid.Column="1"  Text="{Binding ConverterParameter='SEL_PERIOD', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <ctrlLib:LGCDatePicker  Grid.Column="2"  x:Name="dtpFromDate" DatepickerType="Date" />
                            <c1:C1DateTimePicker    Grid.Column="3" x:Name="dtpFromTime" CustomTimeFormat="HH:mm" HorizontalAlignment="Left" Margin="4,0,0,0" VerticalAlignment="Center" EditMode="Time"/>
                            <TextBlock              Grid.Column="4"  Text="{Binding ConverterParameter='~', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <ctrlLib:LGCDatePicker  Grid.Column="5"  x:Name="dtpToDate" DatepickerType="Date" />
                            <c1:C1DateTimePicker    Grid.Column="6" x:Name="dtpToTime" CustomTimeFormat="HH:mm" HorizontalAlignment="Left" Margin="4,0,0,0" VerticalAlignment="Center" EditMode="Time"/>

                            <TextBlock              Grid.Column="8"  Text="{Binding ConverterParameter='TRAY_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBox                Grid.Column="9"  x:Name="txtTrayID" MinWidth="100" Style="{StaticResource Content_InputForm_MandatoryTextBoxStyle}" KeyDown="txtTrayID_KeyDown" CharacterCasing="Upper" MaxLength="10" />
                            
                            <Button                 Grid.Column="11" x:Name="btnSearch" Content="{Binding ConverterParameter='SEARCH' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}"  Cursor="Hand" Click="btnSearch_Click"  />
                        </Grid>
                    </Grid>
                    
                    <!--조회리스트-->
                    <Grid Grid.Row="2">
                        <Border Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1"/>
                        <c1:C1DataGrid x:Name="dgTrayLocHist" IsReadOnly="False" HeadersVisibility="All" RowHeaderWidth="33" FrozenColumnCount="0" 
                                       SelectionMode="MultiRow" Margin="8" MaxRowHeight="28" LoadedRowHeaderPresenter="dgTrayLocHist_LoadedRowHeaderPresenter" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn    Header = "TRAY_ID"                 Binding = "{Binding CSTID}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn    Header = "ACTID"                   Binding = "{Binding ACTID}"                  IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                <c1:DataGridTextColumn    Header = "ACTNAME"                 Binding = "{Binding ACTNAME}"                IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "활동일시"                Binding = "{Binding ACTDTTM}"                IsReadOnly="True" HorizontalAlignment="Center"  Format ="yyyy-MM-dd HH:mm:ss" />
                                <c1:DataGridTextColumn    Header = "CST상태"                 Binding = "{Binding CSTSTAT}"                IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                <c1:DataGridTextColumn    Header = "CST상태"                 Binding = "{Binding CSTSTATUS}"              IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "EQP_ID"                  Binding = "{Binding EQPTID}"                 IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "EQP_NAME"                Binding = "{Binding EQPTNAME}"               IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "PORT_ID"                 Binding = "{Binding PORT_ID}"                IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "PORT_NAME"               Binding = "{Binding PORTNAME}"               IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "LOAD_REP_CSTID"          Binding = "{Binding LOAD_REP_CSTID}"         IsReadOnly="True" HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn    Header = "CST_LOAD_LOCATION_CODE"  Binding = "{Binding CST_LOAD_LOCATION_CODE}" IsReadOnly="True" HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn    Header = "REMARK"                  Binding = "{Binding NOTE}"                   IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "PROCID"                  Binding = "{Binding PROCID}"                 IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                <c1:DataGridTextColumn    Header = "PROCNAME"                Binding = "{Binding PROCNAME}"               IsReadOnly="True" HorizontalAlignment="Left" Visibility="Collapsed" />
                                <c1:DataGridTextColumn    Header = "TRAY_LOT_ID"             Binding = "{Binding LOTID}"                  IsReadOnly="True" HorizontalAlignment="Center" />
                                <!--20210.04.01 컬럼명 변경(LOT ID -> TRAY Lot ID)-->
                                <c1:DataGridTextColumn    Header = "OLD_CSTID"               Binding = "{Binding OLD_CST_ID}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn    Header = "RACKID"                  Binding = "{Binding RACK_ID}"                IsReadOnly="True" HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn    Header = "Outer Carrier ID"        Binding = "{Binding OUTER_CSTID}"            IsReadOnly="True" HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn    Header = "CST_DFCT_FLAG"           Binding = "{Binding CST_DFCT_FLAG}"          IsReadOnly="True" HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn    Header = "CST_DFCT_RESNCODE"       Binding = "{Binding CST_DFCT_RESNCODE}"      IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "ABNORM_TRF_RSN_CODE"     Binding = "{Binding ABNORM_TRF_RSN_CODE}"    IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "CST_WH_ID"               Binding = "{Binding CST_WH_ID}"              IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "CST_TOLOC_ID"            Binding = "{Binding CST_TOLOC_ID}"           IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "CST_BLDG_EXST_FLAG"      Binding = "{Binding CST_BLDG_EXST_FLAG}"     IsReadOnly="True" HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn    Header = "CST_MNGT_STAT_CODE"      Binding = "{Binding CST_MNGT_STAT_CODE}"     IsReadOnly="True" HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn    Header = "CSTPROD"                 Binding = "{Binding CSTPROD}"                IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "TRF_STAT_CODE"           Binding = "{Binding TRF_STAT_CODE}"          IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "STK_RCV_DTTM"            Binding = "{Binding STK_RCV_DTTM}"           IsReadOnly="True" HorizontalAlignment="Center"  Format ="yyyy-MM-dd HH:mm:ss" />
                                <c1:DataGridTextColumn    Header = "INSUSER"                 Binding = "{Binding INSUSER}"                IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "INSDTTM"                 Binding = "{Binding INSDTTM}"                IsReadOnly="True" HorizontalAlignment="Center"  Format ="yyyy-MM-dd HH:mm:ss" />
                                <c1:DataGridTextColumn    Header = "UPDUSER"                 Binding = "{Binding UPDUSER}"                IsReadOnly="True" HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn    Header = "UPDDTTM"                 Binding = "{Binding UPDDTTM}"                IsReadOnly="True" HorizontalAlignment="Center"  Format ="yyyy-MM-dd HH:mm:ss" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>
                </Grid>
            </Grid>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999"/>
    </Grid>
</UserControl>
