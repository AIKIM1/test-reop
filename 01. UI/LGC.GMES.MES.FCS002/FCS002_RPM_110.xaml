<UserControl x:Class="LGC.GMES.MES.FCS002.FCS002_RPM_110"
             xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:CMM001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"  Loaded="UserControl_Loaded" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="저전압 Lot SPEC" Grid.ColumnSpan="2">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>

                    <Grid   Grid.Row="0" Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="11" />
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13" />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="13"/>
                        </Grid.ColumnDefinitions>

                        <!--조회조건 ROW1-->
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>
                            
                            <TextBlock                        Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" VerticalAlignment="Center" />
                            <c1:C1ComboBox  x:Name="cboModel"  Grid.Row="0" Grid.Column="1" MinHeight="23" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>

                        <!--조회 버튼-->
                        <Button             x:Name="btnSearch" Grid.Row="1" Grid.Column="4" Height="Auto" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>
                    
                    <!--조회 영역-->
                    <!--ROW 02-->
                    <Border Grid.Row="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffbebebe"></Border>

                    <Grid Grid.Row="2" Grid.Column="0" >
                        <c1:C1DataGrid x:Name="dgRouteReport" Grid.Row="0" Grid.Column="0" Margin="5" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="1" SelectionMode="MultiRange" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn   Header = "공정경로"       Binding = "{Binding ROUTE_ID}"         HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn   Header = "경로유형"       Binding = "{Binding CMN_CD_NAME}"      HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn   Header = "공정경로설명"   Binding = "{Binding ROUTE_DESC}"       HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn   Header = "모델 ID"        Binding = "{Binding MODEL_ID}"         HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn   Header = "모델명"         Binding = "{Binding MODEL_NAME}"       HorizontalAlignment="Center" />
                            </c1:C1DataGrid.Columns>

                            <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                <c1:C1GroupingWithSummariesBehavior />
                            </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                        </c1:C1DataGrid>
                    </Grid>

                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
