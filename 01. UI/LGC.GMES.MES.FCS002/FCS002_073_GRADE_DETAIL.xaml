<c1:C1Window x:Class="LGC.GMES.MES.FCS002.FCS002_073_GRADE_DETAIL"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Lot별 등급 수량'}" 
             Tag="ProtoType01Windows01" Height="700" Width="450" IsResizable="True" Loaded="C1Window_Loaded">
    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="51" />
            <RowDefinition Height="8" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="14" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="14" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="13"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="13"/>
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <TextBlock                       Grid.Row="0" Grid.Column="0" Margin="0,0,5,0" Text="{Binding ConverterParameter='Lot ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                <TextBox       x:Name="txtLot"   Grid.Row="0" Grid.Column="1" Height="Auto" MinWidth="90" Style="{StaticResource Content_InputForm_TextBoxStyle}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True"/>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="4*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <TextBlock     Grid.Row="0" Grid.Column="0" Margin="0,0,5,0" Text="{Binding ConverterParameter='Grade', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                <TextBox       x:Name="txtGrade"   Grid.Row="0" Grid.Column="1" Height="Auto" MinWidth="90" Style="{StaticResource Content_InputForm_TextBoxStyle}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True"/>
            </Grid>
        </Grid>

        <Grid Grid.Row="2" Grid.Column="0">
            <c1:C1DataGrid Grid.Row="2" 
                           Grid.Column="1"
                           Margin="4"
                           x:Name="dgLotGradeQty" 
                           IsReadOnly="False" 
                           HeadersVisibility="Column" 
                           SelectionMode="SingleRow" 
                           HorizontalScrollBarVisibility="Hidden"  
                           CanUserFilter="False" 
                           CanUserSort="False" >
                <c1:C1DataGrid.Columns>
                    <c1:DataGridTextColumn      Header="CELL_NO"          Binding="{Binding CSTSLOT1}"          HorizontalAlignment="Center" IsReadOnly="True" />
                    <c1:DataGridTextColumn      Header="GRADE_CNT"        Binding="{Binding GRADE_CNT1}"        HorizontalAlignment="Center" IsReadOnly="True" />
                    <c1:DataGridTextColumn      Header="CELL_NO"          Binding="{Binding CSTSLOT2 }"         HorizontalAlignment="Center" IsReadOnly="True" />
                    <c1:DataGridTextColumn      Header="GRADE_CNT"        Binding="{Binding GRADE_CNT2}"        HorizontalAlignment="Center" IsReadOnly="True" />
                </c1:C1DataGrid.Columns>
            </c1:C1DataGrid>
        </Grid>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999"  />
    </Grid>
</c1:C1Window>
