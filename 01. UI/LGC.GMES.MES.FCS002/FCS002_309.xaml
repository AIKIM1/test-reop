                                <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='코스트센터', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
