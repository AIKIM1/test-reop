                                <TextBlock Grid.Column="2" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='검사수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox         Grid.Row="0" Grid.Column="3" x:Name="txtInspQty"               Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" IsEnabled="False"/>
                                <TextBlock Grid.Column="4" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='의뢰자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
