                                        <c1:DataGridTextColumn      Header = "EQPTID"                       Binding = "{Binding EQPTID}"                        HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "CLSS3_CODE"                   Binding = "{Binding CLSS3_CODE}"                    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />


                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--선택목록-->
                            <Grid Grid.Row="5" >
                                <Grid.RowDefinitions>
