<UserControl xmlns:ss="hhemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.FCS002.FCS002_084"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1524">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Dummy Tray 관리">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <c1:C1TabControl>
                        <c1:C1TabItem Header="{Binding ConverterParameter='REGISTER', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}">
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.5*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="7.5*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!--백그라운드용-->
                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--백그라운드용-->
                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>
                                    
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.1*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Grid.Column="1"  Text="{Binding ConverterParameter='SAMPLE_TYPE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                    </Grid>

                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.1*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <c1:C1ComboBox  x:Name="cboSampleType"  Grid.Column="1" MinHeight="23" Style="{StaticResource C1ComboBoxStyle_Mandatory}" AutoComplete="False" />
                                    </Grid>

                                    <Grid Grid.Row="4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock   Name="txtSample" Grid.Column="1"  Text="{Binding ConverterParameter='SAMPLING_CELL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <RadioButton    Name="rdoCell"        Grid.Column="3" Margin="0,0,4,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='CELL'}"  GroupName="RadioCell_Group" Style="{StaticResource SearchCondition_RadioButtonStyle}"  IsChecked="True" Checked="rdoCell_Checked"/>
                                        <RadioButton    Name="rdoTray"      Grid.Column="5" Margin="0,0,4,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='TRAY'}"  GroupName="RadioCell_Group" Style="{StaticResource SearchCondition_RadioButtonStyle}"  IsChecked="False" Checked="rdoCell_Checked"/>
                                        <RadioButton    Name="rdoInbox"      Grid.Column="7" Margin="0,0,4,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='INBOX'}"  GroupName="RadioCell_Group" Style="{StaticResource SearchCondition_RadioButtonStyle}"  IsChecked="False" Checked="rdoCell_Checked"/>

                                    </Grid>

                                    <Grid Grid.Row="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.1*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox        x:Name="txtInsertCellId"   Grid.Column="1" MinHeight="23" Style="{StaticResource Content_InputForm_MandatoryTextBoxStyle}" TextWrapping="Wrap" KeyDown="txtInsertCellId_KeyDown" PreviewKeyDown="txtInsertCellId_PreviewKeyDown" CharacterCasing="Upper" />
                                        <Button         Grid.Column="3" x:Name="btnInsertInputCell" Content="{Binding ConverterParameter=INPUT2, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}"  Cursor="Hand" Click="btnInsertInputCell_Click" />
                                    </Grid>

                                    <Grid Grid.Row="7">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.1*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Grid.Column="1"  Text="{Binding ConverterParameter='CELL_CNT_SUM', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                    </Grid>

                                    <Grid Grid.Row="8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.1*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox        x:Name="txtInsertCellCnt"   Grid.Column="1" MinHeight="23" Style="{StaticResource Content_InputForm_TextBoxStyle}" TextWrapping="Wrap" IsReadOnly="True" />
                                        <Button         Grid.Column="3" x:Name="btnInsertClear" Content="{Binding ConverterParameter=REFRESH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}"  Cursor="Hand" Click="btnInsertClear_Click" />
                                    </Grid>

                                    <Grid Grid.Row="10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="2.5*"/>
                                            <ColumnDefinition Width="2.5*"/>
                                            <ColumnDefinition Width="2.5*"/>
                                            <ColumnDefinition Width="2.5*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock  Grid.Column="1"  Text="{Binding ConverterParameter='SELECT_YN', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" Visibility="Collapsed" />
                                        <RadioButton    Name="rdoAuto"        Grid.Column="2" Margin="0,0,4,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='AUTO'}"  GroupName="RadioButton_Group" Style="{StaticResource SearchCondition_RadioButtonStyle}"  IsChecked="False" Visibility="Collapsed" />
                                        <RadioButton    Name="rdoManual"      Grid.Column="3" Margin="0,0,4,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='MANUAL'}"  GroupName="RadioButton_Group" Style="{StaticResource SearchCondition_RadioButtonStyle}"  IsChecked="True" Visibility="Collapsed" />
                                    </Grid>
                                    
                                    <Grid Grid.Row="12">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="50"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="50"/>
                                        </Grid.ColumnDefinitions>
                                        <Button     Grid.Column="1" x:Name="btnInsertSave" Content="{Binding ConverterParameter=SAMPLING_CELL_REG, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}"  Cursor="Hand" Click="btnInsertSave_Click" />
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                                    <Grid   Grid.Row="1" Grid.Column="2" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="auto"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="auto"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock    Grid.Column="0"  Text="{Binding ConverterParameter='LOTTYPE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left" Visibility="Collapsed" />
                                            <RadioButton  Grid.Column="1"  x:Name="rdoGood"  Margin="0,0,4,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='양품'}"  GroupName="RaidoButton_LotType" Style="{StaticResource SearchCondition_RadioButtonStyle}"  IsChecked="True"    Click="rdoLotType_Click" Visibility="Collapsed" />
                                            <RadioButton  Grid.Column="2"  x:Name="rdoNG"  Margin="0,0,4,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='폐기대기'}"  GroupName="RaidoButton_LotType" Style="{StaticResource SearchCondition_RadioButtonStyle}"  IsChecked="False" Click="rdoLotType_Click" Visibility="Collapsed" />

                                        </Grid>
                                        <c1:C1DataGrid x:Name="dgInsert" Grid.Row="2" Grid.Column="0" Margin="8" HeadersVisibility="All" RowHeaderWidth="33" SelectionMode="MultiRange" LoadedRowHeaderPresenter="dgInsert_LoadedRowHeaderPresenter" >
                                            <c1:C1DataGrid.Columns>

                                                <c1:DataGridTemplateColumn Header="DELETE" Name="EolInput" HorizontalAlignment="Center" Width="Auto">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button  x:Name="btnDelCell" Width="Auto" Content="{Binding ConverterParameter=DELETE, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="3,2,3,2" Click="btnDelCell_Click"/>
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>

                                                <c1:DataGridTextColumn      Header = "CELL_ID"          Binding = "{Binding SUBLOTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "CANID"          Binding = "{Binding CANID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "VENTID"          Binding = "{Binding VENTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "TRAY_ID"          Binding = "{Binding CSTID}"                HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "TRAY_LOT_ID"      Binding = "{Binding LOTID}"                HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "GRADE"            Binding = "{Binding SUBLOTJUDGE}"          HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "양불 정보"        Binding = "{Binding DFCT_YN}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "ROUTE_DESC"       Binding = "{Binding ROUT_NAME}"            HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "ASSEMBLY_LOT_ID"       Binding = "{Binding PROD_LOTID}"           HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "CELL_NO"          Binding = "{Binding CSTSLOT}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Header = "BOX_WAIT_YN"      Binding = "{Binding UNPACK_CELL_YN}"    HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn      Header = "ROUTE_ID"         Binding = "{Binding ROUTID}"               HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Header = "TRAY_LOT_ID"      Binding = "{Binding LOTID}"                HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "LINE_ID"          Binding = "{Binding EQSGID}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "LOTTYPE"          Binding = "{Binding LOT_DETL_TYPE_CODE}"   HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </c1:C1TabItem>

                        <c1:C1TabItem Header="{Binding ConverterParameter='SEARCH', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <!--조회영역-->
                                <Grid x:Name="SearchArea" Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="11" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="11" />
                                    </Grid.RowDefinitions>
                                   
                                    <Border Grid.Row="0" Grid.RowSpan="99" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="0" Grid.RowSpan="4" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="13"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="13"/>
                                        </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}"/>
                                            <TextBlock Text="{Binding ConverterParameter='SEL_PERIOD', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        </StackPanel>
                                        <ctrlLib:LGCDatePicker  Grid.Column="2"  x:Name="dtpFromDate" DatepickerType="Date"  />
                                        <TextBlock              Grid.Column="3"  Style="{StaticResource Content_InputForm_LabelStyle}"><Run Text="{Binding ConverterParameter='~', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay }"/></TextBlock>
                                        <ctrlLib:LGCDatePicker  Grid.Column="4"  x:Name="dtpToDate" DatepickerType="Date" />
                                        <TextBlock              Grid.Column="5"  Style="{StaticResource Content_InputForm_LabelStyle}"><Run Text="{Binding ConverterParameter='SAMPLE_TYPE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay }"/></TextBlock>
                                        <c1:C1ComboBox          Grid.Column="6"  x:Name="cboSearchSampleType"  DisplayMemberPath="" SelectedValuePath=""  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                        <TextBlock              Grid.Column="7"  Style="{StaticResource Content_InputForm_LabelStyle}"><Run Text="{Binding ConverterParameter='CELL_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay }"/></TextBlock>
                                        <TextBox                Grid.Column="8"  x:Name="txtSearchCellId" Style="{StaticResource Content_InputForm_TextBoxStyle}" TextWrapping="Wrap" MinWidth = "100"/>

                                        <TextBlock              Grid.Column="9"  Text="{Binding ConverterParameter='LINE_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <c1:C1ComboBox          Grid.Column="10" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                        <TextBlock              Grid.Column="11" Text="{Binding ConverterParameter='MODEL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <c1:C1ComboBox          Grid.Column="12" x:Name="cboModel" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                        <TextBlock              Grid.Column="13" Text="{Binding ConverterParameter='LOTTYPE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1ComboBox          Grid.Column="14" x:Name="cboLotType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                        <Button                 Grid.Column="16" x:Name="btnSearch" Margin="3"  Content="{Binding ConverterParameter=SEARCH , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}"  Cursor="Hand" Click="btnSearch_Click" />
                                        <Button                 Grid.Column="17" x:Name="btnSearchRecover" Margin="3" Content="{Binding ConverterParameter=SEL_RESTORE, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}"  Cursor="Hand" Click="btnSearchRecover_Click" />
                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="13"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="13"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}"/>
                                            <TextBlock Text="{Binding ConverterParameter='일괄선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        </StackPanel>
                                        <CheckBox  x:Name="chkAll"          Grid.Row="1" Grid.Column="2" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False" />

                                    </Grid>
                                </Grid>
                                <!--조회리스트-->
                                <Grid Grid.Row="3">
                                    <Border Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1"/>
                                    <c1:C1DataGrid x:Name="dgSearch" IsReadOnly="False" HeadersVisibility="All" RowHeaderWidth="33" FrozenColumnCount="3" SelectionMode="SingleRow" MouseDoubleClick="dgSearch_MouseDoubleClick" 
                                                   LoadedCellPresenter="dgSearch_LoadedCellPresenter" UnloadedCellPresenter="dgSearch_UnloadedCellPresenter" LoadedRowHeaderPresenter="dgSearch_LoadedRowHeaderPresenter">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn  Header="SELECT" EditOnSelection="True" Name="CHK" Width="60" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn    Header = "TRAY_ID"            Binding = "{Binding CSTID}"  IsReadOnly="True" HorizontalAlignment="Center">
                                                <!--<c1:DataGridTextColumn.HeaderStyle>
                                                    <Style TargetType="c1:DataGridColumnHeaderPresenter">
                                                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                                                        <Setter Property="Foreground" Value="Blue"/>
                                                    </Style>
                                                </c1:DataGridTextColumn.HeaderStyle>-->
                                            </c1:DataGridTextColumn>
                                            <c1:DataGridTextColumn    Header = "PREV_TRAY_ID"          Binding = "{Binding CSTID_PV}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "TRAY_LOT_ID"          Binding = "{Binding LOTID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "CELL_ID"              Binding = "{Binding SUBLOTID}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "ASSEMBLY_LOT_ID"              Binding = "{Binding PROD_LOTID}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "CANID"          Binding = "{Binding CANID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn      Header = "VENTID"          Binding = "{Binding VENTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn    Header = "GRADE"                Binding = "{Binding FINL_JUDG_CODE}"        IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "PRE_JUDG_CODE"                Binding = "{Binding PRE_JUDG_CODE}"        IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "양불 정보"            Binding = "{Binding DFCT_SLOC_SMPL_NAME}"   IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "DFCT_SLOC_SMPL_FLAG"  Binding = "{Binding DFCT_SLOC_SMPL_FLAG}"   IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn    Header = "SAMPLE_DATE"          Binding = "{Binding SMPL_DTTM}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "SAMPLE_TYPE"          Binding = "{Binding SMPL_TYPE_CODE}"        IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "RESTORE_YN"           Binding = "{Binding SMPL_STAT}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "UPDUSERID"            Binding = "{Binding UPDUSER}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "UPDDTTM"              Binding = "{Binding ACTDTTM}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header = "RSTR_FLAG"            Binding = "{Binding RSTR_FLAG}"             IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>
                            </Grid>
                        </c1:C1TabItem>

                        <c1:C1TabItem Header="{Binding ConverterParameter='RESTORE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}">
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2.5*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="7.5*"/>
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <Grid Grid.Row="1" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                        <RowDefinition Height="30"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.2*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="0.1*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
