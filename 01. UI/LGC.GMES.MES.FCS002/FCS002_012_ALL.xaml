<UserControl x:Class="LGC.GMES.MES.FCS002.FCS002_012_ALL"
             xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:CMM001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1224"  Loaded="UserControl_Loaded" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="전체 Aging Rack 현황" Grid.ColumnSpan="2">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1" />
                    <Grid   Grid.Row="0" Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="11" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="13"/>
                        </Grid.ColumnDefinitions>

                        <!--조회조건 ROW1-->
                        <TextBlock                            Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='AGING_FLAG', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox  x:Name="cboAgingType" Grid.Row="1" Grid.Column="2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                        <CheckBox       x:Name="chkOnlyAll"   Grid.Row="1" Grid.Column="4" Content="{Binding ConverterParameter='SUMMARY', Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False" Checked="chkOnlyAll_Checked" Unchecked="chkOnlyAll_Unchecked" />

                        <!--조회 버튼-->
                        <Button         x:Name="btnSearch"    Grid.Row="1" Grid.Column="6" Margin="4" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>
                    
                    <!--조회 영역-->
                    <!--ROW 03-->
                    <Border Grid.Row="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                    <Grid   Grid.Row="2" Grid.Column="0" >
                        <c1:C1DataGrid x:Name="dgAgingStatus" Grid.Row="0" Grid.Column="0" Margin="8" IsReadOnly="True" HeadersVisibility="Row" FrozenColumnCount="8" FrozenTopRowsCount="2" SelectionMode="MultiRange" LoadedCellPresenter="dgAgingStatus_LoadedCellPresenter" MergingCells="dgAgingStatus_MergingCells" LoadedRowHeaderPresenter="dgAgingStatus_LoadedRowHeaderPresenter" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn      Header = "[AGING_FLAG,AGING_FLAG]"                           Binding = "{Binding AGING_TYPE}"       HorizontalAlignment="Center" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "[AGING_FLAG,AGING_FLAG]"                           Binding = "{Binding AGING_TYPE_NAME}"  HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn      Header = "[SC_LINE,SC_LINE]"                                 Binding = "{Binding EQPT_NAME}"        HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn      Header = "[열,열]"                                           Binding = "{Binding ROW}"              HorizontalAlignment="Center" />
                                <c1:DataGridNumericColumn   Header = "[USE_RATE,USE_RATE]"                               Binding = "{Binding USE_RATE}"         HorizontalAlignment="Right" Format="###,###,##0.##" />
                                <c1:DataGridNumericColumn   Header = "[RACK_CNT,RACK_CNT]"                               Binding = "{Binding RACK_CNT}"         HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[RCV_POS_RACK_CNT,RCV_POS_RACK_CNT]"               Binding = "{Binding RACKIBGO}"         HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[RCV_BAN_RACK_CNT,RCV_BAN_RACK_CNT]"               Binding = "{Binding RACKGEUMGI}"       HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[1_RACK_CNT,TOTAL]"                                Binding = "{Binding RACK_ONE}"         HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[1_RACK_CNT,FULL_TRAY]"                            Binding = "{Binding RACK_ONE_F}"       HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[1_RACK_CNT,EMPTY_TRAY]"                           Binding = "{Binding RACK_ONE_E}"       HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[2_RACK_CNT,TOTAL]"                                Binding = "{Binding RACK_TWO}"         HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[2_RACK_CNT,FULL_TRAY]"                            Binding = "{Binding RACK_TWO_F}"       HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[2_RACK_CNT,EMPTY_TRAY]"                           Binding = "{Binding RACK_TWO_E}"       HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[3_RACK_CNT,TOTAL]"                                Binding = "{Binding RACK_THREE}"       HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[3_RACK_CNT,FULL_TRAY]"                            Binding = "{Binding RACK_THREE_F}"     HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[3_RACK_CNT,EMPTY_TRAY]"                           Binding = "{Binding RACK_THREE_E}"     HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[4_RACK_CNT,TOTAL]"                                Binding = "{Binding RACK_FOUR}"        HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[4_RACK_CNT,FULL_TRAY]"                            Binding = "{Binding RACK_FOUR_F}"      HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[4_RACK_CNT,EMPTY_TRAY]"                           Binding = "{Binding RACK_FOUR_E}"      HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[5_RACK_CNT,TOTAL]"                                Binding = "{Binding RACK_FIVE}"        HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[5_RACK_CNT,FULL_TRAY]"                            Binding = "{Binding RACK_FIVE_F}"      HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[5_RACK_CNT,EMPTY_TRAY]"                           Binding = "{Binding RACK_FIVE_E}"      HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[6_RACK_CNT,TOTAL]"                                Binding = "{Binding RACK_SIX}"         HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[6_RACK_CNT,FULL_TRAY]"                            Binding = "{Binding RACK_SIX_F}"       HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[6_RACK_CNT,EMPTY_TRAY]"                           Binding = "{Binding RACK_SIX_E}"       HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[7_RACK_CNT,TOTAL]"                                Binding = "{Binding RACK_SEVEN}"       HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[7_RACK_CNT,FULL_TRAY]"                            Binding = "{Binding RACK_SEVEN_F}"     HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[7_RACK_CNT,EMPTY_TRAY]"                           Binding = "{Binding RACK_SEVEN_E}"     HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[8_RACK_CNT,TOTAL]"                                Binding = "{Binding RACK_EIGHT}"       HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[8_RACK_CNT,FULL_TRAY]"                            Binding = "{Binding RACK_EIGHT_F}"     HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[8_RACK_CNT,EMPTY_TRAY]"                           Binding = "{Binding RACK_EIGHT_E}"     HorizontalAlignment="Right" Format="###,###,##0" Visibility="Collapsed" />
                                <c1:DataGridNumericColumn   Header = "[RCV_POS_RACK_CNT_BY_EQP,RCV_POS_RACK_CNT_BY_EQP]" Binding = "{Binding EQP_RACKIBGO}"     HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[RCV_ABNORM_RACK_CNT,RCV_ABNORM_RACK_CNT]"         Binding = "{Binding RACKTROUBLE}"      HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[ROW_RATE,ROW_RATE]"                               Binding = "{Binding ROW_RACKUSE_PER}"  HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[EQPT_USAGE_RATE,EQPT_USAGE_RATE]"                 Binding = "{Binding EQP_RACKUSE_PER}"  HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[EQPT_STACK_RATE,EQPT_STACK_RATE]"                 Binding = "{Binding STACK_PER}"        HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[QTY,FULL_TRAY]"                                   Binding = "{Binding FULL_TRAY}"        HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridNumericColumn   Header = "[QTY,EMPTY_TRAY]"                                  Binding = "{Binding EMPTY_TRAY}"       HorizontalAlignment="Right" Format="###,###,##0" />
                            </c1:C1DataGrid.Columns>

                            <c1:C1DataGrid.TopRows>
                                <c1:DataGridColumnHeaderRow />
                                <c1:DataGridColumnHeaderRow />
                            </c1:C1DataGrid.TopRows>
                        </c1:C1DataGrid>
                    </Grid>
                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
