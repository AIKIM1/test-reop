<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.FCS002.FCS002_325"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="재공생성/삭제">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <c1:C1TabControl x:Name="tbcWip">
                    <!-- ################################################### 재공생성 ################################################### -->
                    <c1:C1TabItem x:Name="Create" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='재공생성'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="51"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="51" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회조건-->
                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <!--대상목록-->
                            <Border Grid.Row="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--사유-->
                            <Border Grid.Row="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="5" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--버튼-->
                            <Border Grid.Row="7" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>

                            <!--<Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <TextBlock                       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtLotIDCr"  Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotID_KeyDown" />
                                <Button     x:Name="btnSearchCr" Grid.Row="0" Grid.Column="3" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />

                            </Grid>-->

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock                       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LOTID(CSTID)', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox    x:Name="txtLotIDCr"  Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtLotID_KeyDown" PreviewKeyDown="txtLotIDCr_PreviewKeyDown" />

                                </Grid>

                                <Button     x:Name="btnSearchCr" Grid.Row="1" Grid.Column="4" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />

                            </Grid>

                            <!--대상목록-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgListCreate" Grid.Row="1" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="MultiRange" Margin="8,8,8,8">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택" Visibility="Collapsed" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgLotChoice" HorizontalAlignment="Center" Checked="dgLotChoice_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="삭제">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  x:Name="btnDelete2" Width="Auto" Content="{Binding ConverterParameter=삭제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDelete2_Click" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTextColumn      Header="LOTID"      Binding="{Binding LOTID}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="CSTID"      Binding="{Binding CSTID}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="WIPSEQ"     Binding="{Binding WIPSEQ}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header="라인ID"     Binding="{Binding EQSGID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="라인"       Binding="{Binding EQSGNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="공정ID"     Binding="{Binding PROCID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="공정"       Binding="{Binding PROCNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="상태"       Binding="{Binding WIPSTAT}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="상태명"     Binding="{Binding WIPSNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="제품ID"     Binding="{Binding PRODID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="제품명"     Binding="{Binding PRODNAME}"    HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="모델"       Binding="{Binding MODLID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header="수량"       Binding="{Binding WIPQTY}"      HorizontalAlignment="Right"  Format="#,##0.##" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False" Minimum="0" />
                                        <c1:DataGridNumericColumn   Header="WIPQTY2"    Binding="{Binding WIPQTY2}"     HorizontalAlignment="Right"  Format="#,##0.##" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header="LANE_QTY"   Binding="{Binding LANE_QTY}"    HorizontalAlignment="Right"  Format="#,##0.##" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header="단위"       Binding="{Binding UNIT_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="TYPE_CODE"  Binding="{Binding WIP_TYPE_CODE}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--사유-->
                            <Grid Grid.Row="5" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto" MinWidth="150" />
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock                        Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox   x:Name="txtWipNoteCr"  Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2"          Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" Margin="8,8,8,8" AcceptsReturn="True"/>
                                <TextBlock  Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />

                                <Grid Grid.Row="1" Grid.Column="5" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0" x:Name="txtUserNameCr"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtUserName_KeyDown"/>
                                    <Button  Grid.Column="1" x:Name="btnUserCr"    Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnUser_Click"/>
                                </Grid>

                                <Grid Grid.Row="2" Grid.Column="5" Margin="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <CheckBox  x:Name="chModelChange" Grid.Row="0" Content="{Binding ConverterParameter='형교환 투입용', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_CheckBoxStyle}"
                                               IsChecked="False" Checked="chModelChange_Checked" Unchecked="chModelChange_Unchecked"/>
                                    <CheckBox  x:Name="chkERP"        Grid.Row="1" Content="{Binding ConverterParameter='ERP 재고생성',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />

                                </Grid>

                            </Grid>

                            <!--사유영역-->
                            <Grid Grid.Row="7">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock       Grid.Column="1"  Grid.Row="0" x:Name="txtCalDateCr" Text="{Binding ConverterParameter='전기일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <ctrlLib:LGCDatePicker Grid.Column="3" Grid.Row="0" DatepickerType="Date" x:Name="dtCalDateCr" SelectedDataTimeChanged="dtCalDate_SelectedDataTimeChanged" />

                                <Button x:Name="btnSaveCr"  Grid.Column="5" Content="{Binding ConverterParameter='생성', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSave_Click"/>
                                <Button x:Name="btnClearCr" Grid.Column="7" Content="{Binding ConverterParameter='Clear', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnClear_Click" />

                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem x:Name="CreateHistory" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='재공생성이력'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="51"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--조회조건-->
                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <!--대상목록-->
                            <Border Grid.Row="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--사유-->
                            <Border Grid.Row="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="5" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--버튼-->
                            <Border Grid.Row="7" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>

                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="8*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='기간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <StackPanel Orientation="Horizontal"  Grid.Row="0" Grid.Column="1">
                                        <ctrlLib:LGCDatePicker  x:Name="dtpCreateHistDateFrom"  DatepickerType="Date" DateFormat="yyyy-MM-dd"/>
                                        <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                                        <ctrlLib:LGCDatePicker  x:Name="dtpCreateHistDateTo"  DatepickerType="Date" DateFormat="yyyy-MM-dd"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboAreaCreateHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="150" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboAreaCreateHist_SelectedValueChanged" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="5" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboEquipmentSegmentCreateHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="150" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="7" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboProcessCreateHist" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="150" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="9" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LOTID(CSTID)', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox     x:Name="txtCreateHistLotID"   Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                </Grid>

                                <Button     x:Name="btnSearchCreateHist"  Grid.Column="11" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchCreateHist_Click" />
                            </Grid>

                            <!--대상목록-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgListCreateHist" Grid.Row="1" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="MultiRange" Margin="8,8,8,8">
                                    <c1:C1DataGrid.Columns>
                                        <!--<c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                            <c1:DataGridCheckBoxColumn.Header>
                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                    <CheckBox x:Name="chkHeaderAllCreateHist" Margin="0" Width="19" Checked="chkHeaderAllCreateHist_Checked" Unchecked="chkHeaderAllCreateHist_Unchecked"></CheckBox>
                                                </StackPanel>
                                            </c1:DataGridCheckBoxColumn.Header>
                                        </c1:DataGridCheckBoxColumn>-->
                                        <c1:DataGridTextColumn      Header="동ID"       Binding="{Binding AREAID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="AREA"       Binding="{Binding AREANAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="라인ID"     Binding="{Binding EQSGID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="라인"       Binding="{Binding EQSGNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="공정ID"     Binding="{Binding PROCID}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="공정"       Binding="{Binding PROCNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="LOTID"      Binding="{Binding LOTID}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="CSTID"      Binding="{Binding CSTID}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="WIPSEQ"     Binding="{Binding WIPSEQ}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header="수량"       Binding="{Binding WIPQTY}"     HorizontalAlignment="Right"  Format="#,##0.##" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False" Minimum="0" />
                                        <c1:DataGridTextColumn      Header="단위"       Binding="{Binding UNIT_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="상태"       Binding="{Binding WIPSTAT}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="상태명"     Binding="{Binding WIPSNAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="제품ID"     Binding="{Binding PRODID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="제품명"     Binding="{Binding PRODNAME}"    HorizontalAlignment="Left"   IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="모델"       Binding="{Binding MODLID}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="요청자"     Binding="{Binding REQ_USERID}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="요청자"     Binding="{Binding REQ_USERNAME}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="변경사용자" Binding="{Binding UPDUSER}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header="변경사용자" Binding="{Binding UPD_USERNAME}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="변경일시"   Binding="{Binding ACTDTTM}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="변경사유"   Binding="{Binding CRRT_NOTE}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="I/F 상태"   Binding="{Binding ERP_ERR_CODE}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="I/F ERROR 내용"   Binding="{Binding ERP_ERR_CAUSE_CNTT}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header="ERP_TRNF_SEQNO"   Binding="{Binding ERP_TRNF_SEQNO}"  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridNumericColumn   Header="WIPQTY2"    Binding="{Binding WIPQTY2}"     HorizontalAlignment="Right"  Format="#,##0.##" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header="LANE_QTY"   Binding="{Binding LANE_QTY}"    HorizontalAlignment="Right"  Format="#,##0.##" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header="전기일"   Binding="{Binding CALDATE}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                        </Grid>
                    </c1:C1TabItem>

                    <!-- ################################################### 재공삭제 ################################################### -->
                    <c1:C1TabItem x:Name="Delete" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='재공삭제'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="51"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="51" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회조건-->
                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <!--대상목록-->
                            <Border Grid.Row="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--사유-->
                            <Border Grid.Row="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
