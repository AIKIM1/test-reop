<UserControl x:Class="LGC.GMES.MES.FCS002.FCS002_003_NFF"
             xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:CMM001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"  Loaded="UserControl_Loaded" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="충방전기 공정별 현황" Grid.ColumnSpan="2">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                    <Grid   Grid.Row="0" Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="11" />
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13" />
                            <ColumnDefinition Width="100" />
                            <ColumnDefinition Width="200" />
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="13"/>
                        </Grid.ColumnDefinitions>

                        <!-- 2024.01.03 LINE -> LANE으로 변경
                          <TextBlock Grid.Row="1" Grid.Column="1"   Text="{Binding ConverterParameter='LINE_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        -->
                        <TextBlock Grid.Row="1" Grid.Column="1"   Text="{Binding ConverterParameter='LANE_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <!-- 2024.01.03 LINE -> LANE으로 변경
                        <ctrlLib:MultiSelectionBox  Grid.Row="1" Grid.Column="2" x:Name="cboLineID" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                        -->
                        <ctrlLib:MultiSelectionBox  Grid.Row="1" Grid.Column="2" x:Name="cboLane" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />

                        <!--조회조건 ROW1-->
                        <!--조회 버튼-->
                        <Grid Grid.Row="1" Grid.Column="3" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button         x:Name="btnSearch"  Grid.Row="0" Grid.Column="1" Height="Auto" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                        </Grid>
                    </Grid>

                    <!--조회 영역-->
                    <!--ROW 02-->
                    <Border Grid.Row="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                    <Grid   Grid.Row="2" Grid.Column="0" >
                        <c1:C1DataGrid x:Name="dgFrmOpStatus" Grid.Row="0" Margin="8" IsReadOnly="True" HeadersVisibility="None" RowHeight="Auto" SelectionMode="MultiRange" FrozenTopRowsCount="2">
                            <c1:C1DataGrid.Columns>
                                
                            </c1:C1DataGrid.Columns>

                            <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                <c1:C1GroupingWithSummariesBehavior />
                            </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                        </c1:C1DataGrid>
                    </Grid>
                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
