                                        <TextBlock                            Grid.Row="15"  Grid.Column="1" Text="{Binding ConverterParameter='RCV_ABNORM_RATE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <TextBox    x:Name="txtTrouble"       Grid.Row="15"  Grid.Column="2" Style="{StaticResource SearchCondition_TextBoxStyle}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True" TextAlignment="Right" />
                                    </Grid>
                                </c1:C1TabItem>

                                <!--선택한 Rack 정보 -->
                                <c1:C1TabItem  Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='SEL_RACK_INFO'}" IsSelected="True" >
                                    <Grid Grid.Row="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="4"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="4"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock  x:Name="textTray1"                           Grid.Row="1"  Grid.Column="1" Text="{Binding ConverterParameter='STG1', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <TextBox    x:Name="txtTray1" PreviewMouseDoubleClick="txtTray1_PreviewMouseDoubleClick" Foreground="Blue" Grid.Row="1"  Grid.Column="2" Style="{StaticResource SearchCondition_TextBoxStyle}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True" />
                                        <TextBlock x:Name="textTray2"                            Grid.Row="2"  Grid.Column="1" Text="{Binding ConverterParameter='STG2', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <TextBox    x:Name="txtTray2" PreviewMouseDoubleClick="txtTray2_PreviewMouseDoubleClick" Foreground="Blue"        Grid.Row="2"  Grid.Column="2" Style="{StaticResource SearchCondition_TextBoxStyle}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True"/>
                                        <TextBlock  x:Name="textTray3"                           Grid.Row="3"  Grid.Column="1" Text="{Binding ConverterParameter='STG3', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <TextBox    x:Name="txtTray3" PreviewMouseDoubleClick="txtTray3_PreviewMouseDoubleClick" Foreground="Blue"        Grid.Row="3"  Grid.Column="2" Style="{StaticResource SearchCondition_TextBoxStyle}" TextWrapping="Wrap" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" IsReadOnly="True"/>
