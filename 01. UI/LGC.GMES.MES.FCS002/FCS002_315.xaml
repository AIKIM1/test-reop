<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.FCS002.FCS002_315"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="포장 실적 조회">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                </Grid.RowDefinitions>

                <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="0"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="0"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="34"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="btnCancel"         Grid.Row="0" Grid.Column="7" Content="{Binding ConverterParameter='포장해체',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Visibility="Collapsed"/>
                        <Button x:Name="btnCellInfo"       Grid.Row="0" Grid.Column="9" Content="{Binding ConverterParameter='CELL정보조회',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl02Style}" Click="btnCellInfo_Click" Visibility="Collapsed" />
                        <Button x:Name="btnPrint"          Grid.Row="0" Grid.Column="11" Content="{Binding ConverterParameter='태그발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnPrint_Click"/>
                        <Button x:Name="btnLabelPrint"     Grid.Row="0" Grid.Column="13" Content="{Binding ConverterParameter='고객사 라벨 발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnLabelPrint_Click" Visibility="Collapsed"/>
                    </Grid>
                </Grid>
                
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="84"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>

                    <Grid x:Name="SearchArea" Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="13"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=포장일, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />

                            <Grid  Grid.Row="0" Grid.Column="1" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <ctrlLib:LGCDatePicker Grid.Column="0"  x:Name="dtpDateFrom"  DatepickerType="Date"/>
                                <TextBlock  Grid.Column="1" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0" />
                                <ctrlLib:LGCDatePicker Grid.Column="2"  x:Name="dtpDateTo"  DatepickerType="Date"/>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=동, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=라인, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=설비, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEqpt" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>
                        
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=작업구분, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboLottype" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=PALLETID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtPalletID" Style="{StaticResource SearchCondition_TextBoxStyle}"  CharacterCasing="Upper" GotFocus="text_GotFocus" MinWidth="100" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=CELLID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtCellID" Style="{StaticResource SearchCondition_TextBoxStyle}"  CharacterCasing="Upper" MinWidth="100" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=조립LOTID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtLotID" Style="{StaticResource SearchCondition_TextBoxStyle}"  CharacterCasing="Upper" MinWidth="100" />
                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=포장LOT유형, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboBoxType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="5" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="3" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                            <!--<Button Grid.Column="1" x:Name="btnReturn" Click="btnReturn_Click" Content="{Binding ConverterParameter='반품확정',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl02Style}" />-->
                        </Grid>

                    </Grid>

                    <Grid x:Name="ContentArea" Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <!--반품 리스트-->
                        <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid   Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업PALLET', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                               </Grid>

                            <Grid   Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgPallet" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" FrozenBottomRowsCount="1" LoadedCellPresenter="dgReturn_LoadedCellPresenter">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgPalletChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgPalletChoice" HorizontalAlignment="Center" Checked="dgPalletChoice_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn           Header="포장LOT유형"       Binding="{Binding BOXTYPE_NAME}"            HorizontalAlignment="Left"     IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="포장일시"       Binding="{Binding PACKDTTM}"   Format="yyyy-MM-dd HH:mm:ss"          HorizontalAlignment="Center"   IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="PALLETID"       Binding="{Binding BOXID}"            HorizontalAlignment="Center"   IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="Project"       Binding="{Binding PROJECT}"            HorizontalAlignment="Center"   IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="조립LOTID"       Binding="{Binding PKG_LOTID}"            HorizontalAlignment="Center"   IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="PRODID"       Binding="{Binding PRODID}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="포장수량"       Binding="{Binding TOTAL_QTY}"            Format="#,##0"   HorizontalAlignment="Center"   IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="상태"       Binding="{Binding RCV_ISS_STAT_CODE}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn           Header="출고상태"       Binding="{Binding RCV_ISS_STAT_NAME}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="수출/내수"       Binding="{Binding EXP_DOM_TYPE_CODE}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="수출/내수"       Binding="{Binding EXP_DOM_TYPE_NAME}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="작업구분"       Binding="{Binding LOTTYPE}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="작업구분"       Binding="{Binding LOTYNAME}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="설비명"       Binding="{Binding EQPTNAME}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="출하처"       Binding="{Binding SHIPTO_ID}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="출하처"       Binding="{Binding SHIPTO_NAME}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="작업자"       Binding="{Binding ACTUSERNAME}"            HorizontalAlignment="Center"   IsReadOnly="True" />                                        
                                        <c1:DataGridTextColumn           Header="특이사항"       Binding="{Binding PACK_NOTE}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="BOXTYPE"       Binding="{Binding BOXTYPE}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow x:Name="summary_pallet" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </c1:C1DataGrid>

                            </Grid>

                            <!--<Border Grid.Row="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment ="Right" Margin="0,0,8,0">
                                        <TextBlock  Text="{Binding ConverterParameter='총', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1NumericBox     x:Name="txtPalletQty" Width="70" ShowButtons="False"   Style="{StaticResource C1NumericBoxStyle}"  />
                                        <TextBlock  Text="{Binding ConverterParameter='건', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <Border Style="{StaticResource Content_Separator_BorderStyle}"/>
                                        <c1:C1NumericBox     x:Name="txtCellQty" Width="70" ShowButtons="False"   Style="{StaticResource C1NumericBoxStyle}"  />
                                        <TextBlock  Text="{Binding ConverterParameter='CELL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </StackPanel>-->
                        </Grid>
                        <!-- 포장 PALLET -->
                        <GridSplitter Name="Splitter1" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <Grid Grid.Column="2" Name="DetailArea">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>
                            <!-- 작업 PALLET -->
                            <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='BOX목록', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    <!--<Border     Grid.Column="2" Style="{StaticResource Content_Separator_BorderStyle}" />-->

                                    <Grid Grid.Row="1" Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>

                                        <Button     Grid.Column="1"  x:Name="btnRegCell"       Content="{Binding ConverterParameter='셀등록',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnRegCell_Click" Visibility="Collapsed" />
                                        <Border     Grid.Column="2" Style="{StaticResource Content_Separator_BorderStyle}" />
                                        <Button     Grid.Column="3" x:Name="btnRePrint"  Click="btnRePrint_Click"  Content="{Binding ConverterParameter='재발행',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Visibility="Collapsed" Padding="3,-1,12,0" />
                                        <Button     Grid.Column="5" x:Name="btnRePrintAll"  Click="btnRePrintAll_Click"  Content="{Binding ConverterParameter='일괄재발행',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Visibility="Collapsed" Padding="3,-1,12,0" />
                                        <ToggleButton  Grid.Column="7"  x:Name="btnExpandFrame" Style="{StaticResource btnLeftTopConerStyleHorizontal}" IsChecked="True" Checked="btnExpandFrame_Checked" Unchecked="btnExpandFrame_Unchecked"/>
                                      </Grid>
                                </Grid>


                                <Grid   Grid.Row="1" Grid.Column="1" Margin="0,4,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>

                                <Grid   Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="0" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <c1:C1DataGrid x:Name="dgBox" Grid.Column="1" Grid.Row="1" IsReadOnly="False"  FrozenBottomRowsCount="1" CanUserFilter="True" CanUserSort="True" HeadersVisibility="Column" SelectionMode="MultiRange" >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="dgBoxChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgBoxChoice" HorizontalAlignment="Center" Checked="dgBoxChoice_Checked"  />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn      Header = "순번"    Binding = "{Binding BOXSEQ}"          IsReadOnly="True"  HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn      Header = "BOXID"       Binding = "{Binding BOXID}"         IsReadOnly="True"   HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "수량"       Binding = "{Binding TOTAL_QTY}"         IsReadOnly="True"   HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "셀수량"       Binding = "{Binding SUBLOT_QTY}"        IsReadOnly="True"    HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn      Header = "조립LOTID"       Binding = "{Binding PKG_LOTID}"      IsReadOnly="True"   HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "등급"     Binding = "{Binding PRDT_GRD_CODE}"         IsReadOnly="True"  />
                                            <c1:DataGridTextColumn      Header = "BOXTYPE"     Binding = "{Binding BOXTYPE}"         IsReadOnly="True"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn      Header = "작업일시"     Binding = "{Binding PACKDTTM}"  Format="yyyy-MM-dd HH:mm:ss"  IsReadOnly="True" HorizontalAlignment="Center" />
                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow x:Name="summary_box" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </c1:C1DataGrid>
                                </Grid>
                                <!--end Product Lot-->
                            </Grid>
                            <!-- 작업 PALLET -->
                            <GridSplitter Name="Splitter2" Grid.Column="3" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <Border Grid.Column="4" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='CELL목록', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    <!--<Border     Grid.Column="2" Style="{StaticResource Content_Separator_BorderStyle}" />-->

                                    <Grid Grid.Row="1" Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="100" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="60" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="0" />
                                            <ColumnDefinition Width="0" />
                                            <ColumnDefinition Width="0" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>

                                    </Grid>
                                </Grid>


                                <Grid   Grid.Row="1" Grid.Column="1" Margin="0,4,0,4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
