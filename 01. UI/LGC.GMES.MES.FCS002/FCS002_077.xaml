<UserControl x:Class="LGC.GMES.MES.FCS002.FCS002_077"
             xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:CMM001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"  Loaded="UserControl_Loaded" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Aging S/C 호기별 Tray 수량" Grid.ColumnSpan="2">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                    <Grid   Grid.Row="0" Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="11" />
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13" />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="13"/>
                        </Grid.ColumnDefinitions>

                        <!--조회조건 ROW1-->
                        <TextBlock                             Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='SC_FLAG', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" VerticalAlignment="Center" />
                        <c1:C1ComboBox  x:Name="cboAgingType"  Grid.Row="1" Grid.Column="2" MinHeight="23" DisplayMemberPath="" SelectedValuePath="" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectionCommitted="cboAgingType_SelectionCommitted" />

                        <TextBlock                             Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='MODEL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" VerticalAlignment="Center" />
                        <c1:C1ComboBox  x:Name="cboModel"      Grid.Row="1" Grid.Column="4" MinHeight="23" DisplayMemberPath="" SelectedValuePath="" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                        <Button         x:Name="btnSearch"     Grid.Row="1" Grid.Column="6" Height="Auto" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>
                    
                    <!--조회 영역-->
                    <!--ROW 02-->
                    <Border Grid.Row="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffbebebe"></Border>

                    <Grid   Grid.Row="2" Grid.Column="0" >
                        <c1:C1DataGrid x:Name="dgAgingTray" Grid.Row="0" Grid.Column="0" Margin="5" IsReadOnly="True" HeadersVisibility="All" RowHeaderWidth="33" FrozenColumnCount="2" FrozenTopRowsCount="2" SelectionMode="MultiRange" LoadedRowHeaderPresenter="dgAgingTray_LoadedRowHeaderPresenter" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn      Header = "SC_LINE"         Binding = "{Binding EQP_NAME}"        HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "TRAY_TYPE"       Binding = "{Binding TRAY_TYPE_CODE}"  HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "TRAY_TYPE_NAME"  Binding = "{Binding TRAY_TYPE_NAME}"  HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn      Header = "MODEL_ID"        Binding = "{Binding MDLLOT_ID}"       HorizontalAlignment="Center" />
                                <c1:DataGridNumericColumn   Header = "TRAY_CNT"        Binding = "{Binding TRAY_CNT}"        HorizontalAlignment="Right" Format="###,###,##0" />
                                <c1:DataGridTextColumn      Header = "REMARK"          Binding = "{Binding REMARK}"          HorizontalAlignment="Center" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>

                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
