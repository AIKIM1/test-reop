<UserControl x:Class="LGC.GMES.MES.ProtoType03.cnslsa01"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <ctrlLib:LGCLayout x:Name="LayoutRoot">

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
                <RowDefinition Height="*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Grid x:Name="ButtonArea" Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="3"  Margin="0,-47,0,0">
                <Grid VerticalAlignment="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="34" />
                    </Grid.ColumnDefinitions>
                    <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" Height="32" MouseLeave="btnExtra_MouseLeave">
                        <c1:C1DropDownButton.Header>
                            <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  TextAlignment="Center" VerticalAlignment="Center" Padding="8,0"/>
                        </c1:C1DropDownButton.Header>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="9" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="9" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="9"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="9"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                            <!--추가기능버튼-->
                            <Button  Grid.Row="1" Grid.Column="1" x:Name="btnMenuMove"      Content="{Binding ConverterParameter='메뉴 이동',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" />
                            <Button  Grid.Row="3" Grid.Column="1" x:Name="btnControlSerach" Content="{Binding ConverterParameter='컨트롤검색',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" />
                            <Button  Grid.Row="5" Grid.Column="1" x:Name="btnExcelReport"   Content="{Binding ConverterParameter='Excel Report',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" />
                        </Grid>
                    </c1:C1DropDownButton>
                    <Button   Grid.Row="0" Grid.Column="2" x:Name="btnRun"   Content="{Binding ConverterParameter='작업시작',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}" Margin="5,0,0,0"/>
                    <Button   Grid.Row="0" Grid.Column="3" x:Name="btnRunCancel"   Content="{Binding ConverterParameter='시작취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl03Style}" Margin="5,0,0,0"/>
                    <Button   Grid.Row="0" Grid.Column="4" x:Name="btnEqpEnd"   Content="{Binding ConverterParameter='장비완료',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl01Style}" Margin="5,0,0,0"/>

                    <Button   Grid.Row="0" Grid.Column="5" x:Name="btnConfirm"   Content="{Binding ConverterParameter='실적확인',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl02Style}" Margin="5,0,0,0"/>

                </Grid>
            </Grid>

            <Grid Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="51"></RowDefinition>
                    <RowDefinition Height="8"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="8"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!--조회 영역-->
                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                <Grid   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="13"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0" Grid.Column="1">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                        </StackPanel>
                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipment"      DisplayMemberPath="PRODNAME" SelectedValuePath="PRODID"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEquipment_SelectedValueChanged" />
                        <TextBlock      Grid.Row="0"  Grid.Column="2" Text="{Binding ConverterParameter='현모델1', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                        <TextBox        Grid.Row="0"  Grid.Column="3" x:Name="lblCurrentModel"  Style="{StaticResource SearchCondition_TextBoxStyle}" IsReadOnly="True" />
                        <TextBox        Grid.Row="0"  Grid.Column="4" x:Name="lblModelalias"    Style="{StaticResource SearchCondition_TextBoxStyle}" IsReadOnly="True" />

                        <TextBlock      Grid.Row="0"  Grid.Column="5" Text="{Binding ConverterParameter='현모델2', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                        <TextBox        Grid.Row="0"  Grid.Column="6" x:Name="lblCurrentModel2"  Style="{StaticResource SearchCondition_TextBoxStyle}" IsReadOnly="True" />
                        <TextBox        Grid.Row="0"  Grid.Column="7" x:Name="lblModelalias2"    Style="{StaticResource SearchCondition_TextBoxStyle}" IsReadOnly="True" />
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="3">
                        <Button x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" />
                    </Grid>
                </Grid>
                <!--조회 영역-->

                <!--Sub 영역 01-->
                <Border Grid.Row="2" Grid.Column="0" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                <Grid   Grid.Row="2" Grid.Column="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Sub 영역 01 Title-->
                    <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                    <Grid   Grid.Row="0" Grid.Column="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                    </Grid>
                    <!--Sub 영역 01 Title-->

                    <!--Sub 영역 01 Content-->
                    <Grid   Grid.Row="1" Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="8"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                        </Grid.ColumnDefinitions>

                        <Grid   Grid.Row="1" Grid.Column="1" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="3"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid   Grid.Row="0" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="9"/>
                                    <ColumnDefinition Width="296"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock     Text="{Binding ConverterParameter='총 200 건', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    <c1:C1ComboBox x:Name="cboCombo01"      DisplayMemberPath="PRODNAME" SelectedValuePath="PRODID"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="80"/>
                                </StackPanel>
                                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="2"/>
                            </Grid>

                            <Grid   Grid.Row="2" Grid.Column="0">
                                <c1:C1DataGrid x:Name="spdLOT" Grid.Row="0" Grid.Column="0" FrozenColumnCount="2" IsReadOnly="True" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="Singlerow" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn           Header="LOTID"              Binding="{Binding LOTID}"                HorizontalAlignment="Center"  />
                                        <c1:DataGridTextColumn           Header="모델명"             Binding="{Binding MODELNAME}"            HorizontalAlignment="Center"  />
                                        <c1:DataGridTextColumn           Header="상태"               Binding="{Binding WIPSTAT}"              HorizontalAlignment="Center"    Visibility="Collapsed"/>
                                        <c1:DataGridImageColumn          Header="상태"               Binding="{Binding STATUSIMAGE}"          HorizontalAlignment="Center"  />
                                        <c1:DataGridTextColumn           Header="상태"               Binding="{Binding WIPNAME}"              HorizontalAlignment="Center"  />
                                        <c1:DataGridNumericColumn        Header="수량"               Binding="{Binding WIPQTY}"               HorizontalAlignment="Center"  />
                                        <c1:DataGridNumericColumn        Header="불량"               Binding="{Binding RESNQTY}"              HorizontalAlignment="Center"  />
                                        <c1:DataGridNumericColumn        Header="장비완료수량"       Binding="{Binding REALEQPQTY}"           HorizontalAlignment="Center"  />
                                        <c1:DataGridDateTimeColumn       Header="시작시간"           Binding="{Binding STARTTIME}"            HorizontalAlignment="Center"  />
                                        <c1:DataGridDateTimeColumn       Header="장비완료시간"       Binding="{Binding EQPENDTIME}"           HorizontalAlignment="Center"  />
                                         <c1:DataGridTextColumn          Header="작업지시"           Binding="{Binding WORKORDER}"            HorizontalAlignment="Center"  />
                                        <c1:DataGridTextColumn           Header="순번"               Binding="{Binding OPERCODE}"             HorizontalAlignment="Center"  />
                                        <c1:DataGridTextColumn           Header="제품ID"             Binding="{Binding PRODID}"               HorizontalAlignment="Center"  />
                                        <c1:DataGridTextColumn           Header="제품명"             Binding="{Binding PRODNAME}"             HorizontalAlignment="Left"    />
                                        <c1:DataGridTextColumn           Header="모델ID"             Binding="{Binding MODELID}"              HorizontalAlignment="Center"    Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="전극타입"           Binding="{Binding ELECTRODETYPE}"        HorizontalAlignment="Center"    Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                            </Grid>
                        </Grid>
                    </Grid>
                    <!--Sub 영역 01 Content-->

                </Grid>
                <!--Sub 영역 01-->

                <!--Sub 영역 02 Sub 영역 04 -->
                <Grid Grid.Row="2" Grid.Column="2" Grid.RowSpan="3" x:Name="grAnimation">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="8"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Sub 영역 02-->
                    <Border Grid.Row="0" Grid.Column="3" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                    <Grid   Grid.Row="0" Grid.Column="3" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!--Sub 영역 02 Title-->
                        <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <Grid   Grid.Row="0" Grid.Column="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='투입 매거진', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                        </Grid>
                        <!--Sub 영역 02 Title-->

                        <!--Sub 영역 02 Content-->
                        <Grid   Grid.Row="1" Grid.Column="0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="8"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <Grid   Grid.Row="1" Grid.Column="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid   Grid.Row="0" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="9"/>
                                        <ColumnDefinition Width="296"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock     Text="{Binding ConverterParameter='총 200 건', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        <c1:C1ComboBox x:Name="cboCombo02"      DisplayMemberPath="PRODNAME" SelectedValuePath="PRODID"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="80"/>
                                    </StackPanel>
                                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="2">
                                        <Button x:Name="btnMagCancel"      Content="{Binding ConverterParameter='투입취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" />
                                        <Button x:Name="btnMagReplace"     Content="{Binding ConverterParameter='교체처리',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"        Margin="4,0,0,0"/>
                                        <Button x:Name="btnMagComplete"    Content="{Binding ConverterParameter='투입완료',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"        Margin="4,0,0,0"/>
                                    </StackPanel>
                                </Grid>

                                <Grid   Grid.Row="2" Grid.Column="0">
                                    <c1:C1DataGrid x:Name="spdMagazine" Grid.Row="0" Grid.Column="0" IsReadOnly="True" FrozenColumnCount="2" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="SingleRow" >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Name="CHK">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn           Header="위치"             Binding="{Binding LAMISTARTPOSI}"        HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn           Header="Type"             Binding="{Binding ELECTRODE}"            HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn           Header="매거진"           Binding="{Binding SUBLOTID}"             HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn        Header="투입량"           Binding="{Binding WIPQTY}"               HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn           Header="모델"             Binding="{Binding MODELID}"              HorizontalAlignment="Center"   Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="모델명"           Binding="{Binding MODELNAME}"            HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn           Header="카세트ID"         Binding="{Binding CSTID}"                HorizontalAlignment="Center"   Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn           Header="Lami LOT"         Binding="{Binding INPUTDATE}"            HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn           Header="제품ID"           Binding="{Binding PRODID}"               HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn           Header="제품명"           Binding="{Binding PRODNAME}"             HorizontalAlignment="Left"   />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>
                            </Grid>
                        </Grid>
                        <!--Sub 영역 02 Content-->

                    </Grid>
                    <!--Sub 영역 02-->

                    <!--Sub 영역 04-->
                    <Grid   Grid.Row="2" Grid.Column="3" Background="#ffffffff" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                        </Grid.ColumnDefinitions>
                        <!--Sub 영역 04 Content-->
                        <c1:C1TabControl Grid.Row="1" Grid.Column="1">
                            <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량정보'}" >
                                <Grid   Grid.Row="1" Grid.Column="0" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="8"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid   Grid.Row="1" Grid.Column="0" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="3"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid   Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="9"/>
                                                <ColumnDefinition Width="296"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock     Text="{Binding ConverterParameter='총 200 건', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                                <c1:C1ComboBox x:Name="cboCombo011"      DisplayMemberPath="PRODNAME" SelectedValuePath="PRODID"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="80"/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="2">
                                                <Button x:Name="btnSaveDefect"    Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />
                                            </StackPanel>
                                        </Grid>

                                        <Grid   Grid.Row="2" Grid.Column="0">
                                            <c1:C1DataGrid x:Name="dgData03" Grid.Row="0" Grid.Column="0" IsReadOnly="True" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="SingleRow" >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTemplateColumn Name="CHK">
                                                        <c1:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                            </DataTemplate>
                                                        </c1:DataGridTemplateColumn.CellTemplate>
                                                    </c1:DataGridTemplateColumn>
                                                    <c1:DataGridTextColumn        Header="불량코드"       Binding="{Binding RESNCODE}"        HorizontalAlignment="Center"   Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn        Header="불량요인"       Binding="{Binding RESNNAME}"        HorizontalAlignment="Center" />
                                                    <c1:DataGridNumericColumn     Header="장비불량수량"   Binding="{Binding RESNQTY2}"        HorizontalAlignment="Center" />
                                                    <c1:DataGridNumericColumn     Header="불량수량"       Binding="{Binding RESNQTY}"         HorizontalAlignment="Center" />                                                
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>

                                        </Grid>
                                    </Grid>
                                </Grid>
                            </c1:C1TabItem>
                            <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='설비불량정보'}" >
                                <Grid   Grid.Row="1" Grid.Column="1" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="8"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid   Grid.Row="1" Grid.Column="0" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="3"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid   Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="9"/>
                                                <ColumnDefinition Width="296"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock     Text="{Binding ConverterParameter='총 200 건', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                                <c1:C1ComboBox x:Name="cboCombo0111"      DisplayMemberPath="PRODNAME" SelectedValuePath="PRODID"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="80"/>
                                            </StackPanel>
                                            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right" Grid.ColumnSpan="2">
                                                <Button x:Name="btnEqptDefect"    Content="{Binding ConverterParameter='조회',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" />
                                            </StackPanel>
                                        </Grid>

