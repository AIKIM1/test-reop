<UserControl x:Class="LGC.GMES.MES.ProtoType03.nondle02"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" >

            <ctrlLib:LGCLayout.Content>

                <Grid x:Name="GrdMain">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="5*" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <!-- 조회 조건 -->
                    <Grid x:Name="GrdTop" Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <!-- Lables -->
                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                <!-- 필수 검색 조건은 아래와 같이 StackPanel을 이용하여 필수 마크를 붙여 줍니다 -->
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock Margin="0,0,9,0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            </StackPanel>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                            <TextBlock Margin="0,0,9,0" Text="{Binding ConverterParameter='현모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="4" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                            <TextBlock Margin="0,0,9,0" Text="{Binding ConverterParameter='타입', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        </Border>
                        
                        <!-- Controls -->
                        <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                            <ComboBox x:Name="cboEquipment" Margin="8,3" Style="{StaticResource SearchCondition_ComboBoxStyle}" DisplayMemberPath="NAME" SelectedValuePath="CODE"/>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="6*" />
                                </Grid.ColumnDefinitions>
                                <TextBox  x:Name="txtModel" Grid.Column="0"         Style="{StaticResource SearchCondition_TextBoxStyle}" Margin="8,3,2,3"  />
                                <TextBox  x:Name="txtModelAlias" Grid.Column="1"         Style="{StaticResource SearchCondition_TextBoxStyle}" Margin="0,3,8,3"  />
                            </Grid>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="6*" />
                                </Grid.ColumnDefinitions>
                                <TextBox  x:Name="txtType" Grid.Column="0"         Style="{StaticResource SearchCondition_TextBoxStyle}" Margin="8,3,2,3"  />
                                <TextBox  x:Name="txtTrayType" Grid.Column="1"         Style="{StaticResource SearchCondition_TextBoxStyle}" Margin="0,3,8,3"  />
                            </Grid>
                        </Border>
                        <Border Grid.Row="0" Grid.Column="9" >
                            <Button x:Name="btnSearch"  Content="{Binding ConverterParameter=Search,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSearch_Click" />
                        </Border>
                    </Grid>

                    <Grid x:Name="GrdCenter" Grid.Row="3" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="GrdWorkOrder" Grid.Row="0" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="3*" />
                                <RowDefinition Height="5" />
                                <RowDefinition Height="6*" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='작업 지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                            <!-- Workorder Qty info -->
                            <Grid x:Name="GrdWorkorderQty" Grid.Row="2" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4*" />
                                    <RowDefinition Height="5" />
                                    <RowDefinition Height="6*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="5" />
                                    <ColumnDefinition Width="3*" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>

                                <!-- Row 0 -->
                                <!--
                                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="0" Grid.Column="1" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="0" Grid.Column="2" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="0" Grid.Column="3" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="0" Grid.Column="4" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="0" Grid.Column="5" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="0" Grid.Column="6" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
-->
                                <!-- Row 0 -->
                                <Border Grid.Row="0" Grid.Column="0" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="0" Grid.Column="1" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                    <TextBlock Text="{Binding ConverterParameter='계획수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="2" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="0" Grid.Column="3" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                    <TextBlock Text="{Binding ConverterParameter='할당수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="4" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="0" Grid.Column="5" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                    <TextBlock Text="{Binding ConverterParameter='생산수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="6" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>

                                <!-- Row 1 -->
                                <Border Grid.Row="1" Grid.Column="0" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="1" Grid.Column="1" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="1" Grid.Column="2" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="1" Grid.Column="3" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="1" Grid.Column="4" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="1" Grid.Column="5" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="1" Grid.Column="6" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>

                                <!-- Row 2 -->
                                <Border Grid.Row="2" Grid.Column="0" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="2" Grid.Column="1" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                    <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Center" FontSize="18"><Run Text="{Binding ConverterParameter='100,000,000', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Foreground="#FFE01C1C"/></TextBlock>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="2" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="2" Grid.Column="3" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                    <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Center" FontSize="18"><Run Text="{Binding ConverterParameter='100,000', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Foreground="#FFE01C1C"/></TextBlock>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="4" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="2" Grid.Column="5" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                    <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Center" FontSize="18"><Run Text="{Binding ConverterParameter='546', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Foreground="#FFE01C1C"/></TextBlock>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="6" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>

                                <!-- Row 3 -->
                                <Border Grid.Row="3" Grid.Column="0" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="3" Grid.Column="1" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="3" Grid.Column="2" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="3" Grid.Column="3" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="3" Grid.Column="4" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="3" Grid.Column="5" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                                <Border Grid.Row="3" Grid.Column="6" BorderBrush="#ffd8d8d8" Background="#ffe9e9e9" BorderThickness="0">
                                </Border>
                            </Grid>

                            <c1:C1DataGrid x:Name="dgWorkorder" Grid.Row="4" Grid.Column="0" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" AlternatingRowBackground="White"
                                           SelectionMode="SingleRow" >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn       Header = "작업일자"     Binding = "{Binding WORKDATE}"             HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "지시번호"     Binding = "{Binding WORKORDER}"           HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "순번"         Binding = "{Binding OPERCODE}"              HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "재품ID"       Binding = "{Binding PRODID}"           HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn    Header = "지시량"       Binding = "{Binding ORDERQTY}"        HorizontalAlignment="Right"   Format="#,##0"/>
                                    <c1:DataGridNumericColumn    Header = "생산량"       Binding = "{Binding WORKQTY}"            HorizontalAlignment="Right"   Format="#,##0"/>
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </Grid>

                        <!-- 실적 정보 -->
                        <Grid x:Name="GrdLot" Grid.Row="0" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="5" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='작업 대상', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                            <c1:C1DataGrid x:Name="dgLotList" Grid.Row="2" Grid.Column="0" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="6" AlternatingRowBackground="White"
                                           SelectionMode="SingleRow" LoadedRowHeaderPresenter="dgLotList_LoadedRowHeaderPresenter"  >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn Name="CHK"  Header=" ">
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="LotCheckBox_Click"/>
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn       Header = "LOT ID"         Binding = "{Binding LOTID}"             HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "모델ID"         Binding = "{Binding MODELID}"           HorizontalAlignment="Center" Visibility="Hidden" />
                                    <c1:DataGridTextColumn       Header = "모델명"         Binding = "{Binding MODELNAME}"              HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "상태"           Binding = "{Binding STATUS}"              HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "상태"                                                     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn    Header = "투입수량"       Binding = "{Binding INQTY}"                                            HorizontalAlignment="Right" />
                                    <c1:DataGridNumericColumn    Header = "수량"           Binding = "{Binding WIPQTY}"            HorizontalAlignment="Right" />
                                    <c1:DataGridTextColumn       Header = "장비완료수량"   Binding = "{Binding REALEQPQTY}"        HorizontalAlignment="Center" Format="#,##0"/>
                                    <c1:DataGridTextColumn       Header = "시작시간"       Binding = "{Binding STARTTIME}"        HorizontalAlignment="Center" Format="#,##0"/>
                                    <c1:DataGridTextColumn       Header = "장비완료시간"   Binding = "{Binding EQPENDTIME}"        HorizontalAlignment="Center" Format="#,##0"/>
                                    <c1:DataGridTextColumn       Header = "작업지시"       Binding = "{Binding WORKORDER}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn       Header = "순번"           Binding = "{Binding OPERCODE}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn       Header = "제품ID"         Binding = "{Binding PRODID}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn       Header = "제품명"         Binding = "{Binding PRODNAME}"        HorizontalAlignment="Center"/>
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </Grid>
                    </Grid>

                    <Grid x:Name="GrdBottom" Grid.Row="5" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='투입', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                        <Grid x:Name="GrdInProd" Grid.Row="1" Grid.Column="0">                            
                            <c1:C1TabControl>
                                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입 바구니'}" >
                                    <Grid x:Name="GrdInBox">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="34" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="34" />
                                        </Grid.RowDefinitions>

                                        <Grid x:Name="GrdInBoxTop" Grid.Row="1" Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="6*" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="5" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Row="0" Grid.Column="3" >
                                                <Button x:Name="btnCompleteBasket"  Content="{Binding ConverterParameter=완료,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />
                                            </Border>
                                            <Border Grid.Row="0" Grid.Column="5" >
                                                <Button x:Name="btnCancelBasket"  Content="{Binding ConverterParameter=투입취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />
                                            </Border>
                                        </Grid>
                                        <c1:C1DataGrid x:Name="dgInBox" Grid.Row="2" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" Margin="5" >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTemplateColumn Name="CHK"  Header="선택">
                                                        <c1:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="InProdCheckBox_Click"/>
                                                            </DataTemplate>
                                                        </c1:DataGridTemplateColumn.CellTemplate>
                                                    </c1:DataGridTemplateColumn>
                                                    <c1:DataGridTextColumn     Header = "바구니"   Binding = "{Binding SUBLOTID}"   HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn     Header = "폴딩LOT"  Binding = "{Binding FOLDLOT}"   HorizontalAlignment="Center" />
                                                    <c1:DataGridNumericColumn  Header = "수량"     Binding = "{Binding WIPQTY}"   HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn     Header = "상태"     Binding = "{Binding WIPSTAT}"   HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn     Header = "모델"     Binding = "{Binding MODELID}"   HorizontalAlignment="Center" Visibility="Hidden" />
                                                    <c1:DataGridTextColumn     Header = "제품"     Binding = "{Binding PRODID}"   HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn     Header = "제품명"   Binding = "{Binding PRODNAME}"   HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn     Header = "투입일자" Binding = "{Binding INPUTDATE}"   HorizontalAlignment="Center" />
                                                    <!--
                                            <c1:DataGridNumericColumn     Header = " "         Binding = "{Binding DEFECTQTY1}"   HorizontalAlignment="Right" Format="###,###,###,###"/>
                                            <c1:DataGridNumericColumn     Header = " "         Binding = "{Binding DEFECTQTY2}"   HorizontalAlignment="Right" Format="###,###,###,###"/>
                                            -->
                                                </c1:C1DataGrid.Columns>

                                            </c1:C1DataGrid>
                                        <Grid x:Name="GrdInBoxBottom" Grid.Row="3" Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="8*" />
                                                <ColumnDefinition Width="5" />                                                
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                                <TextBlock Style="{StaticResource Content_InputForm_TextBlockStyle}"><Run Text="{Binding ConverterParameter='수량합계:', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                                <TextBlock Style="{StaticResource Content_InputForm_TextBlockStyle}"><Run Text="{Binding ConverterParameter='0', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                            </StackPanel>
                                        </Grid>
                                    </Grid>
                                </c1:C1TabItem>


                                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='대기 바구니'}">
                                    <Grid x:Name="GrdInReadyBox">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="34" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="34" />
                                        </Grid.RowDefinitions>
                                        <Grid x:Name="GrdInReadyBoxTop" Grid.Row="1" Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="4*" />
                                                <ColumnDefinition Width="5" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="5" />
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                                <TextBlock Text="{Binding ConverterParameter='자동투입', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                            </Border>
                                            <Border Grid.Row="0" Grid.Column="3" >
                                                <TextBox  x:Name="txtInputBasket" Style="{StaticResource SearchCondition_TextBoxStyle}" Margin="2,5"  />
                                            </Border>
                                            <Border Grid.Row="0" Grid.Column="7" >
                                                <Button x:Name="btnInputReadyBasket"  Content="{Binding ConverterParameter=투입,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />
                                            </Border>
                                        </Grid>

                                        <c1:C1DataGrid x:Name="dgReadyBox" Grid.Row="2" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column"  SelectionMode="MultiRange" Margin="5">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn Name="CHK"  Header=" ">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="ReadyCheckBox_Click"/>
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
