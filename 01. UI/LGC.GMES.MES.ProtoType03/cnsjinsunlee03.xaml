<UserControl x:Class="LGC.GMES.MES.ProtoType03.cnsjinsunlee03"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
   
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="DSF 공정진척">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <Grid x:Name="ButtonArea" Grid.Row="1" Grid.Column="1" Margin="0,-51,0,0"  >
                        <!--위에 버튼-->
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            
                            <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnMore" >
                                <c1:C1DropDownButton.Header>
                                    <TextBlock x:Name="selection" Text="{Binding ConverterParameter='More', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center"/>
                                </c1:C1DropDownButton.Header>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <!--추가기능버튼-->
                                    <Button  Grid.Row="0" Grid.Column="0" x:Name="btnTest"           Content="{Binding ConverterParameter='자주검사',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                    <Button  Grid.Row="1" Grid.Column="0" x:Name="btnSPC"      Content="{Binding ConverterParameter='SPC',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                    <Button  Grid.Row="2" Grid.Column="0" x:Name="btnfaultyRegister"      Content="{Binding ConverterParameter='불량등록',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                    <Button  Grid.Row="3" Grid.Column="0" x:Name="btnModelRegister"      Content="{Binding ConverterParameter='모델등록',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                    <Button  Grid.Row="4" Grid.Column="0" x:Name="btnCreate"      Content="{Binding ConverterParameter='대차생성',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                    <Button  Grid.Row="5" Grid.Column="0" x:Name="btnHoldRegister"      Content="{Binding ConverterParameter='Hold등록',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                </Grid>
                            </c1:C1DropDownButton>

                            
                        </Grid>
                    </Grid>

                    <Grid x:Name="searchArea" Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.2*"/>
                            <ColumnDefinition Width="1.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.ColumnSpan="14" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                        
                        <!--title-->
                        <TextBlock  Grid.Column="0" Text="기간" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <TextBlock  Grid.Column="3" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                        <TextBlock  Grid.Column="6" Text="설비" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <TextBlock  Grid.Column="8" Text="LOT ID" Style="{StaticResource Content_InputForm_LabelStyle}" />

                        <!--contorole-->
                        <DatePicker  x:Name="dtpStartDateFrom" Grid.Column="1" Style="{StaticResource DatePickerBaseStyle}" />
                        <ComboBox   x:Name="cboStartTime" Grid.Column="2"  Style="{StaticResource SearchCondition_ComboBoxStyle}" DisplayMemberPath="" SelectedValuePath=""/>
                        <DatePicker x:Name="dtpEndDateFrom"  Grid.Column="4" Style="{StaticResource DatePickerBaseStyle}"/>
                        <ComboBox   x:Name="cboEndTime" Grid.Column="5"  Style="{StaticResource SearchCondition_ComboBoxStyle}" DisplayMemberPath="" SelectedValuePath=""/>
                        <ComboBox   x:Name="cboEquip" Grid.Column="7"  Style="{StaticResource SearchCondition_ComboBoxStyle}" DisplayMemberPath="" SelectedValuePath=""/>
                        <TextBox x:Name="txtLotID" Grid.Column="9"  Style="{StaticResource SearchCondition_TextBoxStyle}"/>
                        <CheckBox   x:Name="chWait"   Grid.Column="10" Content="{Binding ConverterParameter='대기', Converter={StaticResource GlobalObjectDicConverter}}"  Style="{StaticResource SearchCondition_CheckBoxStyle}" />
                        <CheckBox   x:Name="chWorking"   Grid.Column="11" Content="{Binding ConverterParameter='작업중', Converter={StaticResource GlobalObjectDicConverter}}"  Style="{StaticResource SearchCondition_CheckBoxStyle}" />
                        <CheckBox   x:Name="chFinish"   Grid.Column="12" Content="{Binding ConverterParameter='작업완료', Converter={StaticResource GlobalObjectDicConverter}}"  Style="{StaticResource SearchCondition_CheckBoxStyle}" />
                        

                        <!--search button-->
                        <Button x:Name="btnSearch"  Grid.Column="13" Content="{Binding ConverterParameter=Search, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Center"/>
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="workOrderArea" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.RowSpan="6" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='작업 지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>

                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan=" 5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <Border  Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                            <Grid  Grid.Row="2" Grid.Column="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <!--title-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='계획수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='생산수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='잔량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>

                                <!--control-->
                                <TextBlock Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" FontSize="18" HorizontalAlignment="Center">
                                        <Run Text="{Binding ConverterParameter='1000', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Foreground="#FFE01C1C"/>
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}" FontSize="18" HorizontalAlignment="Center">
                                        <Run Text="{Binding ConverterParameter='50', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Foreground="#FFE01C1C"/>
                                </TextBlock>
                                <TextBlock Grid.Row="1" Grid.Column="3" Style="{StaticResource Content_ModuleTitleStyle}" FontSize="18" HorizontalAlignment="Center">
                                        <Run Text="{Binding ConverterParameter='50', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Foreground="#FFE01C1C"/>
                                </TextBlock>
                            </Grid>
                            <!--5row-->
                            <c1:C1DataGrid Grid.Row="4" Grid.Column="1" x:Name="dgWorkOrder" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">

                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridCheckBoxColumn       Header=" "   Binding="{Binding CHECKBOXCOLUMN01}"        IsReadOnly="False"/>
                                    <c1:DataGridTextColumn        Header = "순위"         Binding = "{Binding Binding01}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품ID"       Binding = "{Binding Binding02}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "계획수량"     Binding = "{Binding Binding03}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "생산수량"         Binding = "{Binding Binding04}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "Type"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "상태"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "M/O"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "W/O"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>

                            </c1:C1DataGrid>
                            <!--end 작업지시-->
                        </Grid>
                        
                        <Grid x:Name="productLot" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='Product Lot', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan=" 3" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">

                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridCheckBoxColumn       Header=" "   Binding="{Binding CHECKBOXCOLUMN01}"        IsReadOnly="False"/>
                                    <c1:DataGridTextColumn        Header = "Lot ID"         Binding = "{Binding Binding01}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "모델"       Binding = "{Binding Binding02}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "상태"     Binding = "{Binding Binding03}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "투입수량"         Binding = "{Binding Binding04}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn       Header = "양품수량"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "불량수량"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "장비완료수량"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "시작시간"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "업데이트시간"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridDateTimeColumn        Header = "장비완료시간"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridDateTimeColumn        Header = "종료시간"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridDateTimeColumn        Header = "제품명"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                            <!--end Product Lot-->
                        </Grid>
                        
                    </Grid>

                    <Grid Grid.Row="5" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Grid x:Name="detail" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='실적상세', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan=" 2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <Grid Grid.Row="2" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <!--title-->
                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='LOT ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="6"  Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <Border Grid.Row="1" Grid.Column="0"  Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="3"   Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                <Border Grid.Row="1" Grid.Column="6"   Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='투입수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='생산수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='양품수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='불량수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="3" Grid.RowSpan="2"  Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="6" Grid.RowSpan="2"  Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>


                                <!--controle-->
                                <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox Grid.ColumnSpan="2" x:Name="txtLotId"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox Grid.ColumnSpan="2" x:Name="txtModel"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <TextBox Grid.ColumnSpan="2" x:Name="txtWorkOrder"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />

                                <Border Grid.Row="1" Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />

                                <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <TextBox Grid.ColumnSpan="2" x:Name="txtInputQuntity"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <TextBox Grid.ColumnSpan="2" x:Name="txtProduceQuntity"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                </Border>
                                <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <TextBox Grid.ColumnSpan="2" x:Name="txtQuntity"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <TextBox Grid.ColumnSpan="2" x:Name="txtFaultyQuntity"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <TextBox Grid.ColumnSpan="2" x:Name="txtFinishTime"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Grid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0" x:Name="txtWorkGroup"        Style="{StaticResource SearchCondition_TextBoxStyle}"/>
                                </Grid>
                                <Grid Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0" x:Name="txtWorkPerson"        Style="{StaticResource SearchCondition_TextBoxStyle}"/>
                                </Grid>
                               
                              
                            </Grid>

                           
                            <!--end Product Lot-->
                        </Grid>

                        <Grid x:Name="tabArea" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>


                            <c1:C1TabControl Grid.Row="1" Grid.Column="1">
                                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입자재'}" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="0.4*"/>
                                            <RowDefinition Height="0.4*"/>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="3*"/>
                                            <RowDefinition Height="5"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="5"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Row="1" Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="34"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

