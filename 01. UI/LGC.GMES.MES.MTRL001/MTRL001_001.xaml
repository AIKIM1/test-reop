<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" 
             x:Class="LGC.GMES.MES.MTRL001.MTRL001_001"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid  x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="원자재 요청">
            <Grid>
                <c1:C1TabControl x:Name="tabRequest">

                    <!--요청-->
                    <c1:C1TabItem x:Name="ctbRequest" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='요청'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <GridSplitter Grid.Row="3" Grid.Column="0" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                            <GridSplitter Grid.Row="5" Grid.Column="0" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--조회영역-->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock       Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='계획일자',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='라인',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="5" Text="{Binding ConverterParameter='공정',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="7" Text="{Binding ConverterParameter='설비',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="2">
                                    <ctrlLib:LGCDatePicker DatepickerType="Date" x:Name="dtpDateFrom" />
                                    <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0" />
                                    <ctrlLib:LGCDatePicker DatepickerType="Date" x:Name="dtpDateTo"   />
                                </StackPanel>
                                <c1:C1ComboBox   x:Name="cboEquipmentSegment" Grid.Row="1" Grid.Column="4"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <c1:C1ComboBox   x:Name="cboProcess"          Grid.Row="1" Grid.Column="6"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <c1:C1ComboBox   x:Name="cboEquipment"        Grid.Row="1" Grid.Column="8"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>

                                <!--조회 버튼-->
                                <Button          x:Name="btnSearch"           Grid.Row="1" Grid.Column="10" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />

                            </Grid>

                            <!--W/O-->
                            <Grid  Grid.Row="2">
                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <c1:C1DataGrid x:Name="dgWorkOrder" 
                                               HeadersVisibility="Column" 
                                               IsReadOnly="True" 
                                               SelectionMode="SingleRow">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택"  >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgWOChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgWOChoice" HorizontalAlignment="Center" Checked="dgWOChoice_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTextColumn        Header = "선택"                Binding = "{Binding EIO_WO_SEL_STAT}" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "PJT"                 Binding = "{Binding PRJT_NAME}"       HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "W/O"                 Binding = "{Binding WOID}"            HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "LOT코드"             Binding = "{Binding MDLLOT_ID}"       HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "W/O상세"             Binding = "{Binding WO_DETL_ID}"      HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "EQSGID"              Binding = "{Binding EQSGID}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "라인"                Binding = "{Binding EQSGNAME}"        HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "EQPTID"              Binding = "{Binding EQPTID}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "설비명"              Binding = "{Binding EQPTNAME}"        HorizontalAlignment="Left"   Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "제품ID"              Binding = "{Binding PRODID}"          HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "3D유형"              Binding = "{Binding CELL_3DTYPE}"     HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "극성"                Binding = "{Binding ELECTYPE}"        HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "CLSS_ID"             Binding = "{Binding CLSS_ID}"         HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "셀유형"              Binding = "{Binding CLSS_NAME}"       HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "셀유형"              Binding = "{Binding PRODNAME}"        HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "모델ID"              Binding = "{Binding MODLID}"          HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "W/OTYPE"             Binding = "{Binding LOTYNAME}"        HorizontalAlignment="Center"/>
                                        <c1:DataGridNumericColumn     Header = "계획수량"            Binding = "{Binding INPUT_QTY}"       HorizontalAlignment="Center" Format="#,##0"/>
                                        <c1:DataGridNumericColumn     Header = "생산수량"            Binding = "{Binding OUTQTY}"          HorizontalAlignment="Center" Format="#,##0"/>
                                        <c1:DataGridTextColumn        Header = "단위"                Binding = "{Binding UNIT_CODE}"       HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn        Header = "시작일시"            Binding = "{Binding STRT_DTTM}"       HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn        Header = "종료일시"            Binding = "{Binding END_DTTM}"        HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn        Header = "W/O상태"             Binding = "{Binding WO_STAT_CODE}"    HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "W/O상태"             Binding = "{Binding WO_STAT_NAME}"    HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn        Header = "계획유형"            Binding = "{Binding PLAN_TYPE_NAME}"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "PLAN_TYPE"           Binding = "{Binding PLAN_TYPE}"       HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "TYPE"                Binding = "{Binding WOTYPE}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "EIO_WO_DETL_ID"      Binding = "{Binding EIO_WO_DETL_ID}"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "극성"                Binding = "{Binding PRDT_CLSS_CODE}"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "시장유형"            Binding = "{Binding MKT_TYPE_NAME}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "시장유형"            Binding = "{Binding MKT_TYPE_CODE}"   HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "DEMAND유형"          Binding = "{Binding DEMAND_TYPE}"     HorizontalAlignment="Center" Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--자재소요량-->
                            <Grid Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='소요량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgWorkOrderMtrl" 
                                               Grid.Row="1" 
                                               Grid.Column="1"
                                               HeadersVisibility="Column" 
                                               SelectionMode="SingleRow" PreviewMouseLeftButtonDown="dgWorkOrderMtrl_PreviewMouseLeftButtonDown">
                                    <c1:C1DataGrid.Columns>
                                        <!--<c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                            <c1:DataGridCheckBoxColumn.Header>
                                                <StackPanel Width="30" Margin="-5" Orientation="Horizontal" >
                                                    <TextBlock x:Name="tbCheckHeaderAll" Padding="0" MouseLeftButtonDown="tbCheckHeaderAll_MouseLeftButtonDown" Text="" Width="40"/>
                                                </StackPanel>
                                            </c1:DataGridCheckBoxColumn.Header>
                                        </c1:DataGridCheckBoxColumn>-->
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택"  >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTextColumn      Header = "자재분류"        Binding = "{Binding MTRL_CLSS3_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "자재ID"          Binding = "{Binding MTRLID}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "자재명"          Binding = "{Binding MTRLDESC}"            HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "소요량"          Binding = "{Binding MPLAN_QTY}"           HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0.###" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridNumericColumn   Header = "필요수량"        Binding = "{Binding NEED_QTY}"            HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0.###" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridNumericColumn   Header = "요청수량"        Binding = "{Binding MTRL_SPLY_REQ_QTY}"   HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0.###" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridNumericColumn   Header = "재고수량"        Binding = "{Binding MLOTQTY_CUR}"         HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0.###" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridNumericColumn   Header = "차이수량"        Binding = "{Binding DIFF_QTY}"            HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0.###" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridTextColumn      Header = "재고단위"        Binding = "{Binding STCK_UNIT_CODE}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "단위수량"        Binding = "{Binding UNIT_QTY}"            HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridTextColumn      Header = "요청단위"        Binding = "{Binding REQ_UNIT_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--요청-->
                            <Grid Grid.Row="6">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="4*" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock                      Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='요청', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    <!--<Button     x:Name="btnRequest" Grid.Column="2" Content="{Binding ConverterParameter=요청, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnRequest_Click" />-->
                                </Grid>

                                <GridSplitter Grid.Row="1" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <c1:C1DataGrid x:Name="dgRequest" 
                                               Grid.Row="1" 
                                               Grid.Column="0"
                                               HeadersVisibility="Column"                                                 
                                               SelectionMode="SingleRow" LoadedCellPresenter="dgRequest_LoadedCellPresenter" CommittedEdit="dgRequest_CommittedEdit">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "자재ID"        Binding = "{Binding MTRLID}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "자재명"        Binding = "{Binding MTRLDESC}"            HorizontalAlignment="Left"   IsReadOnly="True"/>
                                        <c1:DataGridTextColumn      Header = "요청단위"      Binding = "{Binding REQ_UNIT_CODE}"       HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridNumericColumn   Header = "요청수량"      Binding = "{Binding MTRL_SPLY_REQ_QTY}"   HorizontalAlignment="Right"  Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridNumericColumn   Header = "단위수량"      Binding = "{Binding UNIT_QTY}"            HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridNumericColumn   Header = "환산량"        Binding = "{Binding CONV_QTY}"            HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridNumericColumn   Header = "적재가능수량"  Binding = "{Binding REQ_MAX_QTY}"         HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox   x:Name="chkEmrgReqFlag" Grid.Row="1" Grid.Column="3"  Content="{Binding ConverterParameter='긴급요청', Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False" HorizontalAlignment="Left" Margin="2,0,0,0"/>
                                    <Button     x:Name="btnRequest"     Grid.Row="1" Grid.Column="6" Content="{Binding ConverterParameter=요청, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnRequest_Click" />
                                    <TextBlock                          Grid.Row="3" Grid.Column="1" Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <Grid Grid.Row="3" Grid.Column="3" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="5"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="txtRequestUser"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtRequestUser_KeyDown"/>
                                        <Button  Grid.Column="1" x:Name="btnRequestUser"    Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnRequestUser_Click"/>
                                    </Grid>
                                    <TextBlock                      Grid.Row="5" Grid.Column="1" Text="{Binding ConverterParameter='비고', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox    x:Name="txtNote"    Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="4"  Style="{StaticResource Content_InputForm_TextBoxStyle}" Height="Auto" AcceptsReturn="True" VerticalContentAlignment="Top" />

                                </Grid>

                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <!--요청이력-->
                    <c1:C1TabItem x:Name="ctbHistory" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='요청이력'}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="53*"/>
                                <ColumnDefinition Width="972*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="7*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <GridSplitter Grid.Row="3" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="2" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--조회영역-->
                            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock       Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='요청일자',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='동',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="5" Text="{Binding ConverterParameter='라인',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="3" Grid.Column="3" Text="{Binding ConverterParameter='공정',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="3" Grid.Column="5" Text="{Binding ConverterParameter='설비',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="2">
                                    <ctrlLib:LGCDatePicker DatepickerType="Date" x:Name="dtpDateFromHis" />
                                    <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0" />
                                    <ctrlLib:LGCDatePicker DatepickerType="Date" x:Name="dtpDateToHis"   />
                                </StackPanel>
                                <c1:C1ComboBox   x:Name="cboAreaHis"             Grid.Row="1" Grid.Column="4"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <c1:C1ComboBox   x:Name="cboEquipmentSegmentHis" Grid.Row="1" Grid.Column="6"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <c1:C1ComboBox   x:Name="cboProcessHis"          Grid.Row="3" Grid.Column="4"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
