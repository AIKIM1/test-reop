<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"
             x:Class="LGC.GMES.MES.MTRL001.MTRL001_219"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d"
             d:DesignHeight="768" d:DesignWidth="1280" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="원자재 출고 요청">
            <Grid>
                <c1:C1TabControl x:Name="tabMain">
                    <c1:C1TabItem x:Name="ctbRequest" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='요청'}">
                        <Grid x:Name="grdReq">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <!--좌측-->
                            <Grid Grid.Row="1" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.RowSpan="3" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                <!--Label-->
                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}" Grid.ColumnSpan="2" Margin="15,12,0,12"><Run Text="{Binding ConverterParameter=W/O, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                <!--조회 버튼-->
                                <Button x:Name="btnSearch" Grid.Row="0" Grid.Column="2" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" Margin="0,6" />

                                <!--조회조건-->
                                <Border Grid.Row="1" Grid.Column ="0" Grid.ColumnSpan="3" BorderThickness="2" BorderBrush="#ffbebebe" CornerRadius="5" Style="{StaticResource BorderSubTitleStyle}" Margin="8,0,0,0">
                                    <Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="10,5,10,5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="30" />
                                            <RowDefinition Height="30" />
                                            <RowDefinition Height="30" />
                                            <RowDefinition Height="30" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" HorizontalAlignment="Right" Margin="0,0,-10,0" />
                                            <TextBlock Text="{Binding ConverterParameter=LINE, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"  VerticalAlignment="Center"/>
                                        </StackPanel>
                                        <c1:C1ComboBox x:Name="cboEquipmentSegment" Grid.Row="0" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />

                                        <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" Margin="0,0,-10,0" />
                                            <TextBlock Text="{Binding ConverterParameter=공정, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        </StackPanel>
                                        <c1:C1ComboBox x:Name="cboProcess" Grid.Row="1" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />

                                        <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" HorizontalAlignment="Right" Margin="0,0,-10,0" />
                                            <TextBlock Text="{Binding ConverterParameter=설비, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"  VerticalAlignment="Center" />
                                        </StackPanel>
                                        <c1:C1ComboBox x:Name="cboEquipment" Grid.Row="2" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"   AutoComplete="False" SelectedValueChanged="cboEquipment_SelectedValueChanged" />

                                        <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" HorizontalAlignment="Right" Margin="0,0,-10,0" />
                                            <TextBlock Text="{Binding ConverterParameter=기간, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Right"  VerticalAlignment="Center" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,0" >
                                            <ctrlLib:LGCDatePicker x:Name="dtpDateFrom"  DatepickerType="Date" SelectedDataTimeChanged="dtpDateFrom_SelectedDataTimeChanged" />
                                            <TextBlock Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                                            <ctrlLib:LGCDatePicker x:Name="dtpDateTo"  DatepickerType="Date" SelectedDataTimeChanged="dtpDateTo_SelectedDataTimeChanged" />
                                        </StackPanel>
                                    </Grid>
                                </Border>

                                <!--WO Grid-->
                                <c1:C1DataGrid x:Name="dgWorkOrder" Grid.Row="2" Grid.Column ="0" Grid.ColumnSpan="3" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="MultiRow" CanUserEditRows="True" Margin="8,8,0,8">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Header="선택" Width="Auto" VerticalAlignment="Center" HorizontalAlignment="Center" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgWorkOrderChoiceGroup" IsChecked="{Binding CHK, Mode=TwoWay}" Name="dgWorkOrderChoice" HorizontalAlignment="Center" Checked="dgWorkOrderChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn     Header = "PJT"        Binding = "{Binding PRJT_NAME}"         IsReadOnly="True"     HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn     Header = "버전"       Binding = "{Binding PROD_VER_CODE}"     IsReadOnly="True"     HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn     Header = "EQPTNAME"   Binding = "{Binding EQPTNAME}"          IsReadOnly="True"     HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "W/O"        Binding = "{Binding WOID}"              IsReadOnly="True"     HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn     Header = "제품ID"     Binding = "{Binding PRODID}"            IsReadOnly="True"     HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn     Header = "극성"       Binding = "{Binding ELTR_TYPE_CODE}"    IsReadOnly="True"     HorizontalAlignment="Left"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn     Header = "극성"       Binding = "{Binding ELTR_NAME}"         IsReadOnly="True"     HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn     Header = "모델ID"     Binding = "{Binding MODLID}"            IsReadOnly="True"     HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn     Header = "W/O Type"   Binding = "{Binding WOTYPENAME}"        IsReadOnly="True"     HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn     Header = "시장유형"   Binding = "{Binding MKT_TYPE_CODE}"     IsReadOnly="True"     HorizontalAlignment="Left"  Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--가로크기조절바-->
                            <GridSplitter Grid.Row="1" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Left" Width="8" />

                            <!--중앙-->
                            <Grid Grid.Row="1" Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <!--Label-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=AVAIABLE_MATERIAL_INPUT, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                <!--투입가능자재-->
                                <c1:C1DataGrid Grid.Row="1" Grid.Column="0" x:Name="dgInputMaterial" IsReadOnly="True" HeadersVisibility="Column" Width="Auto" SelectionMode="SingleRow" Margin="8" 
                                           CanUserSort="False"
                                           LoadedCellPresenter="DgInputMaterial_LoadedCellPresenter"
                                           MouseDoubleClick="dgInputMaterial_MouseDoubleClick">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn        Header = "자재"         Binding = "{Binding MTRLID}"       IsReadOnly="True"  HorizontalAlignment="Left" />
                                        <c1:DataGridTextColumn        Header = "자재규격"     Binding = "{Binding MTRLDESC}"     IsReadOnly="True"  HorizontalAlignment="Left" />
                                        <c1:DataGridNumericColumn     Header = "소요량"       Binding = "{Binding INPUT_QTY}"    IsReadOnly="True"  HorizontalAlignment="Right"  Format="###,##0.###" EditOnSelection="True" Minimum="0" ShowButtons="False"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "단위"         Binding = "{Binding UNIT_CODE}"    IsReadOnly="True"  HorizontalAlignment="Center"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--이동버튼-->
                            <Grid Grid.Row="1" Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="80"/>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="20"/>
                                    <RowDefinition Height="60"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Button Grid.Row="1" x:Name="btnAllRight" Style="{DynamicResource Content_SubTaskButtonNext02Style}" Height="60" Margin="3,0,3,0" Cursor="Hand" Click="btnAllRight_Click" />
                                <Button Grid.Row="3" x:Name="btnAllLeft" Style="{DynamicResource Content_SubTaskButtonPrev02Style}" Height="60" Margin="3,0,3,0" Cursor="Hand" Click="btnAllLeft_Click" />
                                <Button Grid.Row="5" x:Name="btnRight" Style="{DynamicResource Content_SubTaskButtonNextStyle}" Height="60" Margin="3,0,3,0" Cursor="Hand" Click="btnRight_Click" />
                                <Button Grid.Row="7" x:Name="btnLeft" Style="{DynamicResource Content_SubTaskButtonPrevStyle}" Height="60" Margin="3,0,3,0" Cursor="Hand" Click="btnLeft_Click"  />
                            </Grid>

                            <!--우측-->
                            <Grid Grid.Row="1" Grid.Column="4" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="35" />
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="120" />
                                    <RowDefinition Height="34" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="1" Grid.RowSpan="5" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <!--Label-->
                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=요청자재, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                <!--요청자재-->
                                <c1:C1DataGrid Grid.Row="1" x:Name="dgRequestMtrlList" HeadersVisibility="Column" Width="Auto" SelectionMode="SingleRow" Margin="8" 
                                           CanUserSort="False"
                                           IsReadOnly="False"
                                           MouseDoubleClick="dgRequestMtrlList_MouseDoubleClick">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "자재"      Binding = "{Binding MTRLID}"       IsReadOnly="True"    HorizontalAlignment="Left" />
                                        <c1:DataGridTextColumn      Header = "자재규격"  Binding = "{Binding MTRLDESC}"     IsReadOnly="True"    HorizontalAlignment="Left" />
                                        <c1:DataGridNumericColumn   Header = "소요량"    Binding = "{Binding INPUT_QTY}"    IsReadOnly="True"    HorizontalAlignment="Right"   Format="#,##0.###" ShowButtons="False" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "단위"      Binding = "{Binding UNIT_CODE}"    IsReadOnly="True"    HorizontalAlignment="Center"/>
                                        <c1:DataGridNumericColumn   Header = "요청중량"  Binding = "{Binding MTRL_QTY}"     IsReadOnly="False"   HorizontalAlignment="Right"   Format="#,##0.###" Minimum="0" EditOnSelection="True" ShowButtons="False" HandleUpDownKeys="False" />
                                        <c1:DataGridComboBoxColumn  Header = "공급업체"  Binding = "{Binding SUPPLIER}"   DisplayMemberPath="SUPPLIER_NAME" SelectedValuePath="SUPPLIERID"  HorizontalAlignment="Left" Width="Auto" Visibility="Collapsed"/>
                                        <c1:DataGridCheckBoxColumn  Header ="SPECIAL" Width="20" Name = "CHK" Binding = "{Binding CHK}" CanUserFilter="False" CanUserSort="False" CanUserResize="False" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                                <!--요청추가정보-->
                                <Border Grid.Row="2" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" CornerRadius="5" Style="{StaticResource BorderSubTitleStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="8" >
                                    <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="2"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="2"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="25"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}"  HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                        <TextBox x:Name="txtWorker" Grid.Row="1" Grid.Column="2" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtWorker_KeyDown"/>
                                        <Button  x:Name="btnReqUser" Grid.Row="1" Grid.Column="3" Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" Click="btnReqUser_Click" />
                                        <TextBox x:Name="txtPersonId" Grid.Row="1" Grid.Column="4" Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" IsReadOnly="True" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="10,3,0,3"/>

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,0,0" />
                                        <TextBox   x:Name="txtRemark" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_TextBoxStyle}"   AcceptsReturn="True" Width="Auto" Height="Auto" VerticalScrollBarVisibility="Auto" MaxLength="1000"/>
                                    </Grid>
                                </Border>

                                <!--요청버튼-->
                                <Button  x:Name="btnRequest" Grid.Row="3" Content="{Binding ConverterParameter=출고요청, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Margin="8,0,8,8" Height="Auto" Click="btnRequest_Click"  />
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem x:Name="ctbReqHist" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='요청이력'}">
                        <Grid x:Name="grdHist">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--상단-->
                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1" />

                            <!--조회조건-->
                            <Grid Grid.Row="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="11" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="11" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="27" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <!--ROW1-->
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='REQ_DATE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,0" >
                                        <ctrlLib:LGCDatePicker x:Name="dtpDateFrom2"  DatepickerType="Date" SelectedDataTimeChanged="dtpDateFrom2_SelectedDataTimeChanged" />
                                        <TextBlock Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                                        <ctrlLib:LGCDatePicker x:Name="dtpDateTo2"  DatepickerType="Date" SelectedDataTimeChanged="dtpDateTo2_SelectedDataTimeChanged" />
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Row="0" Grid.Column="2" x:Name="cboArea2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedItemChanged="cboArea2_SelectedItemChanged"/>
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Row="0" Grid.Column="4" x:Name="cboEquipmentSegment2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedItemChanged="cboEquipmentSegment2_SelectedItemChanged"/>
                                </Grid>

                                <!--ROW2-->
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='요청서상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Row="1" Grid.Column="5" x:Name="cboStatus2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                </Grid>

                                <Grid Grid.Row="3" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock       Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboProcess2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedItemChanged="cboProcess2_SelectedItemChanged"/>
                                </Grid>

                                <Grid Grid.Row="3" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="2*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1ComboBox   Grid.Row="0" Grid.Column="9" x:Name="cboEquipment2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedItemChanged="cboEquipment2_SelectedItemChanged"/>
                                </Grid>

                                <Button x:Name="btnSearch2" Grid.Row="3" Grid.Column="5"  Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand"  Click="btnSearch2_Click" />
                            </Grid>

                            <!--하단-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!--서브영역:상단-->
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="35"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                    <!--Label-->
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=요청목록, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <!--요청목록-->
                                    <c1:C1DataGrid Grid.Row="1" Grid.Column="0" x:Name="dgReqList" IsReadOnly="True" HeadersVisibility="Column" Width="Auto" SelectionMode="SingleRow" Margin="8" 
                                           CanUserSort="False">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="dgReqChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgReqChoice" HorizontalAlignment="Center" Checked="dgReqChoice_Checked"  />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn        Header = "요청번호"         Binding = "{Binding MTRL_SPLY_REQ_ID}"           HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "요청일시"         Binding = "{Binding MTRL_SPLY_REQ_DTTM}"         HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "상태"             Binding = "{Binding MTRL_SPLY_REQ_STAT_CODE}"    HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "상태"             Binding = "{Binding MTRL_SPLY_REQ_STAT_NAME}"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "라인"             Binding = "{Binding EQSGID}"                     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "라인"             Binding = "{Binding EQSGNAME}"                   HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn        Header = "공정"             Binding = "{Binding PROCID}"                     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "공정"             Binding = "{Binding PROCNAME}"                   HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "설비"             Binding = "{Binding EQPTID}"                     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "설비"             Binding = "{Binding EQPTNAME}"                   HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn        Header = "포트ID"             Binding = "{Binding PORTID}"                     HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "포트명"             Binding = "{Binding PORTNAME}"                   HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn        Header = "자재ID"           Binding = "{Binding MTRLID}"                     HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn        Header = "자재규격"         Binding = "{Binding MTRLDESC}"                   HorizontalAlignment="Left" />
                                            <c1:DataGridNumericColumn     Header = "수량"             Binding = "{Binding MTRL_SPLY_REQ_QTY}"          HorizontalAlignment="Right"     Format="#,##0" />
                                            <c1:DataGridTextColumn        Header = "단위"             Binding = "{Binding MTRLUNIT}"                   HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "요청자"           Binding = "{Binding MTRL_SPLY_REQ_USER}"         HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "상태변경일시"     Binding = "{Binding UPDDTTM}"                    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "변경사용자"       Binding = "{Binding UPDUSER}"                    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "비고"             Binding = "{Binding NOTE}"                       HorizontalAlignment="Center" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>

                                <GridSplitter Grid.Row="1" Grid.Column="0" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <!--서브영역:하단-->
                                <Grid Grid.Row="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!--서브영역:하단:좌측-->
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="35"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                        <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                        <!--Label-->
                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=자재LOT, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                        <!--자재 LOT-->
                                        <c1:C1DataGrid Grid.Row="1" Grid.Column="0" x:Name="dgMtrlList" IsReadOnly="True" HeadersVisibility="Column" Width="Auto" SelectionMode="SingleRow" Margin="8" 
                                           CanUserSort="False">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn        Header = "팔레트ID"          Binding = "{Binding PLLT_ID}"                   HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "자재LOTID"         Binding = "{Binding MLOTID}"                    HorizontalAlignment="Center" />
                                                <c1:DataGridNumericColumn     Header = "수량"              Binding = "{Binding MTRL_QTY}"                  HorizontalAlignment="Right"     Format="#,##0" />
                                                <c1:DataGridTextColumn        Header = "상태"              Binding = "{Binding MTRL_SPLY_REQ_STAT_CODE}"   HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "상태"              Binding = "{Binding MTRL_SPLY_REQ_STAT_NAME}"   HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "출고일시"          Binding = "{Binding INSDTTM}"                   HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "상태변경일시"      Binding = "{Binding UPDDTTM}"                   HorizontalAlignment="Center" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>

                                    <GridSplitter Grid.Row="0" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                    <!--서브영역:하단:우측-->
                                    <!--요청추가정보-->
                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="35"/>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" CornerRadius="5" Style="{StaticResource BorderSubTitleStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="8" >
                                            <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" Margin="5">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="2"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="2"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="2"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="25"/>
                                                    <ColumnDefinition Width="1*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}"  HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <TextBox x:Name="txtWorker2" Grid.Row="1" Grid.Column="2" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtWorker2_KeyDown"/>
                                                <Button  x:Name="btnReqUser2" Grid.Row="1" Grid.Column="3" Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" Click="btnReqUser2_Click" />
                                                <TextBox x:Name="txtPersonId2" Grid.Row="1" Grid.Column="4" Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" IsReadOnly="True" HorizontalAlignment="Left" Grid.ColumnSpan="2" Margin="10,3,0,3"/>

                                                <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,8,0,0" />
                                                <TextBox   x:Name="txtRemark2" Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_TextBoxStyle}"   AcceptsReturn="True" Width="Auto" Height="Auto" VerticalScrollBarVisibility="Auto" MaxLength="1000"/>
                                            </Grid>
                                        </Border>

                                        <!--요청취소버튼-->
                                        <Button  x:Name="btnCancel" Grid.Row="3" Content="{Binding ConverterParameter=요청취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Margin="8,0,8,8" Height="Auto" Click="btnCancel_Click"  />

                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                </c1:C1TabControl>
            </Grid>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
