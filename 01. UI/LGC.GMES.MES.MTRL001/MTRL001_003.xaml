<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" 
             x:Class="LGC.GMES.MES.MTRL001.MTRL001_003"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid  x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="원자재 반송 적재 보고 Scan">
            <Grid>
                <c1:C1TabControl x:Name="tabLoading">
                    
                    <!--적재-->
                    <c1:C1TabItem x:Name="ctbLoading" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='적재'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="7*" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="3*" />
                            </Grid.RowDefinitions>

                            <!--백그라운드용-->
                            <Border     Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            <Border     Grid.Row="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border     Grid.Row="4" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                            <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--조회영역-->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--조회조건-->
                                <TextBlock       Grid.Row="1" Grid.Column="1"  Text="{Binding ConverterParameter='동',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="3"  Text="{Binding ConverterParameter='라인',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="5"  Text="{Binding ConverterParameter='공정',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="7"  Text="{Binding ConverterParameter='설비',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <c1:C1ComboBox   x:Name="cboArea"             Grid.Row="1" Grid.Column="2"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <c1:C1ComboBox   x:Name="cboEquipmentSegment" Grid.Row="1" Grid.Column="4"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <c1:C1ComboBox   x:Name="cboProcess"          Grid.Row="1" Grid.Column="6"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                                <c1:C1ComboBox   x:Name="cboEquipment"        Grid.Row="1" Grid.Column="8"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>

                                <!--조회 버튼-->
                                <Button     x:Name="btnSearch"    Grid.Row="1" Grid.Column="16" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />

                            </Grid>

                            <!--요청현황-->
                            <Grid  Grid.Row="2">
                                <c1:C1DataGrid x:Name="dgRequest" 
                                       HeadersVisibility="Column" 
                                       IsReadOnly="True" 
                                       SelectionMode="SingleRow" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택"  >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgChoice" HorizontalAlignment="Center" Checked="dgRequestChoice_Checked"  />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTextColumn        Header = "요청일자"        Binding = "{Binding MTRL_SPLY_REQ_DATE}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "요청번호"        Binding = "{Binding MTRL_SPLY_REQ_ID}"        HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "동"              Binding = "{Binding AREAID}"                  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "동"              Binding = "{Binding AREANAME}"                HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "라인"            Binding = "{Binding EQSGNAME}"                HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "공정"            Binding = "{Binding PROCNAME}"                HorizontalAlignment="Left" />
                                        <c1:DataGridTextColumn        Header = "설비"            Binding = "{Binding EQPTID}"                  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "설비"            Binding = "{Binding EQPTNAME}"                HorizontalAlignment="Left" />
                                        <c1:DataGridTextColumn        Header = "요청시간"        Binding = "{Binding MTRL_SPLY_REQ_TIME}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "경과시간(분)"    Binding = "{Binding PASS_TIME}"               HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "요청자"          Binding = "{Binding MTRL_SPLY_REQ_USERNAME}"  HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "비고"            Binding = "{Binding NOTE}"                    HorizontalAlignment="Left" />
                                        <c1:DataGridTextColumn        Header = "긴급여부"        Binding = "{Binding EMRG_REQ_FLAG}"           HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--요청자재-->
                            <Grid Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" MinWidth="500" MaxWidth="500"/>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" MinWidth="500" MaxWidth="500"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <TextBlock  Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='요청목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='Pallet ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBlock  Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='자재LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBox    x:Name="txtPalletID" Grid.Row="0" Grid.Column="4" Style="{StaticResource SearchCondition_TextBoxStyle}" CharacterCasing="Upper" KeyDown="txtPalletID_KeyDown" GotFocus="txtPalletID_GotFocus"/>
                                <TextBox    x:Name="txtMLotID"   Grid.Row="0" Grid.Column="8" Style="{StaticResource SearchCondition_TextBoxStyle}" CharacterCasing="Upper" KeyDown="txtMLotID_KeyDown"/>
                                <Button     x:Name="btnClear"    Grid.Row="0" Grid.Column="10" Content="{Binding ConverterParameter=초기화, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnClear_Click" />
                                <Button     x:Name="btnSave"     Grid.Row="0" Grid.Column="12" Content="{Binding ConverterParameter=적재, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnSave_Click" />

                                <c1:C1DataGrid x:Name="dgRequestMtrl" 
                                       Grid.Row="1" 
                                       Grid.Column="0"
                                       Grid.ColumnSpan="99"
                                       HeadersVisibility="Column" 
                                       SelectionMode="SingleRow"
                                       IsReadOnly="True" 
                                       LoadedCellPresenter="dgRequestMtrl_LoadedCellPresenter">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn    Header = "삭제" Name="DELETE">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button x:Name="btnDelete" Margin="2,2,2,2" Click="btnDelete_Click"  >
                                                        <Image Source="/LGC.GMES.MES.CMM001;component/Images/ico-delete.png" Width="10" Height="10" />
                                                    </Button>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "자재분류"        Binding = "{Binding MTRL_CLSS3_CODE}"     HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "자재ID"          Binding = "{Binding MTRLID}"              HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "자재명"          Binding = "{Binding MTRLDESC}"            HorizontalAlignment="Left"   />
                                        <c1:DataGridNumericColumn   Header = "요청수량"        Binding = "{Binding MTRL_SPLY_REQ_QTY}"   HorizontalAlignment="Right"  Format="###,##0.###" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridNumericColumn   Header = "적재수량"        Binding = "{Binding LOAD_QTY}"            HorizontalAlignment="Right"  Format="###,##0.###" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridTextColumn      Header = "요청단위"        Binding = "{Binding REQ_UNIT_CODE}"       HorizontalAlignment="Center" />
                                        <c1:DataGridNumericColumn   Header = "환산량"          Binding = "{Binding CONV_QTY}"            HorizontalAlignment="Right"  Format="###,##0" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridTextColumn      Header = "재고단위"        Binding = "{Binding STCK_UNIT_CODE}"      HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                
                    <!--적재취소-->
                    <c1:C1TabItem x:Name="ctbCancel" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='적재취소'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!--백그라운드용-->
                            <Border     Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            <Border     Grid.Row="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                            <!--조회영역-->
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--조회조건-->
                                <TextBlock                            Grid.Row="1" Grid.Column="1"  Text="{Binding ConverterParameter='자재LOT',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox    x:Name="txtCancelMLotID"  Grid.Row="1" Grid.Column="2" Style="{StaticResource SearchCondition_TextBoxStyle}" CharacterCasing="Upper" KeyDown="txtCancelMLotID_KeyDown"/>

                                <!--취소 버튼-->
                                <Button     x:Name="btnCancel"        Grid.Row="1" Grid.Column="4" Content="{Binding ConverterParameter=적재취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnCancel_Click" />
                            </Grid>

                            <!--적재현황-->
                            <Grid  Grid.Row="2">
                                <c1:C1DataGrid x:Name="dgCancel" 
                                               HeadersVisibility="Column" 
                                               SelectionMode="SingleRow" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn    Header = "삭제" Name="DELETE">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button x:Name="btnCancelDelete" Margin="2,2,2,2" Click="btnCancelDelete_Click"  >
                                                        <Image Source="/LGC.GMES.MES.CMM001;component/Images/ico-delete.png" Width="10" Height="10" />
                                                    </Button>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTextColumn      Header = "자재LOT"         Binding = "{Binding MLOTID}"              HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "요청번호"        Binding = "{Binding MTRL_SPLY_REQ_ID}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "자재ID"          Binding = "{Binding MTRLID}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "자재명"          Binding = "{Binding MTRLDESC}"            HorizontalAlignment="Left"   IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "수량"            Binding = "{Binding MTRL_QTY}"            HorizontalAlignment="Right"  IsReadOnly="True" Format="###,##0.###" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridTextColumn      Header = "재고단위"        Binding = "{Binding STCK_UNIT_CODE}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                </c1:C1TabControl>
            </Grid>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
