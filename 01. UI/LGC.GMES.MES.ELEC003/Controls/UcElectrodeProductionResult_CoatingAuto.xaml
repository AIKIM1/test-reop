<UserControl x:Class="LGC.GMES.MES.ELEC003.Controls.UcElectrodeProductionResult_CoatingAuto"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LGC.GMES.MES.ELEC003.Controls"             
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="900">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot">
            <Grid >
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </Grid.Resources>

                <!--start -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="8" />
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="99" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>

                    <GridSplitter Grid.Row="1" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="8"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!-- Row 0 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='생산실적', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                        <Grid Grid.Row="0" Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <Rectangle x:Name="recEquipment" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Margin="0,5,0,5"/>
                            <TextBlock x:Name="txtEquipment" Grid.Row="1" Grid.Column="1" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" />
                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnSaveRegDefectLane"  Grid.Column="1" Content="{Binding ConverterParameter=전수불량Lane등록, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="100" Margin="0,0,5,0"/>
                            <Button x:Name="btnSaveCarrier"        Grid.Column="2" Content="{Binding ConverterParameter=Carrier 연계, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="100" Margin="0,0,5,0" Click="btnSaveCarrier_Click"/>
                            <Button x:Name="btnProductionUpdate"   Grid.Column="3" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Width="100" Cursor="Hand" Click="btnProductionUpdate_Click"/>
                        </Grid>

                        <!-- Border -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="99" Background="#ffffffff" />

                        <!-- Row 2 -->
                        <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="0.3*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!-- TextBlock -->
                            <TextBlock                                Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <TextBox    x:Name="txtLotID"             Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" FontWeight="Bold" />
                            <TextBlock                                Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='버전', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}"  Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>

                            <Grid Grid.Row="0" Grid.Column="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox    x:Name="txtVersion" Grid.Column="0" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" FontWeight="Bold" />
                                <Button     x:Name="btnVersion" Grid.Column="1" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Center" Click="btnVersion_Click"  />
                            </Grid>

                            <TextBlock   x:Name="tbCurLaneQty"        Grid.Row="0" Grid.Column="5" Text="{Binding ConverterParameter='Lane수', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <!--<c1:C1NumericBox x:Name="txtCurLaneQty"   Grid.Row="0" Grid.Column="6" Style="{StaticResource C1NumericBoxStyle}" Format="F0" ShowButtons="False" IsEnabled="False" HorizontalContentAlignment="Center" />-->
                            <!--<TextBlock   x:Name="tbLaneQty"           Grid.Row="0" Grid.Column="7" Text="{Binding ConverterParameter='실물Lane수', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>-->
                            <c1:C1NumericBox x:Name="txtLaneQty"      Grid.Row="0" Grid.Column="6" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" Format="F0" IsEnabled="False" FontWeight="Bold" HorizontalContentAlignment="Center"/>

                            <TextBlock  x:Name="tbWorkDate"           Grid.Row="2" Grid.Column="1" Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}"/>
                            <TextBox    x:Name="txtWorkDate"          Grid.Row="2" Grid.Column="2" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center"/>
                            <TextBlock  x:Name="tbStartDateTime"      Grid.Row="2" Grid.Column="3" Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <TextBox    x:Name="txtStartDateTime"     Grid.Row="2" Grid.Column="4" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" />
                            <TextBlock  x:Name="tbEndDateTime"        Grid.Row="2" Grid.Column="5" Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <TextBox    x:Name="txtEndDateTime"       Grid.Row="2" Grid.Column="6" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" />
                            <TextBlock                                Grid.Row="2" Grid.Column="7" Text="{Binding ConverterParameter='상태', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <TextBox    x:Name="txtWipstat"           Grid.Row="2" Grid.Column="8" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="Red"/>

                            <TextBlock                                Grid.Row="4" Grid.Column="1" Text="{Binding ConverterParameter='단위', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <TextBox    x:Name="txtUnit"              Grid.Row="4" Grid.Column="2" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" />
                            <TextBlock  x:Name="tbOutCstID"           Grid.Row="4" Grid.Column="3" Text="{Binding ConverterParameter='OUT_CARRIERID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <TextBox    x:Name="txtOutCstID"          Grid.Row="4" Grid.Column="4" Style="{StaticResource Content_InputForm_TextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" />
                            <TextBlock  x:Name="tbFinalCut"           Grid.Row="4" Grid.Column="5" Text="{Binding ConverterParameter='FINALCUT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0" />
                            <CheckBox   x:Name="chkFinalCut"          Grid.Row="4" Grid.Column="6"  Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False"  FlowDirection="RightToLeft" />
                            <TextBlock  x:Name="tbFastTrack"          Grid.Row="4" Grid.Column="7" Text="{Binding ConverterParameter='FastTrack', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0" Visibility="Collapsed" />
                            <CheckBox   x:Name="chkFastTrack"         Grid.Row="4" Grid.Column="8"  Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False"  FlowDirection="RightToLeft" Visibility="Collapsed" Click="chkFastTrack_Click" />

                            <TextBlock  x:Name="tbInputQty"           Grid.Row="6" Grid.Column="1" Text="{Binding ConverterParameter='투입량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}"/>
                            <c1:C1NumericBox x:Name="txtInputQty"     Grid.Row="6" Grid.Column="2" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" Format="F2" IsEnabled="False" FontWeight="Bold" Background="Yellow" />
                            <TextBlock  x:Name="tbGoodQty"            Grid.Row="6" Grid.Column="3" Text="{Binding ConverterParameter='양품량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0" />
                            <c1:C1NumericBox x:Name="txtGoodQty"      Grid.Row="6" Grid.Column="4" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" Format="F2" IsEnabled="False" FontWeight="Bold" SelectOnFocus="Always" />
                            <TextBlock  x:Name="tbRemainQty"          Grid.Row="6" Grid.Column="5" Text="{Binding ConverterParameter='잔량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <c1:C1NumericBox x:Name="txtRemainQty"    Grid.Row="6" Grid.Column="6" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" Format="F2" IsEnabled="False" FontWeight="Bold" />
                        </Grid>

                        <!-- Row 4 -->
                        <Grid x:Name="grdResult" Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="5">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <TextBlock  x:Name="tbEquipmentQty" Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='설비수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" VerticalAlignment="Top"/>
                            <TextBlock  x:Name="tbResultQty"    Grid.Row="2" Grid.Column="1" Text="{Binding ConverterParameter='실적수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" VerticalAlignment="Top"/>

                            <!-- 설비수량 -->
                            <c1:C1DataGrid x:Name="dgProductEquipment" 
                                           Grid.Row="0"
                                           Grid.Column="3"
                                           IsReadOnly="True" 
                                           CanUserSort="False" 
                                           CanUserFilter="False" 
                                           HeadersVisibility="Column"
                                           SelectionMode="SingleRow">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridNumericColumn Header="총 길이"           Binding="{Binding EQPT_TOTL_QTY}"           HorizontalAlignment="Right" Format="F2" Tag="N" />
                                    <c1:DataGridNumericColumn Header="양면길이"          Binding="{Binding EQPT_TOP_BACK_QTY}"       HorizontalAlignment="Right" Format="F2" Tag="N" />
                                    <c1:DataGridNumericColumn Header="단면길이"          Binding="{Binding EQPT_TOP_QTY}"            HorizontalAlignment="Right" Format="F2" Tag="N" />
                                    <c1:DataGridNumericColumn Header="단선횟수"          Binding="{Binding EQPT_WEB_BREAK_CNT}"      HorizontalAlignment="Right" Format="0" Tag="N" />
                                    <c1:DataGridNumericColumn Header="단선길이(BACK)"    Binding="{Binding EQPT_WEB_BREAK_BACK_QTY}" HorizontalAlignment="Right" Format="F2" Tag="N" />
                                    <c1:DataGridNumericColumn Header="단선길이(TOP)"     Binding="{Binding EQPT_WEB_BREAK_TOP_QTY}"  HorizontalAlignment="Right" Format="F2" Tag="N" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>

                            <!-- 실적수량 -->
                            <c1:C1DataGrid x:Name="dgProductResult" 
                                           Grid.Row="2"
                                           Grid.Column="3"
                                           IsReadOnly="False" 
                                           CanUserSort="False" 
                                           CanUserFilter="False" 
                                           HeadersVisibility="None"
                                           SelectionMode="SingleRow"
                                           LoadedCellPresenter="dgProductResult_LoadedCellPresenter"
                                           UnloadedCellPresenter="dgProductResult_UnloadedCellPresenter" >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn    Header="[LOTID,LOTID]"                 Binding="{Binding LOTID}"                   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn    Header="[OUT_CARRIERID,OUT_CARRIERID]" Binding="{Binding OUT_CSTID}"               HorizontalAlignment="Center" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn    Header="[이전LOTID,이전LOTID]"         Binding="{Binding PR_LOTID}"                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn    Header="[CarrierID,CarrierID]"         Binding="{Binding CSTID}"                   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn    Header="[구분,구분]"                   Binding="{Binding INPUT_VALUE_TYPE}"        HorizontalAlignment="Left"   IsReadOnly="True" />
                                    <c1:DataGridNumericColumn Header="[생산수량, BACK]"              Binding="{Binding INPUT_BACK_QTY}"          HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[생산수량, TOP]"               Binding="{Binding INPUT_TOP_QTY}"           HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[양품수량, C/Roll]"            Binding="{Binding GOODQTY}"                 HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[양품수량, S/Roll]"            Binding="{Binding GOODQTY2}"                HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[불량수량(BACK), 합계]"        Binding="{Binding DTL_BACK_DEFECT_SUM}"     HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[불량수량(BACK), LOT불량]"     Binding="{Binding DTL_BACK_DEFECT}"         HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[불량수량(BACK), LOSS]"        Binding="{Binding DTL_BACK_LOSS}"           HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[불량수량(BACK), 물품청구]"    Binding="{Binding DTL_BACK_CHARGEPRD}"      HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[불량수량(TOP), 합계]"         Binding="{Binding DTL_TOP_DEFECT_SUM}"      HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[불량수량(TOP), LOT불량]"      Binding="{Binding DTL_TOP_DEFECT}"          HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[불량수량(TOP), LOSS]"         Binding="{Binding DTL_TOP_LOSS}"            HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[불량수량(TOP), 물품청구]"     Binding="{Binding DTL_TOP_CHARGEPRD}"       HorizontalAlignment="Right"  IsReadOnly="True" Format="F2" />
                                    <c1:DataGridNumericColumn Header="[LANE, LANE]"                  Binding="{Binding LANE_QTY}"                HorizontalAlignment="Right" Format="0" Tag="N" Visibility="Collapsed" />
                                    <c1:DataGridNumericColumn Header="[PTN, PTN]"                    Binding="{Binding LANE_PTN_QTY}"            HorizontalAlignment="Right" Format="0" Tag="N" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn    Header="[BLOCK, BLOCK]"                Binding="{Binding CHG_BLOCK_FLAG}"          HorizontalAlignment="Center" Tag="N" Visibility="Collapsed"/>
                                </c1:C1DataGrid.Columns>
                                <c1:C1DataGrid.TopRows>
                                    <c1:DataGridColumnHeaderRow />
                                    <c1:DataGridColumnHeaderRow />
                                </c1:C1DataGrid.TopRows>
                            </c1:C1DataGrid>
                        </Grid>

                    </Grid>

                    <Grid x:Name="grdDataCollect" Grid.Row="2" Grid.Column="1" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <c1:C1TabControl Name="tcDataCollect" Grid.Row="1" SelectionChanged="tcDataCollect_SelectionChanged" >
                            <!-- 불량/LOSS/물품청구 -->
                            <c1:C1TabItem Name="tiWipReason" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량/LOSS/물품청구'}" >
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                            <TextBlock Name="lblTop" Text="{Binding ConverterParameter='TOP', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Left">
                                            <TextBlock Name="lblBack" Text="{Binding ConverterParameter='BACK', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        </StackPanel>
                                        <Border Grid.Column="2" Grid.ColumnSpan="2">
                                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="Auto">
                                                <TextBlock Name="txtLVFilter" Text="{Binding ConverterParameter='LV.Filter', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Collapsed"/>
                                                <CheckBox x:Name="chkDefectFilter" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}}" Click="chkDefectFilter_Click"  Visibility="Collapsed"/>
                                                <Border Width="5"/>
                                                <Button x:Name="btnRollMapUpdate" Content="{Binding ConverterParameter=롤맵수정, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnRollMapUpdate_Click" Visibility="Collapsed" />
                                                <Border Width="5"/>
                                                <Button x:Name="btnSaveAllWipReason" Content="{Binding ConverterParameter=전체저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSaveAllWipReason_Click" IsEnabled="False" />
                                                <Border Width="5"/>
                                                <Button x:Name="btnSaveWipReason" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSaveWipReason_Click" IsEnabled="False"  />
                                            </StackPanel>
                                        </Border>
                                    </Grid>

                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="8" />
                                                <ColumnDefinition Width="1*" />
                                            </Grid.ColumnDefinitions>
                                            <c1:C1DataGrid x:Name="dgWipReasonTop" 
                                                           Tag="DEFECT_TOP" 
                                                           Grid.Column="0"
                                                           HeadersVisibility="Column" 
                                                           SelectionMode="SingleCell" 
                                                           CanUserSort="False" 
                                                           CanUserFilter="False" 
                                                           ClipboardPasteMode="None" 
                                                           LoadedCellPresenter="dgWipReasonTop_LoadedCellPresenter"
                                                           UnloadedCellPresenter="dgWipReasonTop_UnloadedCellPresenter" 
                                                           BeginningEdit="dgWipReasonTop_BeginningEdit" 
                                                           CommittedEdit="dgWipReasonTop_CommittedEdit"
                                                           PreviewKeyDown="dgWipReasonTop_PreviewKeyDown">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn     Header="ACTID"                Binding="{Binding ACTID}"                        IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn     Header="ACTNAME"              Binding="{Binding ACTNAME}"                      IsReadOnly="True" HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn     Header="불량코드"             Binding="{Binding RESNCODE}"                     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn     Header="불량요인"             Binding="{Binding RESNNAME}"                     IsReadOnly="True" HorizontalAlignment="Left" />
                                                    <c1:DataGridTextColumn     Header="LOSS자동처리"         Binding="{Binding PRCS_ITEM_CODE}"               IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn     Header="불량처리여부"         Binding="{Binding RSLT_EXCL_FLAG}"               IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn  Header="수량합계"             Binding="{Binding RESNTOTQTY}"                   IsReadOnly="True" HorizontalAlignment="Right"  Visibility="Collapsed" />
