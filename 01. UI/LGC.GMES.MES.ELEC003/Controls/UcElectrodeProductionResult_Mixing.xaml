<UserControl x:Class="LGC.GMES.MES.ELEC003.Controls.UcElectrodeProductionResult_Mixing"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:LGC.GMES.MES.ELEC003.Controls"             
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="900">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot">
            <Grid >
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                        </Grid>
                    </DataTemplate>
                </Grid.Resources>

                <!--start -->
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.8*"/>
                        <RowDefinition Height="8" />
                        <RowDefinition Height="1.2*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                    <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="99" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>

                    <GridSplitter Grid.Row="1" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="8"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <!-- Row 0 -->
                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" ><Run Text="{Binding ConverterParameter='생산실적', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                        <Grid Grid.Row="0" Grid.Column="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <Rectangle x:Name="recEquipment" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Margin="0,5,0,5"/>
                            <TextBlock x:Name="txtEquipment" Grid.Row="1" Grid.Column="1" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="Black" />
                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <Button x:Name="btnProductionUpdate"   Grid.Column="3" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Width="100" Cursor="Hand" Click="btnProductionUpdate_Click"/>
                        </Grid>

                        <!-- Border -->
                        <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="99" Background="#ffffffff" />

                        <!-- Row 2 -->
                        <Grid Grid.Row="2" Grid.Column="2" Grid.ColumnSpan="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="4"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="0.3*" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!-- TextBlock -->
                            <TextBlock                                Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <TextBox    x:Name="txtLotID"             Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" FontWeight="Bold" />
                            <TextBlock                                Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='버전', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}"  Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>

                            <Grid Grid.Row="0" Grid.Column="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBox    x:Name="txtVersion" Grid.Column="0" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" FontWeight="Bold" />
                                <Button     x:Name="btnVersion" Grid.Column="1" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Center" Click="btnVersion_Click"  />
                            </Grid>

                            <TextBlock  x:Name="tbWorkTime"             Grid.Row="0" Grid.Column="5" Text="{Binding ConverterParameter='가동시간(분)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <c1:C1NumericBox x:Name="txtWorkTime"       Grid.Row="0" Grid.Column="6" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" Format="F0" IsEnabled="False" HorizontalContentAlignment="Center"/>
                            <TextBlock  x:Name="tbBeadMillCount"        Grid.Row="0" Grid.Column="5" Text="{Binding ConverterParameter='BeadMill횟수', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <c1:C1NumericBox x:Name="txtBeadMillCount"  Grid.Row="0" Grid.Column="6" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="True" Format="F0" IsEnabled="True" HorizontalContentAlignment="Center" Minimum="0" Maximum="10"/>
                            <TextBlock   x:Name="tbLaneQty"             Grid.Row="0" Grid.Column="7" Text="{Binding ConverterParameter='실물Lane수', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <c1:C1NumericBox x:Name="txtLaneQty"        Grid.Row="0" Grid.Column="8" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" Format="F0" IsEnabled="False" FontWeight="Bold" HorizontalContentAlignment="Center"/>

                            <TextBlock  x:Name="tbWorkDate"             Grid.Row="2" Grid.Column="1" Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}"/>
                            <TextBox    x:Name="txtWorkDate"            Grid.Row="2" Grid.Column="2" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center"/>
                            <TextBlock  x:Name="tbStartDateTime"        Grid.Row="2" Grid.Column="3" Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <TextBox    x:Name="txtStartDateTime"       Grid.Row="2" Grid.Column="4" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" />
                            <TextBlock  x:Name="tbEndDateTime"          Grid.Row="2" Grid.Column="5" Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <TextBox    x:Name="txtEndDateTime"         Grid.Row="2" Grid.Column="6" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" />
                            <TextBlock                                  Grid.Row="2" Grid.Column="7" Text="{Binding ConverterParameter='상태', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <TextBox    x:Name="txtWipstat"             Grid.Row="2" Grid.Column="8" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" FontWeight="Bold" Foreground="Red"/>

                            <TextBlock                                  Grid.Row="4" Grid.Column="1" Text="{Binding ConverterParameter='단위', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <TextBox    x:Name="txtUnit"                Grid.Row="4" Grid.Column="2" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" CharacterCasing="Upper" HorizontalContentAlignment="Center" />

                            <TextBlock  x:Name="tbEquipmentQty"         Grid.Row="6" Grid.Column="1" Text="{Binding ConverterParameter='설비수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}"/>
                            <c1:C1NumericBox x:Name="txtEquipmentQty"   Grid.Row="6" Grid.Column="2" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" Format="F2" IsEnabled="False" FontWeight="Bold" />
                            <TextBlock  x:Name="tbProductionQty"        Grid.Row="6" Grid.Column="3" Text="{Binding ConverterParameter='생산 수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0" />
                            <c1:C1NumericBox x:Name="txtProductionQty"  Grid.Row="6" Grid.Column="4" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" Format="F2" FontWeight="Bold" Background="Yellow" SelectOnFocus="Always" KeyDown="txtProductionQty_KeyDown" LostFocus="txtProductionQty_LostFocus" />
                            <TextBlock  x:Name="tbGoodQty"              Grid.Row="6" Grid.Column="5" Text="{Binding ConverterParameter='양품수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" Margin="8,0,0,0"/>
                            <c1:C1NumericBox x:Name="txtGoodQty"        Grid.Row="6" Grid.Column="6" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" Format="F2" IsEnabled="False" FontWeight="Bold" />
                        </Grid>

                        <!-- Row 4 -->
                        <Grid Grid.Row="4" Grid.Column="2" Grid.ColumnSpan="3">
                            <c1:C1DataGrid x:Name="dgProductResult" 
                                           IsReadOnly="True" 
                                           AlternatingRowBackground="White"
                                           HeadersVisibility="Column"
                                           SelectionMode="SingleRow">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn    Header="항목"        Binding="{Binding ITEM}"              HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn    Header="합계"        Binding="{Binding DEFECT_SUM}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn    Header="불량"        Binding="{Binding DTL_DEFECT}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn    Header="LOSS"        Binding="{Binding DTL_LOSS}"          HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn    Header="물품청구"    Binding="{Binding DTL_CHARGEPRD}"     HorizontalAlignment="Center"/>
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </Grid>

                    </Grid>

                    <Grid x:Name="grdDataCollect" Grid.Row="2" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <GridSplitter Grid.Row="0" Grid.Column="1" Grid.RowSpan="99" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <Grid x:Name="grdDataCollect_Left" Grid.Row="1" Grid.Column="0">
                            <c1:C1TabControl Name="tcDataCollect_Left" Grid.Row="1" SelectionChanged="tcDataCollect_SelectionChanged" >
                                <!-- 불량/LOSS/물품청구 -->
                                <c1:C1TabItem Name="tiWipReason" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량/LOSS/물품청구'}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid x:Name="grdWipReasonHeader" Grid.Column="1" >
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="Auto">
                                                    <RadioButton  Name="rbManual"    Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=수동}"     GroupName="rdoMixDefect" Style="{StaticResource SearchCondition_RadioButtonStyle}" IsChecked="True" Click="rbManual_Click"/>
                                                    <Border Width="5"/>
                                                    <RadioButton  Name="rbSimpClean" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=간이세정}" GroupName="rdoMixDefect" Style="{StaticResource SearchCondition_RadioButtonStyle}" Click="rbManual_Click"/>
                                                    <Border Width="5"/>
                                                    <RadioButton  Name="rbFullClean" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=Full세정}" GroupName="rdoMixDefect" Style="{StaticResource SearchCondition_RadioButtonStyle}" Click="rbManual_Click"/>
                                                </StackPanel>
                                            </Grid>

                                            <Grid Grid.Column="3">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="Auto">
                                                    <Button x:Name="btnSaceAllWipReason" Content="{Binding ConverterParameter=전체저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSaceAllWipReason_Click"/>
                                                    <Border Width="5"/>
                                                    <Button x:Name="btnSaveWipReason" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSaveWipReason_Click"/>
                                                </StackPanel>
                                            </Grid>

                                        </Grid>

                                        <Grid Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid Name="grdWipReason" Grid.Row="0">
                                                <c1:C1DataGrid x:Name="dgWipReason" 
                                                               HeadersVisibility="Column" 
                                                               SelectionMode="SingleCell" 
                                                               CanUserSort="False" 
                                                               CanUserFilter="False" 
                                                               ClipboardPasteMode="None" 
                                                               LoadedCellPresenter="dgWipReason_LoadedCellPresenter"
                                                               UnloadedCellPresenter="dgWipReason_UnloadedCellPresenter"
                                                               BeginningEdit="dgWipReason_BeginningEdit"
                                                               CommittedEdit="dgWipReason_CommittedEdit" 
                                                               PreviewKeyDown="dgWipReason_PreviewKeyDown">
                                                    <c1:C1DataGrid.Columns>
                                                        <c1:DataGridTextColumn     Header="ACTID"                Binding="{Binding ACTID}"                   IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="ACTNAME"              Binding="{Binding ACTNAME}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                                        <c1:DataGridTextColumn     Header="불량코드"             Binding="{Binding RESNCODE}"                IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="불량요인"             Binding="{Binding RESNNAME}"                IsReadOnly="True" HorizontalAlignment="Left" />
                                                        <c1:DataGridTextColumn     Header="LOSS자동처리"         Binding="{Binding PRCS_ITEM_CODE}"          IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="불량처리여부"         Binding="{Binding RSLT_EXCL_FLAG}"          IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridNumericColumn  Header="수량합계"             Binding="{Binding RESNTOTQTY}"              IsReadOnly="True" HorizontalAlignment="Right"  Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="부품"                 Binding="{Binding PARTNAME}"                IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="TAG"                  Binding="{Binding TAG_CONV_RATE}"           IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="횟수상세코드"         Binding="{Binding LINK_DETL_RSN_CODE_TYPE}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="횟수입력여부"         Binding="{Binding WRK_COUNT_MNGT_FLAG}"     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridCheckBoxColumn Header="전체등록" Name="RESN_TOT_CHK" Binding="{Binding RESN_TOT_CHK}"    HorizontalAlignment="Center" EditOnSelection="True" Visibility="Collapsed" />
                                                        <c1:DataGridNumericColumn  Header="횟수"                 Binding="{Binding COUNTQTY}"                HorizontalAlignment="Right" Minimum="0" Maximum="99" Tag="N" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed"  />
                                                        <c1:DataGridNumericColumn  Header="태그수"               Binding="{Binding DFCT_TAG_QTY}"            Format="F0" Minimum="0" Tag="N" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                        <c1:DataGridNumericColumn  Header="M수량"                Binding="{Binding CONVRESNQTY}"             Format="F2" Minimum="0" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                        <c1:DataGridNumericColumn  Header="수량"                 Binding="{Binding RESNQTY}"                 Format="F2" Minimum="0" ShowButtons="False" HandleUpDownKeys="False" />
                                                        <c1:DataGridTextColumn     Header="COSTCENTERID"         Binding="{Binding COSTCENTERID}"            IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="COSTCENTER"           Binding="{Binding COSTCENTER}"              IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="TAG_ALL_APPLY_FLAG"   Binding="{Binding TAG_ALL_APPLY_FLAG}"      IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="AREA_RESN_CLSS_NAME1" Binding="{Binding AREA_RESN_CLSS_NAME1}"    IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="AREA_RESN_CLSS_NAME2" Binding="{Binding AREA_RESN_CLSS_NAME2}"    IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="AREA_RESN_CLSS_NAME3" Binding="{Binding AREA_RESN_CLSS_NAME3}"    IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="수량입력여부"         Binding="{Binding DFCT_QTY_CHG_BLOCK_FLAG}" IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridNumericColumn  Header="자동실적수량"         Binding="{Binding FRST_AUTO_RSLT_RESNQTY}"  Format="F2" Minimum="0" ShowButtons="False" HandleUpDownKeys="False" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn     Header="단선여부"             Binding="{Binding WEB_BREAK_FLAG}"          IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    </c1:C1DataGrid.Columns>
                                                </c1:C1DataGrid>
                                            </Grid>

                                        </Grid>
                                    </Grid>
                                </c1:C1TabItem>

                                <!-- 투입자재 -->
                                <c1:C1TabItem Name="tiInputMaterial" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입자재'}" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="5"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid  Grid.Column="3">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="Auto">
                                                    <Button x:Name="btnEqptMaterial" Content="{Binding ConverterParameter=설비IF현황, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnEqptMaterial_Click"/>
                                                    <Border Width="5"/>
                                                    <Button x:Name="btnInputMaterial" Content="{Binding ConverterParameter=투입자재등록, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnInputMaterial_Click"/>
                                                </StackPanel>
                                            </Grid>
                                        </Grid>

                                        <c1:C1DataGrid Grid.Row="1" 
                                                       x:Name="dgMaterial" 
                                                       IsReadOnly="True"
                                                       HeadersVisibility="Column" 
                                                       SelectionMode="MultiRange" 
                                                       CanUserSort="False"
                                                       CanUserFilter="False" 
                                                       ClipboardPasteMode="None" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn     Header="자재코드" Binding="{Binding MTRLID}"               HorizontalAlignment="Left" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn     Header="자재명"   Binding="{Binding MTRLNAME}"             HorizontalAlignment="Left" />
                                                <c1:DataGridTextColumn     Header="규격"     Binding="{Binding MTRLDESC}"             HorizontalAlignment="Left" />
                                                <c1:DataGridTextColumn     Header="GRADE"    Binding="{Binding GRADE}"                HorizontalAlignment="Left" />
                                                <c1:DataGridTextColumn     Header="자재LOT"  Binding="{Binding INPUT_LOTID}"          HorizontalAlignment="Left" />
                                                <c1:DataGridNumericColumn  Header="사용량"   Binding="{Binding INPUT_QTY}"            HorizontalAlignment="Right" ShowButtons="False" Format="F2" />
                                                <c1:DataGridTextColumn     Header="단위"     Binding="{Binding UNIT}"                 HorizontalAlignment="Center" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>

                                    </Grid>
                                </c1:C1TabItem>

                            </c1:C1TabControl>
                        </Grid>

                        <Grid x:Name="grdDataCollect_Right" Grid.Row="1" Grid.Column="2">
                            <c1:C1TabControl Name="tcDataCollect_Right" Grid.Row="1" SelectionChanged="tcDataCollect_SelectionChanged" >
                                <!-- 품질정보 -->
                                <c1:C1TabItem Name="tiQuality" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='품질정보'}" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Grid.Column="1">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="Auto">
                                                    <Button x:Name="btnSolidContRate" Content="{Binding ConverterParameter=고형분 비율, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSolidContRate_Click" Visibility="Collapsed"/>
                                                    <Border Width="5"/>
                                                    <Button x:Name="btnSaveQuality" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSaveQuality_Click"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>

                                        <Grid Grid.Row="1">
                                            <c1:C1DataGrid x:Name="dgQuality"  
                                                           HeadersVisibility="Column" 
                                                           SelectionMode="MultiRange" 
                                                           CanUserSort="False" 
                                                           CanUserFilter="False" 
                                                           LoadedCellPresenter="dgQuality_LoadedCellPresenter" 
                                                           UnloadedCellPresenter="dgQuality_UnloadedCellPresenter" 
                                                           CommittedEdit="dgQuality_CommittedEdit" 
                                                           PreviewKeyDown="dgQuality_PreviewKeyDown">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn Header="항목"                 Binding="{Binding CLCTITEM}"             HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="항목1"                Binding="{Binding CLSS_NAME1}"           HorizontalAlignment="Left" IsReadOnly="True" >
                                                        <c1:DataGridAggregate.AggregateFunctions>
                                                            <c1:DataGridAggregatesCollection>
                                                                <c1:DataGridAggregateCount />
                                                            </c1:DataGridAggregatesCollection>
                                                        </c1:DataGridAggregate.AggregateFunctions>
                                                    </c1:DataGridTextColumn>
                                                    <c1:DataGridTextColumn Header="항목2"                Binding="{Binding CLSS_NAME2}"           HorizontalAlignment="Left" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn Header="항목3"                Binding="{Binding CLSS_NAME3}"           HorizontalAlignment="Left" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn Header="LSL"                  Binding="{Binding LSL}"                  HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn Header="CSL"                  Binding="{Binding CSL}"                  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="USL"                  Binding="{Binding USL}"                  HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn Header="CLCTSEQ"              Binding="{Binding CLCTSEQ}"              HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="INSP_VALUE_TYPE_CODE" Binding="{Binding INSP_VALUE_TYPE_CODE}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTemplateColumn Header="측정값" EditOnSelection="True" Name="CLCTVAL01" MinWidth="80">
                                                        <c1:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <StackPanel>
                                                                    <c1:C1NumericBox Value="{Binding Path=CLCTVAL01, Mode=TwoWay, Converter={StaticResource NumericBoxConverter}}" Visibility="{Binding TEXTVISIBLE}"   IsEnabled="{Binding ISENABLE}" Style="{StaticResource C1NumericBoxStyle}" HorizontalAlignment="Stretch" Format="F2" AllowNull="True" HandleUpDownKeys="False" ShowButtons="False" Background="Transparent" BorderThickness="0" />
                                                                    <ComboBox  Text="{Binding CLCTVAL01}" Visibility="{Binding COMBOVISIBLE}"   HorizontalAlignment="Stretch" HorizontalContentAlignment="Center"  >
                                                                        <ComboBoxItem>OK</ComboBoxItem>
                                                                        <ComboBoxItem>NG</ComboBoxItem>
                                                                    </ComboBox>
                                                                </StackPanel>
                                                            </DataTemplate>
                                                        </c1:DataGridTemplateColumn.CellTemplate>
                                                    </c1:DataGridTemplateColumn>
                                                    <c1:DataGridTextColumn Header="단위"                 Binding="{Binding CLCTUNIT}"                     HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn Header="필수체크항목"         Binding="{Binding MAND_INSP_ITEM_FLAG}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="스펙사용필수체크항목" Binding="{Binding SPEC_USE_MAND_INSP_ITEM_FLAG}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="세부항목"             Binding="{Binding INSP_ITEM_ID}"                 HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="세부항목명"           Binding="{Binding INSP_ITEM_NAME}"               HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="USL상한치"            Binding="{Binding USL_LIMIT}"                    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="LSL하한치"            Binding="{Binding LSL_LIMIT}"                    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="평균"                 Binding="{Binding MEAN}" Name="MEAN"             HorizontalAlignment="Center" IsReadOnly="True" MinWidth="80" Visibility="Collapsed" />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>

                                        </Grid>
                                    </Grid>
                                </c1:C1TabItem>

                                <!-- 특이사항 -->
                                <c1:C1TabItem Name="tiRemark" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='특이사항'}" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34"/>
                                            <RowDefinition Height="1*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Row="0" Grid.ColumnSpan="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="3">
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="Auto">
                                                    <Button Grid.Column="3" x:Name="btnSaveRemark" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Click="btnSaveRemark_Click"/>
                                                </StackPanel>
                                            </Border>
                                        </Grid>

                                        <c1:C1DataGrid Grid.Row="1" 
                                                       Grid.Column="0"
                                                       Grid.ColumnSpan="99"
                                                       x:Name="dgRemark" 
                                                       HeadersVisibility="Column" 
                                                       SelectionMode="SingleCell" 
                                                       CanUserSort="False"
                                                       CanUserFilter="False" 
                                                       CanUserAddRows="True" 
                                                       CanUserRemoveRows="True" 
                                                       ClipboardPasteMode="None" 
                                                       LoadedCellPresenter="dgRemark_LoadedCellPresenter" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn Header = "LOTID" Binding="{Binding LOTID}" IsReadOnly="True" HorizontalAlignment="Center" Width="100" />
                                                <c1:DataGridTemplateColumn Header="REMARK" Width="1*">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBox Grid.Row="0" x:Name="txtRemark" HorizontalAlignment="Stretch" TextAlignment="Left" VerticalScrollBarVisibility="Auto" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Path=REMARK, Mode=TwoWay}" Height="Auto" />
                                                            </Grid>
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </c1:C1TabItem>

                            </c1:C1TabControl>
                        </Grid>

                    </Grid>

                </Grid>

                <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999"  />

            </Grid>

        </ctrlLib:LGCLayout>
    </Grid>
</UserControl>
