                            <TextBlock                  Grid.Row="2" Grid.Column="0" Text="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Line'}"                Style="{DynamicResource Content_InputForm_LabelStyle}"/>
