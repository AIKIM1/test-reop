<Window xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  
        x:Class="LGC.GMES.MES.MNT001.MNT001_021"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
        xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"     
        xmlns:c1c="clr-namespace:C1.WPF.C1Chart;assembly=C1.WPF.C1Chart.4"       
        xmlns:System="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Width="1024" Height="768"
        Background="White"
        x:Name="ROLLMAP"
        AllowsTransparency="False" 
        SizeToContent="Manual" 
        ResizeMode="NoResize"
        WindowState="Maximized" 
        WindowStartupLocation="CenterScreen"
        Loaded="UserControl_Loaded"
    >

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid x:Name="grdMain">
            <Grid.Resources>
                <DataTemplate x:Key="chartLabel">
                    <Grid >
                        <Label Background="{Binding DataObject.COLORMAP}" Height="20" Width="22" Cursor="Hand"  Margin="21,0,0,0" BorderThickness="0.5" >
                            <TextBlock Text="{Binding DataObject.ROLLMAP_CLCT_TYPE}" FontSize="11" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" ToolTipService.ShowDuration="60000">
                                <TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </Label>
                    </Grid>
                </DataTemplate>

                <!--원재료 진행 상태 표기 라인 -->
                <DataTemplate x:Key="chartLine">
                    <Grid >
                        <Label Background="{Binding DataObject.COLORMAP}" Height="250" Width="10" Cursor="Hand"  Margin="0,0,0,0" BorderThickness="0.5" >
                            <TextBlock FontSize="15" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" ToolTipService.ShowDuration="60000">
                                <TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </Label>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartTag">
                    <Grid >
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="{Binding DataObject.COLORMAP}" CornerRadius="3" Style="{StaticResource BorderSubTitleStyle}" Background="{Binding DataObject.COLORMAP}"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                            <TextBlock Text="{Binding DataObject.TAGNAME}" Tag="{Binding DataObject.TAG}" HorizontalAlignment="Center" VerticalAlignment="Center" TextAlignment="Center" Height="12" MinWidth="12" FontFamily="맑은 고딕" FontSize="10" Foreground="Black" FontWeight="Bold" Cursor="Hand" MouseDown="TextBlock_MouseDown" ToolTipService.ShowDuration="60000" Margin="0,-1,0,0">
                                <TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>
                            </TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartLane">
                    <Grid>
                        <TextBlock Text="{Binding DataObject.LANEINFO}" FontSize="12" Foreground="Black" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Background="Transparent">
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartMaterial">
                    <Grid>
                        <TextBlock Text="{Binding DataObject.INPUT_LOTID}" FontSize="10" Foreground="Black" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,-5" Background="Transparent">
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartSample">
                    <Grid >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="20"/>
                            <ColumnDefinition Width="50"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="{Binding DataObject.STRT_PSTN}" Grid.Column="0"  FontSize="11" Foreground="Blue" FontWeight="Bold" TextAlignment="Right" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0" Background="Transparent" Cursor="Hand" />
                        <Grid Grid.Column="1" Cursor="Hand" ToolTipService.ShowDuration="60000">
                            <Path  Data="M11,21H7V19H11V21M15.5,19H17V21H13V19H13.2L11.8,12.9L9.3,13.5C9.2,14 9,14.4 8.8,14.8C7.9,16.3 6,16.7 4.5,15.8C3,14.9 2.6,13 3.5,11.5C4.4,10 6.3,9.6 7.8,10.5C8.2,10.7 8.5,11.1 8.7,11.4L11.2,10.8L10.6,8.3C10.2,8.2 9.8,8 9.4,7.8C8,6.9 7.5,5 8.4,3.5C9.3,2 11.2,1.6 12.7,2.5C14.2,3.4 14.6,5.3 13.7,6.8C13.5,7.2 13.1,7.5 12.8,7.7L15.5,19M7,11.8C6.3,11.3 5.3,11.6 4.8,12.3C4.3,13 4.6,14 5.3,14.4C6,14.9 7,14.7 7.5,13.9C7.9,13.2 7.7,12.2 7,11.8M12.4,6C12.9,5.3 12.6,4.3 11.9,3.8C11.2,3.3 10.2,3.6 9.7,4.3C9.3,5 9.5,6 10.3,6.5C11,6.9 12,6.7 12.4,6M12.8,11.3C12.6,11.2 12.4,11.2 12.3,11.4C12.2,11.6 12.2,11.8 12.4,11.9C12.6,12 12.8,12 12.9,11.8C13.1,11.6 13,11.4 12.8,11.3M21,8.5L14.5,10L15,12.2L22.5,10.4L23,9.7L21,8.5M23,19H19V21H23V19M5,19H1V21H5V19Z" Stretch="Uniform" Fill="Black" />
                            <Grid.ToolTip>
                                <Grid>
                                    <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                </Grid>
                            </Grid.ToolTip>
                        </Grid>
                        <!--<Viewbox Grid.Row="0" Grid.Column="1" Width="24" Height="24" >
                            <Canvas Width="16" Height="16">
                                <Path  Fill="Red"  Stroke="Red" Data="M19,3L13,9L15,11L22,4V3M12,12.5A0.5,0.5 0 0,1 11.5,12A0.5,0.5 0 0,1 12,11.5A0.5,0.5 0 0,1 12.5,12A0.5,0.5 0 0,1 12,12.5M6,20A2,2 0 0,1 4,18C4,16.89 4.9,16 6,16A2,2 0 0,1 8,18C8,19.11 7.1,20 6,20M6,8A2,2 0 0,1 4,6C4,4.89 4.9,4 6,4A2,2 0 0,1 8,6C8,7.11 7.1,8 6,8M9.64,7.64C9.87,7.14 10,6.59 10,6A4,4 0 0,0 6,2A4,4 0 0,0 2,6A4,4 0 0,0 6,10C6.59,10 7.14,9.87 7.64,9.64L10,12L7.64,14.36C7.14,14.13 6.59,14 6,14A4,4 0 0,0 2,18A4,4 0 0,0 6,22A4,4 0 0,0 10,18C10,17.41 9.87,16.86 9.64,16.36L12,14L19,21H22V20L9.64,7.64Z" />
                            </Canvas>
                        </Viewbox>-->
                        <TextBlock Text="{Binding DataObject.END_PSTN}" Grid.Column="2"  FontSize="11" Foreground="Blue" FontWeight="Bold" TextAlignment="Left" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0" Background="Transparent" Cursor="Hand" ToolTipService.ShowDuration="60000">
                            <TextBlock.ToolTip>
                                <Grid>
                                    <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                </Grid>
                            </TextBlock.ToolTip>
                        </TextBlock>

                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartCircle">
                    <Grid>
                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="5" BorderBrush="{Binding DataObject.COLORMAP}" CornerRadius="20" Style="{StaticResource BorderSubTitleStyle}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,0" >
                            <TextBlock Text="{Binding DataObject.CIRCLENAME}" TextWrapping="Wrap" TextAlignment="Center" Height="36" Width="36" FontFamily="맑은 고딕" FontSize="14" Foreground="Black" FontWeight="Bold" Cursor="Hand" Padding="0,8,0,0" >
                                <!--<TextBlock.ToolTip>
                                    <Grid>
                                        <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                                    </Grid>
                                </TextBlock.ToolTip>-->
                            </TextBlock>
                        </Border>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="arrowRight">
                    <Grid>
                        <Path Data="M4,11V13H16L10.5,18.5L11.92,19.92L19.84,12L11.92,4.08L10.5,5.5L16,11H4Z" Stretch="Fill" Fill="Black"  Stroke="Black"  StrokeThickness="1" />
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="arrowLeft">
                    <Grid>
                        <Path Data="M20,11V13H8L13.5,18.5L12.08,19.92L4.16,12L12.08,4.08L13.5,5.5L8,11H20Z" Stretch="Fill" Fill="Black"  Stroke="Black"  StrokeThickness="1" />
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="proc_desc">
                    <Grid>
                        <TextBlock Text="{Binding DataObject.START_DESC}" Margin="5,0,0,0" TextWrapping="Wrap" TextAlignment="Center" Height="32" Width="Auto" FontFamily="HY견고딕" FontSize="14" Foreground="Red" FontWeight="Bold" Cursor="Hand" Padding="0,8,0,0" >
                        </TextBlock>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="triangleBottom">
                    <Grid Width="18" Height="18" Margin="5,0,0,0">
                        <Path Data="M 0,0 8,18 15,0 z" Stretch="Fill" Fill="Red"  Stroke="Black"  StrokeThickness="1" />
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartLength">
                    <Grid Cursor="Hand" ToolTipService.ShowDuration="60000">
                        <TextBlock Text="{Binding DataObject.RAW_END_PSTN}" FontSize="20" Foreground="Blue" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Background="Transparent" >
                        </TextBlock>
                        <Grid.ToolTip>
                            <Grid >
                                <TextBlock FontSize="12" Margin="0" Foreground="Black" Text="{Binding DataObject.TOOLTIP}" />
                            </Grid>
                        </Grid.ToolTip>
                    </Grid>
                </DataTemplate>

                <DataTemplate x:Key="chartWipNote">
                    <Grid>
                        <TextBlock Text="{Binding DataObject.WIP_NOTE}" FontSize="12" Foreground="Black" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0" Background="Transparent" TextWrapping="Wrap">
                        </TextBlock>
                    </Grid>
                </DataTemplate>

            </Grid.Resources>
            <Grid.RowDefinitions>
                <RowDefinition Height="3" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="3" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!-- Header -->
            <Grid Grid.Row="1" x:Name="grdHeader">
                <Grid.RowDefinitions>
                    <RowDefinition Height="3"/>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="3"/>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}"></Border>
                <Grid Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox   Grid.Column="1" x:Name="txtLot" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" CharacterCasing="Upper" IsReadOnly="True"  />
                        </Grid>
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox   Grid.Column="1" x:Name="txtEquipmentName" Style="{StaticResource SearchCondition_TextBoxStyle}" CharacterCasing="Upper" IsReadOnly="True"/>
                        </Grid>
                    </Grid>
                    <!-- 좌표선택-->
                    <GroupBox x:Name="gbxCoordinate" Grid.Row="0" Grid.Column="4" 
                              Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='좌표'}" 
                              Width="Auto"
                              HorizontalContentAlignment="Center"
                              Visibility="Visible">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='이후', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoP" GroupName="rdoCoordinate" Margin="5,0,5,3" IsChecked="True" Click="rdoCoording_Click" />
                                <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='이전', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoA" GroupName="rdoCoordinate" Margin="5,0,5,3" Click="rdoCoording_Click"/>
                            </StackPanel>

                        </Grid>
                    </GroupBox>
                    <GroupBox x:Name="gbxColorMap" Grid.Row="0" Grid.Column="5" 
                              Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='범례'}" 
                              Width="Auto"
                              HorizontalContentAlignment="Center"
                              Visibility="Visible">
                        <Grid x:Name="grdLegend" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
                    </GroupBox>
                    <!-- SIDE 조회-->
                    <GroupBox x:Name="gbxSIDE" Grid.Row="0" Grid.Column="6"
                              Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Color Map'}" 
                              Width="Auto"
                              HorizontalContentAlignment="Center"
                              Visibility="Collapsed">
                    </GroupBox>
                    <!--#region 측정위치-->
                    <GroupBox x:Name="gbxMeasure" Grid.Row="0" Grid.Column="5"
                              Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='측정위치'}" 
                              Width="Auto"
                              HorizontalContentAlignment="Center"
                              Visibility="Collapsed">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <c1:C1ComboBox Grid.Column="0" x:Name="cboMeasurePoint"     Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                        </Grid>
                    </GroupBox>
                    <!--#endregion-->
                    <Grid Grid.Row="0" Grid.Column="8" HorizontalAlignment="Right" Width="37" Margin="0,0,136,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>

                            <ColumnDefinition Width="10"/>
                        </Grid.ColumnDefinitions>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="10" HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="0" Margin="-204,0,100,0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="7*"/>
                                <RowDefinition Height="5*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6*"/>
                                <ColumnDefinition Width="4*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='자동조회(초)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,22,27,22" Grid.RowSpan="2" Grid.ColumnSpan="2" />
                            <TextBox   Grid.Column="1" x:Name="AutoSearchText" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="100" CharacterCasing="Upper" HorizontalContentAlignment="Right" IsReadOnly="False" Text="5" 
                                       KeyDown="AutoSearchText_KeyDown" Margin="90,18,-100,18" Grid.RowSpan="2"/>
                        </Grid>

                        <Button x:Name="btnClose" Grid.Column="2" Content="{Binding ConverterParameter=닫기, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource Content_MainButtonStyle}" 
                                Cursor="Hand"
                                Click="btnClose_Click" />

                    </Grid>
                </Grid>
            </Grid>

            <!-- MAP -->
            <Grid Grid.Row="3" x:Name="grdRollMap">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1.*" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="3.*" />
                    <RowDefinition Height="10" />
                    <RowDefinition Height="4.*" />
                    <RowDefinition Height="20" />
                    <RowDefinition Height="2.5*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid>
                    <Grid Grid.Row="0" x:Name="grd">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="60"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="150"/>
                            <ColumnDefinition Width="80"/>
                        </Grid.ColumnDefinitions>

                        <c1c:C1Chart x:Name="chart" Grid.Row="0" Grid.Column="2" ChartType="XYPlot" Margin="0,0,0,0"  >
                            <c1c:C1Chart.Data >
                                <c1c:ChartData>
                                    <c1c:XYDataSeries x:Name="xyDataSeries"/>
                                </c1c:ChartData>
                            </c1c:C1Chart.Data>
                        </c1c:C1Chart>

                        <TextBox   Grid.Row="0" Grid.Column="2" x:Name="txtNote" Style="{StaticResource  Content_InputForm_ReadOnlyTextBoxStyle}" ScrollViewer.VerticalScrollBarVisibility="Auto"  Height="AUTO" MinWidth="100"  HorizontalContentAlignment="Center" IsReadOnly="True"  TextWrapping="Wrap"
                                       KeyDown="AutoSearchText_KeyDown" Margin="70,5,70,5"/>
                    </Grid>
                </Grid>

                <Border Grid.Row="2" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}" Visibility="Collapsed"/>

                <Grid Grid.Row="2" x:Name="grdMaterialCathode" Visibility="Collapsed">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="0.1565811965811966*" />
                        <!-- 진행상태 표현 -->
                        <RowDefinition Height="0.0712250712250712*" />
                        <RowDefinition Height="0.1965811965811966*" />
                        <RowDefinition Height="0.1965811965811966*" />
                        <RowDefinition Height="0.0712250712250712*" />
                        <RowDefinition Height="0.1965811965811966*" />
                        <RowDefinition Height="0.1965811965811966*" />
                        <RowDefinition Height="0.0712250712250712*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="80"/>
                    </Grid.ColumnDefinitions>

                    <Border Grid.Row="1" Grid.Column="0" BorderThickness="1" Grid.RowSpan="7" BorderBrush="#ffbebebe" CornerRadius="5" Style="{StaticResource BorderSubTitleStyle}" Margin="0,0,5,0" Background="LightGray"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                        <TextBlock Text="{Binding ConverterParameter='원재료', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Stretch" Style="{StaticResource Content_InputForm_LabelStyle}" />
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1" BorderThickness="1" Grid.RowSpan="3" BorderBrush="#ffbebebe" CornerRadius="5" Style="{StaticResource BorderSubTitleStyle}" Margin="0,0,0,2" Background="LightGray"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                        <TextBlock Text="T" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Stretch" Style="{StaticResource Content_InputForm_LabelStyle}" />
                    </Border>

                    <Border Grid.Row="5" Grid.Column="1" BorderThickness="1" Grid.RowSpan="3" BorderBrush="#ffbebebe" CornerRadius="5" Style="{StaticResource BorderSubTitleStyle}" Background="LightGray"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                        <TextBlock Text="B" TextWrapping="Wrap" TextAlignment="Center" HorizontalAlignment="Stretch" Style="{StaticResource Content_InputForm_LabelStyle}" />
                    </Border>

                    <TextBlock x:Name="processCathode" Grid.Row="0"  FontSize="10" FontWeight="Bold"></TextBlock>
                    <!-- 진행상태 표현 -->
                    <TextBlock x:Name="txtMaterialCathode1" Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='Top 절연 코팅', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10" FontWeight="Bold"></TextBlock>
                    <TextBlock x:Name="txtMaterialCathode2" Grid.Row="2" Grid.Column="3" Text="{Binding ConverterParameter='Top 슬러리 코팅 Upper', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="11" FontWeight="Bold"></TextBlock>
                    <TextBlock x:Name="txtMaterialCathode3" Grid.Row="3" Grid.Column="3" Text="{Binding ConverterParameter='Top 슬러리 코팅 Lower', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="11" FontWeight="Bold"></TextBlock>
                    <TextBlock x:Name="txtMaterialCathode4" Grid.Row="4" Grid.Column="3" Text="Foil" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10" FontWeight="Bold"></TextBlock>
                    <TextBlock x:Name="txtMaterialCathode5" Grid.Row="5" Grid.Column="3" Text="{Binding ConverterParameter='Back 슬러리 코팅 Lower', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="11" FontWeight="Bold"></TextBlock>
                    <TextBlock x:Name="txtMaterialCathode6" Grid.Row="6" Grid.Column="3" Text="{Binding ConverterParameter='Back 슬러리 코팅 Upper', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="11" FontWeight="Bold"></TextBlock>
                    <TextBlock x:Name="txtMaterialCathode7" Grid.Row="7" Grid.Column="3" Text="{Binding ConverterParameter='Back 절연 코팅', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="10" FontWeight="Bold"></TextBlock>
                    <!--조회 방향 (양극)-->
