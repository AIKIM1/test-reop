                                    <uc:UcBaseButton     Grid.Row="3" Grid.Column="16" x:Name="btnSearchRH" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchRH_Click" Margin="0" />
                                </Grid>

