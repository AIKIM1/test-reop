                                            <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" Margin="10,8,0,7"><Run Text="{Binding ConverterParameter='승인자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
