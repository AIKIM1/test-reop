                                                <c1:DataGridTextColumn      Header = "이름"       Binding = "{Binding USERNAME}"    HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "부서"       Binding = "{Binding DEPTNAME}"        HorizontalAlignment="Center" />
                                                <c1:DataGridTemplateColumn  Header="제거" Width="40">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Click="delete_Button_Click" Style="{StaticResource grButtonStyle}" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                        <uc:UcBaseDataGrid x:Name="dgGratorSelect" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="3,34,5,48" Grid.Column="2" Grid.RowSpan="2" Visibility="Collapsed">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHOICE" Width="60" >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgGratorChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgGratorChoice" HorizontalAlignment="Center" Checked="dgGratorChoice_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn      Header = "ID"         Binding = "{Binding USERID}"      HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "이름"       Binding = "{Binding USERNAME}"    HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "부서"       Binding = "{Binding DEPTNAME}"        HorizontalAlignment="Center" />
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                        <Border Grid.Row="3" Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                                        <Border Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <StackPanel Orientation="Horizontal"  Grid.Row="3" Grid.Column="2">
                                            <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" Margin="10,8,0,7"><Run Text="{Binding ConverterParameter='담당자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                            <TextBox   x:Name="txtManager"        Style="{StaticResource SearchCondition_TextBoxStyle}" Width="100" KeyDown="txtManager_KeyDown" />
                                        </StackPanel>
                                        <uc:UcBaseDataGrid x:Name="dgManager" Grid.Row="4" Grid.Column="3" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="8" CanUserRemoveRows="True" CanUserAddRows="True" >
                                            <c1:C1DataGrid.Resources>
                                                <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_trash.png" Stretch="Uniform"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </c1:C1DataGrid.Resources>
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn      Header = "ID"         Binding = "{Binding USERID}"      HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "이름"       Binding = "{Binding USERNAME}"    HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "부서"       Binding = "{Binding DEPTNAME}"        HorizontalAlignment="Center" />
                                                <c1:DataGridTemplateColumn  Header="제거" Width="40">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button Click="delete_Button_Click" Style="{StaticResource grButtonStyle}" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                        <uc:UcBaseDataGrid x:Name="dgManagerSelect" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="3,34,5,48" Grid.Row="3" Grid.Column="2" Grid.RowSpan="2" Visibility="Collapsed">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn  Header="선택" EditOnSelection="True" Name="CHOICE" Width="60" >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgManagerChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgManagerChoice" HorizontalAlignment="Center" Checked="dgManagerChoice_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn      Header = "ID"         Binding = "{Binding USERID}"      HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "이름"       Binding = "{Binding USERNAME}"    HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "부서"       Binding = "{Binding DEPTNAME}"        HorizontalAlignment="Center" />
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                    </Grid>
                                </Grid>

                                <Border Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="99" Background="#ffffff" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                                <Grid Grid.Row="3" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="AUTO"/>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="AUTO"/>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="AUTO"/>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="AUTO" />
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <TextBlock       Grid.Column="1"  Grid.Row="1" Text="{Binding ConverterParameter='처리구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox   Grid.Column="3"  Grid.Row="1" x:Name="cboProcessCodeR" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                    <TextBlock       Grid.Column="1"  Grid.Row="2" Text="{Binding ConverterParameter='요청완료일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <ctrlLib:LGCDatePicker Grid.Column="3" Grid.Row="2" DatepickerType="Date" x:Name="dtCalDate"/>
                                    <TextBlock       Grid.Column="5"  Grid.RowSpan="3" Text="{Binding ConverterParameter='요청명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox         Grid.Column="7"  Grid.RowSpan="3" x:Name="txtNote"         Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" Margin="0,8,0,0" AcceptsReturn="True"/>
                                    <uc:UcBaseButton          Grid.Column="9"  Grid.RowSpan="3" x:Name="btnReq"         Content="{Binding ConverterParameter=요청,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnReq_Click"/>
                                </Grid>

                            </Grid>
                        </c1:C1TabItem>

                        <!--요청이력 tabpag -->
                        <c1:C1TabItem x:Name="RequestHistory" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='요청이력'}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="377*" />
                                    <ColumnDefinition Width="1543*"/>
                                </Grid.ColumnDefinitions>

                                <!--조회영역-->
                                <Grid Grid.ColumnSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="11" />
                                        <RowDefinition Height="29" />
                                        <RowDefinition Height="4" />
                                        <RowDefinition Height="29" />
                                        <RowDefinition Height="11"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10" />
