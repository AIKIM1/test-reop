                                    <!--조회조건-->
                                    <!--ROW1-->
                                    <TextBlock  Grid.Row="1" Grid.Column="1"  Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox   Grid.Row="1" Grid.Column="2" x:Name="cboAreaR"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    <TextBlock  Grid.Row="1" Grid.Column="4"  Text="{Binding ConverterParameter='Pallet ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox    Grid.Row="1" Grid.Column="5"  x:Name="txtLotID"   CharacterCasing="Upper"    Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                    <TextBlock  Grid.Row="1" Grid.Column="7"  Text="{Binding ConverterParameter='Cell_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox    Grid.Row="1" Grid.Column="8"  x:Name="txtSubLotID"   CharacterCasing="Upper"    Style="{StaticResource SearchCondition_TextBoxStyle}" />
