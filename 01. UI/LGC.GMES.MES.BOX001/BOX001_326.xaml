                                        </StackPanel>
                                        <uc:UcBaseDataGrid x:Name="dgGrator" Grid.Row="1" Grid.Column="3" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="8" CanUserRemoveRows="True" CanUserAddRows="True" >
                                            <c1:C1DataGrid.Resources>
                                                <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                                    <Setter Property="Background">
                                                        <Setter.Value>
                                                            <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_trash.png" Stretch="Uniform"/>
                                                        </Setter.Value>
                                                    </Setter>
                                                </Style>
                                            </c1:C1DataGrid.Resources>
                                            <c1:C1DataGrid.Columns>
