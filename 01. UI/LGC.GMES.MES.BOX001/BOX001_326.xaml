                                        <ctrlLib:LGCDatePicker  x:Name="ldpDateTo"  DatepickerType="Date"/>
                                    </StackPanel>
                                    <TextBlock  Grid.Row="3" Grid.Column="4" Text="{Binding ConverterParameter='처리구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="3" Grid.Column="5"   x:Name="cboProcessCodeRH" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    <TextBlock  Grid.Row="3" Grid.Column="7" Text="{Binding ConverterParameter='상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="3" Grid.Column="8"   x:Name="cboSortingRsltRH" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    <TextBlock  Grid.Row="3" Grid.Column="10" Text="{Binding ConverterParameter='지연여부', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
