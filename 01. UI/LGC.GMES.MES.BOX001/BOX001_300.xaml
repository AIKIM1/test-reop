<UserControl x:Class="LGC.GMES.MES.BOX001.BOX001_300"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="포장 공정진척">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="6*" />
                        <RowDefinition Height="8" />
                        <RowDefinition Height="4*" />
                        <RowDefinition Height="4" />
                        <RowDefinition Height="35" />
                    </Grid.RowDefinitions>

                    <Grid x:Name="ButtonArea" Margin="0,-48,0,0">

                        <!-- Pilot Production Grid -->
                        <Grid Margin="-10,-5,-10,0" Height="44" x:Name="grdPilotProd" VerticalAlignment="Top">
                            <!--<Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>-->
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Rectangle x:Name="recPilotProdMode" Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" ></Rectangle>
                            <Border Grid.Row="1" Grid.Column="1"  BorderThickness="2" BorderBrush="White">
                                <TextBlock x:Name="txtPilotProdMode" Grid.Row="1" Grid.Column="1" Margin="10,0" Text="{Binding ConverterParameter='PILOT_PRODUCTION', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" />
                            </Border>
                        </Grid>

                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <!--<ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />-->
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" MouseLeave="btnExtra_MouseLeave" VerticalAlignment="Bottom" Height="32" >
                                <c1:C1DropDownButton.Header>
                                    <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                                </c1:C1DropDownButton.Header>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="9" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="9" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="9" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="9"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="9"/>

                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                    <!--추가기능버튼-->
                                    <uc:UcBaseButton  Grid.Row="1"  Grid.Column="1" x:Name="btnPilotProdMode"     Content="{Binding ConverterParameter='시생산설정/해제',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnPilotProdMode_Click" />
                                    <uc:UcBaseButton  Grid.Row="3"  Grid.Column="1" x:Name="btnPilotSProdMode"    Content="{Binding ConverterParameter='시생산샘플설정/해제',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnPilotProdMode_Click" />
                                </Grid>
                            </c1:C1DropDownButton>
                            <uc:UcBaseButton x:Name="btnRunStart"    Grid.Row="0" Grid.Column="3"  Content="{Binding ConverterParameter='작업시작',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl04Style}" Visibility="Collapsed"/>
                            <uc:UcBaseButton x:Name="btnRunCancel"   Grid.Row="0" Grid.Column="5"  Content="{Binding ConverterParameter='작업취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnRunCancel_Click" />
                            <uc:UcBaseButton x:Name="btnConfirm"     Grid.Row="0" Grid.Column="7"  Content="{Binding ConverterParameter='실적확인',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl02Style}" Click="btnConfirm_Click"/>
                        </Grid>
                    </Grid>

                    <Grid x:Name="SearchArea" Grid.Row="0">
                        <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                        <Grid   Grid.Row="0" Grid.Column="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="13"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <!--조회조건 타이틀-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Hidden"/>

                                <!--조회조건 컨트롤-->
                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  SelectedValueChanged="cboArea_SelectedValueChanged" />
                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="3" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboEquipmentSegment_SelectedValueChanged" />
                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="5" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Visibility="Hidden"/>
                                <uc:UcBaseCheckBox    Grid.Row="0"  Grid.Column="6" Margin="10,0,0,0"  Visibility="Collapsed" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='DUMMY처리'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" x:Name="chkDummy" IsChecked="False"  />
                                <uc:UcBaseCheckBox    Grid.Row="0"  Grid.Column="7" Margin="30,0,0,0"   Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='자동Refresh'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" x:Name="chkReload" IsChecked="False"  />
                            </Grid>
                            <Grid Grid.Row="0" Grid.Column="3">
                                <uc:UcBaseButton x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                            </Grid>
                        </Grid>

                    </Grid>


                    <Grid x:Name="ContentTop" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width= "*" />
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid   Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </Grid>

                            <Grid   Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid   Grid.Row="1" Grid.Column="1" >
                                    <uc:UcBaseDataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot"  IsReadOnly="True" CanUserFilter="False" CanUserSort="False"  HeadersVisibility="Column" SelectionMode="SingleRow" Grid.ColumnSpan="2">

                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="dgProductLotChoiceGroup"  IsChecked="{Binding CHK, Mode=TwoWay}" Name="dgProductLotChoice" HorizontalAlignment="Center" Checked="dgProductLotChoice_Checked" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>

                                            <c1:DataGridTextColumn        Header = "PalletID"            Binding = "{Binding LOTID}"        HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "RFID"                Binding = "{Binding TAG_ID}"       HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "Project"             Binding = "{Binding PROJECTNAME}"  HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "반제품ID"            Binding = "{Binding PRODID}"       HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "제품ID"              Binding = "{Binding TOP_PRODID}"       HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "제품"                Binding = "{Binding PRODNAME}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "설비"                Binding = "{Binding EQPTNAME}"     HorizontalAlignment="Center"/>
                                            <c1:DataGridNumericColumn     Header = "생산수량"            Binding = "{Binding WIPQTY}"       Format="#,##0" />
                                            <c1:DataGridTextColumn        Header = "시작시간"            Binding = "{Binding WIPDTTM_ST}"   HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "WIPSTAT"             Binding = "{Binding WIPSTAT}"      HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "상태"                Binding = "{Binding WIPSNAME}"     HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "모델"                Binding = "{Binding MDLLOT_ID}"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "물류반송상태"        Binding = "{Binding TRANS_STATUS}" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "공정"               Binding = "{Binding PROCID}"      HorizontalAlignment="Center" Visibility="Collapsed"/>

                                        </c1:C1DataGrid.Columns>
                                    </uc:UcBaseDataGrid>
                                </Grid>
                            </Grid>
                        </Grid>

                        <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <!--start 작업대상 -->
                        <Border Grid.Column="2" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid   Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='TRAY구성', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="7" x:Name="btnTrayDetail"   Content="{Binding ConverterParameter=TRAY상세,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonStyle}" Click="btnTrayDetail_Click"/>

                            </Grid>

                            <Grid   Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid   Grid.Row="1" Grid.Column="1" >
                                    <uc:UcBaseDataGrid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"  x:Name="dgTray" IsReadOnly="True" CanUserFilter="False" CanUserSort="False"  HeadersVisibility="Column" SelectionMode="SingleCell" LoadedColumnHeaderPresenter="dgTray_LoadedColumnHeaderPresenter" MouseUp="dgTray_MouseUp">

                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridCheckBoxColumn    Width="60"             Binding = "{Binding CHK}"        HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn     Header = "순번"        Binding = "{Binding SEQ_NO}"     Format="###0" />
                                            <c1:DataGridTextColumn        Header = "TRAYID"      Binding = "{Binding TRAYID}"     HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn     Header = "수량"        Binding = "{Binding QTY}"        Format="#,##0" />
                                            <c1:DataGridTextColumn        Header = "생성시간"    Binding = "{Binding CREATEDT}"   HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "생산라인"    Binding = "{Binding EQSGID}"   HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "모델LOT"     Binding = "{Binding MDLLOT_ID}"   HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>
                                    </uc:UcBaseDataGrid>
                                </Grid>
                            </Grid>
                            <!--end Product Lot-->
                        </Grid>
                        <!--end content-->
                    </Grid>

                    <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <Grid x:Name="ContentButtom" Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--start 실적확인 -->
                        <Border Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid   Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='실적상세', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </Grid>

                            <Grid Grid.Row="2">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.ColumnSpan="2" Margin="6,9,2,0.667" Grid.RowSpan="2" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="4"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!--TextBlock 0 Row-->
                                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='PalletID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='Project', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <!--Control 0 Row-->
                                    <Border Grid.Row="0" Grid.Column="1"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtLotid"  CharacterCasing="Upper"  IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>

                                    <Border Grid.Row="0" Grid.Column="3"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtProjectName" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>

                                    <!--TextBlock 1 Row-->
                                    <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='제품ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='PRODNAME', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <!--Control 1 Row-->
                                    <Border Grid.Row="1" Grid.Column="1"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtTopProdid" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>

                                    <Border Grid.Row="1" Grid.Column="3"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtTopProdNm" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>
                                    <!--TextBlock 2 Row-->
                                    <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='반제품ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='반제품명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <!--Control 2 Row-->
                                    <Border Grid.Row="2" Grid.Column="1"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtProdid" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>

                                    <Border Grid.Row="2" Grid.Column="3"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtProdname" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>


                                    <!--TextBlock 3 Row-->
                                    <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='투입수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <Border Grid.Row="3" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='양품수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <!--Control 3 Row-->
                                    <Border Grid.Row="3" Grid.Column="1"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtStartQty" IsEnabled="False" TextAlignment="Right" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>

                                    <Border Grid.Row="3" Grid.Column="3"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtGoodQty" IsEnabled="False" TextAlignment="Right" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>

                                    <!--TextBlock 4 Row-->
                                    <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <Border Grid.Row="4" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>

                                    <!--Control 4 Row-->
                                    <Border Grid.Row="4" Grid.Column="1"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtStartTime" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>

                                    <Border Grid.Row="4" Grid.Column="3"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtEndTime" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>

                                    <!--TextBlock 6 Row-->
                                    <Border Grid.Row="6" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </Border>
                                    <!--Control 6 Row-->
                                    <Border Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="6"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                        <TextBox Margin="8,3" x:Name="txtRemark" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    </Border>


                                    <uc:UcBaseButton     Grid.Row="8" Grid.Column="4" x:Name="btnEnd"   Content="{Binding ConverterParameter=강제완료,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonSpecialStyle}" Visibility="Collapsed"  Click="btnEnd_Click" HorizontalAlignment="Right"  />





                                </Grid>


                            </Grid>
                            <!--end detail-->
                        </Grid>

                        <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />


                        <Border Grid.Column="2" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                        <!--start tab-->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid   Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='PKGLOT정보', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </Grid>

                            <Grid Grid.Row="2">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <uc:UcBaseDataGrid Grid.Row="2" Grid.Column="1" x:Name="dgAssyLot"  HeadersVisibility="Column" SelectionMode="SingleRow" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" MouseDoubleClick="dgAssyLot_MouseDoubleClick"  >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn        Header = "PALLETID"        Binding = "{Binding PALLETID}"   HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "PKG LOT ID"      Binding = "{Binding LOTID}"      HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "LINE"            Binding = "{Binding EQSGNAME}"      HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn     Header = "수량"            Binding = "{Binding CELLQTY}"    Format="#,##0" />
                                        </c1:C1DataGrid.Columns>
                                    </uc:UcBaseDataGrid>
                                </Grid>

                            </Grid>
                            <!--end content-->
                        </Grid>
                    </Grid>

                    <Border Grid.Row="6" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                    <Grid Grid.Row="6" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="26*"/>
                                <RowDefinition Height="9*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="0"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Grid.RowSpan="2">
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtWorker" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3,6" Grid.RowSpan="2" />
                            <uc:UcBaseButton x:Name="btnShift" Grid.Column="2" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" IsCancel="True" Click="btnShift_Click" Margin="0,6" Grid.RowSpan="2" />
                        </Grid>
                    </Grid>
                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" />
    </Grid>
</UserControl>
