<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_302"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
               Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="CELL 교체처리">
            
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                
                <Grid x:Name="ButtonArea2" Margin="0,-48,0,0" Grid.Row="0">

                    <!-- Pilot Production Grid -->
                    <Grid Margin="-10,-5,-10,0" Height="44" x:Name="grdPilotProd" VerticalAlignment="Top">
                        <!--<Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>-->
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Rectangle x:Name="recPilotProdMode" Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" ></Rectangle>
                        <Border Grid.Row="1" Grid.Column="1"  BorderThickness="2" BorderBrush="White">
                            <TextBlock x:Name="txtPilotProdMode" Grid.Row="1" Grid.Column="1" Margin="10,0" Text="{Binding ConverterParameter='PILOT_PRODUCTION', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" />
                        </Border>
                    </Grid>

                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <!--<ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />-->
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="34" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>
                        <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" MouseLeave="btnExtra_MouseLeave" VerticalAlignment="Bottom" Height="32" Visibility="Collapsed" >
                            <c1:C1DropDownButton.Header>
                                <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                            </c1:C1DropDownButton.Header>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="9" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="9" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="9"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="9"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                <!--추가기능버튼-->
                                <uc:UcBaseButton  Grid.Row="1"  Grid.Column="1" x:Name="btnPilotProdMode"    Content="{Binding ConverterParameter='시생산설정/해제',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnPilotProdMode_Click" />
                            </Grid>
                        </c1:C1DropDownButton>
                    </Grid>
                </Grid>

                <c1:C1TabControl Name="tabCtrl" Grid.Row="1">
                    <c1:C1TabItem Name="tabChange" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Cell 교체'}" Margin="0" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="101*"/>
                                <ColumnDefinition Width="411*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="80" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="0" />
                            </Grid.RowDefinitions>

                            <!--content area-->
                            <Border Grid.Row="0"  Grid.RowSpan="2" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" Grid.ColumnSpan="2"/>
                            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="34" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <!--조회 버튼-->
                                <uc:UcBaseCheckBox   Grid.Row="0"  Grid.Column="3" Margin="4" x:Name="chk2DBCR" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='CELLID2D바코드입력'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" Click="chk2DBCR_Click" HorizontalAlignment="Right" Checked="chk2DBCR_Checked" Visibility="hidden"/>
                                <TextBox   Grid.Row="0" Grid.Column="4"  x:Name="txtTagPallet1" Style="{StaticResource SearchCondition_TextBoxStyle}" IsReadOnly="True" />
                                <uc:UcBaseButton x:Name="btnTagPrint1"   Grid.Row="0"  Grid.Column="5" Margin="4"  Content="{Binding ConverterParameter='TAG재발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnTagPrint1_Click"/>
                                <Border     Grid.Column="6" Style="{StaticResource Content_Separator_BorderStyle}" />
                                <uc:UcBaseButton x:Name="btnInit1" Grid.Row="0" Grid.Column="7" Margin="4" Content="{Binding ConverterParameter='초기화', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnInit1_Click"/>
                                <uc:UcBaseButton x:Name="btnChange1" Grid.Row="0"   Grid.Column="8" Margin="4" Content="{Binding ConverterParameter=교체, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnChange1_Click"/>

                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='(*)교체사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox  Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="8"  x:Name="txtReason1"         Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                            </Grid>

                            <Border Grid.Row="2" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" Grid.ColumnSpan="2"/>
                            <Grid Grid.Row="2" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상 Cell', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox   Grid.Row="0" Grid.Column="2"  x:Name="txtTargetCellID1" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtTargetCellID1_KeyDown" />
                                <TextBlock Name="lbl2DBCD_Target" Grid.Row="0" Grid.Column="4" Style="{StaticResource Content_Search_LabelStyle}" FontWeight="Bold" Foreground="Blue"></TextBlock>

                            </Grid>
                            <Border Grid.Row="3"  BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" Grid.ColumnSpan="2"/>

                            <uc:UcBaseDataGrid Grid.Row="3" x:Name="dgTargetCell1" Margin="8" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleCell" Grid.ColumnSpan="2" ClipboardPasteMode="None" IsRowCountView="False">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn      Header = "CELLID"          Binding = "{Binding SUBLOTID}"         HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "팔레트ID"        Binding = "{Binding OUTER_BOXID}"      HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "BCD_ID"          Binding = "{Binding PLLT_BCD_ID}"      HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "트레이ID"        Binding = "{Binding INNER_BOXID}"      HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "Carrier ID"      Binding = "{Binding TAG_ID}"           HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "트레이단수"      Binding = "{Binding BOXSEQ}"           HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "TRAY내CELL위치"  Binding = "{Binding BOX_PSTN_NO}"      HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "PKG LOT ID"      Binding = "{Binding LOTID}"            HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "RTN_FLAG"        Binding = "{Binding RTN_FLAG}"          HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "출고ID"          Binding = "{Binding RCV_ISS_ID}"       HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "반제품ID"        Binding = "{Binding PRODID}"           HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "제품ID"          Binding = "{Binding TOP_PRODID}"       HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "Project"         Binding = "{Binding PROJECTNAME}"      HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "COATING LINE"    Binding = "{Binding ELTR_LINE_ID}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "LOT_TYPE"        Binding = "{Binding LOT_TYPE}"         HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "SHIPTO_ID"       Binding = "{Binding SHIPTO_ID}"        HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "SHIPTO_NAME"     Binding = "{Binding SHIPTO_NAME}"      HorizontalAlignment="Center" Visibility="Collapsed" />
                                </c1:C1DataGrid.Columns>
                            </uc:UcBaseDataGrid>

                            <Border Grid.Row="5" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" Grid.ColumnSpan="2"/>
                            <Grid Grid.Row="5" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='교체 Cell', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox   Grid.Row="0" Grid.Column="2"  x:Name="txtSourceCellID1" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtSourceCellID1_KeyDown" />
                                <uc:UcBaseCheckBox  Grid.Row="0" Grid.Column="3" Margin="8,5" x:Name="chkInspectSkip"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='검사Skip'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" Visibility="Collapsed" Click="chkChangeYn_Click" />
                                <TextBlock Name="lbl2DBCD_Source" Grid.Row="0" Grid.Column="4" Style="{StaticResource Content_Search_LabelStyle}" FontWeight="Bold" Foreground="Blue" Visibility="Collapsed"></TextBlock>
                                <uc:UcBaseCheckBox   Grid.Row="0" Grid.Column="5" Margin="8,5" x:Name="chkLotTerm" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='LOT편차체크'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True"/>

                            </Grid>
                            <Border Grid.Row="6"  BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}" Grid.ColumnSpan="2"/>

                            <uc:UcBaseDataGrid Grid.Row="6" x:Name="dgSourceCell1" Margin="8" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleCell" Grid.ColumnSpan="2" ClipboardPasteMode="None">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn      Header = "CELLID"           Binding = "{Binding SUBLOTID}"         HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "팔레트ID"         Binding = "{Binding OUTER_BOXID}"      HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "BCD_ID"           Binding = "{Binding PLLT_BCD_ID}"      HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "트레이ID"         Binding = "{Binding INNER_BOXID}"      HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "Carrier ID"       Binding = "{Binding TAG_ID}"           HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "트레이단수"       Binding = "{Binding BOXSEQ}"           HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "TRAY내CELL위치"   Binding = "{Binding BOX_PSTN_NO}"      HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "PKG LOT ID"       Binding = "{Binding LOTID}"            HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "RTN_FLAG"         Binding = "{Binding RTN_FLAG}"          HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn      Header = "출고ID"           Binding = "{Binding RCV_ISS_ID}"       HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "반제품ID"         Binding = "{Binding PRODID}"           HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "제품ID"           Binding = "{Binding TOP_PRODID}"       HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "Project"          Binding = "{Binding PROJECTNAME}"      HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn      Header = "COATING LINE"     Binding = "{Binding ELTR_LINE_ID}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                </c1:C1DataGrid.Columns>
                            </uc:UcBaseDataGrid>


                            <Grid Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="2">
                                <Border        Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            </Grid>

                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Name="tabMapping"  Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Cell 추가'}" Margin="0" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="80" />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="40" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="0" />
                            </Grid.RowDefinitions>

                            <!--content area-->
                            <Border Grid.Row="0"  Grid.RowSpan="2" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition Height="34" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />                                    
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <!--조회 버튼-->
                                <uc:UcBaseCheckBox   Grid.Row="0"  Grid.Column="3" Margin="4" x:Name="chk2DBCR2" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='CELLID2D바코드입력'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" HorizontalAlignment="Right"  Click="chk2DBCR_Click" Checked="chk2DBCR_Checked" Visibility="hidden"/>
                                <TextBox   Grid.Row="0" Grid.Column="4"  x:Name="txtTagPallet2" Style="{StaticResource SearchCondition_TextBoxStyle}" IsReadOnly="True" />
                                <uc:UcBaseButton x:Name="btnTagPrint2"   Grid.Row="0"  Grid.Column="5" Margin="4"  Content="{Binding ConverterParameter='TAG재발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnTagPrint2_Click"/>
                                <Border     Grid.Column="6" Style="{StaticResource Content_Separator_BorderStyle}" />

                                <uc:UcBaseButton x:Name="btnInit2" Grid.Row="0" Grid.Column="7" Margin="4" Content="{Binding ConverterParameter='초기화', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnInit2_Click"/>
                                <uc:UcBaseButton x:Name="btnChange2" Grid.Row="0"   Grid.Column="8" Margin="4" Content="{Binding ConverterParameter=추가, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnChange2_Click"/>

                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='(*)추가사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox  Grid.Row="1"  Grid.Column="1" Grid.ColumnSpan="8"  x:Name="txtReason2"         Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                            </Grid>

                            <Border Grid.Row="2" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="150" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상 팔레트', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox   Grid.Row="0" Grid.Column="2"  x:Name="txtPalletID2" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtPalletID2_KeyDown"/>
                                <TextBlock Grid.Row="0" Grid.Column="5" x:Name="TargettrayID" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상 Tray', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="7" x:Name="cboTray" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboTray_SelectedValueChanged"/>
                            </Grid>
                            <Border Grid.Row="3"  BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                            <uc:UcBaseDataGrid Grid.Row="3" x:Name="dgPallet2" IsReadOnly="True" HeadersVisibility="Column" Margin="8" CanUserRemoveRows="True" CanUserAddRows="True"
                                               SelectionMode="SingleRow" Grid.ColumnSpan="2" ClipboardPasteMode="None" IsRowCountView="False">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn Header = "팔레트ID"        Binding = "{Binding BOXID}"              HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn Header = "BCD_ID"          Binding = "{Binding PLLT_BCD_ID}"        HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header = "RFID"            Binding = "{Binding TAG_ID}"             HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn Header = "Project"         Binding = "{Binding PROJECTNAME}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn Header = "반제품"          Binding = "{Binding PRODID}"             HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn Header = "제품"            Binding = "{Binding TOP_PRODID}"         HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn Header = "수량"            Binding = "{Binding TOTAL_QTY}"          HorizontalAlignment="Center" Format="#,##0"/>
                                    <c1:DataGridTextColumn Header = "검사 Skip"       Binding = "{Binding INSP_SKIP_FLAG}"     HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn Header = "비고"            Binding = "{Binding PACK_NOTE}"          HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn Header = "LOT_TYPE"        Binding = "{Binding LOT_TYPE}"           HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header = "SHIPTO_ID"       Binding = "{Binding SHIPTO_ID}"          HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header = "SHIPTO_NAME"     Binding = "{Binding SHIPTO_NAME}"        HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header = "LOTTYPE"         Binding = "{Binding LOTTYPE}"            HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header = "LOTTYPE_NM"      Binding = "{Binding LOTTYPE_NM}"         HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header = "PISITION"        Binding = "{Binding PISITION}"           HorizontalAlignment="Center" Visibility="Collapsed" />
                                </c1:C1DataGrid.Columns>
                            </uc:UcBaseDataGrid>

                            <Border Grid.Row="5" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid x:Name="TitleSubArea2" Grid.Row="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="150" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='추가 Cell', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox   Grid.Row="0" Grid.Column="2"  x:Name="txtSourceCellID2" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtSourceCellID2_KeyDown" PreviewKeyDown="txtSourceCellID2_PreviewKeyDown" />
                                <uc:UcBaseCheckBox  Grid.Row="0" Grid.Column="3" Margin="8,5" x:Name="chkInspectSkip2"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='검사Skip'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" Click="chkChangeYn_Click" />
                                <uc:UcBaseCheckBox   Grid.Row="0" Grid.Column="4" Margin="8,5" x:Name="chkLotTerm2" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='LOT편차체크'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True"/>
                                <uc:UcBaseCheckBox   Grid.Row="0" Grid.Column="5" Margin="8,5" x:Name="chkPalletQty" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Packing 수량 체크'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True" />
