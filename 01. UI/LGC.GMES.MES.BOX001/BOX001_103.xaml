<UserControl x:Class="LGC.GMES.MES.BOX001.BOX001_103"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280" Loaded="UserControl_Loaded" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="포장 공정실적 관리(초소형)">
            <ctrlLib:LGCLayout.Content>
                <Grid x:Name="MainContents">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="0*"/>
                    </Grid.RowDefinitions>

                    <!-- 포장 공정실적 관리 -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="51" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="34" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>
                                <uc:UcBaseButton x:Name="btnRunStart"          Grid.Row="0" Grid.Column="3"  Content="{Binding ConverterParameter='작업등록',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl01Style}" Click="btnRunStart_Click"/>
                                <uc:UcBaseButton x:Name="btnRunCancel"         Grid.Row="0" Grid.Column="5"  Content="{Binding ConverterParameter='작업취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnRunCancel_Click" />
                                <uc:UcBaseButton x:Name="btnConfirm"           Grid.Row="0" Grid.Column="7" Content="{Binding ConverterParameter='실적확정',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl02Style}" Click="btnConfirm_Click"/>
                                <uc:UcBaseButton x:Name="btnConfirmCancel"     Grid.Row="0" Grid.Column="9" Content="{Binding ConverterParameter='확정취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnConfirmCancel_Click" />
                                <uc:UcBaseButton x:Name="btnPrint"             Grid.Row="0" Grid.Column="11" Content="{Binding ConverterParameter='작업일지발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControlBarCodeStyle}"  Click="btnPrint_Click"/>

                            </Grid>
                        </Grid>

                        <!--start search Area-->
                        <Grid x:Name="SearchArea" Grid.Row="0">
                            <Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>
                            <Grid   Grid.Row="0" Grid.Column="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock  Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipmentSegment"      DisplayMemberPath="" SelectedValuePath=""  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=PALLETID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtPalletID" Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=LOTID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtLotID" CharacterCasing="Upper" Style="{StaticResource SearchCondition_TextBoxStyle}" />

                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="7">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <uc:UcBaseCheckBox x:Name="chkPacking"   Grid.Row="0" Grid.Column="2"      Content="{Binding ConverterParameter='포장중',       Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True" />
                                    <uc:UcBaseCheckBox x:Name="chkPacked"    Grid.Row="0" Grid.Column="3"      Content="{Binding ConverterParameter='포장완료',     Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False" Grid.ColumnSpan="2" Margin="0,16" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="9">
                                    <uc:UcBaseButton x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" PreviewMouseLeftButtonDown="btn_PreviewMouseDown" Click="btnSearch_Click" />
                                </Grid>
                            </Grid>
                            <!--end search Area-->

                        </Grid>
                        <!--end search Area-->

                        <Grid x:Name="ContentTop" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <!--포장 PALLET-->
                            <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='투입PALLET', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                                    <Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <TextBlock   Grid.Column="1" Text="{Binding ConverterParameter=PALLETID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <TextBox     Grid.Column="2"  x:Name="txtMPalletID" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtMPalletID_KeyDown" />
                                        <!--<Border     Grid.Column="3" Style="{StaticResource Content_Separator_BorderStyle}" />-->
                                        <uc:UcBaseButton     Grid.Column="4" x:Name="btnMPallet"     Content="{Binding ConverterParameter='조회',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnMPallet_Click"/>

                                    </Grid>

                                </Grid>

                                <Grid   Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgMPallet" IsReadOnly="True" HeadersVisibility="Column" FrozenBottomRowsCount="1" SelectionMode="MultiRange"  x:FieldModifier="public" >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="dgMPalletChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgMPalletChoice" HorizontalAlignment="Center" Checked="dgMPalletChoice_Checked" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn           Header="PALLETID"        Binding="{Binding MTRL_LOTID}"       HorizontalAlignment="Left"      IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="PROCID"          Binding="{Binding PROCID}"           HorizontalAlignment="Center"    IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn           Header="PROCNAME"        Binding="{Binding PROCNAME}"         HorizontalAlignment="Center"    IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="조립LOTID"       Binding="{Binding PKG_LOTID}"        HorizontalAlignment="Center"    IsReadOnly="True" />
                                            <c1:DataGridTextColumn           Header="전압등급"        Binding="{Binding VLTG_GRD_CODE}"        HorizontalAlignment="Center"    IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="용량등급"        Binding="{Binding CAPA_GRD_CODE}"        HorizontalAlignment="Center"    IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="SOC"             Binding="{Binding SOC_VALUE}"        HorizontalAlignment="Center"    IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="투입량"          Binding="{Binding WIPQTY_IN}"        HorizontalAlignment="Right"    IsReadOnly="True" Format="#,##0" />
                                            <c1:DataGridTextColumn           Header="잔량"            Binding="{Binding WIPQTY}"        HorizontalAlignment="Right"    IsReadOnly="True" Format="#,##0" />
                                            <c1:DataGridTextColumn           Header="GROUP ID"        Binding="{Binding WND_GR_CODE}"            HorizontalAlignment="Center"    IsReadOnly="True" />
                                            <c1:DataGridTextColumn           Header="Winding 설비"    Binding="{Binding WND_EQPTNAME}"            HorizontalAlignment="Center"    IsReadOnly="True" />
                                            <c1:DataGridTextColumn           Header="WND_EQPTID"      Binding="{Binding WND_EQPTID}"            HorizontalAlignment="Center"    IsReadOnly="True"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn           Header="PRJT_NAME"       Binding="{Binding PROJECT}"          HorizontalAlignment="Center"    IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="MDLLOT_ID"       Binding="{Binding MDLLOT_ID}"        HorizontalAlignment="Center"    IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="PRODID"          Binding="{Binding PRODID}"           HorizontalAlignment="Center"    IsReadOnly="True" />
                                            <c1:DataGridTextColumn           Header="작업일"          Binding="{Binding WIPDTTM_IN}"         HorizontalAlignment="Center"    IsReadOnly="True"/>

                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow x:Name="summary_mpallet" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </c1:C1DataGrid>
                                </Grid>
                            </Grid>
                            <!-- 포장 PALLET -->

                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!-- 작업 PALLET -->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업PALLET', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </Grid>

                                <Grid   Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgInPallet" IsReadOnly="True" HeadersVisibility="Column" FrozenBottomRowsCount="1" SelectionMode="MultiRange" >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="dgInPalletChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgInPalletChoice" HorizontalAlignment="Center" Checked="dgInPalletChoice_Checked"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn           Header="PALLETID"       Binding="{Binding BOXID}"            HorizontalAlignment="Left"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="조립LOTID"       Binding="{Binding PKG_LOTID}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                            <c1:DataGridTextColumn           Header="PRJT_NAME"       Binding="{Binding PROJECT}"            HorizontalAlignment="Center"   IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="MDLLOT_ID"       Binding="{Binding MDLLOT_ID}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="PRODID"       Binding="{Binding PRODID}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn           Header="GROUP ID"       Binding="{Binding WND_GR_CODE}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                            <c1:DataGridTextColumn           Header="Winding 설비"    Binding="{Binding WND_EQPTNAME}"            HorizontalAlignment="Center"    IsReadOnly="True" />
                                            <c1:DataGridTextColumn           Header="WND_EQPTID"      Binding="{Binding WND_EQPTID}"            HorizontalAlignment="Center"    IsReadOnly="True"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn           Header="작업일"       Binding="{Binding PACKDTTM}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="INBOX_TYPE"       Binding="{Binding INBOX_TYPE}"            HorizontalAlignment="Center"  Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="INBOX_TYPE_NAME"       Binding="{Binding INBOX_TYPE_NAME}"            HorizontalAlignment="Center"  Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="상태"       Binding="{Binding BOXSTAT}"            HorizontalAlignment="Center"  Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="상태"       Binding="{Binding BOXSTAT_NAME}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="수량"       Binding="{Binding TOTAL_QTY}"            HorizontalAlignment="Center"   Format="#,##0" IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="양품량"       Binding="{Binding TOTAL_QTY}"            HorizontalAlignment="Center"   Format="#,##0" IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn           Header="작업조"       Binding="{Binding SHFT_ID}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="작업조"       Binding="{Binding SHFT_NAME}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                            <c1:DataGridTextColumn           Header="작업자"       Binding="{Binding ACTUSER}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="작업자"       Binding="{Binding ACTUSERNAME}"            HorizontalAlignment="Center"  IsReadOnly="True" />
                                            <c1:DataGridTextColumn           Header="PACK_EQSGID"       Binding="{Binding PACK_EQSGID}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="PACK_EQPTID"       Binding="{Binding PACK_EQPTID}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="PACK_WRK_TYPE"       Binding="{Binding PACK_WRK_TYPE}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="PKG_LOTID"       Binding="{Binding PKG_LOTID}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn           Header="PACK_NOTE"       Binding="{Binding PACK_NOTE}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />
                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow x:Name="summary_inpallet" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </c1:C1DataGrid>
                                </Grid>
                                <!--end Product Lot-->
                            </Grid>
                            <!-- 작업 PALLET -->
                        </Grid>

                        <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <Grid x:Name="ContentButtom" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!-- 투입 LOT -->
                            <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='투입LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    <Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <uc:UcBaseButton     Grid.Column="1" x:Name="btnAdd"     Content="{Binding ConverterParameter='투입',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" PreviewMouseDown="btnAdd_PreviewMouseDown" Click="btnAdd_Click"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="8"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <c1:C1DataGrid x:Name="dgPKGLot" Grid.Row="1" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="MultiRange" FrozenBottomRowsCount="1" CommittedEdit="dgPKGLot_CommittedEdit" >
                                        <c1:C1DataGrid.Resources>
                                            <DataTemplate x:Key="ResultTemplate">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="1" Text="{Binding}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                                                </Grid>
                                            </DataTemplate>
                                        </c1:C1DataGrid.Resources>

                                        <c1:C1DataGrid.Columns>
                                            <!--<c1:DataGridTemplateColumn Name="CHK" Width="40" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>-->
                                            <c1:DataGridCheckBoxColumn       Binding="{Binding CHK}"   Width="40"      IsReadOnly="False"  />
                                            <c1:DataGridTextColumn        Header = "MTRL_LOTID"    Binding = "{Binding MTRL_LOTID}"           IsReadOnly ="True"    HorizontalAlignment="Center"  Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "조립LOTID"     Binding = "{Binding PKG_LOTID}"            IsReadOnly ="True"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "PRODID"    Binding = "{Binding PRODID}"           IsReadOnly ="True"    HorizontalAlignment="Center"  Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "전압등급"          Binding = "{Binding PRDT_GRD_CODE}"        IsReadOnly ="True"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn        Header = "용량등급"          Binding = "{Binding CAPA_GRD_CODE}"        IsReadOnly ="True"    HorizontalAlignment="Center"/>
                                            <c1:DataGridTextColumn        Header = "전압등급"          Binding = "{Binding VLTG_GRD_CODE}"        IsReadOnly ="True"    HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "SOC"          Binding = "{Binding SOC_VALUE}"        IsReadOnly ="True"    HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "투입수량"      Binding = "{Binding WIPQTY}"               IsReadOnly ="True"    HorizontalAlignment="Right"  Format="#,##0"/>
                                            <c1:DataGridTextColumn        Header = "포장수량"      Binding = "{Binding PACKQTY}"              HorizontalAlignment="Right"  Format="#,##0"/>
                                            <c1:DataGridTextColumn        Header = "잔량"          Binding = "{Binding QTY}"                  IsReadOnly ="True"    HorizontalAlignment="Right"  Format="#,##0"/>
                                        </c1:C1DataGrid.Columns>

                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow x:Name="summary_pkg" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </c1:C1DataGrid>
                                </Grid>
                            </Grid>
                            <!-- 투입 LOT -->

                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!-- 포장 LOT -->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='포장LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    <Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <uc:UcBaseButton     Grid.Column="1" x:Name="btnDelete"     Content="{Binding ConverterParameter='삭제',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnDelete_Click"/>
                                        <uc:UcBaseButton     Grid.Column="3" x:Name="btnSave"     Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSave_Click" Visibility="Collapsed"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="8"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <c1:C1DataGrid x:Name="dgInBox" Grid.Row="1" Grid.Column="1" IsReadOnly="False" HeadersVisibility="Column" RowHeight="Auto"  FrozenBottomRowsCount="1" SelectionMode="MultiRange" >
                                        <c1:C1DataGrid.Columns>
                                            <!-- <c1:DataGridTemplateColumn Name="CHK" Width="40" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>-->
                                            <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="dgInBoxChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgInBoxChoice" HorizontalAlignment="Center" Checked="dgInBoxChoice_Checked"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn        Header = "INPALLET"        Binding = "{Binding INPALLETID}"       IsReadOnly="True"      HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "투입PALLET"      Binding = "{Binding MTRL_LOTID}"       IsReadOnly="True"      HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn        Header = "조립LOTID"       Binding = "{Binding PKG_LOTID}"        IsReadOnly="True"      HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn        Header = "전압등급"        Binding = "{Binding PRDT_GRD_CODE}"    IsReadOnly="True"      HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn        Header = "전압등급"        Binding = "{Binding VLTG_GRD_CODE}"    IsReadOnly="True"      HorizontalAlignment="Center"   Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "용량등급"        Binding = "{Binding CAPA_GRD_CODE}"    IsReadOnly="True"      HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn        Header = "SOC"        Binding = "{Binding SOC_VALUE}"    IsReadOnly="True"      HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn        Header = "수량"            Binding = "{Binding TOTAL_QTY}"        IsReadOnly="True"      HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn        Header = "YN"              Binding="{Binding YN}"                 IsReadOnly="True"      HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                        </c1:C1DataGrid.Columns>

                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow x:Name="summary_Inbox" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </c1:C1DataGrid>
                                </Grid>
                                <!--end detail-->
                            </Grid>
                            <!-- 포장 LOT -->
                        </Grid>

                        <Border Grid.Row="6" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                        <Grid Grid.Row="6" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="0"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtShift" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 10, 3" />
                                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='작업시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtShiftDateTime" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 10, 3" />
                                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="0" Grid.Column="5" x:Name="txtWorker" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 3, 3" />
                                <StackPanel Grid.Row="0" Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='작업그룹', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="0" Grid.Column="7" x:Name="txtWorkGroup" IsReadOnly="True"  HorizontalAlignment="Left" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3,6,0,6" Height="22" Width="219" />
                                <uc:UcBaseButton x:Name="btnShift" Grid.Column="8" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" IsCancel="True" Click="btnShift_Click" />
                                <TextBox Grid.Row="0" Grid.Column="8" x:Name="txtShiftStartTime" IsReadOnly="True"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="3, 3, 3, 3" Visibility="Collapsed" />
                                <TextBox Grid.Row="0" Grid.Column="8" x:Name="txtShiftEndTime" IsReadOnly="True"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="3, 3, 3, 3" Visibility="Collapsed" />
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- Test Mode Grid -->
                    <Grid Grid.Row="2" x:Name="grdTestMode">
                        <TextBlock Text="{Binding ConverterParameter='테스트모드사용중', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" />
                        <Rectangle x:Name="recTestMode" ></Rectangle>
                    </Grid>
                </Grid>

            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" />
    </Grid>
</UserControl>
