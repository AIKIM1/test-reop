                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                    <!--추가기능버튼-->
                                    <uc:UcBaseButton  Grid.Row="1" Grid.Column="1" x:Name="btnTakeOver"    Content="{Binding ConverterParameter='대차인계인수',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnTakeOver_Click"  />
                                    <uc:UcBaseButton  Grid.Row="3" Grid.Column="1" x:Name="btnShip"       Content="{Binding ConverterParameter='출고',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnShip_Click" />
                                    <uc:UcBaseButton  Grid.Row="5"  Grid.Column="1" x:Name="btnCancelShip"        Content="{Binding ConverterParameter='출고취소',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnCancelShip_Click" />
