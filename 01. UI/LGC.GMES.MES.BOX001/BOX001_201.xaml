                                        <c1:DataGridTextColumn          Header="등외품"                Binding = "{Binding OFFGRD_FLAG}"        IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn          Header="등외품LOT유형코드"     Binding = "{Binding OFFGRD_TYPE}"        IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
