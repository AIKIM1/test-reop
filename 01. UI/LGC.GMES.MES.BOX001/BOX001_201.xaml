                            </c1:C1DropDownButton>

                            <uc:UcBaseButton x:Name="btnBoxLabelPrint"          Grid.Row="0" Grid.Column="3" Content="{Binding ConverterParameter='INBOX라벨발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControlBarCodeStyle}" Click="btnBoxLabelPrint_Click" />
                            <uc:UcBaseButton x:Name="btnRunStart"        Grid.Row="0" Grid.Column="5" Content="{Binding ConverterParameter='작업시작',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl01Style}" VerticalAlignment="Top" Click="btnRunStart_Click"/>
