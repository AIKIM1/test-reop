                                        <c1:DataGridNumericColumn       Header="포장수량"              Binding = "{Binding TOTAL_QTY}"          IsReadOnly="True" HorizontalAlignment="Center" Format="#,###" />
                                        <c1:DataGridTextColumn          Header="Low SOC"               Binding = "{Binding LOW_SOC_FLAG}"       IsReadOnly="True" HorizontalAlignment="Center"/>
