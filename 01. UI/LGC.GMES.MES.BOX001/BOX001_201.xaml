                            <uc:UcBaseButton x:Name="btnConfirm"     Grid.Row="0" Grid.Column="9" Content="{Binding ConverterParameter='실적확정',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl04Style}" Click="btnConfirm_Click" />
                            <uc:UcBaseButton x:Name="btnConfirmCancel"       Grid.Row="0" Grid.Column="11" Content="{Binding ConverterParameter='실적취소',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnConfirmCancel_Click" />
                            <uc:UcBaseButton x:Name="btnPrint"          Grid.Row="0" Grid.Column="13" Content="{Binding ConverterParameter='태그발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnPrint_Click"/>
                        </Grid>
                    </Grid>

                    <Grid x:Name="SearchArea" Grid.Row="0">
                        <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="13"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter},  Mode=oneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="1" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedItemChanged="cboLine_SelectedItemChanged"/>
                            </Grid>

                            <Grid Grid.Row="0" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
