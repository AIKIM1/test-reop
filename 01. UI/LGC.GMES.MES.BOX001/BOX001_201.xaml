                                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량정보'}" Visibility="Collapsed">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0"/>
                                                <RowDefinition Height="34"/>
                                                <RowDefinition Height="2"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="5"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                </Grid.ColumnDefinitions>
                                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="2" x:Name="btnSaveFaulty"       Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />
                                            </Grid>
                                            <c1:C1DataGrid Grid.Row="3" Grid.Column="0" x:Name="dgDefect" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridCheckBoxColumn   Width="45"     Binding = "{Binding CHK}"       HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn Header="불량코드"     Binding = "{Binding RESNCODE}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridTextColumn Header="불량요인"     Binding = "{Binding RESNNAME}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridNumericColumn Header="수량"     Binding = "{Binding RESNQTY}" HorizontalAlignment="Center"/>
                                                    <!--컬럼속성 정리 필요, 수량ROW 추가-->
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                </c1:C1TabControl>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Border Grid.Row="6" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                    <Grid Grid.Row="6" x:Name="grdShift">
                        <UserControls:UCBoxShift />
                    </Grid>
                </Grid>
            </ctrlLib:LGCLayout.Content>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
