<UserControl x:Class="LGC.GMES.MES.BOX001.BOX001_328"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="포장개별구성">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <!--<RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>-->
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <!-- Pilot Production Grid -->
                <Grid Margin="-10,-5,-10,0" Height="44" x:Name="grdPilotProd" VerticalAlignment="Top">
                    <!--<Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>-->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Rectangle x:Name="recPilotProdMode" Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="3" Margin="10,-8,-10,0" ></Rectangle>
                    <Border Grid.Row="1" Grid.Column="1"  BorderThickness="2" BorderBrush="White">
                        <TextBlock x:Name="txtPilotProdMode" Grid.Row="1" Grid.Column="1" Margin="10,0" Text="{Binding ConverterParameter='PILOT_PRODUCTION', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" />
                    </Border>
                </Grid>

                <c1:C1TabControl Name="tabCtrl"  Grid.Row="0" >

                    <c1:C1TabItem Name="tabBox"  Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='TRAY구성'}" Margin="0" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="233*"/>
                                <ColumnDefinition Width="279*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="43"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            <Grid x:Name="InfoArea_Box" Grid.Row="0" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="172*"/>
                                    <ColumnDefinition Width="433*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <c1:C1DropDownButton Grid.Row="0" Grid.Column="3" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" MouseLeave="btnExtra_MouseLeave" VerticalAlignment="Bottom" Height="32" Margin="0.333,0,0.334,3.667" >
                                    <c1:C1DropDownButton.Header>
                                        <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                                    </c1:C1DropDownButton.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="9" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="9" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="9" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="9" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="9"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="9"/>

                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                        <!--추가기능버튼-->
                                        <uc:UcBaseButton  Grid.Row="1"  Grid.Column="1" x:Name="btnPilotProdMode"   Content="{Binding ConverterParameter='시생산설정/해제',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnPilotProdMode_Click" />
                                        <uc:UcBaseButton  Grid.Row="3"  Grid.Column="1" x:Name="btnPilotSProdMode"  Content="{Binding ConverterParameter='시생산샘플설정/해제',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnPilotProdMode_Click" />
                                    </Grid>
                                </c1:C1DropDownButton>

                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="4" x:Name="btnRefresh"   Content="{Binding ConverterParameter=초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonStyle}" Click="btnRefresh_Click" Grid.ColumnSpan="3" Margin="3.666,7,3.667,6.667"/>

                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="7" x:Name="btnCellReg"   Content="{Binding ConverterParameter=CELL파일등록,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_ModuleButtonExcelExportStyle}" Click="btnCellReg_Click" Height="29" Grid.ColumnSpan="2" Margin="0.333,7,3.667,6.667"/>

                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="9" x:Name="btnConfirm1"   Content="{Binding ConverterParameter=실적확정,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnConfirm_Click" Grid.ColumnSpan="2" Margin="0.333,7,13.001,6.667"/>
                            </Grid>
                            <Grid x:Name="GridArea_Box" Grid.Row="2" Grid.ColumnSpan="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='CELL스캔', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <Border Grid.Row="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1" ></Border>
                                    <Grid Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="60"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="60"/>
                                            <RowDefinition Height="60"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="10"/>
                                        </Grid.RowDefinitions>

                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="6*"/>
                                            <ColumnDefinition Width="2*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="1" Grid.Column="0"  Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <uc:UcBaseComboBox  Grid.Row="1" Grid.Column="1"  x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboArea_SelectedValueChanged" />

                                        <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <uc:UcBaseComboBox  Grid.Row="2" Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboEquipmentSegment_SelectedValueChanged" />

                                        <TextBlock Grid.Row="3" Grid.Column="0" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <uc:UcBaseComboBox Grid.Row="3" Grid.Column="1" x:Name="cboModelLot" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboModelLot_SelectedValueChanged" />

                                        <TextBlock Grid.Row="4" Grid.Column="0" Text="{Binding ConverterParameter='반제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <uc:UcBaseComboBox Grid.Row="4" Grid.Column="1" x:Name="cboProduct" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboProduct_SelectedValueChanged"/>

                                        <TextBlock Grid.Row="5" Grid.Column="0" Text="{Binding ConverterParameter='반제품ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <TextBox Grid.Row="5" Grid.Column="1" x:Name="txtProdID" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>

                                        <TextBlock Grid.Row="6" Grid.Column="0" Text="{Binding ConverterParameter='제품ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <TextBox Grid.Row="6" Grid.Column="1" x:Name="txtTopProdID" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}"/>

                                        <TextBlock Grid.Row="7" Grid.Column="0" Text="{Binding ConverterParameter='출하처', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <uc:UcBaseComboBox Grid.Row="7" Grid.Column="1" x:Name="cboPackOut_Go" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboPackOut_Go_SelectedValueChanged"/>

                                        <StackPanel Grid.Row="7" Grid.Column="2"  Orientation="Horizontal">
                                            <TextBlock    x:Name="lblPackOut_Go_LotTerm" Foreground="Red"  TextAlignment="Right" Style="{StaticResource Content_InputForm_TextBlockStyle}"/>
                                            <TextBlock   Foreground="Red" Margin="-5,0,0,0" Text="{Binding ConverterParameter='일미만', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontSize="14"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="8" Grid.Column="0" Text="{Binding ConverterParameter='Route', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <uc:UcBaseComboBox Grid.Row="8" Grid.Column="1" x:Name="cboRoute" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboRoute_SelectedValueChanged"/>

                                        <TextBlock Grid.Row="9" Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        <uc:UcBaseComboBox Grid.Row="9" Grid.Column="1" x:Name="cboProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />

                                        <TextBlock Grid.Row="8" Grid.Column="0" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Collapsed"/>

                                        <TextBox Grid.Row="8" Grid.Column="1" x:Name="txtProdUser" IsEnabled="False" Style="{StaticResource Content_InputForm_TextBoxStyle}" Visibility="Collapsed"/>

                                        <TextBlock Grid.Row="10" Grid.Column="0" Text="{Binding ConverterParameter='셀수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                        <TextBox Grid.Row="10" Grid.Column="1" x:Name="txtCellQty"  CharacterCasing="Upper" Style="{StaticResource Content_InputForm_TextBoxStyle}" IsReadOnly="true"/>

                                        <TextBlock Grid.Row="11" Grid.Column="0" Text="{Binding ConverterParameter='TrayID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="24"/>

                                        <TextBox Grid.Row="11" Grid.Column="1" x:Name="txtTrayID"  Height="45" FontSize="24" CharacterCasing="Upper" Style="{StaticResource Content_InputForm_TextBoxStyle}" KeyDown="txtTrayID_KeyDown"/>
                                        
                                        <TextBlock Grid.Row="14" Grid.Column="0" Text="{Binding ConverterParameter='CELLID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="24"/>

                                        <TextBox Grid.Row="14" Grid.Column="1" x:Name="txtCellID"  Height="45" FontSize="24" CharacterCasing="Upper" Style="{StaticResource Content_InputForm_TextBoxStyle}" KeyDown="txtCellID_KeyDown" PreviewKeyDown="txtCellID_PreviewKeyDown" />

                                        <Grid Grid.Row="16" Grid.Column="0" Grid.ColumnSpan="3" VerticalAlignment="Bottom">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="20" />
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <uc:UcBaseCheckBox   Grid.Row="1" Grid.Column="1"   Grid.ColumnSpan="3" Margin="8,5" x:Name="chkLot_Term" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='LOT편차체크'}" Style="{StaticResource SearchCondition_CheckBoxStyle}"/>

                                            </Grid>

                                            <Grid Grid.Row="2" Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <uc:UcBaseCheckBox   Margin="8,5" x:Name="chkSkip" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='검사조건SKIP'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" />

                                            </Grid>

                                            <Grid Grid.Row="2" Grid.Column="3" HorizontalAlignment="Left">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <uc:UcBaseCheckBox   x:Name="chk2D" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='2DBCRCHECKSKIP'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" />

                                            </Grid>

                                            <Grid Grid.Row="3" Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <uc:UcBaseCheckBox  Margin="8,5" x:Name="chk2DBCR" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='CELLID2D바코드입력'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" Click="chk2DBCR_Click" />

                                            </Grid>

                                            <Grid Grid.Row="3" Grid.Column="3">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <uc:UcBaseCheckBox x:Name="chkTestMode" Content="{Binding ConverterParameter=TESTMODE, Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" Click="chk2DBCR_Click" Visibility="Hidden" />

                                            </Grid>

                                        </Grid>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                    <Border Grid.Row="2" Grid.RowSpan="2" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='CELL정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                        <uc:UcBaseButton     Grid.Row="0" Grid.Column="3" x:Name="btnNoneCell" Content="{Binding ConverterParameter=CELL_AUTO_CREATE, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ButtonFocusStyle}"  Cursor="Hand" Click="btnNoneCell_Click"  />
                                    </Grid>
                                    
                                    <Grid Grid.Row="2" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0" Orientation="Horizontal">
                                            <TextBlock Text="{Binding ConverterParameter='MINLOT:', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                            <TextBlock  x:Name="lblMin" Margin="-5,0,0,0" Width="70" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" Orientation="Horizontal">
                                            <TextBlock Text="{Binding ConverterParameter='MAXLOT:', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                            <TextBlock  x:Name="lblMax" Margin="-5,0,0,0" Width="70"  Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Orientation="Horizontal">
                                            <TextBlock Text="{Binding ConverterParameter='LOT편차:', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="18"/>
                                            <TextBlock  x:Name="lblLotTerm" Margin="-5,0,0,0" Width="70" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="18"/>
                                        </StackPanel>
                                    </Grid>
                                    <Grid Grid.Row="3">
                                        <uc:UcBaseDataGrid x:Name="dgCell_Info" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" FrozenTopRowsCount="2" SelectionMode="MultiRange" Margin="8">
                                            <c1:C1DataGrid.Columns>

                                                <c1:DataGridTextColumn Header = "번호"        Binding = "{Binding SEQ}" Width="Auto*" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header = "CELLID"        Binding = "{Binding SUBLOTID}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header = "조립LOT"        Binding = "{Binding LOTID}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header = "MDLLOT_ID"        Binding = "{Binding MDLLOT_ID}" HorizontalAlignment="Center" Visibility="Collapsed"/>

                                                <c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="삭제">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Button  x:Name="btnDelete" Width="Auto" Content="{Binding ConverterParameter=삭제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}"  Click="btnDelete_Click"/>
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>

                                            </c1:C1DataGrid.Columns>

                                        </uc:UcBaseDataGrid>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Column="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='TRAY정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <Grid Grid.Row="2">
                                        <Border        Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                        <uc:UcBaseDataGrid x:Name="dgBox_Info" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" FrozenTopRowsCount="2" SelectionMode="MultiRange" Margin="8">
                                            <c1:C1DataGrid.Columns>

                                                <c1:DataGridTextColumn Header = "BOXID"        Binding = "{Binding BOXID}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header = "수량"         Binding = "{Binding TOTAL_QTY}" HorizontalAlignment="Center" Format="###,###,##0.##"/>

                                            </c1:C1DataGrid.Columns>

                                        </uc:UcBaseDataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem Name="tabPallet" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='PALLET구성'}" Margin="0" Visibility="Collapsed" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="43"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="8" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            <Grid x:Name="InfoArea_Pallet" Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>
                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="2" x:Name="btnRefresh2"   Content="{Binding ConverterParameter=초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonStyle}" Click="btnRefresh2_Click" Grid.ColumnSpan="3" />


                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="6" x:Name="btnConfirm"   Content="{Binding ConverterParameter=실적확정,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                    Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnConfirm_Click" />

                            </Grid>
                            <Grid x:Name="GridArea_Pallet" Grid.Row="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='BOXSCAN', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <Border Grid.Row="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1" ></Border>
                                    <Grid Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="10"/>
