<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_217"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="포장 대차 Inbox 재구성">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <c1:C1TabControl>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Pallet병합'}" Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="2.*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="13" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='PJT명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='조립LOTID',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='PalletID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                <uc:UcBaseComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboAreaMerger"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <uc:UcBaseComboBox   Grid.Row="0" Grid.Column="3" x:Name="cboEquipmentSegmentMerger"          Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <uc:UcBaseComboBox   Grid.Row="0" Grid.Column="5" x:Name="cboProcessMerger"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <uc:UcBaseComboBox   Grid.Row="0" Grid.Column="7" x:Name="cboQltyMerger"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>

                                <TextBox         Grid.Row="1" Grid.Column="1" x:Name="txtPrjtNameMerger"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"/>
                                <TextBox         Grid.Row="1" Grid.Column="3" x:Name="txtProdidMerger"              Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                <TextBox         Grid.Row="1" Grid.Column="5" x:Name="txtLotRTDMerger"               Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"/>
                                <TextBox         Grid.Row="1" Grid.Column="7" x:Name="txtPalletIdMerger"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" />

                                <!--조회 버튼-->
                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="9"  Grid.RowSpan="2" x:Name="btnReSetMerger" Content="{Binding ConverterParameter=초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Height="29"/>
                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="11" Grid.RowSpan="2" x:Name="btnSearchMerger" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand"  />

                            </Grid>

                            <!--대상목록-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='조회목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgListInput" Grid.Row="1" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="8,8,8,8" MouseLeftButtonUp="dgListInput_MouseLeftButtonUp">
                                    <c1:C1DataGrid.Columns>
                                        <!--<c1:DataGridTemplateColumn Name="CHK" Width="40" Header = "선택2"  >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="chkMerger_Click" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>-->
                                        <c1:DataGridCheckBoxColumn  Header = "선택"               Binding = "{Binding CHK}"                 HorizontalAlignment="Center" Width="40" />
                                        <c1:DataGridTextColumn      Header = "FORM_WRK_TYPE_CODE" Binding = "{Binding FORM_WRK_TYPE_CODE}"  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "구분"               Binding = "{Binding WIP_QLTY_TYPE_NAME}"  HorizontalAlignment="Center" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn      Header = "PalletID"           Binding = "{Binding PALLETID}"            HorizontalAlignment="Center" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn      Header = "조립LOT"            Binding = "{Binding LOTID_RT}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "LotType"            Binding = "{Binding LOTYNAME}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "작업구분"           Binding = "{Binding FORM_WRK_TYPE_NAME}"  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "PJT"                Binding = "{Binding PJT}"                 HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품"               Binding = "{Binding PRODID}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "Box수량"            Binding = "{Binding INBOX_QTY}"           HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "Cell수량"           Binding = "{Binding WIPQTY}"              HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "단위"               Binding = "{Binding UNIT}"                HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "SOC"                Binding = "{Binding SOC_VALUE}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "GROUP"              Binding = "{Binding WND_GR_CODE}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "Winder 설비"        Binding = "{Binding WND_EQPTNM}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "시장유형"           Binding = "{Binding MKT_TYPE_NAME}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "용량등급"           Binding = "{Binding CAPA_GRD_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "전압등급"           Binding = "{Binding VLTG_GRD_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "저항등급"           Binding = "{Binding RSST_GRD_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "완료일자"           Binding = "{Binding UPDDATE}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "CMCODE"             Binding = "{Binding CMCODE}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "양품/불량"          Binding = "{Binding QLTY_TYPE_NAME}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "WIPSEQ"             Binding = "{Binding WIPSEQ}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WIPHOLD"            Binding = "{Binding WIPHOLD}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "PROC_LABEL_PRT_FLAG"        Binding = "{Binding PROC_LABEL_PRT_FLAG}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "EQPTID"             Binding = "{Binding EQPTID}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WIP_QLTY_TYPE_CODE" Binding = "{Binding WIP_QLTY_TYPE_CODE}"  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "PROCID"             Binding = "{Binding PROCID}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--선택목록-->
                            <Grid Grid.Row="5" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대상목록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgSelectInput" Grid.Row="1" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="8,8,8,8">
                                    <c1:C1DataGrid.Columns>

                                        <c1:DataGridTemplateColumn Name="CHK" Width="100" Header = "대표선택"  >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgLotChk" IsChecked="{Binding CHK, Mode=OneWay}" x:Name="dgProductLotChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgLotChk_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "구분"           Binding = "{Binding WIP_QLTY_TYPE_NAME}"     HorizontalAlignment="Center" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn      Header = "PalletID"       Binding = "{Binding PALLETID}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "조립LOT"        Binding = "{Binding LOTID_RT}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "PJT"            Binding = "{Binding PJT}"                    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "제품"           Binding = "{Binding PRODID}"                 HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "Box수량"        Binding = "{Binding INBOX_QTY}"              HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn   Header = "Cell수량"       Binding = "{Binding WIPQTY}"                 HorizontalAlignment="Right"  Format="###,###,##0.##" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "단위"           Binding = "{Binding UNIT}"                   HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "SOC"            Binding = "{Binding SOC_VALUE}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "용량등급"       Binding = "{Binding CAPA_GRD_CODE}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "전압등급"       Binding = "{Binding VLTG_GRD_CODE}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "저항등급"       Binding = "{Binding RSST_GRD_CODE}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "시장유형"       Binding = "{Binding MKT_TYPE_NAME}"          HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn      Header = "WIPSEQ"         Binding = "{Binding WIPSEQ}"                 HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WIPHOLD"        Binding = "{Binding WIPHOLD}"                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "PROC_LABEL_PRT_FLAG" Binding = "{Binding PROC_LABEL_PRT_FLAG}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "EQPTID"              Binding = "{Binding EQPTID}"                 HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn      Header = "WIP_QLTY_TYPE_CODE"  Binding = "{Binding WIP_QLTY_TYPE_CODE}"  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--사유영역-->
                            <Grid x:Name="TextArea" Grid.Row="7">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="34"/>

                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='대표LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox         Grid.Row="0" Grid.Column="1" x:Name="txtTotalLotIDMerger"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" IsEnabled="False" />
                                <TextBlock Grid.Column="2" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='재공 Cell 수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox         Grid.Row="0" Grid.Column="3" x:Name="txtWipQtyMerger"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" IsEnabled="False" TextAlignment="Right" />
                                <TextBlock Grid.Column="4" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='병합 Cell 수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox   Grid.Row="0" Grid.Column="5" x:Name="txtSumWipQtyMerger"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"  IsEnabled="False" TextAlignment="Right" />
                                <TextBlock Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='재공 Box 수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox   Grid.Row="1" Grid.Column="3" x:Name="txtWipQtyMerger_Box"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" IsEnabled="False" TextAlignment="Right" />
                                <TextBlock Grid.Row="1" Grid.Column="4" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='병합 Box 수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox Grid.Row="1" Grid.Column="5" x:Name="txtSumWipQtyMerger_Box"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"  Background="Yellow" TextAlignment="Right" KeyUp="txtSumWipQtyMerger_Box_KeyUp"/>


                                <uc:UcBaseButton    Grid.Column="11" x:Name="btnPalletMerger"    Content="{Binding ConverterParameter=Pallet병합,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="0,6,8,0"  VerticalAlignment="Top"/>


                            </Grid>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='INBOX분할'}" Visibility="Collapsed">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="2.*" />
                                <RowDefinition Height="8" />
                                <RowDefinition />
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />

                            </Grid.RowDefinitions>

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition />
                            </Grid.ColumnDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Collapsed"/>
                                
                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='PJT명', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='조립LOTID',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='대차ID',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock  Grid.Row="1" Grid.Column="8" Text="{Binding ConverterParameter='INBOXID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <uc:UcBaseComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboAreaSplit"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <uc:UcBaseComboBox   Grid.Row="0" Grid.Column="3" x:Name="cboEquipmentSegmentSplit" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <uc:UcBaseComboBox   Grid.Row="0" Grid.Column="5" x:Name="cboProcessSplit"          Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                <uc:UcBaseComboBox   Grid.Row="0" Grid.Column="7" x:Name="cboQltySplit"             Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Visibility="Collapsed"/>

                                <TextBox         Grid.Row="1" Grid.Column="1" x:Name="txtPrjtNameSplit"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" />
                                <TextBox         Grid.Row="1" Grid.Column="3" x:Name="txtProdidSplit"              Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                                <TextBox         Grid.Row="1" Grid.Column="5" x:Name="txtLotRTDSplit"               Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140"  />
                                <TextBox         Grid.Row="1" Grid.Column="7" x:Name="txtCtnrIdSplit"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" KeyDown="txtCtnrIdSplit_KeyDown" />
                                <TextBox         Grid.Row="1" Grid.Column="9" x:Name="txtPalletIdSplit"             Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" KeyDown="txtPalletIdSplit_KeyDown" />

