<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012" 
             xmlns:UserControls="clr-namespace:LGC.GMES.MES.CMM001.UserControls;assembly=LGC.GMES.MES.CMM001"
             x:Class="LGC.GMES.MES.BOX001.BOX001_316"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid  x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="CELL 불량 등록/해제">
            <Grid>
                <Grid.Resources>
                    <DataTemplate x:Key="ResultTemplate">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                        </Grid>
                    </DataTemplate>

                    <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                        <Setter Property="Background">
                            <Setter.Value>
                                <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/btn_i_print.png" Stretch="Uniform"/>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Grid.Resources>

                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>

                <c1:C1TabControl x:Name="tabDefect" >
                    <!--CELL 불량 등록-->
                    <c1:C1TabItem x:Name="ctbCreate" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Cell 불량 등록'}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="397*"/>
                                <ColumnDefinition Width="627*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>

                            <!--조회목록LOT-->
                            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="2*" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <!-- 10 -->
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="99*" />
                                    <ColumnDefinition Width="278*"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <!--<ColumnDefinition Width="8" />-->
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="1"  Grid.ColumnSpan="12" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="3"  Grid.ColumnSpan="12" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                <TextBlock                                       Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Cell ID',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,7,8,6"/>
                                <TextBox                 x:Name="txtCellIDtoScrap"      Grid.Row="1" Grid.Column="2" MinWidth="200" MaxWidth="200" Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtCellIDtoScrap_KeyDown" PreviewKeyDown="txtCellIDtoScrap_PreviewKeyDown" />
                                <TextBlock                                       Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='스캔수량',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0,7,7,6"/>
                                <c1:C1NumericBox         x:Name="txtScanQtySrap"  Grid.Row="1" Grid.Column="5" MinWidth="100" MaxWidth="100" Visibility="{Binding TEXTVISIBLE}" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" CornerRadius="0" HandleUpDownKeys="False" Format="#,##0" FontSize="16" FontWeight="Bold" Foreground="Red" Background="#FFEBEBEB" IsReadOnly="True" />
                                <uc:UcBaseButton                  x:Name="btnClear"        Grid.Row="1" Grid.Column="8" Content="{Binding ConverterParameter=Clear,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnClear_Click" />
                                <uc:UcBaseButton                  x:Name="btnSave"        Grid.Row="1" Grid.Column="10" Content="{Binding ConverterParameter=저장,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnSave_Click" />

                                <Grid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="12">
                                    <c1:C1DataGrid Grid.Row="3" 
                                                   Grid.Column="1"
                                                   x:Name="dgScrapInfo" 
                                                   HeadersVisibility="Column" 
                                                   SelectionMode="SingleRow" 
                                                   CanUserFilter="False" 
                                                   CanUserSort="False" >

                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="삭제">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button  x:Name="btnDelete" Width="Auto" Content="{Binding ConverterParameter=삭제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDelete_Click" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn      Header = "Cell ID"           Binding = "{Binding SUBLOTID}"    HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                            <c1:DataGridTextColumn      Header = "MODEL ID"            Binding = "{Binding MDLLOT_ID}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                            <c1:DataGridTextColumn      Header = "제품"           Binding = "{Binding PRODID}"      HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                            <c1:DataGridTextColumn      Header = "조립 LOT"       Binding = "{Binding LOTID}"    HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                            <c1:DataGridTextColumn      Header = "PJT"            Binding = "{Binding PRJT_NAME}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                            <c1:DataGridTextColumn      Header = "LINE"            Binding = "{Binding EQSGID}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>
                                <!--사유-->
                                <Border Grid.Row="5" Grid.ColumnSpan="12" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="5" Grid.ColumnSpan="12" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                <!--사유-->
                                <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="12">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto" MinWidth="150" />
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock                        Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    <TextBox   x:Name="txtScrapNote"  Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2"          Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" Margin="8,8,8,8" AcceptsReturn="True"/>
                                    <TextBlock  Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                    <Grid Grid.Row="1" Grid.Column="5" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="5"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="txtUserNameSc"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtUserName_KeyDown"/>
                                        <uc:UcBaseButton  Grid.Column="1" x:Name="btnUserSc"    Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnUser_Click"/>
                                    </Grid>
                                </Grid>
                            </Grid>

                        </Grid>
                    </c1:C1TabItem>

                    <!--불량 CELL 등록 이력-->
                    <c1:C1TabItem x:Name="ctbDefectLot" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량 Cell 등록 이력'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <!--<ColumnDefinition Width="8" />-->
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock       Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='기간',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="8" Text="{Binding ConverterParameter='Cell ID',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBlock       Grid.Row="1" Grid.Column="12" Text="{Binding ConverterParameter='LINE',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <ctrlLib:LGCDatePicker x:Name="dtpDateFrom"    Grid.Row="1" Grid.Column="2"  DatepickerType="Date"  />
                                <TextBlock                                     Grid.Row="1" Grid.Column="4" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment='Center' />
                                <ctrlLib:LGCDatePicker x:Name="dtpDateTo"      Grid.Row="1" Grid.Column="6"  DatepickerType="Date"    />
                                <TextBox         x:Name="txtCellIDScrap"           Grid.Row="1" Grid.Column="10"   Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="140" PreviewKeyDown="txtCellIDScrap_PreviewKeyDown" KeyDown="txtCellIDScrap_KeyDown" />
                                <uc:UcBaseComboBox  Grid.Row="1" Grid.Column="14" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />

                                <!--조회 버튼-->
                                <uc:UcBaseButton          x:Name="btnSearchLot"           Grid.Row="1" Grid.Column="16" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearchCellScrap_Click" />
                            </Grid>

                            <!--조회목록LOT-->
                            <Grid Grid.Row="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <!--<Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>-->

                                <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='조회목록LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <c1:C1DataGrid x:Name="dgScrapCellHistory" 
                                               Grid.Row="1"
                                               SelectionMode="MultiRange"
                                               HeadersVisibility="Column"  >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "Cell ID"           Binding = "{Binding SUBLOTID}"    HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                        <c1:DataGridTextColumn      Header = "MODEL ID"            Binding = "{Binding MDLLOT_ID}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                        <c1:DataGridTextColumn      Header = "제품"           Binding = "{Binding PRODID}"      HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                        <c1:DataGridTextColumn      Header = "조립 LOT"       Binding = "{Binding LOTID}"    HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                        <c1:DataGridTextColumn      Header = "PJT"            Binding = "{Binding PRJT_NAME}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                        <c1:DataGridTextColumn      Header = "현재 불량상태"            Binding = "{Binding SUBLOTSCRAP}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                        <c1:DataGridTextColumn      Header = "LINE"            Binding = "{Binding EQSGID}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                        <c1:DataGridTextColumn      Header = "요청사유"            Binding = "{Binding NOTE}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                        <c1:DataGridTextColumn      Header = "요청일"            Binding = "{Binding ACTDTTM}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                        <c1:DataGridTextColumn      Header = "요청자"            Binding = "{Binding UPDUSER}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*" MinWidth="140"/>
                                    </c1:C1DataGrid.Columns>

                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <!--Cell 불량 취소-->
                    <c1:C1TabItem x:Name="ctbCell" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Cell 불량 해제'}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="265*"/>
                                <ColumnDefinition Width="759*"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <!--조회영역-->
                            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <!--조회조건-->
                                <TextBlock                                  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='Cell ID',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox         x:Name="txtDefectCell"     Grid.Row="1" Grid.Column="1" MinWidth="200" MaxWidth="200" Style="{StaticResource SearchCondition_TextBoxStyle}" PreviewKeyDown="txtDefectCell_PreviewKeyDown" KeyDown="txtDefectCell_KeyDown" />
                                <!--조회 버튼-->
                                <uc:UcBaseButton          x:Name="btnClear2"     Grid.Row="1" Grid.Column="5" Content="{Binding ConverterParameter=Clear, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnClear2_Click"  />
                                <uc:UcBaseButton          x:Name="btnUnscrap"     Grid.Row="1" Grid.Column="7" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnUnscrap_Click"  />

                            </Grid>

                            <!--조회목록LOT-->
                            <Grid Grid.Row="3" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="200" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!--백그라운드용-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='조회목록CELL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBlock                                   Grid.Row="0" Grid.Column="2"  Text="{Binding ConverterParameter='스캔수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1NumericBox    x:Name="txtScanQtyUnScrap"      Grid.Row="0" Grid.Column="3" MinWidth="100" Visibility="{Binding TEXTVISIBLE}" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" CornerRadius="0" HandleUpDownKeys="False" Format="#,##0" IsEnabled="False" IsReadOnly="True" FontWeight="Bold" Foreground="Red" Background="#FFEBEBEB" FontSize="15" />

                                <c1:C1DataGrid Grid.Row="3" 
                                                   Grid.ColumnSpan="99"
                                                   x:Name="dgUnScrapInfo" 
                                                   HeadersVisibility="Column" 
                                                   SelectionMode="SingleRow" 
                                                   CanUserFilter="False" 
                                                   CanUserSort="False" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="삭제">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  x:Name="btnDelete" Width="Auto" Content="{Binding ConverterParameter=삭제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDelete2_Click" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn      Header = "Cell ID"           Binding = "{Binding SUBLOTID}"    HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                        <c1:DataGridTextColumn      Header = "MODEL ID"            Binding = "{Binding MDLLOT_ID}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                        <c1:DataGridTextColumn      Header = "제품"           Binding = "{Binding PRODID}"      HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                        <c1:DataGridTextColumn      Header = "조립 LOT"       Binding = "{Binding LOTID}"    HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                        <c1:DataGridTextColumn      Header = "PJT"            Binding = "{Binding PRJT_NAME}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>
                                        <c1:DataGridTextColumn      Header = "LINE"            Binding = "{Binding EQSGID}"   HorizontalAlignment="Center" IsReadOnly="True" Width="*"/>

                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                            <!--사유-->
                            <Border Grid.Row="5" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="5" Grid.ColumnSpan="2" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <!--사유-->
                            <Grid Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto" MinWidth="150" />
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock                        Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='사유', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                <TextBox   x:Name="txtUnScrapNote"  Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Grid.ColumnSpan="2"          Style="{StaticResource SearchCondition_TextBoxStyle}" Height="Auto" Margin="8,8,8,8" AcceptsReturn="True"/>
                                <TextBlock  Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                <Grid Grid.Row="1" Grid.Column="5" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="5"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBox Grid.Column="0" x:Name="txtUserNameUc"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtUserNameUc_KeyDown"/>
                                    <uc:UcBaseButton  Grid.Column="1" x:Name="btnUserUc"    Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnUserUc_Click"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <!--불량 Cell 해제 이력-->
                    <c1:C1TabItem x:Name="ctbHistory" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량 Cell 해제 이력'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>

                            <GridSplitter Grid.Row="4" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--조회영역-->
                            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
