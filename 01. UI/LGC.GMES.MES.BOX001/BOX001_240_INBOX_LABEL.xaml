<c1:C1Window x:Class="LGC.GMES.MES.BOX001.BOX001_240_INBOX_LABEL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"     
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"   
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='INBOX라벨발행'}" 
             Tag="INBOX라벨발행" Height="300" Width="350" IsResizable="True" Loaded="C1Window_Loaded"   >

    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="4"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="8"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="8" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="20" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="4" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="8" />
            </Grid.RowDefinitions>

            <TextBlock   Grid.Row="1"   Grid.Column="1" Text="{Binding ConverterParameter='발행설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
            <uc:UcBaseComboBox  Grid.Row="1"  Grid.Column="3" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath=""/>

            <TextBlock   Grid.Row="3"   Grid.Column="1" Text="{Binding ConverterParameter='발행매수', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
            <c1:C1NumericBox Grid.Row="3"   Grid.Column="3" x:Name="txtInputQty" ShowButtons="False" HandleUpDownKeys="False" Format="#,##0" Value="1" Minimum="1" SelectOnFocus="Always" AllowNull="True"/>

            <TextBlock   Grid.Row="5"   Grid.Column="1" Text="{Binding ConverterParameter='BOXID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
            <TextBox     Grid.Row="5"   Grid.Column="3"  x:Name="txtBoxID" Style="{StaticResource SearchCondition_TextBoxStyle}"   CharacterCasing="Upper" IsReadOnly="True" KeyDown="txtBoxID_KeyDown"/>

        </Grid>


        <!--button area-->
        <Grid Grid.Row ="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <uc:UcBaseCheckBox x:Name="chkReprint"   Grid.Column="1" Content="{Binding ConverterParameter='재발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay }" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False"  Checked="chkReprint_Checked" Unchecked="chkReprint_Unchecked" />
            <uc:UcBaseButton x:Name="btnPrint"       Grid.Column="3" Content="{Binding ConverterParameter='라벨발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnPrint_Click" />
            <uc:UcBaseButton x:Name="btnClose"       Grid.Column="5" Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnClose_Click" />
        </Grid>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" />
    </Grid>
</c1:C1Window>
