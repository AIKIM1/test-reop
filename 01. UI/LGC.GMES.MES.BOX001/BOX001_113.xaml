<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_113"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"  
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="17*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="고객반품포장출하관리" Grid.ColumnSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>
                <c1:C1TabControl  Grid.Row="0">
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='고객반품확인'}" >
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="102"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Grid x:Name="ButtonArea" Margin="0,-82,0,0">
                                <Grid VerticalAlignment="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="34" />
                                    </Grid.ColumnDefinitions>
                                    <uc:UcBaseButton x:Name="btnReturnConfirm"          Grid.Row="0" Grid.Column="1"  Content="{Binding ConverterParameter='포장출고확인',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl01Style}" Click="btnReturnConfirm_Click"/>
                                </Grid>
                            </Grid>

                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <Grid x:Name="InfoArea" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid  Grid.Row="0" Grid.Column="1" >
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=기간, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                        <ctrlLib:LGCDatePicker Grid.Column="0"  x:Name="dtpDateFrom"  DatepickerType="Date"/>
                                        <TextBlock  Grid.Column="1" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0"/>
                                        <ctrlLib:LGCDatePicker Grid.Column="2"  x:Name="dtpDateTo"  DatepickerType="Date"/>
                                    </StackPanel>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=동, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=라인, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=특성호기, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEqpt" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=제품, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtProd" Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=Project, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtProject" Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=PALLETID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtBoxID" Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=조립LOTID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtPkgLotID" Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <uc:UcBaseButton x:Name="btnSearch" Grid.Column="1" Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" PreviewMouseDown="btnSearch_PreviewMouseDown"  Click="btnSearch_Click"/>
                                </Grid>
                            </Grid>

                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                            <Grid x:Name="TitleArea" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="15"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='고객반품 출고리스트', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}"/>

                                
                            </Grid>

                            <Grid  x:Name="OutArea" Grid.Row="4">
                                <Border        Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgSearhResult" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox  IsChecked="{Binding CHK, Mode=OneWay}" Name="dgSearhResultChoice" HorizontalAlignment="Center" Checked="dgSearhResultChoice_Checked" Unchecked="dgSearhResultChoice_Unchecked"/>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn           Header="작업일시"       Binding="{Binding PACKDTTM}"            HorizontalAlignment="Center"  IsReadOnly="True" Format="yyyy-MM-dd" />
                                        <c1:DataGridTextColumn           Header="조립라인"       Binding="{Binding ASSY_EQSGNAME}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="조립라인"       Binding="{Binding ASSY_EQSGID}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="Project"       Binding="{Binding PROJECT}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="작업업체"       Binding="{Binding WRK_SUPPLIERNAME}"            HorizontalAlignment="Center"  IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="작업업체"       Binding="{Binding WRK_SUPPLIERID}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="작업조"       Binding="{Binding SHFT_NAME}"            HorizontalAlignment="Center"  IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="작업조"       Binding="{Binding SHFT_ID}"            HorizontalAlignment="Center"  IsReadOnly="True"   Visibility="Collapsed" />
                                        <c1:DataGridTextColumn           Header="특성호기"       Binding="{Binding CHR_EQPTNAME}"            HorizontalAlignment="Center" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn           Header="특성호기"       Binding="{Binding CHR_EQPTID}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn           Header="작업구분"       Binding="{Binding PACK_WRK_TYPE_NAME}"            HorizontalAlignment="Center"  IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="작업구분"       Binding="{Binding PACK_WRK_TYPE_CODE}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="조립LOTID"       Binding="{Binding PKG_LOTID}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="전압등급"       Binding="{Binding PRDT_GRD_CODE}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="PALLETID"       Binding="{Binding BOXID}"            HorizontalAlignment="Left"     IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="Pallet ID"       Binding="{Binding PALLETID}"            HorizontalAlignment="Left"     IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="구분"       Binding="{Binding WIP_QLTY_TYPE_CODE}"            HorizontalAlignment="Left"     IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="구분"       Binding="{Binding WIP_QLTY_TYPE_NAME}"            HorizontalAlignment="Left"     IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="CELL 수량"       Binding="{Binding WIPQTY}"            HorizontalAlignment="Center"   Format="#,##0"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="PRODID"       Binding="{Binding PRODID}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn           Header="PRODNAME"       Binding="{Binding PRODNAME}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn           Header="용량등급"       Binding="{Binding CAPA_GRD_CODE}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="WINDER호기"       Binding="{Binding WND_EQPTNAME}"            HorizontalAlignment="Center" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn           Header="WINDER호기"       Binding="{Binding WND_EQPTID}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"   />
                                        <c1:DataGridTextColumn           Header="GROUPID"       Binding="{Binding WND_GR_CODE}"            HorizontalAlignment="Center" IsReadOnly="True"  />
                                        <c1:DataGridTextColumn           Header="SOC"       Binding="{Binding SOC_VALUE}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="IEC코드"       Binding="{Binding IEC_STD_CLASS}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="HOLD여부"       Binding="{Binding WIPHOLD}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="출하가능여부"       Binding="{Binding QA_RESULT}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="고객반품출하가능여부"       Binding="{Binding RETURN_CONFIRM_FLAG}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="NOTE"       Binding="{Binding QA_RESULT_MSG}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="상태"       Binding="{Binding RCV_ISS_STAT_NAME}"            HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn           Header="상태"       Binding="{Binding RCV_ISS_STAT_CODE}"            HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="출고일"       Binding="{Binding ISS_DTTM}"         Format="yyyy-MM-dd HH:mm:ss"   HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="입고일"       Binding="{Binding RCV_DTTM}"          Format="yyyy-MM-dd HH:mm:ss"  HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="비고"       Binding="{Binding PACK_NOTE}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                        <c1:DataGridTextColumn           Header="INBOX수량"       Binding="{Binding BOXQTY}"            HorizontalAlignment="Center"   Format="#,##0"  IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="MDLLOT_ID"       Binding="{Binding MDLLOT_ID}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="수출/내수"       Binding="{Binding EXP_DOM_TYPE_CODE}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn           Header="수출/내수"       Binding="{Binding EXP_DOM_TYPE_NAME}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn           Header="작업자"       Binding="{Binding ACTUSER}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn           Header="작업자"       Binding="{Binding ACTUSERNAME}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='고객반품확인이력'}" >
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="102"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <Grid x:Name="InfoArea2" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid  Grid.Row="0" Grid.Column="1" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=처리일, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <Grid  Grid.Row="0" Grid.Column="1" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>


                                        <ctrlLib:LGCDatePicker Grid.Column="0"  x:Name="dtpDateFrom2"  DatepickerType="Date"/>
                                        <TextBlock  Grid.Column="1" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0"/>
                                        <ctrlLib:LGCDatePicker Grid.Column="2"  x:Name="dtpDateTo2"  DatepickerType="Date"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=동, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboArea2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=라인, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboLine2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=특성호기, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEqpt2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=제품, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtProdId2" Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=Project, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtProject2" Style="{StaticResource SearchCondition_TextBoxStyle}" />
                                </Grid>

                                
                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=PALLETID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtBoxID2" Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=조립LOTID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtPkgLotID2" Style="{StaticResource SearchCondition_TextBoxStyle}"  />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=고객반품확인상태, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboReturnStatus" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <uc:UcBaseButton x:Name="btnReturnConfirmCancel" Grid.Column="1" Content="{Binding ConverterParameter=고객반품출고확인취소,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" PreviewMouseDown="btnSearch_PreviewMouseDown"  Click="btnReturnConfirmCancel_Click"/>

                                    <uc:UcBaseButton x:Name="btnSearch2" Grid.Column="3" Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" PreviewMouseDown="btnSearch_PreviewMouseDown"  Click="btnSearch2_Click"/>
                                </Grid>
                            </Grid>

                            <Border Grid.Row="3" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                            <Grid x:Name="TitleArea2" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="293.5"/>
                                    <ColumnDefinition Width="90.5"/>
                                    <ColumnDefinition Width="15"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='고객반품확인리스트', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}"/>

                            </Grid>

