                                            <c1:DataGridTextColumn      Header = "출하예정일"       Binding = "{Binding SHIPDATE_SCHEDULE}"           HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "포장출고ID"       Binding = "{Binding RELSID}"           HorizontalAlignment="Center" />
