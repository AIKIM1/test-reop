                                <c1:C1DataGrid Grid.Row="1" Grid.Column="0" x:Name="dgInbox" FrozenBottomRowsCount="1" IsReadOnly="False" LoadedColumnHeaderPresenter="dgInbox_LoadedColumnHeaderPresenter" HeadersVisibility="Column" SelectionMode="MultiRange">
