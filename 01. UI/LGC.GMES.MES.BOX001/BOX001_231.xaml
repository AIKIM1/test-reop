                                        <c1:DataGridTextColumn Header="수량"         Binding = "{Binding TOTAL_QTY}"      HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn Header="CELL등록수량" Binding = "{Binding CELL_IN_QTY}"    HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn Header="조립LOTID"    Binding = "{Binding PKG_LOTID}"      HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn Header="등급"         Binding = "{Binding PRDT_GRD_CODE}"  HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn Header="중량"         Binding = "{Binding PACK_WEIGHT}"    HorizontalAlignment="Center" IsReadOnly="True"/>
                                        <c1:DataGridTextColumn Header="포장일시"     Binding = "{Binding PACKDTTM}"       HorizontalAlignment="Center" IsReadOnly="True" Format="yyyy-MM-dd HH:mm:ss" />
