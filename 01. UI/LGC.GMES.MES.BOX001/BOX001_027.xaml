<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_027"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="1차 포장 구성">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="4"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="34"/>
                            </Grid.ColumnDefinitions>
                            <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" VerticalAlignment="Bottom" Height="32">
                                <c1:C1DropDownButton.Header>
                                    <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                                </c1:C1DropDownButton.Header>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="9" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="9" />
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <uc:UcBaseButton Grid.Row="1" Grid.Column="1" x:Name="btnBoxLabelPrint" Content="{Binding ConverterParameter='BOX 라벨 발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay }" Click="btnBoxLabelPrint_Click" Style="{StaticResource Content_MainButtonStyle}" />
                                </Grid>
                            </c1:C1DropDownButton>

                            <uc:UcBaseButton x:Name="btnRunStart"        Grid.Row="0" Grid.Column="3" Content="{Binding ConverterParameter='작업시작',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl01Style}" VerticalAlignment="Top" Click="btnRunStart_Click" />
                            <uc:UcBaseButton x:Name="btnRunCancel"       Grid.Row="0" Grid.Column="5" Content="{Binding ConverterParameter='작업취소',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" />
                            <uc:UcBaseButton x:Name="btnRunComplete"     Grid.Row="0" Grid.Column="7" Content="{Binding ConverterParameter='작업완료',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl04Style}" />
                            <uc:UcBaseButton x:Name="btnWorkDiary"       Grid.Row="0" Grid.Column="9" Content="{Binding ConverterParameter='작업일지 발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" />
                            <uc:UcBaseButton x:Name="btnShipSend"        Grid.Row="0" Grid.Column="11" Content="{Binding ConverterParameter='출하발송',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl02Style}" />
                            <uc:UcBaseButton x:Name="btnShipSendCancel"  Grid.Row="0" Grid.Column="13" Content="{Binding ConverterParameter='발송취소',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" />
                        </Grid>
                    </Grid>

                    <Grid x:Name="SearchArea" Grid.Row="0">
                        <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13"/>
                                <ColumnDefinition Width="1.2*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="13"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0" Grid.Column="1">
                                <!--기간 Start-->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="4*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='기간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width= "*"/>
                                        <ColumnDefinition Width= "Auto"/>
                                        <ColumnDefinition Width= "*"/>
                                    </Grid.ColumnDefinitions>
                                    <ctrlLib:LGCDatePicker Grid.Column="0" x:Name="dtpDateFrom" DatepickerType="Date"/>
                                    <TextBlock Grid.Column="1" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                                    <ctrlLib:LGCDatePicker Grid.Column="2" x:Name="dtpDateTo" DatepickerType="Date"/>

                                </Grid>
                            </Grid>
                            <!--기간 End-->
                            <Grid Grid.Row="0" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter},  Mode=oneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="1" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath=""/>
                            </Grid>
                            
                            <Grid Grid.Row="0" Grid.Column="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter},  Mode=oneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="1" x:Name="cboEqpt" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath=""/>
                            </Grid>

                            <Grid Grid.Row="0" Grid.Column="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='상태', Converter={StaticResource GlobalObjectDicConverter},  Mode=oneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="1" x:Name="cboState" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath=""/>
                            </Grid>

                            <uc:UcBaseButton Grid.Row="1" Grid.Column="6" x:Name="btnSearch" Content="{Binding ConverterParameter='SEARCH', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                        </Grid>
                    </Grid><!--Search Area End-->

                    <Grid x:Name="ContentTop" Grid.Row="2">
                        <Border Grid.Row="0" Grid.Column="0" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            
                            <Border     Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid Grid.Row="0" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='포장공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}"/>
                            </Grid>

                            <Grid Grid.Row="1" Grid.Column="0">
                                <c1:C1DataGrid x:Name="dgSearchResult" Grid.Row="0" IsReadOnly="False" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="SingleCell" CommittedEdit="dgSearchResult_CommittedEdit">
                                    <c1:C1DataGrid.Resources>
                                        <DataTemplate x:Key="ResultTemplate">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="1" Text="{Binding}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </c1:C1DataGrid.Resources>
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridCheckBoxColumn       Binding="{Binding CHK}"      IsReadOnly="False"  />
                                        <c1:DataGridTextColumn Header="포장 ID"     Binding = "{Binding BOXID}" IsReadOnly="True" HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn Header="조립 LOT ID"     Binding = "{Binding PKG_LOTID}"  IsReadOnly="True" HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn Header="Project"     Binding = "{Binding PROJECT}"  IsReadOnly="True" HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn Header="제품코드"     Binding = "{Binding PRODID}"  IsReadOnly="True" HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn Header="제품명"     Binding = "{Binding PRODNAME}"  IsReadOnly="True" HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn Header="상태"     Binding = "{Binding BOXSTAT}"  IsReadOnly="True" HorizontalAlignment="Center"/>
                                        <c1:DataGridNumericColumn Header="투입수량"     Binding = "{Binding INPUT_QTY}"  IsReadOnly="True"  Format="#,##0" HorizontalAlignment="Center"/>
                                        <c1:DataGridNumericColumn Header="양품량"     Binding = "{Binding TOTAL_QTY}"  IsReadOnly="True"  Format="#,##0" HorizontalAlignment="Center"/>
                                        <c1:DataGridNumericColumn Header="불량"     Binding = "{Binding DEFECT_QTY}"  IsReadOnly="True"  Format="#,##0" HorizontalAlignment="Center"/>
                                        <c1:DataGridDateTimeColumn Header="시작시간"     Binding = "{Binding START_DTTM}" IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridDateTimeColumn Header="완료시간"     Binding = "{Binding END_DTTM}"  IsReadOnly="True" HorizontalAlignment="Center"/>
                                        <c1:DataGridNumericColumn Header="소요시간(분)"     Binding = "{Binding DURATION_MINUTE}"  IsReadOnly="True" HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn Header="내수/해외"     Binding = "{Binding EXP_DOM_TYPE_NAME}" IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn Header="내수/해외"     Binding = "{Binding EXP_DOM_TYPE_CODE}" IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn           Header="작업조"       Binding="{Binding SHFT_ID}"     IsReadOnly="True"         HorizontalAlignment="Center"   Visibility="Collapsed" />
                                        <c1:DataGridTextColumn           Header="작업조"       Binding="{Binding SHFT_NAME}"    IsReadOnly="True"          HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn           Header="작업자"       Binding="{Binding ACTUSER}"       IsReadOnly="True"       HorizontalAlignment="Center"   Visibility="Collapsed" />
                                        <c1:DataGridTextColumn           Header="작업자"       Binding="{Binding ACTUSERNAME}"   IsReadOnly="True"           HorizontalAlignment="Center"  />
                                        <!--컬럼속성 정리 필요, 수량ROW 추가-->
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                        <c1:C1GroupingWithSummariesBehavior/>
                                    </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>

                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow x:Name="summary_Main" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <!--Content Top End-->
                    
                    <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <Grid x:Name="ContentBot" Grid.Row="4">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="3"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="3"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="3"/>
                                </Grid.RowDefinitions>
                                <c1:C1TabControl Grid.Row="1" Grid.Column="1">
                                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='BOX'}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="3"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="2"/>
                                                <RowDefinition Height="AUTO"/>
                                                <RowDefinition Height="2"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="1" Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="120"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="60"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock      Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='BOXID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <TextBox        Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtBoxId" KeyDown="txtBoxId_KeyDown"/>
                                                <TextBlock      Grid.Row="0" Grid.Column="5" Text="{Binding ConverterParameter='등급', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="7" x:Name="cboGrade" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                                <TextBlock      Grid.Row="0" Grid.Column="9" Text="{Binding ConverterParameter='레벨', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="11"  x:Name="cboLevel" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                                <TextBlock      Grid.Row="0" Grid.Column="13" Text="{Binding ConverterParameter='CELL수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <c1:C1NumericBox        Grid.Row="0" Grid.Column="15" x:Name="txtBoxQty" ShowButtons="False"  Format="#,##0" Margin="3"/>
                                                <!--<Border         Grid.Row="0" Grid.Column="17" Style="{StaticResource Content_Separator_BorderStyle}" />-->
                                                <uc:UcBaseButton         Grid.Row="0" Grid.Column="17"  x:Name="btnCreateCellID"       Content="{Binding ConverterParameter='CellID생성',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />
                                                <uc:UcBaseButton         Grid.Row="0" Grid.Column="19"  x:Name="btnBoxSave"       Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />

                                            </Grid>

                                            <c1:C1DataGrid Grid.Row="3" Grid.Column="0" x:Name="dgInbox" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridCheckBoxColumn   Width="45"     Binding = "{Binding CHK}"       HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn Header="BOX ID"     Binding = "{Binding BOXID}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridNumericColumn Header="수량"     Binding = "{Binding QTY}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridNumericColumn Header="셀 수량"     Binding = "{Binding CELLQTY}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridComboBoxColumn Header="등급"     Binding = "{Binding GRADE}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridComboBoxColumn Header="레벨"     Binding = "{Binding LEVEL}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridDateTimeColumn Header="생성일시"     Binding = "{Binding INSDTTM}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridTextColumn Header="삭제"     Binding = "{Binding INPUTQTY}" HorizontalAlignment="Center"/>
                                                    <!--컬럼속성 정리 필요-->
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>

                                            <Grid Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="20"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="20"/>

                                                </Grid.ColumnDefinitions>

                                                <uc:UcBaseButton         Grid.Row="5"  Grid.Column="0" Content="{Binding ConverterParameter='BOX수량',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"                    Style="{StaticResource Sub_Title_ButtonStyle}"/>
                                                <TextBlock      Grid.Row="5"  Grid.Column="2" Text="{Binding ConverterParameter='100', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}"    Style="{StaticResource Sub_Title_LabelStyle}" />
                                                <uc:UcBaseButton         Grid.Row="5"  Grid.Column="4" Content="{Binding ConverterParameter='전체수량',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"                    Style="{StaticResource Sub_Title_ButtonStyle}"/>
                                                <TextBlock      Grid.Row="5"  Grid.Column="6" Text="{Binding ConverterParameter='100', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}"    Style="{StaticResource Sub_Title_LabelStyle}" />

                                            </Grid>
                                        </Grid>
                                    </c1:C1TabItem>
                                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량정보'}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="3"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="5"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                </Grid.ColumnDefinitions>
                                                <uc:UcBaseButton     Grid.Row="0" Grid.Column="2" x:Name="btnSaveFaulty"       Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />
                                            </Grid>
                                            <c1:C1DataGrid Grid.Row="3" Grid.Column="0" x:Name="dgDefect" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridCheckBoxColumn   Width="45"     Binding = "{Binding CHK}"       HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn Header="불량코드"     Binding = "{Binding RESNCODE}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridTextColumn Header="불량요인"     Binding = "{Binding RESNNAME}" HorizontalAlignment="Center"/>
                                                    <c1:DataGridNumericColumn Header="수량"     Binding = "{Binding RESNQTY}" HorizontalAlignment="Center"/>
                                                    <!--컬럼속성 정리 필요, 수량ROW 추가-->
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                </c1:C1TabControl>
                            </Grid>
                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            
                            <Border Grid.Column="2" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Grid Grid.Column="2">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>

                                    <!--Sub 영역 01 Title-->
                                    <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Grid   Grid.Row="0" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='포장공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                                    </Grid>
                                    <!--Sub 영역 01 Title-->

                                    <!--Sub 영역 01 Content-->
                                    <Grid   Grid.Row="2" Grid.Column="0" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="8"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="8"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid   Grid.Row="1" Grid.Column="1" >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="3"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Grid   Grid.Row="0" Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <uc:UcBaseButton x:Name="btnSave"   Grid.Column="1"  Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}"  PreviewMouseDown="btn_PreviewMouseDown" Click="btnSave_Click" Cursor="Hand"  Margin="4,0,0,0"/>
                                            </Grid>

                                            <Grid   Grid.Row="2" Grid.Column="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="2"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="8"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>

                                                <!--title-->
                                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="5" Background="#FAFAFA" BorderThickness="1" BorderBrush="#B3B3B3"></Border>
                                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#c8294b" ></Border>

                                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='작업일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='작업구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="2" Grid.Column="2" Text="{Binding ConverterParameter='Inbox종류', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="3" Grid.Column="0" Text="{Binding ConverterParameter='모델LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="3" Grid.Column="2" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="4" Grid.Column="0" Text="{Binding ConverterParameter='출하처', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="4" Grid.Column="2" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="5" Grid.Column="0" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="5" Grid.Column="2" Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                                <TextBlock  Grid.Row="6" Grid.Column="0" Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="3,3,8,3"/>

                                                <uc:UcBaseComboBox  Grid.Row="1"  Grid.Column="1" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                                <!--<ctrlLib:LGCDatePicker Grid.Row="1"  Grid.Column="3"  x:Name="dtpDate"  DatepickerType="Date"/>-->
                                                <TextBox Grid.Row="1" Grid.Column="3"  x:Name="txtDate"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                                                <!--2row-->
                                                <uc:UcBaseComboBox  Grid.Row="2"  Grid.Column="1" x:Name="cboWorkType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                                <uc:UcBaseComboBox  Grid.Row="2"  Grid.Column="3" x:Name="cboInBox" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                                <!--3row-->
                                                <Grid Grid.Row="3" Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox  Grid.Column="0"  x:Name="txtMDLLOT"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"  CharacterCasing="Upper" />
                                                    <!--<uc:UcBaseButton   Grid.Column="1"  x:Name="btnPRODID"  Style="{DynamicResource Content_SearchButtonStyle}" Click="btnPRODID_Click"/>-->
                                                </Grid>
                                                <TextBox Grid.Row="3"  Grid.Column="3" x:Name="txtProjectName"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                                                <!--4row-->
                                                <Grid Grid.Row="4" Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox  Grid.Column="0"  x:Name="txtShip_To"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"  CharacterCasing="Upper" />
                                                    <uc:UcBaseButton   Grid.Column="1"  x:Name="btnShip_To"  Style="{DynamicResource Content_SearchButtonStyle}" Click="btnShip_To_Click"/>
                                                </Grid>
                                                <TextBox    Grid.Row="4" Grid.Column="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtLotID" CharacterCasing="Upper" />

                                                <!--5row-->
                                                <Grid Grid.Row="5" Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBox  Grid.Column="0"  x:Name="txtWorker"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"  CharacterCasing="Upper" />
                                                    <uc:UcBaseButton   Grid.Column="1"  x:Name="btnShift"  Style="{DynamicResource Content_SearchButtonStyle}" Click="btnShift_Click"/>
                                                </Grid>
                                                <TextBox    Grid.Row="5" Grid.Column="3" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" x:Name="txtShift" CharacterCasing="Upper" />

                                                <!--6row-->
                                                <RichTextBox        Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtNote" BorderThickness="1" BorderBrush="#FFC3C3C3" Margin="3">
                                                    <RichTextBox.Resources>
                                                        <Style TargetType="{x:Type Paragraph}">
                                                            <Setter Property="Margin" Value="5"/>
                                                        </Style>
                                                    </RichTextBox.Resources>
                                                    <FlowDocument LineHeight="10" >
                                                        <Paragraph FontSize="10pt" LineHeight="10pt"  LineStackingStrategy="BlockLineHeight" Tag="TEST">
                                                        </Paragraph>
                                                    </FlowDocument>
                                                </RichTextBox>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                    <!--Sub 영역 01 Content-->
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
              
                    <Border Grid.Row="6" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                    <Grid Grid.Row="6" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34" />
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="0"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='(*)작업조', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtShift_Main" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 10, 3" />
                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='(*)작업자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtWorker_Main" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 3, 3" />
                            <uc:UcBaseButton x:Name="btnShift_Main" Grid.Column="4" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" IsCancel="True" Click="btnShift_Main_Click" />
                        </Grid>
                    </Grid>
                </Grid>
            </ctrlLib:LGCLayout.Content>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
