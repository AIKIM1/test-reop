<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_043"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ItemTemplate">
                <WrapPanel>
                    <Image Width="138" Height="138" Stretch="Fill" Source="{Binding}" Margin="3,3,3,3" />
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>
        </Grid.Resources>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="물류라벨발행(수동)">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="51"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="6*"/>
                        </Grid.RowDefinitions>
                        <Grid x:Name="SearchArea" Grid.Row="0">
                            <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                            <Grid Grid.Row="0" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>
                                <uc:UcBaseButton  x:Name="btnMergeSplit"   Grid.Column="1" Content="{Binding ConverterParameter='Outbox 분할/병합', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Visibility="Collapsed"/>
                                <uc:UcBaseButton x:Name="btnRePrint"   Grid.Column="3" Content="{Binding ConverterParameter='재발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Visibility="Collapsed"/>
                                <Grid Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='Ship No', Converter={StaticResource GlobalObjectDicConverter},  Mode=oneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox        Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtSalesOrder" KeyDown="txtSalesOrder_KeyDown"/>
                                </Grid>
                                <uc:UcBaseButton Grid.Row="1" Grid.Column="7" x:Name="btnSearch" Content="{Binding ConverterParameter='SEARCH', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                            </Grid>
                        </Grid>
                        <!--Search Area End-->
                        <Grid x:Name="ContentTop" Grid.Row="2">
                            <Grid Grid.Row="0" Grid.Column="0">
                                <Border Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Grid   Grid.Row="0" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="13"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='S/O 정보', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <c1:C1DataGrid Grid.Row="1" Grid.Column="1" Margin="8" x:Name="dgSalesOrder" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow"  MouseLeftButtonUp="dgSalesOrder_MouseLeftButtonUp" FrozenColumnCount="1">
                                            <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" CanUserFilter="False" CanUserSort="False" CanUserResize="False"  >
                                                        <c1:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <RadioButton GroupName="dgSalesOrderChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgSalesOrderChoice" HorizontalAlignment="Center" Checked="dgSalesOrderChoice_Checked" />
                                                            </DataTemplate>
                                                        </c1:DataGridTemplateColumn.CellTemplate>
                                                    </c1:DataGridTemplateColumn>
                                                    <c1:DataGridTextColumn Header="Vender Name"     Binding = "{Binding CUSTOMERNAME}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Shipping Note"     Binding = "{Binding SHIPMENT_NO}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Part No(Ordering Code)"     Binding = "{Binding CUST_MTRLID}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Total Quantity"     Binding = "{Binding TOTL_QTY}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Manufacturer PartNumber"     Binding = "{Binding PRODID}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Vender Code"     Binding = "{Binding CUSTOMERID}" HorizontalAlignment="Center"/>

                                                <c1:DataGridTextColumn Header="Part Name"     Binding = "{Binding CUST_MTRLNAME}" HorizontalAlignment="Center"   Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="Part Name"     Binding = "{Binding IEC_PARTNAME}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Purchase"     Binding = "{Binding PO_NO}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Print Manufacturer"     Binding = "{Binding PRODNAME}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="SHIPTO_ID"     Binding = "{Binding SHIPTO_ID}" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="PRINT_MODEL_NAME"     Binding = "{Binding PRINT_MODEL_NAME}" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                        <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <Grid x:Name="ContentBot" Grid.Row="4">
                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Border Grid.Row="1" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="13"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="1" Text="{Binding ConverterParameter='Pallet 정보', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource Content_Search_LabelStyle}" />
                                    <uc:UcBaseCheckBox  Grid.Column="3"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='비고란 표시'}" 
                                                      HorizontalAlignment="Right"  x:Name="chkShowRemarkYN" IsChecked="False" Checked="chkShowRemarkYN_Checked" Unchecked="chkShowRemarkYN_Unchecked" FontWeight="ExtraBold"/>
                                    <TextBlock Grid.Column="5" Text="{Binding ConverterParameter='총 페이지', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <c1:C1NumericBox  Grid.Column="7" Style="{StaticResource C1NumericBoxStyle}" x:Name="nbPrtQty_Pallet"  Minimum="1"  Width="50" ValueChanged="nbPrtQty_Pallet_ValueChanged"/>
                                    <TextBlock Grid.Column="9"  Text="{Binding ConverterParameter='시작 페이지', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox x:Name="cboPageNum1" MinWidth="60" Grid.Column="11"   DisplayMemberPath="Value" SelectedValuePath="Key" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" IsDropDownOpenChanged="cboPageNum1_IsDropDownOpenChanged" SelectedValueChanged="cboPageNum1_SelectedValueChanged"/>
                                    <TextBlock Grid.Column="13" Text="{Binding ConverterParameter='끝 페이지', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox x:Name="cboPageNum2" MinWidth="60" Grid.Column="15"   DisplayMemberPath="Value" SelectedValuePath="Key" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" IsDropDownOpenChanged="cboPageNum2_IsDropDownOpenChanged" SelectedValueChanged="cboPageNum2_SelectedValueChanged"/>
                                    <uc:UcBaseButton x:Name="btnShippingNotePrint" Grid.Column="17" Content="{Binding ConverterParameter='Pallet 발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource  Content_MainButtonNoMinWidthSpecialStyle}"  Click="btnShippingNotePrint_Click"/>
                                </Grid>
                                <Grid Grid.Row="1" Margin="8">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="50"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Border  BorderThickness="1" Grid.ColumnSpan="99" Grid.RowSpan="99" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Grid Grid.Row="1" Grid.ColumnSpan="2">
                                        <Border Grid.Column="0" BorderThickness="2,2,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                            <TextBlock x:Name="txtPageNum" Grid.Column="0" FontSize="30" FontWeight="ExtraBold" HorizontalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="2*"/>
                                            <RowDefinition Height="2*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="1.5*"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Border  BorderThickness="2,2,2,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" BorderThickness="2,2,0,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                <TextBlock Margin="10,0,0,0" Text="거래선명 :" FontSize="20" FontWeight="ExtraBold"/>
                                            </Border>
                                            <Grid Grid.Column="1">
                                                <Border Grid.Column="0" BorderThickness="2,2,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBox x:Name="txtVendorName" Grid.Column="1" VerticalAlignment="Stretch" VerticalContentAlignment="Top" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="25" FontWeight="ExtraBold" />
                                                </Border>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" BorderThickness="2,0,0,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                <TextBlock  Margin="10,0,0,0" Grid.Column="0" Text="선적번호 :" FontSize="20" FontWeight="ExtraBold"/>
                                            </Border>
                                            <Grid Grid.Column="1">
                                                <Border Grid.Column="1" BorderThickness="2,0,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBox x:Name="txtShipNo" Grid.Column="1" VerticalAlignment="Stretch" VerticalContentAlignment="Top" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="30" FontWeight="ExtraBold" />
                                                </Border>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="3" Grid.RowSpan="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" BorderThickness="2,0,0,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                <TextBlock Margin="10,0,0,0" Grid.Column="0" Text="제 품 명 :" FontSize="20" FontWeight="ExtraBold"/>
                                            </Border>
                                            <Grid Grid.Column="1">
                                                <Border Grid.Column="1" BorderThickness="2,0,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBox x:Name="txtModel" Grid.Column="1" VerticalAlignment="Stretch" VerticalContentAlignment="Center" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="25" FontWeight="ExtraBold" />
                                                </Border>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="4" Visibility="Collapsed">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" BorderThickness="2,0,0,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                <TextBlock Margin="10,0,0,0" Grid.Column="0" Text="R / N :" FontSize="20" FontWeight="ExtraBold"/>
                                            </Border>
                                            <Grid Grid.Column="1">
                                                <Border Grid.Column="1" BorderThickness="2,0,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBox x:Name="txtRN"  Grid.Column="1" VerticalAlignment="Stretch" VerticalContentAlignment="Center" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="25" FontWeight="ExtraBold" />
                                                </Border>
                                            </Grid>
                                        </Grid>
                                        <Grid Grid.Row="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="120"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Column="0" BorderThickness="2,0,0,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                <TextBlock Margin="10,0,0,0" Grid.Column="0" Text="수     량 :" FontSize="20" FontWeight="ExtraBold"/>
                                            </Border>
                                            <Grid Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0"  BorderThickness="2,0,0,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBox x:Name="txtQty"  Grid.Column="0"  VerticalAlignment ="Stretch" VerticalContentAlignment="Center" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="25" FontWeight="ExtraBold" />
                                                </Border>
                                                <Border Grid.Column="1"  BorderThickness="0,0,2,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBlock  Grid.Column="1" Text="EA" FontSize="30" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                                                </Border>
                                            </Grid>
                                        </Grid>
                                        
                                    </Grid>
                                    
                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="2*"/>
                                            <RowDefinition Height="2*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="1.5*"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0">
                                            <Border Grid.Column="1"  BorderThickness="0,2,2,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                <TextBlock  Grid.Column="1" Text="생산정보(라벨 BOX) 정확성 체크" FontSize="15" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                        <Grid Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0"  BorderThickness="0,2,2,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBlock  Grid.Column="1" Margin="20,0,20,0"  Text="협력업체" FontSize="15" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                                <Border Grid.Column="1"  BorderThickness="0,2,2,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBox  x:Name="txtPartner1" Grid.Column="0"  VerticalAlignment ="Stretch" VerticalContentAlignment="Center" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="25" FontWeight="ExtraBold" />
                                                </Border>
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Border Grid.Column="0"  BorderThickness="0,2,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBlock  Grid.Column="1" Text="제품명(수량),파렛트수, 선적NO 일치여부" FontSize="15" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                            </Grid>

                                        </Grid>
                                        
                                        <Grid Grid.Row="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0"  BorderThickness="0,0,2,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBlock  Grid.Column="1" Margin="20,0,20,0"  Text="물  류" FontSize="15" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                                <Border Grid.Column="1"  BorderThickness="0,0,2,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBox   x:Name="txtLogis1" Grid.Column="0"  VerticalAlignment ="Stretch" VerticalContentAlignment="Center" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="25" FontWeight="ExtraBold" />
                                                </Border>
                                            </Grid>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0"  BorderThickness="0,2,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBlock  Grid.Column="1" Margin="20,0,20,0"  Text="협력업체" FontSize="15" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                                <Border Grid.Column="1"  BorderThickness="0,2,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBox   x:Name="txtPartner2" Grid.Column="0" VerticalAlignment ="Stretch" VerticalContentAlignment="Center" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="25" FontWeight="ExtraBold" />
                                                </Border>
                                            </Grid>

                                        </Grid>
                                        <Grid Grid.Row="3">
                                            <Border Grid.Column="1"  BorderThickness="0,0,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                <TextBlock  Grid.Column="1" Text="상차 작업 정확성 체크(거래명세서 대조)" FontSize="15" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                        </Grid>
                                        <Grid Grid.Row="4">
                                            <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0"  BorderThickness="0,0,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                    <TextBlock  Grid.Column="1" Margin="20,0,20,0"  Text="물  류" FontSize="15" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </Border>
                                            <Border Grid.Column="1"  BorderThickness="0,0,2,2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                <TextBox  x:Name="txtLogis2"  Grid.Column="0" VerticalAlignment ="Stretch" VerticalContentAlignment="Center" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="25" FontWeight="ExtraBold" />
                                            </Border>
                                        </Grid>
                                        <Grid Grid.Row="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="100"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border x:Name="borderRemark" Grid.Column="0"  BorderThickness="0,0,2,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}" Visibility="Collapsed">
                                                <TextBlock  Grid.Column="1" Margin="20,0,20,0"  Text="비  고" FontSize="15" FontWeight="ExtraBold" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>
                                            <Border Grid.Column="1"  BorderThickness="0,0,2,0" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                                <TextBox x:Name="txtRemark"  Grid.Column="0"  VerticalAlignment ="Stretch" VerticalContentAlignment="Top" AcceptsReturn="True" Height="Auto" VerticalScrollBarVisibility="Auto" TextWrapping="Wrap" FontSize="25" FontWeight="ExtraBold" Visibility="Collapsed"/>
                                            </Border>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>

                    <Grid x:Name="Worker" Grid.Row="2">
                        <Border Grid.Row="6" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                        <Grid Grid.Row="6" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="0"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtShift" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 10, 3" />
                                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='작업시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtShiftDateTime" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 10, 3" />
                                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="0" Grid.Column="5" x:Name="txtWorker" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 3, 3" />
                                <uc:UcBaseButton x:Name="btnShift" Grid.Column="6" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" IsCancel="True" Click="btnShift_Click"/>
                                <TextBox Grid.Row="0" Grid.Column="7" x:Name="txtShiftStartTime" IsReadOnly="True"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="3, 3, 3, 3" Visibility="Collapsed" />
                                <TextBox Grid.Row="0" Grid.Column="7" x:Name="txtShiftEndTime" IsReadOnly="True"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="3, 3, 3, 3" Visibility="Collapsed" />
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
