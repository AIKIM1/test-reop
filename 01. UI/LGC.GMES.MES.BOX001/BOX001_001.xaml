<UserControl x:Class="LGC.GMES.MES.BOX001.BOX001_001"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded"
             Initialized="UserControl_Initialized"
            >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="SRS포장출고">
            <Grid>
                <c1:C1TabControl>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='SRS출고'}" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="51"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!--search Area-->
                                <Border Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="13"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>


                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='제품코드', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>

                                        <uc:UcBaseComboBox Grid.Column="2" x:Name="cboProductSRSPack"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                    </Grid>
                                    <uc:UcBaseButton  Grid.Row="9" Grid.Column="7" x:Name="btnProductRefresh" Content="{Binding ConverterParameter=제품Refresh,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Height="30" Click="btnProductRefresh_Click"/>
                                    <uc:UcBaseButton x:Name="btnSearch"  Grid.Column="9" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Center" Click="btnSearch_Click"/>
                                </Grid>

                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="2*"/>
                                            <RowDefinition Height="8"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="45"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                            <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="4" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="8"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock  Grid.Row="0" Grid.Column="0"  Style="{StaticResource Content_ModuleTitleStyle}">
                                                 <Run Text="{Binding ConverterParameter='PALLET리스트', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                                </TextBlock>

                                                <uc:UcBaseButton  Grid.Row="0" Grid.Column="2" x:Name="btnPrint" Content="{Binding ConverterParameter=포장카드발행,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Height="30" Click="btnPrint_Click"/>

                                            </Grid>
                                            
                                            
                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="8"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="8"/>
                                                </Grid.RowDefinitions>

                                                <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgPalletList" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" LoadedColumnHeaderPresenter="dgPalletList_LoadedColumnHeaderPresenter" BeganEdit="dgPalletList_BeganEdit" LoadedRowPresenter="dgPalletList_LoadedRowPresenter" >
                                                    
                                                    <c1:C1DataGrid.Resources>
                                                        <DataTemplate x:Key="ResultTemplate">
                                                            <Grid>
                                                                <Grid.ColumnDefinitions>
                                                                    <ColumnDefinition Width="*"/>
                                                                </Grid.ColumnDefinitions>
                                                                <TextBlock Grid.Column="1" Text="{Binding}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold" Foreground="#FF333333" FontFamily="/LGC.GMES.MES.ControlsLibrary;Component/#맑은 고딕"></TextBlock>
                                                            </Grid>
                                                        </DataTemplate>
                                                    </c1:C1DataGrid.Resources>


                                                    <c1:C1DataGrid.Columns>
                                                        <c1:DataGridCheckBoxColumn       Header="CHK"   Binding="{Binding CHK}" IsReadOnly="False" Width="Auto" CanUserSort="False"/>
                                                        <c1:DataGridTextColumn        Header = "PALLETID"     Binding = "{Binding BOXID}"   HorizontalAlignment="Center" IsReadOnly="True"/>
                                                        <c1:DataGridTextColumn        Header = "프로젝트명"     Binding = "{Binding PRJT_NAME}"   HorizontalAlignment="Center" IsReadOnly="True"/>
                                                        <c1:DataGridTextColumn        Header = "모델ID"     Binding = "{Binding MODLID}"   HorizontalAlignment="Center" IsReadOnly="True"/>
                                                        <c1:DataGridTextColumn        Header = "제품코드"     Binding = "{Binding PRODID}"   HorizontalAlignment="Center"  IsReadOnly="True"/>
                                                        <c1:DataGridTextColumn       Header = "PANCAKE수량"       Binding = "{Binding TOTALQTY}"         HorizontalAlignment="Center" IsReadOnly="True" Format="###,###,##0.##" />
                                                        <c1:DataGridTextColumn        Header = "PALLET구성일시"       Binding = "{Binding PACKDTTM}"   HorizontalAlignment="Center" IsReadOnly="True"/>
                                                        <c1:DataGridTextColumn       Header = "PANCAKE수량2"       Binding = "{Binding TOTALQTY2}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn       Header = "특이사항"       Binding = "{Binding PACK_NOTE}"         HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    </c1:C1DataGrid.Columns>

                                                    <c1:C1DataGrid.BottomRows>
                                                        <c1:DataGridSummaryRow x:Name="summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                                    </c1:C1DataGrid.BottomRows>

                                                </c1:C1DataGrid>
                                            </Grid>
                                        </Grid>

                                        <GridSplitter Grid.Row="1" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                        <Grid Grid.Row="2">
                                            
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="13"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="10"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="10"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="10"/>
                                            </Grid.ColumnDefinitions>

                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="51"/>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="8"/>
                                            </Grid.RowDefinitions>
                                            
                                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="17" Grid.RowSpan="11" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                            <TextBlock  Grid.Row="1"  Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right">
                                                <Run Text="{Binding ConverterParameter='PALLET수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBox                Grid.Row="1" Grid.Column="3" x:Name="txtPalletQty"        Style="{StaticResource SearchCondition_TextBoxStyle}" TextAlignment="Right" Text="0" Margin="0"/>

                                            <TextBlock  Grid.Row="1"  Grid.Column="5" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right">
                                                <Run Text="{Binding ConverterParameter='PANCAKE수', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                            </TextBlock>
                                            <TextBox                Grid.Row="1" Grid.Column="7" x:Name="txtPacakeQty"        Style="{StaticResource SearchCondition_TextBoxStyle}" TextAlignment="Right" Text="0" Margin="0"/>

                                            <TextBlock  Grid.Row="1"  Grid.Column="9" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right">
                                                <Run Text="{Binding ConverterParameter='출고일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                            </TextBlock>
                                            <ctrlLib:LGCDatePicker  Grid.Row="1" Grid.Column="11" x:Name="PackOutDate"  DatepickerType="Date"  Margin="0"/>

                                            <TextBlock  Grid.Row="1" Grid.Column="13" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right">
                                                <Run Text="{Binding ConverterParameter='출고라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                            </TextBlock>
                                            <uc:UcBaseComboBox   Grid.Row="1"   Grid.Column="15" x:Name="cboOutLine"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Margin="0"/>

                                            <TextBlock  Grid.Row="3" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Right">
                                                <Run Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                            </TextBlock>
                                            <RichTextBox     Grid.Row="3" Grid.Column="3" x:Name="rtxRemark" Margin="0" Grid.ColumnSpan="13"/>
                                       

                                            <Grid Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="15">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="8"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <uc:UcBaseButton  Grid.Row="9" Grid.Column="2" x:Name="btnSaveRemark" Content="{Binding ConverterParameter=특이사항저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSaveRemark_Click"/>
                                                <uc:UcBaseButton  Grid.Row="9" Grid.Column="4" x:Name="btnPalletInit" Content="{Binding ConverterParameter=PALLET초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnPalletInit_Click"/>
                                                <uc:UcBaseButton  Grid.Row="9" Grid.Column="6" x:Name="btnPackOut" Content="{Binding ConverterParameter=포장출고,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnPackOut_Click"/>
                                            </Grid> 
                                           
                                           
                                        </Grid>
                                        
                                    </Grid>

                                    <GridSplitter Grid.Column="1" Grid.Row="2" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                                    
                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="45"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="4" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="0.5*"/>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="8"/>
                                            </Grid.ColumnDefinitions>

                                            <TextBlock  Grid.Row="0" Grid.Column="1"  Style="{StaticResource Content_ModuleTitleStyle}" HorizontalAlignment="Left">
                                                 <Run Text="{Binding ConverterParameter='구성PANCAKE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                            </TextBlock>

                                            <TextBox              Grid.Column="2" x:Name="txtAddPancakeId"        Style="{StaticResource SearchCondition_TextBoxStyle}" TextAlignment="Right" Margin="0"/>
                                            <uc:UcBaseButton  Grid.Row="0" Grid.Column="4" x:Name="btnAddPancake" Content="{Binding ConverterParameter=Pancake추가,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Height="30"  Click="btnAddPancake_Click"/>

                                        </Grid>
                                       
                                        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Grid.RowSpan="4" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>


                                        <Grid Grid.Row="1" Grid.Column="1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="8"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="8"/>
                                            </Grid.RowDefinitions>

                                            <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgPancakeList" HeadersVisibility="Column" SelectionMode="SingleCell" LoadedRowPresenter="dgPancakeList_LoadedRowPresenter" IsReadOnly="False">

                                                <c1:C1DataGrid.Resources>
                                                    <DataTemplate x:Key="ResultTemplate">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="1" Text="{Binding}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center" FontSize="12" FontWeight="Bold" Foreground="#FF333333" FontFamily="/LGC.GMES.MES.ControlsLibrary;Component/#맑은 고딕"></TextBlock>
                                                        </Grid>
                                                    </DataTemplate>
                                                </c1:C1DataGrid.Resources>

                                                <c1:C1DataGrid.Columns>

                                                    <c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="삭제">
                                                        <c1:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Button  x:Name="btnDelete" Content="{Binding ConverterParameter=삭제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDelete_Click"/>
                                                            </DataTemplate>
                                                        </c1:DataGridTemplateColumn.CellTemplate>
                                                    </c1:DataGridTemplateColumn>
                                                    
                                                    <c1:DataGridTextColumn   Header = "BOXID"         Binding = "{Binding BOXID}"   HorizontalAlignment="Center"  Visibility="Collapsed" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn   Header = "PANCAKEID"     Binding = "{Binding LOTID}"   HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn   Header = "길이"          Binding = "{Binding WIPQTY}"   HorizontalAlignment="Center" IsReadOnly="True" Format="###,###,##0.##" />
                                                    <c1:DataGridTextColumn   Header = "프로젝트명"    Binding = "{Binding PRJT_NAME}"   HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn   Header = "모델ID"        Binding = "{Binding MODLID}"   HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn   Header = "제품코드"       Binding = "{Binding PRODID}"         HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn   Header = "WIPQTY2"       Binding = "{Binding WIPQTY2}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn   Header = "WIPHOLD"       Binding = "{Binding WIPHOLD}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn   Header = "VLD_DATE"       Binding = "{Binding VLD_DATE}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn   Header = "PROD_VER_CODE"       Binding = "{Binding PROD_VER_CODE}"         HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn   Header = "MODLNAME"       Binding = "{Binding MODLNAME}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn   Header = "UNIT_CODE"       Binding = "{Binding UNIT_CODE}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn   Header = "EQSGID"       Binding = "{Binding EQSGID}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>

                                                    <!--<c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="삭제">
                                                        <c1:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Button  x:Name="btnDelete" Content="{Binding ConverterParameter=삭제,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDelete_Click"/>
                                                            </DataTemplate>
                                                        </c1:DataGridTemplateColumn.CellTemplate>
                                                    </c1:DataGridTemplateColumn>-->
                                                </c1:C1DataGrid.Columns>

                                                <c1:C1DataGrid.BottomRows>
                                                    <c1:DataGridSummaryRow  RowStyle="{StaticResource SummaryRowStyle}"/>
                                                </c1:C1DataGrid.BottomRows>


                                            </c1:C1DataGrid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                                
                                
                                
                                
                            </Grid>
                            
                        </Grid>

                    </c1:C1TabItem>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='PALLET구성대기'}" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="10"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="1" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="51"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="13"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='AREA', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <uc:UcBaseComboBox   Grid.Column="2" x:Name="cboAreaSRS"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                        
                                    </Grid>

                                    <Grid Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <uc:UcBaseComboBox   Grid.Column="2" x:Name="cboEquipmentSegmentSRS"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                    </Grid>

                                    <Grid Grid.Column="5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>

                                        <Grid Grid.Column="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="2*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <uc:UcBaseComboBox  Grid.Column="0" x:Name="cboModelSRS"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                            <TextBox Grid.Column="1" x:Name="txtModelID"        Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtModelID_KeyDown"/>
                                        </Grid>
                                        
                                    </Grid>

                                    <Grid Grid.Column="7">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="6*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='슬리터생산설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>

                                        <uc:UcBaseComboBox  Grid.Column="2" x:Name="cboEquipmentSlitter"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    </Grid>

                                    <uc:UcBaseButton x:Name="btnSearchPack"  Grid.Column="9" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Center" Click="btnSearchPack_Click"/>
                                </Grid>

                               

