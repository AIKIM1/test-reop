<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_101"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="984" d:DesignWidth="1280"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="특성 공정실적 관리">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="84"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="4*"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <Grid x:Name="ButtonArea" Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="3"  Margin="0,-47,0,0">
                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="34" />
                        </Grid.ColumnDefinitions>

                        <uc:UcBaseButton   Grid.Row="0" Grid.Column="1" x:Name="btnRunStart"     Content="{Binding ConverterParameter='작업시작',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Click="btnRunStart_Click" Style="{StaticResource Content_MainControl01Style}" Margin="5,0,0,0"/>
                        <uc:UcBaseButton   Grid.Row="0" Grid.Column="2" x:Name="btnCancel"       Content="{Binding ConverterParameter='작업취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Click="btnCancel_Click" Style="{StaticResource Content_MainControl03Style}" Margin="5,0,0,0"/>
                        <uc:UcBaseButton   Grid.Row="0" Grid.Column="3" x:Name="btnEnd"          Content="{Binding ConverterParameter='실적확정',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Click="btnEnd_Click" Style="{StaticResource Content_MainControl04Style}" Margin="5,0,0,0"/>
                        <uc:UcBaseButton   Grid.Row="0" Grid.Column="4" x:Name="btnReport"     Content="{Binding ConverterParameter='작업일지발행',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" PreviewMouseDown="btn_PreviewMouseDown" Click="btnReport_Click" Style="{StaticResource Content_MainControl02Style}" Margin="5,0,0,0"/>
                        <uc:UcBaseButton   Grid.Row="0" Grid.Column="5" x:Name="btnShip"     Content="{Binding ConverterParameter='출하발송',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Click="btnShip_Click" Style="{StaticResource Content_MainControl05Style}" Margin="5,0,0,0"/>
                        <uc:UcBaseButton   Grid.Row="0" Grid.Column="6" x:Name="btnCancelShip"      Content="{Binding ConverterParameter='발송취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Click="btnCancelShip_Click" Style="{StaticResource Content_MainControl03Style}" Margin="5,0,0,0"/>
                    </Grid>
                </Grid>

                <!--조회 영역-->
                <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                <Grid   Grid.Row="0" Grid.Column="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="13"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=기간, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />

                        <Grid  Grid.Row="0" Grid.Column="1" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <ctrlLib:LGCDatePicker Grid.Column="0"  x:Name="dtpDateFrom"  DatepickerType="Date"/>
                            <TextBlock  Grid.Column="1" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                            <ctrlLib:LGCDatePicker Grid.Column="2"  x:Name="dtpDateTo"  DatepickerType="Date"/>
                        </Grid>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=라인, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=설비, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipment_Search" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=LOTID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtLotID_Search" Style="{StaticResource SearchCondition_TextBoxStyle}" />
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=작업구분, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboWorkType_Search" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="5">
                        <uc:UcBaseButton x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" PreviewMouseDown="btn_PreviewMouseDown" Click="btnSearch_Click" Cursor="Hand" />
                    </Grid>
                </Grid>
                <!--조회 영역-->

                <!--ROW 01-->
                <Border Grid.Row="2" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                <Grid   Grid.Row="2" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                    <Grid   Grid.Row="0" Grid.Column="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='포장공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                    </Grid>
                    <Grid   Grid.Row="1" Grid.Column="0" Margin="8" >
                        <c1:C1DataGrid x:Name="dgSearchResult" Grid.Row="0" IsReadOnly="False" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="SingleCell" CommittedEdit="dgSearchResult_CommittedEdit">
                            <c1:C1DataGrid.Resources>
                                <DataTemplate x:Key="ResultTemplate">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="1" Text="{Binding}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </c1:C1DataGrid.Resources>
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridCheckBoxColumn       Binding="{Binding CHK}"      IsReadOnly="False"  />
                                <c1:DataGridTextColumn           Header="포장ID"       Binding="{Binding BOXID}"            HorizontalAlignment="Left"     IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="조립LOTID"       Binding="{Binding PKG_LOTID}"            HorizontalAlignment="Center"   IsReadOnly="True" />
                                <c1:DataGridTextColumn           Header="PRJT_NAME"       Binding="{Binding PROJECT}"            HorizontalAlignment="Center"   IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="MDLLOT_ID"       Binding="{Binding MDLLOT_ID}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="PRODID"       Binding="{Binding PRODID}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                <c1:DataGridTextColumn           Header="작업구분"       Binding="{Binding PACK_WRK_TYPE_CODE}"            HorizontalAlignment="Center"  Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="작업구분"       Binding="{Binding PACK_WRK_TYPE_NAME}"            HorizontalAlignment="Center" IsReadOnly="True" />
                                <c1:DataGridTextColumn           Header="작업일"       Binding="{Binding PACKDTTM}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="출하처"       Binding="{Binding SHIPTO_ID}"            HorizontalAlignment="Center"  Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="출하처"       Binding="{Binding SHIPTO_NAME}"            HorizontalAlignment="Center"  Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="INBOX_TYPE"       Binding="{Binding INBOX_TYPE}"            HorizontalAlignment="Center"  Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="INBOX_TYPE_NAME"       Binding="{Binding INBOX_TYPE_NAME}"            HorizontalAlignment="Center"  Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="상태"       Binding="{Binding BOXSTAT}"            HorizontalAlignment="Center"  Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="상태"       Binding="{Binding BOXSTAT_NAME}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="투입량"       Binding="{Binding INPUT_QTY}"            HorizontalAlignment="Center"   Format="#,##0" IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="양품량"       Binding="{Binding TOTAL_QTY}"            HorizontalAlignment="Center"   Format="#,##0" IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="불량수량"       Binding="{Binding DEFECT_QTY}"            HorizontalAlignment="Center"   Format="#,##0" IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="WMS관리"       Binding="{Binding RCV_ISS_STAT_CODE}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn           Header="WMS관리"       Binding="{Binding RCV_ISS_STAT_NAME}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="출하가능여부"       Binding="{Binding ENABLE_SHIPPING}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="작업조"       Binding="{Binding SHFT_ID}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="작업조"       Binding="{Binding SHFT_NAME}"            HorizontalAlignment="Center"  IsReadOnly="True"/>
                                <c1:DataGridTextColumn           Header="작업자"       Binding="{Binding ACTUSER}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="작업자"       Binding="{Binding ACTUSERNAME}"            HorizontalAlignment="Center"  IsReadOnly="True" />
                                <c1:DataGridTextColumn           Header="PACK_EQSGID"       Binding="{Binding PACK_EQSGID}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="PACK_EQPTID"       Binding="{Binding PACK_EQPTID}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="PACK_WRK_TYPE"       Binding="{Binding PACK_WRK_TYPE}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="PKG_LOTID"       Binding="{Binding PKG_LOTID}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />
                                <c1:DataGridTextColumn           Header="PACK_NOTE"       Binding="{Binding PACK_NOTE}"            HorizontalAlignment="Stretch" Visibility="Collapsed" />                                
                            </c1:C1DataGrid.Columns>
                            <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                <c1:C1GroupingWithSummariesBehavior/>
                            </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>

                            <c1:C1DataGrid.BottomRows>
                                <c1:DataGridSummaryRow x:Name="summary_Main" RowStyle="{StaticResource SummaryRowStyle}"/>
                            </c1:C1DataGrid.BottomRows>
                        </c1:C1DataGrid>
                    </Grid>
                </Grid>
                <GridSplitter Grid.Row="3" Grid.Column="0" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                <!--ROW 02-->
                <Grid   Grid.Row="4" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="8"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!--ROW 02 COL 01-->
                    <Border Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                    <c1:C1TabControl  Grid.Column="0">
                        <c1:C1TabItem Header="{Binding ConverterParameter=등급수량, Converter={StaticResource GlobalObjectDicConverter}}" Margin="0" >
                            
                            <Grid Margin="8">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="3"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                
                                <Grid   Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <uc:UcBaseButton x:Name="btnAdd_Inbox"    Content="{Binding ConverterParameter='추가',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}"  Click="btnAdd_Inbox_Click"      Margin="4,0,0,0"/>
                                        <uc:UcBaseButton x:Name="btnSave_Inbox"    Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" PreviewMouseDown="btn_PreviewMouseDown" Click="btnSave_Inbox_Click" Cursor="Hand" />
                                    </StackPanel>
                                </Grid>

                                <Grid   Grid.Row="2" Grid.Column="0">
                                    <c1:C1DataGrid x:Name="dgInbox" Grid.Row="0" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="SingleCell" CommittedEdit="dgInbox_CommittedEdit" >
                                        <c1:C1DataGrid.Resources>
                                            <DataTemplate x:Key="ResultTemplate">
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="1" Text="{Binding}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                                                </Grid>
                                            </DataTemplate>
                                        </c1:C1DataGrid.Resources>
                                        
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn           Header="BOXID"       Binding="{Binding BOXID}"                   HorizontalAlignment="Center"   Visibility="Collapsed"/>
                                            <c1:DataGridComboBoxColumn           Header="등급"       Binding="{Binding PRDT_GRD_CODE}"        HorizontalAlignment="Center"   DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" EditOnSelection="True" />
                                            <c1:DataGridComboBoxColumn           Header="레벨"       Binding="{Binding PRDT_GRD_LEVEL}"       HorizontalAlignment="Center"   DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" EditOnSelection="True" />
                                            <c1:DataGridNumericColumn            Header="수량"       Binding="{Binding TOTAL_QTY}"                HorizontalAlignment="Center"  Format="#,##0"/>
                                            <c1:DataGridTextColumn            Header="YN"       Binding="{Binding YN}"                HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="삭제">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button  x:Name="btnDelete_Inbox" Width="Auto" Content="{Binding ConverterParameter=삭제, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                                 Style="{DynamicResource ButtonDeleteStyle}" Click="btnDelete_Inbox_Click" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                        </c1:C1DataGrid.Columns>
                                        <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                            <c1:C1GroupingWithSummariesBehavior/>
                                        </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>

                                        <c1:C1DataGrid.BottomRows>
                                            <c1:DataGridSummaryRow x:Name="summary_Inbox" RowStyle="{StaticResource SummaryRowStyle}"/>
                                        </c1:C1DataGrid.BottomRows>
                                    </c1:C1DataGrid>
                                </Grid>
                            </Grid>
                        </c1:C1TabItem>
                        <c1:C1TabItem Header="{Binding ConverterParameter=불량수량, Converter={StaticResource GlobalObjectDicConverter}}" Margin="0" Visibility="Collapsed" >
                            <c1:C1DataGrid x:Name="dgData0121" Grid.Row="0" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="SingleCell" Margin="8" >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn           Header="불량요인"       Binding="{Binding TEXTCOLUMN01}"            HorizontalAlignment="Center"    />
                                    <c1:DataGridTextColumn           Header="수량"       Binding="{Binding TEXTCOLUMN03}"            HorizontalAlignment="Center"  />        
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </c1:C1TabItem>

                        <c1:C1TabItem Header="{Binding ConverterParameter=기타수량, Converter={StaticResource GlobalObjectDicConverter}}" Margin="0" Visibility="Collapsed" >
                            <c1:C1DataGrid x:Name="dgData01111" Grid.Row="0" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="SingleCell" Margin="8" >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn           Header="기타요인"       Binding="{Binding TEXTCOLUMN01}"            HorizontalAlignment="Center"    />
                                    <c1:DataGridTextColumn           Header="수량"       Binding="{Binding TEXTCOLUMN03}"            HorizontalAlignment="Center"  />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </c1:C1TabItem>
                    </c1:C1TabControl>

                    <!--ROW 02 COL 02-->
                    <Border Grid.Column="2" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                    <Grid   Grid.Column="2" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                        </Grid.RowDefinitions>

                        <!--Sub 영역 01 Title-->
                        <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <Grid   Grid.Row="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='포장공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                        </Grid>
                        <!--Sub 영역 01 Title-->

                        <!--Sub 영역 01 Content-->
                        <Grid   Grid.Row="1" Grid.Column="0" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="8"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <Grid   Grid.Row="1" Grid.Column="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="3"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>

                                <Grid   Grid.Row="0" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <uc:UcBaseButton x:Name="btnSave"   Grid.Column="1"  Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}"  PreviewMouseDown="btn_PreviewMouseDown" Click="btnSave_Click" Cursor="Hand"  Margin="4,0,0,0"/>
                                </Grid>

                                <Grid   Grid.Row="2" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <!--title-->
                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="5" Background="#FAFAFA" BorderThickness="1" BorderBrush="#B3B3B3"></Border>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#c8294b" ></Border>

                                    <TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='작업일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='작업구분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="2" Grid.Column="2" Text="{Binding ConverterParameter='Inbox종류', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="3" Grid.Column="0" Text="{Binding ConverterParameter='모델LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="3" Grid.Column="2" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="4" Grid.Column="0" Text="{Binding ConverterParameter='출하처', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="4" Grid.Column="2" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="5" Grid.Column="0" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="5" Grid.Column="2" Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right"/>
                                    <TextBlock  Grid.Row="6" Grid.Column="0" Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_TextBlockStyle}" FontWeight="SemiBold" HorizontalAlignment="Right" Margin="3,3,8,3"/>

                                    <uc:UcBaseComboBox  Grid.Row="1"  Grid.Column="1" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    <!--<ctrlLib:LGCDatePicker Grid.Row="1"  Grid.Column="3"  x:Name="dtpDate"  DatepickerType="Date"/>-->
                                    <TextBox Grid.Row="1" Grid.Column="3"  x:Name="txtDate"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                    
                                    <!--2row-->
                                    <uc:UcBaseComboBox  Grid.Row="2"  Grid.Column="1" x:Name="cboWorkType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    <uc:UcBaseComboBox  Grid.Row="2"  Grid.Column="3" x:Name="cboInBox" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                    <!--3row-->
                                    <Grid Grid.Row="3" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox  Grid.Column="0"  x:Name="txtMDLLOT"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"  CharacterCasing="Upper" />
