                                    </Grid>
                                    <TextBox Grid.Row="3"  Grid.Column="3" x:Name="txtProjectName"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                                    <!--4row-->
                                    <Grid Grid.Row="4" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox  Grid.Column="0"  x:Name="txtShip_To"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"  CharacterCasing="Upper" />
                                        <uc:UcBaseButton   Grid.Column="1"  x:Name="btnShip_To"  Style="{DynamicResource Content_SearchButtonStyle}" Click="btnShip_To_Click"/>
                                    </Grid>
                                    <TextBox    Grid.Row="4" Grid.Column="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtLotID" CharacterCasing="Upper" />

                                    <!--5row-->
                                    <Grid Grid.Row="5" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox  Grid.Column="0"  x:Name="txtWorker"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"  CharacterCasing="Upper" />
                                        <uc:UcBaseButton   Grid.Column="1"  x:Name="btnShift"  Style="{DynamicResource Content_SearchButtonStyle}" Click="btnShift_Click"/>
                                    </Grid>
                                    <TextBox    Grid.Row="5" Grid.Column="3" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" x:Name="txtShift" CharacterCasing="Upper" />

                                    <!--6row-->
                                    <RichTextBox        Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtNote" BorderThickness="1" BorderBrush="#FFC3C3C3" Margin="3">
                                        <RichTextBox.Resources>
                                            <Style TargetType="{x:Type Paragraph}">
                                                <Setter Property="Margin" Value="5"/>
                                            </Style>
                                        </RichTextBox.Resources>
                                        <FlowDocument LineHeight="10" >
                                            <Paragraph FontSize="10pt" LineHeight="10pt"  LineStackingStrategy="BlockLineHeight" Tag="TEST">
                                            </Paragraph>
                                        </FlowDocument>
                                    </RichTextBox>
                                </Grid>
                            </Grid>
                        </Grid>
                        <!--Sub 영역 01 Content-->

                    </Grid>

                </Grid>

                <Border Grid.Row="6" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                <Grid Grid.Row="6" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="2*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="0"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='(*)작업조', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                        <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtShift_Main" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 10, 3" />
                        <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='(*)작업자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                        <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtWorker_Main" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 3, 3" />
                        <uc:UcBaseButton x:Name="btnShift_Main" Grid.Column="4" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" IsCancel="True" Click="btnShift_Main_Click" />
                    </Grid>
                </Grid>
                
            </Grid>
        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
