<UserControl  xmlns:UserControls="clr-namespace:LGC.GMES.MES.CMM001.UserControls;assembly=LGC.GMES.MES.CMM001"
    xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_240"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Pallet 생성">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="6*"/>
                        <RowDefinition Height="4"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="34"/>
                            </Grid.ColumnDefinitions>
                            <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" MouseLeave="btnExtra_MouseLeave" VerticalAlignment="Bottom" Height="32">
                                <c1:C1DropDownButton.Header>
                                    <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                                </c1:C1DropDownButton.Header>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="9" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="5" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="9" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="9"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="9"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                    <!--추가기능버튼-->
                                    <uc:UcBaseButton x:Name="btnUnpack"              Grid.Row="1"  Grid.Column="1"   Content="{Binding ConverterParameter='Box해체',                   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnUnpackBox_Click" />
                                    <uc:UcBaseButton x:Name="btninbox"               Grid.Row="1"  Grid.Column="1"   Content="{Binding ConverterParameter='INBOX라벨발행',             Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnBoxLabelPrint_Click" Visibility="Collapsed" />
                                    <uc:UcBaseButton x:Name="btnInfo"                Grid.Row="3"  Grid.Column="1"   Content="{Binding ConverterParameter='셀정보조회',                Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnInfo_Click"  />
                                    <uc:UcBaseButton x:Name="btnshiptochange"        Grid.Row="5"  Grid.Column="1"   Content="{Binding ConverterParameter='포장정보변경',              Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnshiptochange_Click"  />
                                    <uc:UcBaseButton x:Name="btnPltSplit"            Grid.Row="7"  Grid.Column="1"   Content="{Binding ConverterParameter='Pallet분할',                Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnPltSplit_Click"  />
                                    <uc:UcBaseButton x:Name="btnChange"              Grid.Row="9"  Grid.Column="1"   Content="{Binding ConverterParameter='Cell 교체',                 Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnChange_Click"  />
                                    <uc:UcBaseButton x:Name="btnNonIm"               Grid.Row="11" Grid.Column="1"   Content="{Binding ConverterParameter='NON IM OUTBOX LABEL PRINT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnNonIm_Click"  />
                                    <uc:UcBaseButton x:Name="btnOutboxChangeShipto"  Grid.Row="13" Grid.Column="1"   Content="{Binding ConverterParameter='OUTBOX출하처변경',          Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnOutboxChangeShipto_Click"  />
                                    <uc:UcBaseButton x:Name="btnInboxCreate"         Grid.Row="15" Grid.Column="1"   Content="{Binding ConverterParameter='INBOX생성',                 Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnInboxCreate_Click"  />
                                </Grid>
                            </c1:C1DropDownButton>


                            <uc:UcBaseButton x:Name="btnRun"             Grid.Row="0" Grid.Column="3"   Content="{Binding ConverterParameter='Pallet 생성',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl01Style}" Click="btnRun_Click" VerticalAlignment="Top"/>
                            <uc:UcBaseButton x:Name="btnRunCancel"       Grid.Row="0" Grid.Column="5"   Content="{Binding ConverterParameter='작업취소',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnRunCancel_Click"  />
                            <uc:UcBaseButton x:Name="btnConfirm"         Grid.Row="0" Grid.Column="7"   Content="{Binding ConverterParameter='실적확정',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl04Style}" Click="btnConfirm_Click" />
                            <uc:UcBaseButton x:Name="btnConfirmCancel"   Grid.Row="0" Grid.Column="9"   Content="{Binding ConverterParameter='실적취소',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnConfirmCancel_Click"/>
                            <uc:UcBaseButton x:Name="btnOutput"          Grid.Row="0" Grid.Column="11"  Content="{Binding ConverterParameter='출고',             Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl04Style}" Click="btnShip_Click" />
                            <uc:UcBaseButton x:Name="btnOutputCancel"    Grid.Row="0" Grid.Column="13"  Content="{Binding ConverterParameter='출고취소',         Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnCancelShip_Click"  />
                            <uc:UcBaseButton x:Name="btnPrint"           Grid.Row="0" Grid.Column="15"  Content="{Binding ConverterParameter='PACKINGLIST발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnPrint_Click"/>
                        </Grid>
                    </Grid>

                    <Grid x:Name="SearchArea" Grid.Row="0">
                        <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="13"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter},  Mode=oneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="1" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath="" SelectedValueChanged="cboLine_SelectedValueChanged" />
                            </Grid>
                            <Grid Grid.Row="0" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='PalletID', Converter={StaticResource GlobalObjectDicConverter},  Mode=oneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtPalletID" Style="{StaticResource SearchCondition_TextBoxStyle}"   CharacterCasing="Upper" GotFocus="text_GotFocus"/>
                            </Grid>
                            <uc:UcBaseButton Grid.Row="1" Grid.Column="6" x:Name="btnSearch" Content="{Binding ConverterParameter='SEARCH', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                        </Grid>
                    </Grid>
                    <!--Search Area End-->

                    <Grid x:Name="ContentTop" Grid.Row="2">
                        <Border Grid.Row="0" Grid.Column="0" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border     Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid Grid.Row="0" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="15" />
                                </Grid.ColumnDefinitions>

                                <TextBlock  Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='작업PALLET', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}"/>

                                <Grid Grid.Column="3" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="1*" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="20" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="0" />
                                        <ColumnDefinition Width="0" />
                                        <ColumnDefinition Width="0" />
                                        <ColumnDefinition Width="0" />
                                    </Grid.ColumnDefinitions>

                                    <Border    Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Name="lblPacking" Tag="PACKING" Background="#E8F7C8" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <uc:UcBaseCheckBox  Grid.Row="1" Grid.Column="0"  x:Name="chkPacking" IsChecked="True" Checked="chkSearch_Checked" Unchecked="chkSearch_Unchecked" />
                                    <TextBlock Cursor="Hand"  Grid.Row="1" Grid.Column="2" Margin="0,0,5,0" Text="{Binding ConverterParameter='포장중', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                    <Border    Grid.Row="1" Grid.Column="4"  Grid.ColumnSpan="3" Name="lblPacked" Tag="PACKED"  Background="#E6F5FB" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <uc:UcBaseCheckBox  Grid.Row="1" Grid.Column="4"  x:Name="chkPacked" IsChecked="True"  Checked="chkSearch_Checked" Unchecked="chkSearch_Unchecked"/>
                                    <TextBlock Cursor="Hand"  Grid.Row="1" Grid.Column="6" Margin="0,0,5,0" Text="{Binding ConverterParameter='포장완료', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                    <Border    Grid.Row="1" Grid.Column="8"  Grid.ColumnSpan="3" Name="lblShipping" Tag="SHIPPING"  Background="#FFF6E6FB" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <uc:UcBaseCheckBox  Grid.Row="1" Grid.Column="8"  x:Name="chkShipping" IsChecked="True" Checked="chkSearch_Checked" Unchecked="chkSearch_Unchecked"/>
                                    <TextBlock Cursor="Hand"  Grid.Row="1" Grid.Column="10" Margin="0,0,5,0" Text="{Binding ConverterParameter='출고요청', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />

                                </Grid>
                            </Grid>

                            <Grid Grid.Row="1" Grid.Column="0">
                                <c1:C1DataGrid x:Name="dgPalletList" Grid.Row="0" IsReadOnly="True" HeadersVisibility="Column" RowHeight="Auto" SelectionMode="MultiRange" FrozenBottomRowsCount="1" LoadedCellPresenter="dgPalletList_LoadedCellPresenter" >
                                    <c1:C1DataGrid.Resources>
                                        <DataTemplate x:Key="ResultTemplate">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="1" Text="{Binding}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </c1:C1DataGrid.Resources>
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgPalletListChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgPalletListChoice" HorizontalAlignment="Center" Checked="dgPalletListChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn          Header="PALLETID"           Binding = "{Binding BOXID}"                 IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn          Header="포장구분코드"       Binding = "{Binding PROCID}"                IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="포장구분"           Binding = "{Binding PROCNAME}"              IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn          Header="작업유형코드"       Binding = "{Binding LOTTYPE}"               IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="작업유형"           Binding = "{Binding LOTYNAME}"              IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn          Header="PROJECT"            Binding = "{Binding PROJECT}"               IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn          Header="제품코드"           Binding = "{Binding PRODID}"                IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn          Header="제품코드"           Binding = "{Binding PRODNAME}"              IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="포장상태"           Binding = "{Binding BOXSTAT}"               IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="포장상태"           Binding = "{Binding BOXSTAT_NAME}"          IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn          Header="출고상태코드"       Binding = "{Binding RCV_ISS_STAT_CODE}"     IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="출고상태"           Binding = "{Binding RCV_ISS_STAT_NAME}"     IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridNumericColumn       Header="투입수량"           Binding = "{Binding WIPQTY}"                IsReadOnly="True"  HorizontalAlignment="Center" Format="#,##0" />
                                        <c1:DataGridNumericColumn       Header="포장수량"           Binding = "{Binding TOTAL_QTY}"             IsReadOnly="True"  HorizontalAlignment="Center" Format="#,##0" />
                                        <c1:DataGridNumericColumn       Header="OUTBOX수량"         Binding = "{Binding BOXQTY}"                IsReadOnly="True"  HorizontalAlignment="Center" Format="#,##0" />
                                        <c1:DataGridTextColumn          Header="수출/내수"          Binding = "{Binding EXP_DOM_TYPE_NAME}"     IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn          Header="수출/내수"          Binding = "{Binding EXP_DOM_TYPE_CODE}"     IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="출하처"             Binding = "{Binding SHIPTO_NAME}"           IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn          Header="출하처"             Binding = "{Binding SHIPTO_ID}"             IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridDateTimeColumn      Header="시작일시"           Binding = "{Binding  START_DTTM}"                              HorizontalAlignment="Center" Format="yyyy-MM-dd HH:mm" />
                                        <c1:DataGridDateTimeColumn      Header="종료일시"           Binding = "{Binding  END_DTTM}"                                HorizontalAlignment="Center" Format="yyyy-MM-dd HH:mm" />
                                        <c1:DataGridTextColumn          Header="작업조"             Binding="{Binding SHFT_ID}"                 IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn          Header="작업조"             Binding="{Binding SHFT_NAME}"               IsReadOnly="True"  HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn          Header="작업자"             Binding="{Binding ACTUSER}"                 IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn          Header="작업자"             Binding="{Binding ACTUSERNAME}"             IsReadOnly="True"  HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn          Header="MDLLOT_ID"          Binding = "{Binding MDLLOT_ID}"             IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="NOTE"               Binding="{Binding PACK_NOTE}"               IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="EQPTID"             Binding="{Binding EQPTID}"                  IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn          Header="EQPTNAME"           Binding="{Binding EQPTNAME}"                IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="PACKDTTM"           Binding="{Binding PACKDTTM}"                IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn          Header="상태조회용컬럼"     Binding = "{Binding BOXSTAT_LIST}"          IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn          Header="MULTI_SHIPTO_FLAG"  Binding = "{Binding MULTI_SHIPTO_FLAG}"     IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn          Header="PALLET TYPE"        Binding = "{Binding PALLET_TYPE}"           IsReadOnly="True"  HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn          Header="PACK_VIRT_LOTID"    Binding = "{Binding PACK_VIRT_LOTID}"       IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn          Header="PACKING_TYPE"       Binding = "{Binding PACKING_TYPE}"          IsReadOnly="True"  HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>
                                    <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                        <c1:C1GroupingWithSummariesBehavior/>
                                    </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow x:Name="summary_Main" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <!--Content Top End-->
                    <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <Grid x:Name="ContentBot" Grid.Row="4">
                        <Grid>
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <!--<Border Grid.Row="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}">
                                    <TextBlock  Margin="15,0,0,0" Text="{Binding ConverterParameter='INBOX등록', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource Content_Search_LabelStyle}" />
                                </Border>-->
                                <Border Grid.Column="0" Grid.Row="0"  Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <c1:C1TabControl Grid.Row="0" Grid.Column="1">
                                    <c1:C1TabItem x:Name="TabOutboxReg1" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='완성OUTBOX'}">
                                        <Grid Grid.Row="1" Grid.Column="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="0"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="2"/>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="1" Grid.Column="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="15"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="200"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="100"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                </Grid.ColumnDefinitions>
                                                <Border Grid.Column="0" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                                <TextBlock      Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='OutBox ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Height="14" Margin="0,8,0,7" Width="72" />
