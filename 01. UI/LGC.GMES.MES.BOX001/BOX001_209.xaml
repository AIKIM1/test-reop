<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_209"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             xmlns:cmm001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="1024" d:DesignWidth="1280"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.CMM001;component/PopupFindControlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="반품 확정">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="35"/>
                </Grid.RowDefinitions>

                <c1:C1TabControl  Grid.Row="0">
                    <c1:C1TabItem Header="{Binding ConverterParameter=반품확정, Converter={StaticResource GlobalObjectDicConverter}}" Margin="0" >
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="100"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <Grid x:Name="SearchArea" Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter=반품일시, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                    <Grid  Grid.Row="0" Grid.Column="1" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <ctrlLib:LGCDatePicker Grid.Column="0"  x:Name="dtpDateFrom"  DatepickerType="Date"/>
                                        <TextBlock  Grid.Column="1" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="0" />
                                        <ctrlLib:LGCDatePicker Grid.Column="2"  x:Name="dtpDateTo"  DatepickerType="Date"/>
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=동, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=라인, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=반품상태, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboStat" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=조립LOTID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtLotID" Style="{StaticResource SearchCondition_TextBoxStyle}"  CharacterCasing="Upper" MinWidth="100" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=반품유형, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboReturnType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock   Grid.Row="0" Grid.Column="0"    Text="{Binding ConverterParameter=PALLETID, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" 
                                        Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtPalletID" Style="{StaticResource SearchCondition_TextBoxStyle}"  CharacterCasing="Upper" MinWidth="100" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="4" Grid.RowSpan="2" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <uc:UcBaseButton Grid.Column="3" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                                    <uc:UcBaseButton Grid.Column="1" x:Name="btnReturn" Click="btnReturn_Click" Content="{Binding ConverterParameter='반품확정',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl02Style}" />
                                </Grid>

                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter=출하처, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <cmm001:PopupFindControl Grid.Row="0" Grid.Column="1" Margin="3,0,3,0" x:Name="popShipto" SelectedValuePath="CBO_CODE" DisplayMemberPath="CBO_NAME" PopupDisplayMode="TextOnly" MinWidth="180"/>
                                </Grid>
                                
                            </Grid>

                            <Grid x:Name="ContentArea" Grid.Row="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <!--반품 리스트-->
                                <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="34"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Grid   Grid.Row="0" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='반품리스트', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        <uc:UcBaseCheckBox    Grid.Row="0"  Grid.Column="3"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='그룹선택'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" x:Name="chkGroupSelect" IsChecked="False" />

                                        <Grid Grid.Column="5">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="1*" />
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="1*" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="8" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="8" />
                                                <ColumnDefinition Width="20" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                            </Grid.ColumnDefinitions>

                                            <Border    Grid.Row="1" Grid.Column="0" Name="lblShipping" Tag="SHIPPING" Background="#E6F5FB" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='반품요청', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />

                                            <Border    Grid.Row="1" Grid.Column="4" Name="lblFinish" Tag="FINISH_RECEIVE"  Background="#E8F7C8" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='반품완료', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />

                                            <Border    Grid.Row="1" Grid.Column="8" Name="lblCancel" Tag="CANCEL_SHIP" Background="#F8DAC0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                            <TextBlock Grid.Row="1" Grid.Column="10" Text="{Binding ConverterParameter='반품취소', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                        </Grid>
                                    </Grid>

                                    <Grid   Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="8" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgReturn" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" FrozenBottomRowsCount="1" LoadedCellPresenter="dgReturn_LoadedCellPresenter" CommittingEdit="dgReturn_CommittingEdit" CommittedEdit="dgReturn_CommittedEdit">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn       Header="선택"        Width="40"     Binding = "{Binding CHK}"       HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn           Header="FACTORYID"       Binding="{Binding SHOPID}"            HorizontalAlignment="Left"     IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn           Header="라인"       Binding="{Binding EQSGID}"            HorizontalAlignment="Left"     IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn           Header="라인"       Binding="{Binding EQSGNAME}"            HorizontalAlignment="Left"     IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="PRJT_NAME"       Binding="{Binding PROJECT}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="MDLLOT_ID"       Binding="{Binding MDLLOT_ID}"            HorizontalAlignment="Center"  IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn           Header="PRODID"       Binding="{Binding PRODID}"            HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="반품PALLETID"       Binding="{Binding BOXID}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="LOW SOC"       Binding="{Binding LOW_SOC_FLAG}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="상태"       Binding="{Binding RCV_ISS_STAT_CODE}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn           Header="상태"       Binding="{Binding RCV_ISS_STAT_NAME}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="반품일"       Binding="{Binding ISS_DTTM}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="반품수량"       Binding="{Binding ISS_QTY2}"           Format="#,##0" HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="반품 창고"       Binding="{Binding FROM_SLOC_ID}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="입고 창고"       Binding="{Binding TO_SLOC_ID}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="내수/수출"       Binding="{Binding EXP_DOM_TYPE_CODE}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn           Header="내수/수출"       Binding="{Binding EXP_DOM_TYPE_NAME}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="처리일시"       Binding="{Binding RCV_DTTM}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="비고"       Binding="{Binding ISS_NOTE}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="반품ID"       Binding="{Binding RCV_ISS_ID}"            HorizontalAlignment="Left"     IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn           Header="BOX_RESTORE_YN"       Binding="{Binding BOX_RESTORE_YN}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn           Header="PRODUCT_LEVEL3_CODE"       Binding="{Binding PRODUCT_LEVEL3_CODE}"            HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn           Header="출하처"       Binding="{Binding SHIPTO_ID}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                                <c1:DataGridTextColumn           Header="출하처명"       Binding="{Binding SHIPTO_NAME}"            HorizontalAlignment="Center"   IsReadOnly="True" Width="Auto" />
                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.BottomRows>
                                                <c1:DataGridSummaryRow x:Name="summary_return" RowStyle="{StaticResource SummaryRowStyle}"/>
                                            </c1:C1DataGrid.BottomRows>
                                        </c1:C1DataGrid>

                                    </Grid>

                                    <Border Grid.Row="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment ="Right" Margin="0,0,8,0">
                                        <TextBlock  Text="{Binding ConverterParameter='총', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <c1:C1NumericBox     x:Name="txtPalletQty" Width="70" ShowButtons="False"   Style="{StaticResource C1NumericBoxStyle}"  />
                                        <TextBlock  Text="{Binding ConverterParameter='건', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                        <Border Style="{StaticResource Content_Separator_BorderStyle}"/>
                                        <c1:C1NumericBox     x:Name="txtCellQty" Width="70" ShowButtons="False"   Style="{StaticResource C1NumericBoxStyle}"  />
                                        <TextBlock  Text="{Binding ConverterParameter='CELL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    </StackPanel>
                                </Grid>
                                <!-- 포장 PALLET -->

                                <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <!-- 작업 PALLET -->
                                <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                                <Grid Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="34"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Grid   Grid.Row="0" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='반품LOT상세', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        <!--<Border     Grid.Column="2" Style="{StaticResource Content_Separator_BorderStyle}" />-->

                                        <Grid Grid.Row="1" Grid.Column="3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="100" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="4" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="60" />
                                                <ColumnDefinition Width="8" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="15" />

                                            </Grid.ColumnDefinitions>

                                            <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='조립LOTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}"/>
                                            <TextBox Grid.Column="2" x:Name="txtLotId_Input"        Style="{StaticResource Content_InputForm_TextBoxStyle}"  CharacterCasing="Upper" />


                                            <TextBlock Grid.Column="4" Text="{Binding ConverterParameter='용량등급', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                            <TextBox Grid.Column="5" x:Name="txtCapaGrd_Input"        Style="{StaticResource Content_InputForm_TextBoxStyle}" CharacterCasing="Upper" />
                                            <TextBlock Grid.Column="7" Text="{Binding ConverterParameter='저항등급', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                            <TextBox Grid.Column="8" x:Name="txtRsstGrd_Input"        Style="{StaticResource Content_InputForm_TextBoxStyle}" CharacterCasing="Upper" />
                                            <TextBlock Grid.Column="10" Text="{Binding ConverterParameter='전압등급', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                            <TextBox Grid.Column="11" x:Name="txtVltgGrd_Input"        Style="{StaticResource Content_InputForm_TextBoxStyle}" CharacterCasing="Upper" />

                                            <!--<TextBlock Grid.Column="7" Text="{Binding ConverterParameter='수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                            <TextBox Grid.Column="8" x:Name="txtLotQyt_Input"         Style="{StaticResource Content_InputForm_TextBoxStyle}" />-->

                                            <uc:UcBaseButton     Grid.Column="13" x:Name="btnAdjust"  Click="btnAdjust_Click"  Content="{Binding ConverterParameter='적용',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Padding="3,-1,12,0" />


                                        </Grid>
                                    </Grid>


                                    <Grid   Grid.Row="1" Grid.Column="1" Margin="0,4,0,4">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <uc:UcBaseButton   Grid.Column="3" x:Name="btnAdd"     Click="btnAdd_Click"  Content="{Binding ConverterParameter='추가',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" />
                                        <uc:UcBaseButton  Grid.Column="5" x:Name="btnDelete"  Click="btnDelete_Click"   Content="{Binding ConverterParameter='삭제',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Padding="3,-1,12,0"/>
                                        <Border     Grid.Column="2" Style="{StaticResource Content_Separator_BorderStyle}" />
                                        <uc:UcBaseButton     Grid.Column="1" x:Name="btnMerge"  Click="btnMerge_Click" Content="{Binding ConverterParameter='병합',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Visibility="Collapsed" />

                                    </Grid>

                                    <Grid   Grid.Row="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="0" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="8" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>

                                        <c1:C1DataGrid x:Name="dgLotInfo" Grid.Column="1" Grid.Row="1" IsReadOnly="False"  FrozenBottomRowsCount="1" CanUserFilter="True" CanUserSort="True" LoadedColumnHeaderPresenter="dgLotInfo_LoadedColumnHeaderPresenter" LoadedCellPresenter="dgLotInfo_LoadedCellPresenter"  BeginningEdit="dgLotInfo_BeginningEdit" CommittingEdit="dgLotInfo_CommittingEdit" CommittedEdit="dgLotInfo_CommittedEdit" HeadersVisibility="Column" SelectionMode="MultiRange" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn    Width="40"     Binding = "{Binding CHK}"       HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "반품ID"       Binding = "{Binding RCV_ISS_ID}"           HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "PALLETID"       Binding = "{Binding BOXID}"           HorizontalAlignment="Center"  />
                                                <c1:DataGridTextColumn      Header = "WIPSEQ"       Binding = "{Binding WIPSEQ}"           HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Header = "PALLETID"       Binding = "{Binding PALLETID}"           HorizontalAlignment="Center"  Visibility="Collapsed"/>
