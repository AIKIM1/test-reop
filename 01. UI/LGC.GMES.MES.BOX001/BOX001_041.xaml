<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_041"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ItemTemplate">
                <WrapPanel>
                    <Image Width="138" Height="138" Stretch="Fill" Source="{Binding}" Margin="3,3,3,3" />
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>
        </Grid.Resources>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="물류라벨발행(수동)">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4"/>
                        <RowDefinition Height="35"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="51"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="6*"/>
                        </Grid.RowDefinitions>
                        <Grid x:Name="SearchArea" Grid.Row="0">
                            <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                            <Grid Grid.Row="0" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="4"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>
                                <uc:UcBaseButton  x:Name="btnMergeSplit"   Grid.Column="1" Content="{Binding ConverterParameter='Outbox 분할/병합', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Visibility="Collapsed"/>
                                <uc:UcBaseButton x:Name="btnRePrint"   Grid.Column="3" Content="{Binding ConverterParameter='재발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Visibility="Collapsed"/>
                                <Grid Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="3*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='Sales Order', Converter={StaticResource GlobalObjectDicConverter},  Mode=oneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox        Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtSalesOrder" KeyDown="txtSalesOrder_KeyDown"/>
                                </Grid>
                                <uc:UcBaseButton Grid.Row="1" Grid.Column="7" x:Name="btnSearch" Content="{Binding ConverterParameter='SEARCH', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                            </Grid>
                        </Grid>
                        <!--Search Area End-->
                        <Grid x:Name="ContentTop" Grid.Row="2">
                            <Grid Grid.Row="0" Grid.Column="0">
                                <Border Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <Grid Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Grid   Grid.Row="0" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="15"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="13"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='S/O 정보', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        <uc:UcBaseButton x:Name="btnShippingNotePrint" Grid.Column="7" Content="{Binding ConverterParameter='Shipping Note', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource  Content_MainButtonNoMinWidthSpecialStyle}" Click="btnShippingNotePrint_Click" />

                                    </Grid>
                                    <Grid Grid.Row="2">
                                        <c1:C1DataGrid Grid.Row="1" Grid.Column="1" Margin="8" x:Name="dgSalesOrder" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow"  SelectionChanged="dgSalesOrder_SelectionChanged">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn Header="Part No(Ordering Code)"     Binding = "{Binding CUST_MTRLID}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Part Name"     Binding = "{Binding CUST_MTRLNAME}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Shipping Note"     Binding = "{Binding SHIPMENT_NO}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Purchase"     Binding = "{Binding PO_NO}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Total Quantity"     Binding = "{Binding TOTL_QTY}" HorizontalAlignment="Center" Format="###,###,##0.##"/>
                                                <c1:DataGridTextColumn Header="Vender Code"     Binding = "{Binding CUSTOMERID}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Vender Name"     Binding = "{Binding CUSTOMERNAME}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Manufacturer PartNumber"     Binding = "{Binding PRODID}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="Print Manufacturer"     Binding = "{Binding PRODNAME}" HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn Header="SHIPTO_ID"     Binding = "{Binding SHIPTO_ID}" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="ADD_INFO"     Binding = "{Binding ADD_INFO}" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                        <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <Grid x:Name="ContentBot" Grid.Row="4">


                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
