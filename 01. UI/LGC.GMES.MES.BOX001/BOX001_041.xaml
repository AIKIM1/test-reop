                                                <Label Margin ="0,-2,0,0" x:Name="lblChargeQty" Content="H00000000002101694@Q00200" HorizontalAlignment="Center" FontWeight="Bold" FontSize="12" ToolTip="CHARGE_QTY_TEXT"/>
