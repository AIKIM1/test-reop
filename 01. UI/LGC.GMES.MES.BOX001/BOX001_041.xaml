                                        <Label     Grid.Row="1" Grid.Column="1" x:Name="lbPackageID" Content="S000000021210" VerticalAlignment="Top" FontWeight="Bold" FontSize="12" ToolTip="PACKAGE_ID"/>
                                        <TextBox     Grid.Row="1" Grid.Column="2" x:Name="txtBatchNumber" VerticalAlignment="Top"  HorizontalAlignment="Left" FontWeight="Bold" FontSize="12" Width="120" ToolTip="BATCH_NO1" TextChanged="txtBatchNo1_TextChanged" LostFocus="txtBatchNo1_LostFocus" KeyDown="txtBatchNo1_KeyDown"/>
                                        <TextBox     Grid.Row="1" Grid.Column="3" x:Name="txtCellRanking"  VerticalAlignment="Top" HorizontalAlignment="Left" FontWeight="Bold" FontSize="12" Width="60" ToolTip="BATCH_NO2" TextChanged="txtBatchNo2_TextChanged"/>
                                        <StackPanel Grid.Row="2" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock Text="Purchase:" x:Name="tbK" VerticalAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                            <Label Margin ="0,-2,0,0" x:Name="lbPurchase" Content="" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" ToolTip="PO_NO"/>
                                        </StackPanel>
                                        <StackPanel Grid.Row="2" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock Text="Shipping Note:" x:Name="tb16K" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" />
                                            <Label Margin ="0,-2,0,0" x:Name="lbShippingNote" Content="21017694" VerticalAlignment="Center" FontWeight="Bold" FontSize="12" ToolTip="SHIPMENT_NO"/>
