                                    <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboArea_Ncr" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboArea_Ncr_SelectedValueChanged"/>
