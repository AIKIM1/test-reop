                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="0"/>
                    <RowDefinition Height="0"/>
                </Grid.RowDefinitions>

                <c1:C1TabControl  Grid.Row="0">
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='출하HOLD등록/해제'}" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="153*"/>
                                <ColumnDefinition Width="487*"/>
