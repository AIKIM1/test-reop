                                        <ctrlLib:LGCDatePicker Grid.Column="0"  x:Name="dtpDateFrom_Ncr"  DatepickerType="Date"/>
                                        <TextBlock  Grid.Column="1" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                                        <ctrlLib:LGCDatePicker Grid.Column="2"  x:Name="dtpDateTo_Ncr"  DatepickerType="Date"/>

                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="2">
