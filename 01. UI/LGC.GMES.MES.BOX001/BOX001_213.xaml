                                    <uc:UcBaseButton x:Name="btnBoxRelease"   Grid.Column="7" Click="btnBoxRelease_Click" Content="{Binding ConverterParameter='Pallet HOLD해제 (Excel)', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource  Content_MainButtonSpecialStyle}"/>
                                    <uc:UcBaseButton x:Name="btnLotHold"   Grid.Column="9" Click="btnLotHold_Click" Content="{Binding ConverterParameter='LOT HOLD등록', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource  Content_MainButtonSpecialStyle}"/>
