<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.BOX001.BOX001_304"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"  
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001" 
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ItemTemplate">
                <WrapPanel>
                    <Image Width="138" Height="138" Stretch="Fill" Source="{Binding}" Margin="3,3,3,3" />
                </WrapPanel>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <!--< ColumnDefinition Width="*" />-->
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0"  />
                </Grid>
            </DataTemplate>

        </Grid.Resources>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="출고 대기 LOT 조회">
            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="51"/>
                    <RowDefinition Height="8" />
                    <RowDefinition Height="1*" Name="Row1"/>
                    <RowDefinition Height="8"  Name="Row2"/>
                    <RowDefinition Height="1*" Name="Row3"/>
                    <!--< RowDefinition Height="44" />-->

                </Grid.RowDefinitions>

                <!--조회영역-->

                <Grid x:Name="SearchArea" Grid.Row="1">
                    <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                    <Grid   Grid.Row="0" Grid.Column="0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="13"/>
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2*"/>
                            </Grid.ColumnDefinitions>

                            <!--조회조건 타이틀-->
                            <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='모델LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="0" Grid.Column="6" Text="{Binding ConverterParameter='대표PJT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="0" Grid.Column="8" Text="{Binding ConverterParameter='타입', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="0" Grid.Column="10" Text="{Binding ConverterParameter='LotType', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                            <!--조회조건 컨트롤-->
                            <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  SelectedValueChanged="cboArea_SelectedValueChanged" />
                            <ctrlLib:MultiSelectionBox  Grid.Row="0" Grid.Column="3" x:Name="cboEquipmentSegment"          DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" isAllUsed="True" SelectionChanged="cboEquipmentSegment_SelectionChanged"/>
                            <ctrlLib:MultiSelectionBox  Grid.Row="0" Grid.Column="5" x:Name="cboModelLot"          DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" isAllUsed="True" />
                            <TextBox Grid.Row="0" Grid.Column="7" x:Name="txtModelLot" Style="{StaticResource SearchCondition_TextBoxStyle}" TextChanged="txtModelLot_TextChanged"/>
                            <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="9" x:Name="cboLottype" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                            <uc:UcBaseComboBox  Grid.Row="0" Grid.Column="11" x:Name="boxLottype" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"/>
                            <uc:UcBaseCheckBox    Grid.Row="0"  Grid.Column="6" Margin="10,0,0,0"  Visibility="Collapsed" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='DUMMY처리'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" x:Name="chkDummy" IsChecked="False"  />

                        </Grid>

                        <Grid Grid.Row="0" Grid.Column="3">
                            <uc:UcBaseButton x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                        </Grid>
                    </Grid>

                </Grid>




                <Border Grid.Row="3"  Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                <Grid  Grid.Row="3" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="34"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>

                    <!--Sub 영역 01 Title-->
                    <Border Grid.Row="0" Grid.Column="1" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                    <Grid   Grid.Row="0" Grid.Column="1" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='SUMMARY', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                    </Grid>
                    <!--Sub 영역 01 Title-->
                    <!--Sub 영역 01 Content-->
                    <Grid   Grid.Row="1" Grid.Column="0" >
