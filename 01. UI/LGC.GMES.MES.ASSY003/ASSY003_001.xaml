<UserControl x:Class="LGC.GMES.MES.ASSY003.ASSY003_001"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded" Initialized="UserControl_Initialized" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="노칭(소형) 공정진척">
            <ctrlLib:LGCLayout.Content>
                <Grid x:Name="MainContents">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="0*"/>
                    </Grid.RowDefinitions>

                    <!-- 공정 진척 Grid -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="51" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="34" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>
                                <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" MouseLeave="btnExtra_MouseLeave" VerticalAlignment="Bottom" Height="32">
                                    <c1:C1DropDownButton.Header>
                                        <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                                    </c1:C1DropDownButton.Header>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="9" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="9" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="9"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="9"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                        <!--추가기능버튼-->
                                        <Button  Grid.Row="1"  Grid.Column="1" x:Name="btnWaitLot"         Content="{Binding ConverterParameter='대기LOT조회',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnWaitLot_Click" />
                                        <Button  Grid.Row="3"  Grid.Column="1" x:Name="btnRemarkHist"      Content="{Binding ConverterParameter='특이사항이력',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnRemarkHist_Click"  />
                                        <Button  Grid.Row="5"  Grid.Column="1" x:Name="btnQualitySearch"   Content="{Binding ConverterParameter='품질정보조회',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnQualitySearch_Click" />
                                        <Button  Grid.Row="7"  Grid.Column="1" x:Name="btnEqptCond"        Content="{Binding ConverterParameter='작업조건등록',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnEqptCond_Click"   />
                                        <Button  Grid.Row="9"  Grid.Column="1" x:Name="btnCancelTerm"      Content="{Binding ConverterParameter='투입LOT종료취소',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnCancelTerm_Click"   />
                                        <Button  Grid.Row="11" Grid.Column="1" x:Name="btnLotCut"      Content="{Binding ConverterParameter='CUT',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnLotCut_Click"   />
                                        <Button  Grid.Row="13" Grid.Column="1" x:Name="btnPartScrap"      Content="{Binding ConverterParameter='부분폐기등록',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnPartScrap_Click"   />
                                        <Button  Grid.Row="15" Grid.Column="1" x:Name="btnTestMode"        Content="{Binding ConverterParameter='TEST모드',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnTestMode_Click" />
                                        <Button  Grid.Row="17" Grid.Column="1" x:Name="btnScheduledShutdown"  Content="{Binding ConverterParameter='계획정지',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnScheduledShutdown_Click" />
                                        <Button  Grid.Row="19" Grid.Column="1" x:Name="btnQualityInput_New"   Content="{Binding ConverterParameter='품질정보입력(NEW)',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnQualityInput_New_Click" />
                                    </Grid>
                                </c1:C1DropDownButton>

                                <Button              Grid.Row="0" Grid.Column="3" x:Name="btnQualityInput" Content="{Binding ConverterParameter='품질정보입력',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnQualityInput_Click"/>
                                <Button              Grid.Row="0" Grid.Column="5" x:Name="btnEqptIssue"   Content="{Binding ConverterParameter='인수인계노트',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnEqptIssue_Click"/>

                                <Button x:Name="btnRunStart"          Grid.Row="0" Grid.Column="7"  Content="{Binding ConverterParameter='작업시작',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl01Style}" Click="btnRunStart_Click"/>
                                <Button x:Name="btnRunCancel"         Grid.Row="0" Grid.Column="9"  Content="{Binding ConverterParameter='시작취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnRunCancel_Click" />
                                <Button x:Name="btnRunComplete"       Grid.Row="0" Grid.Column="11" Content="{Binding ConverterParameter='장비완료',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl04Style}" Click="btnRunComplete_Click"/>
                                <Button x:Name="btnRunCompleteCancel" Grid.Row="0" Grid.Column="13" Content="{Binding ConverterParameter='장비완료취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnRunCompleteCancel_Click" />
                                <Button x:Name="btnConfirm"           Grid.Row="0" Grid.Column="15" Content="{Binding ConverterParameter='실적확인',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl02Style}" Click="btnConfirm_Click"/>
                                <Button x:Name="btnPrint"             Grid.Row="0" Grid.Column="17" Content="{Binding ConverterParameter='바코드발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControlBarCodeStyle}"  Click="btnPrint_Click"/>
                            </Grid>
                        </Grid>

                        <!--start search Area-->
                        <Grid x:Name="SearchArea" Grid.Row="0">
                            <Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>
                            <Grid   Grid.Row="0" Grid.Column="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock  Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipmentSegment"      DisplayMemberPath="" SelectedValuePath=""  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='극성', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboElecType"      DisplayMemberPath="NAME" SelectedValuePath="CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipment"      DisplayMemberPath="" SelectedValuePath=""  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEquipment_SelectedValueChanged" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="7">
                                    <!--<Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="6*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='상태', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />-->
                                    <Grid Grid.Row="0"  Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="8"/>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <CheckBox x:Name="chkWait"   Grid.Row="0" Grid.Column="2"      Content="{Binding ConverterParameter='대기',       Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True"   />
                                        <CheckBox x:Name="chkRun"    Grid.Row="0" Grid.Column="4"      Content="{Binding ConverterParameter='진행',     Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True"  />
                                        <CheckBox x:Name="chkEqpEnd" Grid.Row="0" Grid.Column="6"      Content="{Binding ConverterParameter='설비완공',   Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True"   />
                                    </Grid>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="9">
                                    <Button x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                                </Grid>
                            </Grid>
                            <!--end search Area-->

                        </Grid>
                        <!--end search Area-->


                        <Grid x:Name="ContentTop" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <!--start 작업지시-->
                            <Grid x:Name="grdWorkOrder" Grid.Column="0">

                                <!--end 작업지시-->
                            </Grid>

                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--start 작업대상 -->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" MouseLeftButtonDown="TextBlock_MouseLeftButtonDown" />
                                </Grid>

                                <Grid   Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid   Grid.Row="1" Grid.Column="1" >
                                        <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot" IsReadOnly="True" HeadersVisibility="None"  FrozenTopRowsCount="2" SelectionMode="SingleRow" CurrentCellChanged="dgProductLot_CurrentCellChanged" LoadedCellPresenter ="dgProductLot_LoadedCellPresenter" UnloadedCellPresenter ="dgProductLot_UnloadedCellPresenter" >

                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn  Name="CHK"  Width="40"            Binding = "{Binding CHK}"             HorizontalAlignment="Center"     IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="False"/>
                                                <c1:DataGridTextColumn       Header = "[투입LOT, LOT]"          Binding = "{Binding PR_LOTID}"              HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn       Header = "[투입LOT, 대LOT]"        Binding = "{Binding LOTID_RT}"              HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn       Header = "[투입LOT, 극성]"         Binding = "{Binding PRDT_CLSS_NAME}"              HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn    Header = "[투입LOT, 재공수량]"     Binding = "{Binding WIPQTY}"        HorizontalAlignment="Right" Format="#,##0" Width="55"/>
                                                <c1:DataGridTextColumn       Header = "[투입LOT, 재공수량]"     Binding = "{Binding UNIT_CODE}"     HorizontalAlignment="Center" Width="40" />
                                                <c1:DataGridNumericColumn    Header = "[투입LOT, 재공수량]"     Binding = "{Binding WIPQTY_EA}"     HorizontalAlignment="Right" Format="#,##0" Width="55"/>
                                                <c1:DataGridTextColumn       Header = "[투입LOT, 재공수량]"     Binding = "{Binding OUT_UNIT_CODE}" HorizontalAlignment="Center" Width="40" />
                                                <c1:DataGridTextColumn       Header = "[투입LOT, 재공투입일시]" Binding = "{Binding WIPDTTM_IN}"    HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "[투입LOT, 제품ID]"       Binding = "{Binding MO_PRODID}"     HorizontalAlignment="Center" Visibility="Collapsed"/>

                                                <c1:DataGridTextColumn       Header = "[패턴길이, 패턴길이]"    Binding = "{Binding PTN_LEN}"       HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "[모랏기준, 패턴길이]"    Binding = "{Binding PTN_LEN_OLD}"   HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn    Header = "[모랏기준, 재공수량]"    Binding = "{Binding WIPQTY_EA_OLD}" HorizontalAlignment="Right" Format="#,##0" Width="55" Visibility="Collapsed"/>

                                                <c1:DataGridTextColumn       Header = "[완성LOT, 상태]"         Binding = "{Binding WIPSTAT}"       HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn       Header = "[완성LOT, 상태]"         Binding = "{Binding WIPSNAME}"      HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn       Header = "[완성LOT, 순번]"         Binding = "{Binding CHILD_NO}"      HorizontalAlignment="Center" Width="45"/>
                                                <c1:DataGridTextColumn       Header = "[완성LOT, LOT]"          Binding = "{Binding LOTID}"         HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn       Header = "[완성LOT, 프로젝트명]"   Binding = "{Binding PRJT_NAME}"     HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn    Header = "[완성LOT, 설비생산량]"   Binding = "{Binding EQPT_INPUT_QTY}"  HorizontalAlignment="Right" Format="#,##0" Width="55"/>
                                                <c1:DataGridTextColumn       Header = "[완성LOT, 설비생산량]"   Binding = "{Binding EQPT_UNIT_CODE}" HorizontalAlignment="Center" Width="40" />
                                                <c1:DataGridNumericColumn    Header = "[완성LOT, 설비양품량]"   Binding = "{Binding EQPT_END_QTY}"  HorizontalAlignment="Right" Format="#,##0" Width="55"/>
                                                <c1:DataGridTextColumn       Header = "[완성LOT, 설비양품량]"   Binding = "{Binding EQPT_UNIT_CODE}" HorizontalAlignment="Center" Width="40" />
                                                <c1:DataGridNumericColumn    Header = "[완성LOT, 설비불량량]"   Binding = "{Binding EQPT_DFCT_QTY}"  HorizontalAlignment="Right" Format="#,##0" Width="55"/>
                                                <c1:DataGridTextColumn       Header = "[완성LOT, 설비불량량]"   Binding = "{Binding EQPT_UNIT_CODE}" HorizontalAlignment="Center" Width="40" />
                                                <c1:DataGridTextColumn       Header = "[완성LOT, 작업시작일시]" Binding = "{Binding WIPDTTM_ST}"    HorizontalAlignment="Center"/>
                                                <c1:DataGridTextColumn       Header = "[완성LOT, 장비완료일시]" Binding = "{Binding EQPT_END_DTTM}" HorizontalAlignment="Center"/>

                                                <c1:DataGridTextColumn       Header = "[완성LOT, 작업시작일시]"    Binding = "{Binding WIPDTTM_ST_ORG}" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "[완성LOT, 장비완료일시]"    Binding = "{Binding EQPT_END_DTTM_ORG}" HorizontalAlignment="Center" Visibility="Collapsed"/>

                                                <c1:DataGridTextColumn       Header = "[WIPSEQ, WIPSEQ]"        Binding = "{Binding WIPSEQ}"        HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn       Header = "[제품ID, 제품ID]"        Binding = "{Binding PRODID}"        HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "[제품명, 제품명]"        Binding = "{Binding PRODNAME}"      HorizontalAlignment="Left" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "[버젼, 버젼]"            Binding = "{Binding PROD_VER_CODE}" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn       Header = "[작업일자, 작업일자]"    Binding = "{Binding CALDATE}"       HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn       Header = "[자식그룹순번, 자식그룹순번]" Binding = "{Binding CHILD_GR_SEQNO}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "[작업일자, 작업일자]"        Binding = "{Binding VALID_DATE_YMDHMS}"   HorizontalAlignment="Center" Visibility="Collapsed" />
                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.TopRows>
                                                <c1:DataGridColumnHeaderRow />
                                                <c1:DataGridColumnHeaderRow />
                                            </c1:C1DataGrid.TopRows>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                                <!--end Product Lot-->
                            </Grid>

                            <!--end content-->
                        </Grid>

                        <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <Grid x:Name="ContentButtom" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--start 실적확인 -->
                            <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='생산실적', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="8"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="3" />
