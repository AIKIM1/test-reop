<UserControl x:Class="LGC.GMES.MES.ASSY003.ASSY003_021"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded" Initialized="UserControl_Initialized">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="C생산공정진척">
            <ctrlLib:LGCLayout.Content>
                <Grid x:Name="MainContents">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="0*"/>
                    </Grid.RowDefinitions>

                    <!-- 공정 진척 Grid -->
                    <Grid Grid.Row="0">
                        <Grid.Resources>
                            <DataTemplate x:Key="ResultTemplate">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </Grid.Resources>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="51" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="34" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32" />
                                </Grid.RowDefinitions>

                                <Button              Grid.Row="0" Grid.Column="5" x:Name="btnEqpRemark"   Content="{Binding ConverterParameter='대기LOT조회',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnWaitLot_Click"/>
                                <Button              Grid.Row="0"  Grid.Column="7" x:Name="btnMerge"         Content="{Binding ConverterParameter='LOTMERGE',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}" Click="btnMerge_Click"   />
                                <Button              Grid.Row="0" Grid.Column="9" x:Name="btnRunStart"    Content="{Binding ConverterParameter='작업시작',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl01Style}" VerticalAlignment="Top" Click="btnRunStart_Click" />
                                <Button              Grid.Row="0" Grid.Column="11" x:Name="btnRunCancel"  Content="{Binding ConverterParameter='시작취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl03Style}" Click="btnRunCancel_Click" />
                                <Button              Grid.Row="0" Grid.Column="15" x:Name="btnConfirm" Content="{Binding ConverterParameter='실적확인',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl02Style}" Click="btnConfirm_Click"  />
                            </Grid>
                        </Grid>

                        <!--start search Area-->
                        <Grid x:Name="SearchArea" Grid.Row="0">
                            <Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipmentSegment"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipment"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" IsEnabled="False" SelectedValueChanged ="cboEquipment_SelectedValueChanged"/>
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='재작업 구분', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboCPROD_WRK_TYPE_CODE"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="7">
                                    <Button x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                                </Grid>
                            </Grid>
                        </Grid>
                        <!--end search Area-->

                        <!--start First Content Area-->
                        <Grid x:Name="Content" Grid.Row="2">
                            <!--<Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>-->

                            <GridSplitter Grid.Column="0" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--start 작업대상-->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="13"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                                </Grid>
                                <Grid   Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid   Grid.Row="1" Grid.Column="1" >
                                        <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot" IsReadOnly="True" HeadersVisibility="None" FrozenTopRowsCount="1" SelectionMode="SingleRow" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" CanUserFilter="False" CanUserSort="False" CanUserResize="False">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgProductLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgProductLotChoice" HorizontalAlignment="Center" Checked="dgProductLotChoice_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>

                                                <c1:DataGridTextColumn Header="C생산재작업LOT"     Binding="{Binding LOTID}" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="LOT유형"                 Binding="{Binding LOTTYPE}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="LOT유형"                 Binding="{Binding LOTYNAME}" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="재작업 구분"             Binding="{Binding CPROD_WRK_TYPE_NAME}" HorizontalAlignment="Center"  />
                                                <c1:DataGridTextColumn Header="인계라인"                Binding="{Binding CPROD_RWK_LOT_EQSGID}" HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="인계라인"                Binding="{Binding CPROD_RWK_LOT_EQSGNAME}" HorizontalAlignment="Center"  />
                                                <c1:DataGridTextColumn Header="인계설비"                Binding="{Binding CPROD_RWK_LOT_EQPTID}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="인계설비"                Binding="{Binding CPROD_RWK_LOT_EQPTNAME}" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="PRJT_NAME"                    Binding="{Binding PRJT_NAME}" HorizontalAlignment="Center"  />
                                                <c1:DataGridTextColumn Header="제품ID"                   Binding="{Binding PRODID}" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="시장유형"                Binding="{Binding MKT_TYPE_CODE}" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="시장유형"                Binding="{Binding MKT_TYPE_NAME}" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="투입량"                   Binding="{Binding INPUT_QTY}" HorizontalAlignment="Center" Format="#,##0" />
                                                <c1:DataGridTextColumn Header="재생수량(F/C)"           Binding="{Binding RECYC_QTY_FOLD}" HorizontalAlignment="Center" Format="#,##0" />
                                                <c1:DataGridTextColumn Header="재생수량(L/C)"           Binding="{Binding RECYC_QTY_CELL}" HorizontalAlignment="Center" Format="#,##0" />
                                                <c1:DataGridTextColumn Header="불량수량"                Binding="{Binding DFCT_QTY}" HorizontalAlignment="Center" Format="#,##0" />
                                                <c1:DataGridTextColumn Header="작업시작일시"           Binding="{Binding WIPDTTM_ST}" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="WIPSEQ"                 Binding="{Binding WIPSEQ}" HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="인계공정"                Binding="{Binding CPROD_WRK_TYPE_CODE}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="인계공정"                Binding="{Binding CPROD_WRK_TYPE_NAME}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header = "상태"                   Binding = "{Binding WIPSTAT}"     HorizontalAlignment="Center" Visibility="Collapsed"/>

                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.TopRows>
                                                <c1:DataGridColumnHeaderRow />
                                            </c1:C1DataGrid.TopRows>
                                        </c1:C1DataGrid>
                                    </Grid>
                                    <!--end Product Lot-->
                                </Grid>
                                <!--end Product Lot-->
                            </Grid>
                        </Grid>

                        <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <!--start 투입&생산-->
                        <Grid x:Name="Detail" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--start 투입-->
                            <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="0">

                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='투입', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </Grid>

                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="8"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <c1:C1TabControl  Grid.Row="1" Grid.Column="1">
                                        <c1:C1TabItem x:Name="tbCurrIn" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입LOT'}" >
                                            <Grid x:Name="grdCurrIn">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="3"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid x:Name="grdMagTypeCntInfo" Grid.Row="1" Grid.Column="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="4" />

                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                </Grid>
                                                <TextBlock  Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='투입LOT', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <TextBox    Grid.Row="1" Grid.Column="3" Margin="4,3,0,3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtCurrInLotID" CharacterCasing="Upper" Width="120" KeyDown="txtCurrInLotID_KeyDown"  />
                                                <Border     Grid.Row="1" Grid.Column="5" Style="{StaticResource Content_Separator_BorderStyle}" />
                                                <Button     Grid.Row="1" Grid.Column="7" x:Name="btnCurrIn"     Content="{Binding ConverterParameter='투입',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnCurrIn_Click" />
                                                <Button     Grid.Row="1" Grid.Column="9" x:Name="btnCurrInCancel"       Content="{Binding ConverterParameter='투입취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnCurrInCancel_Click" />

                                                <c1:C1DataGrid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="12" x:Name="dgCurrIn" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" CommittedEdit="dgCurrIn_CommittedEdit"  >
                                                    <c1:C1DataGrid.Columns>
                                                        <c1:DataGridCheckBoxColumn        Name="CHK" Binding = "{Binding CHK}" Width="Auto"       HorizontalAlignment="Center"  CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                        <c1:DataGridTextColumn Header="No" Binding="{Binding NO}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                        <c1:DataGridTextColumn Header="생산LOTID" Binding="{Binding LOTID}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn Header="재작업LOT" Binding="{Binding INPUT_LOTID}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                        <c1:DataGridTextColumn Header="자재ID" Binding="{Binding MTRLID}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                                        <c1:DataGridNumericColumn Header="수량" Binding="{Binding INPUT_QTY}" HorizontalAlignment="Center" IsReadOnly="True"  Format="#,##0" />
                                                        <c1:DataGridTextColumn Header="투입일시" Binding="{Binding INPUT_DTTM}" HorizontalAlignment="Center" IsReadOnly="True"  />
                                                        <c1:DataGridTextColumn Header="투입완료일시" Binding="{Binding INPUT_END_DTTM}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                                    </c1:C1DataGrid.Columns>
                                                </c1:C1DataGrid>
                                            </Grid>

                                        </c1:C1TabItem>

                                        <c1:C1TabItem x:Name="tbInputWaiting" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입대기'}">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="8"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="3"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="4"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Grid x:Name="grdMagCntInfo" Grid.Row="1" Grid.Column="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="0" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>

                                                </Grid>

                                                <Button Grid.Row="1" Grid.Column="9" x:Name="btnInput" Content="{Binding ConverterParameter='투입',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInput_Click" />

                                                <c1:C1DataGrid  Grid.Row="3" Grid.ColumnSpan="11"  x:Name="dgWaitInput" IsReadOnly="False" FrozenBottomRowsCount="1" HeadersVisibility="Column"  SelectionMode="MultiRange"  >

                                                    <c1:C1DataGrid.Columns>
                                                        <c1:DataGridCheckBoxColumn Width="Auto" Name = "CHK"  Binding = "{Binding CHK, Mode=TwoWay}"   IsReadOnly="False"  HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                        <c1:DataGridTextColumn Header="No" Binding="{Binding NO}" HorizontalAlignment="Center" />
                                                        <c1:DataGridTextColumn Header="재작업LOT" Binding="{Binding LOTID}" HorizontalAlignment="Center" />
                                                        <c1:DataGridNumericColumn Header="수량" Binding="{Binding WIPQTY}" HorizontalAlignment="Right" Format="#,##0.##" EditOnSelection="True" HandleUpDownKeys="False" ShowButtons="False" Minimum="0">
                                                            <c1:DataGridAggregate.AggregateFunctions>
                                                                <c1:DataGridAggregatesCollection>
                                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}"></c1:DataGridAggregateSum>
                                                                </c1:DataGridAggregatesCollection>
                                                            </c1:DataGridAggregate.AggregateFunctions>
                                                        </c1:DataGridNumericColumn>
                                                        <c1:DataGridTextColumn Header="제품ID"    Binding="{Binding PRODID}" HorizontalAlignment="Center" />
                                                        <c1:DataGridTextColumn Header="입고일시" Binding="{Binding LOTDTTM_CR}" HorizontalAlignment="Left" />
                                                    </c1:C1DataGrid.Columns>
                                                    <c1:C1DataGrid.BottomRows>
                                                        <c1:DataGridSummaryRow RowStyle="{StaticResource SummaryRowStyle}"/>
                                                    </c1:C1DataGrid.BottomRows>
                                                </c1:C1DataGrid>

                                            </Grid>
                                        </c1:C1TabItem>

                                    </c1:C1TabControl>

                                </Grid>

                            </Grid>

                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--start 생산매거진-->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='생산반제품', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                                    <Grid Grid.Column="3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
