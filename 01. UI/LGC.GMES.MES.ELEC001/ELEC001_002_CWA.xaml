<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.ELEC001.ELEC001_002_CWA"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="믹서원자재 투입요청서">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid x:Name="ButtonArea" Margin="0,-51,0,0">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </Grid>

                    <Grid x:Name="SearchArea" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1" />
                            <RowDefinition Height="45" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="30"  />
                            <ColumnDefinition Width="Auto"  />
                            <ColumnDefinition Width="30" />
                            <ColumnDefinition Width="Auto"  />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <Border   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="21" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                        <!--조회조건 타이틀-->
                        <TextBlock  Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='기간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <StackPanel Orientation="Horizontal"  Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="3" >
                            <ctrlLib:LGCDatePicker    Grid.Row="1" Grid.Column="2" x:Name="ldpDateFrom"  DatepickerType="Date" SelectedDataTimeChanged="ldpDateFrom_SelectedDataTimeChanged" />
                            <TextBlock  Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" Margin="3,0,3,0"/>
                            <ctrlLib:LGCDatePicker    Grid.Row="1" Grid.Column="2" x:Name="ldpDateTo"  DatepickerType="Date" SelectedDataTimeChanged="ldpDateTo_SelectedDataTimeChanged" />
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="9" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" Grid.Column="12" Orientation="Horizontal" HorizontalAlignment="Right">
                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        </StackPanel>
                        <c1:C1ComboBox   Grid.Row="1" Grid.Column="7" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboEquipmentSegment_SelectedValueChanged" />
                        <c1:C1ComboBox   Grid.Row="1" Grid.Column="10" x:Name="cboProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboEquipmentSegment_SelectedValueChanged" />
                        <c1:C1ComboBox   Grid.Row="1" Grid.Column="13" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboEquipment_SelectedValueChanged"/>
                        <StackPanel Grid.Column="14" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
                            <CheckBox  x:Name="chkMtrl"  Grid.Row="0"  Grid.Column="1" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='CMC,바인더'}" Style="{StaticResource SearchCondition_CheckBoxStyle}" Visibility="Collapsed" Checked="chkMtrl_Checked" Unchecked="chkMtrl_Unchecked" />
                        </StackPanel>
                        <Button    Grid.Row="1" Grid.Column="16" x:Name="btnRingblower" Content="{Binding ConverterParameter='오투입/보전', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" Cursor="Hand" Visibility="Collapsed" Click="btnRingblower_Click" />

                        <!--조회 버튼-->
                        <Button    Grid.Row="1" Grid.Column="18" x:Name="btnSearch" Content="{Binding ConverterParameter='SEARCH', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>

                    <Grid x:Name="Content" Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="7"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="7" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <GridSplitter Grid.Row="1" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <GridSplitter Grid.Row="2" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <Grid Grid.Row="1" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="2"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <!--start 작업지시-->
                            <Grid x:Name="grdWorkOrder" Grid.Row="0" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="5"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>

                                <!-- 1row-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>

                                <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='작업지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                </TextBlock>
                                <CheckBox   Grid.Row="0" Grid.Column="2" x:Name="chkProc" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='공정'}"    Style="{StaticResource SearchCondition_CheckBoxStyle}" Checked="chkProc_Checked" Unchecked="chkProc_Unchecked" />

                                <Border Grid.Row="1"  Grid.RowSpan="3" Grid.ColumnSpan="4" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <c1:C1DataGrid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="dgWorkOrder" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="2"  SelectionMode="MultiRow" CanUserEditRows="True" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="35" VerticalAlignment="Center" HorizontalAlignment="Center" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgWorkOrderChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgWorkOrderChoice" HorizontalAlignment="Stretch" Checked="dgWorkOrderChoice_Checked"   />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn        Header = "생산배치수"      Binding = "{Binding PRODUCT_BTCH_QTY}"        IsReadOnly="True" HorizontalAlignment="Right" Format="#,##0.000" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "잔여배치수"      Binding = "{Binding REMAIN_BTCH_QTY}"         IsReadOnly="True" HorizontalAlignment="Right" Format="#,##0.000" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "W/O"             Binding = "{Binding WOID}"         IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn        Header="더블레이어 유형"   Binding = "{Binding DBL_LAYER_SLURRY_TYPE_CODE}"  HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn        Header = "LOTID"           Binding = "{Binding LOTID}"                   IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn        Header = "PJT"             Binding = "{Binding PRJT_NAME}"               IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn        Header = "버전"            Binding = "{Binding PROD_VER_CODE}"           IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn        Header = "EQPTNAME"        Binding = "{Binding EQPTNAME}"     IsReadOnly="True" HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn        Header = "제품ID"          Binding = "{Binding PRODID}"       IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn        Header = "제품명"          Binding = "{Binding PRODNAME}"     IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn        Header = "모델ID"          Binding = "{Binding MODLID}"       IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn        Header = "계획수량"        Binding = "{Binding PLANQTY}"      IsReadOnly="True" HorizontalAlignment="Right" Format="#,##0.000" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "계획수량"        Binding = "{Binding INPUT_QTY}"    IsReadOnly="True" HorizontalAlignment="Right" Format="#,##0.000" />
                                        <c1:DataGridNumericColumn     Header = "배치수량"        Binding = "{Binding BTCH_ORD_BTCH_QTY}"      HorizontalAlignment="Center" Format="#,##0.00"/>
                                        <c1:DataGridTextColumn        Header = "시작일시"        Binding = "{Binding STRT_DTTM}"    IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn        Header = "종료일시"        Binding = "{Binding END_DTTM}"     IsReadOnly="True" HorizontalAlignment="Left"  />
                                        <c1:DataGridTextColumn        Header = "BATCHORDERID"    Binding = "{Binding BTCH_ORD_ID}"  IsReadOnly="True" HorizontalAlignment="Left"/>
                                        <c1:DataGridTextColumn        Header = "전체계획량"      Binding = "{Binding BTCH_ORD_TOTL_PLAN_QTY}"  IsReadOnly="True" HorizontalAlignment="Right" Format="#,##0.000" />
                                        <c1:DataGridTextColumn        Header = "전체배치"        Binding = "{Binding BTCH_ORD_TOTL_BTCH_QTY}"  IsReadOnly="True" HorizontalAlignment="Center" Format="#,##0" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="2">
                            <!--start Product Lot-->
                            <Grid Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="3" Width="Auto">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="5"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="2"/>
                                    <RowDefinition Height="75"/>
                                    <RowDefinition Height="2"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="7" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='투입요청', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                </TextBlock>
                                <Button Grid.Column="2" x:Name="btnRemain" Content="{Binding ConverterParameter='선분산 잔량처리', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Visibility="Collapsed"  Click="btnRemain_Click" />
                                <Button Grid.Column="4" x:Name="btnCurrent" Content="{Binding ConverterParameter='CMC,바인더 투입현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Visibility="Collapsed" Click="btnCurrent_Click" />
                                <Border Grid.Row="1"  Grid.RowSpan= "6" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <c1:C1DataGrid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="4" x:Name="dgProductLot" IsReadOnly="False" HeadersVisibility="Column" Width="Auto" SelectionMode="SingleRow" BeginningEdit="dgProductLot_BeginningEdit" CommittedEdit="dgProductLot_CommittedEdit"  LoadedCellPresenter="dgProductLot_LoadedCellPresenter" UnloadedCellPresenter="dgProductLot_UnloadedCellPresenter"   >

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="35" VerticalAlignment="Center"  HorizontalAlignment="Center" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="CheckBox_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn        Header = "자재"         Binding = "{Binding MTRLID}"       IsReadOnly="True"  HorizontalAlignment="Left" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn        Header = "자재군명"     Binding = "{Binding MTGRNAME}"     IsReadOnly="True"  HorizontalAlignment="Left" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "자재규격"     Binding = "{Binding MTRLDESC}"     IsReadOnly="True"  HorizontalAlignment="Left" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
                                        <c1:DataGridTextColumn        Header = "GRADE"        Binding = "{Binding GRADE}"        IsReadOnly="True"  HorizontalAlignment="Left" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "자재명"       Binding = "{Binding MTRLNAME}"     IsReadOnly="True"  HorizontalAlignment="Left" Visibility="Collapsed" />
                                        <c1:DataGridNumericColumn     Header = "W/O 소요량"   Binding = "{Binding INPUT_QTY}"    IsReadOnly="True"  HorizontalAlignment="Right" Format="#,##0.000" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "단위"         Binding = "{Binding UNIT_CODE}"    IsReadOnly="True"  HorizontalAlignment="Center"/>
                                        <c1:DataGridNumericColumn     Header = "요청중량"     Binding = "{Binding MTRL_QTY}"     HorizontalAlignment="Right" Format="#,##0.000" />
                                        <!--<c1:DataGridTextColumn        Header = "계량기수량"         Binding = "{Binding CON_QTY}"     IsReadOnly="True" HorizontalAlignment="Right" Format="#,###.00" />-->
                                        <!--<c1:DataGridComboBoxColumn    Header = "호퍼선택"     Binding= "{Binding HOPPER_ID}"    CellContentStyle="{StaticResource Grid_CellContentStyle}"  EditOnSelection="True" DisplayMemberPath="NAME" SelectedValuePath="CODE" />-->
                                        <c1:DataGridTemplateColumn Header="호퍼선택" EditOnSelection="True" Name="HOPPER_ID" MinWidth="80" CellContentStyle="{StaticResource C1ComboBoxStyle}">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <c1:C1ComboBox SelectedValue="{Binding HOPPER_ID, Mode=TwoWay}"   DisplayMemberPath="NAME" SelectedValuePath="CODE" HorizontalAlignment="Right" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn        Header = "CHK_FLAG"     Binding = "{Binding CHK_FLAG}"    IsReadOnly="True"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="↑">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  x:Name="btnUp" Width="Auto" Content="{Binding ConverterParameter=↑, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnUp_Click"/>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTemplateColumn Name="Delete" Width="Auto" Header="↓">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button  x:Name="btnDown" Width="Auto" Content="{Binding ConverterParameter=↓, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                                                 Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDown_Click"/>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                                <Grid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="2"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="2"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="2"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="2"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}"  HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                    <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtWorker"  Style="{StaticResource SearchCondition_TextBoxStyle}" KeyDown="txtWorker_KeyDown"/>
                                    <Button  Grid.Row="1" Grid.Column="3" x:Name="btnReqUser"    Content="{Binding ConverterParameter=Title17,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" Click="btnReqUser_Click" HorizontalAlignment="Left"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}"  HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}"/>
                                    <TextBox   Grid.Row="2" Grid.Column="2" x:Name="txtRemark" Style="{StaticResource Content_InputForm_TextBoxStyle}"   AcceptsReturn="True" Height="35" Grid.ColumnSpan ="3"/>
                                    <Button  Grid.Row="2"   Grid.Column="9" x:Name="btnRequest" Content="{Binding ConverterParameter=투입요청, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl01Style}" Cursor="Hand" Click="btnRequest_Click"  />
                                </Grid>
                            </Grid>
                        </Grid>

                        <Grid Grid.Row="3" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="50"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="2"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Border Grid.Row="2" Grid.Column="1" Grid.RowSpan="5" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Border Grid.Row="2" Grid.Column="1" Grid.RowSpan="1" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock   Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='투입요청서조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                </TextBlock>
                                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <CheckBox  x:Name="chkCompleted"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=완료}"    Style="{StaticResource SearchCondition_CheckBoxStyle}" Margin="5" />
                                    <CheckBox  x:Name="chkRequest"    Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=요청서}"  Style="{StaticResource SearchCondition_CheckBoxStyle}" Margin="5" Checked="chkRequest_Checked" Unchecked="chkRequest_Unchecked"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="2" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock  Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='요청일', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <ctrlLib:LGCDatePicker    Grid.Row="0" Grid.Column="3" x:Name="dtpDate"  DatepickerType="Date"/>
                                <!--<DatePicker    Grid.Row="0" Grid.Column="3" x:Name="dtpDate"  />-->
                                <TextBlock Grid.Row="0" Grid.Column="5" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox Grid.Row="0" Grid.Column="6" x:Name="EQUIPMENT" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />
                            </Grid>
                            <Grid Grid.Row="2" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>
