                                        <c1:DataGridTextColumn        Header = "자재규격"   Binding = "{Binding MTRLDESC}"     IsReadOnly="True" HorizontalAlignment="Left" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI" />
