<UserControl x:Class="LGC.GMES.MES.ELEC001.PGM_GUI_006"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded" Initialized="UserControl_Initialized">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>

        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="SRS이송탱크">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="5" />
                        <RowDefinition Height="45" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="2*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="5" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>

                    <Grid x:Name="ButtonArea" Grid.Row="1" Grid.Column="1" Margin="0,-51,0,0"  >
                        <!--위에 버튼-->
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>

                            <!--<c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnMore" >
                                <c1:C1DropDownButton.Header>
                                    <TextBlock x:Name="selection" Text="{Binding ConverterParameter='MORE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center"/>
                                </c1:C1DropDownButton.Header>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    --><!--추가기능버튼-->
                                    <!--<Button  Grid.Row="0" Grid.Column="0" x:Name="btnPrintCard"      Content="{Binding ConverterParameter='전극카드발행',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}"  Click="btnPrintCard_Click"/>
                                    <Button  Grid.Row="1" Grid.Column="0" x:Name="btnPrintBarcode"              Content="{Binding ConverterParameter='바코드변경',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnPrintBarcode_Click"/>
                                    <Button  Grid.Row="2" Grid.Column="0" x:Name="btnFcutChange"              Content="{Binding ConverterParameter='F/CUT변경',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnFcutChange_Click"/>--><!--
                                </Grid>
                            </c1:C1DropDownButton>-->

                            <Button              Grid.Row="0" Grid.Column="1" x:Name="btnStart"    Content="{Binding ConverterParameter='작업시작',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunStartImportStyle}"/>
                            <Button              Grid.Row="0" Grid.Column="2" x:Name="btnConfrim" Content="{Binding ConverterParameter='실적확인',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}"/>


                        </Grid>
                    </Grid>


                    <Grid x:Name="searchArea" Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="0.5*"/>
                            <ColumnDefinition Width="1*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Border Grid.ColumnSpan="10" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                        <!--title-->
                        <TextBlock  Grid.Column="0" Text="Line" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <TextBlock  Grid.Column="2" Text="설비" Style="{StaticResource Content_InputForm_LabelStyle}" />

                        <!--contorole-->

                        <c1:C1ComboBox   Grid.Column="1" x:Name="cboEquipmentSegment"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        <c1:C1ComboBox   Grid.Column="3" x:Name="cboEquipment"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                        <StackPanel Grid.Column="5" Orientation="Horizontal">
                            <CheckBox  x:Name="chkWait" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="대기" IsChecked="True"/>
                            <CheckBox x:Name="chkRun" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="작업중" IsChecked="True"/>
                        </StackPanel>

                        <!--search button-->
                        <Button x:Name="btnSearch"  Grid.Column="7" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Center" Click="btnSearch_Click"/>
                        <!--end search area-->
                    </Grid>

                    <Grid Grid.Row="3" Grid.Column="1" x:Name="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="grdWorkOrder" Grid.Column="0">
                            <!--<Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>

                            --><!-- 1row--><!--
                            <Border Grid.Row="0" Grid.RowSpan="6" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='작업지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            --><!--2row--><!--
                            <Border Grid.Row="1"  Grid.RowSpan=" 5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            --><!--3row--><!--
                            <Border  Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                            <Grid  Grid.Row="2" Grid.Column="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                --><!--title--><!--
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='계획수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='생산수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='잔량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>

                                --><!--control--><!--
                                <TextBox x:Name="txtPlanQty" Grid.Row="1" Grid.Column="0"  Style="{StaticResource SearchCondition_TextBoxStyle}" TextAlignment="Center" FontSize="14" FontWeight="Bold"/>
                                <TextBox x:Name="txtProdQty" Grid.Row="1" Grid.Column="1"  Style="{StaticResource SearchCondition_TextBoxStyle}" TextAlignment="Center" FontSize="14" FontWeight="Bold"/>
                                <TextBox x:Name="txtRemainQty2" Grid.Row="1" Grid.Column="2"  Style="{StaticResource SearchCondition_TextBoxStyle}" TextAlignment="Center" FontSize="14" FontWeight="Bold" Text="aa"/>
                            </Grid>
                            --><!--5row--><!--
                            <c1:C1DataGrid Grid.Row="4" Grid.Column="1" x:Name="dgWorkOrder" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">

                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn Name="CHK" Width="35" >
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>

                                    <c1:DataGridNumericColumn        Header = "순위"     Binding = "{Binding RANK}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품ID"   Binding = "{Binding PRODID}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn     Header = "계획수량" Binding = "{Binding PLANQTY}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn     Header = "생산수량" Binding = "{Binding PRODQTY}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "TYPE"   Binding = "{Binding Type}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "STATUS"   Binding = "{Binding STATUS}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "M/O"      Binding = "{Binding MO}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "W/O"      Binding = "{Binding WO}"     HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>

                            </c1:C1DataGrid>
                            --><!--end workorder-->
                        </Grid>

                        <Grid x:Name="productLot" Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='PRODUCTLOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan=" 3" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow">
                                <c1:C1DataGrid.Columns>
                                  
                                    <c1:DataGridTemplateColumn Name="CHK" Width="35" >
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>

                                    <c1:DataGridTextColumn        Header = "LOTID"     Binding = "{Binding LOTID}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "WIPSEQ"       Binding = "{Binding WIPSEQ}"             HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn        Header = "투입LOT"       Binding = "{Binding PARENTLOT}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "상태" Binding = "{Binding STATUS}"   HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "재공량"   Binding = "{Binding WIPQTY}"   HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "장비수량"       Binding = "{Binding EQIPQTY}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "F/CUT"    Binding = "{Binding FCUT}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "합권취"   Binding = "{Binding MERG}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "작업지시"   Binding = "{Binding WORKWORDER}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품ID"   Binding = "{Binding PRODID}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품명"   Binding = "{Binding PRODNAME}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "시작시간"   Binding = "{Binding STARTTIME}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "종료시간"   Binding = "{Binding ENDTIME}"   HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "CUT"   Binding = "{Binding CHILDSEQ}"   HorizontalAlignment="Center" Visibility="Hidden" />
                                    <c1:DataGridNumericColumn        Header = "버전"   Binding = "{Binding COATERVER}"   HorizontalAlignment="Center" Visibility="Hidden" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                            <!--end prodcut Lot-->
                        </Grid>
                        <!--end top-->
                    </Grid>

                    <Grid Grid.Row="5" Grid.Column="1" x:Name="LotInfoArea">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Grid x:Name="detail" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="8" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='실적상세', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan="7" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgLotInfo" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn        Header = "LOTID"   Binding = "{Binding LOTID}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "생산량"   Binding = "{Binding INPUTQTY}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "양품량"   Binding = "{Binding GOODQTY}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn        Header = "LOSS량"   Binding = "{Binding LOSSQTY}"     HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>

                            <!--5row-->
                            <Grid x:Name="LotInfo" Grid.Row="4" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="3*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <!--title-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="8" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#ee5283" >

                                </Border>
                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" >
                                    <TextBlock  Text="{Binding ConverterParameter='버전', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />

                                <Border Grid.Row="1" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='생산량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='양품량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='LOSS량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>

                                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='LOT상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>

                                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='가동시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <Border Grid.Row="5" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="5" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="5" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                
                                <Border Grid.Row="6" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='LOTCOMMENT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>

                                <!--contorol-->
                                <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox Grid.Column="0" x:Name="txtVersion"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23"/>
                                </Border>
                               
                                <Border Grid.Row="1" Grid.Column="7" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                </Border>


                                <!--2row-->
                                <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtInputQty"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtGoodQty"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtLossQty"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23"/>
                                </Border>

                                <!--2row-->
                                <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtWorkorder"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtLotStauts"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtWorkDate"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23"/>
                                </Border>

                                <!--5row-->
                                <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"  Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtStartTime"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2"  Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtOperationTime"        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <!--<Border Grid.Row="4" Grid.Column="4"  Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <ctrlLib:LGCDatePicker x:Name="ldpDatePicker"  DatepickerType="Date" Margin="10,0"  />
                                </Border>

                                <Border Grid.Row="4" Grid.Column="5"  Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <c1:C1TimeEditor x:Name="teTimeEditor" Style="{StaticResource C1TimeEditorStyle}"  />
                                </Border>-->
                                
                                <!--4row-->
                                <Border Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
                                            <ColumnDefinition Width="10"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="txtShift"  Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MaxHeight="23" Margin="10,4,0,4"/>
                                        <!--<Button Grid.Column="1" x:Name="btnShift" VerticalAlignment="Center" Click="btnShift_Click" >
                                            <Image Source="/LGC.GMES.MES.CMM001;component/Images/icon_input_search.png" Width="18" Height="18" />
                                        </Button>-->
                                    </Grid>
                                </Border>

                                <Border Grid.Row="5" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="40"/>
