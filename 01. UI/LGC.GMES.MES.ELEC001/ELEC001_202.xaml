<UserControl x:Class="LGC.GMES.MES.ELEC001.ELEC001_202"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FFDDDDDD" x:Name="grdMain">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="185*"/>
            <ColumnDefinition Width="71*"/>
        </Grid.ColumnDefinitions>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="재와인더" Grid.ColumnSpan="2">
            <!--#region Main Grid -->
            <Grid x:Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="51" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <!--#region Button Area -->
                <Grid x:Name="grdCommand" Grid.Row="0" Grid.Column="0" Margin="0,-47,0,0" VerticalAlignment="Top">
                    <Grid x:Name="ButtonArea">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="34" />
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Row="0" Grid.Column="1"  x:Name="txtEndLotID"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Width="100" Height="32" Margin="2,0,2,0" Visibility="Collapsed" />
                            <Button  Grid.Row="0" Grid.Column="2"  x:Name="btnMoveStart"     Content="{Binding ConverterParameter='재와인더 이동', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl01Style}"       Click="btnMoveStart_Click"      Margin="5,0,0,0" />
                            <Button  Grid.Row="0" Grid.Column="3"  x:Name="btnMoveCancel"    Content="{Binding ConverterParameter='이동취소',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl03Style}"       Click="btnMoveCancel_Click"     Margin="5,0,0,0" />
                            <Button  Grid.Row="0" Grid.Column="4"  x:Name="btnStart"         Content="{Binding ConverterParameter='작업시작',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl01Style}"       Click="btnStart_Click"          Margin="5,0,0,0" />
                            <Button  Grid.Row="0" Grid.Column="5"  x:Name="btnStartCancel"   Content="{Binding ConverterParameter='작업취소',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl03Style}"       Click="btnStartCancel_Click"    Margin="5,0,0,0" />
                            <Button  Grid.Row="0" Grid.Column="6"  x:Name="btnEqptEnd"       Content="{Binding ConverterParameter='장비완료',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}"       Click="btnEqptEnd_Click"        Margin="5,0,0,0" />
                            <Button  Grid.Row="0" Grid.Column="7"  x:Name="btnEqptEndCancel" Content="{Binding ConverterParameter='장비완료취소',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}"       Click="btnEqptEndCancel_Click"  Margin="5,0,0,0" />
                            <Button  Grid.Row="0" Grid.Column="8"  x:Name="btnConfirm"       Content="{Binding ConverterParameter='실적확정',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}"       Click="btnConfirm_Click"        Margin="5,0,0,0" />
                            <Button  Grid.Row="0" Grid.Column="9"  x:Name="btnCard"          Content="{Binding ConverterParameter='이력카드발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControlBarCodeStyle}"  Click="btnCard_Click"           Margin="5,0,0,0" />
                            <Button  Grid.Row="0" Grid.Column="10" x:Name="btnPrintLabel"    Content="{Binding ConverterParameter='발행',          Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControlBarCodeStyle}"  Click="btnPrintLabel_Click"     Margin="5,0,0,0" />
                            
                            
                        </Grid>
                    </Grid>
                </Grid>
                <!--#endregion-->
                <!--#region Search Area -->
                <Grid x:Name="grdSearch" Grid.Row="0" Grid.Column="0">
                    <Grid Grid.Row="1">
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="51" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='Line', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboEquipmentSegment" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock Grid.Row="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox Grid.Row="0" Grid.Column="3" x:Name="cboProcess" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                    <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock Grid.Row="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox Grid.Row="0" Grid.Column="5" x:Name="cboEquipment" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedIndexChanged="cboEquipment_SelectedIndexChanged" />
                                    <StackPanel Grid.Row="0" Grid.Column="6" Name="spSingleCoater" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock Grid.Row="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <TextBox Grid.Row="0" Grid.Column="7" x:Name="txtLOTID"  CharacterCasing="Upper" Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23" KeyDown="txtLOTID_KeyDown" />
                                    <StackPanel Grid.Row="0" Grid.Column="11" Orientation="Horizontal">
                                        <CheckBox x:Name="chkWait" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=대기}" Tag="WAIT"/>
                                        <Border Width="15"/>
                                        <CheckBox x:Name="chkRun" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=진행}" IsChecked="True" />
                                        <Border Width="15"/>
                                        <CheckBox x:Name="chkEqpEnd" Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=설비완공}" IsChecked="True" />
                                    </StackPanel>
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Button x:Name="btnSearch" Grid.Row="0" Grid.Column="0" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
                <!--#endregion-->
                <!--#region Contents Area -->
                <Grid x:Name="Content" Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="2*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="3*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="30"/>
                        <RowDefinition Height="8"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <!--재와인더 대기 리스트-->
                    <Grid x:Name="grdRewinderList" Grid.Row="1" Grid.Column="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid   Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='재공정보', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </Grid>
                            <Border Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Grid   Grid.Row="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid   Grid.Row="1" Grid.Column="1" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5*"/>
                                    </Grid.RowDefinitions>
                                    <c1:C1DataGrid Grid.Row="4" x:Name="dgWipInfo" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow" CanUserAddRows="True" CanUserRemoveRows="True">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Name="CHK" Width="Auto">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="CheckBox_Checked"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>

                                            <c1:DataGridTextColumn        Header = "LOTID"            Binding = "{Binding LOTID}"         HorizontalAlignment = "Center" />
                                            <c1:DataGridTextColumn        Header = "공정"             Binding = "{Binding PROCID}"        HorizontalAlignment = "Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "공정"             Binding = "{Binding PROCNAME}"      HorizontalAlignment = "Center" />
                                            <c1:DataGridTextColumn        Header = "상태"             Binding = "{Binding WIPSTAT}"       HorizontalAlignment = "Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "상태"             Binding = "{Binding WIPSNAME}"      HorizontalAlignment = "Center" />
                                            <c1:DataGridTextColumn        Header = "프로젝트명"       Binding = "{Binding PRJT_NAME}"     HorizontalAlignment = "Center" />
                                            <c1:DataGridTextColumn        Header = "제품코드"         Binding = "{Binding PRODID}"        HorizontalAlignment = "Center"/>
                                            <c1:DataGridTextColumn        Header = "제품명"           Binding = "{Binding PRODNAME}"      HorizontalAlignment = "Center" />
                                            <c1:DataGridTextColumn        Header = "버전"             Binding = "{Binding PROD_VER_CODE}" HorizontalAlignment = "Center" />
                                            <c1:DataGridTextColumn        Header = "Lane수"           Binding = "{Binding LANE_QTY}"      HorizontalAlignment = "Center" />
                                            <c1:DataGridTextColumn        Header = "양품량(C/Roll)"   Binding = "{Binding WIPQTY}"        HorizontalAlignment = "Center" />
                                            <c1:DataGridTextColumn        Header = "양품량(S/Roll)"   Binding = "{Binding WIPQTY2}"       HorizontalAlignment = "Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "단위"             Binding = "{Binding UNIT}"          HorizontalAlignment = "Center" />
                                            <c1:DataGridTextColumn        Header = "LANE_PTN_QTY"     Binding = "{Binding LANE_PTN_QTY}"  HorizontalAlignment = "Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "WIPSEQ"           Binding = "{Binding WIPSEQ}"        HorizontalAlignment = "Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn        Header = "시작시간"         Binding = "{Binding WIPDTTM_ST}"    HorizontalAlignment = "Center" IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "완료시간"         Binding = "{Binding WIPDTTM_ED}"    HorizontalAlignment = "Center" IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn        Header = "작업일자"         Binding = "{Binding WORKDATE}"      HorizontalAlignment = "Center" IsReadOnly="True" Visibility="Collapsed" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <!--end RewinderList-->
                    <!--start Product Lot-->
                    <Grid x:Name="grdRewinderLot" Grid.Row="1" Grid.Column="2">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                            <Grid   Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock      Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='Product Lot', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </Grid>
                            <Border Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Grid   Grid.Row="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <Grid   Grid.Row="1" Grid.Column="1" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="5*"/>
                                    </Grid.RowDefinitions>
                                    <c1:C1DataGrid Grid.Row="4" x:Name="dgRewinderInfo" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Name="CHK" Width="Auto">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="CheckBox_Click"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>

                                            <c1:DataGridTextColumn  Header = "LOTID"           Binding = "{Binding LOTID}"         HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn  Header = "공정"            Binding = "{Binding PROCID}"        HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn  Header = "공정"            Binding = "{Binding PROCNAME}"      HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn  Header = "상태"            Binding = "{Binding WIPSTAT}"       HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn  Header = "상태"            Binding = "{Binding WIPSNAME}"      HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn  Header = "프로젝트명"      Binding = "{Binding PRJT_NAME}"     HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn  Header = "제품코드"        Binding = "{Binding PRODID}"        HorizontalAlignment="Center"/>
                                            <c1:DataGridTextColumn  Header = "제품명"          Binding = "{Binding PRODNAME}"      HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn  Header = "버전"            Binding = "{Binding PROD_VER_CODE}" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn  Header = "Lane수"          Binding = "{Binding LANE_QTY}"      HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn  Header = "양품량(C/Roll)"  Binding = "{Binding WIPQTY}"        HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn  Header = "양품량(S/Roll)"  Binding = "{Binding WIPQTY2}"       HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn  Header = "단위"            Binding = "{Binding UNIT}"          HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn  Header = "LANE_PTN_QTY"    Binding = "{Binding LANE_PTN_QTY}"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn  Header = "WIPSEQ"          Binding = "{Binding WIPSEQ}"        HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn  Header = "시작시간"        Binding = "{Binding WIPDTTM_ST}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn  Header = "완료시간"        Binding = "{Binding WIPDTTM_ED}"    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn  Header = "작업일자"        Binding = "{Binding WORKDATE}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>
                            </Grid>
                            <!--end Product Lot-->
                        </Grid>
                    </Grid>
                    <GridSplitter Grid.Row="1" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                    <GridSplitter Grid.Row="2" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                    <GridSplitter Grid.Row="4" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                    <!--start detail-->
                    <Grid x:Name="grdResult" Grid.Row="3" Grid.Column="0">
                        <Grid Grid.Row="3" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="31"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="120"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>
                            <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Name="grdTopSummary">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid x:Name="grdResultTitle" Grid.Column="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" Text="{Binding ConverterParameter='생산실적', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </Grid>
                            </Grid>
                            <!--1row-->
                            <Border Grid.Row="1" Grid.RowSpan="7" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Border Grid.Row="2" Grid.Column="1" HorizontalAlignment="Right" Visibility="Collapsed">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="Auto">
                                    <Button x:Name="btnSaveWipHistory" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="50" />
                                </StackPanel>
                            </Border>
                            <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Name="grdSummary">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="80" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="70" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="40" />
                                    <ColumnDefinition Width="5" />
                                </Grid.ColumnDefinitions>
                                <!-- 1row-->
                                <TextBlock Grid.Column="13" Text="{Binding ConverterParameter='단위', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                <TextBox Grid.Column="15" x:Name="txtUnit" Height="24" VerticalAlignment="Center" HorizontalContentAlignment="Center" IsEnabled="False" />
                            </Grid>
                            <!--3row-->
                            <Grid x:Name="LotList" Grid.Row="4" Grid.Column="1">
                                <c1:C1DataGrid x:Name="dgLotInfo" Grid.Row="4" Grid.Column="0" IsReadOnly="True" HeadersVisibility="None" RowHeight="Auto" SelectionMode="SingleRow" CanUserSort="False" CanUserFilter="False">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn     Header="[LOTID,LOTID]"         Binding="{Binding LOTID}"         HorizontalAlignment="Center" />
                                        <c1:DataGridNumericColumn  Header="[생산수량, 생산수량]"  Binding="{Binding INPUTQTY}"      HorizontalAlignment="Right" Format="F2" />
                                        <c1:DataGridNumericColumn  Header="[양품수량, C/Roll]"    Binding="{Binding GOODQTY}"       HorizontalAlignment="Right" Format="F2" />
                                        <c1:DataGridNumericColumn  Header="[양품수량, S/Roll]"    Binding="{Binding GOODPTNQTY}"    HorizontalAlignment="Right" Format="F2" />
                                        <c1:DataGridNumericColumn  Header="[불량수량, 합계]"      Binding="{Binding LOSSQTY}"       HorizontalAlignment="Right" Format="F2" />
                                        <c1:DataGridNumericColumn  Header="[불량수량, LOT불량]"   Binding="{Binding DTL_DEFECT}"    HorizontalAlignment="Right" Format="F2" />
