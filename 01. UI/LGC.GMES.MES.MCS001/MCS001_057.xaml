<UserControl
    x:Class="LGC.GMES.MES.MCS001.MCS001_057"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:CMM001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"
    d:DesignHeight="1000"
    d:DesignWidth="1200"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="반송요청현황 및 이력">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <!--  TopSearch  -->
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <!--  Contents  -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource Content_InputForm_LabelBorderStyle}" />

                    <Grid x:Name="gdTopSearch" Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="4" />
                        </Grid.RowDefinitions>

                        <!--  조회 버튼 영역  -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="15" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="15" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="15" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="15" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="15" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <TextBlock Margin="0,0,-10,0" Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock Style="{StaticResource Content_InputForm_LabelStyle}" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                        </StackPanel>
                        <c1:C1ComboBox
                            x:Name="cboArea"
                            Grid.Row="1"
                            Grid.Column="2"
                            AutoComplete="False"
                            DisplayMemberPath="CBO_NAME"
                            SelectedValueChanged="cboArea_SelectedValueChanged"
                            SelectedValuePath="CBO_CODE"
                            Style="{StaticResource C1ComboBoxStyle}" />

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="4"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <TextBlock Margin="0,0,-10,0" Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock
                                x:Name="lblWarehouseType"
                                Style="{StaticResource Content_InputForm_LabelStyle}"
                                Text="{Binding ConverterParameter='WH_TYPE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                        </StackPanel>
                        <c1:C1ComboBox
                            x:Name="cboWarehouseType"
                            Grid.Row="1"
                            Grid.Column="5"
                            AutoComplete="False"
                            DisplayMemberPath="CBO_NAME"
                            SelectedValueChanged="cboWarehouseType_SelectedValueChanged"
                            SelectedValuePath="CBO_CODE"
                            Style="{StaticResource C1ComboBoxStyle}" />

                        <StackPanel
                            x:Name="spElecType"
                            Grid.Row="1"
                            Grid.Column="7"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <TextBlock Margin="0,0,-10,0" Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock
                                x:Name="lblElecType"
                                Style="{StaticResource Content_InputForm_LabelStyle}"
                                Text="{Binding ConverterParameter='WAREHOUSE_POLARITY', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                        </StackPanel>
                        <c1:C1ComboBox
                            x:Name="cboElecType"
                            Grid.Row="1"
                            Grid.Column="8"
                            AutoComplete="False"
                            DisplayMemberPath="CBO_NAME"
                            SelectedValueChanged="cboElecType_SelectedValueChanged"
                            SelectedValuePath="CBO_CODE"
                            Style="{StaticResource C1ComboBoxStyle}" />

                        <StackPanel
                            Grid.Row="1"
                            Grid.Column="10"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <TextBlock Margin="0,0,-10,0" Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock
                                x:Name="lblWarehouse"
                                Style="{StaticResource Content_InputForm_LabelStyle}"
                                Text="{Binding ConverterParameter='STORAGE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                        </StackPanel>
                        <c1:C1ComboBox
                            x:Name="cboWarehouse"
                            Grid.Row="1"
                            Grid.Column="11"
                            AutoComplete="False"
                            DisplayMemberPath="CBO_NAME"
                            SelectedValueChanged="cboWarehouse_SelectedValueChanged"
                            SelectedValuePath="CBO_CODE"
                            Style="{StaticResource C1ComboBoxStyle}" />

                        <TextBlock
                            Grid.Row="3"
                            Grid.Column="1"
                            Style="{StaticResource Content_InputForm_LabelStyle}"
                            Text="{Binding ConverterParameter='조회일자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                        <ctrlLib:LGCDatePicker
                            x:Name="dtpStart"
                            Grid.Row="3"
                            Grid.Column="2"
                            DatepickerType="Date" />

                        <TextBlock
                            x:Name="lblLotId"
                            Grid.Row="3"
                            Grid.Column="4"
                            Style="{StaticResource Content_InputForm_LabelStyle}"
                            Text="{Binding ConverterParameter='LOT_ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                        <TextBox
                            x:Name="txtLotId"
                            Grid.Row="3"
                            Grid.Column="5"
                            Style="{StaticResource SearchCondition_TextBoxStyle}" />

                        <TextBlock
                            x:Name="lblCstId"
                            Grid.Row="3"
                            Grid.Column="7"
                            Style="{StaticResource Content_InputForm_LabelStyle}"
                            Text="{Binding ConverterParameter='CSTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                        <TextBox
                            x:Name="txtCstId"
                            Grid.Row="3"
                            Grid.Column="8"
                            Style="{StaticResource SearchCondition_TextBoxStyle}" />

                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="10"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <TextBlock
                                x:Name="lblProdHold"
                                Style="{StaticResource Content_InputForm_LabelStyle}"
                                Text="{Binding ConverterParameter='PRODUCTION_HOLD', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                        </StackPanel>
                        <c1:C1ComboBox
                            x:Name="cboProdHold"
                            Grid.Row="3"
                            Grid.Column="11"
                            AutoComplete="False"
                            DisplayMemberPath="CBO_NAME"
                            SelectedValuePath="CBO_CODE"
                            Style="{StaticResource C1ComboBoxStyle}" />

                        <StackPanel
                            Grid.Row="3"
                            Grid.Column="13"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <TextBlock
                                x:Name="lblQaHold"
                                Style="{StaticResource Content_InputForm_LabelStyle}"
                                Text="{Binding ConverterParameter='QA HOLD', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                        </StackPanel>
                        <c1:C1ComboBox
                            x:Name="cboQaHold"
                            Grid.Row="3"
                            Grid.Column="14"
                            AutoComplete="False"
                            DisplayMemberPath="CBO_NAME"
                            SelectedValuePath="CBO_CODE"
                            Style="{StaticResource C1ComboBoxStyle}" />

                        <Button
                            x:Name="btnSearch"
                            Grid.Row="3"
                            Grid.Column="17"
                            Click="btnSearch_Click"
                            Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                            Cursor="Hand"
                            Style="{StaticResource SearchButtonStyle}" />
                    </Grid>

                    <!--  Contents  -->
                    <c1:C1TabControl
                        x:Name="tabMain"
                        Grid.Row="2"
                        Margin="3"
                        SelectionChanged="tabMain_SelectionChanged">

                        <c1:C1TabItem x:Name="tabStatusList" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='수동반송'}">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="9*" />
                                    <ColumnDefinition Width="32*" />
                                    <ColumnDefinition Width="68*" />
                                    <ColumnDefinition Width="1085*" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="3*" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="54" />
                                </Grid.RowDefinitions>

                                <!--  백그라운드용  -->
                                <Border
                                    Grid.Row="0"
                                    Grid.RowSpan="3"
                                    Grid.ColumnSpan="4"
                                    Margin="0,0,0,7.667"
                                    Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                                <Border
                                    Grid.Row="0"
                                    Grid.ColumnSpan="4"
                                    Margin="1,0"
                                    BorderBrush="#ffbebebe"
                                    BorderThickness="0,0,0,1"
                                    Style="{StaticResource BorderSubTitleStyle}" />

                                <TextBlock
                                    Grid.Row="0"
                                    Grid.Column="1"
                                    Grid.ColumnSpan="3"
                                    Margin="6,9,0,8"
                                    Style="{StaticResource Content_ModuleTitleStyle}"
                                    Text="{Binding ConverterParameter='WAREHOUSE_WIP', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />

                                <c1:C1DataGrid
                                    x:Name="dgProduct"
                                    Grid.Row="1"
                                    Grid.ColumnSpan="4"
                                    Margin="8,8,8,7.667"
                                    FrozenColumnCount="3"
                                    HeadersVisibility="Column"
                                    IsReadOnly="True"
                                    LoadedCellPresenter="dgProduct_LoadedCellPresenter"
                                    MouseDoubleClick="dgProduct_MouseDoubleClick"
                                    SelectionMode="SingleRow">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn
                                            Name="CHK"
                                            Width="40"
                                            HorizontalAlignment="Center"
                                            Header="선택"
                                            IsReadOnly="False">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox
                                                        HorizontalAlignment="Center"
                                                        VerticalAlignment="Center"
                                                        Checked="dgProduct_CheckedChanged"
                                                        IsChecked="{Binding CHK, Mode=TwoWay}"
                                                        Unchecked="dgProduct_CheckedChanged" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding CMD_STAT_NAME}"
                                            Header="반송지시상태" />
                                        <c1:DataGridNumericColumn
                                            HorizontalAlignment="Right"
                                            Binding="{Binding ROW_NUM}"
                                            Header="순위"
                                            Visibility="Collapsed" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding RACK_ID}"
                                            Header="Rack ID"
                                            Visibility="Collapsed" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding RACK_NAME}"
                                            Header="RACK명" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding CSTTYPE}"
                                            Header="Carrier유형"
                                            Visibility="Collapsed" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding CSTSTAT}"
                                            Header="Carrier상태"
                                            Visibility="Collapsed" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding SKID_ID}"
                                            Header="REP_CARRIER" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding BOBBIN_ID}"
                                            Header="CARRIER" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding LOTID}"
                                            Header="LOT ID" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding LOTYNAME}"
                                            Header="LOT유형" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding ELTR_TYPE_NAME}"
                                            Header="극성" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding PRJT_NAME}"
                                            Header="PJT" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding PRODID}"
                                            Header="제품" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding PRODNAME}"
                                            Header="PRODNAME"
                                            Visibility="Collapsed" />
                                        <c1:DataGridNumericColumn
                                            HorizontalAlignment="Right"
                                            Binding="{Binding WIPQTY}"
                                            Format="#,##0"
                                            Header="수량" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding UNIT_CODE}"
                                            Header="단위" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding WIPHOLD}"
                                            Header="PRODUCTION_HOLD" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding QMS_HOLD_FLAG}"
                                            Header="QA Hold" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding EQSGNAME}"
                                            Header="LINE" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding CSTINDTTM}"
                                            Header="입고일시" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding VLD_DATE}"
                                            Header="유효일자" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Right"
                                            Binding="{Binding PAST_DAY}"
                                            Format="#,##0"
                                            Header="경과일수" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Left"
                                            Binding="{Binding EQPT_HOLD_TYPE_NAME}"
                                            Header="설비 보류 유형 코드" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding EQPT_HOLD_CNFM_FLAG}"
                                            Header="설비 보류 확인 여부" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding QA_INSP_TRGT_FLAG}"
                                            Header="QA_INSP_TRGT_FLAG" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding SMPL_CLCT_CMPL_NAME}"
                                            Header="SMPL_CLCT_CMPL_FLAG" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding ABNORM_TRF_RSN_NAME}"
                                            Header="ABNORM_TRF_RSN_CODE" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding CST_CLEAN_NAME}"
                                            Header="CST_CLEAN_FLAG" />
                                        <c1:DataGridTextColumn
                                            HorizontalAlignment="Center"
                                            Binding="{Binding PET_WINDING_CMPL_NAME}"
                                            Header="PET_WINDING_CMPL_FLAG" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                                <GridSplitter
                                    Grid.Row="2"
                                    Grid.RowSpan="2"
                                    Grid.ColumnSpan="4"
                                    Margin="0,0.333,0,194.333"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Stretch"
                                    ResizeDirection="Rows"
                                    ShowsPreview="True"
                                    Style="{StaticResource GridSplitterVerticalStyle}" />

                                <Grid
                                    Grid.Row="3"
                                    Grid.ColumnSpan="4"
                                    Margin="0,0.333">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--  백그라운드용  -->
                                    <Border
                                        Grid.Row="0"
                                        Grid.RowSpan="4"
                                        Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                                    <Border
                                        Grid.Row="0"
                                        Margin="1,0"
                                        BorderBrush="#ffbebebe"
                                        BorderThickness="0,0,0,1"
                                        Style="{StaticResource BorderSubTitleStyle}" />

                                    <TextBlock
                                        Grid.Row="0"
                                        Style="{StaticResource Content_ModuleTitleStyle}"
                                        Text="{Binding ConverterParameter='RETURN_TARGET', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />

                                    <c1:C1DataGrid
                                        x:Name="dgSelect"
                                        Grid.Row="1"
                                        Margin="8"
                                        FrozenColumnCount="1"
                                        HeadersVisibility="Column"
                                        IsReadOnly="True"
                                        SelectionChanged="dgSelect_SelectionChanged"
                                        SelectionMode="SingleRow">

                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn
                                                Name="CHK"
                                                Width="40"
                                                HorizontalAlignment="Center"
                                                Header="선택"
                                                IsReadOnly="False">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton
                                                            HorizontalAlignment="Center"
                                                            VerticalAlignment="Center"
                                                            Checked="dgSelect_CheckedChanged"
                                                            GroupName="grSelect"
                                                            IsChecked="{Binding CHK, Mode=TwoWay}"
                                                            Unchecked="dgSelect_CheckedChanged" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding CMD_STAT_NAME}"
                                                Header="반송지시상태" />
                                            <c1:DataGridNumericColumn
                                                HorizontalAlignment="Right"
                                                Binding="{Binding ROW_NUM}"
                                                Header="순위"
                                                Visibility="Collapsed" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding RACK_ID}"
                                                Header="Rack ID"
                                                Visibility="Collapsed" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding RACK_NAME}"
                                                Header="RACK명" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding CSTTYPE}"
                                                Header="Carrier유형"
                                                Visibility="Collapsed" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding CSTSTAT}"
                                                Header="Carrier상태"
                                                Visibility="Collapsed" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding SKID_ID}"
                                                Header="REP_CARRIER" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding BOBBIN_ID}"
                                                Header="CARRIER" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding LOTID}"
                                                Header="LOT ID" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding LOTYNAME}"
                                                Header="LOT유형" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding ELTR_TYPE_NAME}"
                                                Header="극성" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding PRJT_NAME}"
                                                Header="PJT" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding PRODID}"
                                                Header="제품" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding PRODNAME}"
                                                Header="PRODNAME"
                                                Visibility="Collapsed" />
                                            <c1:DataGridNumericColumn
                                                HorizontalAlignment="Right"
                                                Binding="{Binding WIPQTY}"
                                                Format="#,##0"
                                                Header="수량" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding UNIT_CODE}"
                                                Header="단위" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding WIPHOLD}"
                                                Header="PRODUCTION_HOLD" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding QMS_HOLD_FLAG}"
                                                Header="QA Hold" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding EQSGNAME}"
                                                Header="LINE" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding CSTINDTTM}"
                                                Header="입고일시" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding VLD_DATE}"
                                                Header="유효일자" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Right"
                                                Binding="{Binding PAST_DAY}"
                                                Format="#,##0"
                                                Header="경과일수" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Left"
                                                Binding="{Binding EQPT_HOLD_TYPE_NAME}"
                                                Header="설비 보류 유형 코드" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding EQPT_HOLD_CNFM_FLAG}"
                                                Header="설비 보류 확인 여부" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding QA_INSP_TRGT_FLAG}"
                                                Header="QA_INSP_TRGT_FLAG" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding SMPL_CLCT_CMPL_NAME}"
                                                Header="SMPL_CLCT_CMPL_FLAG" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding ABNORM_TRF_RSN_NAME}"
                                                Header="ABNORM_TRF_RSN_CODE" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding CST_CLEAN_NAME}"
                                                Header="CST_CLEAN_FLAG" />
                                            <c1:DataGridTextColumn
                                                HorizontalAlignment="Center"
                                                Binding="{Binding PET_WINDING_CMPL_NAME}"
                                                Header="PET_WINDING_CMPL_FLAG" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>

                                </Grid>

                                <!--  백그라운드용  -->
                                <Border
                                    Grid.Row="4"
                                    Grid.RowSpan="2"
                                    Grid.ColumnSpan="4"
                                    Margin="0,7.667,0,0.333"
                                    Style="{StaticResource Content_InputForm_ContentBorderStyle}" />

                                <Grid
                                    Grid.Row="4"
                                    Grid.RowSpan="2"
                                    Grid.ColumnSpan="4"
                                    Margin="0,7.667,0,0.333">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>

                                    <Grid x:Name="gdBottom">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="50" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>

                                        <StackPanel
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            HorizontalAlignment="Left"
                                            Orientation="Horizontal">
                                            <TextBlock
                                                x:Name="lblTargetType"
                                                Style="{StaticResource Content_InputForm_LabelStyle}"
                                                Text="{Binding ConverterParameter='RETURN_DESTINATION_TYPE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                                        </StackPanel>
                                        <c1:C1ComboBox
