<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             x:Class="LGC.GMES.MES.MCS001.MCS001_032"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1920" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded" 
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="고공 CV 모니터링">
            <Grid>
                <c1:C1TabControl x:Name="tabTray" SelectionChanged="tabTray_SelectionChanged" >
                    <c1:C1TabItem x:Name="TabItemRealTray" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='실 Tray'}">
                        <Grid >
                            <Grid.RowDefinitions>
                                <!--TopSearch-->
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <!--Contents-->
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                                <!--Bottom-->
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <!-- 조회 버튼 영역-->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboRealArea"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboRealArea_SelectedValueChanged" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Text="{Binding ConverterParameter='층', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboRealLevel" DisplayMemberPath="NAME" SelectedValuePath="CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboRealLevel_SelectedValueChanged" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Text="{Binding ConverterParameter='프로젝트명', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <TextBox    Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtRealProjectName" CharacterCasing="Upper" MinWidth="100" />
                                </Grid>
                                <Button Grid.Row="1" Grid.Column="10" x:Name="btnRealSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                            </Grid>

                            <!--Contents-->
                            <Grid Grid.Row="2">
                                <Grid Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.4*"/>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="7.6*" />
                                    </Grid.ColumnDefinitions>
                                    <!--Left Grid Area-->
                                    <Grid Grid.Row="0" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="34" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=모델별 수량, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                            </Border>
                                        </Grid>

                                        <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                        <Grid Grid.Row="1" >
                                            <c1:C1DataGrid x:Name="dgRealModelQty" 
                                                           AlternatingRowBackground="White"  
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           CanUserFilter="False" 
                                                           CanUserSort="False" 
                                                           SelectionMode="SingleRow"
                                                           LoadedCellPresenter="dgModelQty_LoadedCellPresenter" 
                                                           UnloadedCellPresenter="dgModelQty_UnloadedCellPresenter" 
                                                           MouseLeftButtonUp="dgRealModelQty_MouseLeftButtonUp"
                                                           >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn Header="프로젝트"  Binding="{Binding PRJT_NAME}"       HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"/>
                                                    <c1:DataGridNumericColumn Header="수량"   Binding="{Binding LOT_CNT}"         HorizontalAlignment="Right" Format="#,##0" />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>


                                        <Grid Grid.Row="2" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" Background="#ffffff" BorderThickness="0" BorderBrush="#8a8a8a">
                                                <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Center" >
                                                    <RadioButton Margin="0,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=Stacking/Folding Line}" GroupName="LineGroup" Name="rdoLineStackFolding" Style="{StaticResource SearchCondition_RadioButtonStyle}" IsChecked="True" Checked="rdoLineStackFolding_Checked" />
                                                    <RadioButton Margin="5,0,0,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=PKG Line}" GroupName="LineGroup" Name="rdoLinePKG" Style="{StaticResource SearchCondition_RadioButtonStyle}" Checked="rdoLinePKG_Checked"  />
                                                </StackPanel>
                                            </Border>
                                        </Grid>

                                        <Border Grid.Row="3" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                        <Grid Grid.Row="3" >
                                            <c1:C1DataGrid x:Name="dgRealLineQty" 
                                                           AlternatingRowBackground="White"  
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           CanUserFilter="False" 
                                                           CanUserSort="False" 
                                                           SelectionMode="SingleRow"
                                                           LoadedCellPresenter="dgLineQty_LoadedCellPresenter" 
                                                           UnloadedCellPresenter="dgLineQty_UnloadedCellPresenter" 
                                                           MouseLeftButtonUp="dgRealLineQty_MouseLeftButtonUp"
                                                           >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn Header="LINE"      Binding="{Binding EQSGID}"          HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn Header="LINE"      Binding="{Binding EQSGNAME}"        HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"/>
                                                    <c1:DataGridTextColumn Header="프로젝트"  Binding="{Binding PRJT_NAME}"       HorizontalAlignment="Center" />
                                                    <c1:DataGridNumericColumn Header="수량"   Binding="{Binding LOT_CNT}"         HorizontalAlignment="Right" Format="#,##0" />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </Grid>

                                    <!--Splitter-->
                                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  />
                                    <Grid Grid.Column="2" >
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"></Border>
                                            <Grid Grid.Row="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="34"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="42"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="13"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=상세정보, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                                <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                                <Grid  Grid.Row="1" >
                                                    <c1:C1DataGrid x:Name="dgRealTrayDetail" 
                                                           HeadersVisibility="Column" 
                                                           CanUserFilter="False" 
                                                           CanUserSort="False" 
                                                           SelectionMode="SingleCell" 
                                                           Grid.ColumnSpan="2" 
                                                           >
                                                        <c1:C1DataGrid.Columns>
                                                            <c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                                <c1:DataGridCheckBoxColumn.Header>
                                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                        <CheckBox x:Name="chkRealHeaderAll" Margin="0" Width="19" Checked="chkRealHeaderAll_Checked" Unchecked="chkRealHeaderAll_Unchecked"></CheckBox>
                                                                    </StackPanel>
                                                                </c1:DataGridCheckBoxColumn.Header>
                                                            </c1:DataGridCheckBoxColumn>
                                                            <c1:DataGridTextColumn	    Header = "설비라인 ID"	Binding = "{Binding EQSGID}"		 HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn	    Header = "설비라인명"	Binding = "{Binding EQSGNAME}"		 HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn	    Header = "기준라인"	    Binding = "{Binding BASE_LINE}"		 HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn	    Header = "기준라인명"	Binding = "{Binding BASE_LINE_NAME}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "PJT명"	    Binding = "{Binding PRJT_NAME}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "Tray ID"	    Binding = "{Binding CSTID}"	         HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "Lot ID"	    Binding = "{Binding LOTID}"	         HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "LINE"	        Binding = "{Binding LINE}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn		Header = "LINE"	        Binding = "{Binding LINE_NAME}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "Machine"		Binding = "{Binding PROD_EQPTID}"	 HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                            <c1:DataGridTextColumn		Header = "Machine"		Binding = "{Binding PROD_EQPTNAME}"	 HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "완성시간"	    Binding = "{Binding WIPDTTM_ED}"	 HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridNumericColumn	Header = "수량"		    Binding = "{Binding WIPQTY}"	     HorizontalAlignment="Center" Format="#,##0" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "모델"		    Binding = "{Binding MODLID}"	     HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "제품코드"	    Binding = "{Binding PRODID}"	     HorizontalAlignment="Center" IsReadOnly="True" />
                                                        </c1:C1DataGrid.Columns>
                                                    </c1:C1DataGrid>

                                                </Grid>

                                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                                <Grid Grid.Row="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="13"/>
                                                        <ColumnDefinition Width="1.5*" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1.*" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1.*" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1.*" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="13" />
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Row="0" Grid.Column="3">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="7*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                            <TextBlock  Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                                        </StackPanel>
                                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboRealProcess" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboRealProcess_SelectedValueChanged" />
                                                    </Grid>

                                                    <Grid Grid.Row="0" Grid.Column="5">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="7*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                            <TextBlock  Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                                        </StackPanel>
                                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboRealLine" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboRealLine_SelectedValueChanged" />
                                                    </Grid>

                                                    <Grid Grid.Row="0" Grid.Column="7">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="7*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                            <TextBlock  Text="{Binding ConverterParameter='출고Port', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                                        </StackPanel>
                                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboRealShippingPort"  DisplayMemberPath="PORT_NAME" SelectedValuePath="PORT_ID"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                                    </Grid>

                                                    <Button Grid.Row="0" Grid.Column="9" x:Name="btnRealShipping" Content="{Binding ConverterParameter=출고, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnShipping_Click" />
                                                </Grid>
                                            </Grid>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>


                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem x:Name="TabItemEmptyTray" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='공 Tray'}">
                        <Grid >
                            <Grid.RowDefinitions>
                                <!--TopSearch-->
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <!--Contents-->
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                                <!--Bottom-->

                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                            <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <!-- 조회 버튼 영역-->
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="13" />
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEmptyArea"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEmptyArea_SelectedValueChanged" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Text="{Binding ConverterParameter='층', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEmptyLevel" DisplayMemberPath="NAME" SelectedValuePath="CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEmptyLevel_SelectedValueChanged" />
                                </Grid>

                                <Grid Grid.Row="1" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="7*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Text="{Binding ConverterParameter='Tray 유형', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <TextBox    Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtTrayType" CharacterCasing="Upper" MinWidth="100" />
                                </Grid>
                                <Button Grid.Row="1" Grid.Column="10" x:Name="btnEmptySearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                            </Grid>

                            <!--Contents-->
                            <Grid Grid.Row="2">
                                <Grid Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.4*"/>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="7.6*" />
                                    </Grid.ColumnDefinitions>
                                    <!--Left Grid Area-->
                                    <Grid Grid.Row="0" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34" />
                                            <RowDefinition Height="*" />
                                            <RowDefinition Height="34" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=모델별 수량, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                            </Border>
                                        </Grid>

                                        <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                        <Grid Grid.Row="1" >
                                            <c1:C1DataGrid x:Name="dgEmptyModelQty" 
                                                           AlternatingRowBackground="White"  
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           CanUserFilter="False" 
                                                           CanUserSort="False" 
                                                           SelectionMode="SingleRow"
                                                           LoadedCellPresenter="dgEmptyModelQty_LoadedCellPresenter"
                                                           UnloadedCellPresenter="dgEmptyModelQty_UnloadedCellPresenter" 
                                                           MouseLeftButtonUp="dgEmptyModelQty_MouseLeftButtonUp"
                                                           >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn Header="Tray 유형"  Binding="{Binding CSTPROD}"            HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn Header="Tray 유형"  Binding="{Binding CSTPROD_NAME}"       HorizontalAlignment="Left" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"/>
                                                    <c1:DataGridNumericColumn Header="수량"    Binding="{Binding CST_CNT}"            HorizontalAlignment="Right" Format="#,##0" >
                                                    </c1:DataGridNumericColumn>
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>

                                        <Border Grid.Row="2" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>

                                        <Border Grid.Row="3" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                        <Grid Grid.Row="3" >
                                            <c1:C1DataGrid x:Name="dgEmptyLineQty" 
                                                           AlternatingRowBackground="White"  
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           CanUserFilter="False" 
                                                           CanUserSort="False" 
                                                           SelectionMode="SingleRow"
                                                           LoadedCellPresenter="dgEmptyLineQty_LoadedCellPresenter" 
                                                           UnloadedCellPresenter="dgEmptyLineQty_UnloadedCellPresenter" 
                                                           MouseLeftButtonUp="dgEmptyLineQty_MouseLeftButtonUp"
                                                           >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn Header="EQSGID"        Binding="{Binding EQSGID}"              HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn Header="EQSGNAME"      Binding="{Binding EQSGNAME}"            HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"/>
                                                    <c1:DataGridTextColumn Header="CSTPROD"       Binding="{Binding CSTPROD}"             HorizontalAlignment="Center" Visibility="Collapsed"/>
