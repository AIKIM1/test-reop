<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             x:Class="LGC.GMES.MES.MCS001.MCS001_060"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1920" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded" 
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="고공 CNV 현황 조회" >
            <ctrlLib:LGCLayout.Content>
                <Grid >
                    <Grid.RowDefinitions>
                        <!--TopSearch-->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <!--Contents-->
                        <RowDefinition Height="*"/>
                        <!--<RowDefinition Height="8"/>-->
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                    <Grid x:Name="TopSearch" Grid.Row="0" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <!-- 조회 버튼 영역-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="13" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            <c1:C1ComboBox  Grid.Column="1"  x:Name="cboArea" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboArea_SelectedValueChanged" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='층', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboLevel" DisplayMemberPath="NAME" SelectedValuePath="CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  />
                        </Grid>
                        <c1:C1ComboBox Grid.Row="1"  Grid.Column="6" x:Name="cboTimer" AutoComplete="False" DisplayMemberPath="NAME" SelectedValuePath="CODE" SelectedValueChanged="cboTimer_SelectedValueChanged"  Width="Auto" MinWidth="40"/>
                        <Button Grid.Row="1" Grid.Column="8" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                        <Button Grid.Row="1" Grid.Column="10" x:Name="btnManualIssue" Content="{Binding ConverterParameter=출고예약, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnManualIssue_Click" />
                    </Grid>

                    <!--Contents-->
                    <Grid x:Name="Contents" Grid.Row="2">
                        
                        <Grid Grid.Row="0"  x:Name="ContentsRow">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3.1*"/>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="6.9*" />
                            </Grid.ColumnDefinitions>

                            <!--Left Grid Area-->
                            <Grid Grid.Row="0" x:Name="LeftArea" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.*" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="1.*" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="1.*" />
                                </Grid.RowDefinitions>

                                <!--CNV 현황-->
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" >
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                            <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='CNV 현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                        </Border>
                                    </Grid>

                                    <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                    <Grid Grid.Row="1" >
                                        <c1:C1DataGrid x:Name="dgConveyor" 
                                                   AlternatingRowBackground="White"  
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column" 
                                                   SelectionMode="SingleCell" 
                                                   LoadedCellPresenter="dgConveyor_LoadedCellPresenter" 
                                                   UnloadedCellPresenter="dgConveyor_UnloadedCellPresenter" 
                                                   MouseLeftButtonUp="dgConveyor_MouseLeftButtonUp" 
                                                   MergingCells="dgConveyor_MergingCells"
                                                   ColumnHeaderHeight="50" 
                                                   >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn   Header="TOTAL_RATIO"              Binding="{Binding TOTAL_RATIO}"           HorizontalAlignment="Right" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn   Header="USE_RATIO"                Binding="{Binding USE_RATIO}"             HorizontalAlignment="Right" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn   Header = "LINE"                   Binding = "{Binding EQSGID}"              HorizontalAlignment="Left" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn   Header = "LINE"                   Binding = "{Binding EQSGID_NM}"           HorizontalAlignment="Left" />
                                                <c1:DataGridTextColumn   Header="총 트레이 Bundle 수량"    Binding="{Binding T_CNT_TEXT}"            HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridTextColumn   Header="실 트레이 Bundle 수량"    Binding="{Binding U_CNT_TEXT}"            HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridTextColumn   Header="공 트레이 Bundle 수량"    Binding="{Binding E_CNT_TEXT}"            HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridTextColumn   Header="기타 수량"                Binding="{Binding O_CNT_TEXT}"            HorizontalAlignment="Right" Format="#,##0" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>

                                    </Grid>
                                </Grid>
                               
                                <GridSplitter Grid.Row="1" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                                <!--창고 적재 현황-->
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='창고 적재 현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Border>

                                    <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                    <Grid Grid.Row="1" x:Name="grdCapacitySummary">
                                        <c1:C1DataGrid x:Name="dgCapacitySummary" 
                                                   Grid.Row="0" 
                                                   Grid.Column="0" 
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column" 
                                                   CanUserFilter="False" 
                                                   CanUserSort="False" 
                                                   SelectionMode="SingleCell" 
                                                   AlternatingRowBackground="White"  
                                                   LoadedCellPresenter="dgCapacitySummary_LoadedCellPresenter" 
                                                   UnloadedCellPresenter="dgCapacitySummary_UnloadedCellPresenter" 
                                                   MouseLeftButtonUp="dgCapacitySummary_MouseLeftButtonUp" 
                                              >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn   Header="창고"           Binding="{Binding EQPTID}"          HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn   Header="창고"           Binding="{Binding EQPT_NAME}"       HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn   Header="용량"           Binding="{Binding RACK_CNT_TEXT}"   HorizontalAlignment="Right" />
                                                <c1:DataGridTextColumn   Header="실Carrier수"    Binding="{Binding U_CNT_TEXT}"      HorizontalAlignment="Right" />
                                                <c1:DataGridTextColumn   Header="공Carrier수"    Binding="{Binding E_CNT_TEXT}"      HorizontalAlignment="Right" />
                                                <c1:DataGridTextColumn   Header="오류Carrier수"  Binding="{Binding O_CNT_TEXT}"      HorizontalAlignment="Right" />
                                                <c1:DataGridTextColumn   Header="적재율(%)"      Binding="{Binding RATE_TEXT}"       HorizontalAlignment="Right" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                                <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                                
                                <!--창고 재공 현황-->
                                <Grid Grid.Row="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" x:Name="grdProductSummaryTitle">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="1.*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='창고 재공 현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                  </Grid>
                                   <Grid Grid.Row="1" x:Name="grdProductSummary" >
                                        <c1:C1DataGrid x:Name="dgProductSummary"
                                                       IsReadOnly="True" 
                                                       HeadersVisibility="None" 
                                                       AlternatingRowBackground="White" 
                                                       CanUserFilter="False" 
                                                       CanUserSort="False" 
                                                       SelectionMode="SingleCell" 
                                            >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn Header="[프로젝트명, 프로젝트명]"        Binding="{Binding PRJT_NAME}"        HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"/>
                                                <c1:DataGridNumericColumn Header="[HOLD비율, HOLD비율]"         Binding="{Binding HOLD_RATE}"    HorizontalAlignment="Right"  Format="#,##0" />
                                                <c1:DataGridNumericColumn Header="[LOT 수, 가용]"               Binding="{Binding LOT_CNT}"          HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[LOT 수, MES_HOLD]"           Binding="{Binding LOT_HOLD}"     HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[수량, 가용]"                 Binding="{Binding QTY_CNT}"          HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[수량, MES_HOLD]"             Binding="{Binding QTY_HOLD}"     HorizontalAlignment="Right"  Format="#,##0"  />
                                             </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.TopRows>
                                                <c1:DataGridColumnHeaderRow />
                                                <c1:DataGridColumnHeaderRow />
                                            </c1:C1DataGrid.TopRows>
                                        </c1:C1DataGrid>
                                    </Grid>

                                </Grid>
                          
                            </Grid>
                     
                            <!--Splitter-->
                            <GridSplitter x:Name="Splitter" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  DragStarted="Splitter_DragStarted" DragCompleted="Splitter_DragCompleted"/>
                         
                            <!--<Border Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"></Border>-->
                            <Grid x:Name="Right" Grid.Column="2" >
                                <c1:C1TabControl x:Name="C1TabControl" >
                                    <!--CNV LOT-->
                                    <c1:C1TabItem x:Name="tabCNVLot" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='CNV LOT'}" >
                                        <Grid >

                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}"></Border>
                                            <c1:C1DataGrid x:Name="dgConveyorDetail" 
                                                           HeadersVisibility="Column" 
                                                           FrozenColumnCount="10" 
                                                           SelectionMode="SingleRow"
                                                           Grid.ColumnSpan="2" 
                                                           IsReadOnly="True"
                                                           >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn      Header = "No"                   Binding = "{Binding SEQ}"                HorizontalAlignment="Right" />
                                                    <c1:DataGridTextColumn		Header = "Box ID"	            Binding = "{Binding CARRIERID}"	         HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn	    Header = "Lot ID"		        Binding = "{Binding LOTID}"		         HorizontalAlignment="Center" />
                                                    <c1:DataGridNumericColumn	Header = "수량"	                Binding = "{Binding WIPQTY}"             HorizontalAlignment="Right" Format="#,##0"/>
                                                    <c1:DataGridTextColumn		Header = "PJT"	                Binding = "{Binding PRJT_NAME}"          HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn		Header = "출발설비ID"	        Binding = "{Binding SRC_EQPTID}"         HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn		Header = "출발설비명"	        Binding = "{Binding SRC_EQPT_NM}"        HorizontalAlignment="Left" />
                                                    <c1:DataGridTextColumn		Header = "투입시간"	            Binding = "{Binding INSDTTM}"            HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn		Header = "투입이후 지속시간"	Binding = "{Binding ELAPSED_JOB_TM}"     HorizontalAlignment="Right" />
                                                    <c1:DataGridTextColumn		Header = "현재위치"	            Binding = "{Binding CURR_LOCID}"         HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn		Header = "현재위치 대기시간"	Binding = "{Binding ELAPSED_LOC_TM}"     HorizontalAlignment="Right" />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                    <!--실Tray-->
                                    <c1:C1TabItem x:Name="tabProduct" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='실 Tray'}" >
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="7" />
                                                <RowDefinition Height="18" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Border Grid.Row="0" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"></Border>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="10" />

                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="3.5" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="8" />
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="3.5" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="8" />
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="3.5" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="8" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='경과일수', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" FontSize="12" Margin="0,0,0,0" />

                                                <Border    Grid.Row="0" Grid.Column="3" Background="#F2CB61" BorderThickness="0.5" Style="{StaticResource BorderSubTitleStyle}" />
                                                <TextBlock Grid.Row="0" Grid.Column="5" Text="{Binding ConverterParameter='D+7이상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <Border    Grid.Row="0" Grid.Column="7" Background="Orange" BorderThickness="0.5" Style="{StaticResource BorderSubTitleStyle}" />
                                                <TextBlock Grid.Row="0" Grid.Column="9" Text="{Binding ConverterParameter='D+15이상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <Border    Grid.Row="0" Grid.Column="11" Background="Red" BorderThickness="0.5" Style="{StaticResource BorderSubTitleStyle}" />
                                                <TextBlock Grid.Row="0" Grid.Column="13" Text="{Binding ConverterParameter='D+30이상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                            </Grid>

                                            <c1:C1DataGrid x:Name="dgProduct" 
                                                           Grid.Row="2"
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           FrozenColumnCount="4" 
                                                           SelectionMode="SingleRow" 
                                                           Margin="8,8,8,0"
                                                           LoadedCellPresenter="dgProduct_LoadedCellPresenter" 
                                                           UnloadedCellPresenter="dgProduct_UnloadedCellPresenter" 
                                                           PreviewMouseLeftButtonDown="dgProduct_PreviewMouseLeftButtonDown" 
                                                           >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn      Header = "NO"                       Binding = "{Binding ROW_NUM}"               HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "RACK명"                   Binding = "{Binding RACK_NAME}"             HorizontalAlignment="Center"  ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                                    <c1:DataGridTextColumn      Header = "Rack ID"                  Binding = "{Binding RACK_ID}"               HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn      Header = "입고일시"                 Binding = "{Binding CSTINDTTM}"             HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "Line"                     Binding = "{Binding EQSGNAME}"              HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "Tray ID"                  Binding = "{Binding CSTID}"                 HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "LOT ID"                   Binding = "{Binding LOTID}"                 HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "LOT유형"                  Binding = "{Binding LOTYNAME}"              HorizontalAlignment="Center" />
                                                    <c1:DataGridNumericColumn   Header = "수량"                     Binding = "{Binding WIPQTY}"                HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridTextColumn      Header = "생산설비"                 Binding = "{Binding PR_EQPT}"               HorizontalAlignment="Left"   />
                                                    <c1:DataGridTextColumn      Header = "프로젝트명"               Binding = "{Binding PRJT_NAME}"             HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "제품"                     Binding = "{Binding PRODID}"                HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "경과일수"                 Binding = "{Binding PAST_DAY}"              HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "HOLD 여부"                Binding = "{Binding WIPHOLD}"               HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "HOLD비고"                 Binding = "{Binding HOLD_NOTE}"             HorizontalAlignment="Left" />
                                                    <c1:DataGridTextColumn      Header = "HOLD시간"                 Binding = "{Binding HOLD_DTTM}"             HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "HOLD사유"                 Binding = "{Binding HOLD_NAME}"             HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "HOLD등록자"               Binding = "{Binding HOLD_USERNAME}"         HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "HOLD담당자"               Binding = "{Binding ACTION_USERNAME}"       HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn		Header = "Stocker"	                Binding = "{Binding EQPTNAME}"	            HorizontalAlignment="Center" />
                                              </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                    <!--공Tray-->
                                    <c1:C1TabItem x:Name="tabEmptyCarrier" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='공 Tray'}" >
                                        <Grid >
                                            
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"></Border>
                                            <c1:C1DataGrid x:Name="dgEmptyCarrier" 
                                                           HeadersVisibility="Column" 
                                                           SelectionMode="SingleCell" 
                                                           Margin="8,8,8,0"
                                                           IsReadOnly="False">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn      Header = "NO"                       Binding = "{Binding ROW_NUM}"               HorizontalAlignment="Center" Width="50" />
                                                    <c1:DataGridCheckBoxColumn  Header = "선택"                     Binding = "{Binding CHK}"                   HorizontalAlignment="Center" IsReadOnly="False"  Width="Auto" CanUserSort="False" />
                                                    <c1:DataGridTextColumn      Header = "반송요청상태"             Binding = "{Binding REQ_STAT}"              HorizontalAlignment="Center"  IsReadOnly="True" />
                                                    <c1:DataGridTextColumn      Header = "RACK명"                   Binding = "{Binding RACK_NAME}"             HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICALHIERARCHI"/>
                                                    <c1:DataGridTextColumn      Header = "Rack ID"                  Binding = "{Binding RACK_ID}"               HorizontalAlignment="Center"  Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn      Header = "입고일시"                 Binding = "{Binding CSTINDTTM}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn      Header = "Tray ID"                  Binding = "{Binding CSTID}"                 HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn		Header = "Stocker"	                Binding = "{Binding EQPT_NAME}"	            HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn		Header = "EQPTID"	                Binding = "{Binding EQPTID}"	            HorizontalAlignment="Center" Visibility="Collapsed" />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                         
                                        </Grid>
                                    </c1:C1TabItem>
                                    <!--오류Tray-->
                                    <c1:C1TabItem x:Name="tabErrorCarrier" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='오류 Tray'}" >
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}"></Border>
                                            <c1:C1DataGrid x:Name="dgErrorCarrier" 
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           FrozenColumnCount="4" 
                                                           SelectionMode="SingleRow" 
                                                           Margin="8,8,8,0"
                                            >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn      Header = "NO"                       Binding = "{Binding ROW_NUM}"               HorizontalAlignment="Center"  Width="50"/>
                                                    <c1:DataGridCheckBoxColumn  Header = "선택"                     Binding = "{Binding CHK}"                   HorizontalAlignment="Center" Width="40" IsReadOnly="False" />
                                                    <c1:DataGridTextColumn      Header = "반송요청상태"             Binding = "{Binding REQ_STAT}"              HorizontalAlignment="Center"  IsReadOnly="True" />
