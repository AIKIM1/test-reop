<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             x:Class="LGC.GMES.MES.MCS001.MCS001_048"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1920" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded" 
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="STK 재고실사" >
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                    </Grid.RowDefinitions>
                    <c1:C1TabControl x:Name="tabControl">
                        <c1:C1TabItem x:Name="tabDegreeCreation" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='실사대상조회'}">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <!--TopSearch-->
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <!--Contents-->
                                    <RowDefinition Height="*"/>
                                    <!--<RowDefinition Height="8"/>-->
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <Grid x:Name="TopSearch" Grid.Row="0" Grid.ColumnSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <!-- 조회 버튼 영역-->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="13" />
                                    </Grid.ColumnDefinitions>


                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock  Text="{Binding ConverterParameter='WH_TYPE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboStockerType1"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboStockerType_SelectedValueChanged" />
                                    </Grid>

                                    <Grid Grid.Row="1" Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Collapsed">
                                            <TextBlock  Text="{Binding ConverterParameter='극성', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboElectrodeType1" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboElectrodeType_SelectedValueChanged" />
                                    </Grid>

                                    <Grid Grid.Row="1" Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock  Text="{Binding ConverterParameter='창고', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboStocker1"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboStocker_SelectedValueChanged" />
                                    </Grid>

                                    <Button     Grid.Row="1" Grid.Column="10" x:Name="btnDegreeAdd"   Content="{Binding ConverterParameter=차수생성,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDegreeAdd_Click" Grid.ColumnSpan="2" Margin="0.2,3,3.6,0" VerticalAlignment="Top" />
                                    <Button Grid.Row="1" Grid.Column="12" x:Name="btnSearch1" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                                </Grid>

                                <!--Contents-->
                                <Grid x:Name="Contents" Grid.Row="2">
                                    <Grid Grid.Row="0"  x:Name="ContentsRow">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2.4*"/>
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="7.6*" />
                                        </Grid.ColumnDefinitions>

                                        <!--Left Grid Area-->
                                        <Grid Grid.Row="0" x:Name="LeftArea" >


                                            <Grid Grid.Row="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="34" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='창고 적재 현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                                </Border>

                                                <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                                <Grid Grid.Row="1" x:Name="grdCapacitySummary">
                                                    <c1:C1DataGrid x:Name="dgCapacitySummary" 
                                                                   Grid.Row="0" 
                                                                   Grid.Column="0"
                                                                   FrozenColumnCount="5"
                                                                   IsReadOnly="True" 
                                                                   HeadersVisibility="Column" 
                                                                   CanUserFilter="False" 
                                                                   CanUserSort="False" 
                                                                   SelectionMode="SingleCell" 
                                                                   AlternatingRowBackground="White"  
                                                                   LoadedCellPresenter="dgCapacitySummary_LoadedCellPresenter" 
                                                                   UnloadedCellPresenter="dgCapacitySummary_UnloadedCellPresenter" 
                                                                   MouseLeftButtonUp="dgCapacitySummary_MouseLeftButtonUp" 
                                                                   MergingCells="dgCapacitySummary_MergingCells" >
                                                        <c1:C1DataGrid.Columns>
                                                            <c1:DataGridTextColumn Header="극성"                  Binding="{Binding ELTR_TYPE_CODE}"      HorizontalAlignment="Center" Visibility="Collapsed" />
                                                            <c1:DataGridTextColumn Header="극성"                  Binding="{Binding ELTR_TYPE_NAME}"      HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn Header="창고"                  Binding="{Binding EQPTNAME}"            HorizontalAlignment="Center" />
                                                            <c1:DataGridTextColumn Header="재고실사 완료 여부"    Binding="{Binding STCK_CNT_CMPL_FLAG}"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                                            <c1:DataGridTextColumn Header="당월 차수"             Binding="{Binding PRESENT_STATUS}"  HorizontalAlignment="Center" />
                                                            <c1:DataGridNumericColumn Header="전체"               Binding="{Binding RACK_QTY}"        HorizontalAlignment="Right" Format="#,##0" />
                                                            <c1:DataGridNumericColumn Header="실Carrier수"        Binding="{Binding BBN_U_QTY}"       HorizontalAlignment="Right" Format="#,##0" />
                                                            <c1:DataGridNumericColumn Header="공Carrier수"        Binding="{Binding BBN_E_QTY}"       HorizontalAlignment="Right" Format="#,##0" />
                                                            <c1:DataGridNumericColumn Header="반대극성Carrier수"  Binding="{Binding BBN_UM_QTY}"       HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed" />
                                                            <c1:DataGridNumericColumn Header="오류Carrier수"      Binding="{Binding ERROR_QTY}"       HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed" />
                                                            <c1:DataGridNumericColumn Header="정보불일치수"       Binding="{Binding ABNORM_QTY}"      HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed" />
                                                            <c1:DataGridNumericColumn Header="적재율(%)"          Binding="{Binding RACK_RATE}"       HorizontalAlignment="Right" Format="###,###,##0.##"/>
                                                            <c1:DataGridNumericColumn Header="총Carrier수(실+공)" Binding="{Binding RACK_QTY}"        HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed" />
                                                            <c1:DataGridTextColumn Header="창고"                  Binding="{Binding EQPTID}"          HorizontalAlignment="Left" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn Header="극성"                  Binding="{Binding ELTR_TYPE_CODE}"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                        </c1:C1DataGrid.Columns>
                                                    </c1:C1DataGrid>
                                                </Grid>
                                            </Grid>
                                        </Grid>

                                        <!--Splitter-->
                                        <GridSplitter x:Name="Splitter" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" DragCompleted="Splitter_DragCompleted"/>

                                        <Border Grid.Column="2" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                        <c1:C1DataGrid x:Name="dgProduct" 
                                                       Grid.Column="2"
                                                       IsReadOnly="False" 
                                                       HeadersVisibility="Column" 
                                                       FrozenColumnCount="4" 
                                                       SelectionMode="SingleRow"
                                                       MouseLeftButtonUp="dgProduct_MouseLeftButtonUp"
                                                       MouseDoubleClick="dgProduct_MouseDoubleClick" 
                                                       LoadedCellPresenter="dgProduct_LoadedCellPresenter" 
                                                       UnloadedCellPresenter="dgProduct_UnloadedCellPresenter" 
                                                       PreviewMouseLeftButtonDown="dgProduct_PreviewMouseLeftButtonDown" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False">
                                                    <c1:DataGridCheckBoxColumn.Header>
                                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                            <CheckBox x:Name="chkHeaderAll" Margin="0" Width="19" Checked="chkHeaderAll_Checked" Unchecked="chkHeaderAll_Unchecked"></CheckBox>
                                                        </StackPanel>
                                                    </c1:DataGridCheckBoxColumn.Header>
                                                </c1:DataGridCheckBoxColumn>
                                                <c1:DataGridTextColumn      Header = "STOCKER"                  Binding = "{Binding WH_NAME}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "Rack ID"                  Binding = "{Binding RACK_ID}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "RACK명"                   Binding = "{Binding RACK_NAME}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn		Header = "SKID ID"	                Binding = "{Binding OUTER_CSTID}"           HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn		Header = "보빈 ID"	                Binding = "{Binding CSTID}"                 HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "LOT ID"                   Binding = "{Binding LOTID}"                 HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn		Header = "LOT유형"	                Binding = "{Binding LOT_TYPE}"	            HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridNumericColumn   Header = "수량"                     Binding = "{Binding WIPQTY}"                HorizontalAlignment="Right"  Format="#,##0" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn		Header = "단위"	                    Binding = "{Binding UNIT_CODE}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "프로젝트명"               Binding = "{Binding PRJT_NAME}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "극성"                     Binding = "{Binding ELEC_TYPE}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "제품"                     Binding = "{Binding PRODID}"                HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn	    Header = "버전"	                    Binding = "{Binding PROD_VER_CODE}"	        HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "HOLD 여부"                Binding = "{Binding WIP_HOLD_FLAG}"         HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn      Header = "HOLD비고"                 Binding = "{Binding HOLD_NOTE}"             HorizontalAlignment="Left"   IsReadOnly="True" />

                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>

                                    </Grid>
                                </Grid>
                            </Grid>
                        </c1:C1TabItem>

                        <c1:C1TabItem x:Name="tabDegreeSearch" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='실사마감'}">
                            <Grid >
                                <Grid.RowDefinitions>
                                    <!--TopSearch-->
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                    <!--Contents-->
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="7*"/>
                                    <!--<RowDefinition Height="8"/>-->
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                <Grid Grid.Row="0" Grid.ColumnSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <!-- 조회 버튼 영역-->
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="4" />
                                        <ColumnDefinition Width="Auto" />
                                        <ColumnDefinition Width="13" />
                                    </Grid.ColumnDefinitions>


                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock  Text="{Binding ConverterParameter='WH_TYPE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboStockerType2"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboStockerType_SelectedValueChanged" />
                                    </Grid>

                                    <Grid Grid.Row="1" Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" Visibility="Collapsed">
                                            <TextBlock  Text="{Binding ConverterParameter='극성', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboElectrodeType2" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboElectrodeType_SelectedValueChanged" />
                                    </Grid>

                                    <Grid Grid.Row="1" Grid.Column="3">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock  Text="{Binding ConverterParameter='창고', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboStocker2"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboStocker_SelectedValueChanged" />
                                    </Grid>

                                    <Grid Grid.Row="1" Grid.Column="7">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="7*"/>
                                        </Grid.ColumnDefinitions>
                                    </Grid>

                                    <Button     Grid.Row="1" Grid.Column="10" x:Name="btnForcedClose"   Content="{Binding ConverterParameter=실사취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnForcedClose_Click" Grid.ColumnSpan="2" Margin="0.2,3,3.6,0" VerticalAlignment="Top" />
                                    <Button Grid.Row="1" Grid.Column="12" x:Name="btnSearch2" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                                </Grid>
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--백그라운드용-->
                                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>

                                    <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='창고별 실사 현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                    <c1:C1DataGrid x:Name="dgProduct2" 
                                               Grid.Row="1"
                                               IsReadOnly="True"
                                               HeadersVisibility="Column" 
                                               FrozenColumnCount="4" 
                                               SelectionMode="SingleRow" 
                                               MouseDoubleClick="dgProduct_MouseDoubleClick" 
                                               LoadedCellPresenter="dgProduct_LoadedCellPresenter" 
                                               UnloadedCellPresenter="dgProduct_UnloadedCellPresenter" 
                                               PreviewMouseLeftButtonDown="dgProduct_PreviewMouseLeftButtonDown" 
                                               >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <RadioButton GroupName="dgChoiceGroup" IsChecked="{Binding CHK, Mode=TwoWay}" Visibility="{Binding RadioButtonVisibility, Mode=TwoWay}" x:Name="dgChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgChoice_Checked"  />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>

                                            <c1:DataGridTextColumn      Header = "창고"          Binding = "{Binding EQPTID}"               HorizontalAlignment="Left"  Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "창고"          Binding = "{Binding EQPTNAME}"             HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "차수"          Binding = "{Binding STCK_CNT_SEQNO}"       HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridTextColumn      Header = "완료여부"      Binding = "{Binding STCK_CNT_CMPL_FLAG}"   HorizontalAlignment="Center"  Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "완료유형"      Binding = "{Binding STCK_CNT_CMPL_TYPE}"   HorizontalAlignment="Center"  Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "진행상태"      Binding = "{Binding STCK_CNT_CMPL_TYPE_N}" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "일치율"        Binding = "{Binding CONCORDANCE_RATE}"     HorizontalAlignment="Right" />
                                            <c1:DataGridTextColumn      Header = "진행율"        Binding = "{Binding PROGRESS_RATE}"        HorizontalAlignment="Right" />
                                            <c1:DataGridTextColumn      Header = "시작시간"      Binding = "{Binding STCK_CNT_ORD_DTTM}"    HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "종료시간"      Binding = "{Binding STCK_CNT_CMPL_DTTM}"   HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn   Header = "경과시간(분)"  Binding = "{Binding ELAPSED_TIME}"         HorizontalAlignment="Right" Format="#,##0" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>

                                <!--Splitter-->
                                <GridSplitter x:Name="Splitter2" Grid.Row="3"   ResizeDirection="Rows"    ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <Grid Grid.Row="4">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <!--백그라운드용-->
                                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="AUTO"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='실사 결과', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                        <Button Grid.Row="0" Grid.Column="1"  x:Name="btnRefresh"    Content="{Binding ConverterParameter=새로고침,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Cursor="Hand" Click="btnRefresh_Click" />
                                    </Grid>

                                    <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                    <c1:C1DataGrid x:Name="dgInspectionList" 
                                               Grid.Row="1"
                                               IsReadOnly="True" 
                                               HeadersVisibility="None" 
                                               FrozenTopRowsCount="2"
                                               SelectionMode="SingleCell" 
                                               LoadedCellPresenter="dgInspectionList_LoadedCellPresenter" 
                                               >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn      Header = "[STOCKER, STOCKER]"                  Binding = "{Binding WH_NAME}"               HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn		Header = "[전산재고,SKID ID]"	               Binding = "{Binding OUTER_CSTID}"           HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn		Header = "[전산재고,CSTID]"	                   Binding = "{Binding CSTID}"                 HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn      Header = "[전산재고,Rack ID]"                  Binding = "{Binding RACK_ID}"               HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn      Header = "[전산재고,RACK 명]"                  Binding = "{Binding RACK_NAME_S}"           HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn      Header = "[전산재고,LOT ID]"                   Binding = "{Binding LOTID}"                 HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn		Header = "[실사재고,SKID ID]"	               Binding = "{Binding SCAN_OUTER_CSTID}"      HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn		Header = "[실사재고,CSTID]"	                   Binding = "{Binding SCAN_CSTID}"            HorizontalAlignment="Left" />
                                            <c1:DataGridTextColumn      Header = "[실사재고,Rack ID]"                  Binding = "{Binding SCAN_RACK_ID}"          HorizontalAlignment="Center" />
