                                        <RadioButton x:Name="rdo_TwoEqpt" Grid.Column="2"                  Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='2호기설비', Converter={StaticResource GlobalObjectDicConverter}}" FontWeight="Bold" GroupName="INPUT" Click="rdo_TwoEqpt_Click" />
                                    </Grid>
                                    <Grid Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8"/>
                                        </Grid.ColumnDefinitions>
                                        <c1:C1ComboBox  x:Name="cboRemark"            Grid.Row="1" Grid.Column="0"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"   DropDownHeight="400"/>
                                        <TextBlock		Grid.Row="1"  Grid.Column="1" Foreground="Red" Text="{Binding ConverterParameter=양극SKID명-파란색, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Margin="25,0,1,0" />
                                        <TextBlock		Grid.Row="1"  Grid.Column="2" Foreground="Red" Text="{Binding ConverterParameter=음극SKID명-검은색, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" Margin="25,0,1,0" />
                                        <TextBlock		Grid.Row="1"  Grid.Column="3" Foreground="Red" Text="{Binding ConverterParameter=특별관리SKID-노란색, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" Margin="25,0,1,0" />
                                        <TextBlock		Grid.Row="1"  Grid.Column="4" Foreground="Red" Text="{Binding ConverterParameter=HOLD-빨간색, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" Margin="25,0,1,0" />
                                    </Grid>
                                </Grid>


