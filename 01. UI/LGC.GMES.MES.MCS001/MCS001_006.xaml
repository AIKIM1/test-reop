                                                <ColumnDefinition Width="45"/>
                                                <ColumnDefinition Width="45"/>
                                                <ColumnDefinition Width="45"/>
                                            </Grid.ColumnDefinitions>

                                            <Button  Grid.Row="0" Grid.Column="0"  x:Name="PORTA6S152" Width="44.5" Height="52" Tag="A6S152" Content="OUT" HorizontalAlignment="Left" VerticalAlignment="Center"  FontSize="6.1" FontWeight="Bold" Foreground="Black"  PreviewMouseDown="BtnUserControl_PreviewMouseDown" BorderBrush="#ffbebebe"/>
