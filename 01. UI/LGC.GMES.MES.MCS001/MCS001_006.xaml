<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.MCS001.MCS001_006"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LGC.GMES.MES.MCS001"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:Controls="clr-namespace:LGC.GMES.MES.MCS001.Controls" 
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded" Unloaded="OnUnloaded">

   
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="라미대기창고 모니터링">
            <Grid x:Name="MEB_Noching">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="10*" />
                    <RowDefinition Height="8" />
                </Grid.RowDefinitions>
         

                <!--조회조건 부분-->
                <Grid x:Name="SearchArea" Grid.Row="0" >

                    <Grid.RowDefinitions>
                        <RowDefinition Height="4" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="4" />
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="4"/>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8"/>

                    </Grid.ColumnDefinitions>

                    <!--백그라운드용-->
                    <Border     Grid.Row="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                    <!--조회 조건-->
                
                    <TextBlock                                    Grid.Row="1" Grid.Column="0"  Text="{Binding ConverterParameter='화면갱신',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <c1:C1ComboBox  x:Name="cboReset"             Grid.Row="1" Grid.Column="1"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboReset_SelectedValueChanged"/>
                    <TextBlock                                    Grid.Row="1" Grid.Column="3"  Text="{Binding ConverterParameter='LOTID',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                    <TextBox       x:Name="txtLotS"               Grid.Row="1" Grid.Column="4"  Style="{StaticResource Content_InputForm_TextBoxStyle}" MinWidth="160" KeyDown="txtLotS_KeyDown" />
                    <Button    Grid.Row="1"  Grid.Column="6" x:Name="btnInputLot"          Content="{Binding ConverterParameter='입고LOT조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnInputLot_Click" />
                    <Button    Grid.Row="1"  Grid.Column="8" x:Name="btnReJobLot"          Content="{Binding ConverterParameter='재작업LOT조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}"  Click="btnReJobLot_Click" />
                    <Button    Grid.Row="1"  Grid.Column="10" x:Name="btnOrderLot"         Content="{Binding ConverterParameter='특이LOT조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnOrderLot_Click"/>
                    <Button    Grid.Row="1"  Grid.Column="12" x:Name="btnChangeCNV"        Content="{Binding ConverterParameter='컨베이어방향전환', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnChangeCNV_Click" />
                    <Button    Grid.Row="1"  Grid.Column="14" x:Name="btnInputOutputHist"  Content="{Binding ConverterParameter='라미대기창고입출고이력조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnInputOutputHist_Click" />
                    <Button    Grid.Row="1"  Grid.Column="16" x:Name="btnReturn"           Content="{Binding ConverterParameter='수동반송지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}"  Click="btnReturn_Click" Visibility="Collapsed"/>
                    <Button    Grid.Row="1"  Grid.Column="16" x:Name="btnPortSetting"      Content="{Binding ConverterParameter='포트설정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}"  Click="btnPortSetting_Click" Visibility="Collapsed" />
                    <Button    Grid.Row="1"  Grid.Column="18" x:Name="btnSearch"           Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" PreviewMouseDown="btnSearch_PreviewMouseDown"  Click="btnSearch_Click" />

                </Grid>

                <Grid Grid.Row="2" Grid.Column="0" x:Name="WhereHose" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.7*" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="7.3*" />
                    
                    </Grid.ColumnDefinitions>
                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                     <!--창고재고 정보 및 QA 검사-->
                    <Grid  Grid.Row="2" Grid.Column="0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="6*" />
                            <RowDefinition Height="4" />
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="4*" />
                        </Grid.RowDefinitions>
                        <!--창고재고 정보-->
                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                        <Grid Grid.Row="0" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='창고재고정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                            <c1:C1ComboBox  Grid.Column="2"  x:Name="cboWhInfo" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  SelectedValueChanged="cboWhInfo_SelectedValueChanged"/>
                        </Grid>
                        <c1:C1DataGrid Grid.Row="1"  x:Name="dgWhereHose" Margin="4,0,0,0" MergingCells="dgWhereHose_MergingCells" MouseDoubleClick="dgWhereHose_MouseDoubleClick" LoadedCellPresenter="dgWhereHose_LoadedCellPresenter" IsReadOnly="False" HeadersVisibility="None" SelectionMode="MultiRange" CanUserEditRows="True">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn      Header = "[프로젝트명,프로젝트명]"     Binding="{Binding PRJT_NAME}"                HorizontalAlignment="Center"  IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "[양극,LOT수]"                Binding="{Binding LOT_CNT_C}"                HorizontalAlignment="Right"   IsReadOnly="True" />
                                <c1:DataGridTextColumn      Header = "[양극,수량]"                 Binding="{Binding TOTAL_QTY_C}"              HorizontalAlignment="Right"   IsReadOnly="True" />
                                <c1:DataGridTextColumn      Header = "[음극,LOT수]"                Binding="{Binding LOT_CNT_A}"                HorizontalAlignment="Right"   IsReadOnly="True" />
                                <c1:DataGridTextColumn      Header = "[음극,수량]"                 Binding="{Binding TOTAL_QTY_A}"              HorizontalAlignment="Right"   IsReadOnly="True" />
                           </c1:C1DataGrid.Columns>
                            <c1:C1DataGrid.TopRows>
                                <c1:DataGridColumnHeaderRow />
                                <c1:DataGridColumnHeaderRow />
                            </c1:C1DataGrid.TopRows>
                        </c1:C1DataGrid>
                        <!--QA 검사-->
                        <Border Grid.Row="3" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                        <Grid Grid.Row="3" Grid.Column="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='QA검사', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                            <c1:C1ComboBox  Grid.Column="3"  x:Name="cboQA" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedIndexChanged="cboQASelectedIndexChanged" />
                        </Grid>

                        <c1:C1DataGrid Grid.Row="4" x:Name="dgQA"   Margin="4,0,0,4" MouseDoubleClick="dgQA_MouseDoubleClick" LoadedCellPresenter="dgQA_LoadedCellPresenter" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" CanUserEditRows="True">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn        Header = "구분"             Binding = "{Binding ELTR_TYPE_CODE}" HorizontalAlignment="Center" IsReadOnly="True" />
                                <c1:DataGridTextColumn        Header = "양극"             Binding = "{Binding CC}"             HorizontalAlignment="Right" Format="###,###,##0.##" />
                                <c1:DataGridTextColumn        Header = "음극"             Binding = "{Binding AC}"             HorizontalAlignment="Right" Format="###,###,##0.##" />
                             </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>
                    <!--모니터링전체-->
                    <Grid x:Name="Monitoring" Grid.Row="2" Grid.Column="2" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.7*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="8.3*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="31" />
                         </Grid.RowDefinitions>
                        <!--입고/출고 예약정보-->
