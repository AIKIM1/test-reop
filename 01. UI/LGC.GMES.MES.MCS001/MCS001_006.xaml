                                        <TextBlock Grid.Row="0" Grid.Column="0"  x:Name="txtEqptID_1" FontSize="13" VerticalAlignment="Center" HorizontalAlignment="Left" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='1호기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Grid>
                                    <!--RACK 정보-->
