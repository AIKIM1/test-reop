                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="29"/>
                               <RowDefinition Height="2"/>
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="18" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="3" Grid.ColumnSpan="18" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                            <!--<Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="99" BorderThickness="1" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>-->
                            <ToggleButton   Margin="10,0,5,0" Grid.Row="1"  Grid.Column="0"  x:Name="btnLeftExpandFrame" Style="{StaticResource btnLeftTopConerStyleHorizontal}" IsChecked="True" Checked="btnLeftExpandFrame_Checked" Unchecked="btnLeftExpandFrame_Unchecked"/>
                            <TextBlock Grid.Row="1" Grid.Column="2"  Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='입고/출고예약정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                            <TextBlock                                    Grid.Row="1" Grid.Column="4"  Text="{Binding ConverterParameter='LOTID',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" VerticalAlignment="Center"/>
                            <TextBox       x:Name="txtLot_OutPut"         Grid.Row="1" Grid.Column="5"  Style="{StaticResource Content_InputForm_TextBoxStyle}" MinWidth="100" VerticalAlignment="Center"/>
                            <TextBlock                                    Grid.Row="1" Grid.Column="7"  Text="{Binding ConverterParameter='PRODID',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" VerticalAlignment="Center"/>
                            <TextBox       x:Name="txtProdID_OutPut"      Grid.Row="1" Grid.Column="8"  Style="{StaticResource Content_InputForm_TextBoxStyle}" MinWidth="100" VerticalAlignment="Center"/>
                            <TextBlock                                    Grid.Row="1" Grid.Column="10"  Text="{Binding ConverterParameter='반송명령ID',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" VerticalAlignment="Center"/>
                            <TextBox       x:Name="txtReqID_OutPut"       Grid.Row="1" Grid.Column="11"  Style="{StaticResource Content_InputForm_TextBoxStyle}" MinWidth="100" VerticalAlignment="Center" />
                            <TextBlock                                    Grid.Row="1" Grid.Column="13"  Text="{Binding ConverterParameter='입/출고',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" VerticalAlignment="Center"/>
                            <c1:C1ComboBox x:Name="cboRackState"          Grid.Row="1" Grid.Column="14" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="True" DisplayMemberPath="" SelectedValuePath="" />
                            <Button        x:Name="btnSearch_OutPut"      Grid.Row="1"  Grid.Column="16" Height="25" Content="{Binding ConverterParameter='조회', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSearch_OutPut_Click" />
                            <c1:C1DataGrid Grid.Row="6" Grid.ColumnSpan="18" x:Name="dgOutputInfo" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" CanUserEditRows="True" >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn        Header = "창고명"        Binding = "{Binding EQPTNAME}"              HorizontalAlignment="Center" IsReadOnly="True"  />
                                    <c1:DataGridTextColumn        Header = "창고ID"        Binding = "{Binding EQPTID}"                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn        Header = "RackID"        Binding = "{Binding RACK_ID}"               HorizontalAlignment="Center" IsReadOnly="True"  />
                                    <c1:DataGridTextColumn        Header = "PRODID"        Binding = "{Binding PRODID}"                HorizontalAlignment="Center" IsReadOnly="True"  />
                                    <c1:DataGridTextColumn        Header = "LOTID"         Binding = "{Binding LOTID}"                 HorizontalAlignment="Center" IsReadOnly="True"  />
                                    <c1:DataGridTextColumn        Header = "반송명령ID"    Binding = "{Binding LOGIS_CMD_ID}"          HorizontalAlignment="Center" IsReadOnly="True"  />
                                    <c1:DataGridTextColumn        Header = "FROM"          Binding = "{Binding FROM_1}"                HorizontalAlignment="Center" IsReadOnly="True"  />
                                    <c1:DataGridTextColumn        Header = "TO"            Binding = "{Binding TO_1}"                  HorizontalAlignment="Center" IsReadOnly="True"  />
                                    <c1:DataGridTextColumn        Header = "반송명령시간"  Binding = "{Binding LOGIS_CMD_GNRT_DTTM}"   HorizontalAlignment="Center" IsReadOnly="True"  />
                                    <c1:DataGridTextColumn        Header = "경과시간"      Binding = "{Binding ELAP_TIME}"             HorizontalAlignment="Center" IsReadOnly="True"  />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </Grid>
                         <GridSplitter Grid.Row="1" Grid.ColumnSpan="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <!--백그라운드용-->
                        <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1"  BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                        <!--모니터링-->
                        <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="2"  Grid.Column="0" Grid.ColumnSpan="3">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
