                                            <RowDefinition Height="AUTO"/>
                                            <RowDefinition Height="AUTO"/>
                                            <RowDefinition Height="AUTO"/>
                                            <RowDefinition Height="AUTO"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="AUTO"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="AUTO"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.Column="0" Margin="5,0,5,0" BorderThickness="1,1,1,1" Grid.ColumnSpan="3" Grid.RowSpan="6" BorderBrush="#ffbebebe" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <Grid x:Name="stair_TopC01"   Margin="0,2,0,0"    Grid.Row="0" Grid.Column="1" />
                                        <Grid x:Name="stair_LeftC01"  Margin="10,8,0,0"   Grid.Row="1" Grid.Column="0" />
                                        <Grid x:Name="stair_C01"      Margin="10,4,10,0"  Grid.Row="1" Grid.Column="1" />
                                        <TextBlock Grid.Row="0" Grid.Column="0" Margin="10,3,0,0"  Foreground="Black" Width="29.5" Height="15" Text="{Binding ConverterParameter='2열', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right"  FontSize="11" FontWeight ="Bold"  Style="{StaticResource SearchCondition_LabelStyle}" />
                                        <Grid Grid.Row="2" Grid.Column="1" x:Name="PORT_C01" Margin="10,2,10,0">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="AUTO"/>
