                                                <RowDefinition Height="1.*" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="34" />
                                                    <RowDefinition Height="*" />
