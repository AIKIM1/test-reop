<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             x:Class="LGC.GMES.MES.MCS001.MCS001_034_NEW"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1920" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded" 
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Carrier 현황 조회" >
            <ctrlLib:LGCLayout.Content>
                <Grid >
                    <Grid.RowDefinitions>
                        <!--TopSearch-->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <!--Contents-->
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                    <Grid x:Name="TopSearch" Grid.Row="0" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <!-- 조회 버튼 영역-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="13" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='AREA_GROUP', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboAreaGroup"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboAreaGroup_SelectedValueChanged" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboArea"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboArea_SelectedValueChanged" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='CARRIER', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboCarrierType" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='Carrier유형', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboCarrierProd" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='Carrier ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <TextBox   Grid.Row="0"  Grid.Column="1" x:Name="txtCarrierId" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="120" PreviewKeyUp="txtCarrierId_PreviewKeyUp" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="11">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='Lot ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <TextBox   Grid.Row="0"  Grid.Column="1" x:Name="txtLotId"  CharacterCasing="Upper" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="120" PreviewKeyUp="txtLotId_PreviewKeyUp" />
                        </Grid>

                        <Button Grid.Row="1" Grid.Column="15" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>

                    <Border Grid.Row="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                    <Grid x:Name="Contents" Grid.Row="2">
                        <c1:C1TabControl x:Name="tabCarrierInfo" >
                            <c1:C1TabItem x:Name="TabItemCarrierInfo" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Carrier 현황 정보'}">
                                <Grid Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.4*"/>
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="7.6*" />
                                    </Grid.ColumnDefinitions>
                                    <!--Left Grid Area-->
                                    <Grid Grid.Row="0" x:Name="Left">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0" >
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                                <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=Summary, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                            </Border>
                                        </Grid>

                                        <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                        <Grid Grid.Row="1" >
                                            <c1:C1DataGrid x:Name="dgCarrierSummary" 
                                                   AlternatingRowBackground="White"  
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column"
                                                   FrozenColumnCount="2"
                                                   CanUserFilter="False" 
                                                   CanUserSort="False" 
                                                   SelectionMode="SingleCell" 
                                                   LoadedCellPresenter="dgCarrierSummary_LoadedCellPresenter" 
                                                   UnloadedCellPresenter="dgCarrierSummary_UnloadedCellPresenter" 
                                                   MouseLeftButtonUp="dgCarrierSummary_MouseLeftButtonUp" 
                                                  >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn    Header="Carrier 구분코드"   Binding="{Binding CSTTYPE}"            HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn    Header="Type"               Binding="{Binding CSTPROD_NAME}"       HorizontalAlignment="Left" />
                                                    <c1:DataGridTextColumn    Header="Type"               Binding="{Binding CSTPROD}"            HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn Header="합계"               Binding="{Binding T_CNT}"              HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="실"                 Binding="{Binding U_CNT}"              HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="공"                 Binding="{Binding E_CNT}"              HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="공Tray"             Binding="{Binding ET_CNT}"             HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn Header="불량"               Binding="{Binding D_CNT}"              HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="비정상"             Binding="{Binding ABNORM_CNT}"         HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn Header="미사용"             Binding="{Binding UN_CNT}"             HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed"/>
                                                    <!--<c1:DataGridTextColumn    Header="소속동"             Binding="{Binding CSTOWNER_NAME}"      HorizontalAlignment="Left" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn    Header="소속동"             Binding="{Binding CSTOWNER}"           HorizontalAlignment="Left" Visibility="Collapsed" />-->
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>


                                            <c1:C1DataGrid x:Name="dgCarrierSummary_Elec" 
                                                   AlternatingRowBackground="White"  
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="None"
                                                   FrozenColumnCount="2"
                                                   CanUserFilter="False" 
                                                   CanUserSort="False" 
                                                   SelectionMode="SingleCell" 
                                                   LoadedCellPresenter="dgCarrierSummary_Elec_LoadedCellPresenter" 
                                                   UnloadedCellPresenter="dgCarrierSummary_Elec_UnloadedCellPresenter" 
                                                   MouseLeftButtonUp="dgCarrierSummary_Elec_MouseLeftButtonUp" 
                                                   Visibility="Collapsed">

                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn    Header="[Carrier 구분코드,Carrier 구분코드]"   Binding="{Binding CSTTYPE}"           HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn    Header="[Type,Type]"               Binding="{Binding CSTPROD_NAME}"        HorizontalAlignment="Left" />
                                                    <c1:DataGridTextColumn    Header="[Type,Type]"               Binding="{Binding CSTPROD}"             HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn Header="[합계,합계]"               Binding="{Binding T_CNT}"               HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="[실,합계]"                 Binding="{Binding U_T_CNT}"          HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="[실,전극]"                 Binding="{Binding ELTR_U_CNT}"          HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="[실,조립]"                 Binding="{Binding CELL_U_CNT}"          HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="[공,합계]"                 Binding="{Binding E_T_CNT}"              HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="[공,전극]"                 Binding="{Binding ELTR_E_CNT}"          HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="[공,조립]"                 Binding="{Binding CELL_E_CNT}"          HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="[공Tray,공Tray]"           Binding="{Binding ET_CNT}"             HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn Header="[불량,불량]"               Binding="{Binding D_CNT}"              HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridNumericColumn Header="[비정상,비정상]"           Binding="{Binding ABNORM_CNT}"         HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn Header="[미사용,미사용]"           Binding="{Binding UN_CNT}"             HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed"/>
                                                </c1:C1DataGrid.Columns>
                                                <c1:C1DataGrid.TopRows>
                                                    <c1:DataGridColumnHeaderRow />
                                                    <c1:DataGridColumnHeaderRow />
                                                </c1:C1DataGrid.TopRows>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </Grid>

                                    <!--Splitter-->
                                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  />
                                    <Grid Grid.Column="2" >
                                        <Grid x:Name="RightArea">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"/>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"></Border>
                                            <Grid Grid.Row="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="34"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="42"/>
                                                    <RowDefinition Height="42"/>
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="Auto"/>
                                                                <ColumnDefinition Width="13"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=상세정보, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                                            <StackPanel x:Name="spCondition" Grid.Column="3" Orientation="Horizontal" Margin="0" >
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="13"/>
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="10"/>
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="10"/>
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="10"/>
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="4" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                </Grid>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                                <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                                <Grid  Grid.Row="1" >
                                                    <c1:C1DataGrid x:Name="dgCarrierDetail" 
                                                           HeadersVisibility="None" 
                                                           FrozenColumnCount="3" 
                                                           SelectionMode="SingleRow"
                                                           Grid.ColumnSpan="2" 
                                                           FrozenTopRowsCount="2"
                                                           BeginningEdit="dgCarrierDetail_BeginningEdit" 
                                                           >
                                                        <c1:C1DataGrid.Columns>
                                                            <c1:DataGridCheckBoxColumn Width="Auto" Name = "CHK"  Binding = "{Binding CHK}"          HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                            <!--<c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                                <c1:DataGridCheckBoxColumn.Header>
                                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                        <CheckBox x:Name="chkHeaderAll" Margin="0" Width="19" Checked="chkHeaderAll_Checked" Unchecked="chkHeaderAll_Unchecked"></CheckBox>
                                                                    </StackPanel>
                                                                </c1:DataGridCheckBoxColumn.Header>
                                                            </c1:DataGridCheckBoxColumn>-->
                                                            <c1:DataGridTextColumn		Header = "보빈 ID"	                Binding = "{Binding BOBBIN_ID}"	                HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "Carrier ID"	            Binding = "{Binding CARRIERID}"	                HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "상태"	                    Binding = "{Binding CSTSTAT_NAME}"	            HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "[마지막정보,동]"	        Binding = "{Binding AREA_NAME}"	                HorizontalAlignment="Left"   IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "[마지막정보,설비유형]"	Binding = "{Binding FINL_EQPT_TP_NAME}"	        HorizontalAlignment="Left"   IsReadOnly="True" />
                                                            <c1:DataGridTextColumn	    Header = "[마지막정보,LOCID]"		Binding = "{Binding FINL_EQPTID}"	            HorizontalAlignment="Left"   IsReadOnly="True" />
                                                            <c1:DataGridTextColumn	    Header = "[마지막정보,위치명]"		Binding = "{Binding FINL_EQPT_NAME}"	        HorizontalAlignment="Left"   IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "[마지막정보,상세위치]"	Binding = "{Binding FINL_LOCID}"	            HorizontalAlignment="Left"   IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "[마지막정보,상세위치명]"	Binding = "{Binding FINL_LOC_NAME}"	            HorizontalAlignment="Left"   IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "[마지막정보,마지막시간]"  Binding = "{Binding FINL_ACTDTTM}"	            HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "현재위치"	                Binding = "{Binding CURR_LOCID}"	            HorizontalAlignment="Left"   IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "현재위치명"	            Binding = "{Binding CURR_LOC_NAME}"	            HorizontalAlignment="Left"   IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "LOT ID"	                Binding = "{Binding LOTID}"	                    HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "PRJT_NAME"	            Binding = "{Binding PRJT_NAME}"	                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn		Header = "제품ID"	                Binding = "{Binding PRODID}"	                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn		Header = "불량사유"	                Binding = "{Binding CST_DFCT_FLAG_NAME}"	    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn		Header = "비정상사유"	            Binding = "{Binding ABNORM_TRF_RSN_CODE_NAME}"  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn		Header = "사용자재"	                Binding = "{Binding CSTPROD}"	                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn		Header = "사용자재"	                Binding = "{Binding CSTPROD_NAME}"	            HorizontalAlignment="Center" IsReadOnly="True" />
                                                            <c1:DataGridTextColumn		Header = "상태"	                    Binding = "{Binding CSTSTAT}"	                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn		Header = "[마 지막정보,동]"		    Binding = "{Binding CURR_AREAID}"	            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                            <c1:DataGridTextColumn		Header = "CSTTYPE"		            Binding = "{Binding CSTTYPE}"	                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                        </c1:C1DataGrid.Columns>
                                                        <c1:C1DataGrid.TopRows>
                                                            <c1:DataGridColumnHeaderRow />
                                                            <c1:DataGridColumnHeaderRow />
                                                        </c1:C1DataGrid.TopRows>
                                                    </c1:C1DataGrid>
                                                </Grid>
                                                <Grid x:Name="BottomSearch" Grid.Row="2">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="8" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="8" />
                                                    </Grid.RowDefinitions>
                                                    <!-- 조회 버튼 영역-->
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="13"/>
                                                        <ColumnDefinition Width="1.5*" />
                                                        <ColumnDefinition Width="10"/>
                                                        <ColumnDefinition Width="0.9*" />
                                                        <ColumnDefinition Width="10"/>
                                                        <ColumnDefinition Width="0.9*" />
                                                        <ColumnDefinition Width="10"/>
                                                        <ColumnDefinition Width="0.9*" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="0.5*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="13" />
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" >
                                                        <RadioButton Margin="5,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량'}" GroupName="SaveType" Name="rdoDefect" Style="{StaticResource SearchCondition_RadioButtonStyle}" Checked="rdoSaveType_Checked" />
                                                        <RadioButton Margin="0,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='비정상'}" GroupName="SaveType" Name="rdoAbnormal" Style="{StaticResource SearchCondition_RadioButtonStyle}" Checked="rdoSaveType_Checked" />
                                                        <RadioButton Margin="0,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='폐기'}" GroupName="SaveType" Name="rdoScrap" Style="{StaticResource SearchCondition_RadioButtonStyle}" Checked="rdoSaveType_Checked" />
                                                    </StackPanel>
                                                </Grid>
                                                <Grid x:Name="BottomDefectArea" Grid.Row="3" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="1*"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="13"/>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="10"/>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="8" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="13" />
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Row="0" Grid.Column="1">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="7*"/>
                                                        </Grid.ColumnDefinitions>
                                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                            <TextBlock  Text="{Binding ConverterParameter='상태', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                                        </StackPanel>
                                                        <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboCarrierState" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboCarrierState_SelectedValueChanged"  />
                                                    </Grid>

                                                    <Grid Grid.Row="0" Grid.Column="3">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="3*"/>
                                                            <ColumnDefinition Width="7*"/>
                                                        </Grid.ColumnDefinitions>
