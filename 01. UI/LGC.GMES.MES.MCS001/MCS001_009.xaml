<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.MCS001.MCS001_009"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="반송 우선순위 관리">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!--백그라운드용-->
                <Border     Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                <!--조회영역-->
                <Grid Grid.Row="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="11" />
                        <RowDefinition Height="Auto" />
                         <RowDefinition Height="11" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="AUTO" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="13" />
                    </Grid.ColumnDefinitions>
                    <!--조회조건-->
                    <!--생산일자(COMBO)-->
                    <Grid Grid.Row="1" Grid.Column="0" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>

                        <TextBlock             Grid.Column="0" Text="{Binding ConverterParameter='조회일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <ctrlLib:LGCDatePicker Grid.Column="1" x:Name="dtpFrom" DatepickerType="Date" />
                            <TextBlock             Grid.Column="2" Text="~" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                        <ctrlLib:LGCDatePicker Grid.Column="3" x:Name="dtpTo" DatepickerType="Date"   />
                    </Grid>
                    <!--커맨드ID-->
                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='커맨드ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <TextBox    Grid.Row="0" Grid.Column="1"  x:Name="txtcommand" Width="100"       Style="{StaticResource SearchCondition_TextBoxStyle}"/>
                    </Grid>

                    <!--LOTID-->
                    <Grid Grid.Row="1" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LotID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <TextBox    Grid.Row="0" Grid.Column="1"  x:Name="txtLot"  Width="100"       Style="{StaticResource SearchCondition_TextBoxStyle}"/>
                    </Grid>

                    <!--설비타입-->
                    <Grid Grid.Row="1" Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='설비타입', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboEquipmentType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>

                    <!--설비-->
                    <Grid Grid.Row="1" Grid.Column="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                        </Grid.ColumnDefinitions>
                        <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                    </Grid>
                

                    <!--저장 버튼-->
                    <Button     Grid.Row="1" Grid.Column="7" x:Name="btnSave"     Click="btnSave_Click"     Content="{Binding ConverterParameter='저장', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Margin="0,2,0,3" />
                    <Button     Grid.Row="1" Grid.Column="9" x:Name="btnSearchHold" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" 
                                Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch" />
                    

                </Grid>
                <!--LOT 리스트-->
                <Grid Grid.Row="3" Grid.Column="1">
                    <Border Grid.Row="1" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                    <Grid Grid.Row="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="8"/>
                        </Grid.ColumnDefinitions>
                        <c1:C1DataGrid x:Name="dgReturnList" Grid.Row="1" Grid.Column="1"  HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleCell"   CurrentCellChanged="dgReturnList_CurrentCellChanged">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridCheckBoxColumn  Header = "선택"         Binding = "{Binding CHK}"               HorizontalAlignment="Center" Width="40" IsReadOnly="False"/>
                                <c1:DataGridTextColumn      Header = "반송커맨드ID"      Binding = "{Binding LOGIS_CMD_ID}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "커맨드생성시간"    Binding = "{Binding LOGIS_CMD_GNRT_DTTM}"       HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "설비ID"            Binding = "{Binding EQPTID}"                    HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "설비명"            Binding = "{Binding EQPTNAME}"                  HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "FROM"              Binding = "{Binding FROM_1}"                    HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "TO"                Binding = "{Binding TO_1}"                      HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "LOTID"             Binding = "{Binding LOTID}"                     HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "SKIDNO"            Binding = "{Binding MCS_CST_ID}"                HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridNumericColumn   Header = "반송순위"          Binding = "{Binding LOGIS_CMD_PRIORITY_NO}"     HorizontalAlignment="Right"  Format="#,###" EditOnSelection="True" Minimum="0" Maximum="99" ShowButtons="False" IsReadOnly="False" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                    </Grid>
                </Grid>
            </Grid>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
