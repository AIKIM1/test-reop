<UserControl
    x:Class="LGC.GMES.MES.MCS001.MCS001_034"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="850"
    d:DesignWidth="1920"
    Loaded="UserControl_Loaded"
    Unloaded="UserControl_Unloaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="Carrier 현황 조회">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <!--  TopSearch  -->
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="8" />
                        <!--  Contents  -->
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Border
                        Grid.Row="0"
                        Grid.Column="0"
                        Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                    <Grid
                        x:Name="TopSearch"
                        Grid.Row="0"
                        Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <!--  조회 버튼 영역  -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="13" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock Style="{StaticResource Content_Search_LabelStyle}" Text="{Binding ConverterParameter='AREA_GROUP', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                            </StackPanel>
                            <c1:C1ComboBox
                                x:Name="cboAreaGroup"
                                Grid.Row="0"
                                Grid.Column="1"
                                AutoComplete="False"
                                DisplayMemberPath="CBO_NAME"
                                SelectedValueChanged="cboAreaGroup_SelectedValueChanged"
                                SelectedValuePath="CBO_CODE"
                                Style="{StaticResource C1ComboBoxStyle}" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock Style="{StaticResource Content_Search_LabelStyle}" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                            </StackPanel>
                            <c1:C1ComboBox
                                x:Name="cboArea"
                                Grid.Row="0"
                                Grid.Column="1"
                                AutoComplete="False"
                                DisplayMemberPath="CBO_NAME"
                                SelectedValuePath="CBO_CODE"
                                Style="{StaticResource C1ComboBoxStyle}" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock Style="{StaticResource Content_InputForm_LabelStyle}" Text="{Binding ConverterParameter='CARRIER', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                            </StackPanel>
                            <c1:C1ComboBox
                                x:Name="cboCarrierType"
                                Grid.Row="0"
                                Grid.Column="1"
                                AutoComplete="False"
                                DisplayMemberPath="CBO_NAME"
                                SelectedValuePath="CBO_CODE"
                                SelectedValueChanged="cboCarrierType_SelectedValueChanged"
                                Style="{StaticResource C1ComboBoxStyle}" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock Style="{StaticResource Content_InputForm_LabelStyle}" Text="{Binding ConverterParameter='Carrier유형', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                            </StackPanel>
                            <c1:C1ComboBox
                                x:Name="cboCarrierProd"
                                Grid.Row="0"
                                Grid.Column="1"
                                AutoComplete="False"
                                DisplayMemberPath="CBO_NAME"
                                SelectedValuePath="CBO_CODE"
                                Style="{StaticResource C1ComboBoxStyle}" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock x:Name="txtCarrier" Style="{StaticResource Content_Search_LabelStyle}" Text="{Binding ConverterParameter='Carrier ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                            </StackPanel>
                            <TextBox
                                x:Name="txtCarrierId"
                                Grid.Row="0"
                                Grid.Column="1"
                                MinWidth="120"
                                KeyDown="txtCarrierId_KeyDown"
                                PreviewKeyDown="txtCarrierId_PreviewKeyDown"
                                PreviewKeyUp="txtCarrierId_PreviewKeyUp"
                                Style="{StaticResource SearchCondition_TextBoxStyle}" />
                        </Grid>
 
                        <Grid Grid.Row="1" Grid.Column="11">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock
                                    x:Name="lblLotId"
                                    Style="{StaticResource Content_Search_LabelStyle}"
                                    Text="{Binding ConverterParameter='Lot ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                            </StackPanel>
                            <TextBox
                                x:Name="txtLotId"
                                Grid.Row="0"
                                Grid.Column="1"
                                MinWidth="120"
                                CharacterCasing="Upper" 
                                KeyDown="txtLotId_KeyDown"
                                PreviewKeyDown="txtLotId_PreviewKeyDown"
                                PreviewKeyUp="txtLotId_PreviewKeyUp"
                                Style="{StaticResource SearchCondition_TextBoxStyle}" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="7*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel
                                Grid.Row="0"
                                Grid.Column="0"
                                HorizontalAlignment="Right"
                                Orientation="Horizontal">
                                <TextBlock x:Name="txtCarrier2" Visibility="Collapsed" Style="{StaticResource Content_Search_LabelStyle}" Text="{Binding ConverterParameter='REP_LOTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                            </StackPanel>
                            <TextBox
                                x:Name="txtCarrierId2"
                                Grid.Row="0"
                                Grid.Column="1"
                                MinWidth="120"
                                Visibility="Collapsed"
                                Style="{StaticResource SearchCondition_TextBoxStyle}" />
                        </Grid>

                        <Button
                            x:Name="btnSearch"
                            Grid.Row="1"
                            Grid.Column="15"
                            Click="btnSearch_Click"
                            Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                            Cursor="Hand"
                            Style="{StaticResource SearchButtonStyle}" />
                    </Grid>

                    <Border Grid.Row="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                    <Grid x:Name="Contents" Grid.Row="2">
                        <c1:C1TabControl x:Name="tabCarrierInfo">
                            <c1:C1TabItem x:Name="TabItemCarrierInfo" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Carrier 현황 정보'}">
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="2.4*" />
                                        <ColumnDefinition Width="8" />
                                        <ColumnDefinition Width="7.6*" />
                                    </Grid.ColumnDefinitions>
                                    <!--  Left Grid Area  -->
                                    <Grid x:Name="Left" Grid.Row="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Row="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="*" />
                                            </Grid.ColumnDefinitions>
                                            <Border
                                                Grid.Row="0"
                                                Grid.Column="0"
                                                Grid.ColumnSpan="3"
                                                Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                                <TextBlock
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=Summary, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>
                                            </Border>
                                        </Grid>

                                        <Border
                                            Grid.Row="1"
                                            Background="#e8ebed"
                                            BorderBrush="#8a8a8a"
                                            BorderThickness="0" />
                                        <Grid Grid.Row="1">
                                            <c1:C1DataGrid
                                                x:Name="dgCarrierSummary"
                                                AlternatingRowBackground="White"
                                                CanUserFilter="False"
                                                CanUserSort="False"
                                                FrozenColumnCount="2"
                                                HeadersVisibility="Column"
                                                IsReadOnly="True"
                                                LoadedCellPresenter="dgCarrierSummary_LoadedCellPresenter"
                                                MouseLeftButtonUp="dgCarrierSummary_MouseLeftButtonUp"
                                                SelectionMode="SingleCell"
                                                UnloadedCellPresenter="dgCarrierSummary_UnloadedCellPresenter">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn
                                                        HorizontalAlignment="Center"
                                                        Binding="{Binding CSTTYPE}"
                                                        Header="Carrier 구분코드"
                                                        Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn
                                                        HorizontalAlignment="Left"
                                                        Binding="{Binding CSTPROD_NAME}"
                                                        Header="Type" />
                                                    <c1:DataGridTextColumn
                                                        HorizontalAlignment="Center"
                                                        Binding="{Binding CSTPROD}"
                                                        Header="Type"
                                                        Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn
                                                        HorizontalAlignment="Right"
                                                        Binding="{Binding T_CNT}"
                                                        Format="#,##0"
                                                        Header="합계" />
                                                    <c1:DataGridNumericColumn
                                                        HorizontalAlignment="Right"
                                                        Binding="{Binding U_CNT}"
                                                        Format="#,##0"
                                                        Header="실" />
                                                    <c1:DataGridNumericColumn
                                                        HorizontalAlignment="Right"
                                                        Binding="{Binding E_CNT}"
                                                        Format="#,##0"
                                                        Header="공" />
                                                    <c1:DataGridNumericColumn
                                                        HorizontalAlignment="Right"
                                                        Binding="{Binding ET_CNT}"
                                                        Format="#,##0"
                                                        Header="공Tray"
                                                        Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn
                                                        HorizontalAlignment="Right"
                                                        Binding="{Binding D_CNT}"
                                                        Format="#,##0"
                                                        Header="불량" />
                                                    <c1:DataGridNumericColumn
                                                        HorizontalAlignment="Right"
                                                        Binding="{Binding ABNORM_CNT}"
                                                        Format="#,##0"
                                                        Header="비정상"
                                                        Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn
                                                        HorizontalAlignment="Right"
                                                        Binding="{Binding UN_CNT}"
                                                        Format="#,##0"
                                                        Header="미사용" />
                                                    <!--<c1:DataGridTextColumn    Header="소속동"             Binding="{Binding CSTOWNER_NAME}"      HorizontalAlignment="Left" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn    Header="소속동"             Binding="{Binding CSTOWNER}"           HorizontalAlignment="Left" Visibility="Collapsed" />-->
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </Grid>

                                    <!--  Splitter  -->
                                    <GridSplitter
                                        Grid.Column="1"
                                        HorizontalAlignment="Stretch"
                                        VerticalAlignment="Stretch"
                                        ResizeDirection="Columns"
                                        ShowsPreview="True"
                                        Style="{StaticResource GridSplitterStyle}" />
                                    <Grid Grid.Column="2">
                                        <Grid x:Name="RightArea">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                                            <Grid Grid.Row="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="34" />
                                                    <RowDefinition Height="*" />
                                                    <RowDefinition Height="42" />
                                                    <RowDefinition Height="42" />
                                                </Grid.RowDefinitions>
                                                <Grid Grid.Row="0">
                                                    <Border
                                                        Grid.Row="0"
                                                        Grid.Column="0"
                                                        Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="*" />
                                                                <ColumnDefinition Width="Auto" />
                                                                <ColumnDefinition Width="13" />
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock
                                                                Grid.Row="0"
                                                                Grid.Column="1"
                                                                Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=상세정보, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" /></TextBlock>

                                                            <StackPanel
                                                                x:Name="spCondition"
                                                                Grid.Column="3"
                                                                Margin="0"
                                                                Orientation="Horizontal">
                                                                <Grid>
                                                                    <Grid.ColumnDefinitions>
                                                                        <ColumnDefinition Width="13" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="10" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="10" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="10" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="4" />
                                                                        <ColumnDefinition Width="*" />
                                                                        <ColumnDefinition Width="Auto" />
                                                                    </Grid.ColumnDefinitions>
                                                                    <Button Grid.Row="1" Grid.Column="10" x:Name="btnBobinChange"  Content="{Binding ConverterParameter=보빈상태변경, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ButtonFocusStyle}" Click="btnBobinChange_Click" />

                                                                </Grid>
                                                            </StackPanel>
                                                        </Grid>
                                                    </Border>
                                                </Grid>
                                                <Border
                                                    Grid.Row="1"
                                                    Background="#e8ebed"
                                                    BorderBrush="#8a8a8a"
                                                    BorderThickness="0" />
                                                <Grid Grid.Row="1">
                                                    <c1:C1DataGrid
                                                        x:Name="dgCarrierDetail"
                                                        Grid.ColumnSpan="2"
                                                        BeginningEdit="dgCarrierDetail_BeginningEdit"
                                                        FrozenColumnCount="3"
                                                        FrozenTopRowsCount="2"
                                                        HeadersVisibility="None"
                                                        SelectionMode="SingleRow">
                                                        <c1:C1DataGrid.Columns>
                                                            <c1:DataGridCheckBoxColumn
                                                                Name="CHK"
                                                                Width="Auto"
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CHK}"
                                                                CanUserFilter="False"
                                                                CanUserResize="False"
                                                                CanUserSort="False" />
                                                            <!--<c1:DataGridCheckBoxColumn  Name = "CHK" Binding = "{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                                <c1:DataGridCheckBoxColumn.Header>
                                                                    <StackPanel Orientation="Horizontal" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                                                                        <CheckBox x:Name="chkHeaderAll" Margin="0" Width="19" Checked="chkHeaderAll_Checked" Unchecked="chkHeaderAll_Unchecked"></CheckBox>
                                                                    </StackPanel>
                                                                </c1:DataGridCheckBoxColumn.Header>
                                                            </c1:DataGridCheckBoxColumn>-->
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding BOBBIN_ID}"
                                                                Header="보빈 ID"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CARRIERID}"
                                                                Header="Carrier ID"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CSTSTAT_NAME}"
                                                                Header="상태"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Left"
                                                                Binding="{Binding AREA_NAME}"
                                                                Header="[마지막정보,동]"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Left"
                                                                Binding="{Binding FINL_EQPT_TP_NAME}"
                                                                Header="[마지막정보,설비유형]"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Left"
                                                                Binding="{Binding FINL_EQPTID}"
                                                                Header="[마지막정보,LOCID]"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Left"
                                                                Binding="{Binding FINL_EQPT_NAME}"
                                                                Header="[마지막정보,위치명]"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Left"
                                                                Binding="{Binding FINL_LOCID}"
                                                                Header="[마지막정보,상세위치]"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding FINL_ACTDTTM}"
                                                                Header="[마지막정보,마지막시간]"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Left"
                                                                Binding="{Binding CURR_LOCID}"
                                                                Header="현재위치"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Left"
                                                                Binding="{Binding CURR_LOC_NAME}"
                                                                Header="현재위치명"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding LOTID}"
                                                                Header="LOT ID"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding PRJT_NAME}"
                                                                Header="PRJT_NAME"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding PRODID}"
                                                                Header="제품ID"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CST_DFCT_FLAG_NAME}"
                                                                Header="불량사유"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding ABNORM_TRF_RSN_CODE_NAME}"
                                                                Header="비정상사유"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CSTPROD}"
                                                                Header="사용자재"
                                                                IsReadOnly="True"
                                                                Visibility="Collapsed" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CSTPROD_NAME}"
                                                                Header="사용자재"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CSTSTAT}"
                                                                Header="상태"
                                                                IsReadOnly="True"
                                                                Visibility="Collapsed" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CURR_AREAID}"
                                                                Header="[마지막정보,동]"
                                                                IsReadOnly="True"
                                                                Visibility="Collapsed" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CSTTYPE}"
                                                                Header="CSTTYPE"
                                                                IsReadOnly="True"
                                                                Visibility="Collapsed" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding CST_CLEAN_NAME}"
                                                                Header="CST_CLEAN_FLAG"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding PET_WINDING_CMPL_NAME}"
                                                                Header="PET_WINDING_CMPL_FLAG"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding QA_INSP_TRGT_FLAG}"
                                                                Header="QA_INSP_TRGT_FLAG"
                                                                IsReadOnly="True" />
                                                            <c1:DataGridTextColumn
                                                                HorizontalAlignment="Center"
                                                                Binding="{Binding SMPL_CLCT_CMPL_NAME}"
                                                                Header="SMPL_CLCT_CMPL_FLAG"
                                                                IsReadOnly="True" />
                                                        </c1:C1DataGrid.Columns>
                                                        <c1:C1DataGrid.TopRows>
                                                            <c1:DataGridColumnHeaderRow />
                                                            <c1:DataGridColumnHeaderRow />
                                                        </c1:C1DataGrid.TopRows>
                                                    </c1:C1DataGrid>
                                                </Grid>
                                                <Grid x:Name="BottomSearch" Grid.Row="2">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="8" />
                                                        <RowDefinition Height="Auto" />
                                                        <RowDefinition Height="8" />
                                                    </Grid.RowDefinitions>
                                                    <!--  조회 버튼 영역  -->
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="13" />
                                                        <ColumnDefinition Width="1.5*" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="1.6*" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="0.4*" />
                                                        <ColumnDefinition Width="10" />
                                                        <ColumnDefinition Width="0.7*" />
                                                        <ColumnDefinition Width="4" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="13" />
                                                    </Grid.ColumnDefinitions>
                                                    <StackPanel
                                                        Grid.Row="1"
                                                        Grid.Column="1"
                                                        HorizontalAlignment="Left"
                                                        Orientation="Horizontal">
                                                        <RadioButton
                                                            Name="rdoDefect"
                                                            Margin="5,0,5,0"
                                                            Checked="rdoSaveType_Checked"
                                                            Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량'}"
                                                            GroupName="SaveType"
                                                            Style="{StaticResource SearchCondition_RadioButtonStyle}" />
                                                        <RadioButton
                                                            Name="rdoAbnormal"
                                                            Margin="0,0,5,0"
                                                            Checked="rdoSaveType_Checked"
                                                            Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='비정상'}"
                                                            GroupName="SaveType"
                                                            Style="{StaticResource SearchCondition_RadioButtonStyle}" />
                                                        <RadioButton
                                                            Name="rdoScrap"
                                                            Margin="0,0,5,0"
                                                            Checked="rdoSaveType_Checked"
                                                            Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='폐기'}"
                                                            GroupName="SaveType"
                                                            Style="{StaticResource SearchCondition_RadioButtonStyle}" />
