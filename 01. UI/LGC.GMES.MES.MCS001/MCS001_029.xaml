<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             x:Class="LGC.GMES.MES.MCS001.MCS001_029"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1920" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded" 
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="STK 재공현황 LOT" >
            <ctrlLib:LGCLayout.Content>
                <Grid >
                    <Grid.RowDefinitions>
                        <!--TopSearch-->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <!--Contents-->
                        <RowDefinition Height="*"/>
                        <!--<RowDefinition Height="8"/>-->
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                    <Grid x:Name="TopSearch" Grid.Row="0" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <!-- 조회 버튼 영역-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="0.5*" />
                            <ColumnDefinition Width="4" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="13" />
                        </Grid.ColumnDefinitions>


                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            <c1:C1ComboBox  Grid.Column="1"  x:Name="cboArea" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboArea_SelectedValueChanged" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='WH_TYPE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboStockerType"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboStockerType_SelectedValueChanged" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='극성', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboElectrodeType" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboElectrodeType_SelectedValueChanged" />
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="7*"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock  Text="{Binding ConverterParameter='창고', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboStocker"  DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboStocker_SelectedValueChanged" />
                        </Grid>
                        <c1:C1ComboBox Grid.Row="1"  Grid.Column="9" x:Name="cboTimer" AutoComplete="False" DisplayMemberPath="NAME" SelectedValuePath="CODE" SelectedValueChanged="cboTimer_SelectedValueChanged"  Width="Auto" MinWidth="40"/>
                        <Button Grid.Row="1" Grid.Column="11" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>

                    <!--Contents-->
                    <Grid x:Name="Contents" Grid.Row="2">
                        <Grid Grid.Row="0"  x:Name="ContentsRow">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2.4*"/>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="7.6*" />
                            </Grid.ColumnDefinitions>

                            <!--Left Grid Area-->
                            <Grid Grid.Row="0" x:Name="LeftArea" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1.*" />
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="1.*" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='창고 적재 현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Border>

                                    <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                    <Grid Grid.Row="1" x:Name="grdCapacitySummary">
                                        <c1:C1DataGrid x:Name="dgCapacitySummary" 
                                                   Grid.Row="0" 
                                                   Grid.Column="0" 
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column" 
                                                   CanUserFilter="False" 
                                                   CanUserSort="False" 
                                                   SelectionMode="SingleCell" 
                                                   AlternatingRowBackground="White"  
                                                   LoadedCellPresenter="dgCapacitySummary_LoadedCellPresenter" 
                                                   UnloadedCellPresenter="dgCapacitySummary_UnloadedCellPresenter" 
                                                   MouseLeftButtonUp="dgCapacitySummary_MouseLeftButtonUp" 
                                                   MergingCells="dgCapacitySummary_MergingCells" 
                                                   >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn Header="극성"                  Binding="{Binding ELTR_TYPE_CODE}"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="극성"                  Binding="{Binding ELTR_TYPE_NAME}"  HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn Header="창고"                  Binding="{Binding EQPTNAME}"        HorizontalAlignment="Center" />
                                                <c1:DataGridNumericColumn Header="용량"               Binding="{Binding RACK_MAX}"        HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridNumericColumn Header="실Carrier수"        Binding="{Binding BBN_U_QTY}"       HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridNumericColumn Header="공Carrier수"        Binding="{Binding BBN_E_QTY}"       HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridNumericColumn Header="반대극성Carrier수"  Binding="{Binding BBN_UM_QTY}"       HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridNumericColumn Header="오류Carrier수"      Binding="{Binding ERROR_QTY}"       HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridNumericColumn Header="정보불일치수"       Binding="{Binding ABNORM_QTY}"      HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridNumericColumn Header="적재율(%)"          Binding="{Binding RACK_RATE}"       HorizontalAlignment="Right" Format="###,###,##0.##"/>
                                                <c1:DataGridNumericColumn Header="총Carrier수(실+공)" Binding="{Binding RACK_QTY}"        HorizontalAlignment="Right" Format="#,##0" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="창고"                  Binding="{Binding EQPTID}"          HorizontalAlignment="Left" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn Header="극성"                  Binding="{Binding ELTR_TYPE_CODE}"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                                <GridSplitter Grid.Row="1" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                                <Grid Grid.Row="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34" />
                                        <RowDefinition Height="*" />
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" x:Name="grdProductSummaryTitle">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="20"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="1.*"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='창고 재공 현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                        <Grid Grid.Row="0" Grid.Column="2" x:Name="grdLotType">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="7*"/>
                                                <ColumnDefinition Width="4"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock  Text="{Binding ConverterParameter='LOT 유형', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                            </StackPanel>
                                            <ctrlLib:MultiSelectionBox Grid.Row="0" Grid.Column="1" x:Name="msbLotType" DisplayMemberPath="LOTTYNAME" SelectedValuePath="LOTTYPE" />
                                            <Button x:Name="btnRefresh"  Grid.Row="0" Grid.Column="3" Margin="0"   Content="{Binding ConverterParameter=Title16,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_ModuleButtonRefreshStyle}" Click="btnRefresh_Click" />
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="4">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="6*"/>
                                                <ColumnDefinition Width="4*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Row="0"  Grid.Column="0" x:Name="txtStocker" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                            <TextBox   Grid.Row="0"  Grid.Column="1" x:Name="txtRealCarrierCount" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="60" TextAlignment="Right" IsEnabled="False" Padding="3" />
                                        </Grid>
                                    </Grid>

                                    <Grid Grid.Row="1" x:Name="grdProductSummary" >
                                        <c1:C1DataGrid x:Name="dgProductSummary"
                                                       IsReadOnly="True" 
                                                       HeadersVisibility="None" 
                                                       AlternatingRowBackground="White" 
                                                       CanUserFilter="False" 
                                                       CanUserSort="False" 
                                                       SelectionMode="SingleCell" 
                                                       MouseLeftButtonUp="dgProductSummary_MouseLeftButtonUp" 
                                                       LoadedCellPresenter="dgProductSummary_LoadedCellPresenter"
                                                       UnloadedCellPresenter="dgProductSummary_UnloadedCellPresenter"
                                                    >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn Header="[프로젝트명, 프로젝트명]"        Binding="{Binding PRJT_NAME}"        HorizontalAlignment="Center" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"/>
                                                <c1:DataGridTextColumn Header="[극성, 극성]"                    Binding="{Binding ELTR_TYPE_NAME}"   HorizontalAlignment="Center" />
                                                <c1:DataGridNumericColumn Header="[HOLD비율, HOLD비율]"         Binding="{Binding WIP_HOLD_RATE}"    HorizontalAlignment="Right"  Format="#,##0" />
                                                <c1:DataGridNumericColumn Header="[LOT 수, 가용]"               Binding="{Binding LOT_QTY}"          HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[LOT 수, MES_HOLD]"           Binding="{Binding LOT_HOLD_QTY}"     HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[LOT 수, QMS_HOLD]"           Binding="{Binding LOT_HOLD_QMS_QTY}" HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[재공수량, 가용]"             Binding="{Binding WIP_QTY}"          HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[재공수량, MES_HOLD]"         Binding="{Binding WIP_HOLD_QTY}"     HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[재공수량, QMS_HOLD]"         Binding="{Binding WIP_HOLD_QMS_QTY}" HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[도입전극 IQC NG,도입전극 IQC NG]"      Binding="{Binding IQC_NG_QTY}"      HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridNumericColumn Header="[전극 QMS NG, 전극 QMS NG]"             Binding="{Binding QMS_NG_QTY}"      HorizontalAlignment="Right"  Format="#,##0"  />
                                                <c1:DataGridTextColumn Header="극성"                    Binding="{Binding ELTR_TYPE_CODE}"  HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.TopRows>
                                                <c1:DataGridColumnHeaderRow />
                                                <c1:DataGridColumnHeaderRow />
                                            </c1:C1DataGrid.TopRows>
                                        </c1:C1DataGrid>
                                    </Grid>

                                </Grid>
                            </Grid>

                            <Grid Grid.Row="0" x:Name="LeftAreaLami" Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" x:Name="grdCapacitySummaryTitle">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='창고 적재 현황', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Border>
                                </Grid>

                                <Border Grid.Row="1" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                <Grid Grid.Row="1" >
                                    <c1:C1DataGrid x:Name="dgLamiCapacitySummary" 
                                                   Grid.Row="0" 
                                                   Grid.Column="0" 
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column"
                                                   CanUserFilter="False" 
                                                   CanUserSort="False" 
                                                   SelectionMode="SingleCell" 
                                                   AlternatingRowBackground="White"  
                                                   ColumnHeaderHeight="50"
                                                   LoadedCellPresenter="dgLamiCapacitySummary_LoadedCellPresenter" 
                                                   UnloadedCellPresenter="dgLamiCapacitySummary_UnloadedCellPresenter" 
                                                   MouseLeftButtonUp="dgLamiCapacitySummary_MouseLeftButtonUp" 
                                                   MergingCells="dgLamiCapacitySummary_MergingCells" 
                                                   >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn    Header="창고"           Binding="{Binding EQPTNAME}"        HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn Header="용량"           Binding="{Binding RACK_MAX_QTY}"    HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridTextColumn    Header="프로젝트명"     Binding="{Binding PRJT_NAME}"       HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn Header="양극양품_"      Binding="{Binding LOT_QTY_C}"       HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn Header="양극HOLD_"      Binding="{Binding HOLD_QTY_C}"      HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn Header="음극양품_"      Binding="{Binding LOT_QTY_A}"       HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn Header="음극HOLD_"      Binding="{Binding HOLD_QTY_A}"      HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn Header="공Carrier_"     Binding="{Binding EMPTY_QTY}"       HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn Header="오류Carrier_"   Binding="{Binding ERROR_QTY}"       HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn Header="정보불일치_"    Binding="{Binding ABNORM_QTY}"      HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn Header="적재율(%)_"     Binding="{Binding RACK_RATE}"       HorizontalAlignment="Right" Format="###,###,##0.##" />
                                            <c1:DataGridTextColumn    Header="창고"           Binding="{Binding EQPTID}"          HorizontalAlignment="Center" Visibility="Collapsed" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>

                            </Grid>



                            <!--Splitter-->
                            <GridSplitter x:Name="Splitter" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  DragStarted="Splitter_DragStarted" DragCompleted="Splitter_DragCompleted"/>
                            <!--<Border Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"></Border>-->
                            <Grid x:Name="Right" Grid.Column="2" >
                                <c1:C1TabControl x:Name="C1TabControl" >
                                    <c1:C1TabItem x:Name="tabProduct" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='입고 LOT'}" >
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="7" />
                                                <RowDefinition Height="18" />
                                                <RowDefinition Height="*" />
                                            </Grid.RowDefinitions>

                                            <Border Grid.Row="0" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}"></Border>
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="10" />

                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="3.5" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="8" />
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="3.5" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="8" />
                                                    <ColumnDefinition Width="20" />
                                                    <ColumnDefinition Width="3.5" />
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="8" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='경과일수', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" FontSize="12" Margin="0,0,0,0" />

                                                <Border    Grid.Row="0" Grid.Column="3" Background="#F2CB61" BorderThickness="0.5" Style="{StaticResource BorderSubTitleStyle}" />
                                                <TextBlock Grid.Row="0" Grid.Column="5" Text="{Binding ConverterParameter='D+7이상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <Border    Grid.Row="0" Grid.Column="7" Background="Orange" BorderThickness="0.5" Style="{StaticResource BorderSubTitleStyle}" />
                                                <TextBlock Grid.Row="0" Grid.Column="9" Text="{Binding ConverterParameter='D+15이상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                <Border    Grid.Row="0" Grid.Column="11" Background="Red" BorderThickness="0.5" Style="{StaticResource BorderSubTitleStyle}" />
                                                <TextBlock Grid.Row="0" Grid.Column="13" Text="{Binding ConverterParameter='D+30이상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                            </Grid>

                                            <c1:C1DataGrid x:Name="dgProduct" 
                                                           Grid.Row="2"
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           FrozenColumnCount="4" 
                                                           SelectionMode="SingleRow" 
                                                           Margin="8,8,8,0"
                                                           MouseDoubleClick="dgProduct_MouseDoubleClick" 
                                                           LoadedCellPresenter="dgProduct_LoadedCellPresenter" 
                                                           UnloadedCellPresenter="dgProduct_UnloadedCellPresenter" 
                                                           PreviewMouseLeftButtonDown="dgProduct_PreviewMouseLeftButtonDown" 
                                                           >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridNumericColumn	Header = "순위"		                Binding = "{Binding ROW_NUM}"               HorizontalAlignment="Right" />
                                                    <c1:DataGridTextColumn      Header = "FastTrack"                Binding = "{Binding FAST_TRACK_FLAG}"       HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "STOCKER"                  Binding = "{Binding EQPTNAME}"              HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "Rack ID"                  Binding = "{Binding RACK_ID}"               HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "RACK명"                   Binding = "{Binding RACK_NAME}"             HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "입고일시"                 Binding = "{Binding CSTINDTTM}"             HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn		Header = "EQSGID"	                Binding = "{Binding EQSGID}"	            HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn		Header = "LINE"	                    Binding = "{Binding EQSGNAME}"	            HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn		Header = "보빈 ID"	                Binding = "{Binding BOBBIN_ID}"             HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "Carrier ID"               Binding = "{Binding CSTID}"                 HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "LOT ID"                   Binding = "{Binding LOTID}"                 HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "INPUT_LOTID"              Binding = "{Binding INPUT_LOTID}"           HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn		Header = "LOT유형"	                Binding = "{Binding LOTYNAME}"	            HorizontalAlignment="Center" />
                                                    <c1:DataGridNumericColumn   Header = "수량"                     Binding = "{Binding WIPQTY}"                HorizontalAlignment="Right" Format="#,##0" />
                                                    <c1:DataGridTextColumn		Header = "단위"	                    Binding = "{Binding UNIT_CODE}"             HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "재공상태"                 Binding = "{Binding WIPSNAME}"              HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "프로젝트명"               Binding = "{Binding PRJT_NAME}"             HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn		Header = "무지부"	                Binding = "{Binding HALF_SLIT_SIDE}"	    HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "극성"                     Binding = "{Binding ELTR_TYPE_NAME}"        HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "제품"                     Binding = "{Binding PRODID}"                HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn      Header = "PRODNAME"                 Binding = "{Binding PRODNAME}"              HorizontalAlignment="Center" Visibility="Collapsed"/>
