<UserControl xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             x:Class="LGC.GMES.MES.MCS001.MCS001_047"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1920" 
             Loaded="UserControl_Loaded" 
             Unloaded="UserControl_Unloaded" 
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="점보롤 창고 모니터링" >
            <ctrlLib:LGCLayout.Content>
                <Grid >
                    <Grid.RowDefinitions>
                        <!--TopSearch-->
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <!--Contents-->
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="4"/>
                        <!--Bottom-->
                        <!--<RowDefinition Height="42"/>-->
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                    <Grid x:Name="TopSearch" Grid.Row="0" Grid.ColumnSpan="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                        </Grid.RowDefinitions>
                        <!-- 조회 버튼 영역-->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>

                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>

                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto"/>

                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="4"/>
                        </Grid.ColumnDefinitions>

                        <!--<TextBlock  Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='모델', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                        <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtModel"  Style="{StaticResource Content_InputForm_TextBoxStyle}" MinWidth="120"/>-->

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <TextBox Grid.Row="1" Grid.Column="2" x:Name="txtLotId"  CharacterCasing="Upper"  Style="{StaticResource Content_InputForm_TextBoxStyle}" MinWidth="120"/>

                        <Button Grid.Row="1" Grid.Column="4" x:Name="btnSelect" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSelect_Click" />


                        <TextBlock Grid.Row="1"  Grid.Column="16" Text="{Binding ConverterParameter='자동조회', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                        <c1:C1ComboBox Grid.Row="1"  Grid.Column="17" x:Name="cboAutoSearch" Margin="4,3,0,3" AutoComplete="False" DisplayMemberPath="NAME" SelectedValuePath="CODE" SelectedValueChanged="cboAutoSearch_SelectedValueChanged"  Width="Auto" MinWidth="40"/>
                        <!--Style="{StaticResource C1ComboBoxStyle}"-->
                        <Button Grid.Row="1" Grid.Column="19" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" PreviewMouseDown="btnSearch_PreviewMouseDown"  />
                    </Grid>
                    <!--Contents-->
                    <Grid x:Name="Contents" Grid.Row="2">
                        <Grid Grid.Row="0"  x:Name="ContentsRow">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3.5*"/>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="6.5*" />
                            </Grid.ColumnDefinitions>
                            <!--Left Grid Area-->
                            <Grid Grid.Row="0" x:Name="Left">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32" />
                                    <RowDefinition Height="142" />
                                    <RowDefinition Height="4" />
                                    <!-- SPLITTER-->
                                    <RowDefinition Height="32" />
                                    <RowDefinition Height="0.75*"/>
                                    <RowDefinition Height="4" />
                                    <!-- SPLITTER-->
                                    <RowDefinition Height="32" />
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="5" />
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0" x:Name="grdStoreTitle">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=창고재고, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Border>
                                    <!--<c1:C1ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboProdId1"  AutoComplete="False" DisplayMemberPath="CBO_NAME" 
                                               SelectedValuePath="CBO_CODE" MinWidth="120" SelectedIndexChanged="OnCboProdId1SelectedIndexChanged"/>-->
                                </Grid>

                                <Grid Grid.Row="1" x:Name="grdStore">
                                    <c1:C1DataGrid x:Name="dgStore" 
                                                   Grid.Row="0" 
                                                   Grid.Column="0" 
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column" 
                                                   FrozenColumnCount="1" 
                                                   AlternatingRowBackground="White"  
                                                   CanUserFilter="False" 
                                                   CanUserSort="True" 
                                                   SelectionMode="SingleCell" >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn Header="구분"      Binding="{Binding EQPTID}"      HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn Header="구분"      Binding="{Binding EQPTNAME}"    HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn Header="용량"      Binding="{Binding RACK_MAX}"    HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn Header="현수량"    Binding="{Binding RACK_CNT}"    HorizontalAlignment="Right" Format="#,##0" />
                                            <c1:DataGridNumericColumn Header="점유율(%)"    Binding="{Binding RACK_RATE}"  HorizontalAlignment="Right" Format="##.#" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>

                                <GridSplitter Grid.Row="2" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <Grid Grid.Row="3" x:Name="grdProcessStockTitle">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='반송정보', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Border>
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" Margin="0,0,4,0" >
                                        <Button x:Name="btnOrderCancel" Content="{Binding ConverterParameter=수동출고취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnOrderCancel_Click"  />
                                    </StackPanel>
                                    <!--<c1:C1ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboProdId2"  AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" MinWidth="120" SelectedIndexChanged="OnCboProdId2SelectedIndexChanged"/>-->
                                </Grid>

                                <Grid Grid.Row="4" x:Name="grdOrderInfo" >
                                    <c1:C1DataGrid x:Name="dgOrderInfo"  
                                                   Grid.Row="0" 
                                                   Grid.Column="0"  
                                                   IsReadOnly="True" 
                                                   HeadersVisibility="Column" 
                                                   FrozenColumnCount="2" 
                                                   AlternatingRowBackground="White" 
                                                   CanUserFilter="False" 
                                                   CanUserSort="True" 
                                                   SelectionMode="SingleCell" >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn Name ="ORDERCHK" Header="선택" Width="40" VerticalAlignment="Center"  HorizontalAlignment="Center" >
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding ORDERCHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="CheckBox_Checked" />
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn		Header = "MCS_CST_ID"	Binding = "{Binding MCS_CST_ID}"  HorizontalAlignment="Center" Width="120"/>
                                            <c1:DataGridTextColumn		Header = "LOT ID"	    Binding = "{Binding LOTID}"		  HorizontalAlignment="Center" Width="120" />
                                            <c1:DataGridTextColumn      Header="출발지"      Binding="{Binding SRC_LOCID}"    HorizontalAlignment="Left" Width="200"/>
                                            <c1:DataGridTextColumn      Header="목적지"      Binding="{Binding DST_LOCID}"    HorizontalAlignment="Left" Width="200"/>
                                            <c1:DataGridTextColumn      Header="반송 상태"      Binding="{Binding JOB_STAT}"    HorizontalAlignment="Center"  Width="150" />
                                            <c1:DataGridTextColumn		Header = "현재 위치"		    Binding = "{Binding RACK_ID}"	  HorizontalAlignment="LEFT" Width="200"/>
                                            <c1:DataGridTextColumn		Header = "프로젝트"	    Binding = "{Binding PRJT_NAME}"	  HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn		Header = "모델"		    Binding = "{Binding MODLID}"	  HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn	Header = "수량"		    Binding = "{Binding WIPQTY}"	  HorizontalAlignment="Center" Format="#,##0"  />
                                            <c1:DataGridTextColumn		Header = "반송 타입"	    Binding = "{Binding ORD_CREATE_TP}"	  HorizontalAlignment="Center"  />
                                            <c1:DataGridTextColumn		Header = "HOLD여부"	    Binding = "{Binding WIPHOLD}"	  HorizontalAlignment="Center" />
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>

                                <GridSplitter Grid.Row="5" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                <Grid Grid.Row="6" x:Name="grdWHOrderTitle">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                        <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=출고순위, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    </Border>
                                    <!--<c1:C1ComboBox Grid.Row="0" Grid.Column="2" x:Name="cboPriority" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" MinWidth="100"  />-->
                                </Grid>

                                <Border Grid.Row="7" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                <Grid Grid.Row="7" x:Name="grdInputRank">
                                    <c1:C1DataGrid x:Name="dgInputRank" Grid.Row="0" Grid.Column="0" 
                                                   IsReadOnly="False" HeadersVisibility="Column" 
                                                   FrozenColumnCount="3" 
                                                   AlternatingRowBackground="White"  
                                                   CanUserFilter="False" 
                                                   CanUserSort="True" 
                                                   SelectionMode="SingleCell" 
                                                   CommittedEdit="dgInputRank_CommittedEdit"
                                                   >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTemplateColumn x:Name="CHK" Header = "선택" Width="50" HorizontalAlignment="Center">
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" Checked="rankCheck_Checked" Unchecked="rankCheck_UnChecked"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                            <c1:DataGridTextColumn	Header = "순위"		      Binding = "{Binding ROW_NUM}"    Width ="40"	   HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "MCS_CST_ID"     Binding = "{Binding MCS_CST_ID}"			       HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "LOT ID"	      Binding = "{Binding LOTID}"	                   HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "프로젝트"       Binding = "{Binding PRJT_NAME}"		           HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "극성"           Binding = "{Binding ELTR_TYPE_CODE}"	           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn	Header = "유효기간"	      Binding = "{Binding VLD_DATE}"		           HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "모델명"	      Binding = "{Binding MODLID}"			           HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "공정"	          Binding = "{Binding PROCIDNAME}"		           HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "버전"	          Binding = "{Binding PROD_VER_CODE}"	           HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "RACK ID"	      Binding = "{Binding RACK_ID}"	                   HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "HALF_SLIT_SIDE" Binding = "{Binding HALF_SLIT_SIDE}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                            <c1:DataGridTextColumn	Header = "QMS HOLD 여부"  Binding = "{Binding QMS_HOLD_FLAG}"              HorizontalAlignment="Center" IsReadOnly="True" />
                                            

                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
                                </Grid>
                                <Border Grid.Row="8" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                            </Grid>
                            <!--Splitter-->
                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  />
                            <Grid x:Name="HMIAera" Grid.Column="2" >
                                <Grid x:Name="RightArea">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="36"/>
                                        <RowDefinition Height="6*"/>
                                        <RowDefinition Height="4*"/>
                                    </Grid.RowDefinitions>

                                    <Border Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"></Border>
                                    <Grid x:Name="StairSector" Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="13"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>

                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="10"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="1" >
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="3">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="7*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding ConverterParameter='Stocker', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                            </StackPanel>
                                            <c1:C1ComboBox  Grid.Column="1" x:Name="cboStocker"  DisplayMemberPath="EQPTNAME" SelectedValuePath="EQPTID"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MinWidth="160" SelectedValueChanged="cboStocker_SelectedValueChanged" />
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="7*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding ConverterParameter='프로젝트명', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                            </StackPanel>
                                            <!--<c1:C1ComboBox  Grid.Column="1" x:Name="cboStair" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"   MinWidth="160" SelectedValueChanged="cboStair_SelectedValueChanged"/>-->
                                            <TextBox    Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtProjectName" CharacterCasing="Upper" MinWidth="80" />
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="7">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="7*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding ConverterParameter='PRDT_VER', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                            </StackPanel>
                                            <TextBox    Grid.Row="0" Grid.Column="1" Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtProductVersion" CharacterCasing="Upper" MinWidth="80" />
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="9">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="7*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                            </StackPanel>
                                            <c1:C1ComboBox  Grid.Column="1" x:Name="cboProcess" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  MinWidth="120" />
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="11">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="7*"/>
                                            </Grid.ColumnDefinitions>

                                            <c1:C1ComboBox  Grid.Column="1" x:Name="cboHold" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  MinWidth="80" />
                                        </Grid>

                                        <Grid Grid.Row="0" Grid.Column="13">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="7*"/>
                                            </Grid.ColumnDefinitions>
                                            <c1:C1ComboBox  Grid.Column="1" x:Name="cboColor" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DropDownHeight="400" MinWidth="150" />
                                        </Grid>
                                        
                                    </Grid>

                                    <Border x:Name="HMIRackBorder"  Grid.Row="1" Background="White" BorderBrush="Black" />
                                    <Grid x:Name="HMIRack" Grid.Row="1">
                                        <Grid x:Name="stairs" VerticalAlignment="Top">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1256*"/>
                                                <ColumnDefinition Width="43*"/>
                                                <ColumnDefinition Width="39*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="*"/>


                                            </Grid.RowDefinitions>

                                            <!--열연단 중 연에 해당하는 컬럼 세팅-->
                                            <ScrollViewer x:Name="scrollViewer1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto"  Grid.Row="2"  Grid.Column="0" Grid.ColumnSpan="3" >
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding ConverterParameter='1열', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                                    </StackPanel>

                                                    <Grid Grid.Row="1" Grid.Column="0" x:Name="grdColumn1" />
                                                    <Grid Grid.Row="0" Grid.Column="1" x:Name="grdStair1" />
                                                    <Grid Grid.Row="1" Grid.Column="1" x:Name="grdRackstair1" />
                                                </Grid>
                                            </ScrollViewer>

                                            <ScrollViewer x:Name="scrollViewer2" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Grid.Row="6"  Grid.Column="0" Grid.ColumnSpan="3" >
                                                <Grid>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="*" />
                                                    </Grid.RowDefinitions>

                                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                        <TextBlock Text="{Binding ConverterParameter='2열', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                                    </StackPanel>

                                                    <Grid Grid.Row="1" Grid.Column="0" x:Name="grdColumn2" />
                                                    <Grid Grid.Row="0" Grid.Column="1" x:Name="grdStair2" />
                                                    <Grid Grid.Row="1" Grid.Column="1" x:Name="grdRackstair2" />
                                                </Grid>
                                            </ScrollViewer>
                                            <Grid x:Name="scrollViewer3" Grid.Row="10"  Grid.Column="0" Grid.ColumnSpan="3" >
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="5*"/>
                                                    <ColumnDefinition Width="40"/>
                                                    <ColumnDefinition Width="5*"/>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="20"/>
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>

                                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.ColumnSpan="3">
                                                    <TextBlock Text="{Binding ConverterParameter='목적지 포트 상태', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                                </StackPanel>


                                                <StackPanel  Name="RolSltbuf" Grid.Row="1" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding ConverterParameter='ROL - SLT 사이 적치대', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                                </StackPanel>

                                                <Grid  Grid.Row="2"  Grid.Column="0" x:Name="RollSltBufTable">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="9*"/>
                                                        <ColumnDefinition Width="1*"/>
                                                    </Grid.ColumnDefinitions>
                                                    <c1:C1DataGrid x:Name="dgRollSltBufInfo" 
                                                           Grid.Row="0" Grid.Column="0" 
                                                           IsReadOnly="True" 
                                                           HeadersVisibility="Column" 
                                                           AlternatingRowBackground="White"  
                                                           CanUserFilter="False" 
                                                           CanUserSort="True" 
