<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LGC.GMES.MES.MCS001"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:Controls="clr-namespace:LGC.GMES.MES.MCS001.Controls" x:Class="LGC.GMES.MES.MCS001.MCS001_001"
             mc:Ignorable="d" 
             d:DesignHeight="850" d:DesignWidth="1920" Loaded="OnLoaded" Unloaded="OnUnloaded">

	<UserControl.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
			</ResourceDictionary.MergedDictionaries>
		</ResourceDictionary>
	</UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="SKID BUFFER 관리" Margin="0,10,0,-10" >
            <ctrlLib:LGCLayout.Content>
               <Grid >
                <Grid.RowDefinitions>
                    <!--TopSearch-->
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <!--Contents-->
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="4"/>
                    <!--Bottom-->
                    <RowDefinition Height="42"/>
                </Grid.RowDefinitions>


                    <Grid x:Name="ButtonArea" Margin="0,-55,0,0">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <Button Grid.Column="15" Content="{Binding ConverterParameter=Layout, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="onBtnLayoutClick"/>

                        </Grid>
                    </Grid>



                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" Grid.ColumnSpan="2"/>
                <Grid x:Name="TopSearch" Grid.Row="0" Height="38" Grid.ColumnSpan="2">
                    <!-- 조회 버튼 영역-->
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>

                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>

                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="5"/>
                        <ColumnDefinition Width="Auto"/>

                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="30"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="4"/>
                    </Grid.ColumnDefinitions>
                    <Button Grid.Column="0" x:Name="btnConfig" Content="{Binding ConverterParameter=설정, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="OnBtnConfig" />
                    <c1:C1ComboBox          Grid.Column="2" x:Name="cboColor" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DropDownHeight="400"/>

                    <Button     Grid.Row="0" Grid.Column="4" x:Name="btnInSKID" Content="{Binding ConverterParameter=입고SKID조회,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="btnInSKID_Click" />


                    <Button     Grid.Row="0" Grid.Column="6" x:Name="btnEmptySKID" Content="{Binding ConverterParameter=공SKID조회,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="OnBtnEmptySKID" />
                    <Button     Grid.Row="0" Grid.Column="8" x:Name="btnNotInput" Content="{Binding ConverterParameter=미입고SKID조회,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="OnBtnNotInput" />
                    <Button     Grid.Row="0" Grid.Column="10" x:Name="btnReInput" Content="{Binding ConverterParameter=재작업대상SKID조회,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="OnBtnReInput" />
                    <Button     Grid.Row="0" Grid.Column="12" x:Name="btnLotSearch" Content="{Binding ConverterParameter=특이LOT조회,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="OnBtnLotSearch" />
                    <Button     Grid.Row="0" Grid.Column="14" x:Name="btnISSRSVSearch" Content="{Binding ConverterParameter=수동출고예약SKID조회,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="OnBtnISSRSV" />
                    <Button     Grid.Row="0" Grid.Column="15" x:Name="btnSKIDERRORLISTSearch" Content="{Binding ConverterParameter=ERRORSKIDLIST조회,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" 
                                    Cursor="Hand" Click="OnBtnSkidErrorList" />




                    <TextBlock              Grid.Column="16" Text="{Binding ConverterParameter='자동조회', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                    <c1:C1ComboBox          Grid.Column="17" x:Name="cboAutoSearchOut" Margin="4,3,0,3" AutoComplete="False" DisplayMemberPath="NAME" SelectedValuePath="CODE" SelectedValueChanged="cboAutoSearchOut_SelectedValueChanged"  Width="Auto" MinWidth="40"/>
                    <!--Style="{StaticResource C1ComboBoxStyle}"-->
                    <Button Grid.Column="19" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="OnBtnSearch" />
                </Grid>
                <!--Contents-->
                <Grid x:Name="Contents" Grid.Row="2">
                    <Grid Grid.Row="0"  x:Name="ContentsRow">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.4*"/>
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="7.6*" />
                        </Grid.ColumnDefinitions>
                        <!--Left Grid Area-->
                        <Grid Grid.Row="0" x:Name="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="32" />
                                <RowDefinition Height="240" />
                                <RowDefinition Height="4" />
                                <!-- SPLITTER-->
                                <RowDefinition Height="32" />
                                <RowDefinition Height="195"/>
                                <RowDefinition Height="4" />
                                <!-- SPLITTER-->
                                <RowDefinition Height="32" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="5" />
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" x:Name="grdStoreTitle">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=창고재고, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                </Border>
                                <c1:C1ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboProdId1"  AutoComplete="False" DisplayMemberPath="CBO_NAME" 
                                               SelectedValuePath="CBO_CODE" MinWidth="120" SelectedIndexChanged="OnCboProdId1SelectedIndexChanged"/>
                                <!--SelectedIndexChanged="" Style="{StaticResource C1ComboBoxStyle}"-->


                            </Grid>

                            <Grid Grid.Row="1" x:Name="grdStore">
                                <c1:C1DataGrid x:Name="dgStore" Grid.Row="0" Grid.Column="0" MergingCells="dgStore_MergingCells" IsReadOnly="True" HeadersVisibility="None" FrozenTopRowsCount="1" FrozenColumnCount="1" AlternatingRowBackground="White"  LoadedCellPresenter="dgStoreLoadedCellPresenter"  CanUserFilter="False" CanUserSort="False" SelectionMode="SingleCell" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn Header="프로젝트"  Binding="{Binding PRJT_NAME}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn Header="[양극, LOT수]"      Binding="{Binding CC}"          HorizontalAlignment="Center" Format="#,##0" Width="60"/>
                                        <c1:DataGridTextColumn Header="[양극, 재공수량]"      Binding="{Binding CCQTY}"          HorizontalAlignment="Center" Format="#,##0" Width="60"/>
                                        <c1:DataGridTextColumn Header="[음극, LOT수]"      Binding="{Binding AC}"          HorizontalAlignment="Center" Format="#,##0" Width="60"/>
                                        <c1:DataGridTextColumn Header="[음극, 재공수량]"      Binding="{Binding ACQTY}"          HorizontalAlignment="Center" Format="#,##0" Width="60"/>
                                        <!--<c1:DataGridTextColumn Header="코드"      Binding="{Binding CODE}"          HorizontalAlignment="Center" Visibility="Hidden" />-->
                                    </c1:C1DataGrid.Columns>

                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <c1:DataGridColumnHeaderRow />
                                        <!--<c1:DataGridSummaryRow/>-->
                                    </c1:C1DataGrid.TopRows>

                                    <!--<c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
										<c1:C1GroupingWithSummariesBehavior/>
									</c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>-->
                                </c1:C1DataGrid>
                            </Grid>

                            <GridSplitter Grid.Row="2" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <Grid Grid.Row="3" x:Name="grdQATitle">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='QA검사', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                </Border>
                                <c1:C1ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboProdId2"  AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" MinWidth="120" SelectedIndexChanged="OnCboProdId2SelectedIndexChanged"/>

                            </Grid>

                            <Grid Grid.Row="4" x:Name="grdQA" >
                                <c1:C1DataGrid x:Name="dgQA"  Grid.Row="0" Grid.Column="0"  IsReadOnly="True" HeadersVisibility="None" FrozenTopRowsCount="1" FrozenColumnCount="1" AlternatingRowBackground="White" 
                                               LoadedCellPresenter="dgQALoadedCellPresenter"  CanUserFilter="False" CanUserSort="False" SelectionMode="SingleCell" MouseDoubleClick="dgQA_MouseDoubleClick">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn        Header = "구분" Binding = "{Binding ELTR_TYPE_CODE}" HorizontalAlignment="Center"   />
                                        <c1:DataGridTextColumn        Header = "양극" Binding = "{Binding CC}"             HorizontalAlignment="Center"  Format="#,##0" />
                                        <c1:DataGridTextColumn        Header = "음극" Binding = "{Binding AC}"             HorizontalAlignment="Center"  Format="#,##0" />
                                    </c1:C1DataGrid.Columns>

                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <!--<c1:DataGridColumnHeaderRow />-->
                                        <!--<c1:DataGridSummaryRow/>-->
                                    </c1:C1DataGrid.TopRows>

                                    <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                        <c1:C1GroupingWithSummariesBehavior/>
                                    </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>

                                </c1:C1DataGrid>
                            </Grid>

                            <GridSplitter Grid.Row="5" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <Grid Grid.Row="6" x:Name="grdWHOrderTitle">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter=출고순위, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                </Border>
                                <c1:C1ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboProdId3"  AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" MinWidth="120" SelectedIndexChanged="OnCboProdId03SelectedIndexChanged"/>
                                <c1:C1ComboBox Grid.Row="0" Grid.Column="2" x:Name="cboELTRTYPE" AutoComplete="False" DisplayMemberPath="CMCDNAME" SelectedValuePath="CMCODE" MinWidth="100" SelectedIndexChanged="OnCboELTRTYPESelectedIndexChanged" />

                            </Grid>

                            <Border Grid.Row="7" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Row="7" x:Name="grdInputRank">
                                <c1:C1DataGrid x:Name="dgInputRank" Grid.Row="0" Grid.Column="0" IsReadOnly="False" HeadersVisibility="None" FrozenTopRowsCount="1" FrozenColumnCount="3" AlternatingRowBackground="White"  LoadedCellPresenter="dgInputRankLoadedCellPresenter"  CanUserFilter="False" CanUserSort="False" SelectionMode="SingleCell">
                                    

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn x:Name="RANKCHK" Header = "선택" Width="50" HorizontalAlignment="Center">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=OneWay}" x:Name="rankchk" HorizontalAlignment="Center" Checked="Chk_Checked" Unchecked="Chk_UnChecked"/>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>


                                        <c1:DataGridTextColumn	Header = "순위"		 Width="40"	   IsReadOnly="True" Binding = "{Binding SEQ}"			HorizontalAlignment="Center" />
                                      
                                        <c1:DataGridTextColumn	Header = "프로젝트"    IsReadOnly="True" Binding = "{Binding PRJT_NAME}"		HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn	Header = "극성"     Width="60"   IsReadOnly="True"   Binding = "{Binding ELTR_TYPE_CODE}"	HorizontalAlignment="Center" />

                                        <c1:DataGridTextColumn	Header = "경과날짜"	 Width="80"	   IsReadOnly="True" Binding = "{Binding ELAPSE}"		HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn	Header = "VD완료시간"		       IsReadOnly="True" Binding = "{Binding WIPDTTM_ED}"	HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn	Header = "위치"			Width="60"           IsReadOnly="True" Binding = "{Binding PSTN}"			HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn	Header = "SKID ID"	 	   IsReadOnly="True" Binding = "{Binding MCS_CST_ID}"	HorizontalAlignment="Center" />
                                        </c1:C1DataGrid.Columns>

                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <!--<c1:DataGridColumnHeaderRow />-->
                                        <c1:DataGridSummaryRow/>
                                    </c1:C1DataGrid.TopRows>

                                    <c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                        <c1:C1GroupingWithSummariesBehavior/>
                                    </c1:C1GroupingWithSummariesBehavior.GroupingWithSummariesBehavior>
                                </c1:C1DataGrid>
                            </Grid>
                            <Border Grid.Row="8" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                        </Grid>
                        <!--Splitter-->
                        <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  />
                        <Grid x:Name="HMIAera" Grid.Column="2" MouseWheel="HMIAera_MouseWheel">

                            <Grid x:Name="RightArea">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="137"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                                <Grid x:Name="StairSector" Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <!--0. Toggle Button-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--1. 양극-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--2. 음극-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--3. 단-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--4. 단 combo-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--5. scroll-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--5. scroll-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--6. Fill-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--7. 전체사용율 label-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--7. 전체사용율 label-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--8. 전체사용율-->
                                        <ColumnDefinition Width="*"/>
                                        <!--9. 단사용율 label-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--10. 단사용율-->
                                        <ColumnDefinition Width="Auto"/>
                                        <!--11. 불량-->
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ToggleButton   Grid.Row="1"  Grid.Column="0" Margin="10,0,5,0" x:Name="btnExpandFrame" Style="{StaticResource btnLeftTopConerStyleHorizontal}"  IsChecked="true" Checked="btnExpandFrame_Checked" Unchecked="btnExpandFrame_Unchecked"/>
                                    <RadioButton	Grid.Row="0"  Grid.Column="1" Margin="10,0,5,0" Content="{Binding ConverterParameter=양극, Converter={StaticResource GlobalObjectDicConverter}}"
											        GroupName="StairSectors" x:Name="rdoAnode" Style="{StaticResource SearchCondition_RadioButtonStyle}" Click="OnRdoAnodeCathodeChecked" Height="32" VerticalAlignment="Top" IsChecked="True"/>
                                    <RadioButton Grid.Row="0"  Grid.Column="2" Margin="10,0,5,0" Content="{Binding ConverterParameter=음극, Converter={StaticResource GlobalObjectDicConverter}}"
                                                    GroupName="StairSectors" x:Name="rdoCathode" Style="{StaticResource SearchCondition_RadioButtonStyle}" Click="OnRdoAnodeCathodeChecked"/>
                                    <TextBlock		Grid.Row="0"  Grid.Column="3" Text="{Binding ConverterParameter=단, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Margin="25,0,1,0" />
                                    <c1:C1ComboBox Grid.Row="0" Grid.Column="4" x:Name="cboStair" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedItemChanged="OnCboStairSelectedItemChanged"/>


                                    <CheckBox		Grid.Row="0"  Grid.Column="8" Margin="30,0,15,0" Content="{Binding ConverterParameter=POS-EX, Converter={StaticResource GlobalObjectDicConverter}}"
											        x:Name="chPOS" Visibility="Hidden" IsChecked="False" Style="{StaticResource SearchCondition_CheckBoxStyle}"  Checked="chPOSChecked"  Unchecked="chPOSUncheck"/>

                                        <TextBlock		Grid.Row="0"  Grid.Column="5" Foreground="Red" Text="{Binding ConverterParameter=양극SKID명-파란색, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Margin="25,0,1,0" />
                                        <TextBlock		Grid.Row="0"  Grid.Column="6" Foreground="Red" Text="{Binding ConverterParameter=음극SKID명-검은색, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" Margin="25,0,1,0" />
                                        <TextBlock		Grid.Row="0"  Grid.Column="7" Foreground="Red" Text="{Binding ConverterParameter=특별관리SKID-노란색, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" Margin="25,0,1,0" />
                                        <TextBlock		Grid.Row="0"  Grid.Column="8" Foreground="Red" Text="{Binding ConverterParameter=HOLD-빨간색, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" Margin="25,0,1,0" />
                                        <TextBlock		Grid.Row="0"  Grid.Column="10" Text="{Binding ConverterParameter=전체사용율, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Margin="0,0,1,0" />
                                        <TextBox		Grid.Row="0"  Grid.Column="11" x:Name="txtTotalUsageRate" Style="{StaticResource TextBoxBaseStyle}" IsReadOnly="True" Width="60" />
                                        <TextBlock		Grid.Row="0"  Grid.Column="12" Text="{Binding ConverterParameter=단사용율, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Margin="0,0,1,0" />
                                        <TextBox		Grid.Row="0"  Grid.Column="13" x:Name="txtStairUsageRate" Style="{StaticResource TextBoxBaseStyle}" IsReadOnly="True" Width="60" />
                                        <CheckBox		Grid.Row="0"  Grid.Column="14" Margin="30,0,15,0" Content="{Binding ConverterParameter=재작업대상, Converter={StaticResource GlobalObjectDicConverter}}"
											  x:Name="chkNG" IsChecked="False" Style="{StaticResource SearchCondition_CheckBoxStyle}" Click="OnChkNGChecked"/>
                                    </Grid>

                                    <Border x:Name="HMIRackBorder"  Grid.Row="1" Background="White" BorderBrush="Black" BorderThickness="1" />
                       
                                <Grid x:Name="HMIRack" Grid.Row="1">
                                    <Grid x:Name="stairs" VerticalAlignment="Top">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="14"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="14"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="30"/>
                                            <RowDefinition Height="20"/>
                                            <RowDefinition Height="14"/>
                                            <RowDefinition Height="300"/>
                                            <RowDefinition Height="300"/>
                                        </Grid.RowDefinitions>
                                        <!--단-->
                                        <Border Grid.Row="0" Background="#e8ebed" BorderThickness="0" BorderBrush="#8a8a8a"></Border>
                                        <TextBlock x:Name="rackStairName" Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" Text="A ZONE"></TextBlock>
                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter=양극VD구역, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" Margin="100,0,2,0"/>

                                        <!--열연단 중 연에 해당하는 컬럼 세팅-->
                                        <Grid Grid.Row="1" x:Name="ColGrid1">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                            </Grid.ColumnDefinitions>
                                        </Grid>
                                        <Grid Grid.Row="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid Grid.Column="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>
