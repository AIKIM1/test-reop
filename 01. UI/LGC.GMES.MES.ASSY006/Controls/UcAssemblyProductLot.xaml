                                        <c1:DataGridNumericColumn     Header = "[재투입, 재투입]"                             Binding = "{Binding REINPUT_QTY}"    HorizontalAlignment="Right" Format="#,##0" />
                                        <c1:DataGridNumericColumn     Header = "[BOX수량, BOX수량]"                           Binding = "{Binding BOX_QTY}"        HorizontalAlignment="Right" Format="#,##0" />
                                        
