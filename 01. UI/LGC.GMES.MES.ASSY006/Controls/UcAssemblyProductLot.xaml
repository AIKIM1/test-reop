                                        <c1:DataGridTextColumn        Header = "[프로젝트명, 프로젝트명]"                     Binding = "{Binding UNIT_CODE}"                        HorizontalAlignment="Center" IsReadOnly="True" Width="40" />
                                        <c1:DataGridTextColumn        Header = "[버전, 버전]"                                 Binding = "{Binding PROD_VER_CODE}"  HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "[상태, 상태]"                                 Binding = "{Binding WIPSTAT}"        HorizontalAlignment="Center" Visibility="Collapsed" />
