        </Grid.Resources>
        <ctrlLib:LGCLayout x:Name="LayoutRoot">
            <Grid >
                <!--start -->
                <Grid.RowDefinitions>
                    <!--<RowDefinition Height="34"/>-->
                    <RowDefinition Height="*" />
                    <RowDefinition Height="8"/>
