                        <ColumnDefinition Width="6" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" FontWeight="Bold"></TextBlock>
                </Grid>
