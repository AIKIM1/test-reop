                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgProductLotZtzChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" x:Name="dgProductLotZtzChoice" Width="Auto"  HorizontalAlignment="Center" Checked="dgProductLotZtzChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
