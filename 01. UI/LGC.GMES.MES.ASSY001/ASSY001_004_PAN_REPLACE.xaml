<c1:C1Window x:Class="LGC.GMES.MES.ASSY001.ASSY001_004_PAN_REPLACE"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
             Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='잔량처리'}" 
             Tag="ProtoType01Windows01" Height="410" Width="500" IsResizable="True" Loaded="C1Window_Loaded" >

    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml"/>
    </c1:C1Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--content area-->
        <Border Grid.Row ="0" Background="#ffffffff" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="8" />
                <RowDefinition Height="*" />
                <RowDefinition Height="8" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
            </Grid.ColumnDefinitions>
            <Grid x:Name="grdContents" Grid.Row ="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*" MinWidth="140"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="1*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="4"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <TextBox    Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" x:Name="txtLotId" CharacterCasing="Upper" />
                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='총수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <TextBox    Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" x:Name="txtTotalQty" CharacterCasing="Upper" />

                <TextBlock      Grid.Row="4" Grid.Column="0" Text="{Binding ConverterParameter='코어반지름', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <c1:C1ComboBox  Grid.Row="4" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" x:Name="cboCoreRds" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_VALUE"/>

                <TextBlock  Grid.Row="6" Grid.Column="0" Text="{Binding ConverterParameter='제품반경', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <TextBox    Grid.Row="6" Grid.Column="1" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtInChangeQty" CharacterCasing="Upper" KeyUp="txtInChangeQty_KeyUp" TextChanged="txtInChangeQty_TextChanged"/>
                <Button     Grid.Row="6" Grid.Column="2" x:Name="btnConvert"  Content="{Binding ConverterParameter=수량변환, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnConvert_Click"/>
                <TextBlock  Grid.Row="8" Grid.Column="0" Text="{Binding ConverterParameter='잔량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <TextBox    Grid.Row="8" Grid.Column="1" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" x:Name="txtChangeQty" CharacterCasing="Upper" KeyUp="txtChangeQty_KeyUp" />
                <CheckBox   Grid.Row="8" Grid.Column="2" Grid.ColumnSpan="2" x:Name="chkAutoPrint" Content="{Binding ConverterParameter='자동발행',       Converter={StaticResource GlobalObjectDicConverter}}" Margin="10,0" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True"  />

                <TextBlock  Grid.Row="2" Grid.Column="0" x:Name="tbCstID" Text="{Binding ConverterParameter='CSTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <TextBox    Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtCSTId" CharacterCasing="Upper" GotFocus="txtCSTId_GotFocus" />


                <TextBlock  Grid.Row="10" Grid.Column="0" Text="{Binding ConverterParameter='상태변경', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}"/>
                <Grid x:Name="grdStats" Grid.Row="10" Grid.Column="1" Grid.ColumnSpan="3" MinHeight="29">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <RadioButton Grid.Column="1" x:Name="rdoHold" GroupName="rdoStatus" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='LOTHOLD처리', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Checked="rdoHold_Checked" />
                    <RadioButton Grid.Column="3" x:Name="rdoWait" GroupName="rdoStatus" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='LOT대기상태처리', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Checked="rdoWait_Checked" IsChecked="True" />
                </Grid>

                <TextBlock      Grid.Row="12" Grid.Column="0" Text="{Binding ConverterParameter='HOLD사유', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <c1:C1ComboBox  Grid.Row="12" Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" x:Name="cboHoldReason" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_VALUE" IsEnabled="False"/>

                <TextBlock      Grid.Row="12" Grid.Column="2" Text="{Binding ConverterParameter='예상해제일', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <ctrlLib:LGCDatePicker Grid.Row="12" Grid.Column="3" DatepickerType="Date" x:Name="dtExpected" SelectedDataTimeChanged="dtExpected_SelectedDataTimeChanged" IsEnabled="False"/>



                <TextBlock  Grid.Row="14" Grid.Column="0" Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <TextBox    Grid.Row="14" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtChangeReason" TextWrapping="Wrap" Height="Auto" Margin="3,0,3,0"/>
                <!--<TextBlock  Grid.Row="8" Grid.Column="0" Text="{Binding ConverterParameter='처리방법', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                <TextBox    Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtChangeMathod" CharacterCasing="Upper"/>-->
            </Grid>
        </Grid>


        <!--button area-->
        <Grid Grid.Row ="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="btnSaveAndPrint" Grid.Column="1" Content="{Binding ConverterParameter='잔량처리및발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnSaveAndPrint_Click" />
            <Button x:Name="btnSave"    Grid.Column="3" Content="{Binding ConverterParameter='잔량처리', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonSpecialStyle}" Click="btnSave_Click"/>
            <Button x:Name="btnClose" Grid.Column="5" Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonStyle}" Click="btnClose_Click" />
        </Grid>


        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" />
    </Grid>
</c1:C1Window>
