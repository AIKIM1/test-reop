<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.ASSY001.ASSY001_045"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid  x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="실시간 설비 불량률">

            <Grid>

                <Grid.RowDefinitions>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="8"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="8"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Row="1" Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1" Margin="0,0,0,0"/>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height ="*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" MinWidth="180"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto" MinWidth="180"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto" MinWidth="180"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto" MinWidth="180"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto" MinWidth="87"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto" MinWidth="87"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto" MinWidth="20"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto" MinWidth="87"/>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="Auto" MinWidth="87"/>
                            </Grid.ColumnDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="6*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='날짜', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </StackPanel>
                                <ctrlLib:LGCDatePicker Grid.Column="2"  x:Name="dtpDateFrom"  DatepickerType="Date" Margin="8,10,8,10" />
                            </Grid>

                            <Grid Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="6*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                </StackPanel>
                                <c1:C1ComboBox   Grid.Row="0" Grid.Column="2"   x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                            </Grid>

                            <Grid Grid.Column="4">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="6*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>

                                <c1:C1ComboBox  Grid.Row="0"  Grid.Column="2" x:Name="cboEquipmentSegment"   Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                            </Grid>

                            <Grid Grid.Column="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="6*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='공정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>

                                <c1:C1ComboBox  Grid.Row="0"  Grid.Column="2" x:Name="cboProcess"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                            </Grid>

                            <Grid Grid.Column="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="6*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Text="{Binding ConverterParameter=설비, Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}"/>
                                </StackPanel>
                                <c1:C1ComboBox  Grid.Row="0"  Grid.Column="2" x:Name="cboEquipment"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MaxWidth="200" />
                            </Grid>
                            
                            <!--ChkBox 2023 10 30 -->
                            <Grid Grid.Column="10" x:Name="gcMain" Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='메인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <CheckBox               Grid.Column="2" x:Name="chkMain" IsChecked="True" Click="chkMain_Click"/>
                            </Grid>

                            <!--CboBox 2023 10 30 -->
                            <Grid Grid.Column="12" x:Name="gcMachine" Visibility="Collapsed">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>
                                <TextBlock          Grid.Column="0" Text="{Binding ConverterParameter='Machine', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                <c1:C1ComboBox      Grid.Column="1" x:Name="cboEquipment_Machine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" MaxWidth="200"/>
                            </Grid>

                            <Button x:Name="btnSearch"  Grid.Column="14"  Content="{Binding ConverterParameter=조회,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />

                            <Grid Grid.Column="16">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="4*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="6*"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Orientation="Horizontal"  Grid.Row="0" Grid.Column="0" HorizontalAlignment="Center">
                                    <RadioButton Grid.Row="0"  Grid.Column="1" Margin="10,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=오름차순}"   
                                             GroupName="RadioButtonRow" Name="rdoAsc" Style="{StaticResource SearchCondition_RadioButtonStyle}" Click="rdo_Click"/>

                                    <RadioButton Grid.Row="0"  Grid.Column="0" Margin="10,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=내림차순}"   
                                             GroupName="RadioButtonRow" Name="rdoDesc" Style="{StaticResource SearchCondition_RadioButtonStyle}" IsChecked="True" Click="rdo_Click"/>
                                </StackPanel>

                                <!--<c1:C1NumericBox x:Name="txtMntStd"     Grid.Row="0" Grid.Column="2"  Visibility="{Binding TEXTVISIBLE}" Style="{StaticResource C1NumericBoxStyle}" ShowButtons="False" CornerRadius="0" AllowNull="True" HandleUpDownKeys="False" Format="#.##0" />-->
                            </Grid>
                        </Grid>

                    </Grid>

                    <Border Grid.RowSpan="1" Style="{StaticResource Content_InputForm_GroupBorderStyle}" Margin="0,57,0,0"/>
                    <Grid x:Name="SubGrid" Grid.Row="2" Margin="0,0,0,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="4"/>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="4"/>
                        </Grid.ColumnDefinitions>

                        <c1:C1DataGrid Grid.Row="1" Grid.Column="1" x:Name="dgLotInfo" IsReadOnly="True" HeadersVisibility="None"  FrozenTopRowsCount="2" FrozenColumnCount="3" SelectionMode="SingleRow" >
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn       Header = "[수집일자, 수집일자]"             Binding = "{Binding  WRK_DATE}"             HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn       Header = "[수집시간, 수집시간]"             Binding = "{Binding  SUM_WORK_DTTM}"             HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn       Header = "[LOTID, LOTID]"             Binding = "{Binding CURR_LOTID}"             HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn       Header = "[공정, 공정]"      Binding = "{Binding PROCID}"        HorizontalAlignment="Left" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn       Header = "[라인, 라인]"      Binding = "{Binding EQSGID}"        HorizontalAlignment="Left"  Visibility="Collapsed"/>
                                <c1:DataGridTextColumn       Header = "[설비ID, 설비ID]"      Binding = "{Binding EQPTID}"             HorizontalAlignment="Left" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn       Header = "[WINDING REJECT, CURRENT_RATE]"      Binding = "{Binding WINDING REJECT}"             HorizontalAlignment="Left" />
                                <c1:DataGridTextColumn       Header = "[WINDING REJECT, TOTAL_RATE]"      Binding = "{Binding WINDING REJECT}"             HorizontalAlignment="Left" />

                            </c1:C1DataGrid.Columns>
                            <c1:C1DataGrid.TopRows>
                                <c1:DataGridColumnHeaderRow />
                                <c1:DataGridColumnHeaderRow />
                            </c1:C1DataGrid.TopRows>
                        </c1:C1DataGrid>
                    </Grid>

                </Grid>
            </Grid>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
