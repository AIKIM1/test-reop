<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  
             x:Class="LGC.GMES.MES.ASSY001.ASSY001_030"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded" Initialized="UserControl_Initialized">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정진척(조립)_SSC FOLDED CELL 공정진척">
            <ctrlLib:LGCLayout.Content>
                <Grid x:Name="MainContents" Grid.Row="0">
                    <Grid.Resources>
                        <DataTemplate x:Key="ResultTemplate">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                            </Grid>
                        </DataTemplate>
                    </Grid.Resources>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="0*"/>
                    </Grid.RowDefinitions>

                    <!-- 공정 진척 Grid -->
                    <Grid Grid.Row="0">

                        <Grid.RowDefinitions>
                            <RowDefinition Height="51" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="3*"/>
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="34" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32" />
                                </Grid.RowDefinitions>
                                <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" MouseLeave="btnExtra_MouseLeave" VerticalAlignment="Bottom" Height="32">
                                    <c1:C1DropDownButton.Header>
                                        <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  TextAlignment="Center" VerticalAlignment="Center" />
                                    </c1:C1DropDownButton.Header>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="9" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="9" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="9"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="9"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                        <!--추가기능버튼-->
                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="btnWaitLot"       Content="{Binding ConverterParameter='대기LOT조회',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnWaitLot_Click" />
                                        <Button  Grid.Row="3" Grid.Column="1" x:Name="btnQualitySearch" Content="{Binding ConverterParameter='품질정보조회',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnQualitySearch_Click" />
                                        <Button  Grid.Row="5" Grid.Column="1" x:Name="btnDefect"        Content="{Binding ConverterParameter='불량정보관리',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnDefect_Click"   />
                                        <Button  Grid.Row="7" Grid.Column="1" x:Name="btnCancelTerm"    Content="{Binding ConverterParameter='투입LOT종료취소', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnCancelTerm_Click"   />
                                        <Button  Grid.Row="9" Grid.Column="1" x:Name="btnTestMode"      Content="{Binding ConverterParameter='TEST모드',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnTestMode_Click" />
                                    </Grid>
                                </c1:C1DropDownButton>

                                <Button              Grid.Row="0" Grid.Column="3"  x:Name="btnEqptCond"     Content="{Binding ConverterParameter='작업조건등록',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl05Style}" Click="btnEqptCond_Click"   />
                                <Button              Grid.Row="0" Grid.Column="5"  x:Name="btnQualityInput" Content="{Binding ConverterParameter='품질정보입력',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnQualityInput_Click"/>
                                <Button              Grid.Row="0" Grid.Column="7"  x:Name="btnEqpRemark"    Content="{Binding ConverterParameter='인수인계노트',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnEqpRemark_Click"/>

                                <Button              Grid.Row="0" Grid.Column="9"  x:Name="btnRunStart"     Content="{Binding ConverterParameter='작업시작',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl01Style}" Click="btnRunStart_Click" />
                                <Button              Grid.Row="0" Grid.Column="11" x:Name="btnRunComplete"  Content="{Binding ConverterParameter='장비완료',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}" Click="btnRunComplete_Click" />
                                <Button              Grid.Row="0" Grid.Column="13" x:Name="btnConfirm"      Content="{Binding ConverterParameter='실적확인',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl02Style}" Click="btnConfirm_Click" />
                            </Grid>
                        </Grid>

                        <!--start search Area-->
                        <Grid x:Name="SearchArea" Grid.Row="0">
                            <Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipmentSegment"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEquipmentSegment_SelectedValueChanged" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipment"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEquipment_SelectedValueChanged" />
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="7">
                                    <Button x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                                </Grid>
                            </Grid>
                        </Grid>
                        <!--end search Area-->

                        <!--start First Content Area-->
                        <Grid x:Name="Content" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <!--start 작업지시-->
                            <Grid x:Name="grdWorkOrder" Grid.Column="0">

                            </Grid>

                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--start 작업대상-->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </Grid>
                                <Grid   Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid   Grid.Row="1" Grid.Column="1" >
                                        <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot" IsReadOnly="True" HeadersVisibility="None" FrozenTopRowsCount="2" SelectionMode="SingleRow" >
                                            <c1:C1DataGrid.Columns>
                                                <!--<c1:DataGridTemplateColumn Name="CHK" Width="35" >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="chkProductLot_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>-->
                                                <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" CanUserFilter="False" CanUserSort="False" CanUserResize="False">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgProductLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgProductLotChoice" HorizontalAlignment="Center" Checked="dgProductLotChoice_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn        Header = "[LOTID, LOTID]"                           Binding = "{Binding LOTID}"     HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "[프로젝트명, 프로젝트명]"                 Binding = "{Binding PRJT_NAME}"      HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "[제품ID, 제품ID]"                         Binding = "{Binding PRODID}"     HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "[상태, 상태]"                             Binding = "{Binding WIPSTAT}"     HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "[상태, 상태]"                             Binding = "{Binding WIPSNAME}"     HorizontalAlignment="Center" />
                                                <c1:DataGridNumericColumn     Header = "[설비보고FOLDEDCELL수량, 투입량]"     Binding = "{Binding EQPT_INPUT_QTY}"     HorizontalAlignment="Right" Format="#,##0" MaxWidth="80"/>
                                                <c1:DataGridNumericColumn     Header = "[설비보고FOLDEDCELL수량, 양품량]"     Binding = "{Binding EQPT_END_QTY}"     HorizontalAlignment="Right" Format="#,##0" MaxWidth="80"/>
                                                <c1:DataGridNumericColumn     Header = "[설비보고FOLDEDCELL수량, 불량량]"     Binding = "{Binding EQPT_DFCT_QTY}"     HorizontalAlignment="Right" Format="#,##0" MaxWidth="80"/>
                                                <c1:DataGridNumericColumn     Header = "[완성수량, 바구니수]"                     Binding = "{Binding BOXCNT}"     HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridNumericColumn     Header = "[완성수량, CELL수]"                       Binding = "{Binding WIPQTY}"     HorizontalAlignment="Right" Format="#,##0" />
                                                <c1:DataGridTextColumn        Header = "[작업시작일시, 작업시작일시]"             Binding = "{Binding WIPDTTM_ST}"     HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "[작업완료일시, 작업완료일시]"             Binding = "{Binding EQPT_END_DTTM}"     HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "[W/O, W/O]"                               Binding = "{Binding WOID}"     HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "[작업지시상세, 작업지시상세]"             Binding = "{Binding WO_DETL_ID}"      HorizontalAlignment="Center" Visibility="Collapsed"/>
                                                <!--<c1:DataGridTextColumn        Header = "순번"             Binding = "{Binding OPERCODE}"     HorizontalAlignment="Center" />-->
                                                <c1:DataGridTextColumn        Header = "[제품명, 제품명]"                         Binding = "{Binding PRODNAME}"     HorizontalAlignment="Left" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "[WIPSEQ, WIPSEQ]"                         Binding = "{Binding WIPSEQ}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "[작업시작일시, 작업시작일시]"             Binding = "{Binding WIPDTTM_ST_ORG}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "[DB시간, DB시간]"                         Binding = "{Binding DTTM_NOW}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.TopRows>
                                                <c1:DataGridColumnHeaderRow />
                                                <c1:DataGridColumnHeaderRow />
                                            </c1:C1DataGrid.TopRows>
                                        </c1:C1DataGrid>
                                    </Grid>
                                    <!--end Product Lot-->
                                </Grid>
                                <!--end Product Lot-->
                            </Grid>
                        </Grid>

                        <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <!--start 투입&생산-->
                        <Grid x:Name="Detail" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--start 투입-->
                            <Grid x:Name="grdInput" Grid.Column="0">

                            </Grid>

                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--start 생산매거진-->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='생산반제품', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                                    <Grid Grid.Column="3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Border    Grid.Row="1" Grid.Column="0" Background="#E6F5FB" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='발행', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />

                                        <Border    Grid.Row="1" Grid.Column="4" Background="#F8DAC0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='미발행', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="8"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="3" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="60"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="0"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="4"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                        <TextBox   Grid.Row="0" Grid.Column="2" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtOutBoxQty" LostFocus="txtOutBoxQty_LostFocus" KeyUp="txtOutBoxQty_KeyUp"/>

                                        <CheckBox Grid.Row="0" Grid.Column="3" x:Name="chkAutoPrint" Content="{Binding ConverterParameter='생성후자동발행',       Converter={StaticResource GlobalObjectDicConverter}}" Margin="5,5" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True"  />

                                        <Border     Grid.Row="0" Grid.Column="5" Style="{StaticResource Content_Separator_BorderStyle}" />
                                        <Button     Grid.Row="0" Grid.Column="7"  x:Name="btnTESTPrint"       Content="{Binding ConverterParameter='TEST발행',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnTESTPrint_Click" Visibility="Collapsed"/>
                                        <Button     Grid.Row="0" Grid.Column="9"  x:Name="btnCreateBOX"       Content="{Binding ConverterParameter='생성',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnCreateBOX_Click"/>
                                        <Button     Grid.Row="0" Grid.Column="11" x:Name="btnDeleteBOX"       Content="{Binding ConverterParameter='삭제',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnDeleteBOX_Click"/>
                                        <Button     Grid.Row="0" Grid.Column="13" x:Name="btnOutSave"         Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnOutSave_Click"/>
                                        <Button     Grid.Row="0" Grid.Column="15" x:Name="btnOutPrint"        Content="{Binding ConverterParameter='발행',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnOutPrint_Click"/>

                                        <c1:C1DataGrid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="16" x:Name="dgOutProduct" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" FrozenBottomRowsCount="1" LoadedCellPresenter="dgOutProduct_LoadedCellPresenter" UnloadedCellPresenter="dgOutProduct_UnloadedCellPresenter" >
                                            <c1:C1DataGrid.Columns>
                                                <!--<c1:DataGridTemplateColumn Name="CHK" Width="35" >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>-->
                                                <c1:DataGridCheckBoxColumn Width="Auto" Name = "CHK"        Binding = "{Binding CHK, Mode=TwoWay}"          HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                <c1:DataGridTextColumn        Header = "NO."                Binding = "{Binding ROWNUM}"                    HorizontalAlignment="Center" IsReadOnly="True" Width="40" CanUserFilter="False"/>
                                                <c1:DataGridTextColumn        Header = "바구니"             Binding = "{Binding LOTID}"                     HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "WIPSEQ"             Binding = "{Binding WIPSEQ}"                    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "제품ID"             Binding = "{Binding PRODID}"                    HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridNumericColumn     Header = "수량"               Binding = "{Binding WIPQTY}"                    HorizontalAlignment="Right" Format="#,##0" EditOnSelection="True" Minimum="0" >
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridTextColumn        Header = "단위"               Binding = "{Binding UNIT_CODE}"                 HorizontalAlignment="Center" IsReadOnly="True" Width="60" />
                                                <c1:DataGridTextColumn        Header = "발행"               Binding = "{Binding PRINT_YN}"                  HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "발행"               Binding = "{Binding PRINT_YN_NAME}"             HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                <c1:DataGridTextColumn        Header = "생성시간"           Binding = "{Binding LOTDTTM_CR}"                HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "DISPATCH"           Binding = "{Binding DISPATCH_YN}"               HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                            </c1:C1DataGrid.Columns>

                                            <c1:C1DataGrid.BottomRows>
                                                <c1:DataGridSummaryRow x:Name="summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                            </c1:C1DataGrid.BottomRows>

                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>

                            <!--end content-->
                        </Grid>

                        <Border Grid.Row="6" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                        <Grid Grid.Row="6" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="13"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34" />
                            </Grid.RowDefinitions>
                            <Grid Grid.Row="0" Grid.Column="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="0"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtShift" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 10, 3" />
                                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='작업시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox Grid.Row="0" Grid.Column="3" x:Name="txtShiftDateTime" IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 10, 3" />
                                <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                                    <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                    <TextBlock Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </StackPanel>
                                <TextBox x:Name="txtWorker"         Grid.Column="5"  IsReadOnly="True"  HorizontalAlignment="Stretch" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="3, 3, 3, 3" />
                                <Button  x:Name="btnShift"          Grid.Column="6" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_SearchButtonStyle}" HorizontalAlignment="Left" IsCancel="True" Click="btnShift_Click" />
                                <TextBox x:Name="txtShiftStartTime" Grid.Column="7"  IsReadOnly="True"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="3, 3, 3, 3" Visibility="Collapsed" />
                                <TextBox x:Name="txtShiftEndTime"   Grid.Column="7"  IsReadOnly="True"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="3, 3, 3, 3" Visibility="Collapsed" />
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- Test Mode Grid -->
                    <Grid Grid.Row="2" x:Name="grdTestMode">
                        <TextBlock Text="{Binding ConverterParameter='테스트모드사용중', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" />
                        <Rectangle x:Name="recTestMode" ></Rectangle>
                    </Grid>

                </Grid>
            </ctrlLib:LGCLayout.Content>

        </ctrlLib:LGCLayout>

        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" />
    </Grid>
</UserControl>
