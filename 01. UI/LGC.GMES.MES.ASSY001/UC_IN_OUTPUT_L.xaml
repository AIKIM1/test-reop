<UserControl x:Class="LGC.GMES.MES.ASSY001.UC_IN_OUTPUT_L"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml" 
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary" 
             mc:Ignorable="d" 
             d:DesignHeight="500" 
             d:DesignWidth="600" 
             Loaded="UserControl_Loaded" 
             Initialized="UserControl_Initialized" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="6" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                </Grid>
            </DataTemplate>
        </Grid.Resources>

        <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="34" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}" />
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="15" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="1" Text="{Binding ConverterParameter='투입', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
            </Grid>
            <!-- EDC Warning Grid -->
            <Grid Grid.Row="0" x:Name="grdBcrWarning" VerticalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Rectangle x:Name="recBcrWarning" Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" ></Rectangle>
                <Border Grid.Row="1" Grid.Column="1"  BorderThickness="2" BorderBrush="White">
                    <TextBlock x:Name="txtBcrWarning" Grid.Row="1" Grid.Column="1" Margin="10,0" Text="{Binding ConverterParameter='BCR_READ_RATE_WARNING', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="17" FontWeight="Bold" Foreground="White" />
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="8"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="8"></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="8" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="8" />
                </Grid.ColumnDefinitions>

                <c1:C1TabControl Grid.Row="1" Grid.Column="1" >
                    <c1:C1TabItem x:Name="tbCurrIn" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='자재투입'}">
                        <Grid x:Name="grdCurrIn">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="3" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />                                
                            </Grid.ColumnDefinitions>
                            <Grid x:Name="grdMagTypeCntInfo" Grid.Row="1" Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="0" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />

                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="1" x:Name="tbATypeTitle" Text="{Binding ConverterParameter='ATYPE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                <TextBlock Grid.Row="0" Grid.Column="4" x:Name="tbATypeCnt" Text="0" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                
                                <TextBlock Grid.Row="1" Grid.Column="10" x:Name="tbCTypeTitle" Text="{Binding ConverterParameter='CTYPE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                <TextBlock Grid.Row="0" Grid.Column="13" x:Name="tbCTypeCnt" Text="0" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                            </Grid>
                            <Grid x:Name="grdCurrTranBtn" Grid.Row="1" Grid.Column="2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                               
                                <TextBlock  Grid.Column="4" Text="{Binding ConverterParameter='투입LOTID(CARRIERID)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                <TextBox    Grid.Column="6" Margin="0,3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtCurrInLotID" MinWidth="80" MaxWidth="120" CharacterCasing="Upper" KeyDown="txtCurrInLotID_KeyDown" />
                                <Border     Grid.Column="8" Style="{StaticResource Content_Separator_BorderStyle}" />
                                <Button     Grid.Column="10" x:Name="btnCurrInCancel" Content="{Binding ConverterParameter='투입취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnCurrInCancel_Click" />
                                <Button     Grid.Column="12" x:Name="btnCurrInEnd" Content="{Binding ConverterParameter='투입배출',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnCurrInEnd_Click" />

                            </Grid>
                            
                            <c1:C1DataGrid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="16" x:Name="dgCurrIn" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow"  
                                           LoadedColumnHeaderPresenter="dgCurrIn_LoadedColumnHeaderPresenter" 
                                           UnloadedColumnHeaderPresenter="dgCurrIn_UnloadedColumnHeaderPresenter">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridCheckBoxColumn Name="CHK" Binding="{Binding CHK, Mode=TwoWay}" Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" IsReadOnly="False" />
                                    <c1:DataGridTextColumn Header="MTGRID" Binding="{Binding MOUNT_MTRL_TYPE_CODE}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="구분" Binding="{Binding MOUNT_MTRL_TYPE_NAME}" HorizontalAlignment="Center" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="위치" Binding="{Binding EQPT_MOUNT_PSTN_ID}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="위치" Binding="{Binding EQPT_MOUNT_PSTN_NAME}" HorizontalAlignment="Left" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="극성" Binding="{Binding INPUT_MTRL_CLSS_NAME}" HorizontalAlignment="Center" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="투입가능자재" Binding="{Binding PRDT_CLSS3_CODE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn Header="반전장착여부" Binding="{Binding REVS_MOUNT_FLAG}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                    <c1:DataGridTextColumn Header="투입가능자재" Binding="{Binding PRDT_CLSS3_CODE_NAME}" HorizontalAlignment="Center" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="반전장착여부" Binding="{Binding REVS_MOUNT_FLAG_NAME}" HorizontalAlignment="Center" IsReadOnly="True" />
                                    
                                    <c1:DataGridTextColumn Header="투입LOT" Binding="{Binding INPUT_LOTID}" HorizontalAlignment="Center" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="LOTTYPE" Binding="{Binding LOTTYPE}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="LOT유형" Binding="{Binding LOTYNAME}" HorizontalAlignment="Center" IsReadOnly="True"/>
                                    <c1:DataGridTextColumn Header="Carrier ID" Binding="{Binding CSTID}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridNumericColumn Header="투입량" Binding="{Binding INPUT_QTY}" HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="자재ID" Binding="{Binding MTRLID}" HorizontalAlignment="Center" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="자재명" Binding="{Binding MTRLNAME}" HorizontalAlignment="Center" IsReadOnly="True" />

                                    <c1:DataGridTextColumn Header="WIPSEQ" Binding="{Binding WIPSEQ}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="상태" Binding="{Binding WIPSTAT}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="상태" Binding="{Binding WIPSNAME}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />

                                    <c1:DataGridTextColumn Header="단위" Binding="{Binding UNIT_CODE}" HorizontalAlignment="Center" IsReadOnly="True" Width="60" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="투입일시" Binding="{Binding MOUNT_STAT_CHG_DTTM}" HorizontalAlignment="Center" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="제품타입" Binding="{Binding PRDT_CLSS_CODE}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="투입제품타입" Binding="{Binding INPUT_LOT_TYPE_CODE}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="모LOT" Binding="{Binding PROD_LOTID}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                    <!--<c1:DataGridTextColumn        Header = "INPUT_SEQNO"  Binding = "{Binding INPUT_SEQNO}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>-->
                                    <c1:DataGridTextColumn Header="PRODUCT_LEVEL2_CODE" Binding="{Binding PRODUCT_LEVEL2_CODE}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="AUTO_STOP_FLAG"    Binding = "{Binding AUTO_STOP_FLAG}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="MOUNT_PSTN_STAT_CODE"    Binding = "{Binding MOUNT_PSTN_STAT_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="MOUNT_PSTN_GR_CODE"    Binding = "{Binding MOUNT_PSTN_GR_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                        </Grid>

                    </c1:C1TabItem>
                    <c1:C1TabItem x:Name="tbPancake" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='대기PANCAKE'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="3" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" MinWidth="50" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='투입위치', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <c1:C1ComboBox Grid.Row="1" Grid.Column="3" Margin="4,3,4,3" x:Name="cboPancakeMountPstnID" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" SelectedValueChanged="cboPancakeMountPstnID_SelectedValueChanged" />

                            <TextBlock Grid.Row="1" Grid.Column="5" Text="{Binding ConverterParameter='극성', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <TextBox Grid.Row="1" Grid.Column="6" x:Name="txtWaitPancakeInputClssCode" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                            <Border Grid.Row="1" Grid.Column="8" Style="{StaticResource Content_Separator_BorderStyle}" />

                            <TextBlock Grid.Row="1" Grid.Column="10" Text="{Binding ConverterParameter='LOTID(CARRIERID)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <TextBox Grid.Row="1" Grid.Column="11" Margin="4,3,0,3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtWaitPancakeLot" CharacterCasing="Upper" MinWidth="95" MaxWidth="200" KeyDown="txtWaitPancakeLot_KeyDown" GotFocus="txtWaitPancakeLot_GotFocus" />

                            <Border Grid.Row="1" Grid.Column="13" Style="{StaticResource Content_Separator_BorderStyle}" />
                            <Button Grid.Row="1" Grid.Column="15" x:Name="btnWaitPancakeSearch" Content="{Binding ConverterParameter='조회',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnWaitPancakeSearch_Click" />
                            <Button Grid.Row="1" Grid.Column="16" x:Name="btnWaitPancakeInPut"  Content="{Binding ConverterParameter='투입',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Margin="4,0,0,0" Click="btnWaitPancakeInPut_Click" />

                            <c1:C1DataGrid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="22" x:Name="dgWaitPancake" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" FrozenBottomRowsCount="1" CurrentCellChanged="dgWaitPancake_CurrentCellChanged" LoadedCellPresenter="dgWaitPancake_LoadedCellPresenter" UnloadedCellPresenter="dgWaitPancake_UnloadedCellPresenter">
                                <c1:C1DataGrid.Resources>
                                    <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/btn_i_print.png" Stretch="Uniform" />
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </c1:C1DataGrid.Resources>
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridCheckBoxColumn Name="CHK" Binding="{Binding CHK}" Width="Auto" IsReadOnly="True" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                    <c1:DataGridNumericColumn Header="NO." Binding="{Binding ROWNUM}" HorizontalAlignment="Center" Format="#,##0.##" IsReadOnly="True" Width="40" />
                                    <c1:DataGridTextColumn Header="순위" Binding="{Binding RANK}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="VD완료시간" Binding="{Binding VDDTTM_ED}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="LOTID" Binding="{Binding LOTID}" HorizontalAlignment="Center" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="LOTTYPE" Binding="{Binding LOTTYPE}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="LOT유형" Binding="{Binding LOTYNAME}" HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn Header="Carrier ID" Binding="{Binding CSTID}" HorizontalAlignment="Center"  IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="상태" Binding="{Binding WIPSTAT}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="상태" Binding="{Binding WIPSNAME}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="전공정작업일자" Binding="{Binding VALID_DATE}" HorizontalAlignment="Center" Width="100" />
                                    <c1:DataGridTextColumn Header="선입선출" Binding="{Binding HOT}" HorizontalAlignment="Center" Width="70" Visibility="Collapsed" />
                                    <c1:DataGridNumericColumn Header="수량" Binding="{Binding WIPQTY}" HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True">
                                        <c1:DataGridAggregate.AggregateFunctions>
                                            <c1:DataGridAggregatesCollection>
                                                <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}"></c1:DataGridAggregateSum>
                                            </c1:DataGridAggregatesCollection>
                                        </c1:DataGridAggregate.AggregateFunctions>
                                    </c1:DataGridNumericColumn>
                                    <c1:DataGridTextColumn Header="단위" Binding="{Binding UNIT_CODE}" HorizontalAlignment="Center" IsReadOnly="True" Width="60" />
                                    <!--<c1:DataGridTextColumn        Header = "HOLD여부" Binding = "{Binding WIPHOLD}"   HorizontalAlignment="Center" IsReadOnly="True"/>-->
                                    <c1:DataGridTextColumn Header="특이사항" Binding="{Binding WIP_NOTE}" HorizontalAlignment="Left" IsReadOnly="True" MaxWidth="250" TextWrapping="WrapWithOverflow" />
                                    <c1:DataGridTextColumn Header="대LOT" Binding="{Binding LOTID_RT}" HorizontalAlignment="Center" IsReadOnly="True" />
                                    <c1:DataGridTextColumn Header="작업일자" Binding="{Binding VALID_DATE_YMDHMS}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                    <c1:DataGridTextColumn Header="출고 여부" Binding="{Binding WH_RELEASE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    <!--<c1:DataGridTemplateColumn    Header = "재발행"     Name="PRINT"    Width="55" >
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <Button Click="btnWaitPancakePrint_Click" Style="{StaticResource grButtonStyle}" />
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>-->
                                </c1:C1DataGrid.Columns>
                                <c1:C1DataGrid.BottomRows>
                                    <c1:DataGridSummaryRow RowStyle="{StaticResource SummaryRowStyle}" />
                                </c1:C1DataGrid.BottomRows>
                            </c1:C1DataGrid>
                        </Grid>
                    </c1:C1TabItem>
                    <c1:C1TabItem x:Name="tbMagazine" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='대기매거진'}">
                        <Grid Name="grdWaitMgz">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="3" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="4" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <RadioButton Grid.Row="1" Grid.Column="0" GroupName="rdoWaitMag" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='ATYPE', Converter={StaticResource GlobalObjectDicConverter}}" Name="rdoMagAType" Tag="AT" IsChecked="False" Checked="rdoWaitMaz_Checked" />
                            <RadioButton Grid.Row="1" Grid.Column="2" GroupName="rdoWaitMag" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='CTYPE',   Converter={StaticResource GlobalObjectDicConverter}}" Name="rdoMagCtype" Tag="CT" IsChecked="False" Checked="rdoWaitMaz_Checked" />

                            <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='LOTID(CARRIERID)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <TextBox   Grid.Row="1" Grid.Column="6" Margin="4,3,0,3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtWaitMazID" CharacterCasing="Upper" MinWidth="95" MaxWidth="200" KeyDown="txtWaitMazID_KeyDown" GotFocus="txtWaitMazID_GotFocus" />

                            <Border  Grid.Row="1"  Grid.Column="8" Style="{StaticResource Content_Separator_BorderStyle}" />
                            <Grid x:Name="grdWaitMgTranBtn" Grid.Row="1" Grid.Column="8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock     Grid.Column="0" Text="{Binding ConverterParameter='투입위치', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                <c1:C1ComboBox Grid.Column="1" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" x:Name="cboMagMountPstnID" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" />


                                <Border  Grid.Column="3" Style="{StaticResource Content_Separator_BorderStyle}" />
                                <Button  Grid.Column="5" x:Name="btnWaitMagInput" Content="{Binding ConverterParameter='투입',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnWaitMagInput_Click" />

                            </Grid>
                            
                            <Button Grid.Row="1" Grid.Column="10" x:Name="btnWaitMagRework" Content="{Binding ConverterParameter='재작업매거진생성', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnWaitMagRework_Click" />

                            <c1:C1DataGrid Grid.Row="3" Grid.ColumnSpan="21" x:Name="dgWaitMagazine" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" FrozenBottomRowsCount="1" CurrentCellChanged="dgWaitMagazine_CurrentCellChanged" LoadedCellPresenter="dgWaitMagazine_LoadedCellPresenter" UnloadedCellPresenter="dgWaitMagazine_UnloadedCellPresenter">

                                <c1:C1DataGrid.Resources>
                                    <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                        <Setter Property="Background">
                                            <Setter.Value>
                                                <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/btn_i_print.png" Stretch="Uniform" />
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </c1:C1DataGrid.Resources>
                                <c1:C1DataGrid.Columns>
