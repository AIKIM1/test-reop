                                                        <!--<Button Grid.Column="1" x:Name="btnShift" VerticalAlignment="Center" Click="btnShift_Click" Height="" >
                                                    <Image Source="/LGC.GMES.MES.ASSY001;component/Images/input_i_searchbtn.png" Width="12" Height="12" />
                                                </Button>-->
                                                    </Grid>
                                                </Border>


