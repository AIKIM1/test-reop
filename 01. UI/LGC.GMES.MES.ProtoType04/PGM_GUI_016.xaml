<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.ProtoType04.PGM_GUI_016"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
		     xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"        
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024"
             Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />    
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정진척(전극)_테이핑 공정진척">
            <ctrlLib:LGCLayout.Content>

                <!--#region Main Grid -->
                <Grid x:Name="MainGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <!-- Button -->
                        <RowDefinition Height="5" />
                        <!-- Margin -->
                        <RowDefinition Height="Auto" />
                        <!-- 조회조건 -->
                        <RowDefinition Height="*" />
                        <!-- Contents-->
                    </Grid.RowDefinitions>

                    <!--#region Button Area -->
                    <Grid x:Name="ButtonArea" Grid.Row="0">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" >
                                <c1:C1DropDownButton.Header>
                                    <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                                </c1:C1DropDownButton.Header>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <!--추가기능버튼-->
                                    <Button  Grid.Row="0" Grid.Column="0" x:Name="btnLot"           Content="{Binding ConverterParameter='Lot 정리',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                    <Button  Grid.Row="1" Grid.Column="0" x:Name="btnBringOut"      Content="{Binding ConverterParameter='라벨발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                    <Button  Grid.Row="2" Grid.Column="0" x:Name="btnBringOutFree"  Content="{Binding ConverterParameter='이력카드',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                </Grid>
                            </c1:C1DropDownButton>
                            <Button              Grid.Row="0" Grid.Column="2" x:Name="btnStart"    Content="{Binding ConverterParameter='작업시작',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunStartImportStyle}" />
                            <Button              Grid.Row="0" Grid.Column="3" x:Name="btnCancel"   Content="{Binding ConverterParameter='작업시작취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCancelImportStyle}" Click="btnRunCancel_Click"/>
                            <Button              Grid.Row="0" Grid.Column="4" x:Name="btnEnd"      Content="{Binding ConverterParameter='장비완료',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" />
                            <Button              Grid.Row="0" Grid.Column="5" x:Name="btnConfirm"  Content="{Binding ConverterParameter='실적확인',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" />
                        </Grid>
                    </Grid>
                    <!--#endregion-->

                    <!--#region Search Area -->
                    <Grid x:Name="SearchArea" Grid.Row="2">
                        <Grid Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <!-- 라인 -->
                                <ColumnDefinition Width="2*" />
                                <!-- 라인 Combo-->
                                <ColumnDefinition Width="1*" />
                                <!-- 설비 -->
                                <ColumnDefinition Width="2*" />
                                <!-- 설비 Combo -->
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                                <!-- Lot Status-->
                                <ColumnDefinition Width="96" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="10" />
                            </Grid.ColumnDefinitions>

                            <Border     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="9" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            <!--조회조건 타이틀-->
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <!-- 필수 검색 조건은 아래와 같이 StackPanel을 이용하여 필수 마크를 붙여 줍니다 -->
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                <!-- 필수 검색 조건은 아래와 같이 StackPanel을 이용하여 필수 마크를 붙여 줍니다 -->
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            </StackPanel>

                            <!--조회조건 컨트롤-->
                            <c1:C1ComboBox   Grid.Column="1" x:Name="cboEquipmentSegment"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                            <c1:C1ComboBox   Grid.Column="3" x:Name="cboEquipment"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                            <StackPanel Grid.Column="4" Grid.ColumnSpan="2" Orientation="Horizontal">
                                <CheckBox Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="대기" IsChecked="True"/>
                                <Border Width="5"/>
                                <CheckBox Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="작업중" IsChecked="True"/>
                                <Border Width="5"/>
                                <CheckBox Style="{StaticResource SearchCondition_CheckBoxStyle}" Content="작업완료" IsChecked="False"/>
                            </StackPanel>
                            <!--조회 버튼-->
                            <Button     Grid.Row="0" Grid.Column="6" x:Name="btnSearch" Content="{Binding ConverterParameter=Search, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click"/>
                        </Grid>
                    </Grid>
                    <!--#endregion-->

                    <!--#region Contents Area -->
                    <Grid x:Name="Content" Grid.Row="3">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="5"/>
                            <RowDefinition Height="3*"/>
                        </Grid.RowDefinitions>

                        <!--#region 작업지시/Product Lot -->
                        <Grid x:Name="Contenaat" Grid.Row="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="2*" />
                                <ColumnDefinition Width="5" />
                                <ColumnDefinition Width="3*" />
                                <ColumnDefinition Width="5" />
                            </Grid.ColumnDefinitions>

                            <!--start 작업지시-->
                            <Grid x:Name="grdWorkOrder" Grid.Row="1" Grid.Column="1">
                            </Grid>

                            <!--start Product Lot-->
                            <Grid Grid.Row="1" Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="2*"/>
                                    <RowDefinition Height="6"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="6"/>
                                </Grid.ColumnDefinitions>

                                <!-- 1row-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='Product Lot', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                </TextBlock>
                                <!--2row-->
                                <Border Grid.Row="1"  Grid.RowSpan=" 2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                <!--3row-->
                                <c1:C1DataGrid Grid.Row="2" x:Name="dgProductLot" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" Grid.ColumnSpan="2" Grid.RowSpan="2" >

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Name="CHK" Width="35" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="chkProductLot_Checked" Unchecked="chkProductLot_UnChecked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn        Header = "Lot ID"     Binding = "{Binding LOTID}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "투입Lot"       Binding = "{Binding INPUTLOT}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "상태" Binding = "{Binding WIPSTAT}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "재공량"   Binding = "{Binding WIPQTY}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "장비수량"       Binding = "{Binding EQIPQTY}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "F/Cut"    Binding = "{Binding FINALCUT}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "작업지시"   Binding = "{Binding WOID}"   HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "제품ID"   Binding = "{Binding PRODID}"   HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "제품명"   Binding = "{Binding PRODNAME}"   HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "시작시간"   Binding = "{Binding WIPDTTM_ST}"   HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "종료시간"   Binding = "{Binding WIPDTTM_ED}"   HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn        Header = "작업조"      Binding = "{Binding SHIFT}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>

                                </c1:C1DataGrid>

                                <!--end Product Lot-->
                            </Grid>


                        </Grid>



                        <!--#endregion-->

                        <!--#region 실적상세 -->
                        <Grid Grid.Row="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1" />
                                <!-- Margin -->
                                <RowDefinition Height="20" />
                                <!-- Lot 정보-->
                                <RowDefinition Height="80"/>
                                <!-- Lot 상세-->
                                <RowDefinition Height="3" />
                                <!-- Margin -->
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <!-- Lot 상세 -->
                                <ColumnDefinition Width="8" />
                                <!-- Margin -->
                                <ColumnDefinition Width="1*"/>
                                <!-- 불량/품질/자재-->
                            </Grid.ColumnDefinitions>
                            <Border        Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='실적 확인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                            <!--#region Lot 상세-->
                            <c1:C1DataGrid Grid.Row="2" Grid.Column="0" x:Name="dgLotInfo" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn        Header = "Lot ID"   Binding = "{Binding LOTID}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "생산량"   Binding = "{Binding INPUTQTY}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "양품량"   Binding = "{Binding GOODQTY}"      HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "Loss량"   Binding = "{Binding LOSSQTY}"      HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                            <!--#endregion-->

                            <!--#region 실적상세 -->
                            <Grid Grid.Row="4" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                    <ColumnDefinition Width="1.5*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="0.5*"/>
                                </Grid.ColumnDefinitions>

                                <!--#region  실적 상세 항목 -->
                                <!-- 0 Row -->
                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='작업지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="1"  Grid.ColumnSpan="2"  Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox x:Name="txtWorkOrder" />
                                </Border>
                                <Border Grid.Row="0" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>

                                <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='Lot 상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12" />
                                </Border>
                                <Border Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtStatus" />
                                </Border>
                                <Border Grid.Row="0" Grid.Column="7"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtWorkDate" />
                                </Border>


                                <!-- 1Row -->
                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='버전', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="1"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtVersion" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='변환율', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='잔량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="7"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtLossqty" />
                                </Border>
                                <Border Grid.Row="1" Grid.Column="4"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtChangeRate" />
                                </Border>


                                <!-- 2 Row -->
                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='생산량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="1"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtResultQty" />
                                </Border>
                                <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='모Lot투입량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="4"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtRemainQty" />
                                </Border>
                                <Border Grid.Row="2" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='양품량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="7"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtGoodQuntity" />
                                </Border>

                                <!-- 3 Row -->
                                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <c1:C1ComboBox   Grid.Row="3" Grid.Column="1" x:Name="cboShift" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="NAME" SelectedValuePath="CODE" MaxHeight="23" />
                                </Border>
                                <Border Grid.Row="3" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="4"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtOperator" />
                                </Border>
                                <Border Grid.Row="3" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='LOSS량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="7"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtLossQuntity" />
                                </Border>



                                <!-- 4 Row -->
                                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="1"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtStartTime" />
                                </Border>
                                <Border Grid.Row="4" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="4"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtEndTime" />
                                </Border>
                                <Border Grid.Row="4" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='가동시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="7"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtRunTime" />
                                </Border>
                                <!-- 5 Row -->
                                <Border Grid.Row="5" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='Lot Comment', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="5" Grid.Column="1"   Grid.ColumnSpan="8" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtLotComment" />
                                </Border>
                                <!-- 6 Row -->
                                <Border Grid.Row="6" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                                </Border>
                                <Border Grid.Row="6" Grid.Column="1"   Grid.ColumnSpan="8" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtRemark" />
                                </Border>
                                <!-- 7 Row -->
                                <Border Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="9" Style="{StaticResource Content_InputForm_LabelBorderStyle}">

                                </Border>

                                <!--#endregion-->

                            </Grid>
                            <!--#endregion-->

                            <!--#region 불량정보/품질정보/특이사항-->
                            <Grid Grid.Row="1" Grid.Column="2" Grid.RowSpan="4">
                                <c1:C1TabControl x:Name="tabDetail" Grid.Row="1" Grid.Column="3" Grid.RowSpan="4">
                                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량정보'}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="5"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="5" />
                                                <RowDefinition Height="3*"/>
                                            </Grid.RowDefinitions>
                                            <Grid Grid.Row="1">
                                                <Border >
                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Height="Auto">
                                                        <Button     Grid.Row="1" Grid.Column="5" x:Name="btnCommit"       Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnCommit_Click"/>
                                                        <Border Width="8"/>
                                                    </StackPanel>
