<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.ProtoType04.PGM_GUI_012"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="믹서 공정진척">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <Grid x:Name="ButtonArea" Margin="0,-51,0,0">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="110" />
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" >
                                <c1:C1DropDownButton.Header>
                                    <TextBlock x:Name="selection" Text="{Binding ConverterParameter='more', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                                </c1:C1DropDownButton.Header>
                            </c1:C1DropDownButton>

                            <Button              Grid.Row="0" Grid.Column="2" x:Name="btnRunStart"    Content="{Binding ConverterParameter='작업시작',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunStartImportStyle}" />
                            <Button              Grid.Row="0" Grid.Column="3" x:Name="btnRunCancel"    Content="{Binding ConverterParameter='시작 취소',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunStartImportStyle}" />
                            <Button              Grid.Row="0" Grid.Column="4" x:Name="btnRunComplete" Content="{Binding ConverterParameter='장비완료',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" />
                            <Button              Grid.Row="0" Grid.Column="5" x:Name="btnConfirm" Content="{Binding ConverterParameter='실적확인',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" />
                        </Grid>
                    </Grid>

                    <Grid x:Name="SearchArea" Grid.Row="0">
                        <!--start search Area-->
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="6" />
                                <RowDefinition Height="45" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="6" />
                            </Grid.ColumnDefinitions>

                            <Border   Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="8" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                            <!--조회조건 타이틀-->
                            <TextBlock  Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='Line', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="1" Grid.Column="5" Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  Style="{StaticResource Content_InputForm_LabelStyle}"/>

                            <!--조회조건 컨트롤-->
                            <c1:C1ComboBox   Grid.Row="1" Grid.Column="2" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath=""/>
                            <c1:C1ComboBox   Grid.Row="1" Grid.Column="4" x:Name="cboEqpt" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath=""/>
                            <c1:C1ComboBox   Grid.Row="1" Grid.Column="6" x:Name="cboDate" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath=""/>

                            <!--조회 버튼-->
                            <Button    Grid.Row="1" Grid.Column="8" x:Name="btnSearch" Content="{Binding ConverterParameter=Search, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand"/>
                        </Grid>
                    </Grid>
                    <!--end search Area-->

                    <Grid x:Name="Content" Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="6"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="6"/>
                            <RowDefinition Height="1*"/>
                            <RowDefinition Height="6"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="6" />
                            <ColumnDefinition Width="3*" />
                            <ColumnDefinition Width="6" />
                        </Grid.ColumnDefinitions>

                        <!--start 작업지시-->
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.RowSpan="6" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='작업 지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>

                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan=" 4" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <Border  Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                            <Grid  Grid.Row="2" Grid.Column="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <!--title-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='계획수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='생산수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='잔량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <!--control-->
                                <!--<TextBox  Grid.Row="1" Grid.Column="0"   x:Name="txtPlanQuntity"         Style="{StaticResource SearchCondition_TextBoxStyle}"   Height="20" Width="50" HorizontalAlignment="Center"/>
                                    <TextBox  Grid.Row="1" Grid.Column="1"   x:Name="txtProduceQuntity"         Style="{StaticResource SearchCondition_TextBoxStyle}"   Height="20" Width="50"  HorizontalAlignment="Center"/>
                                     <TextBox  Grid.Row="1" Grid.Column="2"   x:Name="txtResidualQuantity"         Style="{StaticResource SearchCondition_TextBoxStyle}"   Height="20" Width="50"  HorizontalAlignment="Center"/>-->
                            </Grid>
                            <!--5row-->
                            <c1:C1DataGrid Grid.Row="4" Grid.Column="1" x:Name="dgWorkOrder" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">

                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn        Header = "순위"         Binding = "{Binding Binding01}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품"       Binding = "{Binding Binding02}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "계획수량"     Binding = "{Binding Binding03}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "생산수량"         Binding = "{Binding Binding04}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "Type"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "상태"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "M/O"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "W/O"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>

                            </c1:C1DataGrid>
                            <!--end 작업지시-->
                        </Grid>

                        <!--start Product Lot-->
                        <Grid Grid.Row="1" Grid.Column="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='Product Lot', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan=" 2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" >

                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn        Header = "Lot ID"         Binding = "{Binding Binding01}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "상태"       Binding = "{Binding Binding02}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "양품량"     Binding = "{Binding Binding03}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "불량"         Binding = "{Binding Binding04}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "작업지시"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "시작시간"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "종료시간"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>

                            </c1:C1DataGrid>

                            <!--end Product Lot-->
                        </Grid>

                        <!--start detail-->
                        <Grid Grid.Row="3" Grid.Column="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="70"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.RowSpan="6" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='실적 상세', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>

                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan=" 5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <Grid x:Name="LotList" Grid.Row="2" Grid.Column="1">
                                <c1:C1DataGrid Grid.Row="2" x:Name="dgDetail" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn        Header = "Lot ID"         Binding = "{Binding Binding01}"     HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "제품ID"       Binding = "{Binding Binding02}"     HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn        Header = "제품명"     Binding = "{Binding Binding03}"     HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--4row-->
                            <Grid x:Name="LotInfo" Grid.Row="4" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <!--title-->
                                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#ee5283" BorderThickness="0,2,0,0">
                                    <TextBlock  Text="{Binding ConverterParameter='버전', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#ee5283" BorderThickness="0,2,0,0">
                                    <TextBlock  Text="{Binding ConverterParameter='샘플링Loss', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#ee5283" BorderThickness="0,2,0,0">
                                    <!--<TextBlock  Text="{Binding ConverterParameter='버전', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>-->
                                </Border>
                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='생산량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='양품량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='Loss량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='Lot상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <!--<TextBlock  Text="{Binding ConverterParameter='버전', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>-->
                                </Border>
                                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>
                                <Border Grid.Row="5" Grid.Column="0"  Grid.RowSpan="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right"/>
                                </Border>

                                <!--contorol-->
                                <Border Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderBrush="#ee5283" BorderThickness="0,2,0,0">
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox x:Name="txtVersion"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                        <Button Grid.Column="1" x:Name="btnShift" Margin="0,5,3,5" VerticalAlignment="Center">
                                            <Image Source="/LGC.GMES.MES.CMM001;component/Images/icon_input_search.png" Width="18" Height="18" />
                                        </Button>
                                    </Grid>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"  BorderBrush="#ee5283" BorderThickness="0,2,0,0">
                                    <TextBox Grid.ColumnSpan="2" x:Name="txtSamplingLoss"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="0" Grid.Column="7" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" BorderBrush="#ee5283" BorderThickness="0,2,0,0"/>

                                <!--2row-->
                                <Border Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2" x:Name="txtProcQuntity"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="1" Grid.Column="5" Grid.ColumnSpan="2" x:Name="txt"        Style="{StaticResource SearchCondition_TextBoxStyle}"  MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="7" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="1" Grid.Column="8" Grid.ColumnSpan="2" x:Name="txtLossQuntity"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>

                                <!--3row-->
                                <Border Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" x:Name="txtWorkOrder"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="2" Grid.Column="4" Grid.ColumnSpan="2" x:Name="txtLotState"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="7" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                </Border>

                                <!--4row-->
                                <Border Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtWorkDate"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" x:Name="txtWorkGroup"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="7" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="3" Grid.Column="7" Grid.ColumnSpan="2" x:Name="txtWorkPerson"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>

                                <!--5row-->
                                <Border Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtStartTime"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="4" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="4" Grid.Column="5" Grid.ColumnSpan="2" x:Name="txtEndTime"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="7" Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  Grid.Row="4" Grid.Column="7" Grid.ColumnSpan="2" x:Name="txtWorkTime"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>

                                <!--6row-->
                                <Border Grid.Row="5" Grid.Column="1" Grid.RowSpan="2" Grid.ColumnSpan="5"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                </Border>
                                <Border Grid.Row="5" Grid.Column="6"  Grid.RowSpan="2" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                                <TextBox  Grid.Row="5" Grid.Column="1"  Grid.RowSpan="2"  Grid.ColumnSpan="5" x:Name="txtIssue"        Style="{StaticResource SearchCondition_TextBoxStyle}"/>

                            </Grid>
                            <!--end detail-->
                        </Grid>


                        <!--start tab-->
                        <Grid Grid.Row="3" Grid.Column="3">
                            <Border Grid.Row="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="6"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6"/>
