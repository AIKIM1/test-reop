<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.ProtoType04.PGM_GUI_205"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="절연코터 공정진척">
            <!--#region Main Grid -->
            <Grid x:Name="MainGrid">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <!-- Button -->
                    <RowDefinition Height="5" />
                    <!-- Margin -->
                    <RowDefinition Height="Auto" />
                    <!-- 조회조건 -->
                    <RowDefinition Height="*" />
                    <!-- Contents-->
                </Grid.RowDefinitions>

                <!--#region Button Area -->
                <Grid x:Name="ButtonArea" Grid.Row="0">
                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="110" />
                            <ColumnDefinition Width="34" />
                            <ColumnDefinition Width="8" />
                        </Grid.ColumnDefinitions>
                        <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" >
                            <c1:C1DropDownButton.Header>
                                <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" Margin="0,-3,0,0"/>
                            </c1:C1DropDownButton.Header>

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>
                                <!--추가기능버튼-->
                                <Button  Grid.Row="0" Grid.Column="0" x:Name="btnLot"           Content="{Binding ConverterParameter='Lot 정리',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                <Button  Grid.Row="1" Grid.Column="0" x:Name="btnBringOut"      Content="{Binding ConverterParameter='라벨발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                                <Button  Grid.Row="2" Grid.Column="0" x:Name="btnBringOutFree"  Content="{Binding ConverterParameter='이력카드',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" />
                            </Grid>
                        </c1:C1DropDownButton>
                        <Button              Grid.Row="0" Grid.Column="2" x:Name="btnStart"    Content="{Binding ConverterParameter='작업시작',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunStartImportStyle}" />
                        <Button              Grid.Row="0" Grid.Column="3" x:Name="btnCancel"   Content="{Binding ConverterParameter='작업시작취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCancelImportStyle}" />
                        <Button              Grid.Row="0" Grid.Column="4" x:Name="btnEnd"      Content="{Binding ConverterParameter='장비완료',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" />
                        <Button              Grid.Row="0" Grid.Column="5" x:Name="btnConfirm"  Content="{Binding ConverterParameter='실적확인',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" />
                    </Grid>
                </Grid>
                <!--#endregion-->

                <!--#region Search Area -->
                <Grid x:Name="SearchArea" Grid.Row="2">
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="45" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="96" />
                            <ColumnDefinition Width="10" />
                            <ColumnDefinition Width="10" />
                        </Grid.ColumnDefinitions>

                        <Border     Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="9" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                        <!--조회조건 타이틀-->
                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                            <!-- 필수 검색 조건은 아래와 같이 StackPanel을 이용하여 필수 마크를 붙여 줍니다 -->
                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                            <!-- 필수 검색 조건은 아래와 같이 StackPanel을 이용하여 필수 마크를 붙여 줍니다 -->
                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        </StackPanel>
                        <StackPanel Grid.Row="0" Grid.Column="4" Orientation="Horizontal" HorizontalAlignment="Right">
                            <!-- 필수 검색 조건은 아래와 같이 StackPanel을 이용하여 필수 마크를 붙여 줍니다 -->
                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                            <TextBlock  Text="{Binding ConverterParameter='Top/Back', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        </StackPanel>

                        <!--조회조건 컨트롤-->
                        <ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboLine" Style="{StaticResource SearchCondition_ComboBoxStyle}" DisplayMemberPath="PRODNAME" SelectedValuePath="PRODID"/>
                        <ComboBox   Grid.Row="0" Grid.Column="3" x:Name="cboEquipment" Margin="8,3" Style="{StaticResource SearchCondition_ComboBoxStyle}" DisplayMemberPath="PRODNAME" SelectedValuePath="PRODID"/>
                        <ComboBox   Grid.Row="0" Grid.Column="5" x:Name="cboTopBack" Margin="8,3" Style="{StaticResource SearchCondition_ComboBoxStyle}" DisplayMemberPath="PRODNAME" SelectedValuePath="PRODID"/>
                        <!--조회 버튼-->
                        <Button     Grid.Row="0" Grid.Column="6" x:Name="btnSearch" Content="{Binding ConverterParameter=Search, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand"/>
                    </Grid>
                </Grid>
                <!--#endregion-->

                <!--#region Contents Area -->
                <Grid x:Name="Content" Grid.Row="3">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="1*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <!--#region 작업지시/Product Lot -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1" />
                            <RowDefinition Height="2" />
                            <RowDefinition Height="20" />
                            <RowDefinition Height="80"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!--#region 작업지시 -->
                        <Border        Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                        <TextBlock     Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='작업 지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                        <Border        Grid.Row="3" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                        <Grid Grid.Row="3">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Border    Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>
                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='계획수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='생산수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            </StackPanel>
                            <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Center">
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='잔량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            </StackPanel>
                            <!-- -->
                            <Border  Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                            <TextBox Grid.Row="1" Grid.Column="0" Text="1,000" FontSize="14" FontWeight="Bold" TextAlignment="Right" />
                            <TextBox Grid.Row="1" Grid.Column="1" Text="500" FontSize="14" FontWeight="Bold" TextAlignment="Right" />
                            <TextBox Grid.Row="1" Grid.Column="2" Text="500" FontSize="14" FontWeight="Bold" TextAlignment="Right" />
                        </Grid>
                        <c1:C1DataGrid Grid.Row="4" Grid.Column="0" x:Name="dgWorkOrder" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">

                            <c1:C1DataGrid.Columns>
                                <c1:DataGridCheckBoxColumn    Header = "S"        Binding="{Binding Binding01}"       HorizontalAlignment="Center"/>
                                <c1:DataGridTextColumn        Header = "순위"     Binding = "{Binding Binding01}"     HorizontalAlignment="Center" Width="40" />
                                <c1:DataGridTextColumn        Header = "제품ID"   Binding = "{Binding Binding02}"     HorizontalAlignment="Center" Width="130" />
                                <c1:DataGridNumericColumn     Header = "계획수량" Binding = "{Binding Binding03}"     HorizontalAlignment="Center" Width="80"/>
                                <c1:DataGridNumericColumn     Header = "생산수량" Binding = "{Binding Binding04}"     HorizontalAlignment="Center" Width="80"/>
                                <c1:DataGridTextColumn        Header = "Demand"   Binding = "{Binding Binding05}"     HorizontalAlignment="Center" Width="80"/>
                                <c1:DataGridTextColumn        Header = "Status"   Binding = "{Binding Binding05}"     HorizontalAlignment="Center" Width="80"/>
                                <c1:DataGridTextColumn        Header = "M/O"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" Width="80"/>
                                <c1:DataGridTextColumn        Header = "W/O"      Binding = "{Binding Binding05}"     HorizontalAlignment="Center" Width="80"/>
                            </c1:C1DataGrid.Columns>

                        </c1:C1DataGrid>
                        <!--#endregion-->

                        <!--#region Product Lot -->
                        <Border        Grid.Row="1" Grid.Column="2" Grid.RowSpan="2" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                        <TextBlock     Grid.Row="2" Grid.Column="2" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='Product Lot', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                        <Grid Grid.Row="3" Grid.Column="2" Grid.RowSpan="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <c1:C1DataGrid x:Name="dbMotherLot" Grid.Column="0" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridCheckBoxColumn Header="S" Width="20" />
                                    <c1:DataGridTextColumn Header="투입Lot" Width="2*" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>

                            <c1:C1DataGrid Grid.Column="2" x:Name="dgProductLot" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridCheckBoxColumn    Header="S" Binding="{Binding Binding01}"       HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn        Header = "버전"       Binding = "{Binding Binding01}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "LOT ID"     Binding = "{Binding Binding02}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "상태"       Binding = "{Binding Binding04}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "조건조정량" Binding = "{Binding Binding05}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품명"   Binding = "{Binding Binding06}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "작업지시"       Binding = "{Binding Binding07}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "시작시간"    Binding = "{Binding Binding08}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "종료시간"   Binding = "{Binding Binding09}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "Final Cut"   Binding = "{Binding Binding10}"   HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>

                        </Grid>

                        <!--#endregion-->

                    </Grid>
                    <!--#endregion-->

                    <!--#region 실적상세 -->
                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1" />
                            <!-- Margin -->
                            <RowDefinition Height="20" />
                            <!-- Lot 정보-->
                            <RowDefinition Height="80"/>
                            <!-- Lot 상세-->
                            <RowDefinition Height="3" />
                            <!-- Margin -->
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*"/>
                            <!-- Lot 상세 -->
                            <ColumnDefinition Width="8" />
                            <!-- Margin -->
                            <ColumnDefinition Width="1*"/>
                            <!-- 불량/품질/자재-->
                        </Grid.ColumnDefinitions>
                        <Border        Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                        <TextBlock     Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}"><Run Text="{Binding ConverterParameter='실적 확인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                        <!--#region Lot 상세-->
                        <c1:C1DataGrid Grid.Row="2" Grid.Column="0" x:Name="dgLotInfo" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTextColumn        Header = "Lot ID"   Binding = "{Binding Binding01}"     HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn        Header = "제품ID"   Binding = "{Binding Binding02}"     HorizontalAlignment="Center" />
                                <c1:DataGridTextColumn        Header = "제품명"   Binding = "{Binding Binding03}"     HorizontalAlignment="Center" />
                            </c1:C1DataGrid.Columns>
                        </c1:C1DataGrid>
                        <!--#endregion-->

                        <!--#region 실적상세 -->
                        <Grid Grid.Row="4" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="0.5*"/>
                                <ColumnDefinition Width="1.5*"/>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="0.5*"/>
                            </Grid.ColumnDefinitions>

                            <!--#region  실적 상세 항목 -->
                            <!-- 0 Row -->
                            <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='버전', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="1"  Grid.ColumnSpan="2"  Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox x:Name="txtVersion" />
                            </Border>

                            <Border Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='변환율', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="4" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtChangeRate" />
                            </Border>
                            <Border Grid.Row="0" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='생산량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="0" Grid.Column="7"  Grid.ColumnSpan="2"    Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtInputqty" />
                            </Border>
                            <!-- 1Row -->
                            <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='작업지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="1"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtWorkorder" />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="4"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtLotStatus" />
                            </Border>
                            <Border Grid.Row="1" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='양품량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="1" Grid.Column="7"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtGoodqty" />
                            </Border>
                            <!-- 2 Row -->
                            <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="1"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtWorkdate" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="4"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtShift" />
                            </Border>
                            <Border Grid.Row="2" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='Loss량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="2" Grid.Column="7"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtLossqty" />
                            </Border>
                            <!-- 3 Row -->
                            <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="3" Grid.Column="1"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtOperator" />
                            </Border>
                            <Border Grid.Row="3" Grid.Column="3" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                
                            </Border>                            
                            <!-- 4 Row -->
                            <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="1"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtStartTime" />
                            </Border>
                            <Border Grid.Row="4" Grid.Column="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="4"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtEndTime" />
                            </Border>
                            <Border Grid.Row="4" Grid.Column="6" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='가동시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="4" Grid.Column="7"   Grid.ColumnSpan="2"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtInOut" />
                            </Border>
                            <!-- 5 Row -->
                            <Border Grid.Row="5" Grid.Column="0" Grid.RowSpan="3" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                <TextBlock Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" FontSize="12"/>
                            </Border>
                            <Border Grid.Row="5" Grid.Column="1"   Grid.ColumnSpan="8" Grid.RowSpan="3"  Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                <TextBox  x:Name="txtRemark" Height="Auto"/>
                            </Border>
                            <!--#endregion-->

                        </Grid>
                        <!--#endregion-->

                        <!--#region 불량정보/품질정보/투입자재/슬러리-->
                        <Grid Grid.Row="1" Grid.Column="2" Grid.RowSpan="4">
                            <c1:C1TabControl x:Name="tabDetail" Grid.Row="1" Grid.Column="3" Grid.RowSpan="4">
