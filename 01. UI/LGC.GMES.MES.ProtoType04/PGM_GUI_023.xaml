<UserControl x:Class="LGC.GMES.MES.ProtoType04.PGM_GUI_023"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="노칭 공정진척">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="1*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="1*" />
                    </Grid.RowDefinitions>

                    <Grid x:Name="ButtonArea" Margin="0,-51,0,0">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" >
                                <c1:C1DropDownButton.Header>
                                    <TextBlock x:Name="selection" Text="{Binding ConverterParameter='more', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                                </c1:C1DropDownButton.Header>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <!--추가기능버튼-->
                                    <Button  Grid.Row="0" Grid.Column="0" x:Name="btnRemarkHist"        Content="{Binding ConverterParameter='특이사항이력',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnRemarkHist_Click"  />
                                    <Button  Grid.Row="1" Grid.Column="0" x:Name="btnFCut"              Content="{Binding ConverterParameter='F/Cut처리',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnFCut_Click" />
                                    <Button  Grid.Row="2" Grid.Column="0" x:Name="btnWorkDiary"         Content="{Binding ConverterParameter='작업일지등록',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnWorkDiary_Click"  />
                                    <Button  Grid.Row="3" Grid.Column="0" x:Name="btnEqptIssue"         Content="{Binding ConverterParameter='설비특이사항',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnEqptIssue_Click"  />
                                    <Button  Grid.Row="4" Grid.Column="0" x:Name="btnQuality"           Content="{Binding ConverterParameter='품질정보관리',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnQuality_Click" />
                                    <Button  Grid.Row="5" Grid.Column="0" x:Name="btnChangeMold"        Content="{Binding ConverterParameter='금형교체',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnChangeMold_Click" />
                                    <Button  Grid.Row="6" Grid.Column="0" x:Name="btnEmptyMold"         Content="{Binding ConverterParameter='금형부족',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnEmptyMold_Click" />
                                    <Button  Grid.Row="7" Grid.Column="0" x:Name="btnChangePancake"     Content="{Binding ConverterParameter='교체처리',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnChangePancake_Click" />
                                    <Button  Grid.Row="8" Grid.Column="0" x:Name="btnPrint"             Content="{Binding ConverterParameter='발행',          Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnPrint_Click" />

                                </Grid>
                            </c1:C1DropDownButton>

                            <Button Grid.Row="0" Grid.Column="2" x:Name="btnRunStart"    Content="{Binding ConverterParameter='작업시작',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunStartImportStyle}" Click="btnRunStart_Click" />
                            <Button Grid.Row="0" Grid.Column="3" x:Name="btnRunCancel"    Content="{Binding ConverterParameter='시작 취소',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCancelImportStyle}" Click="btnRunCancel_Click" />
                            <Button Grid.Row="0" Grid.Column="4" x:Name="btnRunComplete" Content="{Binding ConverterParameter='장비완료',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" Click="btnRunComplete_Click" />
                            <Button Grid.Row="0" Grid.Column="5" x:Name="btnConfirm" Content="{Binding ConverterParameter='실적확인',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" Click="btnConfirm_Click" />
                        </Grid>
                    </Grid>

                    <Grid x:Name="SearchArea" Grid.Row="0">
                        <!--start search Area-->
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="10" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Border   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                            <!--조회조건 타이틀-->
                            <TextBlock  Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='Line', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='극성', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  Style="{StaticResource Content_InputForm_LabelStyle}"/>

                            <!--조회조건 컨트롤-->
                            <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="NAME" SelectedValuePath="CODE" SelectedIndexChanged="cboLine_SelectedIndexChanged"/>
                            <c1:C1ComboBox   Grid.Row="0" Grid.Column="3" x:Name="cboEqpt" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="NAME" SelectedValuePath="CODE" SelectedIndexChanged="cboEqpt_SelectedIndexChanged"/>
                            <c1:C1ComboBox   Grid.Row="0" Grid.Column="5" x:Name="cboElecType" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="NAME" SelectedValuePath="CODE" SelectedIndexChanged="cboElecType_SelectedIndexChanged" />

                            <Border Grid.Row="0" Grid.Column="7" BorderBrush="Black" BorderThickness="1,1,1,1">
                                <StackPanel Orientation="Horizontal" >
                                    <CheckBox x:Name="chkWait"         Content="{Binding ConverterParameter='대기',       Converter={StaticResource GlobalObjectDicConverter}}" Margin="5,5" Style="{StaticResource SearchCondition_CheckBoxStyle}" Checked="chkWait_Checked"  />
                                    <CheckBox x:Name="chkRun"          Content="{Binding ConverterParameter='작업중',     Converter={StaticResource GlobalObjectDicConverter}}" Margin="5,5" Style="{StaticResource SearchCondition_CheckBoxStyle}" Checked="chkRun_Checked"  />
                                    <CheckBox x:Name="chkEqpEnd"       Content="{Binding ConverterParameter='작업완료',   Converter={StaticResource GlobalObjectDicConverter}}" Margin="5,5" Style="{StaticResource SearchCondition_CheckBoxStyle}" Checked="chkEqpEnd_Checked"  />
                                </StackPanel>
                            </Border>

                            <!--조회 버튼-->
                            <Button    Grid.Row="0" Grid.Column="9" x:Name="btnSearch" Content="{Binding ConverterParameter=Search, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" HorizontalAlignment="Right" Click="btnSearch_Click"/>
                        </Grid>
                    </Grid>
                    <!--end search Area-->

                    <Grid x:Name="ContentTop" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--start 작업지시-->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="61*"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="243*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.RowSpan="6" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='작업 지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>

                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan="6" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <Border  Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                            <Grid  Grid.Row="2" Grid.Column="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                <!--title-->
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='계획수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='생산수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='잔량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <!--control-->
                                <TextBlock Grid.Row="1" Grid.Column="0" x:Name="txtBlockPlanQty" Text="0" Style="{StaticResource Content_InputForm_LabelStyle}" Foreground="#ffe63c6b" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtBlockOutQty" Text="0" Style="{StaticResource Content_InputForm_LabelStyle}" Foreground="#ffe63c6b" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="txtBlockRemainQty" Text="0" Style="{StaticResource Content_InputForm_LabelStyle}" Foreground="#ffe63c6b" HorizontalAlignment="Center"/>
                            </Grid>

                            <!--4row-->

                            <!--5row-->
                            <c1:C1DataGrid Grid.Row="4" Grid.Column="1" x:Name="dgWorkOrder" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow" MouseDoubleClick="dgWorkOrder_MouseDoubleClick">

                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn        Header = "순위"       Binding = "{Binding RANKING}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품"       Binding = "{Binding PRODID}"     HorizontalAlignment="Center" />
                                    <c1:DataGridNumericColumn     Header = "계획수량"   Binding = "{Binding PLANQTY}"     HorizontalAlignment="Center" Format="#,##0" />
                                    <c1:DataGridNumericColumn     Header = "생산수량"   Binding = "{Binding OUTQTY}"     HorizontalAlignment="Center" Format="#,##0" />
                                    <c1:DataGridTextColumn        Header = "Type"       Binding = "{Binding WDTYPE}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "상태"       Binding = "{Binding WDSTATUS}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "M/O"        Binding = "{Binding MOVEORDER}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "W/O"        Binding = "{Binding WORKORDER}"     HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>

                            </c1:C1DataGrid>
                            <!--end 작업지시-->
                        </Grid>

                        <!--start 작업대상 -->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='작업 대상', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan="3" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->

                            <!--4row-->
                            <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" >

                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn Name="CHK"  Header="선택">
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="chkProdList_Click" />
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn       Header = "LOT ID"       Binding = "{Binding LOTID}"             HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "대LOT"        Binding = "{Binding LARGELOT}"           HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "투입LOT"      Binding = "{Binding INPUTLOT}"              HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn       Header = "제품ID"       Binding = "{Binding PRODID}"        HorizontalAlignment="Center"/>
                                    <!--<c1:DataGridTextColumn       Header = "CUT"          Binding = "{Binding CHILDGRPSEQ}"              HorizontalAlignment="Center" />-->
                                    <!--<c1:DataGridTextColumn       Header = "모델명"       Binding = "{Binding MODELNAME}"           HorizontalAlignment="Center" />-->
                                    <!--<c1:DataGridTextColumn       Header = "상태"                                               HorizontalAlignment="Right" />-->
                                    <c1:DataGridTextColumn       Header = "상태"         Binding = "{Binding STATUS}"            HorizontalAlignment="Right" />
                                    <c1:DataGridNumericColumn    Header = "재공량"       Binding = "{Binding WIPQTY}"        HorizontalAlignment="Center" Format="#,##0"/>
                                    <c1:DataGridNumericColumn    Header = "장비수량"     Binding = "{Binding EQPQTY}"        HorizontalAlignment="Center" Format="#,##0"/>
                                    <c1:DataGridNumericColumn    Header = "길이"         Binding = "{Binding LENGTH}"        HorizontalAlignment="Center" Format="#,##0"/>
                                    <c1:DataGridTextColumn       Header = "F/CUT"        Binding = "{Binding FCUTYN}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn       Header = "시작시간"     Binding = "{Binding STARTTIME}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn       Header = "장비완료시간" Binding = "{Binding EQPENDTIME}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn       Header = "작업지시"     Binding = "{Binding WORKORDER}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn       Header = "순번"         Binding = "{Binding OPERCODE}"        HorizontalAlignment="Center"/>

                                    <c1:DataGridTextColumn       Header = "제품명"       Binding = "{Binding PRODNAME}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn       Header = "버젼"         Binding = "{Binding VERSION}"        HorizontalAlignment="Center"/>
                                    <c1:DataGridTextColumn       Header = "변환율"       Binding = "{Binding CONV}"        HorizontalAlignment="Center"/>
                                </c1:C1DataGrid.Columns>

                            </c1:C1DataGrid>

                            <!--end Product Lot-->
                        </Grid>

                        <!--end content-->
                    </Grid>

                    <Grid x:Name="ContentButtom" Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <!--start 실적확인 -->
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="1*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.RowSpan="6" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='실적 확인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>

                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan=" 5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <Grid x:Name="LotList" Grid.Row="2" Grid.Column="1">
                                <c1:C1DataGrid Grid.Row="2" x:Name="dgDetail" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleCell">

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "LOT ID"       Binding = "{Binding LOTID}"             HorizontalAlignment="Center" />
                                        <c1:DataGridNumericColumn   Header = "생산량"       Binding = "{Binding INPUTQTY}"           HorizontalAlignment="Right" Format="#,##0"/>
                                        <c1:DataGridNumericColumn   Header = "양품량"       Binding = "{Binding GOODQTY}"              HorizontalAlignment="Right" Format="#,##0"/>
                                        <c1:DataGridNumericColumn   Header = "Loss량"       Binding = "{Binding LOSSQTY}"           HorizontalAlignment="Right" Format="#,##0"/>
                                        <!--<c1:DataGridTextColumn      Header = "모델ID"       Binding = "{Binding MODELID}"            HorizontalAlignment="Left"/>-->
                                        <!--<c1:DataGridTextColumn      Header = "모델명"       Binding = "{Binding MODELNAME}"            HorizontalAlignment="Left"/>-->
                                        <c1:DataGridTextColumn      Header = "제품ID"       Binding = "{Binding PRODID}"            HorizontalAlignment="Left"/>
                                        <c1:DataGridTextColumn      Header = "제품명"       Binding = "{Binding PRODNAME}"            HorizontalAlignment="Left"/>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--4row-->
                            <Grid x:Name="LotInfo" Grid.Row="4" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="2"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="2*"/>
                                </Grid.ColumnDefinitions>

                                <!--title-->
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#ee5283" >

                                </Border>
                                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}" >
                                    <TextBlock  Text="{Binding ConverterParameter='작업지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}" >
                                    <TextBlock  Text="{Binding ConverterParameter='LOT 상태', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>

                                <Border Grid.Row="2" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='작업일자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='근무조', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>

                                <Border Grid.Row="3" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='근무자', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>

                                <Border Grid.Row="4" Grid.Column="0" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='종료시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="2" Style="{StaticResource Content_InputForm_LabelBorderStyle}">
                                    <TextBlock  Text="{Binding ConverterParameter='가동시간', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                                </Border>


                                <!--contorol-->
                                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="2*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="txtWorkorder"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                        <TextBox Grid.Column="1" x:Name="txtWorkseq"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                    </Grid>
                                </Border>
                                <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox x:Name="txtLotStatus"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>


                                <!--2row-->
                                <Border Grid.Row="2" Grid.Column="1"  Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtWorkdate"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="2" Grid.Column="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="txtShift"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                        <Button Grid.Column="1" x:Name="btnShift" VerticalAlignment="Center" Click="btnShift_Click">
                                            <Image Source="/LGC.GMES.MES.CMM001;component/Images/icon_input_search.png" Width="18" Height="18" />
                                        </Button>
                                    </Grid>
                                </Border>


                                <!--3row-->
                                <Border Grid.Row="3" Grid.Column="1"   Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtStartTime"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="3" Grid.Column="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="txtWorker"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                        <Button Grid.Column="1" x:Name="btnWorker" VerticalAlignment="Center" Click="btnWorker_Click">
                                            <Image Source="/LGC.GMES.MES.CMM001;component/Images/icon_input_search.png" Width="18" Height="18" />
                                        </Button>
                                    </Grid>
                                </Border>

                                <!--4row-->
                                <Border Grid.Row="4" Grid.Column="1"  Style="{StaticResource Content_InputForm_ContentBorderStyle}">
                                    <TextBox  x:Name="txtEndTime"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                </Border>
                                <Border Grid.Row="4" Grid.Column="3" Style="{StaticResource Content_InputForm_ContentBorderStyle}" >
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" x:Name="txtWorkMinute"        Style="{StaticResource SearchCondition_TextBoxStyle}" MaxHeight="23"/>
                                        <TextBlock Grid.Column="1"  Text="{Binding ConverterParameter='분', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                                    </Grid>
                                </Border>
                            </Grid>
                            <!--end detail-->
                        </Grid>

                        <!--start tab-->
                        <Grid Grid.Column="2">
                            <Border Grid.Row="0" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="6"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="6"/>
                                </Grid.ColumnDefinitions>
                                <c1:C1TabControl  Grid.Row="1" Grid.Column="1">
                                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량정보'}" >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="1*"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="10"/>
                                            </Grid.ColumnDefinitions>

                                            <Button     Grid.Row="1" Grid.Column="4" x:Name="btnSaveFaulty"       Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSaveFaulty_Click"/>

                                            <!--Red Line-->

                                            <c1:C1DataGrid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="6" x:Name="dgFaulty" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange" >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn        Header = "불량코드"  Binding = "{Binding DEFECTCODE}"   HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn        Header = "불량요인"  Binding = "{Binding DEFECTNAME}"   HorizontalAlignment="Center" />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>

                                    </c1:C1TabItem>
                                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='특이사항'}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="10"/>
                                                <RowDefinition Height="1*"/>
                                                <RowDefinition Height="10"/>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="10" />
                                                <ColumnDefinition Width="1*" />
                                                <ColumnDefinition Width="2*" />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition Width="10" />
                                            </Grid.ColumnDefinitions>

                                            <c1:C1ComboBox   Grid.Row="1" Grid.Column="1" x:Name="cboRemarkLot" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="NAME" SelectedValuePath="CODE" SelectedIndexChanged="cboRemarkLot_SelectedIndexChanged"/>
                                            <Button     Grid.Row="1" Grid.Column="3" x:Name="btnSaveRemark"       Content="{Binding ConverterParameter=저장,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSaveRemark_Click"/>
                                            <RichTextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" x:Name="rtxRemark"  />

                                        </Grid>
                                    </c1:C1TabItem>
                                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='설비불량정보'}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="6"/>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>

                                            <!--Red Line-->

                                            <c1:C1DataGrid Grid.Row="1" x:Name="dgEqpFaulty" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" >

                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn        Header = "설비불량코드"         Binding = "{Binding EQPDEFECTCODE}"        HorizontalAlignment="Left" Visibility="Hidden" />
                                                    <c1:DataGridTextColumn        Header = "불량요인"             Binding = "{Binding EQPDEFECTNAME}"        HorizontalAlignment="Left" />
                                                    <c1:DataGridNumericColumn     Header = "불량수량"             Binding = "{Binding EQPDEFECTQTY}"         HorizontalAlignment="Right" Format="###,###,###,###" />
                                                    <c1:DataGridTextColumn        Header = "생성시간"             Binding = "{Binding EQPDEFECTTIME}"        HorizontalAlignment="Center" />
                                                </c1:C1DataGrid.Columns>

                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                </c1:C1TabControl>
                            </Grid>


                        </Grid>

                        <!--end content-->
                    </Grid>
                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>
    </Grid>
</UserControl>
