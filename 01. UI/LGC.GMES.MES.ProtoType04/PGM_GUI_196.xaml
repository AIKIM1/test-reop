<UserControl x:Class="LGC.GMES.MES.ProtoType04.PGM_GUI_196"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="공정진척(조립)_Stacking 공정진척">
            <ctrlLib:LGCLayout.Content>
                <Grid>
                    <Grid.Resources>
                        <DataTemplate x:Key="ResultTemplate">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Center"></TextBlock>
                            </Grid>
                        </DataTemplate>
                    </Grid.Resources>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="3*" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="5*" />

                    </Grid.RowDefinitions>

                    <Grid x:Name="ButtonArea" Margin="0,-51,0,0">
                        <Grid VerticalAlignment="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="34" />
                                <ColumnDefinition Width="8" />
                            </Grid.ColumnDefinitions>
                            <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" >
                                <c1:C1DropDownButton.Header>
                                    <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  TextAlignment="Center" VerticalAlignment="Center" />
                                </c1:C1DropDownButton.Header>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="Auto" />
                                    </Grid.RowDefinitions>
                                    <!--추가기능버튼-->
                                    <Button  Grid.Row="0" Grid.Column="0" x:Name="btnWaitLot"       Content="{Binding ConverterParameter='대기LOT조회',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnWaitLot_Click"  />
                                    <Button  Grid.Row="1" Grid.Column="0" x:Name="btnWorkDiary"     Content="{Binding ConverterParameter='작업일지등록',      Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnWorkDiary_Click" />
                                    <Button  Grid.Row="2" Grid.Column="0" x:Name="btnEqpRemark"     Content="{Binding ConverterParameter='설비특이사항',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnEqpRemark_Click"  />
                                    <Button  Grid.Row="3" Grid.Column="0" x:Name="btnQuality"       Content="{Binding ConverterParameter='품질정보관리',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonNoMinWidthStyle}" Click="btnQuality_Click"  />
                                </Grid>
                            </c1:C1DropDownButton>

                            <Button              Grid.Row="0" Grid.Column="2" x:Name="btnRunStart"    Content="{Binding ConverterParameter='작업시작',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunStartImportStyle}" VerticalAlignment="Top" Click="btnRunStart_Click" />
                            <Button              Grid.Row="0" Grid.Column="3" x:Name="btnRunComplete" Content="{Binding ConverterParameter='장비완료',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" Click="btnRunComplete_Click" />
                            <Button              Grid.Row="0" Grid.Column="4" x:Name="btnConfirm" Content="{Binding ConverterParameter='실적확인',       Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource ButtonRunCompleteImportStyle}" Click="btnConfirm_Click"  />
                        </Grid>
                    </Grid>

                    <Grid x:Name="SearchArea" Grid.Row="0">
                        <!--start search Area-->
                        <Grid >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="45" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="200" />
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="10"/>
                            </Grid.ColumnDefinitions>

                            <Border   Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="9" Style="{StaticResource Content_InputForm_LabelBorderStyle}"/>

                            <!--조회조건 타이틀-->
                            <TextBlock  Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <TextBlock  Grid.Row="0" Grid.Column="4" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>

                            <!--조회조건 컨트롤-->
                            <c1:C1ComboBox  Grid.Row="0" Grid.Column="2" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="True" DisplayMemberPath="NAME" SelectedValuePath="CODE"/>
                            <c1:C1ComboBox  Grid.Row="0" Grid.Column="5" x:Name="cboEqpt" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="True" DisplayMemberPath="NAME" SelectedValuePath="CODE"/>


                            <!--조회 버튼-->
                            <Button    Grid.Row="1" Grid.Column="7" x:Name="btnSearch" Content="{Binding ConverterParameter=Search, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click"/>
                        </Grid>
                    </Grid>
                    <!--end search Area-->

                    <Grid x:Name="Content" Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="3*" />
                        </Grid.ColumnDefinitions>

                        <!--start 작업지시-->
                        <Grid x:Name="grdWorkOrder" Grid.Column="0">

                            <!--<Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="0.5*"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition Height="2"/>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            -->
                            <!-- 1row-->
                            <!--
                            <Border Grid.Row="0" Grid.RowSpan="6" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='작업 지시', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>

                            -->
                            <!--2row-->
                            <!--
                            <Border Grid.Row="1"  Grid.RowSpan="6" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            -->
                            <!--3row-->
                            <!--
                            <Border  Grid.Row="2" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" />
                            <Grid  Grid.Row="2" Grid.Column="1" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                    <ColumnDefinition Width="2*" />
                                </Grid.ColumnDefinitions>

                                -->
                            <!--title-->
                            <!--
                                <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='계획수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='생산수량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="0" Grid.Column="3" Text="{Binding ConverterParameter='잔량', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Center"/>

                                <TextBlock Grid.Row="1" Grid.Column="0" x:Name="txtPlanQty" Text="20,000" Style="{StaticResource Content_InputForm_LabelStyle}" Foreground="#ffe63c6b" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="1" x:Name="txtOutQty" Text="10,000" Style="{StaticResource Content_InputForm_LabelStyle}" Foreground="#ffe63c6b" HorizontalAlignment="Center"/>
                                <TextBlock Grid.Row="1" Grid.Column="3" x:Name="txtRemainQty" Text="10,000" Style="{StaticResource Content_InputForm_LabelStyle}" Foreground="#ffe63c6b" HorizontalAlignment="Center"/>

                            </Grid>

                            -->
                            <!--Red Line-->
                            <!--
                            <Border Grid.Row="4" Grid.Column="1" Style="{StaticResource Content_InputForm_LabelBorderStyle}" BorderBrush="#ee5283" />

                            -->
                            <!--5row-->
                            <!--
                            <c1:C1DataGrid Grid.Row="5" Grid.Column="1" x:Name="dgWorkOrder" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="MultiRange">

                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn        Header = "순위"         Binding = "{Binding Binding01}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품ID"       Binding = "{Binding Binding02}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "계획수량"     Binding = "{Binding Binding03}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "생산수량"     Binding = "{Binding Binding04}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "계획Type"     Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "STATUS"       Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "M/O"          Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "W/O"          Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>

                            </c1:C1DataGrid>
                            -->
                            <!--end 작업지시-->
                        </Grid>

                        <!--start 작업대상-->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="6"/>
                                <RowDefinition/>
                                <RowDefinition Height="6"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="6"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="6"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>
                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan="4" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleCell" >                                
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn Name="CHK" Width="35" >
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Checked="chkProductLot_Checked" />
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn        Header = "Lot ID"           Binding = "{Binding LOTID}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품ID"           Binding = "{Binding PRODID}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "상태"             Binding = "{Binding WIPSTAT}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "수량"             Binding = "{Binding WIPQTY}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "불량"             Binding = "{Binding FAULTYQTY}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "장비완료수량"     Binding = "{Binding EQPQTY}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "시작시간"         Binding = "{Binding STARTTIME}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "장비완료시간"     Binding = "{Binding EQPENDTIME}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "작업지시"         Binding = "{Binding WORKORDER}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "순번"             Binding = "{Binding OPERCODE}"     HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품명"           Binding = "{Binding PRODNAME}"     HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>
                            </c1:C1DataGrid>
                            <!--end Product Lot-->
                        </Grid>
                    </Grid>

                    <!--start 투입&생산-->
                    <Grid x:Name="Detail" Grid.Row="4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="5*" />
                            <ColumnDefinition Width="5" />
                            <ColumnDefinition Width="5*" />
                        </Grid.ColumnDefinitions>
                        <GridSplitter Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Stretch" ShowsPreview="True" Width="5"/>
                        <Grid Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="1*"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>

                            <!-- 1row-->
                            <Border Grid.Row="0" Grid.RowSpan="4" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <TextBlock     Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='투입', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>

                            <!--2row-->
                            <Border Grid.Row="1"  Grid.RowSpan=" 3" Grid.ColumnSpan="3" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                            <!--3row-->
                            <c1:C1TabControl  Grid.Row="2" Grid.Column="1">
                                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='투입 매거진'}" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding ConverterParameter='Half Type', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />

                                        <StackPanel Grid.Row="1" Grid.Column="2" Orientation="Horizontal">
                                            <TextBox Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtHalfCnt" IsReadOnly="True"  Width="40" Margin="0,0,0,0" Background="#FFFFFA87"/>
                                            <TextBox Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtHalfTotCnt" IsReadOnly="True" Width="40" Margin="3,0,0,0" Background="#FFFFFA87"/>
                                        </StackPanel>

                                        <TextBlock Grid.Row="1" Grid.Column="4" Text="{Binding ConverterParameter='Mono Type', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />

                                        <StackPanel Grid.Row="1" Grid.Column="6" Orientation="Horizontal">
                                            <TextBox Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtMonoCnt" IsReadOnly="True" Width="40" Margin="0,0,0,0" Background="#FFFFFA87"/>
                                            <TextBox Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtMonoTotCnt" IsReadOnly="True" Width="40" Margin="3,0,0,0" Background="#FFFFFA87"/>
                                        </StackPanel>

                                        <Button     Grid.Row="1" Grid.Column="8" x:Name="btnInCancel"       Content="{Binding ConverterParameter=투입취소,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInCancel_Click"/>
                                        <Button     Grid.Row="1" Grid.Column="10" x:Name="btnInReplace"       Content="{Binding ConverterParameter=교체처리,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInReplace_Click" />
                                        <Button     Grid.Row="1" Grid.Column="12" x:Name="btnInComplete"       Content="{Binding ConverterParameter=투입완료,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInComplete_Click"/>

                                        <c1:C1DataGrid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="13" x:Name="dgInMagazine" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" >

                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn Name="CHK" Width="35">
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn        Header = "매거진"       Binding = "{Binding MAGAZINEID}"   HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "카세트ID"     Binding = "{Binding CASSETTEID}"   HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "위치"         Binding = "{Binding POSITION}"     HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "제품ID"       Binding = "{Binding PRODID}"       HorizontalAlignment="Center" />
                                                <c1:DataGridNumericColumn     Header = "투입량"       Binding = "{Binding INQTY}"        HorizontalAlignment="Center" Format="###,###,###.00" />
                                                <c1:DataGridTextColumn        Header = "전극"         Binding = "{Binding ELECTYPE}"     HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "투입시간"     Binding = "{Binding INPUTDTTM}"    HorizontalAlignment="Center" />
                                            </c1:C1DataGrid.Columns>

                                        </c1:C1DataGrid>
                                    </Grid>

                                </c1:C1TabItem>
                                <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='대기 매거진'}">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="5"/>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="5"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="1" Grid.Column="0" BorderBrush="Black" BorderThickness="1,1,1,1">
                                            <StackPanel Orientation="Horizontal" >
                                                <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='Half Type', Converter={StaticResource GlobalObjectDicConverter}}" Name="rdoHalf" Margin="10,0,5,0" Checked="rdoWaitMaz_Checked"/>
                                                <RadioButton Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='Mono Type',   Converter={StaticResource GlobalObjectDicConverter}}" Name="rdoMono" Margin="10,0,5,0" Checked="rdoWaitMaz_Checked"/>
                                            </StackPanel>
                                        </Border>

                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='투입위치', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                        <TextBox Grid.Row="1" Grid.Column="4" Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtInPosition" Width="30"/>


                                        <TextBlock Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='투입카세트', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                        <TextBox Grid.Row="1" Grid.Column="8" Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtInCastID" CharacterCasing="Upper" Width="90"/>

                                        <Button     Grid.Row="1" Grid.Column="10" x:Name="btnInput"       Content="{Binding ConverterParameter='투입',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInput_Click"/>

                                        <c1:C1DataGrid  Grid.Row="3" Grid.ColumnSpan="11"  x:Name="dgWaitMagazine" IsReadOnly="True" HeadersVisibility="Column"  SelectionMode="MultiRange" FrozenBottomRowsCount="1" >

                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn Name="CHK" Width="35"  >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn        Header = "매거진"          Binding = "{Binding MAGAZINEID}"   HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "Lami LOT"        Binding = "{Binding LAMILOT}"   HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "카세트ID"        Binding = "{Binding CASSETTEID}"   HorizontalAlignment="Center" />
                                                <c1:DataGridNumericColumn     Header = "수량"            Binding = "{Binding QTY}"   HorizontalAlignment="Center" >
                                                    <c1:DataGridAggregate.AggregateFunctions>
                                                        <c1:DataGridAggregatesCollection>
                                                            <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                        </c1:DataGridAggregatesCollection>
                                                    </c1:DataGridAggregate.AggregateFunctions>
                                                </c1:DataGridNumericColumn>
                                                <c1:DataGridTextColumn        Header = "생성일자"        Binding = "{Binding INSDTTM}"   HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "제품ID"          Binding = "{Binding PRODID}"   HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn        Header = "제품명"          Binding = "{Binding PRODNAME}"   HorizontalAlignment="Center" />
                                            </c1:C1DataGrid.Columns>
                                            
                                            <c1:C1DataGrid.BottomRows>
                                                <c1:DataGridSummaryRow />
                                            </c1:C1DataGrid.BottomRows>

                                        </c1:C1DataGrid>

                                    </Grid>
                                </c1:C1TabItem>
                            </c1:C1TabControl>
                        </Grid>


                        <!--start 생산매거진-->
                        <Grid Grid.Column="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="5"/>
                                <RowDefinition/>
                                <RowDefinition Height="5"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="5"/>
                            </Grid.ColumnDefinitions>


                            <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="7" Grid.ColumnSpan="16" Style="{StaticResource Content_InputForm_GroupBorderStyle}" />
                            <TextBlock     Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="14" Style="{StaticResource Content_ModuleTitleStyle}">
                                <Run Text="{Binding ConverterParameter='생산 반제품', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                            </TextBlock>

                            <Border Grid.Row="1"  Grid.Column="0"  Grid.RowSpan="6" Grid.ColumnSpan="16" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>


                            <!-- Controls -->
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ConverterParameter='수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                            <TextBox Grid.Row="2" Grid.Column="3" Style="{StaticResource SearchCondition_TextBoxStyle}" x:Name="txtOutBoxQty" Width="60"/>

                            <CheckBox Grid.Row="2" Grid.Column="6" x:Name="chkAutoPrint" Content="{Binding ConverterParameter='생성 후 자동발행',       Converter={StaticResource GlobalObjectDicConverter}}" Margin="5,5" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True"  />

                            <Button     Grid.Row="2" Grid.Column="8" x:Name="btnTESTPrint"       Content="{Binding ConverterParameter='TEST발행',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnTESTPrint_Click"/>
                            <Button     Grid.Row="2" Grid.Column="10" x:Name="btnCreateBOX"       Content="{Binding ConverterParameter='생성',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnCreateBOX_Click"/>
                            <Button     Grid.Row="2" Grid.Column="12" x:Name="btnDeleteBOX"       Content="{Binding ConverterParameter='삭제',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDeleteBOX_Click"/>
                            <Button     Grid.Row="2" Grid.Column="14" x:Name="btnOutPrint"       Content="{Binding ConverterParameter='발행',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnOutPrint_Click"/>

                            <!--Red Line-->

                            <c1:C1DataGrid Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="14" x:Name="dgOutProduct" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" FrozenBottomRowsCount="1" >
                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTemplateColumn Name="CHK" Width="35" >
                                        <c1:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" />
                                            </DataTemplate>
                                        </c1:DataGridTemplateColumn.CellTemplate>
                                    </c1:DataGridTemplateColumn>
                                    <c1:DataGridTextColumn        Header = "바구니"             Binding = "{Binding BOXID}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "제품ID"             Binding = "{Binding PRODID}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "수량"               Binding = "{Binding OUTQTY}"   HorizontalAlignment="Center" Format="###,###,###,###">
                                        <c1:DataGridAggregate.AggregateFunctions>
                                            <c1:DataGridAggregatesCollection>
                                                <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                            </c1:DataGridAggregatesCollection>
                                        </c1:DataGridAggregate.AggregateFunctions>
                                    </c1:DataGridTextColumn>
                                    <c1:DataGridTextColumn        Header = "발행"               Binding = "{Binding PRINTYN}"   HorizontalAlignment="Center" />
                                    <c1:DataGridTextColumn        Header = "투입시간"           Binding = "{Binding INPUTDTTM}"   HorizontalAlignment="Center" />
                                </c1:C1DataGrid.Columns>

                                <c1:C1DataGrid.BottomRows>
                                    <c1:DataGridSummaryRow />
                                </c1:C1DataGrid.BottomRows>
                                
                            </c1:C1DataGrid>
                        </Grid>

                        <!--end content-->
                    </Grid>

                </Grid>
            </ctrlLib:LGCLayout.Content>
        </ctrlLib:LGCLayout>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Grid.Row="999" Grid.Column="999" />
    </Grid>
</UserControl>
