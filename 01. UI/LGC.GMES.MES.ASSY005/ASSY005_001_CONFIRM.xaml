<c1:C1Window
    x:Class="LGC.GMES.MES.ASSY005.ASSY005_001_CONFIRM"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
    Width="1180"
    Height="800"
    ctrlLib:LGCPopupWindowExtension.ApplyStyle="True"
    Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='실적확인'}"
    Initialized="C1Window_Initialized"
    IsResizable="True"
    Loaded="C1Window_Loaded"
    Tag="ProtoType01Windows01">

    <c1:C1Window.Resources>
        <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;Component/ControlStyles.xaml" />
    </c1:C1Window.Resources>

    <Grid>
        <Grid.Resources>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="6" />
                    </Grid.ColumnDefinitions>
                    <TextBlock
                        Grid.Column="0"
                        HorizontalAlignment="Right"
                        Text="{Binding}" />
                </Grid>
            </DataTemplate>
        </Grid.Resources>

        <Grid.RowDefinitions>
            <RowDefinition Height="480" />
            <RowDefinition Height="*" />
            <RowDefinition Height="15" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--  content area  -->
        <Border
            Grid.Row="0"
            Background="#ffffffff"
            BorderBrush="#ffbebebe"
            BorderThickness="1" />
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="8" />
                <RowDefinition Height="*" />
                <RowDefinition Height="8" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6.333" />
                    <ColumnDefinition Width="Auto" MinWidth="120"/>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="Auto" MinWidth="100" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="30" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" MinHeight="30" />
                    <RowDefinition Height="5" />
                    <RowDefinition Height="Auto" />


                </Grid.RowDefinitions>

                <TextBlock
                    Grid.Row="0"
                    Grid.Column="1"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='LOTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <TextBox
                    x:Name="txtLotId"
                    Grid.Row="0"
                    Grid.Column="2"
                    Margin="3,4,2.667,3.667"
                    CharacterCasing="Upper"
                    Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                <TextBlock
                    x:Name="lblCstID"
                    Grid.Row="0"
                    Grid.Column="3"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='Carrier ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <TextBox
                    x:Name="txtCstID"
                    Grid.Row="0"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Margin="3.333,4,2,3.667"
                    CharacterCasing="Upper"
                    Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="1"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='제품ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <TextBox
                    x:Name="txtProdId"
                    Grid.Row="2"
                    Grid.Column="2"
                    Margin="3,3.667,2.667,4"
                    CharacterCasing="Upper"
                    Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                <TextBlock
                    Grid.Row="4"
                    Grid.Column="3"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='장비완료시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <TextBox
                    x:Name="txtEndTime"
                    Grid.Row="4"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Margin="3.333,3.333,2,3.333"
                    CharacterCasing="Upper"
                    Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                <TextBlock
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="0,8.333,0,7.333"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='시작시간', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <TextBox
                    x:Name="txtStartTime"
                    Grid.Row="4"
                    Grid.Column="2"
                    Margin="3,3.333,2.667,3.333"
                    CharacterCasing="Upper"
                    Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                <TextBlock
                    Grid.Row="2"
                    Grid.Column="3"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='작업유형', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />

                <TextBox
                    x:Name="txtLotType"
                    Grid.Row="2"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Margin="3.333,3.667,2,4"
                    CharacterCasing="Upper"
                    Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                <TextBlock
                    Grid.Row="6"
                    Grid.Column="1"
                    Margin="0,8,0,7.667"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='작업조', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />

                <TextBox
                    x:Name="txtShift"
                    Grid.Row="6"
                    Grid.Column="2"
                    Margin="3,4,2.667,3.667"
                    Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                <TextBox
                    x:Name="txtShiftStartTime"
                    Grid.Row="6"
                    Grid.Column="2"
                    Margin="3,4,2.667,3.667"
                    IsReadOnly="True"
                    Visibility="Collapsed" />
                <TextBox
                    x:Name="txtShiftEndTime"
                    Grid.Row="6"
                    Grid.Column="2"
                    Margin="3,4,2.667,3.667"
                    IsReadOnly="True"
                    Visibility="Collapsed" />

                <TextBlock
                    Grid.Row="6"
                    Grid.Column="3"
                    Grid.ColumnSpan="2"
                    Margin="0,9,216.555,12"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='작업자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Width="54" />

                <Grid
                    Grid.Row="6"
                    Grid.RowSpan="2"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Margin="0.333,0,0,6.333">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="txtWorker"
                        Grid.Column="0"
                        MaxHeight="23"
                        Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                    <Button
                        x:Name="btnWorker"
                        Grid.Column="1"
                        Click="btnWorker_Click"
                        Content="{Binding ConverterParameter=Title17, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                        Style="{DynamicResource Content_SearchButtonStyle}" />

                </Grid>


                <TextBlock
                    Grid.Row="12"
                    Grid.Column="1"
                    Margin="0,8.333,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='구분', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <Grid
                    Grid.Row="12"
                    Grid.Column="2"
                    Grid.ColumnSpan="2"
                    Margin="0,0.333,99.667,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="20" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="168*" />
                    </Grid.ColumnDefinitions>
                    <RadioButton
                        x:Name="rdoCpl"
                        Grid.Column="1"
                        Grid.ColumnSpan="2"
                        Margin="0,0,19.667,-0.333"
                        Checked="rdoCpl_Checked"
                        Content="{Binding ConverterParameter='소진완료', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                        GroupName="rdoType"
                        IsChecked="True"
                        Style="{StaticResource SearchCondition_RadioButtonStyle}"
                        Tag="" />
                    <RadioButton
                        x:Name="rdoRmn"
                        Grid.Column="3"
                        Margin="0.333,0,0.333,-0.333"
                        Checked="rdoRmn_Checked"
                        Content="{Binding ConverterParameter='잔량배출', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                        GroupName="rdoType"
                        IsChecked="False"
                        Style="{StaticResource SearchCondition_RadioButtonStyle}"
                        Tag="" />
                    <CheckBox
                    x:Name="chkBox"
                    Grid.Row="12"
                    Grid.Column="5"
                    Margin="4.333,5.667,0,6"
                    
                    Content="{Binding ConverterParameter='샘플바코드발행', Converter={StaticResource GlobalObjectDicConverter}}"
                    Style="{StaticResource SearchCondition_CheckBoxStyle}" />


                </Grid>

                <TextBlock
                    Grid.Row="14"
                    Grid.Column="3"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='요청자', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />

                <Grid
                    Grid.Row="14"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Margin="0.333,0.333,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="txtUserName"
                        Grid.Column="0"
                        KeyDown="txtUserName_KeyDown"
                        Style="{StaticResource SearchCondition_TextBoxStyle}" />
                    <Button
                        x:Name="btnReqUser"
                        Grid.Column="1"
                        Click="btnReqUser_Click"
                        Content="{Binding ConverterParameter=Title17, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                        Style="{DynamicResource Content_SearchButtonStyle}" />
                </Grid>

                <TextBlock
                    Grid.Row="14"
                    Grid.Column="1"
                    Grid.RowSpan ="3"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <TextBox
                    x:Name="txtRemark"
                    Grid.Row="14"
                    Grid.Column="2"
                    Grid.ColumnSpan="1"
                    Grid.RowSpan ="3"
                    Height="Auto"
                    Margin="2.667,8,5.778,5"
                    AcceptsReturn="True"
                    CharacterCasing="Upper"
                    Style="{StaticResource Content_InputForm_TextBoxStyle}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <TextBlock
                    Grid.Row="16"
                    Grid.Column="3"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='요청사유', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <TextBox
                    x:Name="txtReqNote"
                    Grid.Row="16"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Height="50"
                    Margin="3.333,3.333,2,4"
                    AcceptsReturn="True"
                    Style="{StaticResource Content_InputForm_TextBoxStyle}"
                    TextWrapping="Wrap"
                    VerticalScrollBarVisibility="Auto" />

                <TextBlock
                    Grid.Row="8"
                    Grid.Column="1"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='홀드배출여부(IN)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <c1:C1ComboBox
                    x:Name="cboHold"
                    Grid.Row="8"
                    Grid.Column="2"
                    Margin="3,3.667,2.667,4"
                    AutoComplete="False"
                    DisplayMemberPath=""
                    IsEnabled="False"
                    SelectedValuePath=""
                    Style="{StaticResource C1ComboBoxStyle}" IsEnabledChanged="cboHoldEnableChanged" SelectedValueChanged="cboHoldValueChanged" />

                <TextBlock
                    Grid.Row="8"
                    Grid.Column="3"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='홀드배출사유(IN)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <c1:C1ComboBox
                    x:Name="cboInHoldCode"
                    Grid.Row="8"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Margin="3,3.667,2.667,4"
                    AutoComplete="False"
                    DisplayMemberPath="CBO_NAME"
                    IsEnabled="False"
                    SelectedValuePath="CBO_CODE"
                    Style="{StaticResource C1ComboBoxStyle}" />




                <TextBlock
                    Grid.Row="10"
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='홀드배출여부(OUT)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <c1:C1ComboBox
                    x:Name="cboEndType"
                    Grid.Row="10"
                    Grid.Column="2"
                    AutoComplete="False"
                    DisplayMemberPath=""
                    IsEnabled="True"
                    SelectedValuePath=""
                    Style="{StaticResource C1ComboBoxStyle}" IsEnabledChanged="cboEndTypeEnableChanged" SelectedValueChanged="cboEndTypeValueChanged" />

                <TextBlock
                    Grid.Row="10"
                    Grid.Column="3"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='홀드배출사유(Out)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <c1:C1ComboBox
                    x:Name="cboOutHoldCode"
                    Grid.Row="10"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Margin="3,3.667,2.667,4"
                    AutoComplete="False"
                    DisplayMemberPath="CBO_NAME"
                    IsEnabled="True"
                    SelectedValuePath="CBO_CODE"
                    Style="{StaticResource C1ComboBoxStyle}" />

                <TextBlock
                    Grid.Row="12"
                    Grid.Column="3"
                    Margin="0,7.667,0,8"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='무지부', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />

                <Grid
                    Grid.Row="12"
                    Grid.Column="4"
                    Grid.ColumnSpan="2"
                    Margin="0.333,0.333,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="5" />
                    </Grid.ColumnDefinitions>

                    <TextBox
                        x:Name="txtSSWD"
                        Grid.Column="0"
                        Style="{StaticResource SearchCondition_TextBoxStyle}" />
                    <Button
                        x:Name="btnSSWD"
                        Grid.Column="1"
                        Click="btnSSWD_Click"
                        Content="{Binding ConverterParameter=Title17, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                        Style="{DynamicResource Content_SearchButtonStyle}" />
                </Grid>





                <TextBlock
                    Grid.Row="17"
                    Grid.Column="1"
                    Margin="0,27.333,0,26.333"
                    HorizontalAlignment="Right"
                    Style="{StaticResource SearchCondition_LabelStyle}"
                    Text="{Binding ConverterParameter='수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                <c1:C1DataGrid
                    x:Name="dgQty"
                    Grid.Row="18"
                    Grid.Column="2"
                    Grid.ColumnSpan="4"
                    Margin="3.667,0,4.333,-17"
                    BeganEdit="dgQty_BeganEdit"
                    CommittedEdit="dgQty_CommittedEdit"
                    FrozenTopRowsCount="2"
                    HeadersVisibility="None"
                    IsKeyboardFocusWithinChanged="dgQty_IsKeyboardFocusWithinChanged"
                    IsReadOnly="False"
                    LoadedCellPresenter="dgQty_LoadedCellPresenter"
                    SelectionMode="SingleCell"
                    UnloadedCellPresenter="dgQty_UnloadedCellPresenter">
                    <c1:C1DataGrid.Columns>
                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding M_WIPQTY}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            Format="#,##0"
                            Header="[투입반제품, 재공수량]"
                            IsReadOnly="true" />
                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding M_PRE_PROC_LOSS_QTY}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            Format="#,##0"
                            Header="[투입반제품, WIP_QTY_DIFF]"
                            IsReadOnly="true" />
                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding M_CURR_PROC_LOSS_QTY}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            Format="#,##0"
                            Header="[투입반제품, 자공정LOSS]"
                            IsReadOnly="true" />
                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding M_FIX_LOSS_QTY}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            EditOnSelection="True"
                            Format="#,##0"
                            Header="[투입반제품, 고정LOSS]"
                            IsReadOnly="False"
                            Minimum="0"
                            ShowButtons="False" />
                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding M_RMN_QTY}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            Format="#,##0"
                            Header="[투입반제품, 잔량]"
                            IsReadOnly="true" />

                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding EQPT_INPUT_QTY}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            EditOnSelection="True"
                            Format="#,##0"
                            Header="[생산반제품, 생산량]"
                            IsReadOnly="False"
                            Minimum="0"
                            ShowButtons="False" />

                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding DTL_DEFECT_LOT}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            Format="#,##0"
                            Header="[생산반제품, 불량량]"
                            IsReadOnly="True" />
                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding DTL_LOSS_LOT}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            Format="#,##0"
                            Header="[생산반제품, LOSS량]"
                            IsReadOnly="True" />
                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding DTL_CHARGE_PROD_LOT}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            Format="#,##0"
                            Header="[생산반제품, 물품청구]"
                            IsReadOnly="True" />
                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding DFCT_SUM}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            Format="#,##0"
                            Header="[생산반제품, 불량합계]"
                            IsReadOnly="True"
                            Visibility="Collapsed" />

                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding UNIDENTIFIED_QTY}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            Format="#,##0"
                            Header="[생산반제품, 미확인]"
                            IsReadOnly="true" />
                        <c1:DataGridNumericColumn
                            HorizontalAlignment="Right"
                            Binding="{Binding GOODQTY}"
                            CanUserFilter="False"
                            CanUserGroup="False"
                            CanUserSort="False"
                            EditOnSelection="True"
                            Format="#,##0"
                            Header="[생산반제품, 양품량]"
                            IsReadOnly="False"
                            Minimum="0"
                            ShowButtons="False" />

                        <c1:DataGridTextColumn
                            HorizontalAlignment="Center"
                            Binding="{Binding M_LOTID}"
                            Header="[INPUT_LOTID, INPUT_LOTID]"
                            IsReadOnly="True"
                            Visibility="Collapsed" />
                        <c1:DataGridTextColumn
                            HorizontalAlignment="Center"
                            Binding="{Binding M_CSTID}"
                            Header="[INPUT_CSTID, INPUT_CSTID]"
                            IsReadOnly="True"
                            Visibility="Collapsed" />
                        <!--<c1:DataGridTextColumn        Header = "[OUT_LOTID, OUT_LOTID]"       Binding = "{Binding OUT_LOTID}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                        <c1:DataGridTextColumn        Header = "[OUT_CSTID, OUT_CSTID]"       Binding = "{Binding OUT_CSTID}"         HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />-->

                    </c1:C1DataGrid.Columns>
                    <c1:C1DataGrid.TopRows>
                        <c1:DataGridColumnHeaderRow />
                        <c1:DataGridColumnHeaderRow />
                    </c1:C1DataGrid.TopRows>
                </c1:C1DataGrid>
            </Grid>
        </Grid>

        <Border
            Grid.Row="1"
            Background="#ffffffff"
            BorderBrush="#ffbebebe"
            BorderThickness="1" />
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="8" />
                <RowDefinition Height="*" />
                <RowDefinition Height="8" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="8" />
            </Grid.ColumnDefinitions>

            <Grid Grid.Row="1" Grid.Column="1">
                <c1:C1TabControl>
                    <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='불량/LOSS/물품청구'}">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="3" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <Grid
                                Grid.Row="1"
                                Grid.Column="0"
                                Visibility="Collapsed">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="1*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="8" />
                                    <ColumnDefinition Width="20" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <!--<Border    Grid.Row="1" Grid.Column="0" Background="#E6F5FB" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='수량변경가능', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}"  />-->

                                <Border
                                    Grid.Row="1"
                                    Grid.Column="0"
                                    Background="#F8DAC0"
                                    BorderThickness="1"
                                    Style="{StaticResource BorderSubTitleStyle}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="2"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource SearchCondition_LabelStyle}"
                                    Text="{Binding ConverterParameter='실적제외', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />

                                <Border
                                    Grid.Row="1"
                                    Grid.Column="4"
                                    Background="#D4D4D4"
                                    BorderThickness="1"
                                    Style="{StaticResource BorderSubTitleStyle}" />
                                <TextBlock
                                    Grid.Row="1"
                                    Grid.Column="6"
                                    HorizontalAlignment="Left"
                                    Style="{StaticResource SearchCondition_LabelStyle}"
                                    Text="{Binding ConverterParameter='수량변경차단', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" />
                            </Grid>

                            <Button
                                x:Name="btnDefectSave"
                                Grid.Row="1"
                                Grid.Column="2"
                                Click="btnDefectSave_Click"
                                Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                                Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" />

                            <c1:C1DataGrid
                                x:Name="dgDefect"
                                Grid.Row="3"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                BeganEdit="dgDefect_BeganEdit"
                                BeginningEdit="dgDefect_BeginningEdit"
                                CommittedEdit="dgDefect_CommittedEdit"
                                HeadersVisibility="Column"
                                IsKeyboardFocusWithinChanged="dgDefect_IsKeyboardFocusWithinChanged"
                                IsReadOnly="False"
                                LoadedCellPresenter="dgDefect_LoadedCellPresenter"
                                SelectionMode="SingleCell"
                                UnloadedCellPresenter="dgDefect_UnloadedCellPresenter">

                                <c1:C1DataGrid.Columns>
                                    <c1:DataGridTextColumn
                                        HorizontalAlignment="Center"
                                        Binding="{Binding ACTID}"
                                        Header="활동ID"
                                        IsReadOnly="True"
                                        Visibility="Collapsed" />
                                    <c1:DataGridTextColumn
                                        HorizontalAlignment="Center"
                                        ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"
                                        Binding="{Binding ACTNAME}"
                                        Header="활동명"
                                        IsReadOnly="True" />
                                    <c1:DataGridTextColumn
                                        HorizontalAlignment="Center"
                                        Binding="{Binding RESNCODE}"
                                        Header="불량코드"
                                        IsReadOnly="True"
                                        Visibility="Collapsed" />
                                    <c1:DataGridTextColumn
                                        HorizontalAlignment="Left"
                                        Binding="{Binding RESNNAME}"
                                        Header="불량명"
                                        IsReadOnly="True" />
                                    <c1:DataGridTextColumn
                                        HorizontalAlignment="Center"
                                        Binding="{Binding RSLT_EXCL_FLAG}"
                                        Header="실적반영여부"
                                        IsReadOnly="True"
                                        Visibility="Collapsed" />
                                    <c1:DataGridTextColumn
                                        HorizontalAlignment="Center"
                                        Binding="{Binding PRCS_ITEM_CODE}"
                                        Header="처리항목코드"
                                        IsReadOnly="True"
                                        Visibility="Collapsed" />
                                    <c1:DataGridTextColumn
                                        HorizontalAlignment="Left"
                                        Binding="{Binding COST_CNTR_ID}"
                                        Header="코스트센터코드"
                                        IsReadOnly="True"
                                        Visibility="Collapsed" />
                                    <c1:DataGridNumericColumn
                                        Width="Auto"
                                        HorizontalAlignment="Right"
                                        Binding="{Binding EQP_DFCT_QTY}"
                                        Format="#,##0"
                                        Header="장비불량수량"
                                        IsReadOnly="True" />
                                    <c1:DataGridNumericColumn
                                        Width="Auto"
                                        MinWidth="80"
                                        HorizontalAlignment="Right"
                                        Binding="{Binding RESNQTY}"
                                        EditOnSelection="True"
                                        Format="#,##0"
                                        Header="수량"
                                        Minimum="0"
                                        ShowButtons="False" />
                                    <c1:DataGridTextColumn
                                        Width="Auto"
                                        HorizontalAlignment="Left"
                                        Binding="{Binding COST_CNTR_NAME}"
                                        Header="코스트센터"
                                        IsReadOnly="True" />
                                    <c1:DataGridNumericColumn
                                        HorizontalAlignment="Right"
                                        Binding="{Binding ORG_RESNQTY}"
                                        Format="#,##0"
                                        Header="변경전수량"
                                        IsReadOnly="True"
                                        Visibility="Collapsed" />
                                    <c1:DataGridTextColumn
                                        HorizontalAlignment="Left"
                                        Binding="{Binding DFCT_QTY_CHG_BLOCK_FLAG}"
                                        Header="DFCT_QTY_CHG_BLOCK_FLAG"
                                        IsReadOnly="True"
                                        Visibility="Collapsed" />
                                    <c1:DataGridTextColumn        
                                        Header = "PERMIT_RATE"    
                                        Binding = "{Binding PERMIT_RATE}"       
                                        HorizontalAlignment="Left" 
                                        IsReadOnly="True"  
                                        Visibility="Collapsed" />
                                </c1:C1DataGrid.Columns>

                            </c1:C1DataGrid>
                        </Grid>
                    </c1:C1TabItem>
                </c1:C1TabControl>
            </Grid>
        </Grid>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <Button
                x:Name="btnSave"
                Grid.Column="1"
                Click="btnSave_Click"
                Content="{Binding ConverterParameter='실적확정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                Style="{DynamicResource Content_MainButtonSpecialStyle}" />
            <Button
                x:Name="btnClose"
                Grid.Column="3"
                Click="btnClose_Click"
                Content="{Binding ConverterParameter='닫기', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"
                Style="{DynamicResource Content_MainButtonStyle}" />
        </Grid>


        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" />
    </Grid>
</c1:C1Window>
