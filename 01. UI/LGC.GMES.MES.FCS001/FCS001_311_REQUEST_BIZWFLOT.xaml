                        <uc:UcBaseDataGrid x:Name="dgCellList" Grid.Row="1" Grid.RowSpan="4" IsReadOnly="True" HeadersVisibility="All"  FrozenColumnCount="2" SelectionMode="MultiRange"  Margin="8" 
