                                <c1:DataGridTextColumn      Header = "요청서상태"         Binding = "{Binding BIZ_WF_REQ_DOC_STAT_NAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                            </c1:C1DataGrid.Columns>
                        </uc:UcBaseDataGrid>

                        <uc:UcBaseButton Grid.Row="0" Grid.Column="2" x:Name="btnSelectHeader" Content="{Binding ConverterParameter='BizWF 요청 선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Height="30" Click="btnSelectHeader_Click" />
