                                        CheckAllChanged="dgCellList_CheckAllChanged"
                                        LoadedCellPresenter="dgCellList_LoadedCellPresenter">
                            <c1:C1DataGrid.Resources>
                                <Style TargetType="{x:Type Button}" x:Key="grButtonStyle" BasedOn="{StaticResource ButtonIconBaseStyle}">
                                    <Setter Property="Background">
                                        <Setter.Value>
                                            <ImageBrush ImageSource="/LGC.GMES.MES.CMM001;component/Images/icon_trash.png" Stretch="Uniform"/>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </c1:C1DataGrid.Resources>
                            <c1:C1DataGrid.Columns>
                                <c1:DataGridTemplateColumn Name="CHK" Header="선택" Width="60">
                                    <c1:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding CHK, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="chk_Click" />
                                        </DataTemplate>
                                    </c1:DataGridTemplateColumn.CellTemplate>
                                </c1:DataGridTemplateColumn>
                                <c1:DataGridTextColumn      Header = "CELL_ID"          Binding = "{Binding SUBLOTID}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                <c1:DataGridTextColumn      Header = "MESSAGE"          Binding = "{Binding INVALID_MSG}"          HorizontalAlignment="Left" IsReadOnly="True" MaxWidth="300" />
                                <c1:DataGridTextColumn      Header = "SAMPLE_TYPE"      Binding = "{Binding SMPL_TYPE}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "SAMPLE_TYPE"      Binding = "{Binding SMPL_TYPE_NAME}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                <c1:DataGridTextColumn      Header = "SELECT_YN"        Binding = "{Binding SMPL_MTHD}"            HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "SELECT_YN"        Binding = "{Binding SMPL_MTHD_NAME}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                <c1:DataGridTextColumn      Header = "LOTTYPE"          Binding = "{Binding LOT_TYPE}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "LOTTYPE"          Binding = "{Binding LOT_TYPE_NAME}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                <c1:DataGridTextColumn      Header = "TRAY_ID"          Binding = "{Binding CSTID}"                HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "TRAY_LOT_ID"      Binding = "{Binding LOTID2}"               HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "GRADE"            Binding = "{Binding SUBLOTJUDGE}"          HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "양불 정보"        Binding = "{Binding DFCT_YN}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "ROUTE_DESC"       Binding = "{Binding ROUT_NAME}"            HorizontalAlignment="Left" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "PKG_LOT_ID"       Binding = "{Binding PROD_LOTID}"           HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "CELL_NO"          Binding = "{Binding CSTSLOT}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "BOX_WAIT_YN"      Binding = "{Binding UNPACK_CELL_YN}"       HorizontalAlignment="Center" IsReadOnly="True"/>
                                <c1:DataGridTextColumn      Header = "ROUTE_ID"         Binding = "{Binding ROUTID}"               HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn      Header = "LINE_ID"          Binding = "{Binding EQSGID}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "LOTTYPE"          Binding = "{Binding LOT_DETL_TYPE_CODE}"   HorizontalAlignment="Center" Visibility="Collapsed"/>
                                <c1:DataGridTextColumn      Header = "BIZ_WF_LOT_STAT_CODE"     Binding = "{Binding BIZ_WF_LOT_STAT_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_LOT_STAT_NAME"     Binding = "{Binding BIZ_WF_LOT_STAT_NAME}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_REQ_DOC_TYPE_CODE" Binding = "{Binding BIZ_WF_REQ_DOC_TYPE_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_REQ_DOC_NO"        Binding = "{Binding BIZ_WF_REQ_DOC_NO}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_ITEM_SEQNO"        Binding = "{Binding BIZ_WF_ITEM_SEQNO}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_LOT_SEQNO"         Binding = "{Binding BIZ_WF_LOT_SEQNO}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_REQ_QTY"           Binding = "{Binding BIZ_WF_REQ_QTY}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_UNIT_CODE"         Binding = "{Binding BIZ_WF_UNIT_CODE}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_APPR_STAT_CODE"    Binding = "{Binding BIZ_WF_APPR_STAT_CODE}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_REQ_DOC_STAT_CODE" Binding = "{Binding BIZ_WF_REQ_DOC_STAT_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                <c1:DataGridTextColumn      Header = "BIZ_WF_SLOC_ID"           Binding = "{Binding BIZ_WF_SLOC_ID}"             HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
