                            <uc:UcBaseRadioButton   Grid.Row="0" Grid.Column="10" x:Name="rdoNG"     Margin="0,0,20,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='폐기대기'}"  GroupName="RaidoButton_LotType" Style="{StaticResource SearchCondition_RadioButtonStyle}"  IsChecked="False" IsEnabled="False" />
                        </Grid>

                        <uc:UcBaseTextBlock        Grid.Row="0" Grid.Column="2" x:Name="tbCellId" Text="{Binding ConverterParameter='CELL_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                        <uc:UcBaseTextBox Grid.Row="0" Grid.Column="3"  x:Name="txtCellId" Style="{StaticResource SearchCondition_TextBoxStyle}" MinWidth="120" MaxWidth="500" IsPasteCommaConvert="True" KeyDown="txtCellId_KeyDown" ClipboardPasted="txtCellId_ClipboardPasted" />
                        
                        <!--조회 버튼-->
                        <uc:UcBaseButton     Grid.Row="0" Grid.Column="5"  x:Name="btnClear"  Content="{Binding ConverterParameter=초기화,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Height="30" Margin="0,0,8,0" Click="btnClear_Click" />
                        <uc:UcBaseButton     Grid.Row="0" Grid.Column="6"  x:Name="btnExcel"  Content="{Binding ConverterParameter=엑셀등록, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleButtonExcelImportStyle}" Cursor="Hand" Height="30" Margin="0,0,8,0" HorizontalAlignment="Center" Visibility="Collapsed" />
                        <uc:UcBaseButton     Grid.Row="0" Grid.Column="7"  x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Height="30" Margin="0,0,8,0" Click="btnSearch_Click" />

                    </Grid>

                    <Grid Grid.Row="7" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
