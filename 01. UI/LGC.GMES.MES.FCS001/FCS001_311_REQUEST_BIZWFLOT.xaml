                            <uc:UcBaseTextBlock              Grid.Row="0" Grid.Column="4" x:Name="tbSmplMthd" Margin="0,0,20,0" Text="{Binding ConverterParameter='SELECT_YN', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                            <uc:UcBaseRadioButton   Grid.Row="0" Grid.Column="5" x:Name="rdoAuto"    Margin="0,0,20,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='AUTO'}"  GroupName="RadioButton_Group" Style="{StaticResource SearchCondition_RadioButtonStyle}" IsChecked="False" IsEnabled="False" />
                            <uc:UcBaseRadioButton   Grid.Row="0" Grid.Column="6" x:Name="rdoManual"  Margin="0,0,20,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='MANUAL'}"  GroupName="RadioButton_Group" Style="{StaticResource SearchCondition_RadioButtonStyle}"  IsChecked="True"/>

                            <uc:UcBaseTextBlock              Grid.Row="0" Grid.Column="8"  x:Name="tbLotType" Margin="0,0,20,0" Text="{Binding ConverterParameter='LOTTYPE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
