                            <RowDefinition Height="*"/>
                            <RowDefinition Height="4"/>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!--백그라운드용-->
                        <!--CHK 기능 점검 및 수정-->
                        <Border     Grid.Row="0" Grid.Column="0" Grid.RowSpan="5" Grid.ColumnSpan="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
