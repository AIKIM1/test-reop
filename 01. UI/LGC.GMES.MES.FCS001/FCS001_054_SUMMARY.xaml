<UserControl x:Class="LGC.GMES.MES.FCS001.FCS001_054_SUMMARY"
             xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1920"  Loaded="UserControl_Loaded" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right" Padding="0,0,5,0" FontWeight="Bold" />
                </Grid>
            </DataTemplate>
            <DataTemplate x:Key="ResultTemplateSum">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0"  Text="{Binding ConverterParameter='합계', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" HorizontalAlignment="Right" Padding="0,0,5,0" FontWeight="Bold" />
                </Grid>
            </DataTemplate>
        </Grid.Resources>

        <c1:C1TabControl x:Name="_tabControl">
            <c1:C1TabItem Header="{Binding ConverterParameter='DEGAS 실적', Converter={StaticResource GlobalObjectDicConverter},Mode=OneWay }" Margin="0" Name="Tab2">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="8"/>
                    </Grid.RowDefinitions>
                    <Border Grid.Row="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                    <!--조회조건-->
                    <Grid Grid.Row="0" Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="11" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="11"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="13"/>
                        </Grid.ColumnDefinitions>
                        <Grid Grid.Row="1" Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock             Grid.Column="0" Text="{Binding ConverterParameter='DATE2', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <ctrlLib:LGCDatePicker Grid.Column="1" x:Name="dtpWorkDate2" DatepickerType="Date" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock         Grid.Column="0" Text="{Binding ConverterParameter='SHIFT_NAME', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <uc:UcBaseComboBox     Grid.Column="1" x:Name="cboShift2" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock             Grid.Column="0" Text="{Binding ConverterParameter='LINE_ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <uc:UcBaseComboBox     Grid.Column="1" x:Name="cboEQSGID" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="7">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock         Grid.Column="0" Text="{Binding ConverterParameter='LOTTYPE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                            <ctrlLib:MultiSelectionBox Grid.Row="1" Grid.Column="13" x:Name="cboLotType" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" isAllUsed="False" VerticalAlignment="Bottom" Background="LightYellow" MinWidth="150" Loaded="cboLotType_Loaded" SelectionChanged="cboLotType_SelectionChanged"/>
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="9">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <uc:UcBaseRadioButton x:Name="chkDigitLot"    Grid.Column="0" Content="{Binding ConverterParameter='BY_LARGE_LOT', Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource RadioButtonBaseStyle}" IsChecked="True" CheckedChanged="chkDigitLot_CheckedChanged"/>
                            <uc:UcBaseRadioButton x:Name="chkDigitPkgLot" Grid.Column="2" Content="{Binding ConverterParameter='BY_PKG_LOT', Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource RadioButtonBaseStyle}" IsChecked="False" CheckedChanged="chkDigitPkgLot_CheckedChanged"/>
                        </Grid>

                        <Grid Grid.Row="1" Grid.Column="11">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock         Grid.Column="0" x:Name="txtEQPTID" Text="{Binding ConverterParameter='EQPTID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Collapsed" />
                            <uc:UcBaseComboBox     Grid.Column="2" x:Name="cboEQPTID" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" Visibility="Collapsed" />
                            <ctrlLib:MultiSelectionBox Grid.Column="2" x:Name="mcboEQPTID" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" isAllUsed="False" VerticalAlignment="Bottom" MinWidth="150" Loaded="mcboEQPTID_Loaded" SelectionChanged="mcboEQPTID_SelectionChanged" Visibility="Collapsed"/>
                        </Grid>
                        <Grid Grid.Row="1" Grid.Column="13">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="10"/>
                                <ColumnDefinition Width="auto"/>
                                <ColumnDefinition Width="4"/>
                                <ColumnDefinition Width="auto"/>
                            </Grid.ColumnDefinitions>
                            <uc:UcBaseButton    Grid.Column="2" x:Name="btnSearch2"  Content="{Binding ConverterParameter=SEARCH,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Click="btnSearch2_Click"/>
                        </Grid>
                    </Grid>
                    <!--작업일지-->
                    <Grid Grid.Row="2" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border     Grid.Row="0"  Grid.RowSpan="99" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                            <TextBlock  Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='DEGAS_DIR_JOBSHEET', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource Content_InputForm_LabelStyle}" />

                            <Grid   Grid.Row="1" Grid.Column="0" >
                                <uc:UcBaseDataGrid x:Name="dgDir" HeadersVisibility="None" Grid.Row="1" Margin="8" IsReadOnly="True"  FrozenColumnCount="9" FrozenTopRowsCount="2" SelectionMode="MultiRange" CanUserSort="False"
                                                   LoadedCellPresenter="dgList_LoadedCellPresenter" 
                                                   UnloadedCellPresenter="dgList_UnloadedCellPresenter" 
                                                   MouseDoubleClick="dgList_MouseDoubleClick">
                                    <c1:C1DataGrid.Resources>
                                        <DataTemplate x:Key="ResultTemplate1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="1" Text="{Binding}" Style="{StaticResource Content_InputForm_TextBlockStyle}" HorizontalAlignment="Center"></TextBlock>
                                            </Grid>
                                        </DataTemplate>
                                    </c1:C1DataGrid.Resources>

                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "[MODEL_ID,MODEL_ID]"        Binding = "{Binding MDLLOT_ID}"            HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "[LINE_ID,LINE_ID]"          Binding = "{Binding EQSGID}"               HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "[LINE_ID,LINE_ID]"          Binding = "{Binding EQSGNAME}"             HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "[EQP_ID,EQP_ID]"            Binding = "{Binding EQPTID}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridComboBoxColumn  Header = "[EQP_NAME,EQP_NAME]"        Binding = "{Binding EQPTNAME}"             HorizontalAlignment="Left" />
                                        <c1:DataGridTextColumn      Header = "[LOTID,LOTID]"              Binding = "{Binding DIGIT8_LOTID}"         HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "[PKG_LOT_ID,PKG_LOT_ID]"    Binding = "{Binding DIGIT10_LOTID}"        HorizontalAlignment="Center" />
                                        <c1:DataGridComboBoxColumn  Header = "[FLAG,FLAG]"                Binding = "{Binding LOT_ATTR}"             HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "[LOTTYPE,LOTTYPE]"          Binding = "{Binding LOTTYPE}"              HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header = "[INPUT_QTY,INPUT_QTY]"      Binding = "{Binding INPUT_SUBLOT_QTY}"     HorizontalAlignment="Right" Format="#,##0"/>
                                        <c1:DataGridNumericColumn   Header = "[GOOD_CNT,GOOD_CNT]"        Binding = "{Binding GOOD_SUBLOT_QTY}"      HorizontalAlignment="Right" Format="#,##0"/>
                                        <c1:DataGridNumericColumn   Header = "[BAD_CNT_SUM,BAD_CNT_SUM]"  Binding = "{Binding NG_SUBLOT_QTY}"        HorizontalAlignment="Right" Format="#,##0"/>
                                    </c1:C1DataGrid.Columns>

                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <c1:DataGridColumnHeaderRow />
                                    </c1:C1DataGrid.TopRows>

                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow x:Name="summaryDir" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </uc:UcBaseDataGrid>
                            </Grid>
                        </Grid>

                        <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="99" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                        <Grid Grid.Row="2" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Border     Grid.Row="0"  Grid.RowSpan="99" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                            <TextBlock  Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='DEGAS_REWORK_JOBSHEET', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource Content_InputForm_LabelStyle}" />

                            <Grid   Grid.Row="1" Grid.Column="0" >
                                <uc:UcBaseDataGrid x:Name="dgRework" HeadersVisibility="None" Grid.Row="1" Margin="8" IsReadOnly="True"  FrozenColumnCount="9" FrozenTopRowsCount="2" SelectionMode="MultiRange" CanUserSort="False"
                                                   LoadedCellPresenter="dgList_LoadedCellPresenter"
                                                   MouseDoubleClick="dgList_MouseDoubleClick"
                                                   UnloadedCellPresenter="dgList_UnloadedCellPresenter">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTextColumn      Header = "[MODEL_ID,MODEL_ID]"        Binding = "{Binding MDLLOT_ID}"          HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "[LINE_ID,LINE_ID]"          Binding = "{Binding EQSGID}"             HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn      Header = "[LINE_ID,LINE_ID]"          Binding = "{Binding EQSGNAME}"           HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "[EQP_ID,EQP_ID]"            Binding = "{Binding EQPTID}"             HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridComboBoxColumn  Header = "[EQP_NAME,EQP_NAME]"        Binding = "{Binding EQPTNAME}"           HorizontalAlignment="Left" />
                                        <c1:DataGridTextColumn      Header = "[LOTID,LOTID]"              Binding = "{Binding DIGIT8_LOTID}"       HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "[PKG_LOT_ID,PKG_LOT_ID]"    Binding = "{Binding DIGIT10_LOTID}"      HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "[DFCT_CODE,DFCT_CODE]"      Binding = "{Binding PRE_DFCT_CODE}"      HorizontalAlignment="Center"/>
                                        <c1:DataGridTextColumn      Header = "[DEFECT_NAME,DEFECT_NAME]"  Binding = "{Binding LOT_COMENT}"         HorizontalAlignment="Center"/>
                                        <c1:DataGridComboBoxColumn  Header = "[FLAG,FLAG]"                Binding = "{Binding LOT_ATTR}"           HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "[LOTTYPE,LOTTYPE]"          Binding = "{Binding LOTTYPE}"            HorizontalAlignment="Center" Visibility="Collapsed"/>
                                        <c1:DataGridNumericColumn   Header = "[INPUT_QTY,INPUT_QTY]"      Binding = "{Binding INPUT_SUBLOT_QTY}"   HorizontalAlignment="Right" Format="#,##0"/>
                                        <c1:DataGridNumericColumn   Header = "[GOOD_CNT,GOOD_CNT]"        Binding = "{Binding GOOD_SUBLOT_QTY}"    HorizontalAlignment="Right" Format="#,##0"/>
                                        <c1:DataGridNumericColumn   Header = "[BAD_CNT_SUM,BAD_CNT_SUM]"  Binding = "{Binding NG_SUBLOT_QTY}"      HorizontalAlignment="Right" Format="#,##0"/>
                                    </c1:C1DataGrid.Columns>

                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <c1:DataGridColumnHeaderRow />
                                    </c1:C1DataGrid.TopRows>

                                    <c1:C1DataGrid.BottomRows>
                                        <c1:DataGridSummaryRow x:Name="summaryRework" RowStyle="{StaticResource SummaryRowStyle}"/>
                                    </c1:C1DataGrid.BottomRows>
                                </uc:UcBaseDataGrid>
                            </Grid>
                        </Grid>

                        <GridSplitter Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="99" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

                        <Grid Grid.Row="4" Grid.Column="0">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Border     Grid.Row="0" Grid.RowSpan="99" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffbebebe"></Border>
                            <TextBlock  x:Name="lblRemark"   Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='특이사항', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource Content_InputForm_LabelStyle}" />
                            <TextBox    x:Name="txtRemark"   Grid.Row="1" Grid.Column="0" Margin="8" MinHeight="23" Height="Auto" Style="{StaticResource SearchCondition_TextBoxStyle}" TextWrapping="WrapWithOverflow" />
                            <uc:UcBaseButton     x:Name="btnRemarkSave"     Grid.Row="1" Grid.Column="1" Margin="4"  Content="{Binding ConverterParameter='SAVE',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Cursor="Hand" Click="btnRemarkSave_Click" />
                        </Grid>
                    </Grid>
                </Grid>
            </c1:C1TabItem>
            <c1:C1TabItem Header="{Binding ConverterParameter='EQP_COND_CHK', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Name="Tab1">
                <ctrlLib:LGCLayout x:Name="LayoutRoot">
                    <ctrlLib:LGCLayout.Content>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="AUTO"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="8"/>
                            </Grid.RowDefinitions>

                            <Border Grid.Row="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <Grid   Grid.Row="0" Grid.Column="0" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="11" />
                                    <RowDefinition Height="29" />
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="29"/>
                                    <RowDefinition Height="11"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <!--조회조건 ROW1-->
                                <Grid Grid.Row="1" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock             Grid.Column="0" Text="{Binding ConverterParameter='DATE2', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <ctrlLib:LGCDatePicker Grid.Column="1" x:Name="dtpWorkDate" DatepickerType="Date" />
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock         Grid.Column="0" Text="{Binding ConverterParameter='SHIFT_NAME', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox     Grid.Column="1" x:Name="cboShift" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock         Grid.Column="0" Text="{Binding ConverterParameter='LINE_ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox     Grid.Column="1" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="7">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock        Grid.Column="0" Text="{Binding ConverterParameter='EQP', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox    Grid.Column="1" x:Name="cboEqp" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="9">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock        Grid.Column="0" Text="{Binding ConverterParameter='MODEL', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox    Grid.Column="1" x:Name="cboModel" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"/>
                                </Grid>
                                <Grid Grid.Row ="1" Grid.Column="11">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='WORK_USER', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <Grid Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBox    Grid.Column="0" x:Name="txtWorkUser"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>
                                        <uc:UcBaseButton   Grid.Column="1" x:Name="btnName" Style="{StaticResource SearchButtonStyle}" Click="btnName_Click" Height="23"/>
                                    </Grid>
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Column="0" Text="{Binding ConverterParameter='WORK_USER', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                </Grid>
                                <Grid Grid.Row="1" Grid.Column="11">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="auto"/>
                                    </Grid.ColumnDefinitions>
                                    <uc:UcBaseButton Grid.Column="1" x:Name="btnHistory"  Content="{Binding ConverterParameter=History,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl02Style}"  Click="btnHistory_Click" />
                                </Grid>
                                <Grid Grid.Row="3" Grid.Column="11">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="3"/>
                                        <ColumnDefinition Width="auto"/>
                                        <ColumnDefinition Width="3"/>
                                    </Grid.ColumnDefinitions>
                                    <uc:UcBaseButton Grid.Column="1" x:Name="btnSearch"  Content="{Binding ConverterParameter=SEARCH,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Click="btnSearch_Click"/>
                                    <uc:UcBaseButton     Grid.Column="3" x:Name="btnSave"  Content="{Binding ConverterParameter= 저장,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}" Click="btnSave_Click" />
                                </Grid>
                            </Grid>
                            <Grid Grid.Row="2" >
                                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1" Background="White" x:Name="scrollViewer" >
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="13"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="13"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.RowSpan="99" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffbebebe"></Border>

                                        <Grid  Grid.Column="1">
                                            <uc:UcBaseDataGrid x:Name="dgEqp" HeadersVisibility="None" Grid.Row="1" Margin="5" IsReadOnly="False" SelectionMode="MultiRange" 
                                                               CanUserFilter="False" IsRowCountView="False"
                                                               MergingCells="dgEqp_MergingCells" 
                                                               LoadedCellPresenter="dgEqp_LoadedCellPresenter" 
                                                               BeginningEdit="dgEqp_BeginningEdit" >
