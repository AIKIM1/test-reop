                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border                 Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" BorderBrush="#ffbebebe" BorderThickness="1"  Style="{StaticResource BorderSubTitleStyle}" />
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="36.8"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock              Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='SEL_VALUE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                        <uc:UcBaseDataGrid x:Name="dgReqAll" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="99" Margin="4" IsReadOnly="False" HeadersVisibility="Column" FrozenTopRowsCount="1" FrozenColumnCount="4" SelectionMode="MultiRange" LoadedColumnHeaderPresenter="dgReqAll_LoadedColumnHeaderPresenter" MouseDoubleClick="dgReqAll_MouseDoubleClick" PreviewMouseLeftButtonDown="dgReqAll_PreviewMouseLeftButtonDown" LoadedCellPresenter="dgReqAll_LoadedCellPresenter" >
                                            <c1:C1DataGrid.Columns>

                                                <c1:DataGridCheckBoxColumn     Binding = "{Binding CHK, Mode=TwoWay}" Width="Auto"  HorizontalAlignment="Center" CanUserSort="False" >
