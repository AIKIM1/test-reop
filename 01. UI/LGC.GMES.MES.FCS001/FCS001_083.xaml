<UserControl xmlns:ss="hhemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.FCS001.FCS001_083"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1324" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="PQC 검사의뢰">
            <Grid>
                <c1:C1TabControl x:Name="tcReqIns" >
                    <c1:C1TabItem x:Name="tpInsObj" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='INSP_TARGET'}" Margin="0" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--조회영역-->
                            <Border                 Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="4"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="1" Grid.Column="1" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock              Grid.Column="0" Text="{Binding ConverterParameter='PROD_DATE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <ctrlLib:LGCDatePicker  Grid.Column="1" x:Name="dtpTarget" DatepickerType="Month"  IsNullInitValue="True" />

                                    <TextBlock              Grid.Column="2" Text="{Binding ConverterParameter='LINE_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox          Grid.Column="3" x:Name="cboLineTarget" Style="{StaticResource C1ComboBoxStyle_Mandatory}" AutoComplete="False"  />

                                    <TextBlock              Grid.Column="4" Text="{Binding ConverterParameter='MODEL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                    <uc:UcBaseComboBox          Grid.Column="5" x:Name="cboModelTarget"  Style="{StaticResource C1ComboBoxStyle_Mandatory}" AutoComplete="False" />

                                    <uc:UcBaseButton                 Grid.Column="6" Margin="4" x:Name="btnchekAllLot" Content="{Binding ConverterParameter='REQ_POS_MODEL_SEL' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}"  Cursor="Hand" Click="btnchekAllLot_Click" />
                                    <TextBox                Grid.Column="7" x:Name="txtPQCable"  MinWidth="120"  Style="{StaticResource Content_InputForm_TextBoxStyle}" />
                                </Grid>

                                <Grid Grid.Row="2" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock              Grid.Column="0"  Text="{Binding ConverterParameter='PROD_WAIT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Background="LightGray" HorizontalAlignment="Center" MinHeight="23" MinWidth="60" TextAlignment="Center"/>
                                    <TextBlock              Grid.Column="1"  Text="{Binding ConverterParameter='PROD_NONE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Background="DimGray" Foreground="White" HorizontalAlignment="Center" MinHeight="23" MinWidth="60" TextAlignment="Center" />
                                    <TextBlock              Grid.Column="2"  Text="{Binding ConverterParameter='CREATE_WAIT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Background="Violet" HorizontalAlignment="Center" MinHeight="23" MinWidth="60" TextAlignment="Center" />
                                    <TextBlock              Grid.Column="3"  Text="{Binding ConverterParameter='REQ_POS', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Background="Orange" HorizontalAlignment="Center" MinHeight="23" MinWidth="60" TextAlignment="Center" />
                                    <TextBlock              Grid.Column="4"  Text="{Binding ConverterParameter='REQ_WAIT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Background="Yellow" HorizontalAlignment="Center" MinHeight="23" MinWidth="60" TextAlignment="Center" />
                                    <TextBlock              Grid.Column="5"  Text="{Binding ConverterParameter='REQ_FINISH', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Background="LimeGreen" HorizontalAlignment="Center" MinHeight="23" MinWidth="60" TextAlignment="Center" />
                                    <TextBlock              Grid.Column="6"  Text="{Binding ConverterParameter='INSP_FINISH', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" Background="Teal" Foreground="White" HorizontalAlignment="Center" MinHeight="23" MinWidth="60" TextAlignment="Center" />
                                </Grid>

                                <uc:UcBaseButton                Grid.Row="2" Grid.Column="3" Margin="4" x:Name="btnSearchTarget" Content="{Binding ConverterParameter='SEARCH' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}"  Cursor="Hand" Click="btnSearchTarget_Click" />
                            </Grid>

                            <!--Data Display1-->
                            <Grid Grid.Row="2">
                                <!--<Border                 Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>-->
                                <Border                 Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" BorderBrush="#ffbebebe" BorderThickness="1"  Style="{StaticResource BorderSubTitleStyle}" />

                                <c1:C1DataGrid x:Name="dgTarget" IsReadOnly="False" Margin="8" HeadersVisibility="None" FrozenColumnCount="3" SelectionMode="MultiRange" MouseDoubleClick="dgTarget_MouseDoubleClick" LoadedCellPresenter="dgTarget_LoadedCellPresenter" >
                                    <c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>

                            </Grid>
                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem x:Name="tpSaveCell" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='CELL_SAVE'}" Margin="0" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="3*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>
                            </Grid.RowDefinitions>

                            <!--조회영역-->
                            <Border                 Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="4" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock              Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='CELL_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBox                Grid.Row="1" Grid.Column="2" x:Name="txtCellId"  MinWidth="120"  Style="{StaticResource Content_InputForm_MandatoryTextBoxStyle}" KeyDown="txtCellId_KeyDown" />

                                <TextBlock              Grid.Row="1" Grid.Column="3" Text="{Binding ConverterParameter='GROUP', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <uc:UcBaseComboBox          Grid.Row="1" Grid.Column="4" x:Name="cboCellGroup" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  />

                                <TextBlock              Grid.Row="1" Grid.Column="5" Text="{Binding ConverterParameter='PERSON_NAME', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <uc:UcBaseComboBox          Grid.Row="1" Grid.Column="6" x:Name="cboCellUser"  Style="{StaticResource C1ComboBoxStyle_Mandatory}" AutoComplete="False" />

                                <TextBlock              Grid.Row="1" Grid.Column="7" Text="{Binding ConverterParameter='REQ_STEP', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <uc:UcBaseComboBox          Grid.Row="1" Grid.Column="8" x:Name="cboCellStep"   Style="{StaticResource C1ComboBoxStyle_Mandatory}" AutoComplete="False" SelectionCommitted="cboCellStep_SelectionCommitted" />

                                <uc:UcBaseButton                 Grid.Row="1" Grid.Column="10" Margin="4" x:Name="btnCellSearch" Content="{Binding ConverterParameter='SEARCH' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}"  Cursor="Hand" Click="btnCellSearch_Click" />
                                <uc:UcBaseButton                 Grid.Row="1" Grid.Column="11" Margin="4" x:Name="btnCellClear" Content="{Binding ConverterParameter='REFRESH' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl03Style}"  Cursor="Hand" Click="btnCellClear_Click" />
                            </Grid>

                            <!--조회 List-->
                            <Border                 Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="99" BorderBrush="#ffbebebe" BorderThickness="1"  Style="{StaticResource BorderSubTitleStyle}" />
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock              Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='SEL_VALUE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBox                Grid.Row="0" Grid.Column="2" x:Name="txtLotId"  MinWidth="120"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />
                                <TextBox                Grid.Row="0" Grid.Column="3" x:Name="txtCellCnt"  MinWidth="120"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" />

                                <c1:C1DataGrid x:Name="dgCellList" Grid.Row="1" Grid.Column="0" Margin="8" Grid.ColumnSpan="99" IsReadOnly="False" HeadersVisibility="Column" FrozenTopRowsCount="1" FrozenColumnCount="4" SelectionMode="MultiRange" LoadedColumnHeaderPresenter="dgCellList_LoadedColumnHeaderPresenter" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn Header="Delete" Name="DELETE" Width="70"  HorizontalAlignment="Center" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Button Content="{Binding ConverterParameter='Delete', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" x:Name="DELETE" Margin="2" Click="Button_Click" Height="Auto"  HorizontalAlignment="Stretch" Background="Black" Foreground ="White" FontSize="10" ></Button>
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>

                                        <c1:DataGridTextColumn      Header = "SEQ"           Binding = "{Binding PQC_REQ_GROUP}"  IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "CELL_ID"       Binding = "{Binding SUBLOTID}"       IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "TRAY_ID"       Binding = "{Binding CSTID}"          IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "LINE_NAME"     Binding = "{Binding LINE_NAME}"      IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "MODEL"         Binding = "{Binding MODEL}"          IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "PKG_LOT_ID"    Binding = "{Binding DAY_GR_LOTID}"   IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "REQ_STEP"      Binding = "{Binding REQ_STEP}"       IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "LAST_OCV_VAL"  Binding = "{Binding LAST_OCV_VAL}"   IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "ROUTE_ID"      Binding = "{Binding ROUTID}"         IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "GRADE"         Binding = "{Binding FINL_JUDG_CODE}" IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "DEFECT_NAME"   Binding = "{Binding DEFECT_NAME}"    IsReadOnly="True" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn      Header = "EQSGID"        Binding = "{Binding EQSGID}"         IsReadOnly="True" HorizontalAlignment="Center" Visibility="Hidden" />
                                    </c1:C1DataGrid.Columns>
                                </c1:C1DataGrid>
                            </Grid>

                            <!--요청사항-->
                            <Border                 Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                            <Grid Grid.Row="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="4" />
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock              Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='REQ_DESC', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <TextBox                Grid.Row="1" Grid.Column="2" x:Name="txtReqDesc" Style="{StaticResource Content_InputForm_MandatoryTextBoxStyle}" Height="Auto" Margin="3,3,3,3" TextWrapping="Wrap" />

                                <uc:UcBaseButton                 Grid.Row="1" Grid.Column="3" Margin="4" x:Name="btnCellSave" Content="{Binding ConverterParameter='SAVE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl02Style}"  Cursor="Hand" Click="btnCellSave_Click" />
                            </Grid>

                        </Grid>
                    </c1:C1TabItem>

                    <c1:C1TabItem x:Name="tpReqIns" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='INSP_REQ'}" Margin="0" >
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!--조회영역-->
                            <Border                 Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="99" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="4"/>
                                </Grid.RowDefinitions>

                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock              Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='SEL_PERIOD', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <ctrlLib:LGCDatePicker  Grid.Row="1" Grid.Column="2" x:Name="dtpFromDate" DatepickerType="Date" IsNullInitValue="True" />
                                <TextBlock              Grid.Row="1" Grid.Column="3"  Text="{Binding ConverterParameter='~', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <ctrlLib:LGCDatePicker  Grid.Row="1" Grid.Column="4" x:Name="dtpToDate" DatepickerType="Date" IsNullInitValue="True" />

                                <TextBlock              Grid.Row="1" Grid.Column="5" Text="{Binding ConverterParameter='LINE_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <uc:UcBaseComboBox          Grid.Row="1" Grid.Column="6" x:Name="cboLine" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False"  />

                                <TextBlock              Grid.Row="1" Grid.Column="7" Text="{Binding ConverterParameter='MODEL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <uc:UcBaseComboBox          Grid.Row="1" Grid.Column="8" x:Name="cboModel"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                <TextBlock              Grid.Row="1" Grid.Column="9" Text="{Binding ConverterParameter='PERSON_NAME', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                                <uc:UcBaseComboBox          Grid.Row="1" Grid.Column="10" x:Name="cboUser"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                <uc:UcBaseButton                 Grid.Row="1" Grid.Column="12" Margin="4" x:Name="btnSearch" Content="{Binding ConverterParameter='SEARCH' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}"  Cursor="Hand" Click="btnSearch_Click" />
                            </Grid>

                            <!--조회List-->
                            <Grid Grid.Row="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="1*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border                 Grid.Row="0" Grid.Column="0" Grid.RowSpan="2" BorderBrush="#ffbebebe" BorderThickness="1"  Style="{StaticResource BorderSubTitleStyle}" />
                                    <Grid Grid.Row="0" Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="36.8"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock              Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='REQ_HIS', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                        <uc:UcBaseDataGrid x:Name="dgReqGroup" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="99" Margin="4" IsReadOnly="False" HeadersVisibility="Column" FrozenTopRowsCount="1" FrozenColumnCount="4" SelectionMode="MultiRange" LoadedColumnHeaderPresenter="dgReqGroup_LoadedColumnHeaderPresenter" MouseDoubleClick="dgReqGroup_MouseDoubleClick" LoadedCellPresenter="dgReqGroup_LoadedCellPresenter" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn      Header = "INSP_REQ_GRP_ID"  Binding = "{Binding PQC_REQ_GR_ID}"      IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "REQ_DATE"         Binding = "{Binding REQ_DAY}"            IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridNumericColumn   Header = "QTY"              Binding = "{Binding TOTL_REQ_QTY}"       IsReadOnly="True" HorizontalAlignment="Right" Format="###,##0" />
                                                <c1:DataGridTextColumn      Header = "REQ_USER"         Binding = "{Binding PQC_REQ_GR_USERID}"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                    </Grid>

                                    <GridSplitter           Grid.Row="0" Grid.Column="1" Grid.RowSpan="2" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                                    <Border                 Grid.Row="0" Grid.Column="2" Grid.RowSpan="2" BorderBrush="#ffbebebe" BorderThickness="1"  Style="{StaticResource BorderSubTitleStyle}" />
                                    <Grid Grid.Row="0" Grid.Column="2">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="36.8"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock              Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='SUMMARY', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" />

                                        <uc:UcBaseDataGrid x:Name="dgSummary" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="99" Margin="4" IsReadOnly="False" HeadersVisibility="Column" FrozenTopRowsCount="1" FrozenColumnCount="4" SelectionMode="MultiRange" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn      Header = "LINE_NAME"    Binding = "{Binding LINE_NAME_ASSY}"    IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "MODEL_NAME"   Binding = "{Binding MODEL_NAME}"   IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "PKG_LOT_ID"   Binding = "{Binding DAY_GR_LOTID}" IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridNumericColumn   Header = "QTY"          Binding = "{Binding PQC_REQ_QTY}"  IsReadOnly="True" HorizontalAlignment="Right" Format="###,##0" />
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                    </Grid>
                                </Grid>

                                <GridSplitter Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="99" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

