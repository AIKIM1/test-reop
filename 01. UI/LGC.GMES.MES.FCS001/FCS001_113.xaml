<UserControl xmlns:ss="hhemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.FCS001.FCS001_113"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1920" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="폐기 셀 등록" Grid.ColumnSpan="3" >
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <c1:C1TabControl x:Name="tbcWip">
                        <!--등록 tabpag -->
                        <c1:C1TabItem x:Name="Create" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='REGISTER'}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                <Grid Grid.Row="1"  Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="AUTO"/>
                                        <RowDefinition Height="4"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="13"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Column="0"  Text="{Binding ConverterParameter='일괄선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <uc:UcBaseCheckBox       x:Name="chkAll"  Grid.Column="1" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False"
                                        Checked="chkHeaderAll_Checked" Unchecked="chkHeaderAll_Unchecked"/>
                                        <TextBlock      Grid.Column="3"  Text="{Binding ConverterParameter='LOTID검색', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <uc:UcBaseCheckBox       x:Name="chkLot"  Grid.Column="4" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False"/>


                                        <TextBlock      Grid.Column="6"  Text="{Binding ConverterParameter='CELL_CNT_SUM', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <TextBox        Grid.Column="7"  x:Name="txtInsertCellCnt" MinWidth="60" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>

                                        <TextBlock      Grid.Column="9" Text="{Binding ConverterParameter='INFO_ERR', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <TextBox        Grid.Column="10"  x:Name="txtBadInsertRow" MinWidth="60"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>

                                        <TextBlock      Grid.Column="12" Text="{Binding ConverterParameter='ROW_NUM', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <TextBox        Grid.Column="14" MinWidth="60"  x:Name="txtRowCntInsertCell"  Style="{StaticResource Content_InputForm_TextBoxStyle}" Text="100" TextAlignment="Right"/>

                                        <uc:UcBaseButton  x:Name="btnRefresh"  Grid.Column="16"  Content="{Binding ConverterParameter=Refresh,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl03Style}" Cursor="Hand" Click="btnRefresh_Click" HorizontalAlignment="Center" />
                                        <uc:UcBaseButton  x:Name="btnExcel"    Grid.Column="18"  Content="{Binding ConverterParameter=Search,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleButtonExcelImportStyle}" Cursor="Hand" Click="btnExcel_Click" HorizontalAlignment="Center" />
                                        <uc:UcBaseButton  x:Name="btnSearch"   Grid.Column="20"  Content="{Binding ConverterParameter=Search,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" HorizontalAlignment="Center" />
                                        <uc:UcBaseButton  x:Name="btnSave"     Grid.Column="22"  Content="{Binding ConverterParameter=폐기등록, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}" Cursor="Hand" Click="btnSave_Click" HorizontalAlignment="Center" />
                                    </Grid>

                                    <Grid Grid.Row="3" Grid.Column="1">
                                        <uc:UcBaseDataGrid x:Name="dgInputList" Grid.Column="0" IsReadOnly="False" HeadersVisibility="All" SelectionMode="MultiRange" 
                                                       CanUserSort="False" Margin="10,0,-10,0" RowHeaderWidth="33"
                                                       LoadedRowHeaderPresenter="dgInputList_LoadedRowHeaderPresenter" 
                                                       LoadedColumnHeaderPresenter="dgInputList_LoadedColumnHeaderPresenter" 
                                                       LoadedCellPresenter="dgInputList_LoadedCellPresenter" 
                                                       UnloadedCellPresenter="dgInputList_UnloadedCellPresenter"
                                                       BeginningEdit="dgInputList_BeginningEdit">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn Name="CHK" Binding="{Binding CHK, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Width="Auto" HorizontalAlignment="Center" CanUserSort="False" />
                                                <c1:DataGridTextColumn      Header = "CELL_ID"            Binding = "{Binding SUBLOTID}"              IsReadOnly="False" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "TRAY_LOT_ID"        Binding = "{Binding LOTID}"                 IsReadOnly="False" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "FINL_JUDG_CODE"     Binding = "{Binding SUBLOTJUDGE}"           IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "DFCT_GR_TYPE_CODE"  Binding = "{Binding DFCT_GR_TYPE_CODE}"     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "DFCT_GR_TYPE_CODE"  Binding = "{Binding DFCT_GR_TYPE_NAME}"     IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "DFCT_CODE"          Binding = "{Binding DFCT_CODE}"             IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "DEFECT_NAME"        Binding = "{Binding DFCT_NAME}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "REMARKS_CNTT"       Binding = "{Binding REMARKS_CNTT}"          IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "LOT 상세 유형"      Binding = "{Binding LOT_DETL_TYPE_CODE}"    IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "폐기여부"           Binding = "{Binding SUBLOTSCRAP}"           IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "LOT 상세 유형"      Binding = "{Binding LOTTYPE}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                                <!--<c1:DataGridTextColumn      Header = "TRAY_LOT_ID"        Binding = "{Binding LOTID}"                 IsReadOnly="True" HorizontalAlignment="Center" />-->
                                                <c1:DataGridTextColumn      Header = "PKG_LOT_ID"         Binding = "{Binding PROD_LOTID}"            IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "ROUTE_ID"           Binding = "{Binding ROUTID}"                IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "AVAIL_YN"           Binding = "{Binding AVAIL_YN}"              IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "CELL_LOT_TYPE"      Binding = "{Binding LOT_INFORMATION}"       IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "TRAY_LOT_TYPE"      Binding = "{Binding TRAY_LOT_INFORMATION}"  IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "HOLD_FLAG"          Binding = "{Binding HOLD_FLAG}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "HOLD_NOTE"          Binding = "{Binding HOLD_NOTE}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </c1:C1TabItem>
                        <!--조회 tabpag -->
                        <c1:C1TabItem x:Name="Search" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='SEARCH'}" Margin="0">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="auto"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="4"/>
                                        <RowDefinition Height="auto"/>
                                        <RowDefinition Height="4"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="1.5*"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="2.5*"/>
                                        <ColumnDefinition Width="13"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ConverterParameter='SEL_PERIOD',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <Grid Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="6">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <ctrlLib:LGCDatePicker  Grid.Column="0" x:Name="dtpFromDate"  DatepickerType="Date"/>
                                        <c1:C1DateTimePicker    Grid.Column="1" x:Name="dtpFromTime" CustomTimeFormat="HH:mm" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" EditMode="Time" Background="LightYellow"/>
                                        <TextBlock              Grid.Column="2" Text="~" Margin="10,0,10,0" Style="{StaticResource Content_InputForm_LabelStyle}"  HorizontalAlignment="Center" />
                                        <ctrlLib:LGCDatePicker  Grid.Column="3" x:Name="dtpToDate"  DatepickerType="Date"/>
                                        <c1:C1DateTimePicker    Grid.Column="4" x:Name="dtpToTime" CustomTimeFormat="HH:mm" HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Center" EditMode="Time" Background="LightYellow"/>
                                    </Grid>
                                    <TextBlock       Grid.Row="1" Grid.Column="7" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Margin="30,3,3,3" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox   Grid.Row="1" Grid.Column="8" x:Name="cboSearchLine"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                    <TextBlock       Grid.Row="1" Grid.Column="10" Text="{Binding ConverterParameter='MODEL', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Margin="30,3,3,3" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <uc:UcBaseComboBox   Grid.Row="1" Grid.Column="11" x:Name="cboSearchModel"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />

                                    <TextBlock       Grid.Row="1" Grid.Column="13" Text="{Binding ConverterParameter='CELL_ID', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Margin="30,3,3,3" Style="{StaticResource Content_InputForm_LabelStyle}"/>
                                    <TextBox         Grid.Row="1" Grid.Column="14" x:Name="txtSearchCellId"  Style="{StaticResource Content_InputForm_TextBoxStyle}"/>
                                    <Button          Grid.Row="1"  Grid.Column="16" HorizontalAlignment="Right" x:Name="btnSearch3" Margin="3,3,3,3"  Content="{Binding ConverterParameter=SEARCH , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}"  Cursor="Hand" Click="btnSearch3_Click" />
                                </Grid>
                                <Grid Grid.Row="3">
                                    <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    <uc:UcBaseDataGrid x:Name="dgSearch" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" IsReadOnly="False" HeadersVisibility="All" SelectionMode="MultiRange" 
                                                   LoadedRowHeaderPresenter="dgSearch_LoadedRowHeaderPresenter" RowHeaderWidth="33">
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn      Header = "CELL_ID"            Binding = "{Binding SUBLOTID}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "TRAY_LOT_ID"        Binding = "{Binding LOTID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "LOT 상세 유형"      Binding = "{Binding LOT_DETL_TYPE_CODE}"    IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "REMARKS_CNTT"       Binding = "{Binding REMARKS_CNTT}"          IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "등급"               Binding = "{Binding SUBLOTJUDGE}"           IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "MODEL_ID"           Binding = "{Binding MDLLOT_ID}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "LINE_ID"            Binding = "{Binding EQSGNAME}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "DFCT_GR_TYPE_CODE"  Binding = "{Binding DFCT_GR_TYPE_CODE}"     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "DFCT_GR_TYPE_CODE"  Binding = "{Binding DFCT_GR_TYPE_NAME}"     IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "DFCT_CODE"          Binding = "{Binding DFCT_CODE}"             IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                            <c1:DataGridTextColumn      Header = "DEFECT_NAME"        Binding = "{Binding DFCT_NAME}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "SMPL_FLAG"          Binding = "{Binding SMPL_FLAG}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "CELL_LOT_TYPE"      Binding = "{Binding LOT_INFORMATION}"       IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "TRAY_LOT_TYPE"      Binding = "{Binding TRAY_LOT_INFORMATION}"  IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "UPDDTTM"            Binding = "{Binding UPDDTTM}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn      Header = "UPDUSER"            Binding = "{Binding UPDUSER}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                        </c1:C1DataGrid.Columns>
                                    </uc:UcBaseDataGrid>
                                </Grid>
                            </Grid>
                        </c1:C1TabItem>
                        <!--취소(복구) tabpag -->
                        <c1:C1TabItem x:Name="Recover" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='CANCEL_RECOVER'}" Margin="0" Visibility="Collapsed">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                <Grid Grid.Row="1"  Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="AUTO"/>
                                        <RowDefinition Height="4"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="13"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="3"/>
                                            <ColumnDefinition Width="auto"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock      Grid.Column="0"  Text="{Binding ConverterParameter='일괄선택', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <uc:UcBaseCheckBox       x:Name="chkAllRcv"  Grid.Column="1" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False"
                                        Checked="chkHeaderAllRcv_Checked" Unchecked="chkHeaderAllRcv_Unchecked"/>

                                        <TextBlock      Grid.Column="6"  Text="{Binding ConverterParameter='CELL_CNT_SUM', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <TextBox        Grid.Column="7"  x:Name="txtInsertCellCntRcv" MinWidth="60" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>

                                        <TextBlock      Grid.Column="9" Text="{Binding ConverterParameter='INFO_ERR', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <TextBox        Grid.Column="10"  x:Name="txtBadInsertRowRcv" MinWidth="60"  Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}"/>

                                        <TextBlock      Grid.Column="12" Text="{Binding ConverterParameter='ROW_NUM', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_InputForm_LabelStyle}" HorizontalAlignment="Left"/>
                                        <TextBox        Grid.Column="14" MinWidth="60"  x:Name="txtRowCntInsertCellRcv"  Style="{StaticResource Content_InputForm_TextBoxStyle}" Text="100" TextAlignment="Right"/>

                                        <Button  x:Name="btnRefreshRcv"  Grid.Column="16"  Content="{Binding ConverterParameter=Refresh,  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl03Style}" Height="30" Cursor="Hand" Click="btnRefreshRcv_Click" HorizontalAlignment="Center" />
                                        <Button  x:Name="btnExcelRcv"    Grid.Column="18"  Content="{Binding ConverterParameter=Search,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_ModuleButtonExcelImportStyle}" Height="30" Cursor="Hand" Click="btnExcelRcv_Click" HorizontalAlignment="Center" />
                                        <Button  x:Name="btnSearchRcv"   Grid.Column="20"  Content="{Binding ConverterParameter=Search,   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Height="30" Cursor="Hand" Click="btnSearchRcv_Click" HorizontalAlignment="Center" />
                                        <Button  x:Name="btnSaveRcv"     Grid.Column="22"  Content="{Binding ConverterParameter=폐기취소, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}" Height="30" Cursor="Hand" Click="btnSaveRcv_Click" HorizontalAlignment="Center" />
                                    </Grid>

                                    <Grid Grid.Row="3" Grid.Column="1">
                                        <uc:UcBaseDataGrid x:Name="dgInputListRcv" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" IsReadOnly="False" HeadersVisibility="All" SelectionMode="MultiRange"  RowHeaderWidth="33"
                                                       LoadedRowHeaderPresenter="dgInputListRcv_LoadedRowHeaderPresenter"
                                                       LoadedColumnHeaderPresenter="dgInputListRcv_LoadedColumnHeaderPresenter" 
                                                       LoadedCellPresenter="dgInputListRcv_LoadedCellPresenter" 
                                                       UnloadedCellPresenter="dgInputListRcv_UnloadedCellPresenter"
                                                       BeginningEdit="dgInputListRcv_BeginningEdit">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn Name="CHK" Binding="{Binding CHK, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"  Width="Auto" HorizontalAlignment="Center" CanUserSort="False" />
                                                <c1:DataGridTextColumn      Header = "CELL_ID"            Binding = "{Binding SUBLOTID}"              IsReadOnly="False" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "TRAY_LOT_ID"        Binding = "{Binding LOTID}"                 IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "LOT 상세 유형"      Binding = "{Binding LOT_DETL_TYPE_CODE}"    IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "REMARKS_CNTT"       Binding = "{Binding REMARKS_CNTT}"          IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "등급"               Binding = "{Binding SUBLOTJUDGE}"           IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "MODEL_ID"           Binding = "{Binding MDLLOT_ID}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "LINE_ID"            Binding = "{Binding EQSGNAME}"              IsReadOnly="True" HorizontalAlignment="Center" />

                                                <c1:DataGridTextColumn      Header = "AVAIL_YN"           Binding = "{Binding AVAIL_YN}"              IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "ETC"                Binding = "{Binding ETC_COMMENT}"           IsReadOnly="True" HorizontalAlignment="Center" />

                                                <c1:DataGridTextColumn      Header = "DFCT_GR_TYPE_CODE"  Binding = "{Binding DFCT_GR_TYPE_CODE}"     IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "DFCT_GR_TYPE_CODE"  Binding = "{Binding DFCT_GR_TYPE_NAME}"     IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "DFCT_CODE"          Binding = "{Binding DFCT_CODE}"             IsReadOnly="True" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn      Header = "DEFECT_NAME"        Binding = "{Binding DFCT_NAME}"             IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "UPDDTTM"            Binding = "{Binding UPDDTTM}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                                <c1:DataGridTextColumn      Header = "UPDUSER"            Binding = "{Binding UPDUSER}"               IsReadOnly="True" HorizontalAlignment="Center" />
                                                
                                            </c1:C1DataGrid.Columns>
                                        </uc:UcBaseDataGrid>
                                    </Grid>
                                </Grid>
