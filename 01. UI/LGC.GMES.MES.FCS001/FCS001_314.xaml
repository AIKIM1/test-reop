<UserControl xmlns:ss="http://schemas.grapecity.com/windows/spreadsheet/2012"  x:Class="LGC.GMES.MES.FCS001.FCS001_314"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:uc="clr-namespace:LGC.GMES.MES.CMM001.Controls;assembly=LGC.GMES.MES.CMM001"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1124"
             Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="충방전기 현황">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="51"/>
                    <RowDefinition Height="8"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!--조회 영역-->
                <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                <Grid Grid.Row="0" Grid.Column="0" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="11"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="11"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="13"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1.3*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="10"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="13"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Row="1" Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock      Grid.Row="0"  Grid.Column="0" Margin="4" Text="{Binding ConverterParameter='색 범례', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" Margin="4" x:Name="cboColorLegend" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock      Grid.Row="0"  Grid.Column="0" Margin="4" Text="{Binding ConverterParameter='공정 범례', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_InputForm_LabelStyle}" />
                        <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" Margin="4" x:Name="cboOperLegend" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        <TextBlock      Grid.Row="0"  Grid.Column="2" Margin="4" Text="{Binding ConverterParameter='(다음공정)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Foreground="Red" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" />
                    </Grid>

                    <Grid Grid.Row="1" Grid.Column="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="6*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock      Grid.Row="0"  Grid.Column="0" Margin="0,8,3,7" Text="{Binding ConverterParameter='열', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_InputForm_LabelStyle}" Visibility="Hidden" />
                        <!--<TextBox        Grid.Row="0"  Grid.Column="1" Margin="4" x:Name="txtProject" Style="{StaticResource SearchCondition_TextBoxStyle}" />-->
                        <uc:UcBaseComboBox  Grid.Row="0"  Grid.Column="1" Margin="4" x:Name="cboRow" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedIndexChanged="cboRow_SelectedIndexChanged" Visibility="Hidden"/>
                    </Grid>

                    <uc:UcBaseCheckBox        Grid.Row="1"  Grid.Column="5" Margin="4" x:Name="chkTimer" Content="{Binding ConverterParameter='AUTO_TIMER', Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="False" Checked="chkTimer_Checked" Unchecked="chkTimer_Unchecked" />
                    <uc:UcBaseButton Grid.Row="1"   Grid.Column="6" Margin="4,0,4,0" x:Name="btnSearch"  Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Click="btnSearch_Click" Cursor="Hand" />
                </Grid>

                <Grid Grid.Row="2" Grid.Column="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2.5*"/>
                        <ColumnDefinition Width="450"/>
                    </Grid.ColumnDefinitions>

                    <!--조회 영역-->
                    <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#fff2f2f2"></Border>
                    <Grid   Grid.Row="0" Grid.Column="0" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="AUTO"></RowDefinition>
                        </Grid.RowDefinitions>

                        <uc:UcBaseDataGrid x:Name="dgFormation" Grid.Row="0" IsUserConfigUse = "False" IsReadOnly="True" HeadersVisibility="None" CanUserResizeRows="False" FrozenColumnCount="0" SelectionMode="SingleCell" Margin="8" GridLinesVisibility="All" FontSize="12"                                           
                                           MouseUp="dgFormation_MouseUp" 
                                           MouseDoubleClick="dgFormation_MouseDoubleClick" 
                                           MergingCells ="dgFormation_MergingCells" 
                                           LoadedCellPresenter="dgFormation_LoadedCellPresenter"   
                                           ExecuteCustomBinding="dgFormation_ExecuteCustomBinding"
                                           ExecuteDataCompleted="dgFormation_ExecuteDataCompleted">
                            <c1:C1DataGrid.Columns>

                            </c1:C1DataGrid.Columns>
                        </uc:UcBaseDataGrid>
                        <Border Grid.Row="2" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                        <Grid Grid.Row="2" x:Name="OuterMgformGrid" Visibility="Collapsed" Height="140" >
                            <Grid Grid.Row="0">
                                
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*"/>
                                    
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1.8*"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>
                    
                                <Border Grid.Row="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                                <Grid   Grid.Row="0" Grid.Column="0">
                                    <c1:C1DataGrid x:Name="dgOuterMgform" Grid.Row="0"  IsReadOnly="False" HeadersVisibility="Column" FrozenColumnCount="2" SelectionMode="SingleRow" Margin="8"  >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn      Width="20"   Header = "NO"       Binding = "{Binding MDF_TIME_SEQ}"    HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "라우터"    Binding = "{Binding ROUTE_ID}"        HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "LANE"      Binding = "{Binding LANE_ID}"         HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="50"   Header = "모드"      Binding = "{Binding MODE}"            HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "TRAY_ID"   Binding = "{Binding CSTID}"           HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "발생시간"   Binding = "{Binding UPDDTTM}"         HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "INSUSER"   Binding = "{Binding UPDUSERID}"       HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="80"   Header = "이동라인"   Binding = "{Binding NEXT_LANE_ID}"    HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "EQPT_FROM" Binding = "{Binding FROM_EQP_ID}"     HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="150" Header = "PORT ID"   Binding = "{Binding PORT_ID}"         HorizontalAlignment="Center"     IsReadOnly="True" Visibility="Collapsed"/>
                                            <c1:DataGridTemplateColumn>
                                                <c1:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <Button x:Name="btnForce" Width="150" Content="{Binding ConverterParameter='버퍼비우기' , Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonSpecialStyle}"  Cursor="Hand" Click="btnBufferListEmpty_Click"/>
                                                    </DataTemplate>
                                                </c1:DataGridTemplateColumn.CellTemplate>
                                            </c1:DataGridTemplateColumn>
                                        </c1:C1DataGrid.Columns>
                                    </c1:C1DataGrid>
     
                                </Grid>
                                <Grid Grid.Row="0" Grid.Column="1">

                                    <c1:C1DataGrid x:Name="dgLegend" Grid.Row="0" IsReadOnly="True" HeadersVisibility="None" FrozenColumnCount="0" SelectionMode="SingleRow" Margin="8" LoadedCellPresenter="dgLegend_LoadedCellPresenter" FontSize="10" >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "CODE"      Binding = "{Binding CODE}"          HorizontalAlignment="Center"   IsReadOnly="True" Visibility="Hidden"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "Legend_0"  Binding = "{Binding Legend_0}"      HorizontalAlignment="Left"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "Legend_1"  Binding = "{Binding Legend_1}"      HorizontalAlignment="Left"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "Legend_2"  Binding = "{Binding Legend_2}"      HorizontalAlignment="Left"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "Legend_3"  Binding = "{Binding Legend_3}"      HorizontalAlignment="Left"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "Legend_4"  Binding = "{Binding Legend_4}"      HorizontalAlignment="Left"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "Legend_5"  Binding = "{Binding Legend_5}"      HorizontalAlignment="Left"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "Legend_6"  Binding = "{Binding Legend_6}"      HorizontalAlignment="Left"     IsReadOnly="True"/>
                                            <c1:DataGridTextColumn      Width="Auto" Header = "Legend_7"  Binding = "{Binding Legend_7}"      HorizontalAlignment="Left"     IsReadOnly="True"/>
                                        </c1:C1DataGrid.Columns>

                                    </c1:C1DataGrid>
                                </Grid>

                            </Grid>



                        </Grid>
                    </Grid>

                    <Grid Grid.Row="0" Grid.Column="1">

                        <Border Grid.Row="0" Grid.Column="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                        <Grid Grid.Row="0" Grid.Column="1" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="2*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1.3*"/>
                                <RowDefinition Height="8"/>
                                <RowDefinition Height="1*"/>

                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                                <Grid Grid.Row ="0" Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                        <RowDefinition Height="8"/>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>

                                    <Grid Grid.Row="0" Grid.Column="0" ScrollViewer.VerticalScrollBarVisibility="Auto">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!--백그라운드용-->
                                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" Background="#fff2f2f2" BorderBrush="#ffd1d1d1" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}" Margin="10,8,0,7"><Run Text="{Binding ConverterParameter='표시방식', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                        <ScrollViewer Grid.Row="1" Grid.Column="0" HorizontalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1" x:Name="scrollViewer" >
                                            <Grid Grid.Row="1" Grid.Column="0" x:Name="gdDisplayType">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="13"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="13"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <uc:UcBaseRadioButton Grid.Row="1" Grid.Column="1" Margin="4" Name="rdoTrayId"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Tray ID'}"  GroupName="RadioButton_Group1" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                                <uc:UcBaseRadioButton Grid.Row="2" Grid.Column="1" Margin="4" Name="rdoLotId"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Lot ID'}"  GroupName="RadioButton_Group1" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                                <uc:UcBaseRadioButton Grid.Row="3" Grid.Column="1" Margin="4" Name="rdoRouteNextOp"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='차기공정 Route'}"  GroupName="RadioButton_Group1" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                                <uc:UcBaseRadioButton Grid.Row="4" Grid.Column="1" Margin="4" Name="rdoTime"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='경과시간'}"  GroupName="RadioButton_Group1" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                                <uc:UcBaseRadioButton Grid.Row="5" Grid.Column="1" Margin="4" Name="rdoAvgTemp"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='평균온도'}"  GroupName="RadioButton_Group1" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                            </Grid>
                                        </ScrollViewer>
                                    </Grid>

                                    <Grid Grid.Row="2" Grid.Column="0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="34"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <!--백그라운드용-->
                                        <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                                        <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" Background="#fff2f2f2" BorderBrush="#ffd1d1d1" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}" Margin="5"><Run Text="{Binding ConverterParameter='DETAIL_MODE', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                        <ScrollViewer Grid.Row="1" Grid.Column="0" HorizontalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1" x:Name="scrollViewer2" >
                                            <Grid Grid.Row="1" Grid.Column="0" x:Name="gdDetailType" >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="13"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="13"/>
                                                </Grid.ColumnDefinitions>

                                                <uc:UcBaseRadioButton Grid.Row="1" Grid.Column="1" Margin="4" Name="rdoTrayInfo"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Tray 정보조회'}"  GroupName="RadioButton_Group2" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                                <uc:UcBaseRadioButton Grid.Row="2" Grid.Column="1" Margin="4" Name="rdoEqpControl"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='설비 작업 제어'}"  GroupName="RadioButton_Group2" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                                <uc:UcBaseRadioButton Grid.Row="3" Grid.Column="1" Margin="4" Name="rdoTempInfo"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='온도 모니터링'}"  GroupName="RadioButton_Group2" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                                <uc:UcBaseRadioButton Grid.Row="4" Grid.Column="1" Margin="4" Name="rdoTrayHistory"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='Tray 이력'}"  GroupName="RadioButton_Group2" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                                <uc:UcBaseRadioButton Grid.Row="5" Grid.Column="1" Margin="4" Name="rdoUseTime"  Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='수리내역'}"  GroupName="RadioButton_Group2" Style="{StaticResource SearchCondition_RadioButtonStyle}"/>
                                            </Grid>
                                        </ScrollViewer>
                                    </Grid>
                                </Grid>

                                <Border Grid.Row="1" Grid.Column="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                                <Grid Grid.Row ="1" Grid.Column="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="1*"/>
                                    </Grid.RowDefinitions>

                                    <c1:C1TabControl Grid.Row="0" x:Name="tcColor">
                                        <!--온도 -->
                                        <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='온도'}" >
                                            <Grid Grid.Row="0">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid   Grid.Row="0" Grid.Column="0">
                                                    <c1:C1DataGrid x:Name="dgTemp" Grid.Row="1" IsReadOnly="True" HeadersVisibility="None" FrozenColumnCount="0" SelectionMode="SingleRow" Margin="8" >
                                                        <c1:C1DataGrid.Columns>
                                                            <c1:DataGridTextColumn      Width="Auto" Header = "[*]"             Binding = "{Binding POINT}"          HorizontalAlignment="Center"     IsReadOnly="True"/>
                                                            <c1:DataGridTextColumn      Width="Auto" Header = "[U,JIG]"         Binding = "{Binding JIG_U}"          HorizontalAlignment="Center"     IsReadOnly="True"/>
                                                            <c1:DataGridTextColumn      Width="Auto" Header = "[U,POWER]"       Binding = "{Binding POWER_U}"        HorizontalAlignment="Center"     IsReadOnly="True"/>
                                                            <c1:DataGridTextColumn      Width="Auto" Header = "[L,JIG]"         Binding = "{Binding JIG_L}"          HorizontalAlignment="Center"     IsReadOnly="True"/>
                                                            <c1:DataGridTextColumn      Width="Auto" Header = "[L,POWER]"       Binding = "{Binding POWER_L}"        HorizontalAlignment="Center"     IsReadOnly="True"/>
                                                        </c1:C1DataGrid.Columns>
                                                        <c1:C1DataGrid.TopRows>
                                                            <c1:DataGridColumnHeaderRow />
                                                            <c1:DataGridColumnHeaderRow />
                                                        </c1:C1DataGrid.TopRows>
                                                    </c1:C1DataGrid>
                                                </Grid>

                                            </Grid>
                                        </c1:C1TabItem>

                                        <!--색 -->
                                        <c1:C1TabItem Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='색'}" >
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="*"/>
                                                </Grid.RowDefinitions>

                                                <Grid   Grid.Row="0" Grid.Column="0" >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="*"/>
                                                    </Grid.RowDefinitions>
                                                    
                                                    <Grid Grid.Row="0">
                                                        <c1:C1DataGrid x:Name="dgColor" Grid.Row="1" IsReadOnly="True" HeadersVisibility="Column" FrozenColumnCount="0" SelectionMode="SingleRow" Margin="8" LoadedCellPresenter="dgColor_LoadedCellPresenter" >
                                                            <c1:C1DataGrid.Columns>
                                                                <c1:DataGridTextColumn      Width="120" Header = "Color"         Binding = "{Binding CBO_NAME}"     HorizontalAlignment="Center"     IsReadOnly="True"/>
                                                                <c1:DataGridTextColumn      Width="120" Header = "Color"         Binding = "{Binding ATTRIBUTE1}"   HorizontalAlignment="Center"     IsReadOnly="True" Visibility="Collapsed"/>
                                                            </c1:C1DataGrid.Columns>
                                                        </c1:C1DataGrid>
                                                </Grid>


                                            </Grid>

                                            </Grid>
                                        </c1:C1TabItem>


                                    </c1:C1TabControl>

                                </Grid>
                            </Grid>

                            <Border Grid.Row="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                            <Grid Grid.Row="2" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="1*"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="1*"/>
                                </Grid.ColumnDefinitions>

                                <!--부동률 -->

                                <Grid Grid.Row="0"  Grid.Column="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" Background="#fff2f2f2" BorderBrush="#ffd1d1d1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <TextBlock Grid.Row="0" Style="{StaticResource Content_ModuleTitleStyle}" Margin="5"><Run Text="{Binding ConverterParameter='부동률', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>

                                    <Border Grid.Row="1" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                                    <Grid   Grid.Row="1" Grid.Column="0">
                                        <c1:C1DataGrid x:Name="dgLoss" Grid.Row="1" IsReadOnly="False" HeadersVisibility="Column" FrozenColumnCount="0" SelectionMode="SingleRow" Margin="8" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTextColumn      Width="Auto" Header = "RODER_TYPE"     Binding = "{Binding RODER_TYPE}"           HorizontalAlignment="Center"     IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn      Width="Auto" Header = "부동사유"       Binding = "{Binding NON_OPERNOTE}"           HorizontalAlignment="Center"     IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Width="Auto" Header = "부동수량"       Binding = "{Binding NON_OPER_CNT}"           HorizontalAlignment="Center"     IsReadOnly="True"/>
                                                <c1:DataGridTextColumn      Width="Auto" Header = "부동률"         Binding = "{Binding NON_OPER_RATE}"          HorizontalAlignment="Center"     IsReadOnly="True"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>

                                </Grid>

                                <!--가동률 -->

                                <Grid Grid.Row="0" Grid.Column="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="34"/>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_InputForm_ContentBorderStyle}" />
                                    <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" BorderThickness="1" Background="#fff2f2f2" BorderBrush="#ffd1d1d1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <TextBlock Grid.Row="0" Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" Margin="5"><Run Text="{Binding ConverterParameter='가동률', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/></TextBlock>
                                    
                                    <Border Grid.Row="1" Grid.Column="0" Grid.RowSpan="2" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"/>
                                    <Grid   Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                        <c1:C1DataGrid x:Name="dgTrayShare" Grid.Row="1" IsReadOnly="False" HeadersVisibility="Column" FrozenColumnCount="0" SelectionMode="SingleRow" Margin="8" >
                                            <c1:C1DataGrid.Columns>
