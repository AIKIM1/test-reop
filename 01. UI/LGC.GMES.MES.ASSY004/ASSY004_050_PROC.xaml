<UserControl x:Class="LGC.GMES.MES.ASSY004.ASSY004_050_PROC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:cmm001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.CMM001;component/PopupFindControlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                </Grid>
            </DataTemplate>
        </Grid.Resources>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Panel.ZIndex="999" Visibility="Collapsed"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="51" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <!-- btn menus area -->
                <Grid x:Name="ButtonArea" Grid.Row="0" Margin="0,-84,0,0">
                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="42" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="1" x:Name="btnRunStart" Content="{Binding ConverterParameter='작업시작',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl05Style}" Click="btnRunStart_Click"/>
                        <Button Grid.Row="0" Grid.Column="3" x:Name="btnEqptEnd" Content="{Binding ConverterParameter='장비완료',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl05Style}" Click="btnEqptEnd_Click"/>
                        <Button Grid.Row="0" Grid.Column="5" x:Name="btnEnd" Content="{Binding ConverterParameter='실적확정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControlBarCodeStyle}" Click="btnEnd_Click" />
                    </Grid>
                </Grid>

                <!-- search area -->
                <Grid x:Name="SearchArea" Grid.Row="0">
                    <!-- 경계선 -->
                    <Border Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="13" />
                        </Grid.ColumnDefinitions>

                        <!-- Area -->
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <TextBox x:Name="txtArea" Grid.Column="1" Text="폴란드 3동" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" IsReadOnly="True"/>
                        </Grid>

                        <!-- Line -->
                        <Grid Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>

                        <!-- Equipment -->
                        <Grid Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEquipment_SelectedValueChanged"/>
                        </Grid>

                        <!-- Search Button -->
                        <Button Grid.Column="7" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>
                </Grid>

                <!-- 작업 대상 -->
                <Grid Grid.Row="2">
                    <!-- 경계선 -->
                    <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />

                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 경계선 -->
                        <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>

                        <!-- Table Title -->
                        <Grid Grid.Row="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                        </Grid>

                        <!-- Table Grid -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <!-- datagrid-->
                            <Grid Grid.Row="1" Grid.Column="1" >
                                <c1:C1DataGrid x:Name="dgProductLot" Grid.Row="2" Grid.Column="1" IsReadOnly="True" HeadersVisibility="None"  FrozenTopRowsCount="2" SelectionMode="SingleRow">
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn EditOnSelection="True" Width="Auto" HorizontalAlignment="Center" >
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgWaitWipChoiceGroup" IsChecked="{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" Checked="rbProductLotChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn Header = "[LOTID, LOTID]" Binding = "{Binding LOTID}" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn Header = "[제품ID, 제품ID]" Binding = "{Binding PRODID}" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn Header = "[프로젝트, 프로젝트]" Binding = "{Binding PRJT_NAME}" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn Header = "[상태, 상태]" Binding = "{Binding WIPSTAT}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn Header = "[상태, 상태]" Binding = "{Binding WIPSNAME}" HorizontalAlignment="Center" />
                                        <c1:DataGridNumericColumn Header = "[완성수량, 바구니수]" Binding = "{Binding BOXCNT}" HorizontalAlignment="Right" Format="#,##0" />
                                        <c1:DataGridNumericColumn Header = "[완성수량, CELL수]" Binding = "{Binding WIPQTY}" HorizontalAlignment="Right" Format="#,##0" />
                                        <c1:DataGridNumericColumn Header = "[설비보고CELL수량, 투입량]" Binding = "{Binding EQPT_INPUT_QTY}" HorizontalAlignment="Right" Format="#,##0" />
                                        <c1:DataGridNumericColumn Header = "[설비보고CELL수량, 양품량]" Binding = "{Binding EQPT_END_QTY}" HorizontalAlignment="Right" Format="#,##0" />
                                        <c1:DataGridNumericColumn Header = "[설비보고CELL수량, 불량량]" Binding = "{Binding EQPT_DFCT_QTY}" HorizontalAlignment="Right" Format="#,##0" />
                                        <c1:DataGridTextColumn Header = "[작업시작일시, 작업시작일시]" Binding = "{Binding WIPDTTM_ST}" HorizontalAlignment="Center" />
                                        <c1:DataGridTextColumn Header = "[작업완료일시, 작업완료일시]" Binding = "{Binding EQPT_END_DTTM}" HorizontalAlignment="Center" />
                                    </c1:C1DataGrid.Columns>

                                    <!-- 맨 위 칼럼을 두 줄로 만들어 준다. Column의 Header에 [A,B]의 형태로 작성 / [A,A]로 작성시 Cell이 하나로 자동 통합 -->
                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <c1:DataGridColumnHeaderRow />
                                    </c1:C1DataGrid.TopRows>

                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Bottom Contents -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <!-- 투입화면 -->
                    <Grid Grid.Column="0">
                        <!-- 경계선 -->
                        <Border Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 경계선 -->
                            <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>

                            <!-- Title -->
                            <Grid Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='투입', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                <!-- 숨겨진 요소들 -->
                                <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='투입위치', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Visibility="Collapsed"/>
                                <c1:C1ComboBox Grid.Row="0" Grid.Column="3" Margin="8,3,0,3" x:Name="cboMountPstsID_c" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE" Visibility="Collapsed"/>
                            </Grid>

                            <!-- Tab -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <c1:C1TabControl Grid.Row="1" Grid.Column="1">
                                    <c1:C1TabItem Header="{Binding ConverterParameter='자재투입', Converter={StaticResource GlobalObjectDicConverter}}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="8"/>
                                            </Grid.RowDefinitions>

                                            <!-- 상단 메뉴 -->
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- HalfType -->
                                                <Grid Grid.Column="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="HALFTYPE" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="2" x:Name="tbHalfCnt" Text="0" VerticalAlignment="Center"/>
                                                </Grid>

                                                <!-- MonoType -->
                                                <Grid Grid.Column="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="MONOTYPE" VerticalAlignment="Center"/>
                                                    <TextBlock Grid.Column="2" x:Name="tbMonoCnt" Text="0" VerticalAlignment="Center"/>
                                                </Grid>

                                                <!-- 투입LOTID -->
                                                <Grid Grid.Column="4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='투입LOTID(CARRIERID)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                    <TextBox Grid.Column="2" x:Name="txtInsertLotID_InputMtrlTab" Style="{StaticResource Content_InputForm_TextBoxStyle}" MinWidth="80" MaxWidth="120" CharacterCasing="Upper" KeyDown="txtInsertLotID_InputMtrlTab_KeyDown"/>
                                                </Grid>

                                                <!-- 세로경계선 -->
                                                <Border Grid.Column="6" Style="{StaticResource Content_Separator_BorderStyle}" />

                                                <!-- Buttons -->
                                                <Grid Grid.Column="8">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0" x:Name="btnCancelInput"  Content="{Binding ConverterParameter='투입취소',Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnCancelInput_Click"/>
                                                    <Button Grid.Column="2" x:Name="btnInputComplete" Content="{Binding ConverterParameter='투입배출',Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInputComplete_Click" />
                                                </Grid>
                                            </Grid>

                                            <!-- datagrid -->
                                            <c1:C1DataGrid x:Name="dgInput" Grid.Row="3" IsReadOnly="True" HeadersVisibility="Column" FrozenTopRowsCount="2" SelectionMode="SingleRow" >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridCheckBoxColumn Width="Auto" Name = "CHK"                      Binding = "{Binding CHK}"     HorizontalAlignment="Center" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                    <c1:DataGridTextColumn        Header = "구분"     Binding = "{Binding MOUNT_MTRL_TYPE_CODE}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn        Header = "구분"     Binding = "{Binding MOUNT_MTRL_TYPE_NAME}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn        Header = "구분"     Binding = "{Binding MTRL_CLSS_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn        Header = "위치"     Binding = "{Binding EQPT_MOUNT_PSTN_ID}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn        Header = "위치"     Binding = "{Binding EQPT_MOUNT_PSTN_NAME}" HorizontalAlignment="Left"   IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn        Header = "투입LOT"  Binding = "{Binding INPUT_LOTID}"          HorizontalAlignment="Center" />
                                                    <c1:DataGridTextColumn        Header = "카세트ID" Binding = "{Binding CSTID}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridNumericColumn     Header = "수량"     Binding = "{Binding WIPQTY}"            HorizontalAlignment="Center" IsReadOnly="True" Format="#,##0" />
                                                    <c1:DataGridTextColumn        Header = "제품ID"   Binding = "{Binding PRODID}"               HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn        Header = "투입변경일시" Binding = "{Binding MOUNT_STAT_CHG_DTTM}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                    <c1:C1TabItem Header="{Binding ConverterParameter='대기매거진',Converter={StaticResource GlobalObjectDicConverter}}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="8"/>
                                            </Grid.RowDefinitions>

                                            <!-- 상단 메뉴 -->
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Half/MonoType -->
                                                <Grid Grid.Column="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="10"/>
                                                        <ColumnDefinition Width="*"/>
                                                    </Grid.ColumnDefinitions>

                                                    <RadioButton Grid.Column="0" x:Name="rbHalf" Content="HALFTYPE" GroupName="typeGroup" Checked="rbType_Checked"/>
                                                    <RadioButton Grid.Column="2" x:Name="rbMono" Content="MONOTYPE" GroupName="typeGroup" Checked="rbType_Checked"/>
                                                </Grid>

                                                <!-- LOTID -->
                                                <Grid Grid.Column="2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='LOTID(CARRIERID)', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                    <TextBox Grid.Column="2" x:Name="txtInsertLotID_WaitMagTab" Style="{StaticResource Content_InputForm_TextBoxStyle}" MinWidth="80" MaxWidth="120" CharacterCasing="Upper" KeyDown="txtInsertLotID_WaitMagTab_KeyDown"/>
                                                </Grid>

                                                <!-- 투입위치 -->
                                                <Grid Grid.Column="4">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='투입위치', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" VerticalAlignment="Center"/>
                                                    <c1:C1ComboBox Grid.Column="2" x:Name="cboMountPstsID" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" VerticalAlignment="Center"/>
                                                </Grid>

                                                <!-- 세로경계선 -->
                                                <Border Grid.Column="6" Style="{StaticResource Content_Separator_BorderStyle}" />

                                                <!-- 투입버튼 -->
                                                <Button Grid.Column="8" x:Name="btnInsertMtrl" Content="{Binding ConverterParameter='투입', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnInsertMtrl_Click"/>
                                            </Grid>

                                            <!-- datagrid -->
                                            <c1:C1DataGrid Grid.Row="3" x:Name="dgWaitMagazine" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="SingleRow" CurrentCellChanged="dgWaitMagazine_CurrentCellChanged">

                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridCheckBoxColumn Width="Auto" Name = "CHK"                      Binding = "{Binding CHK}"     HorizontalAlignment="Center" IsReadOnly="True" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                    <c1:DataGridNumericColumn  Width="40"   Header = "NO."     Binding = "{Binding NO}"            HorizontalAlignment="Center" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn        Header = "LOTID"     Binding = "{Binding LOTID}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn        Header = "제품ID"     Binding = "{Binding PRODID}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn        Header = "프로젝트명"     Binding = "{Binding PRJT_NAME}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridNumericColumn      Header = "수량"     Binding = "{Binding WIPQTY}"            HorizontalAlignment="Center" IsReadOnly="True" Format="#,##0" />
                                                    <c1:DataGridTextColumn        Width="Auto" Header = "단위"     Binding = "{Binding LOTUID}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn        Header = "제품"     Binding = "{Binding PRODNAME}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn        Header = "극성"     Binding = "{Binding PRODUCT_LEVEL2_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn       Header = "상태"     Binding = "{Binding WIPSTAT}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                    <c1:C1TabItem Header="{Binding ConverterParameter='투입이력', Converter={StaticResource GlobalObjectDicConverter}}" >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="8"/>
                                            </Grid.RowDefinitions>

                                            <!-- 상단 메뉴 -->
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 투입위치 -->
                                                <Grid Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='투입위치', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
