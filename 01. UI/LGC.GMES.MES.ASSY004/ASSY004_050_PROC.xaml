                                                </Grid>
                                            </Grid>

                                            <!-- datagrid -->
                                            <c1:C1DataGrid Grid.Row="3" x:Name="dgInputHist" FrozenBottomRowsCount="1" HeadersVisibility="None" SelectionMode="MultiRange" FrozenTopRowsCount="2" >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridCheckBoxColumn Width="Auto" Name="CHK" Binding="{Binding CHK, Mode=TwoWay}" IsReadOnly="False" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                    <c1:DataGridTextColumn Header="[INPUT_SEQNO, INPUT_SEQNO]"  Binding="{Binding INPUT_SEQNO}" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn Header="[LOTID, LOTID]"              Binding="{Binding LOTID}" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL" HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn Header="[투입LOT, 투입LOT]"          Binding="{Binding INPUT_LOTID}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn Header="[Carrier ID, Carrier ID]"    Binding="{Binding CSTID}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn Header="[상태, 상태]"                Binding="{Binding WIPSTAT}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridTextColumn Header="[EQPT_MOUNT_PSTN_ID, EQPT_MOUNT_PSTN_ID]" Binding="{Binding EQPT_MOUNT_PSTN_ID}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="[투입위치, 투입위치]"        Binding="{Binding EQPT_MOUNT_PSTN_NAME}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                    <c1:DataGridNumericColumn Header="[투입수량, 투입수량]"     Binding="{Binding INPUT_QTY}" HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True">
                                                        <c1:DataGridAggregate.AggregateFunctions>
                                                            <c1:DataGridAggregatesCollection>
                                                                <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}"></c1:DataGridAggregateSum>
                                                            </c1:DataGridAggregatesCollection>
                                                        </c1:DataGridAggregate.AggregateFunctions>
                                                    </c1:DataGridNumericColumn>
                                                    <c1:DataGridNumericColumn Header="[LOSS, WIP_QTY_DIFF]"           Binding="{Binding PRE_PROC_LOSS_QTY}" HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True">
                                                        <c1:DataGridAggregate.AggregateFunctions>
                                                            <c1:DataGridAggregatesCollection>
                                                                <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}"></c1:DataGridAggregateSum>
                                                            </c1:DataGridAggregatesCollection>
                                                        </c1:DataGridAggregate.AggregateFunctions>
                                                    </c1:DataGridNumericColumn>
                                                    <c1:DataGridNumericColumn Header="[LOSS, 고정]"             Binding="{Binding FIX_LOSS_QTY}" HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True">
                                                        <c1:DataGridAggregate.AggregateFunctions>
                                                            <c1:DataGridAggregatesCollection>
                                                                <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}"></c1:DataGridAggregateSum>
                                                            </c1:DataGridAggregatesCollection>
                                                        </c1:DataGridAggregate.AggregateFunctions>
                                                    </c1:DataGridNumericColumn>
                                                    <c1:DataGridNumericColumn Header="[LOSS, 자공정]"           Binding="{Binding CURR_PROC_LOSS_QTY}" HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True">
                                                        <c1:DataGridAggregate.AggregateFunctions>
                                                            <c1:DataGridAggregatesCollection>
                                                                <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}"></c1:DataGridAggregateSum>
                                                            </c1:DataGridAggregatesCollection>
                                                        </c1:DataGridAggregate.AggregateFunctions>
                                                    </c1:DataGridNumericColumn>
                                                    <c1:DataGridNumericColumn Header="[잔량, 잔량]"             Binding="{Binding RMN_QTY}" HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True">
                                                        <c1:DataGridAggregate.AggregateFunctions>
                                                            <c1:DataGridAggregatesCollection>
                                                                <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}"></c1:DataGridAggregateSum>
                                                            </c1:DataGridAggregatesCollection>
                                                        </c1:DataGridAggregate.AggregateFunctions>
                                                    </c1:DataGridNumericColumn>
                                                    <c1:DataGridTextColumn Header="[수정자, 수정자]"            Binding="{Binding UPDUSER}" HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="[투입시간, 투입시간]"        Binding="{Binding INPUT_DTTM}" HorizontalAlignment="Center" IsReadOnly="True" />
                                                </c1:C1DataGrid.Columns>
                                                <c1:C1DataGrid.BottomRows>
                                                    <c1:DataGridSummaryRow RowStyle="{StaticResource SummaryRowStyle}" />
                                                </c1:C1DataGrid.BottomRows>
                                                <c1:C1DataGrid.TopRows>
                                                    <c1:DataGridColumnHeaderRow />
                                                    <c1:DataGridColumnHeaderRow />
                                                </c1:C1DataGrid.TopRows>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                </c1:C1TabControl>
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- 배출화면 -->
                    <Grid Grid.Column="2">
                        <!-- 경계선 -->
                        <Border Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 경계선 -->
                            <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                            
                            <!-- Title -->
                            <Grid Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='배출', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </Grid>

                            <!-- Tab -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <c1:C1TabControl Grid.Row="1" Grid.Column="1">
                                    <c1:C1TabItem Header="{Binding ConverterParameter='생산반제품', Converter={StaticResource GlobalObjectDicConverter}}">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="8"/>
                                            </Grid.RowDefinitions>

                                            <!-- 상단 메뉴 -->
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="10"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="5"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- 수량 -->
                                                <Grid Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                    <TextBox Grid.Column="2" x:Name="txtCreateLotCnt" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MinWidth="80" MaxWidth="120" IsReadOnly="False"/>
                                                </Grid>

                                                <!-- CarrierID -->
                                                <Grid Grid.Column="3">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Grid.Column="0" Text="{Binding ConverterParameter='Carrier ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                    <TextBox Grid.Column="2" x:Name="txtCarrierID" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" MinWidth="100" MaxWidth="120" IsReadOnly="False"/>
                                                </Grid>

                                                <Border Grid.Column="5" Style="{StaticResource Content_Separator_BorderStyle}" />

                                                <!-- Buttons -->
                                                <Grid Grid.Column="7">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    
                                                    <Button Grid.Column="0" x:Name="btnCreateOutLot" Content="{Binding ConverterParameter='생성',Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnCreateOutLot_Click" />
                                                    <Button Grid.Column="2" x:Name="btnDeleteOutLot" Content="{Binding ConverterParameter='삭제',Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDeleteOutLot_Click"/>
                                                    <Button Grid.Column="4" x:Name="btnSaveOutLot" Content="{Binding ConverterParameter='저장',Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnSaveOutLot_Click"/>
                                                </Grid>
                                            </Grid>
                                            
                                            <!-- datagrid -->
                                            <Grid Grid.Row="3">
                                                <Grid.Resources>
                                                    <DataTemplate x:Key="ResultTemplate">
                                                        <Grid>
                                                            <Grid.ColumnDefinitions>
                                                                <ColumnDefinition Width="*"/>
                                                                <ColumnDefinition Width="*"/>
                                                            </Grid.ColumnDefinitions>
                                                            <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                                                        </Grid>
                                                    </DataTemplate>
                                                </Grid.Resources>
                                                <c1:C1DataGrid x:Name="dgOutLot" IsReadOnly="False" HeadersVisibility="Column" FrozenBottomRowsCount="1" SelectionMode="SingleCell">
                                                    <c1:C1DataGrid.Columns>
                                                        <c1:DataGridCheckBoxColumn Binding = "{Binding CHK, Mode=TwoWay}" Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                        <c1:DataGridTextColumn Header = "LOTID" Binding = "{Binding LOTID}" IsReadOnly="True" HorizontalAlignment="Center" />
                                                        <c1:DataGridTextColumn Header = "CarrierID" Binding = "{Binding CSTID}" IsReadOnly="True" HorizontalAlignment="Center"/>
                                                        <c1:DataGridTextColumn Header = "상태" Binding = "{Binding WIPSTAT}" IsReadOnly="True" HorizontalAlignment="Center"/>
                                                        <c1:DataGridNumericColumn Header = "수량" Binding = "{Binding WIPQTY, Mode=TwoWay}" HorizontalAlignment="Right" Format="#,##0" EditOnSelection="True" Minimum="0" ShowButtons="False" Width="Auto" >
                                                            <c1:DataGridAggregate.AggregateFunctions>
                                                                <c1:DataGridAggregatesCollection>
                                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" />
                                                                </c1:DataGridAggregatesCollection>
                                                            </c1:DataGridAggregate.AggregateFunctions>
                                                        </c1:DataGridNumericColumn>
                                                        <c1:DataGridTextColumn Header = "생성시간" Binding = "{Binding INSDTTM}" IsReadOnly="True" HorizontalAlignment="Center" />
                                                    </c1:C1DataGrid.Columns>

                                                    <c1:C1DataGrid.BottomRows>
                                                        <c1:DataGridSummaryRow x:Name="summary" RowStyle="{StaticResource SummaryRowStyle}"/>
                                                    </c1:C1DataGrid.BottomRows>
                                                </c1:C1DataGrid>
                                            </Grid>
                                        </Grid>
                                    </c1:C1TabItem>
                                    <c1:C1TabItem Header="{Binding ConverterParameter='불량/Loss/물품청구', Converter={StaticResource GlobalObjectDicConverter}}" >
                                        <Grid>
                                            <Grid.Resources>
                                                <DataTemplate x:Key="ResultTemplate">
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="6"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Grid.Column="0" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                                                    </Grid>
                                                </DataTemplate>
                                            </Grid.Resources>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="8"/>
                                            </Grid.RowDefinitions>

                                            <!-- 상단메뉴 -->
                                            <Grid Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <Button Grid.Column="1" x:Name="btnDefectSave"       Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnDefectSave_Click"/>
                                            </Grid>

                                            <!-- datagrid -->
                                            <c1:C1DataGrid Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="3" x:Name="dgDefect" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleCell" 
                                                               LoadedCellPresenter ="dgDefect_LoadedCellPresenter" 
                                                               BeginningEdit ="dgDefect_BeginningEdit" 
                                                               UnloadedCellPresenter="dgDefect_UnloadedCellPresenter" >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn        Header = "활동ID"         Binding = "{Binding ACTID}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn        Header = "활동명"         Binding = "{Binding ACTNAME}"            HorizontalAlignment="Center" IsReadOnly="True" ctrlLib:DataGridMergeExtension.MergeMode="VERTICAL"/>
                                                    <c1:DataGridTextColumn        Header = "불량코드"       Binding = "{Binding RESNCODE}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn        Header = "활동사유명"     Binding = "{Binding RESNNAME}"           HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn        Header = "불량명"         Binding = "{Binding DFCT_CODE_DETL_NAME}" HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn        Header = "불량코드명"     Binding = "{Binding DFCT_CODE_NAME}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn        Header = "불량상세명"     Binding = "{Binding DFCT_DETL_NAME}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn        Header = "부품"           Binding = "{Binding DFCT_PART_NAME}"     HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn        Header = "불량코드"       Binding = "{Binding DFCT_CODE}"          HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn        Header = "불량상세코드"   Binding = "{Binding DFCT_DETL_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn        Header = "불량부품코드"   Binding = "{Binding DFCT_PART_CODE}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridTextColumn        Header = "코스트센터코드" Binding = "{Binding COST_CNTR_ID}"       HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                    <c1:DataGridNumericColumn     Header = "장비불량수량"   Binding = "{Binding EQP_DFCT_QTY}"       HorizontalAlignment="Right"  IsReadOnly="True" Format="#,##0"/>
                                                    <c1:DataGridNumericColumn     Header = "수량"           Binding = "{Binding RESNQTY}"            HorizontalAlignment="Right"  Format="#,##0" EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                                    <c1:DataGridTextColumn        Header = "코스트센터"     Binding = "{Binding COST_CNTR_NAME}"     HorizontalAlignment="Left" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn        Header = "DFCT_QTY_CHG_BLOCK_FLAG" Binding = "{Binding DFCT_QTY_CHG_BLOCK_FLAG}"       HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridNumericColumn     Header = "변경전수량"     Binding = "{Binding ORG_RESNQTY}"        HorizontalAlignment="Right"  IsReadOnly="True" Format="#,##0" Visibility="Collapsed" />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                    <c1:C1TabItem Header="{Binding ConverterParameter='설비불량정보', Converter={StaticResource GlobalObjectDicConverter}}" >
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8"/>
                                                <RowDefinition Height="*"/>
                                                <RowDefinition Height="8"/>
                                            </Grid.RowDefinitions>

                                            <!-- datagrid -->
                                            <c1:C1DataGrid Grid.Row="1" x:Name="dgEqpFaulty" IsReadOnly="True" HeadersVisibility="Column" SelectionMode="MultiRange" 
                                                               LoadedCellPresenter="dgEqpFaulty_LoadedCellPresenter" 
                                                               MouseDoubleClick="dgEqpFaulty_MouseDoubleClick" 
                                                               UnloadedCellPresenter="dgEqpFaulty_UnloadedCellPresenter">
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridTextColumn Header="설비불량코드" Binding="{Binding EQPT_DFCT_CODE}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="설비불량명" Binding="{Binding EQPT_DFCT_NAME}" HorizontalAlignment="Center" />
                                                    <c1:DataGridNumericColumn Header="불량수량" Binding="{Binding DFCT_QTY}" HorizontalAlignment="Right" Format="###,##0.##" />
                                                    <c1:DataGridTextColumn Header="PORT_ID"   Binding="{Binding PORT_ID}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="PORT_NAME" Binding="{Binding PORT_NAME}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn Header="최근수집일시" Binding="{Binding UPDDTTM}" HorizontalAlignment="Center" />
                                                </c1:C1DataGrid.Columns>
                                            </c1:C1DataGrid>
                                        </Grid>
                                    </c1:C1TabItem>
                                </c1:C1TabControl>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
