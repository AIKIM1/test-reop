                                                    <TextBox Grid.Column="2" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtHistLotID" CharacterCasing="Upper" MinWidth="80" MaxWidth="120" />
                                                </Grid>

                                                <!-- 세로경계선 -->
                                                <Border Grid.Column="7" Style="{StaticResource Content_Separator_BorderStyle}" />
                                                
                                                <!-- Buttons -->
                                                <Grid Grid.Column="9">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>

                                                    <Button Grid.Column="0" x:Name="btnHistSearch" Content="{Binding ConverterParameter='조회',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnHistSearch_Click" />
