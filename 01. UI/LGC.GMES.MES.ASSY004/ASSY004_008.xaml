<UserControl x:Class="LGC.GMES.MES.ASSY004.ASSY004_008"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded" Initialized="UserControl_Initialized" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="V/D 공정진척(Redry / Rewinding)">
            <ctrlLib:LGCLayout.Content>
                <Grid x:Name="MainContents">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="0*"/>
                    </Grid.RowDefinitions>

                    <!-- 공정 진척 Grid -->
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="51" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                            <!-- Pilot Production Grid -->
                            <Grid Margin="-10,-5,-10,0" Height="44" x:Name="grdPilotProd" VerticalAlignment="Top">
                                <!--<Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>-->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Rectangle x:Name="recPilotProdMode" Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" ></Rectangle>
                                <Border Grid.Row="1" Grid.Column="1"  BorderThickness="2" BorderBrush="White">
                                    <TextBlock x:Name="txtPilotProdMode" Grid.Row="1" Grid.Column="1" Margin="10,0" Text="{Binding ConverterParameter='PILOT_PRODUCTION', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" />
                                </Border>
                            </Grid>

                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="34" />
                                    <ColumnDefinition Width="8" />
                                </Grid.ColumnDefinitions>

                                <!--Buttons-->
                                <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" MouseLeave="btnExtra_MouseLeave" VerticalAlignment="Bottom" Height="32" >
                                    <c1:C1DropDownButton.Header>
                                        <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"   TextAlignment="Center" VerticalAlignment="Center" />
                                    </c1:C1DropDownButton.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="9" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="9" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="9"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="9"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="btnManualWaitMove" Content="{Binding ConverterParameter='수동 대기재공 이동',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnManualWaitMove_Click" Visibility="Collapsed" />
                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="btnLamiMove" Content="{Binding ConverterParameter='Lami대기이동',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnLamiMove_Click" />
                                        <!--<Button  Grid.Row="1" Grid.Column="1" x:Name="btnWaitLot" Content="{Binding ConverterParameter='대기LOT조회',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnWaitLot_Click" />
                                        <Button  Grid.Row="3" Grid.Column="1" x:Name="btnRework" Content="{Binding ConverterParameter='재작업대기LOT이동',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnRework_Click" />
                                        <Button  Grid.Row="5"  Grid.Column="1" x:Name="btnPilotProdMode"    Content="{Binding ConverterParameter='시생산설정/해제',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnPilotProdMode_Click"   />-->
                                    </Grid>
                                </c1:C1DropDownButton>
                               
                                
                                <Button x:Name="btnRunStart"          Grid.Row="0" Grid.Column="3" Content="{Binding ConverterParameter='작업시작',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl01Style}" Click="btnRunStart_Click"/>
                                <Button x:Name="btnRunCancel"         Grid.Row="0" Grid.Column="5" Content="{Binding ConverterParameter='시작취소',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl03Style}"  Click="btnRunCancel_Click"  />
                                <Button x:Name="btnRunComplete"       Grid.Row="0" Grid.Column="7" Content="{Binding ConverterParameter='장비완료',     Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl04Style}" Click="btnRunComplete_Click"/>
                                <Button x:Name="btnRunCompleteCancel" Grid.Row="0" Grid.Column="9" Content="{Binding ConverterParameter='장비완료취소', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl03Style}" Click="btnRunCompleteCancel_Click"/>
                                <Button x:Name="btnConfirm"           Grid.Row="0" Grid.Column="11" Content="{Binding ConverterParameter='실적확인',    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl02Style}" Click="btnConfirm_Click"/>
                                <Button x:Name="btnPrint"             Grid.Row="0" Grid.Column="13" Content="{Binding ConverterParameter='바코드발행',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControlBarCodeStyle}"  Click="btnPrint_Click"/>
                            </Grid>
                        </Grid>

                        <!--start search Area-->
                        <Grid x:Name="SearchArea" Grid.Row="0">
                            <Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>
                            <Grid   Grid.Row="0" Grid.Column="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock  Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox   Grid.Row="0" Grid.Column="1" x:Name="cboEquipmentSegment"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock x:Name="TextBlockWorkMode"     Grid.Row="0"  Grid.Column="0" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" FontSize="18" TextAlignment="Right" />
                                    </StackPanel>

                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipment"      DisplayMemberPath="CBO_NAME" SelectedValuePath="CBO_CODE"  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                                </Grid>


                                <Grid Grid.Row="0" Grid.Column="10">
                                    <Button x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                                </Grid>
                            </Grid>
                            <!--end search Area-->

                        </Grid>
                        <!--end search Area-->


                        <Grid x:Name="ContentTop" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <!--start 작업가능 대상-->
                            <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid x:Name="grdWorkTarget" Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="15"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0" Grid.Column="1" Text="{Binding ConverterParameter='작업가능대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                                    <StackPanel Grid.Row="0" Grid.Column="3" Orientation="Horizontal" HorizontalAlignment="Right" >
                                        <RadioButton Margin="0,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=Redry}" GroupName="RadioButton_Type" Name="rdoRedry" Style="{StaticResource SearchCondition_RadioButtonStyle}"  />
                                        <RadioButton Margin="0,0,5,0" Content="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter=Rewinding}" GroupName="RadioButton_Type" Name="rdoRewinding" Style="{StaticResource SearchCondition_RadioButtonStyle}"  />
                                    </StackPanel>
                                </Grid>

                                <Grid   Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid   Grid.Row="1" Grid.Column="1" >
                                        <c1:C1DataGrid Grid.Row="2" Grid.Column="1" 
                                                       x:Name="dgWorkTarget" 
                                                       IsReadOnly="True" 
                                                       HeadersVisibility="Column"  
                                                       SelectionMode="SingleCell" 
                                                       >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgWorkTargetChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgWorkTargetChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgWorkTargetChoice_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn       Header = "LOTID"              Binding = "{Binding LOTID}"                HorizontalAlignment="Left"   IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "PRJT_NAME"          Binding = "{Binding PRJT_NAME}"            HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "EQSGNAME"           Binding = "{Binding EQSGNAME}"             HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn       Header = "LOTTYPE"            Binding = "{Binding LOTTYPE}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridNumericColumn    Header = "재공량"             Binding = "{Binding WIPQTY}"               HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "유효기간"           Binding = "{Binding VLD_DATE}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "QA Hold 여부"       Binding = "{Binding QMS_HOLD_FLAG}"        HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "WIP HOLD"           Binding = "{Binding WIPHOLD}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "PRODID"             Binding = "{Binding PRODID}"               HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "MODLID"             Binding = "{Binding MODLID}"               HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "작업일자"           Binding = "{Binding WRK_DATE}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "현재공정"           Binding = "{Binding CUR_PROCNAME}"         HorizontalAlignment="Center" IsReadOnly="True"/>
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                                <!--end 작업가능 대상-->
                            </Grid>

                            <GridSplitter x:Name="Splitter" Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" DragCompleted="Splitter_DragCompleted" />

                            <!--start 작업대상 -->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>

                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </Grid>

                                <Grid   Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid   Grid.Row="1" Grid.Column="1" >
                                        <c1:C1DataGrid Grid.Row="2" Grid.Column="1" 
                                                       x:Name="dgProductLot" 
                                                       IsReadOnly="True" 
                                                       HeadersVisibility="Column"  
                                                       SelectionMode="SingleCell" 
                                                       LoadedCellPresenter="dgProductLot_LoadedCellPresenter" 
                                                       UnloadedCellPresenter="dgProductLot_UnloadedCellPresenter" 
                                                       >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgProductLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgProductLotChoice" Width="Auto" HorizontalAlignment="Center" Checked="dgProductLotChoice_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn       Header = "LOTID"              Binding = "{Binding LOTID}"                HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "구분"               Binding = "{Binding WRK_TYPE}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "극성"               Binding = "{Binding ELEC_TYPE}"            HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "LOTTYPE"            Binding = "{Binding LOTTYPE}"              HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "상태"               Binding = "{Binding WIPSNAME}"             HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "상태"               Binding = "{Binding WIPSTAT}"              HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridNumericColumn    Header = "투입량"             Binding = "{Binding WIPQTY}"               HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True"/>
                                                <c1:DataGridNumericColumn    Header = "투입 Tab Count"     Binding = "{Binding INPUT_TAB_COUNT}"      HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True"/>
                                                <c1:DataGridNumericColumn    Header = "배출 TAB COUNT"     Binding = "{Binding END_TAB_COUNT}"        HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "시작시간"           Binding = "{Binding WIPDTTM_ST}"           HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "장비완료시간"       Binding = "{Binding WIPDTTM_ED}"           HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn       Header = "PRODID"             Binding = "{Binding PRODID}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn       Header = "MODLID"             Binding = "{Binding MODLID}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn       Header = "WIPSEQ"             Binding = "{Binding WIPSEQ}"               HorizontalAlignment="Center" Visibility="Collapsed" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                                <!--end Product Lot-->
                            </Grid>

                            <!--end content-->
                        </Grid>

                        <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <Grid x:Name="ContentButtom" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--start 실적확인 -->
                            <Border Grid.Column="0" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />

                            <Grid Grid.Column="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='작업대상상세', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                </Grid>

                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8"></RowDefinition>
                                        <RowDefinition Height="*"></RowDefinition>
                                        <RowDefinition Height="8"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="1" Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" MinHeight="50"/>
                                            <RowDefinition Height="8" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>

                                        <!-- 생산 정보 -->
                                        <Grid x:Name="LotList" Grid.Row="0">
                                            <c1:C1DataGrid Grid.Row="2" 
                                                           x:Name="dgDetail" 
                                                           IsReadOnly="False" 
                                                           HeadersVisibility="None" 
                                                           FrozenTopRowsCount="2"
                                                           SelectionMode="SingleCell" 
                                                           >
                                                <c1:C1DataGrid.Columns>
                                                    <c1:DataGridNumericColumn      Header = "[생산량, 생산량]"        Binding = "{Binding INPUTQTY}"             HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True" />
                                                    <c1:DataGridNumericColumn      Header = "[양품량, 양품량]"        Binding = "{Binding GOODQTY}"              HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True" />
                                                    <c1:DataGridNumericColumn      Header = "[불량수량, 불량]"        Binding = "{Binding DTL_DEFECT_LOT}"       HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True"/>
                                                    <c1:DataGridNumericColumn      Header = "[불량수량, LOSS]"        Binding = "{Binding DTL_LOSS_LOT}"         HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True" />
                                                    <c1:DataGridNumericColumn      Header = "[불량수량, 물품청구]"    Binding = "{Binding DTL_CHARGE_PROD_LOT}"  HorizontalAlignment="Right" Format="#,##0" IsReadOnly="True"/>
                                                    <c1:DataGridTextColumn         Header = "[LOTID, LOTID]"          Binding = "{Binding LOTID}"                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                    <c1:DataGridTextColumn         Header = "[WIPSEQ, WIPSEQ]"        Binding = "{Binding WIPSEQ}"               HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True"/>
                                                </c1:C1DataGrid.Columns>
                                                <c1:C1DataGrid.TopRows>
                                                    <c1:DataGridColumnHeaderRow />
                                                    <c1:DataGridColumnHeaderRow />
                                                </c1:C1DataGrid.TopRows>
                                            </c1:C1DataGrid>
                                        </Grid>

                                        <!-- 상세 정보 -->
                                        <Grid x:Name="LotInfo" Grid.Row="2">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="2"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
