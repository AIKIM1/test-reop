<UserControl x:Class="LGC.GMES.MES.ASSY004.ASSY004_070"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Background="#FFDDDDDD" x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="재와인더 공정진척">
            <ctrlLib:LGCLayout.Content>
                <!-- Main Grid -->
                <Grid x:Name="mainGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="51" />
                        <RowDefinition Height="5" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Command Area -->
                    <Grid x:Name="grdCommand" Grid.Row="0" Grid.Column="0" Margin="0,-47,0,0" VerticalAlignment="Top">
                        <Grid x:Name="ButtonArea">
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="34" />
                                </Grid.ColumnDefinitions>
                                <TextBox Grid.Column="1" Name="txtEndLotId" Width="100" Visibility="Collapsed" />
                                <c1:C1DropDownButton Grid.Row="0" Grid.Column="2" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" VerticalAlignment="Bottom" Height="30" MouseLeave="btnExtra_MouseLeave" Visibility="Collapsed">
                                    <c1:C1DropDownButton.Header>
                                        <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" TextAlignment="Center" VerticalAlignment="Center"/>
                                    </c1:C1DropDownButton.Header>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="4" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="4" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="9"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="9"/>
                                        </Grid.ColumnDefinitions>
                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>
                                    </Grid>
                                </c1:C1DropDownButton>
                                <Button Grid.Row="0" Grid.Column="3" x:Name="btnStart" Content="{Binding ConverterParameter='작업시작', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl01Style}" Margin="5,0,0,0" Tag="G" Click="btnStart_Click" />
                                <Button Grid.Row="0" Grid.Column="4" x:Name="btnCancel" Content="{Binding ConverterParameter='시작취소', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl03Style}" Margin="5,0,0,0" Tag="G" Click="btnCancel_Click"  />
                                <Button Grid.Row="0" Grid.Column="5" x:Name="btnEqptEnd" Content="{Binding ConverterParameter='장비완료', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}" Margin="5,0,0,0" Click="btnEqptEnd_Click"  />
                                <Button Grid.Row="0" Grid.Column="6" x:Name="btnEqptEndCancel" Content="{Binding ConverterParameter='장비완료취소', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}" Margin="5,0,0,0" Click="btnEqptEndCancel_Click"/>
                                <Button Grid.Row="0" Grid.Column="7" x:Name="btnEnd" Content="{Binding ConverterParameter='실적확정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl04Style}" Margin="5,0,0,0" Tag="G" Click="btnEnd_Click" />
                                <Button Grid.Row="0" Grid.Column="9" x:Name="btnPrintLabel" Content="{Binding ConverterParameter='바코드발행', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControlBarCodeStyle}" Margin="5,0,0,0" Click="btnPrintLabel_Click" />
                            </Grid>
                        </Grid>
                    </Grid>
                    <!-- END Command Area -->

                    <!-- Search Area -->
                    <Grid x:Name="grdSearch" Grid.Row="0" Grid.Column="0">
                        <Grid Grid.Row="0">
                            <Grid Grid.Row="0">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="51" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Border Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Background="#fff2f2f2" BorderThickness="1" BorderBrush="#ffd1d1d1"></Border>
                                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="13"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="30"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="13"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Grid.Row="0" Grid.Column="1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="1*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="30"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="1*"/>
                                        </Grid.ColumnDefinitions>
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <c1:C1ComboBox Grid.Row="0" Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath="" />
                                        <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                            <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                        </StackPanel>
                                        <c1:C1ComboBox Grid.Row="0" Grid.Column="3" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" DisplayMemberPath="" SelectedValuePath="" SelectedItemChanged="cboEquipment_SelectedItemChanged" />
                                        
                                        <Grid Grid.Row="0" Grid.Column="5" x:Name="gridWorkHalfSlittingSide" Visibility="Collapsed">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="3*"/>
                                                <ColumnDefinition Width="7*"/>
                                            </Grid.ColumnDefinitions>

                                            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock Text="{Binding ConverterParameter='무지부', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" Style="{StaticResource Content_Search_LabelStyle}" />
                                            </StackPanel>
                                            <TextBox  Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_InputForm_ReadOnlyTextBoxStyle}" Margin="5,0,5,0" x:Name="txtWorkHalfSlittingSide" CharacterCasing="Upper" MinWidth="120"/>
                                        </Grid>

                                        <StackPanel Grid.Row="2" Grid.Column="5" Orientation="Horizontal" HorizontalAlignment="Left" >
                                            <RadioButton Grid.Row="0" Grid.Column="5" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='TOP', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoTop" GroupName="cboCoatType2" Margin="3,0,0,0"  Visibility="Collapsed" />
                                            <RadioButton Grid.Row="0" Grid.Column="5" Style="{StaticResource SearchCondition_RadioButtonStyle}" Content="{Binding ConverterParameter='BACK', Converter={StaticResource GlobalObjectDicConverter}}"  Name="rdoBack" GroupName="cboCoatType2" Margin="5,0,0,0"  Visibility="Collapsed" />
                                        </StackPanel>


                                    </Grid>
                                    <Grid Grid.Row="0" Grid.Column="3">
                                        <Button x:Name="btnSearch" Grid.Row="0" Grid.Column="0" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click"  />
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                    <!-- END Search Area-->

                    <!-- Contents Area -->
                    <Grid x:Name="Content" Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="2*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition x:Name="yPosition" Height="3*"/>
                            <RowDefinition Height="8"/>
                            <RowDefinition Height="30"/>
                            <RowDefinition Height="8"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="8" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>

                        <!-- End Lot -->
                        <Grid x:Name="grdEndLot" Grid.Row="1" Grid.Column="0">
                            <Grid Grid.Row="1" Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>

                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="6" Grid.ColumnSpan="5" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='완성LOT', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                </TextBlock>

                                <Border Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>

                                <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" >
                                    <Grid>
                                        <c1:C1DataGrid Grid.Column="0" x:Name="dgOutLot" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" CanUserSort="False" CanUserFilter="False" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn   EditOnSelection="True" Name="CHK" Width="Auto" HorizontalAlignment="Center" >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgOutLotGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgOutLotChoice" HorizontalAlignment="Center" Checked="dgOutLotChoice_Checked"  />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn Header="LOTID"         Binding="{Binding LOTID}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn Header="배출CarrierID" Binding="{Binding CSTID}"        HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn Header="상태"          Binding="{Binding WIPSTAT}"      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn Header="상태"          Binding="{Binding WIPSNAME}"     HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn Header="전극생산지"    Binding="{Binding FROM_ELEC}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn Header="PJT"           Binding="{Binding PRJT_NAME}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn Header="제품ID"        Binding="{Binding PRODID}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn Header="시작시간"      Binding="{Binding WIPDTTM_ST}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn Header="완료시간"      Binding="{Binding WIPDTTM_ED}"   HorizontalAlignment="Center" IsReadOnly="True" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                        <!-- End Lot -->

                        <!-- Product Lot -->
                        <Grid x:Name="grdProdLot" Grid.Row="1" Grid.Column="2">
                            <Grid Grid.Row="1" Grid.Column="3">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="6"/>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="8"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="3*"/>
                                    <ColumnDefinition Width="5"/>
                                </Grid.ColumnDefinitions>
                                
                                <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="6" Grid.ColumnSpan="5" Style="{StaticResource BorderSubTitleStyle}" BorderThickness="1" />
                                <TextBlock Grid.Row="0" Grid.Column="1" Style="{StaticResource Content_ModuleTitleStyle}">
                                    <Run Text="{Binding ConverterParameter='Product Lot', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"/>
                                </TextBlock>
                                <Grid Grid.Column="3" HorizontalAlignment="Right">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="5"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Button   Grid.Column="2" x:Name="btnCancelInput" Content="{Binding ConverterParameter='투입튀소', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}"  Margin="2" Click="btnCancelInput_Click"/>
                                </Grid>
                                
                                <Border Grid.Row="1" Grid.RowSpan="3" Grid.ColumnSpan="6" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                                
                                <Grid Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3" >
                                    <Grid>
                                        <c1:C1DataGrid x:Name="dgProductLot" IsReadOnly="False" HeadersVisibility="Column" SelectionMode="SingleRow" HorizontalScrollBarVisibility="Auto" CanUserSort="False" CanUserFilter="True" FrozenColumnCount="4" LoadedCellPresenter="dgProductLot_LoadedCellPresenter" UnloadedCellPresenter="dgProductLot_UnloadedCellPresenter" >
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridCheckBoxColumn Name="CHK"           Binding="{Binding CHK}"            HorizontalAlignment="Center" Width="Auto"  />
                                                <c1:DataGridTextColumn     Header="투입LOT"     Binding="{Binding INPUT_LOTID}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn     Header="상태"        Binding="{Binding WIPSTAT}"        HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn     Header="상태"        Binding="{Binding WIPSNAME}"       HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridNumericColumn  Header="소진전수량"  Binding="{Binding WIPQTY}"         HorizontalAlignment="Right"  IsReadOnly="True" Format="F0" />
                                                <c1:DataGridNumericColumn  Header="소진량"      Binding="{Binding WIPQTY_ED}"      HorizontalAlignment="Right"  IsReadOnly="True" Format="F0"/>
                                                <c1:DataGridNumericColumn  Header="소진후수량"  Binding="{Binding WIPQTY_ED}"      HorizontalAlignment="Right"  IsReadOnly="True" Visibility="Collapsed" Format="F0"/>
                                                <c1:DataGridTextColumn     Header="시작시간"    Binding="{Binding WIPDTTM_ST}"     HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn     Header="완료시간"    Binding="{Binding WIPDTTM_ED}"     HorizontalAlignment="Center" IsReadOnly="True" />
                                            </c1:C1DataGrid.Columns>
                                        </c1:C1DataGrid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                        <!-- END Product Lot-->

                        <!-- Splitter -->
                        <GridSplitter Grid.Row="2" Grid.Column="0" ResizeDirection="Rows" Grid.ColumnSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <GridSplitter Grid.Row="1" Grid.Column="1" ResizeDirection="Columns" Grid.RowSpan="3" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />
                        <!--END Splitter -->

                        <!-- Lot Info -->
                        <Grid x:Name="grdResult" Grid.Row="3" Grid.Column="0">
                            <Border Grid.Row="3" Grid.Column="1" Style="{StaticResource Content_InputForm_GroupBorderStyle}"/>
                            <Grid Grid.Row="3" Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition Height="130"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="30"/>                                    
                                    <RowDefinition Height="130"/>
                                    <RowDefinition Height="4"/>
                                    <RowDefinition Height="1*"/>
                                    <RowDefinition Height="4"/>                                    
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="6"/>
                                    <ColumnDefinition Width="1*"/>
                                    <ColumnDefinition Width="6"/>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Name="grdTopSummary">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="1*"/>
                                        <ColumnDefinition Width="2*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="4"/>
                                    </Grid.ColumnDefinitions>
                                    <Border Grid.Row="0" Grid.ColumnSpan="3" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <Grid x:Name="grdResultTitle" Grid.Column="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Style="{StaticResource Content_ModuleTitleStyle}" Text="{Binding ConverterParameter='생산실적', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                    </Grid>
                                    <Grid Grid.Column="1" HorizontalAlignment="Right">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="70" />
                                            <ColumnDefinition Width="4" />                                            
                                        </Grid.ColumnDefinitions>
                                        <!-- 1row-->
                                        <TextBlock Grid.Column="1" x:Name="lblInputQty" Text="{Binding ConverterParameter='생산량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" MinWidth="30" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Visibility="Collapsed"/>
                                        <c1:C1NumericBox Grid.Column="3" x:Name="txtInputQty" ShowButtons="False" HandleUpDownKeys="False" Format="F" IsEnabled="False" Height="24" Visibility="Collapsed"/>
                                        <TextBlock Grid.Column="5" Text="{Binding ConverterParameter='투입량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" MinWidth="25" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" Visibility="Collapsed"/>
                                        <c1:C1NumericBox Grid.Column="7" x:Name="txtParentQty" IsReadOnly="True" ShowButtons="False" Format="F0" IsEnabled="False" Height="24" Visibility="Collapsed"/>
                                    </Grid>
                                    
                                    <Border Grid.Column="2" HorizontalAlignment="Right">
                                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Height="Auto">
                                            <Button x:Name="btnSaveWipHistory" Content="{Binding ConverterParameter=저장, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Cursor="Hand" Width="50" Click="btnSaveWipHistory_Click" Visibility="Collapsed" />
                                        </StackPanel>
                                    </Border>
                                </Grid>
                                <Grid Grid.Row="2" Grid.ColumnSpan="3" >
                                    <Border BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" Text="{Binding ConverterParameter='완성LOT실적', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </Grid>
                                <Grid x:Name="LotList" Grid.Row="3" Grid.Column="1">
                                    <c1:C1DataGrid x:Name="dgOutLotInfo" Grid.Column="1" IsReadOnly="True" HeadersVisibility="None" RowHeight="Auto" SelectionMode="MultiRange" CanUserSort="False" CanUserFilter="False" FrozenColumnCount="5" FrozenTopRowsCount="2" LoadedCellPresenter="dgLotInfo_LoadedCellPresenter" >
                                        <c1:C1DataGrid.Columns>
                                            <c1:DataGridTextColumn    Header="[LOTID,LOTID]"                 Binding="{Binding LOTID}"          HorizontalAlignment="Center" />
                                            <c1:DataGridTextColumn    Header="[WIPSEQ,WIPSEQ]"               Binding="{Binding LOTID}"          HorizontalAlignment="Center" Visibility="Collapsed"/>
                                            <c1:DataGridTextColumn    Header="[배출CarrierID,배출CarrierID]" Binding="{Binding CSTID}"          HorizontalAlignment="Center" />
                                            <c1:DataGridNumericColumn Header="[(총)투입량, (총)투입량]"      Binding="{Binding INPUT_QTY_O}"    HorizontalAlignment="Right" Format="F0" Visibility="Collapsed"/>
                                            <c1:DataGridNumericColumn Header="[(총)투입량, (총)투입량]"      Binding="{Binding INPUT_QTY}"      HorizontalAlignment="Right" Format="F0" />
                                            <c1:DataGridNumericColumn Header="[장비수량, 장비수량]"          Binding="{Binding EQPT_END_QTY}"   HorizontalAlignment="Right" Format="F0" />
                                            <c1:DataGridNumericColumn Header="[잔량, 잔량]"                  Binding="{Binding REMAIN_QTY}"     HorizontalAlignment="Right" Format="F0" />
                                            <c1:DataGridNumericColumn Header="[양품수량, 양품수량]"          Binding="{Binding GOODQTY}"        HorizontalAlignment="Right" Format="F0" />
                                            <c1:DataGridNumericColumn Header="[불량수량, 합계]"              Binding="{Binding DEFECT_SUM}"     HorizontalAlignment="Right" Format="F0" />
                                            <c1:DataGridNumericColumn Header="[불량수량, 불량]"              Binding="{Binding DEFECT_QTY}"     HorizontalAlignment="Right" Format="F0" />
                                            <c1:DataGridNumericColumn Header="[불량수량, LOSS]"              Binding="{Binding LOSS_QTY}"       HorizontalAlignment="Right" Format="F0" />
                                            <c1:DataGridNumericColumn Header="[불량수량, 물품청구]"          Binding="{Binding CHARGE_QTY}"     HorizontalAlignment="Right" Format="F0" />
                                        </c1:C1DataGrid.Columns>
                                        <c1:C1DataGrid.TopRows>
                                            <c1:DataGridColumnHeaderRow />
                                            <c1:DataGridColumnHeaderRow />
                                        </c1:C1DataGrid.TopRows>
                                        <c1:C1DataGrid.BottomRows />
                                    </c1:C1DataGrid>
                                </Grid>
                                <Grid Grid.Row="5" Grid.ColumnSpan="3">
                                    <Border BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                    <TextBlock Style="{StaticResource Content_ModuleTitleStyle}" Text="{Binding ConverterParameter='투입LOT실적', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" />
                                </Grid>                                
                                <Grid x:Name="InputLotList" Grid.Row="6" Grid.Column="1">
                                    <c1:C1DataGrid x:Name="dgInputLotInfo" Grid.Column="1" IsReadOnly="True" HeadersVisibility="None" RowHeight="Auto" SelectionMode="MultiRange" CanUserSort="False" CanUserFilter="False" FrozenColumnCount="5" FrozenTopRowsCount="2">
                                        <c1:C1DataGrid.Columns>
