<UserControl x:Class="LGC.GMES.MES.ASSY004.ASSY004_007"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             mc:Ignorable="d" 
             d:DesignHeight="768" d:DesignWidth="1024" Initialized="UserControl_Initialized" Loaded="UserControl_Loaded" Unloaded="UserControl_Unloaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <ctrlLib:LGCLayout x:Name="LayoutRoot" Tag="패키징 공정진척" Grid.ColumnSpan="2">
            <ctrlLib:LGCLayout.Content>
                <Grid x:Name="MainContents">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="4*"/>
                        <RowDefinition Height="8"/>
                        <RowDefinition Height="0*"/>
                    </Grid.RowDefinitions>

                    <!-- 공정 진척 Grid -->
                    <Grid Grid.Row="0">
                        <Grid.Resources>
                            <DataTemplate x:Key="ResultTemplate">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                                </Grid>
                            </DataTemplate>
                        </Grid.Resources>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="51" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="2*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="3*" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid x:Name="ButtonArea" Margin="0,-48,0,0">
                            <!-- Pilot Production Grid -->
                            <Grid Margin="-10,-5,-10,0" Height="44" x:Name="grdPilotProd" VerticalAlignment="Top">
                                <!--<Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>-->
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <Rectangle x:Name="recPilotProdMode" Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" ></Rectangle>
                                <Border Grid.Row="1" Grid.Column="1"  BorderThickness="2" BorderBrush="White">
                                    <TextBlock x:Name="txtPilotProdMode" Grid.Row="1" Grid.Column="1" Margin="10,0" Text="{Binding ConverterParameter='PILOT_PRODUCTION', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchCondition_LabelStyle}" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="White" />
                                </Border>
                            </Grid>
                            
                            <Grid VerticalAlignment="Top">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="5"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="35" />
                                    <ColumnDefinition Width="2" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="32" />
                                </Grid.RowDefinitions>
                                <c1:C1DropDownButton Grid.Row="0" Grid.Column="1" x:Name="btnExtra" Style="{StaticResource C1DropDownButtonStyle}" MouseLeave="btnExtra_MouseLeave" VerticalAlignment="Bottom" Height="32">
                                    <c1:C1DropDownButton.Header>
                                        <TextBlock x:Name="selection" Text="{Binding ConverterParameter='추가기능', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}"  TextAlignment="Center" VerticalAlignment="Center" />
                                    </c1:C1DropDownButton.Header>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="9" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="5" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="9" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="9"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="9"/>
                                        </Grid.ColumnDefinitions>

                                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="99" Grid.ColumnSpan="99" Style="{StaticResource Content_InputForm_ContentBorderStyle}"/>

                                        <!--추가기능버튼-->
                                        <Button  Grid.Row="1" Grid.Column="1" x:Name="btnWaitLot"       Content="{Binding ConverterParameter='대기LOT조회',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnWaitLot_Click" />
                                        <Button  Grid.Row="3" Grid.Column="1" x:Name="btnEqptCondSearch"  Content="{Binding ConverterParameter='작업조건조회',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnEqptCondSearch_Click" />
                                        <Button  Grid.Row="5" Grid.Column="1" x:Name="btnMerge"              Content="{Binding ConverterParameter='LOTMERGE',        Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnMerge_Click"   />
                                        <Button  Grid.Row="7" Grid.Column="1" x:Name="btnWipNote"        Content="{Binding ConverterParameter='특이사항관리',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnWipNote_Click"   />
                                        <Button  Grid.Row="9" Grid.Column="1" x:Name="btnTrayInfo"        Content="{Binding ConverterParameter='FORM_TRAY_SEARCH',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnTrayInfo_Click"   />
                                        <Button  Grid.Row="11" Grid.Column="1" x:Name="btnTrayType"        Content="{Binding ConverterParameter='활성화 트레이 타입 등록',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnTrayType_Click"  />
                                        <Button  Grid.Row="13" Grid.Column="1" x:Name="btnPilotProdMode"    Content="{Binding ConverterParameter='시생산설정/해제',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnPilotProdMode_Click"   />
                                        <Button  Grid.Row="14" Grid.Column="1" x:Name="btnRunStart"      Margin="0,5,0,0"   Content="{Binding ConverterParameter='작업시작',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnRunStart_Click"   />
                                        <Button  Grid.Row="15" Grid.Column="1" x:Name="btnCancelConfirm" Margin="0,5,0,0"   Content="{Binding ConverterParameter='확정취소',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainButtonStyle}" Click="btnCancelConfirm_Click" />
                                    </Grid>
                                </c1:C1DropDownButton>


                                <Button x:Name="btnEqptCond"     Grid.Row="0" Grid.Column="3"   Content="{Binding ConverterParameter='작업조건등록',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl05Style}" Click="btnEqptCond_Click"   />
                                <Button x:Name="btnQualityInput" Grid.Row="0" Grid.Column="5"  Content="{Binding ConverterParameter='품질정보입력',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnQualityInput_Click"/>
                                <Button x:Name="btnEqpRemark"    Grid.Row="0" Grid.Column="7"  Content="{Binding ConverterParameter='인수인계노트',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl05Style}" Click="btnEqpRemark_Click"/>
                                <Button x:Name="btnRunComplete" Grid.Row="0" Grid.Column="9"   Content="{Binding ConverterParameter='장비완료',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl04Style}" Click="btnRunComplete_Click"/>
                                <Button x:Name="btnConfirm"     Grid.Row="0" Grid.Column="11"   Content="{Binding ConverterParameter='실적확인',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainControl02Style}" Click="btnConfirm_Click"/>
                            </Grid>
                        </Grid>

                        <!--start search Area-->
                        <Grid x:Name="SearchArea" Grid.Row="0">
                            <Border Grid.Row="0" Grid.Column="0" Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F"></Border>
                            <Grid   Grid.Row="0" Grid.Column="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="13"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="10"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="30"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="13"/>
                                </Grid.ColumnDefinitions>

                                <Grid Grid.Row="0" Grid.Column="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='LINE', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipmentSegment"      DisplayMemberPath="" SelectedValuePath=""  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEquipmentSegment_SelectedValueChanged" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="3">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="4*"/>
                                        <ColumnDefinition Width="6*"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                        <TextBlock  Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                        <TextBlock      Grid.Row="0"  Grid.Column="0" Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                                    </StackPanel>
                                    <c1:C1ComboBox  Grid.Row="0"  Grid.Column="1" x:Name="cboEquipment"      DisplayMemberPath="" SelectedValuePath=""  Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedIndexChanged="cboEquipment_SelectedIndexChanged" SelectedValueChanged="cboEquipment_SelectedValueChanged" />
                                </Grid>

                                <Grid Grid.Row="0" Grid.Column="7">
                                    <Button x:Name="btnSearch"      Grid.Row="0" Grid.Column="0"   Content="{Binding ConverterParameter=SEARCH,    Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                                </Grid>
                            </Grid>
                            <!--end search Area-->
                        </Grid>

                        <!--start First Content Area-->
                        <Grid x:Name="Content" Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="1*" />
                            </Grid.ColumnDefinitions>

                            <!--start 작업지시-->
                            <Grid Grid.Column="0" x:Name="grdWorkOrder">

                                <!--end 작업지시-->
                            </Grid>

                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--start Product Lot-->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock      Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />

                                    <Grid Grid.Column="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Button Grid.Row="0" Grid.Column="1"  x:Name="btnFormationHold" Content="{Binding ConverterParameter='특별관리HOLD',  Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnFormationHold_Click" Visibility="Collapsed"/>
                                    </Grid>

                                    <Grid  Grid.Column="3">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                        </Grid.ColumnDefinitions>
                                        <Border    Grid.Row="1" Grid.Column="0" Background="#FF2424" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='시생산', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                    </Grid>

                                </Grid>

                                <Grid   Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="8" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="8" />
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="8"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid   Grid.Row="1" Grid.Column="1" >
                                        <c1:C1DataGrid Grid.Row="2" Grid.Column="1" x:Name="dgProductLot" IsReadOnly="False" HeadersVisibility="None" FrozenTopRowsCount="2" SelectionMode="SingleCell" LoadedCellPresenter="dgProductLot_LoadedCellPresenter" UnloadedCellPresenter="dgProductLot_UnloadedCellPresenter">
                                            <c1:C1DataGrid.Columns>
                                                <c1:DataGridTemplateColumn  EditOnSelection="True" Name="CHK" Width="Auto" CanUserFilter="False" CanUserSort="False" CanUserResize="False"  >
                                                    <c1:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <RadioButton GroupName="dgProductLotChoiceGroup" IsChecked="{Binding CHK, Mode=OneWay}" Name="dgProductLotChoice" HorizontalAlignment="Center" Checked="dgProductLotChoice_Checked" />
                                                        </DataTemplate>
                                                    </c1:DataGridTemplateColumn.CellTemplate>
                                                </c1:DataGridTemplateColumn>
                                                <c1:DataGridTextColumn        Header = "[LOTID, LOTID]"                 Binding = "{Binding LOTID}"     HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "[작업유형, 작업유형]"     Binding = "{Binding IRREGL_PROD_LOT_TYPE_CODE}" HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "[작업유형, 작업유형]"     Binding = "{Binding IRREGL_PROD_LOT_TYPE_NAME}" HorizontalAlignment="Center" IsReadOnly="True" />

                                                <c1:DataGridTextColumn        Header = "[프로젝트명, 프로젝트명]"       Binding = "{Binding PRJT_NAME}"      HorizontalAlignment="Center" IsReadOnly="True" />
                                                <c1:DataGridTextColumn        Header = "[제품ID, 제품ID]"               Binding = "{Binding PRODID}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "[상태, 상태]"                   Binding = "{Binding WIPSTAT}"     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "[상태, 상태]"                   Binding = "{Binding WIPSNAME}"     HorizontalAlignment="Center" IsReadOnly="True"/>

                                                <c1:DataGridNumericColumn     Header = "[생산량, 생산량]"                             Binding = "{Binding EQPT_INPUT_QTY}" HorizontalAlignment="Right" IsReadOnly="True" Format="#,##0" />
                                                <c1:DataGridNumericColumn     Header = "[생산량, 양품량]"                             Binding = "{Binding GOODQTY}"         HorizontalAlignment="Right" IsReadOnly="True" Format="#,##0" />
                                                <c1:DataGridNumericColumn     Header = "[생산량, 불량/LOSS/물품청구]"               Binding = "{Binding DFCTQTY}"        HorizontalAlignment="Right" IsReadOnly="True" Format="#,##0" />
                                                <c1:DataGridNumericColumn     Header = "[재투입, 재투입]"                         Binding = "{Binding RE_INPUT_QTY}" HorizontalAlignment="Right" IsReadOnly="True" Format="#,##0" />
                                                <!--<c1:DataGridNumericColumn     Header = "[생산량, 미확인LOSS]"                         Binding = "{Binding UNIDENTIFIED_QTY}" HorizontalAlignment="Right" Format="#,##0" />-->
                                                <!--<c1:DataGridNumericColumn     Header = "[생산량, 설비양품량]"                         Binding = "{Binding EQPT_END_QTY}"   HorizontalAlignment="Right" Format="#,##0" />-->

                                                <c1:DataGridTextColumn        Header = "[작업시작일시, 작업시작일시]"   Binding = "{Binding WIPDTTM_ST}"     HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn        Header = "[작업완료일시, 작업완료일시]"   Binding = "{Binding EQPT_END_DTTM}"     HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn        Header = "[W/O, W/O]"                     Binding = "{Binding WOID}"     HorizontalAlignment="Center" IsReadOnly="True"/>
                                                <c1:DataGridTextColumn        Header = "[작업지시, 작업지시]"           Binding = "{Binding WO_DETL_ID}"     HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True"/>
                                                <!--<c1:DataGridTextColumn        Header = "순번"             Binding = "{Binding Binding05}"     HorizontalAlignment="Center" />-->
                                                <c1:DataGridTextColumn        Header = "[제품명, 제품명]"               Binding = "{Binding PRODNAME}"     HorizontalAlignment="Left" IsReadOnly="True" Visibility="Collapsed"/>
                                                <c1:DataGridTextColumn        Header = "[WIPSEQ, WIPSEQ]"               Binding = "{Binding WIPSEQ}"     HorizontalAlignment="Center" Visibility="Collapsed" IsReadOnly="True"/>

                                                <c1:DataGridTextColumn        Header = "[작업시작일시, 작업시작일시]"             Binding = "{Binding WIPDTTM_ST_ORG}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "[DB시간, DB시간]"                         Binding = "{Binding DTTM_NOW}"     HorizontalAlignment="Center" Visibility="Collapsed" />
                                                <c1:DataGridTextColumn        Header = "[특별관리HOLD, 특별관리HOLD]"           Binding = "{Binding FCS_HOLD_FLAG_NAME}"     HorizontalAlignment="Center" IsReadOnly="True"/>
                                            </c1:C1DataGrid.Columns>
                                            <c1:C1DataGrid.TopRows>
                                                <c1:DataGridColumnHeaderRow />
                                                <c1:DataGridColumnHeaderRow />
                                            </c1:C1DataGrid.TopRows>
                                        </c1:C1DataGrid>
                                    </Grid>
                                    <!--end Product Lot-->
                                </Grid>
                            </Grid>
                            <!--end First Content Area-->
                        </Grid>

                        <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                        <!--start Second Content Area-->
                        <Grid x:Name="Detail" Grid.Row="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <!--start Tab -->
                            <Grid x:Name="grdInput" Grid.Column="0">

                            </Grid>

                            <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                            <!--start output-->
                            <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a"></Border>
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="34"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                <Grid   Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="15"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="8"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock  Grid.Column="1" Text="{Binding ConverterParameter='완성', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}"  />

                                    <Grid Grid.Column="3" x:Name="grdTrayLegend" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        <Border    Grid.Row="1" Grid.Column="0" Background="#F8DAC0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="2" Text="{Binding ConverterParameter='미확정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />

                                        <Border    Grid.Row="1" Grid.Column="4" Background="#E6F5FB" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="6" Text="{Binding ConverterParameter='조립출고확정', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />

                                        <Border    Grid.Row="1" Grid.Column="8" Background="#E8F7C8" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                        <TextBlock Grid.Row="1" Grid.Column="10" Text="{Binding ConverterParameter='활성화입고', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                    </Grid>

                                    <Grid Grid.Column="3" x:Name="grdDfctLegend" Visibility="Collapsed">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="1*" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="1*" />
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="8" />
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="4" />
                                            <ColumnDefinition Width="Auto" />
