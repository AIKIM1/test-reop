<UserControl x:Class="LGC.GMES.MES.ASSY004.ASSY004_060_PROC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
             xmlns:ctrlLib="clr-namespace:LGC.GMES.MES.ControlsLibrary;assembly=LGC.GMES.MES.ControlsLibrary"
             xmlns:cmm001="clr-namespace:LGC.GMES.MES.CMM001;assembly=LGC.GMES.MES.CMM001"
             mc:Ignorable="d" 
             Height="Auto" Width="Auto" Loaded="UserControl_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlStyles.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.ControlsLibrary;component/ControlTemplates/LGCDatePicker.xaml" />
                <ResourceDictionary Source="/LGC.GMES.MES.CMM001;component/PopupFindControlStyle.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="grdMain">
        <Grid.Resources>
            <DataTemplate x:Key="ResultTemplate">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="1" Text="{Binding}" HorizontalAlignment="Right"></TextBlock>
                </Grid>
            </DataTemplate>
        </Grid.Resources>
        <ctrlLib:LoadingIndicator x:Name="loadingIndicator" Panel.ZIndex="999" Visibility="Collapsed"/>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="4*"/>
                <RowDefinition Height="8"/>
                <RowDefinition Height="0*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="51" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="8" />
                    <RowDefinition Height="2*" />
                </Grid.RowDefinitions>

                <GridSplitter Grid.Row="3" ResizeDirection="Rows" ShowsPreview="True" Style="{StaticResource GridSplitterVerticalStyle }" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                <!-- btn menus area -->
                <Grid x:Name="ButtonArea" Grid.Row="0" Margin="0,-84,0,0">
                    <Grid VerticalAlignment="Top">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="5"/>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="42" />
                        </Grid.ColumnDefinitions>

                        <Button Grid.Row="0" Grid.Column="1" x:Name="btnRunStart"          Content="{Binding ConverterParameter='작업시작',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl05Style}" Click="btnRunStart_Click"/>
                        <Button Grid.Row="0" Grid.Column="3" x:Name="btnRunCancel"         Content="{Binding ConverterParameter='시작취소',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl05Style}" Click="btnRunCancel_Click"/>
                        <Button Grid.Row="0" Grid.Column="5" x:Name="btnEqptEnd"           Content="{Binding ConverterParameter='장비완료',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl05Style}" Click="btnEqptEnd_Click"/>
                        <Button Grid.Row="0" Grid.Column="7" x:Name="btnRunCompleteCancel" Content="{Binding ConverterParameter='장비완료취소', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControl05Style}" Click="btnRunCompleteCancel_Click"/>
                        <Button Grid.Row="0" Grid.Column="9" x:Name="btnEnd"               Content="{Binding ConverterParameter='실적확정', Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource Content_MainControlBarCodeStyle}" Click="btnEnd_Click" />
                    </Grid>
                </Grid>

                <!-- search area -->
                <Grid x:Name="SearchArea" Grid.Row="0">
                    <!-- 경계선 -->
                    <Border Background="#EFF1F3" BorderThickness="1" BorderBrush="#9F9F9F" />

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="13"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="13" />
                        </Grid.ColumnDefinitions>

                        <!-- Area -->
                        <Grid Grid.Column="1">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock Text="{Binding ConverterParameter='동', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboArea" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>

                        <!-- Line -->
                        <Grid Grid.Column="3">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock Text="{Binding ConverterParameter='라인', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboEquipmentSegment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" />
                        </Grid>

                        <!-- Equipment -->
                        <Grid Grid.Column="5">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="4*"/>
                                <ColumnDefinition Width="6*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right">
                                <TextBlock Style="{StaticResource SearchCondition_MandatoryMarkStyle}" />
                                <TextBlock Text="{Binding ConverterParameter='설비', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </StackPanel>
                            <c1:C1ComboBox Grid.Column="1" x:Name="cboEquipment" Style="{StaticResource C1ComboBoxStyle}" AutoComplete="False" SelectedValueChanged="cboEquipment_SelectedValueChanged"/>
                        </Grid>

                        <!-- Search Button -->
                        <Button Grid.Column="7" x:Name="btnSearch" Content="{Binding ConverterParameter=SEARCH, Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{StaticResource SearchButtonStyle}" Cursor="Hand" Click="btnSearch_Click" />
                    </Grid>
                </Grid>

                <!-- 작업 대상 -->
                <Grid Grid.Row="2">
                    <!-- 경계선 -->
                    <Border Grid.Column="2" Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />

                    <Grid Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="34"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <!-- 경계선 -->
                        <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>

                        <!-- Table Title -->
                        <Grid Grid.Row="0" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="15"/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='작업대상', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                        </Grid>

                        <!-- Table Grid -->
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="8" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="8" />
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="8"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="8"/>
                            </Grid.ColumnDefinitions>

                            <!-- datagrid-->
                            <Grid Grid.Row="1" Grid.Column="1" >
                                <c1:C1DataGrid x:Name="dgProductLot" 
                                               Grid.Row="2" 
                                               Grid.Column="1"                                                
                                               HeadersVisibility="None"  
                                               FrozenTopRowsCount="2" 
                                               SelectionMode="SingleRow"
                                               LoadedCellPresenter="dgProductLot_LoadedCellPresenter" >
                                    <c1:C1DataGrid.Columns>
                                        <c1:DataGridTemplateColumn EditOnSelection="True" Width="Auto" HorizontalAlignment="Center" Name="CHK">
                                            <c1:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <RadioButton GroupName="dgWaitWipChoiceGroup" IsChecked="{Binding CHK, Mode=TwoWay}" HorizontalAlignment="Center" Checked="rbProductLotChoice_Checked" />
                                                </DataTemplate>
                                            </c1:DataGridTemplateColumn.CellTemplate>
                                        </c1:DataGridTemplateColumn>
                                        <c1:DataGridTextColumn    Header = "[LOTID, LOTID]"               Binding = "{Binding LOTID}"                       HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn    Header = "[WIPSEQ, WIPSEQ]"             Binding = "{Binding WIPSEQ}"                      HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn    Header = "[작업방식, 작업방식]"         Binding = "{Binding RWK_TYPE_CODE}"               HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                        <c1:DataGridTextColumn    Header = "[작업방식, 작업방식]"         Binding = "{Binding RWK_TYPE_NAME}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn    Header = "[프로젝트, 프로젝트]"         Binding = "{Binding PRJT_NAME}"                   HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn    Header = "[제품ID, 제품ID]"             Binding = "{Binding PRODID}"                      HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn    Header = "[상태, 상태]"                 Binding = "{Binding WIPSTAT}"                     HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                        <c1:DataGridTextColumn    Header = "[상태, 상태]"                 Binding = "{Binding WIPSNAME}"                    HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn    Header = "[시장유형, 시장유형]"         Binding = "{Binding MKT_TYPE_NAME}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridNumericColumn Header = "[생산량, 공급]"               Binding = "{Binding EQPT_INPUT_QTY}"              HorizontalAlignment="Right"  IsReadOnly="True" Format="#,##0"  EditOnSelection="True" Minimum="0" ShowButtons="False"/>
                                        <c1:DataGridNumericColumn Header = "[생산량, 양품]"               Binding = "{Binding WIPQTY}"                      HorizontalAlignment="Right"  IsReadOnly="True"  Format="#,##0"  />
                                        <c1:DataGridNumericColumn Header = "[생산량, 불량/LOSS/물품청구]" Binding = "{Binding DFCTQTY}"                     HorizontalAlignment="Right"  IsReadOnly="True"  Format="#,##0"  />
                                        <c1:DataGridTextColumn    Header = "[작업시작일시, 작업시작일시]" Binding = "{Binding WIPDTTM_ST}"                  HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn    Header = "[작업완료일시, 작업완료일시]" Binding = "{Binding EQPT_END_DTTM}"               HorizontalAlignment="Center" IsReadOnly="True" />
                                        <c1:DataGridTextColumn    Header = "[작업타입, 작업타입]"         Binding = "{Binding IRREGL_PROD_LOT_TYPE_CODE}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                    </c1:C1DataGrid.Columns>

                                    <!-- 맨 위 칼럼을 두 줄로 만들어 준다. Column의 Header에 [A,B]의 형태로 작성 / [A,A]로 작성시 Cell이 하나로 자동 통합 -->
                                    <c1:C1DataGrid.TopRows>
                                        <c1:DataGridColumnHeaderRow />
                                        <c1:DataGridColumnHeaderRow />
                                    </c1:C1DataGrid.TopRows>

                                </c1:C1DataGrid>
                            </Grid>
                        </Grid>
                    </Grid>
                </Grid>

                <!-- Bottom Contents -->
                <Grid Grid.Row="4">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="8" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    
                    <GridSplitter Grid.Column="1" ResizeDirection="Columns" ShowsPreview="True" Style="{StaticResource GridSplitterStyle}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" />

                    <!-- 투입화면 -->
                    <Grid Grid.Column="0">
                        <!-- 경계선 -->
                        <Border Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 경계선 -->
                            <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>

                            <!-- Title -->
                            <Grid Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='공급', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </Grid>
                        </Grid>
                    </Grid>

                    <!-- 배출화면 -->
                    <Grid Grid.Column="2">
                        <!-- 경계선 -->
                        <Border Background="#e8ebed" BorderThickness="1" BorderBrush="#8a8a8a" />
                        
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="34"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- 경계선 -->
                            <Border Grid.Row="0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                            
                            <!-- Title -->
                            <Grid Grid.Row="0" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="15"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                
                                <TextBlock Grid.Row="0"  Grid.Column="1" Text="{Binding ConverterParameter='배출', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource Content_Search_LabelStyle}" />
                            </Grid>

                            <!-- Tab -->
                            <Grid Grid.Row="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="8" />
                                    <RowDefinition Height="*" />
                                    <RowDefinition Height="8" />
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="8"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="8"/>
                                </Grid.ColumnDefinitions>

                                <c1:C1TabControl Grid.Row="1" Grid.Column="1">
                                    <c1:C1TabItem x:Name="tbOutProduct" Header="{Binding Converter={StaticResource GlobalObjectDicConverter}, ConverterParameter='생산반제품'}">
                                        <Grid Grid.Row="1">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="8" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="8"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="8"/>
                                            </Grid.ColumnDefinitions>

                                            <Grid Grid.Row="1" Grid.Column="1">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="3" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <Grid x:Name="grdOutTranBtnParent" Grid.Row="0" HorizontalAlignment="Right">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="5"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid x:Name="grdOutTranBtn" Grid.Row="0">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="*"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="4"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="4"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="4"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="4"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="4"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition Width="4"/>
                                                        <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="4"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>

                                                    <TextBlock  x:Name="tbCarrier"    Grid.Row="0" Grid.Column="7"  Text="{Binding ConverterParameter='Carrier ID', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}"   />
                                                    <TextBox    x:Name="txtCarrierID" Grid.Row="0" Grid.Column="9"  Style="{StaticResource Content_InputForm_TextBoxStyle}" CharacterCasing="Upper" MinWidth="100" MaxWidth="120"  KeyUp="txtCarrierID_KeyUp" Visibility="Visible" GotFocus="txtCarrierID_GotFocus" />

                                                    <TextBlock Grid.Row="0" Grid.Column="2" Text="{Binding ConverterParameter='수량', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Right" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                    <TextBox   Grid.Row="0" Grid.Column="3" Style="{StaticResource Content_InputForm_TextBoxStyle}" x:Name="txtOutBoxQty"  KeyUp="txtOutBoxQty_KeyUp" MinWidth="40" MaxWidth="60" />
                                                        <CheckBox  Grid.Row="0" Grid.Column="5" x:Name="chkAutoPrint" Content="{Binding ConverterParameter='자동발행',       Converter={StaticResource GlobalObjectDicConverter}}" Style="{StaticResource SearchCondition_CheckBoxStyle}" IsChecked="True" />
                                                        <Border     Grid.Row="0" Grid.Column="11" Style="{StaticResource Content_Separator_BorderStyle}" Height="Auto" Margin="3" Width="Auto" />
                                                    <Button     Grid.Row="0" Grid.Column="13" x:Name="btnCreateOutLot"       Content="{Binding ConverterParameter='생성',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnCreateOutLot_Click" />
                                                    <Button     Grid.Row="0" Grid.Column="15" x:Name="btnDeleteOutLot"       Content="{Binding ConverterParameter='삭제',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnDeleteOutLot_Click" />
                                                    <Button     Grid.Row="0" Grid.Column="17" x:Name="btnSaveOutLot"         Content="{Binding ConverterParameter='저장',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthStyle}" Click="btnSaveOutLot_Click"  />

                                                </Grid>
                                                    <Grid x:Name="grdOutTranPrint" Grid.Row="0" Grid.Column="2">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="5"/>
                                                            <ColumnDefinition Width="20"/>
                                                            <ColumnDefinition Width="4"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="8"/>
                                                            <ColumnDefinition Width="20"/>
                                                            <ColumnDefinition Width="4"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="4"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="5"/>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="2" />
                                                            <RowDefinition Height="1*" />
                                                            <RowDefinition Height="Auto" />
                                                            <RowDefinition Height="1*" />
                                                            <RowDefinition Height="2" />
                                                        </Grid.RowDefinitions>
                                                        <Border    Grid.Row="0" Grid.Column="0" Background="#FFFFFF" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}" Grid.ColumnSpan="11" Grid.RowSpan="5"/>
                                                        <Border    Grid.Row="2" Grid.Column="1" Background="#E6F5FB" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                                        <TextBlock Grid.Row="2" Grid.Column="3" Text="{Binding ConverterParameter='발행', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />

                                                        <Border    Grid.Row="2" Grid.Column="5" Background="#F8DAC0" BorderThickness="1" Style="{StaticResource BorderSubTitleStyle}"/>
                                                        <TextBlock Grid.Row="2" Grid.Column="7" Text="{Binding ConverterParameter='미발행', Converter={StaticResource GlobalObjectDicConverter}, RelativeSource={RelativeSource Self}}" HorizontalAlignment="Left" Style="{StaticResource SearchCondition_LabelStyle}" />
                                                        <!-- BOX 발행-->
                                                        <Button    Grid.Row="2" Grid.Column="9" x:Name="btnOutPrint"       Content="{Binding ConverterParameter='발행',   Converter={StaticResource GlobalObjectDicConverter}, Mode=OneWay}" Style="{DynamicResource Content_MainButtonNoMinWidthSpecialStyle}" Click="btnOutPrint_Click"/>
                                                    </Grid>
                                                </Grid>
                                                <c1:C1DataGrid Grid.Row="2" 
                                                               Grid.Column="0" 
                                                               x:Name="dgOutLot" 
                                                               IsReadOnly="False" 
                                                               HeadersVisibility="Column" 
                                                               SelectionMode="SingleCell" 
                                                               FrozenBottomRowsCount="1" 
                                                               LoadedCellPresenter="dgOutLot_LoadedCellPresenter" 
                                                               UnloadedCellPresenter="dgOutLot_UnloadedCellPresenter" >
                                                    <c1:C1DataGrid.Columns>
                                                        <c1:DataGridCheckBoxColumn Width="Auto" Name = "CHK"        Binding = "{Binding CHK, Mode=TwoWay}"          HorizontalAlignment="Center" CanUserFilter="False" CanUserSort="False" CanUserResize="False" />
                                                        <c1:DataGridTextColumn        Header = "NO."                Binding = "{Binding ROWNUM}"   HorizontalAlignment="Center" IsReadOnly="True" Width="40" CanUserFilter="False"/>
                                                        <c1:DataGridTextColumn        Header = "완성LOT"            Binding = "{Binding LOTID}"    HorizontalAlignment="Center" IsReadOnly="True" />
                                                        <c1:DataGridTextColumn        Header = "WIPSEQ"             Binding = "{Binding WIPSEQ}"   HorizontalAlignment="Center" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn        Header = "제품ID"             Binding = "{Binding PRODID}"   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                        <c1:DataGridNumericColumn     Header = "수량"               Binding = "{Binding WIPQTY}"   HorizontalAlignment="Right" Format="#,##0" EditOnSelection="True" Minimum="0" ShowButtons="False" Width="Auto">
                                                            <c1:DataGridAggregate.AggregateFunctions>
                                                                <c1:DataGridAggregatesCollection>
                                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                                </c1:DataGridAggregatesCollection>
                                                            </c1:DataGridAggregate.AggregateFunctions>
                                                        </c1:DataGridNumericColumn>
                                                        <c1:DataGridNumericColumn     Header = "재작업수량"         Binding = "{Binding BONUS_QTY}"   HorizontalAlignment="Right" Format="#,##0" EditOnSelection="True" Minimum="0" ShowButtons="False" Width="Auto" Visibility="Collapsed">
                                                            <c1:DataGridAggregate.AggregateFunctions>
                                                                <c1:DataGridAggregatesCollection>
                                                                    <c1:DataGridAggregateSum ResultTemplate="{StaticResource ResultTemplate}" ></c1:DataGridAggregateSum>
                                                                </c1:DataGridAggregatesCollection>
                                                            </c1:DataGridAggregate.AggregateFunctions>
                                                        </c1:DataGridNumericColumn>
                                                        <c1:DataGridTextColumn        Header = "단위"               Binding = "{Binding UNIT_CODE}"               HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                        <c1:DataGridTextColumn        Header = "발행"               Binding = "{Binding PRINT_YN}"                HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "발행"               Binding = "{Binding PRINT_YN_NAME}"           HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "작업타입"           Binding = "{Binding WIP_WRK_TYPE_CODE}"       HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed" />
                                                        <c1:DataGridTextColumn        Header = "작업타입"           Binding = "{Binding WIP_WRK_TYPE_CODE_DESC}"  HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "생성시간"           Binding = "{Binding LOTDTTM_CR}"              HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                        <c1:DataGridTextColumn        Header = "Carrier ID"         Binding = "{Binding CSTID}"                   HorizontalAlignment="Center" IsReadOnly="True" Visibility="Collapsed"/>
                                                        <c1:DataGridTextColumn        Header = "DISPATCH"           Binding = "{Binding DISPATCH_YN}"             HorizontalAlignment="Center" IsReadOnly="True" Width="Auto"/>
                                                        <c1:DataGridTextColumn        Header = "상태"               Binding = "{Binding WIPSNAME}"                HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" />
                                                        <c1:DataGridTextColumn        Header = "생성자"             Binding = "{Binding INSUSERNAME}"             HorizontalAlignment="Center" IsReadOnly="True" Width="Auto" Visibility="Collapsed"/>
                                                    </c1:C1DataGrid.Columns>

                                                    <c1:C1DataGrid.BottomRows>
