<Window x:Class="LGC.GMES.MES.Updater.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GMES SFU Updater" 
        WindowStartupLocation="CenterScreen" 
        WindowStyle="None" 
        ResizeMode="NoResize" 
        AllowsTransparency="True" 
        SizeToContent="WidthAndHeight">
    
    <Grid Width="450" Height="270">
        <Grid.RowDefinitions>
            <RowDefinition Height="105" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Image     Grid.Row="0" Grid.RowSpan="4"  Source="Images/LGC/component_splash_gmes.png" Stretch="Fill" />

        <TextBlock Grid.Row="1" x:Name="tbProgressStatus" FontFamily="/LGC.GMES.MES.ControlsLibrary;Component/#LG Smart_H Regular" Text="Checking file for Updating..." FontSize="18" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Center"/>

    </Grid>
</Window>
